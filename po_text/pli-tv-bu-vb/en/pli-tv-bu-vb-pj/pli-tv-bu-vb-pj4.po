msgid "(25–‍28)"
msgstr ""

#. </p><hr><p><a class="sc" id="202"></a><a class="pts-cs" id="bu-pj.4.8.12"></a><a class="ms-pa" id="ms.735"></a> 
msgctxt "pli-tv-bu-vb-pj4:pts-cs8.12.1"
msgid ""
"Tena kho pana samayena aññataro bhikkhu aññatarassa bhikkhuno "
"uttari­manus­sa­dhammaṃ ullapati."
msgstr "At one time a monk claimed a superhuman quality to another monk:"

msgctxt "pli-tv-bu-vb-pj4:pts-cs8.12.2"
msgid "Sopi evamāha—“mayhampi, āvuso, āsavā pahīnā”ti."
msgstr "“I’ve abandoned the corruptions.”"

msgctxt "pli-tv-bu-vb-pj4:pts-cs8.12.3"
msgid "Tassa kukkuccaṃ ahosi … pe …"
msgstr "He became remorseful …"

msgctxt "pli-tv-bu-vb-pj4:pts-cs8.12.4"
msgid "“āpattiṃ tvaṃ, bhikkhu, āpanno pārājikan”ti."
msgstr "“You’ve committed an offense entailing expulsion.”"

