msgid "“osārehi ayyā”ti vuccamāno,"
msgstr "if he questions them;"

msgctxt "pli-tv-bu-vb-pc21:pts-cs3.3.4"
msgid "osāreti,"
msgstr "if he recites when asked to do so;"

#. <a class="pts-vp-en" id="BD.2.272"></a> 
msgctxt "pli-tv-bu-vb-pc21:pts-cs3.3.5"
msgid "pañhaṃ pucchati,"
msgstr "if he asks a question;"

msgctxt "pli-tv-bu-vb-pc21:pts-cs3.3.6"
msgid "pañhaṃ puṭṭho katheti,"
msgstr "if he replies when asked a question;"

msgctxt "pli-tv-bu-vb-pc21:pts-cs3.3.7"
msgid "aññassatthāya bhaṇantaṃ bhikkhuniyo suṇanti,"
msgstr ""
"if he is speaking for the benefit of someone else and the nuns listen in;"

msgctxt "pli-tv-bu-vb-pc21:pts-cs3.3.8"
msgid "sikkhamānāya,"
msgstr "if it is to a trainee nun;"

msgctxt "pli-tv-bu-vb-pc21:pts-cs3.3.9"
msgid "sāmaṇeriyā,"
msgstr "if it is to a novice nun;"

msgctxt "pli-tv-bu-vb-pc21:pts-cs3.3.10"
msgid "ummattakassa,"
msgstr "if he is insane;"

msgctxt "pli-tv-bu-vb-pc21:pts-cs3.3.11"
msgid "ādikammikassāti."
msgstr "if he is the first offender."

