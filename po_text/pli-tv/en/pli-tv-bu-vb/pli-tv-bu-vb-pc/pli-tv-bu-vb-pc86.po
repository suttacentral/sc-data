#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc86:1.1.0"
msgid "86. Sūcigharasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.167
msgctxt "pli-tv-bu-vb-pc86:1.1.1"
msgid "Tena samayena buddho bhagavā sakkesu viharati kapilavatthusmiṃ nigrodhārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.2"
msgid "Tena kho pana samayena aññatarena dantakārena bhikkhū pavāritā honti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.3"
msgid "“yesaṃ ayyānaṃ sūcigharena attho ahaṃ sūcigharenā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.4"
msgid "Tena kho pana samayena bhikkhū bahū sūcighare viññāpenti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.5"
msgid "Yesaṃ khuddakā sūcigharā te mahante sūcighare viññāpenti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.6"
msgid "Yesaṃ mahantā sūcigharā te khuddake sūcighare viññāpenti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.7"
msgid "Atha kho so dantakāro bhikkhūnaṃ bahū sūcighare karonto na sakkoti aññaṃ vikkāyikaṃ bhaṇḍaṃ kātuṃ, attanāpi na yāpeti, puttadāropissa kilamati."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.8"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.9"
msgid "“kathañhi nāma samaṇā sakyaputtiyā na mattaṃ jānitvā bahū sūcighare viññāpessanti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.10"
msgid "Ayaṃ imesaṃ bahū sūcighare karonto na sakkoti aññaṃ vikkāyikaṃ bhaṇḍaṃ kātuṃ, attanāpi na yāpeti, puttadāropissa kilamatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc86:1.1.11"
msgid "Assosuṃ kho bhikkhū tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.12"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.13"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.14"
msgid "“kathañhi nāma bhikkhū na mattaṃ jānitvā bahū sūcighare viññāpessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.15"
msgid "“saccaṃ kira, bhikkhave, bhikkhū na mattaṃ jānitvā bahū sūcighare viññāpentī”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.16"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.17"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.18"
msgid "kathañhi nāma te, bhikkhave, moghapurisā na mattaṃ jānitvā bahū sūcighare viññāpessanti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.19"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:1.1.20"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: visāṇamayaṃ → visānamayaṃ (bj)
msgctxt "pli-tv-bu-vb-pc86:1.1.21"
msgid "“Yo pana bhikkhu aṭṭhimayaṃ vā dantamayaṃ vā visāṇamayaṃ vā sūcigharaṃ kārāpeyya bhedanakaṃ, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc86:2.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc86:2.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc86:2.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc86:2.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc86:2.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc86:2.1.6"
msgid "Aṭṭhi nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc86:2.1.7"
msgid "yaṃ kiñci aṭṭhi."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc86:2.1.8"
msgid "Danto nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc86:2.1.9"
msgid "hatthidanto vuccati."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc86:2.1.10"
msgid "Visāṇaṃ nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc86:2.1.11"
msgid "yaṃ kiñci visāṇaṃ."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc86:2.1.12"
msgid "Kārāpeyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc86:2.1.13"
msgid "karoti vā kārāpeti vā, payoge dukkaṭaṃ."
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc86:2.1.14"
msgid "Paṭilābhena bhinditvā pācittiyaṃ desetabbaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc9, pts-vp-pli4.168
#. VAR: pariyosāpeti → pariyosāvāpeti (mr)
msgctxt "pli-tv-bu-vb-pc86:2.1.15"
msgid "Attanā vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:2.1.16"
msgid "Attanā vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:2.1.17"
msgid "Parehi vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:2.1.18"
msgid "Parehi vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc86:2.1.19"
msgid "Aññassatthāya karoti vā kārāpeti vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc86:2.1.20"
msgid "Aññena kataṃ paṭilabhitvā paribhuñjati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bu-vb-pc86:2.2.1"
msgid "Anāpatti—"
msgstr ""

#. VAR: vidhe → vīṭhe (bj) | vīthe (s1-3) 
#. VAR: gaṇṭhikāya → gaṇḍikāya (s1-3)
msgctxt "pli-tv-bu-vb-pc86:2.2.2"
msgid "gaṇṭhikāya, araṇike, vidhe, añjaniyā, añjanisalākāya, vāsijaṭe, udakapuñchaniyā, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc12
msgctxt "pli-tv-bu-vb-pc86:2.2.3"
msgid "Sūcigharasikkhāpadaṃ niṭṭhitaṃ catutthaṃ."
msgstr ""
