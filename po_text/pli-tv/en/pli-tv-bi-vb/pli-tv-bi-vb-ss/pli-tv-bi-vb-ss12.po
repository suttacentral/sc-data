#. HTML: <section class="sutta" id="pli-tv-bi-vb-ss12"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-ss12:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss12:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss12:3.1"
msgid "Saṃghādisesakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-ss12:4.1"
msgid "12. Pāpasamācārasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-ss12:5.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:5.2"
msgid "Tena kho pana samayena thullanandāya bhikkhuniyā antevāsikā bhikkhuniyo saṃsaṭṭhā viharanti pāpācārā pāpasaddā pāpasilokā, bhikkhunisaṃghassa vihesikā, aññamaññissā vajjappaṭicchādikā."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-ss12:6.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:6.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:6.3"
msgid "“kathañhi nāma bhikkhuniyo saṃsaṭṭhā viharissanti pāpācārā pāpasaddā pāpasilokā bhikkhunisaṃghassa vihesikā aññamaññissā vajjappaṭicchādikā”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:6.4"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo saṃsaṭṭhā viharanti pāpācārā pāpasaddā pāpasilokā bhikkhunisaṃghassa vihesikā aññamaññissā vajjappaṭicchādikā”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:6.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:6.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:6.7"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo saṃsaṭṭhā viharissanti pāpācārā pāpasaddā pāpasilokā, bhikkhunisaṃghassa vihesikā, aññamaññissā vajjappaṭicchādikā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:6.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:6.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: vajjappaṭicchādikā → vajjapaṭicchādikā (bj, s1-3, pts1)
#. VAR: bhikkhunisaṃghassa → bhikkhunīsaṇghassa (bj, s1-3, pts1)
msgctxt "pli-tv-bi-vb-ss12:7.1"
msgid "“Bhikkhuniyo paneva saṃsaṭṭhā viharanti pāpācārā pāpasaddā pāpasilokā, bhikkhunisaṃghassa vihesikā, aññamaññissā vajjappaṭicchādikā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:7.2"
msgid "Tā bhikkhuniyo bhikkhunīhi evamassu vacanīyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:7.3"
msgid "‘bhaginiyo kho saṃsaṭṭhā viharanti pāpācārā pāpasaddā pāpasilokā, bhikkhunisaṃghassa vihesikā aññamaññissā vajjappaṭicchādikā."
msgstr ""

#. VAR: Viviccathāyye → viviccaṭhayye (bj) | viviccathayye (s1-3, pts1)
msgctxt "pli-tv-bi-vb-ss12:7.4"
msgid "Viviccathāyye. Vivekaññeva bhaginīnaṃ saṃgho vaṇṇetī’ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:7.5"
msgid "Evañca tā bhikkhuniyo bhikkhunīhi vuccamānā tatheva paggaṇheyyuṃ, tā bhikkhuniyo bhikkhunīhi yāvatatiyaṃ samanubhāsitabbā tassa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:7.6"
msgid "Yāvatatiyañce samanubhāsīyamānā taṃ paṭinissajjeyyuṃ, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:7.7"
msgid "no ce paṭinissajjeyyuṃ, imāpi bhikkhuniyo yāvatatiyakaṃ dhammaṃ āpannā nissāraṇīyaṃ saṃghādisesan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-ss12:8.1"
msgid "Bhikkhuniyo panevāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:8.2"
msgid "upasampannāyo vuccanti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-ss12:9.1"
msgid "Saṃsaṭṭhā viharantīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:9.2"
msgid "saṃsaṭṭhā nāma ananulomikena kāyikavācasikena saṃsaṭṭhā viharanti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-ss12:10.1"
msgid "Pāpācārāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:10.2"
msgid "pāpakena ācārena samannāgatā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-ss12:11.1"
msgid "Pāpasaddāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:11.2"
msgid "pāpakena kittisaddena abbhuggatā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-ss12:12.1"
msgid "Pāpasilokāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:12.2"
msgid "pāpakena micchājīvena jīvitaṃ kappenti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9, pts-vp-pli4.240
msgctxt "pli-tv-bi-vb-ss12:13.1"
msgid "Bhikkhunisaṃghassa vihesikāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:13.2"
msgid "aññamaññissā kamme karīyamāne paṭikkosanti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-ss12:14.1"
msgid "Aññamaññissā vajjappaṭicchādikāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:14.2"
msgid "aññamaññaṃ vajjaṃ paṭicchādenti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-ss12:15.1"
msgid "Tā bhikkhuniyoti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:15.2"
msgid "yā tā saṃsaṭṭhā bhikkhuniyo."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc12
msgctxt "pli-tv-bi-vb-ss12:16.1"
msgid "Bhikkhunīhīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:16.2"
msgid "aññāhi bhikkhunīhi."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-ss12:17.1"
msgid "Yā passanti yā suṇanti tāhi vattabbā—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.2"
msgid "“bhaginiyo kho saṃsaṭṭhā viharanti pāpācārā pāpasaddā pāpasilokā, bhikkhunisaṃghassa vihesikā, aññamaññissā vajjappaṭicchādikā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.3"
msgid "Viviccathāyye."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.4"
msgid "Vivekaññeva bhaginīnaṃ saṃgho vaṇṇetī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.5"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.6"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.7"
msgid "Sace paṭinissajjanti, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.8"
msgid "no ce paṭinissajjanti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.9"
msgid "Sutvā na vadanti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.10"
msgid "Tā bhikkhuniyo saṃghamajjhampi ākaḍḍhitvā vattabbā—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.11"
msgid "“bhaginiyo kho saṃsaṭṭhā viharanti pāpācārā pāpasaddā pāpasilokā, bhikkhunisaṃghassa vihesikā, aññamaññissā vajjappaṭicchādikā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.12"
msgid "Viviccathāyye."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.13"
msgid "Vivekaññeva bhaginīnaṃ saṃgho vaṇṇetī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.14"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.15"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.16"
msgid "Sace paṭinissajjanti, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.17"
msgid "no ce paṭinissajjanti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.18"
msgid "Tā bhikkhuniyo samanubhāsitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.19"
msgid "Evañca pana, bhikkhave, samanubhāsitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:17.20"
msgid "Byattāya bhikkhuniyā paṭibalāya saṃgho ñāpetabbo—"
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-bi-vb-ss12:18.1"
msgid "“Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:18.2"
msgid "Itthannāmā ca itthannāmā ca bhikkhuniyo saṃsaṭṭhā viharanti pāpācārā pāpasaddā pāpasilokā, bhikkhunisaṃghassa vihesikā, aññamaññissā vajjappaṭicchādikā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:18.3"
msgid "Tā taṃ vatthuṃ na paṭinissajjanti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:18.4"
msgid "Yadi saṃghassa pattakallaṃ, saṃgho itthannāmañca itthannāmañca bhikkhuniyo samanubhāseyya tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:18.5"
msgid "Esā ñatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-bi-vb-ss12:19.1"
msgid "Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:19.2"
msgid "Itthannāmā ca itthannāmā ca bhikkhuniyo saṃsaṭṭhā viharanti pāpācārā pāpasaddā pāpasilokā, bhikkhunisaṃghassa vihesikā, aññamaññissā vajjappaṭicchādikā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:19.3"
msgid "Tā taṃ vatthuṃ na paṭinissajjanti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:19.4"
msgid "Saṃgho itthannāmañca itthannāmañca bhikkhuniyo samanubhāsati tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:19.5"
msgid "Yassā ayyāya khamati itthannāmāya ca itthannāmāya ca bhikkhunīnaṃ samanubhāsanā tassa vatthussa paṭinissaggāya, sā tuṇhassa;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:19.6"
msgid "yassā nakkhamati, sā bhāseyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc16
msgctxt "pli-tv-bi-vb-ss12:20.1"
msgid "Dutiyampi etamatthaṃ vadāmi … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:20.2"
msgid "tatiyampi etamatthaṃ vadāmi …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:20.3"
msgid "pe …."
msgstr ""

#. HTML: </p><p>
#. REF: sc17
msgctxt "pli-tv-bi-vb-ss12:21.1"
msgid "Samanubhaṭṭhā saṃghena, itthannāmā ca itthannāmā ca bhikkhuniyo tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:21.2"
msgid "Khamati saṃghassa, tasmā tuṇhī, evametaṃ dhārayāmī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc18
msgctxt "pli-tv-bi-vb-ss12:22.1"
msgid "Ñattiyā dukkaṭaṃ, dvīhi kammavācāhi thullaccayā, kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:22.2"
msgid "Saṃghādisesaṃ ajjhāpajjantīnaṃ ñattiyā dukkaṭaṃ dvīhi kammavācāhi thullaccayā paṭippassambhanti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:22.3"
msgid "Dve tisso ekato samanubhāsitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:22.4"
msgid "Tatuttari na samanubhāsitabbā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc19
msgctxt "pli-tv-bi-vb-ss12:23.1"
msgid "Imāpi bhikkhuniyoti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:23.2"
msgid "purimāyo upādāya vuccanti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc20
msgctxt "pli-tv-bi-vb-ss12:24.1"
msgid "Yāvatatiyakanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:24.2"
msgid "yāvatatiyaṃ samanubhāsanāya āpajjanti, na saha vatthujjhācārā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc21
msgctxt "pli-tv-bi-vb-ss12:25.1"
msgid "Nissāraṇīyanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:25.2"
msgid "saṃghamhā nissārīyati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc22
msgctxt "pli-tv-bi-vb-ss12:26.1"
msgid "Saṃghādisesoti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss12:26.2"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:26.3"
msgid "tenapi vuccati saṃghādisesoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc23
msgctxt "pli-tv-bi-vb-ss12:27.1"
msgid "Dhammakamme dhammakammasaññā na paṭinissajjanti, āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:27.2"
msgid "Dhammakamme vematikā na paṭinissajjanti, āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:27.3"
msgid "Dhammakamme adhammakammasaññā na paṭinissajjanti, āpatti saṃghādisesassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc24
msgctxt "pli-tv-bi-vb-ss12:28.1"
msgid "Adhammakamme dhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:28.2"
msgid "Adhammakamme vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:28.3"
msgid "Adhammakamme adhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc25
msgctxt "pli-tv-bi-vb-ss12:29.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss12:29.2"
msgid "asamanubhāsantīnaṃ, paṭinissajjantīnaṃ, ummattikānaṃ, ādikammikānanti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc26
msgctxt "pli-tv-bi-vb-ss12:30.1"
msgid "Navamasaṃghādisesasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
