#. HTML: <section class="sutta" id="pli-tv-bi-vb-ss4"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-ss4:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss4:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss4:3.1"
msgid "Saṃghādisesakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-ss4:4.1"
msgid "4. Ukkhittakaosāraṇasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.231
msgctxt "pli-tv-bi-vb-ss4:5.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.2"
msgid "Tena kho pana samayena caṇḍakāḷī bhikkhunī bhaṇḍanakārikā hoti kalahakārikā vivādakārikā bhassakārikā saṃghe adhikaraṇakārikā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.3"
msgid "Thullanandā bhikkhunī tassā kamme karīyamāne paṭikkosati."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.4"
msgid "Tena kho pana samayena thullanandā bhikkhunī gāmakaṃ agamāsi kenacideva karaṇīyena."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.5"
msgid "Atha kho bhikkhunisaṃgho—"
msgstr ""

#. VAR: adassane → adassanena (pts1, mr)
msgctxt "pli-tv-bi-vb-ss4:5.6"
msgid "“thullanandā bhikkhunī pakkantā”ti, caṇḍakāḷiṃ bhikkhuniṃ āpattiyā adassane ukkhipi."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.7"
msgid "Thullanandā bhikkhunī gāmake taṃ karaṇīyaṃ tīretvā punadeva sāvatthiṃ paccāgacchi."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.8"
msgid "Caṇḍakāḷī bhikkhunī thullanandāya bhikkhuniyā āgacchantiyā neva āsanaṃ paññapesi na pādodakaṃ pādapīṭhaṃ pādakaṭhalikaṃ upanikkhipi na paccuggantvā pattacīvaraṃ paṭiggahesi na pānīyena āpucchi."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.9"
msgid "Thullanandā bhikkhunī caṇḍakāḷiṃ bhikkhuniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.10"
msgid "“kissa tvaṃ, ayye, mayi āgacchantiyā neva āsanaṃ paññapesi na pādodakaṃ pādapīṭhaṃ pādakaṭhalikaṃ upanikkhipi na paccuggantvā pattacīvaraṃ paṭiggahesi na pānīyena āpucchī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.11"
msgid "“Evañhetaṃ, ayye, hoti yathā taṃ anāthāyā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.12"
msgid "“Kissa pana tvaṃ, ayye, anāthā”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.13"
msgid "“Imā maṃ, ayye, bhikkhuniyo—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:5.14"
msgid "‘ayaṃ anāthā appaññātā, natthi imissā kāci paṭivattā’ti, āpattiyā adassane ukkhipiṃsū”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-ss4:6.1"
msgid "Thullanandā bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:6.2"
msgid "“bālā etā abyattā etā, neva jānanti kammaṃ vā kammadosaṃ vā kammavipattiṃ vā kammasampattiṃ vā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:6.3"
msgid "Mayaṃ kho jānāma kammampi kammadosampi kammavipattimpi kammasampattimpi."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:6.4"
msgid "Mayaṃ kho akataṃ vā kammaṃ kāreyyāma kataṃ vā kammaṃ kopeyyāmā”ti, lahuṃ lahuṃ bhikkhunisaṃghaṃ sannipātetvā caṇḍakāḷiṃ bhikkhuniṃ osāresi."
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-bi-vb-ss4:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:7.3"
msgid "“kathañhi nāma ayyā thullanandā samaggena saṃghena ukkhittaṃ bhikkhuniṃ dhammena vinayena satthusāsanena anapaloketvā kārakasaṃghaṃ anaññāya gaṇassa chandaṃ osāressatī”ti … pe …"
msgstr ""

#. VAR: chandaṃ osāretī”ti → osāresīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-ss4:7.4"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī samaggena saṃghena ukkhittaṃ bhikkhuniṃ dhammena vinayena satthusāsanena anapaloketvā kārakasaṃghaṃ anaññāya gaṇassa chandaṃ osāretī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:7.7"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī samaggena saṃghena ukkhittaṃ bhikkhuniṃ dhammena vinayena satthusāsanena anapaloketvā kārakasaṃghaṃ anaññāya gaṇassa chandaṃ osāressati."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc4
msgctxt "pli-tv-bi-vb-ss4:8.1"
msgid "“Yā pana bhikkhunī samaggena saṃghena ukkhittaṃ bhikkhuniṃ dhammena vinayena satthusāsanena anapaloketvā kārakasaṃghaṃ anaññāya gaṇassa chandaṃ osāreyya, ayampi bhikkhunī paṭhamāpattikaṃ dhammaṃ āpannā nissāraṇīyaṃ saṃghādisesan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-ss4:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-ss4:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-ss4:10.1"
msgid "Samaggo nāma"
msgstr ""

#. HTML: </b><b>
msgctxt "pli-tv-bi-vb-ss4:10.2"
msgid "saṃgho samānasaṃvāsako samānasīmāyaṃ ṭhito."
msgstr ""

#. HTML: </b><b>
msgctxt "pli-tv-bi-vb-ss4:10.3"
msgid "Samaggo nāma"
msgstr ""

#. HTML: </b><b>
msgctxt "pli-tv-bi-vb-ss4:10.4"
msgid "saṃgho samānasaṃvāsako samānasīmāyaṃ ṭhito."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc7, pts-vp-pli4.232
#. VAR: adassane vā appaṭikamme vā appaṭinissagge vā → adassanena vā appaṭikammena vā appaṭinissaggena vā (pts1, mr) | adassane vā appaṭikamme vā pāpikāya diṭṭhiyā appaṭinissagge vā (?)+. HTML: <b>
msgctxt "pli-tv-bi-vb-ss4:11.1"
msgid "Ukkhittā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:11.2"
msgid "āpattiyā adassane vā appaṭikamme vā appaṭinissagge vā ukkhittā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-ss4:12.1"
msgid "Dhammena vinayenāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:12.2"
msgid "yena dhammena yena vinayena."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-ss4:13.1"
msgid "Satthusāsanenāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:13.2"
msgid "jinasāsanena buddhasāsanena."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-ss4:14.1"
msgid "Anapaloketvā kārakasaṃghanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:14.2"
msgid "kammakārakasaṃghaṃ anāpucchā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-ss4:15.1"
msgid "Anaññāya gaṇassa chandanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:15.2"
msgid "gaṇassa chandaṃ ajānitvā."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-ss4:16.1"
msgid "“Osāressāmī”ti gaṇaṃ vā pariyesati, sīmaṃ vā sammannati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:16.2"
msgid "Ñattiyā dukkaṭaṃ, dvīhi kammavācāhi thullaccayā, kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc13
msgctxt "pli-tv-bi-vb-ss4:17.1"
msgid "Ayampīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:17.2"
msgid "purimāyo upādāya vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc14
msgctxt "pli-tv-bi-vb-ss4:18.1"
msgid "Paṭhamāpattikanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:18.2"
msgid "saha vatthujjhācārā āpajjati asamanubhāsanāya."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc15
msgctxt "pli-tv-bi-vb-ss4:19.1"
msgid "Nissāraṇīyanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:19.2"
msgid "saṃghamhā nissārīyati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc16
msgctxt "pli-tv-bi-vb-ss4:20.1"
msgid "Saṃghādisesoti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss4:20.2"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:20.3"
msgid "tenapi vuccati saṃghādisesoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc17
msgctxt "pli-tv-bi-vb-ss4:21.1"
msgid "Dhammakamme dhammakammasaññā osāreti, āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:21.2"
msgid "Dhammakamme vematikā osāreti āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:21.3"
msgid "Dhammakamme adhammakammasaññā osāreti, āpatti saṃghādisesassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc18
msgctxt "pli-tv-bi-vb-ss4:22.1"
msgid "Adhammakamme dhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:22.2"
msgid "Adhammakamme vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:22.3"
msgid "Adhammakamme adhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-bi-vb-ss4:23.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss4:23.2"
msgid "kammakārakasaṃghaṃ apaloketvā osāreti, gaṇassa chandaṃ jānitvā osāreti, vatte vattantiṃ osāreti, asante kammakārakasaṃghe osāreti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc20
msgctxt "pli-tv-bi-vb-ss4:24.1"
msgid "Catutthasaṃghādisesasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
