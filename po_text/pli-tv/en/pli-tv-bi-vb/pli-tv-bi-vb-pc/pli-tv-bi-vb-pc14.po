msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc14:5.1"
msgid "14. Dutiyikauyyojanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc14:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī rathikāyapi byūhepi siṅghāṭakepi purisena saddhiṃ ekenekā santiṭṭhatipi sallapatipi nikaṇṇikampi jappeti dutiyikampi bhikkhuniṃ uyyojeti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc14:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:7.3"
msgid "“kathañhi nāma ayyā thullanandā rathikāyapi byūhepi siṅghāṭakepi purisena saddhiṃ ekenekā santiṭṭhissatipi sallapissatipi nikaṇṇikampi jappissati dutiyikampi bhikkhuniṃ uyyojessatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:7.4"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī rathikāyapi byūhepi siṅghāṭakepi purisena saddhiṃ ekenekā santiṭṭhatipi sallapatipi nikaṇṇikampi jappeti dutiyikampi bhikkhuniṃ uyyojetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:7.7"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī rathikāyapi byūhepi siṅghāṭakepi purisena saddhiṃ ekenekā santiṭṭhissatipi sallapissatipi nikaṇṇikampi jappissati dutiyikampi bhikkhuniṃ uyyojessati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3, pts-vp-pli4.271
#. VAR: rathikāya → rathiyāya (bj, s1-3, pts1)
msgctxt "pli-tv-bi-vb-pc14:8.1"
msgid "“Yā pana bhikkhunī rathikāya vā byūhe vā siṅghāṭake vā purisena saddhiṃ ekenekā santiṭṭheyya vā sallapeyya vā nikaṇṇikaṃ vā jappeyya dutiyikaṃ vā bhikkhuniṃ uyyojeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc14:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc14:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc14:10.1"
msgid "Rathikā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:10.2"
msgid "racchā vuccati."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc14:10.3"
msgid "Byūhaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:10.4"
msgid "yeneva pavisanti teneva nikkhamanti."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc14:10.5"
msgid "Siṅghāṭako nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:10.6"
msgid "caccaraṃ vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc14:11.1"
msgid "Puriso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:11.2"
msgid "manussapuriso na yakkho na peto na tiracchānagato viññū paṭibalo santiṭṭhituṃ sallapituṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc14:12.1"
msgid "Saddhinti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:12.2"
msgid "ekato."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc14:12.3"
msgid "Ekenekāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:12.4"
msgid "puriso ceva hoti bhikkhunī ca."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc14:13.1"
msgid "Santiṭṭheyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:13.2"
msgid "purisassa hatthapāse tiṭṭhati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc14:14.1"
msgid "Sallapeyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:14.2"
msgid "purisassa hatthapāse ṭhitā sallapati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc14:15.1"
msgid "Nikaṇṇikaṃ vā jappeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:15.2"
msgid "purisassa upakaṇṇake āroceti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc14:16.1"
msgid "Dutiyikaṃ vā bhikkhuniṃ uyyojeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc14:16.2"
msgid "anācāraṃ ācaritukāmā dutiyikampi bhikkhuniṃ uyyojeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:16.3"
msgid "Dassanūpacāraṃ vā savanūpacāraṃ vā vijahantiyā āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:16.4"
msgid "Vijahite āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc14:17.1"
msgid "Hatthapāsaṃ vijahitvā santiṭṭhati vā sallapati vā āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:17.2"
msgid "Yakkhena vā petena vā paṇḍakena vā tiracchānagatamanussaviggahena vā saddhiṃ santiṭṭhati vā sallapati vā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc14:18.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc14:18.2"
msgid "yo koci viññū dutiyo hoti, arahopekkhā, aññavihitā santiṭṭhati vā sallapati vā, na anācāraṃ ācaritukāmā, sati karaṇīye dutiyikaṃ bhikkhuniṃ uyyojeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc14
msgctxt "pli-tv-bi-vb-pc14:19.1"
msgid "Catutthasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
