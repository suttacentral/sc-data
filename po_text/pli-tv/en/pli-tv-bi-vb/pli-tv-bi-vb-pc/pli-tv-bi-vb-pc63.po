#. HTML: <section class="sutta" id="pli-tv-bi-vb-pc63"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pc63:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc63:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc63:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc63:4.1"
msgid "Gabbhinivagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc63:5.1"
msgid "63. Sikkhamānasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc63:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:6.2"
msgid "Tena kho pana samayena bhikkhuniyo dve vassāni chasu dhammesu asikkhitasikkhaṃ sikkhamānaṃ vuṭṭhāpenti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:6.3"
msgid "Tā bālā honti abyattā na jānanti kappiyaṃ vā akappiyaṃ vā."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli4.319
msgctxt "pli-tv-bi-vb-pc63:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.3"
msgid "“kathañhi nāma bhikkhuniyo dve vassāni chasu dhammesu asikkhitasikkhaṃ sikkhamānaṃ vuṭṭhāpessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.4"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo dve vassāni chasu dhammesu asikkhitasikkhaṃ sikkhamānaṃ vuṭṭhāpentī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.7"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo dve vassāni chasu dhammesu asikkhitasikkhaṃ sikkhamānaṃ vuṭṭhāpessanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.9"
msgid "vigarahitvā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.10"
msgid "dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.11"
msgid "“anujānāmi, bhikkhave, sikkhamānāya dve vassāni chasu dhammesu sikkhāsammutiṃ dātuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.12"
msgid "Evañca pana, bhikkhave, dātabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.13"
msgid "Tāya sikkhamānāya saṃghaṃ upasaṅkamitvā ekaṃsaṃ uttarāsaṅgaṃ karitvā bhikkhunīnaṃ pāde vanditvā ukkuṭikaṃ nisīditvā añjaliṃ paggahetvā evamassa vacanīyo—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.14"
msgid "‘ahaṃ, ayye, itthannāmā itthannāmāya ayyāya sikkhamānā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.15"
msgid "Saṃghaṃ dve vassāni chasu dhammesu sikkhāsammutiṃ yācāmī’ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.16"
msgid "Dutiyampi yācitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.17"
msgid "Tatiyampi yācitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:7.18"
msgid "Byattāya bhikkhuniyā paṭibalāya saṃgho ñāpetabbo—"
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc63:8.1"
msgid "‘Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:8.2"
msgid "Ayaṃ itthannāmā itthannāmāya ayyāya sikkhamānā saṃghaṃ dve vassāni chasu dhammesu sikkhāsammutiṃ yācati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:8.3"
msgid "Yadi saṃghassa pattakallaṃ saṃgho itthannāmāya sikkhamānāya dve vassāni chasu dhammesu sikkhāsammutiṃ dadeyya."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:8.4"
msgid "Esā ñatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc63:9.1"
msgid "Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:9.2"
msgid "Ayaṃ itthannāmā itthannāmāya ayyāya sikkhamānā saṃghaṃ dve vassāni chasu dhammesu sikkhāsammutiṃ yācati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:9.3"
msgid "Saṃgho itthannāmāya sikkhamānāya dve vassāni chasu dhammesu sikkhāsammutiṃ deti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:9.4"
msgid "Yassā ayyāya khamati itthannāmāya sikkhamānāya dve vassāni chasu dhammesu sikkhāsammutiyā dānaṃ, sā tuṇhassa;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:9.5"
msgid "yassā nakkhamati, sā bhāseyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc63:10.1"
msgid "Dinnā saṃghena itthannāmāya sikkhamānāya dve vassāni chasu dhammesu sikkhāsammuti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:10.2"
msgid "Khamati saṃghassa, tasmā tuṇhī, evametaṃ dhārayāmī’”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc63:11.1"
msgid "Sā sikkhamānā “evaṃ vadehī”ti vattabbā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:11.2"
msgid "“pāṇātipātā veramaṇiṃ dve vassāni avītikkamma samādānaṃ samādiyāmi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:11.3"
msgid "Adinnādānā veramaṇiṃ dve vassāni avītikkamma samādānaṃ samādiyāmi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:11.4"
msgid "Abrahmacariyā veramaṇiṃ dve vassāni avītikkamma samādānaṃ samādiyāmi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:11.5"
msgid "Musāvādā veramaṇiṃ dve vassāni avītikkamma samādānaṃ samādiyāmi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:11.6"
msgid "Surāmerayamajjappamādaṭṭhānā veramaṇiṃ dve vassāni avītikkamma samādānaṃ samādiyāmi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:11.7"
msgid "Vikālabhojanā veramaṇiṃ dve vassāni avītikkamma samādānaṃ samādiyāmī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc63:12.1"
msgid "Atha kho bhagavā tā bhikkhuniyo anekapariyāyena vigarahitvā dubbharatāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:12.2"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc63:13.1"
msgid "“Yā pana bhikkhunī dve vassāni chasu dhammesu asikkhitasikkhaṃ sikkhamānaṃ vuṭṭhāpeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc63:14.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc63:14.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc63:14.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc63:14.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:14.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10, pts-vp-pli4.320
msgctxt "pli-tv-bi-vb-pc63:15.1"
msgid "Dve vassānīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc63:15.2"
msgid "dve saṃvaccharāni."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc63:15.3"
msgid "Asikkhitasikkhā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc63:15.4"
msgid "sikkhā vā na dinnā hoti, dinnā vā sikkhā kupitā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc63:15.5"
msgid "Vuṭṭhāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc63:15.6"
msgid "upasampādeyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc63:16.1"
msgid "“Vuṭṭhāpessāmī”ti gaṇaṃ vā ācariniṃ vā pattaṃ vā cīvaraṃ vā pariyesati, sīmaṃ vā sammannati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:16.2"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:16.3"
msgid "Dvīhi kammavācāhi dukkaṭā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:16.4"
msgid "Kammavācāpariyosāne upajjhāyāya āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:16.5"
msgid "Gaṇassa ca ācariniyā ca āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc63:17.1"
msgid "Dhammakamme dhammakammasaññā vuṭṭhāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:17.2"
msgid "Dhammakamme vematikā vuṭṭhāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:17.3"
msgid "Dhammakamme adhammakammasaññā vuṭṭhāpeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc63:18.1"
msgid "Adhammakamme dhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:18.2"
msgid "Adhammakamme vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:18.3"
msgid "Adhammakamme adhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-bi-vb-pc63:19.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc63:19.2"
msgid "dve vassāni chasu dhammesu sikkhitasikkhaṃ sikkhamānaṃ vuṭṭhāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc15
msgctxt "pli-tv-bi-vb-pc63:20.1"
msgid "Tatiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
