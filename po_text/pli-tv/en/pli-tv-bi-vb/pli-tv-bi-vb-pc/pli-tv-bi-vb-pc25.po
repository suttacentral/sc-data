#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc25:5.1"
msgid "25. Cīvarasaṅkamanīyasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc25:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:6.2"
msgid "Tena kho pana samayena aññatarā bhikkhunī piṇḍāya caritvā allacīvaraṃ pattharitvā vihāraṃ pāvisi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:6.3"
msgid "Aññatarā bhikkhunī taṃ cīvaraṃ pārupitvā gāmaṃ piṇḍāya pāvisi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:6.4"
msgid "Sā nikkhamitvā bhikkhuniyo pucchi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:6.5"
msgid "“apāyye, mayhaṃ cīvaraṃ passeyyāthā”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:6.6"
msgid "Bhikkhuniyo tassā bhikkhuniyā etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:6.7"
msgid "Atha kho sā bhikkhunī ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:6.8"
msgid "“kathañhi nāma bhikkhunī mayhaṃ cīvaraṃ anāpucchā pārupissatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc25:7.1"
msgid "Atha kho sā bhikkhunī bhikkhunīnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:7.4"
msgid "“kathañhi nāma bhikkhunī bhikkhuniyā cīvaraṃ anāpucchā pārupissatī”ti … pe …"
msgstr ""

#. VAR: pārupatī”ti → pārupīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-pc25:7.5"
msgid "“saccaṃ kira, bhikkhave, bhikkhunī bhikkhuniyā cīvaraṃ anāpucchā pārupatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:7.8"
msgid "kathañhi nāma, bhikkhave, bhikkhunī bhikkhuniyā cīvaraṃ anāpucchā pārupissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc25:8.1"
msgid "“Yā pana bhikkhunī cīvarasaṅkamanīyaṃ dhāreyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc25:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc25:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc25:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc25:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc25:10.1"
msgid "Cīvarasaṅkamanīyaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc25:10.2"
msgid "upasampannāya pañcannaṃ cīvarānaṃ aññataraṃ cīvaraṃ tassā vā adinnaṃ taṃ vā anāpucchā nivāseti vā pārupati vā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6, pts-vp-pli4.283
msgctxt "pli-tv-bi-vb-pc25:11.1"
msgid "Upasampannāya upasampannasaññā cīvarasaṅkamanīyaṃ dhāreti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:11.2"
msgid "Upasampannāya vematikā cīvarasaṅkamanīyaṃ dhāreti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:11.3"
msgid "Upasampannāya anupasampannasaññā cīvarasaṅkamanīyaṃ dhāreti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc25:12.1"
msgid "Anupasampannāya cīvarasaṅkamanīyaṃ dhāreti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:12.2"
msgid "Anupasampannāya upasampannasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:12.3"
msgid "Anupasampannāya vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:12.4"
msgid "Anupasampannāya anupasampannasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc25:13.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc25:13.2"
msgid "sā vā deti, taṃ vā āpucchā nivāseti vā pārupati vā, acchinnacīvarikāya, naṭṭhacīvarikāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc25:14.1"
msgid "Pañcamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
