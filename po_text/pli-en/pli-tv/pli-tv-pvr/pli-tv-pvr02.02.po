#. HTML: </h1></div><h2>
msgctxt "pli-tv-pvr2.2:5.1"
msgid "1. Pārājikakaṇḍa"
msgstr ""

#. HTML: </h2><p>
#. REF: sc1, pts-vp-pli5.72
msgctxt "pli-tv-pvr2.2:6.1"
msgid "Avassutā bhikkhunī avassutassa purisapuggalassa kāyasaṃsaggaṃ sādiyantī kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr2.2:6.2"
msgid "Avassutā bhikkhunī avassutassa purisapuggalassa kāyasaṃsaggaṃ sādiyantī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:6.3"
msgid "Adhakkhakaṃ ubbhajāṇumaṇḍalaṃ gahaṇaṃ sādiyati, āpatti pārājikassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:6.4"
msgid "ubbhakkhakaṃ adhojāṇumaṇḍalaṃ gahaṇaṃ sādiyati, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:6.5"
msgid "kāyapaṭibaddhaṃ gahaṇaṃ sādiyati, āpatti dukkaṭassa—"
msgstr ""

msgctxt "pli-tv-pvr2.2:6.6"
msgid "avassutā bhikkhunī avassutassa purisapuggalassa kāyasaṃsaggaṃ sādiyantī imā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:6.7"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-pvr2.2:7.1"
msgid "Vajjappaṭicchādikā bhikkhunī vajjaṃ paṭicchādentī kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr2.2:7.2"
msgid "Vajjappaṭicchādikā bhikkhunī vajjaṃ paṭicchādentī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:7.3"
msgid "Jānaṃ pārājikaṃ dhammaṃ paṭicchādeti, āpatti pārājikassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:7.4"
msgid "vematikā paṭicchādeti, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:7.5"
msgid "ācāravipattiṃ paṭicchādeti, āpatti dukkaṭassa—"
msgstr ""

msgctxt "pli-tv-pvr2.2:7.6"
msgid "vajjappaṭicchādikā bhikkhunī vajjaṃ paṭicchādentī imā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:7.7"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-pvr2.2:8.1"
msgid "Ukkhittānuvattikā bhikkhunī yāvatatiyaṃ samanubhāsanāya na paṭinissajjantī kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr2.2:8.2"
msgid "Ukkhittānuvattikā bhikkhunī yāvatatiyaṃ samanubhāsanāya na paṭinissajjantī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:8.3"
msgid "Ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:8.4"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr2.2:8.5"
msgid "kammavācāpariyosāne āpatti pārājikassa—"
msgstr ""

msgctxt "pli-tv-pvr2.2:8.6"
msgid "ukkhittānuvattikā bhikkhunī yāvatatiyaṃ samanubhāsanāya na paṭinissajjantī imā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:8.7"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc4
msgctxt "pli-tv-pvr2.2:9.1"
msgid "Aṭṭhamaṃ vatthuṃ paripūrentī kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr2.2:9.2"
msgid "Aṭṭhamaṃ vatthuṃ paripūrentī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:9.3"
msgid "Purisena—"
msgstr ""

#. VAR: itthannāmaṃ okāsaṃ → itthannāmaṃ gahanaṃ (bj) | itthannāmaṃ gabbhaṃ (s1-3) | itthannāmā (pts1)
msgctxt "pli-tv-pvr2.2:9.4"
msgid "“itthannāmaṃ okāsaṃ āgacchā”ti vuttā gacchati, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:9.5"
msgid "purisassa hatthapāsaṃ okkantamatte āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:9.6"
msgid "aṭṭhamaṃ vatthuṃ paripūreti, āpatti pārājikassa—"
msgstr ""

msgctxt "pli-tv-pvr2.2:9.7"
msgid "aṭṭhamaṃ vatthuṃ paripūrentī imā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:9.8"
msgid "(4)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc5
msgctxt "pli-tv-pvr2.2:10.1"
msgid "Pārājikā niṭṭhitā."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-pvr2.2:11.1"
msgid "2. Saṃghādisesakaṇḍa"
msgstr ""

#. HTML: </h2><p>
#. REF: sc6
msgctxt "pli-tv-pvr2.2:12.1"
msgid "Ussayavādikā bhikkhunī aḍḍaṃ karontī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:12.2"
msgid "Ekassa āroceti, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:12.3"
msgid "dutiyassa āroceti, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:12.4"
msgid "aḍḍapariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:12.5"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-pvr2.2:13.1"
msgid "Coriṃ vuṭṭhāpentī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:13.2"
msgid "Ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:13.3"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr2.2:13.4"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:13.5"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-pvr2.2:14.1"
msgid "Ekā gāmantaraṃ gacchantī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:14.2"
msgid "Gacchati, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:14.3"
msgid "paṭhamaṃ pādaṃ parikkhepaṃ atikkāmeti, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:14.4"
msgid "dutiyaṃ pādaṃ atikkāmeti, āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:14.5"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-pvr2.2:15.1"
msgid "Samaggena saṃghena ukkhittaṃ bhikkhuniṃ dhammena vinayena satthusāsanena anapaloketvā kārakasaṃghaṃ anaññāya gaṇassa chandaṃ osārentī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:15.2"
msgid "Ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:15.3"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr2.2:15.4"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:15.5"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc10, pts-vp-pli5.73
msgctxt "pli-tv-pvr2.2:16.1"
msgid "Avassutā bhikkhunī avassutassa purisapuggalassa hatthato khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā bhuñjantī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:16.2"
msgid "“Khādissāmi bhuñjissāmī”ti paṭiggaṇhāti, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:16.3"
msgid "ajjhohāre ajjhohāre āpatti saṃghādisesassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:16.4"
msgid "udakadantaponaṃ paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:16.5"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-pvr2.2:17.1"
msgid "“Kiṃ te, ayye, eso purisapuggalo karissati avassuto vā anavassuto vā, yato tvaṃ anavassutā."
msgstr ""

msgctxt "pli-tv-pvr2.2:17.2"
msgid "Iṅgha, ayye, yaṃ te eso purisapuggalo deti khādanīyaṃ vā bhojanīyaṃ vā, taṃ tvaṃ sahatthā paṭiggahetvā khāda vā bhuñja vā”ti uyyojentī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:17.3"
msgid "Tassā vacanena khādissāmi bhuñjissāmīti paṭiggaṇhāti, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:17.4"
msgid "ajjhohāre ajjhohāre āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:17.5"
msgid "bhojanapariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:17.6"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-pvr2.2:18.1"
msgid "Kupitā bhikkhunī yāvatatiyaṃ samanubhāsanāya na paṭinissajjantī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:18.2"
msgid "Ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:18.3"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr2.2:18.4"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:18.5"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-pvr2.2:19.1"
msgid "Kismiñcideva adhikaraṇe paccākatā bhikkhunī yāvatatiyaṃ samanubhāsanāya na paṭinissajjantī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:19.2"
msgid "Ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:19.3"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr2.2:19.4"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:19.5"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-pvr2.2:20.1"
msgid "Saṃsaṭṭhā bhikkhuniyo yāvatatiyaṃ samanubhāsanāya na paṭinissajjantiyo tisso āpattiyo āpajjanti."
msgstr ""

msgctxt "pli-tv-pvr2.2:20.2"
msgid "Ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:20.3"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr2.2:20.4"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:20.5"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-pvr2.2:21.1"
msgid "“Saṃsaṭṭhāva, ayye, tumhe viharatha."
msgstr ""

msgctxt "pli-tv-pvr2.2:21.2"
msgid "Mā tumhe nānā viharitthā”ti uyyojentī yāvatatiyaṃ samanubhāsanāya na paṭinissajjantī tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:21.3"
msgid "Ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:21.4"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr2.2:21.5"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:21.6"
msgid "(10)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc16
msgctxt "pli-tv-pvr2.2:22.1"
msgid "Saṃghādisesā niṭṭhitā."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-pvr2.2:23.1"
msgid "3. Nissaggiyakaṇḍa"
msgstr ""

#. HTML: </h2><p>
#. REF: sc17
msgctxt "pli-tv-pvr2.2:24.1"
msgid "Pattasannicayaṃ karontī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:24.2"
msgid "Nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:24.3"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc18
msgctxt "pli-tv-pvr2.2:25.1"
msgid "Akālacīvaraṃ “kālacīvaran”ti adhiṭṭhahitvā bhājāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:25.2"
msgid "Bhājāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:25.3"
msgid "bhājāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:25.4"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-pvr2.2:26.1"
msgid "Bhikkhuniyā saddhiṃ cīvaraṃ parivattetvā acchindantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:26.2"
msgid "Acchindati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:26.3"
msgid "acchinne nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:26.4"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc20
msgctxt "pli-tv-pvr2.2:27.1"
msgid "Aññaṃ viññāpetvā aññaṃ viññāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:27.2"
msgid "Viññāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:27.3"
msgid "viññāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:27.4"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-pvr2.2:28.1"
msgid "Aññaṃ cetāpetvā aññaṃ cetāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:28.2"
msgid "Cetāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:28.3"
msgid "cetāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:28.4"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc22
msgctxt "pli-tv-pvr2.2:29.1"
msgid "Aññadatthikena parikkhārena aññuddisikena saṃghikena aññaṃ cetāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:29.2"
msgid "Cetāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:29.3"
msgid "cetāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:29.4"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc23
msgctxt "pli-tv-pvr2.2:30.1"
msgid "Aññadatthikena parikkhārena aññuddisikena saṃghikena saṃyācikena aññaṃ cetāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:30.2"
msgid "Cetāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:30.3"
msgid "cetāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:30.4"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc24
msgctxt "pli-tv-pvr2.2:31.1"
msgid "Aññadatthikena parikkhārena aññuddisikena mahājanikena aññaṃ cetāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:31.2"
msgid "Cetāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:31.3"
msgid "cetāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:31.4"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc25, pts-vp-pli5.74
msgctxt "pli-tv-pvr2.2:32.1"
msgid "Aññadatthikena parikkhārena aññuddisikena mahājanikena saṃyācikena aññaṃ cetāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:32.2"
msgid "Cetāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:32.3"
msgid "cetāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:32.4"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc26
msgctxt "pli-tv-pvr2.2:33.1"
msgid "Aññadatthikena parikkhārena aññuddisikena puggalikena saṃyācikena aññaṃ cetāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:33.2"
msgid "Cetāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:33.3"
msgid "cetāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:33.4"
msgid "(10)"
msgstr ""

#. HTML: </p><p>
#. REF: sc27
msgctxt "pli-tv-pvr2.2:34.1"
msgid "Atirekacatukkaṃsaparamaṃ garupāvuraṇaṃ cetāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:34.2"
msgid "Cetāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:34.3"
msgid "cetāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:34.4"
msgid "(11)"
msgstr ""

#. HTML: </p><p>
#. REF: sc28
msgctxt "pli-tv-pvr2.2:35.1"
msgid "Atirekaaḍḍhateyyakaṃsaparamaṃ lahupāvuraṇaṃ cetāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:35.2"
msgid "Cetāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:35.3"
msgid "cetāpite nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:35.4"
msgid "(12)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc29
msgctxt "pli-tv-pvr2.2:36.1"
msgid "Nissaggiyā pācittiyā niṭṭhitā."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-pvr2.2:37.1"
msgid "4. 4 Pācittiyakaṇḍa"
msgstr ""

#. HTML: </h2><h3>
msgctxt "pli-tv-pvr2.2:38.1"
msgid "4.1. Lasuṇavagga"
msgstr ""

#. HTML: </h3><p>
#. REF: sc30
msgctxt "pli-tv-pvr2.2:39.1"
msgid "Lasuṇaṃ khādantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:39.2"
msgid "Khādissāmīti paṭiggaṇhāti, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:39.3"
msgid "ajjhohāre ajjhohāre āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:39.4"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc31
msgctxt "pli-tv-pvr2.2:40.1"
msgid "Sambādhe lomaṃ saṃharāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:40.2"
msgid "Saṃharāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:40.3"
msgid "saṃharāpite āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:40.4"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc32
msgctxt "pli-tv-pvr2.2:41.1"
msgid "Talaghātakaṃ karontī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:41.2"
msgid "Karoti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:41.3"
msgid "kate āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:41.4"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc33
msgctxt "pli-tv-pvr2.2:42.1"
msgid "Jatumaṭṭhakaṃ ādiyantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:42.2"
msgid "Ādiyati, payoge dukkaṭaṃ, ādinne āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:42.3"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc34
msgctxt "pli-tv-pvr2.2:43.1"
msgid "Atirekadvaṅgulapabbaparamaṃ udakasuddhikaṃ ādiyantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:43.2"
msgid "Ādiyati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:43.3"
msgid "ādinne āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:43.4"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc35
msgctxt "pli-tv-pvr2.2:44.1"
msgid "Bhikkhussa bhuñjantassa pānīyena vā vidhūpanena vā upatiṭṭhantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:44.2"
msgid "Hatthapāse tiṭṭhati, āpatti pācittiyassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:44.3"
msgid "hatthapāsaṃ vijahitvā tiṭṭhati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:44.4"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc36
msgctxt "pli-tv-pvr2.2:45.1"
msgid "Āmakadhaññaṃ viññāpetvā bhuñjantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:45.2"
msgid "“Bhuñjissāmī”ti paṭiggaṇhāti, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:45.3"
msgid "ajjhohāre ajjhohāre āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:45.4"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc37
msgctxt "pli-tv-pvr2.2:46.1"
msgid "Uccāraṃ vā passāvaṃ vā saṅkāraṃ vā vighāsaṃ vā tirokuṭṭe vā tiropākāre vā chaḍḍentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:46.2"
msgid "Chaḍḍeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:46.3"
msgid "chaḍḍite āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:46.4"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc38
msgctxt "pli-tv-pvr2.2:47.1"
msgid "Uccāraṃ vā passāvaṃ vā saṅkāraṃ vā vighāsaṃ vā harite chaḍḍentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:47.2"
msgid "Chaḍḍeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:47.3"
msgid "chaḍḍite āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:47.4"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc39
msgctxt "pli-tv-pvr2.2:48.1"
msgid "Naccaṃ vā gītaṃ vā vāditaṃ vā dassanāya gacchantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:48.2"
msgid "Gacchati, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:48.3"
msgid "yattha ṭhitā passati vā suṇāti vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:48.4"
msgid "(10)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc40
msgctxt "pli-tv-pvr2.2:49.1"
msgid "Lasuṇavaggo paṭhamo."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr2.2:50.1"
msgid "4.2. Rattandhakāravagga"
msgstr ""

#. HTML: </h3><p>
#. REF: sc41
msgctxt "pli-tv-pvr2.2:51.1"
msgid "Rattandhakāre appadīpe purisena saddhiṃ ekenekā santiṭṭhantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:51.2"
msgid "Hatthapāse tiṭṭhati, āpatti pācittiyassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:51.3"
msgid "hatthapāsaṃ vijahitvā tiṭṭhati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:51.4"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc42
msgctxt "pli-tv-pvr2.2:52.1"
msgid "Paṭicchanne okāse purisena saddhiṃ ekenekā santiṭṭhantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:52.2"
msgid "Hatthapāse tiṭṭhati, āpatti pācittiyassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:52.3"
msgid "hatthapāsaṃ vijahitvā tiṭṭhati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:52.4"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc43, pts-vp-pli5.75
msgctxt "pli-tv-pvr2.2:53.1"
msgid "Ajjhokāse purisena saddhiṃ ekenekā santiṭṭhantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:53.2"
msgid "Hatthapāse tiṭṭhati, āpatti pācittiyassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:53.3"
msgid "hatthapāsaṃ vijahitvā tiṭṭhati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:53.4"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc44
msgctxt "pli-tv-pvr2.2:54.1"
msgid "Rathikāya vā byūhe vā siṅghāṭake vā purisena saddhiṃ ekenekā santiṭṭhantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:54.2"
msgid "Hatthapāse tiṭṭhati, āpatti pācittiyassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:54.3"
msgid "hatthapāsaṃ vijahitvā tiṭṭhati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:54.4"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc45
msgctxt "pli-tv-pvr2.2:55.1"
msgid "Purebhattaṃ kulāni upasaṅkamitvā āsane nisīditvā sāmike anāpucchā pakkamantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:55.2"
msgid "Paṭhamaṃ pādaṃ anovassakaṃ atikkāmeti, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:55.3"
msgid "dutiyaṃ pādaṃ atikkāmeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:55.4"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc46
msgctxt "pli-tv-pvr2.2:56.1"
msgid "Pacchābhattaṃ kulāni upasaṅkamitvā sāmike anāpucchā āsane nisīdantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:56.2"
msgid "Nisīdati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:56.3"
msgid "nisinne āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:56.4"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc47
msgctxt "pli-tv-pvr2.2:57.1"
msgid "Vikāle kulāni upasaṅkamitvā sāmike anāpucchā seyyaṃ santharitvā vā santharāpetvā vā abhinisīdantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:57.2"
msgid "Abhinisīdati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:57.3"
msgid "abhinisinne āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:57.4"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc48
msgctxt "pli-tv-pvr2.2:58.1"
msgid "Duggahitena dūpadhāritena paraṃ ujjhāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:58.2"
msgid "Ujjhāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:58.3"
msgid "ujjhāpite āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:58.4"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc49
msgctxt "pli-tv-pvr2.2:59.1"
msgid "Attānaṃ vā paraṃ vā nirayena vā brahmacariyena vā abhisapantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:59.2"
msgid "Abhisapati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:59.3"
msgid "abhisapite āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:59.4"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc50
msgctxt "pli-tv-pvr2.2:60.1"
msgid "Attānaṃ vadhitvā vadhitvā rodantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:60.2"
msgid "Vadhati rodati, āpatti pācittiyassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:60.3"
msgid "vadhati na rodati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:60.4"
msgid "(10)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc51
msgctxt "pli-tv-pvr2.2:61.1"
msgid "Rattandhakāravaggo dutiyo."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr2.2:62.1"
msgid "4.3. Nahānavagga"
msgstr ""

#. HTML: </h3><p>
#. REF: sc52
msgctxt "pli-tv-pvr2.2:63.1"
msgid "Naggā nahāyantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:63.2"
msgid "Nahāyati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:63.3"
msgid "nahānapariyosāne āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:63.4"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc53
msgctxt "pli-tv-pvr2.2:64.1"
msgid "Pamāṇātikkantaṃ udakasāṭikaṃ kārāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:64.2"
msgid "Kārāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:64.3"
msgid "kārāpite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:64.4"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc54
msgctxt "pli-tv-pvr2.2:65.1"
msgid "Bhikkhuniyā cīvaraṃ visibbetvā vā visibbāpetvā vā neva sibbentī na sibbāpanāya ussukkaṃ karontī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:65.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:65.3"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc55
msgctxt "pli-tv-pvr2.2:66.1"
msgid "Pañcāhikaṃ saṅghāṭicāraṃ atikkāmentī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:66.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:66.3"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc56
msgctxt "pli-tv-pvr2.2:67.1"
msgid "Cīvarasaṅkamanīyaṃ dhārentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:67.2"
msgid "Dhāreti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:67.3"
msgid "dhārite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:67.4"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc57
msgctxt "pli-tv-pvr2.2:68.1"
msgid "Gaṇassa cīvaralābhaṃ antarāyaṃ karontī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:68.2"
msgid "Karoti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:68.3"
msgid "kate, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:68.4"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc58
msgctxt "pli-tv-pvr2.2:69.1"
msgid "Dhammikaṃ cīvaravibhaṅgaṃ paṭibāhantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:69.2"
msgid "Paṭibāhati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:69.3"
msgid "paṭibāhite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:69.4"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc59
msgctxt "pli-tv-pvr2.2:70.1"
msgid "Agārikassa vā paribbājakassa vā paribbājikāya vā samaṇacīvaraṃ dentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:70.2"
msgid "Deti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:70.3"
msgid "dinne, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:70.4"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc60, pts-vp-pli5.76
msgctxt "pli-tv-pvr2.2:71.1"
msgid "Dubbalacīvarapaccāsāya cīvarakālasamayaṃ atikkāmentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:71.2"
msgid "Atikkāmeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:71.3"
msgid "atikkāmite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:71.4"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc61
msgctxt "pli-tv-pvr2.2:72.1"
msgid "Dhammikaṃ kathinuddhāraṃ paṭibāhantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:72.2"
msgid "Paṭibāhati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:72.3"
msgid "paṭibāhite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:72.4"
msgid "(10)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc62
msgctxt "pli-tv-pvr2.2:73.1"
msgid "Nahānavaggo tatiyo."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr2.2:74.1"
msgid "4.4. Tuvaṭṭavagga"
msgstr ""

#. HTML: </h3><p>
#. REF: sc63
msgctxt "pli-tv-pvr2.2:75.1"
msgid "Dve bhikkhuniyo ekamañce tuvaṭṭentiyo dve āpattiyo āpajjanti."
msgstr ""

msgctxt "pli-tv-pvr2.2:75.2"
msgid "Nipajjanti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:75.3"
msgid "nipanne, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:75.4"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc64
msgctxt "pli-tv-pvr2.2:76.1"
msgid "Dve bhikkhuniyo ekattharaṇapāvuraṇā tuvaṭṭentiyo dve āpattiyo āpajjanti."
msgstr ""

msgctxt "pli-tv-pvr2.2:76.2"
msgid "Nipajjanti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:76.3"
msgid "nipanne, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:76.4"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc65
msgctxt "pli-tv-pvr2.2:77.1"
msgid "Bhikkhuniyā sañcicca aphāsuṃ karontī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:77.2"
msgid "Karoti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:77.3"
msgid "kate, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:77.4"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc66
msgctxt "pli-tv-pvr2.2:78.1"
msgid "Dukkhitaṃ sahajīviniṃ neva upaṭṭhentī na upaṭṭhāpanāya ussukkaṃ karontī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:78.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:78.3"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc67
msgctxt "pli-tv-pvr2.2:79.1"
msgid "Bhikkhuniyā upassayaṃ datvā kupitā anattamanā nikkaḍḍhantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:79.2"
msgid "Nikkaḍḍhati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:79.3"
msgid "nikkaḍḍhite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:79.4"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc68
msgctxt "pli-tv-pvr2.2:80.1"
msgid "Saṃsaṭṭhā bhikkhunī yāvatatiyaṃ samanubhāsanāya na paṭinissajjantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:80.2"
msgid "Ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:80.3"
msgid "kammavācāpariyosāne āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:80.4"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc69
msgctxt "pli-tv-pvr2.2:81.1"
msgid "Antoraṭṭhe sāsaṅkasammate sappaṭibhaye asatthikā cārikaṃ carantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:81.2"
msgid "Paṭipajjati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:81.3"
msgid "paṭipanne, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:81.4"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc70
msgctxt "pli-tv-pvr2.2:82.1"
msgid "Tiroraṭṭhe sāsaṅkasammate sappaṭibhaye asatthikā cārikaṃ carantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:82.2"
msgid "Paṭipajjati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:82.3"
msgid "paṭipanne, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:82.4"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc71
msgctxt "pli-tv-pvr2.2:83.1"
msgid "Antovassaṃ cārikaṃ carantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:83.2"
msgid "Paṭipajjati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:83.3"
msgid "paṭipanne, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:83.4"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc72
msgctxt "pli-tv-pvr2.2:84.1"
msgid "Vassaṃvuṭṭhā bhikkhunī cārikaṃ na pakkamantī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:84.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:84.3"
msgid "(10)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc73
msgctxt "pli-tv-pvr2.2:85.1"
msgid "Tuvaṭṭavaggo catuttho."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr2.2:86.1"
msgid "4.5. Cittāgāravagga"
msgstr ""

#. HTML: </h3><p>
#. REF: sc74
msgctxt "pli-tv-pvr2.2:87.1"
msgid "Rājāgāraṃ vā cittāgāraṃ vā ārāmaṃ vā uyyānaṃ vā pokkharaṇiṃ vā dassanāya gacchantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:87.2"
msgid "Gacchati, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:87.3"
msgid "yattha ṭhitā passati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:87.4"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc75
msgctxt "pli-tv-pvr2.2:88.1"
msgid "Āsandiṃ vā pallaṅkaṃ vā paribhuñjantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:88.2"
msgid "Paribhuñjati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:88.3"
msgid "paribhutte, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:88.4"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc76
msgctxt "pli-tv-pvr2.2:89.1"
msgid "Suttaṃ kantantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:89.2"
msgid "Kantati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:89.3"
msgid "ujjavujjave, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:89.4"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc77
msgctxt "pli-tv-pvr2.2:90.1"
msgid "Gihiveyyāvaccaṃ karontī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:90.2"
msgid "Karoti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:90.3"
msgid "kate, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:90.4"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc78, pts-vp-pli5.77
msgctxt "pli-tv-pvr2.2:91.1"
msgid "Bhikkhuniyā—"
msgstr ""

msgctxt "pli-tv-pvr2.2:91.2"
msgid "“ehāyye, imaṃ adhikaraṇaṃ vūpasamehī”ti vuccamānā—"
msgstr ""

msgctxt "pli-tv-pvr2.2:91.3"
msgid "“sādhū”ti paṭissuṇitvā neva vūpasamentī na vūpasamāya ussukkaṃ karontī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:91.4"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:91.5"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc79
msgctxt "pli-tv-pvr2.2:92.1"
msgid "Agārikassa vā paribbājakassa vā paribbājikāya vā sahatthā khādanīyaṃ vā bhojanīyaṃ vā dentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:92.2"
msgid "Deti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:92.3"
msgid "dinne, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:92.4"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc80
msgctxt "pli-tv-pvr2.2:93.1"
msgid "Āvasathacīvaraṃ anissajjitvā paribhuñjantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:93.2"
msgid "Paribhuñjati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:93.3"
msgid "paribhutte, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:93.4"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc81
msgctxt "pli-tv-pvr2.2:94.1"
msgid "Āvasathaṃ anissajjitvā cārikaṃ pakkamantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:94.2"
msgid "Paṭhamaṃ pādaṃ parikkhepaṃ atikkāmeti, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:94.3"
msgid "dutiyaṃ pādaṃ atikkāmeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:94.4"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc82
msgctxt "pli-tv-pvr2.2:95.1"
msgid "Tiracchānavijjaṃ pariyāpuṇantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:95.2"
msgid "Pariyāpuṇāti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:95.3"
msgid "pade pade āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:95.4"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc83
msgctxt "pli-tv-pvr2.2:96.1"
msgid "Tiracchānavijjaṃ vācentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:96.2"
msgid "Vāceti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:96.3"
msgid "pade pade āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:96.4"
msgid "(10)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc84
msgctxt "pli-tv-pvr2.2:97.1"
msgid "Cittāgāravaggo pañcamo."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr2.2:98.1"
msgid "4.6. Ārāmavagga"
msgstr ""

#. HTML: </h3><p>
#. REF: sc85
msgctxt "pli-tv-pvr2.2:99.1"
msgid "Jānaṃ sabhikkhukaṃ ārāmaṃ anāpucchā pavisantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:99.2"
msgid "Paṭhamaṃ pādaṃ parikkhepaṃ atikkāmeti, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:99.3"
msgid "dutiyaṃ pādaṃ atikkāmeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:99.4"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc86
msgctxt "pli-tv-pvr2.2:100.1"
msgid "Bhikkhuṃ akkosantī paribhāsantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:100.2"
msgid "Akkosati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:100.3"
msgid "akkosite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:100.4"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc87
msgctxt "pli-tv-pvr2.2:101.1"
msgid "Caṇḍīkatā gaṇaṃ paribhāsantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:101.2"
msgid "Paribhāsati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:101.3"
msgid "paribhāsite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:101.4"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc88
msgctxt "pli-tv-pvr2.2:102.1"
msgid "Nimantitā vā pavāritā vā khādanīyaṃ vā bhojanīyaṃ vā bhuñjantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:102.2"
msgid "“Khādissāmi bhuñjissāmī”ti paṭiggaṇhāti, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:102.3"
msgid "ajjhohāre ajjhohāre āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:102.4"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc89
msgctxt "pli-tv-pvr2.2:103.1"
msgid "Kulaṃ maccharāyantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:103.2"
msgid "Maccharāyati, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:103.3"
msgid "maccharite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:103.4"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc90
msgctxt "pli-tv-pvr2.2:104.1"
msgid "Abhikkhuke āvāse vassaṃ vasantī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:104.2"
msgid "“Vassaṃ vasissāmī”ti senāsanaṃ paññapeti pānīyaṃ paribhojanīyaṃ upaṭṭhapeti pariveṇaṃ sammajjati, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr2.2:104.3"
msgid "saha aruṇuggamanā āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:104.4"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc91
msgctxt "pli-tv-pvr2.2:105.1"
msgid "Vassaṃvuṭṭhā bhikkhunī ubhatosaṃghe tīhi ṭhānehi na pavārentī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:105.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:105.3"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc92
msgctxt "pli-tv-pvr2.2:106.1"
msgid "Ovādāya vā saṃvāsāya vā na gacchantī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:106.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:106.3"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc93
msgctxt "pli-tv-pvr2.2:107.1"
msgid "Uposathampi na pucchantī ovādampi na yācantī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:107.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:107.3"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc94, pts-vp-pli5.78
msgctxt "pli-tv-pvr2.2:108.1"
msgid "Pasākhe jātaṃ gaṇḍaṃ vā rudhitaṃ vā anapaloketvā saṃghaṃ vā gaṇaṃ vā purisena saddhiṃ ekenekā bhedāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:108.2"
msgid "Bhedāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:108.3"
msgid "bhinne, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:108.4"
msgid "(10)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc95
msgctxt "pli-tv-pvr2.2:109.1"
msgid "Ārāmavaggo chaṭṭho."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr2.2:110.1"
msgid "4.7. Gabbhinivagga"
msgstr ""

#. HTML: </h3><p>
#. REF: sc96
msgctxt "pli-tv-pvr2.2:111.1"
msgid "Gabbhiniṃ vuṭṭhāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:111.2"
msgid "Vuṭṭhāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:111.3"
msgid "vuṭṭhāpite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:111.4"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc97
msgctxt "pli-tv-pvr2.2:112.1"
msgid "Pāyantiṃ vuṭṭhāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:112.2"
msgid "Vuṭṭhāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:112.3"
msgid "vuṭṭhāpite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:112.4"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc98
msgctxt "pli-tv-pvr2.2:113.1"
msgid "Dve vassāni chasu dhammesu asikkhitasikkhaṃ sikkhamānaṃ vuṭṭhāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:113.2"
msgid "Vuṭṭhāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:113.3"
msgid "vuṭṭhāpite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:113.4"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc99
msgctxt "pli-tv-pvr2.2:114.1"
msgid "Dve vassāni chasu dhammesu sikkhitasikkhaṃ sikkhamānaṃ saṃghena asammataṃ vuṭṭhāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:114.2"
msgid "Vuṭṭhāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:114.3"
msgid "vuṭṭhāpite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:114.4"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc100
msgctxt "pli-tv-pvr2.2:115.1"
msgid "Ūnadvādasavassaṃ gihigataṃ vuṭṭhāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:115.2"
msgid "Vuṭṭhāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:115.3"
msgid "vuṭṭhāpite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:115.4"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc101
msgctxt "pli-tv-pvr2.2:116.1"
msgid "Paripuṇṇadvādasavassaṃ gihigataṃ dve vassāni chasu dhammesu asikkhitasikkhaṃ vuṭṭhāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:116.2"
msgid "Vuṭṭhāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:116.3"
msgid "vuṭṭhāpite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:116.4"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc102
msgctxt "pli-tv-pvr2.2:117.1"
msgid "Paripuṇṇadvādasavassaṃ gihigataṃ dve vassāni chasu dhammesu sikkhitasikkhaṃ saṃghena asammataṃ vuṭṭhāpentī dve āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:117.2"
msgid "Vuṭṭhāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr2.2:117.3"
msgid "vuṭṭhāpite, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-pvr2.2:117.4"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc103
msgctxt "pli-tv-pvr2.2:118.1"
msgid "Sahajīviniṃ vuṭṭhāpetvā dve vassāni neva anuggaṇhantī nānuggaṇhāpentī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:118.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:118.3"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc104
msgctxt "pli-tv-pvr2.2:119.1"
msgid "Vuṭṭhāpitaṃ pavattiniṃ dve vassāni nānubandhantī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:119.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:119.3"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc105
msgctxt "pli-tv-pvr2.2:120.1"
msgid "Sahajīviniṃ vuṭṭhāpetvā neva vūpakāsentī na vūpakāsāpentī ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr2.2:120.2"
msgid "Pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-pvr2.2:120.3"
msgid "(10)"
msgstr ""

