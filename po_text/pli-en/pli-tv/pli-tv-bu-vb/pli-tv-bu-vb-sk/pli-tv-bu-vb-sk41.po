#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-sk41:5.1"
msgid "41. Anāhaṭasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-sk41:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-sk41:6.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū anāhaṭe kabaḷe mukhadvāraṃ vivaranti …"
msgstr ""

msgctxt "pli-tv-bu-vb-sk41:6.3"
msgid "pe …."
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc2, pts-vp-pli4.195
msgctxt "pli-tv-bu-vb-sk41:7.1"
msgid "“Na anāhaṭe kabaḷe mukhadvāraṃ vivarissāmīti sikkhā karaṇīyā”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc3
msgctxt "pli-tv-bu-vb-sk41:8.1"
msgid "Na anāhaṭe kabaḷe mukhadvāraṃ vivaritabbaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-sk41:8.2"
msgid "Yo anādariyaṃ paṭicca anāhaṭe kabaḷe mukhadvāraṃ vivarati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc4
msgctxt "pli-tv-bu-vb-sk41:9.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-sk41:9.2"
msgid "asañcicca … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-sk41:9.3"
msgid "ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc5
msgctxt "pli-tv-bu-vb-sk41:10.1"
msgid "Paṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
