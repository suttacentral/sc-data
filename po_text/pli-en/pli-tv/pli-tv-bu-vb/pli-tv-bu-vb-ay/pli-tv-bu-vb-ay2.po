#. HTML: </span></p><p><span class="term"> 
#. REF: sc7, ms1V_1835
msgctxt "pli-tv-bu-vb-ay2:2.1.7"
msgid "Yo panāti"
msgstr "A:"

#. HTML: </span><span class="gloss"> 
msgctxt "pli-tv-bu-vb-ay2:2.1.8"
msgid "yo yādiso … pe …"
msgstr "whoever …"

#. HTML: </span><span class="term"> 
msgctxt "pli-tv-bu-vb-ay2:2.1.9"
