#. HTML: </span></p><p><span class="term"> 
#. REF: sc10, ms1V_1838
msgctxt "pli-tv-bu-vb-ay2:2.1.17"
msgid "Saddhinti"
msgstr "With:"

#. HTML: </span><span class="gloss"> 
msgctxt "pli-tv-bu-vb-ay2:2.1.18"
msgid "ekato."
msgstr "together."

#. HTML: </span></p><p><span class="term"> 
#. REF: sc11, ms1V_1839
msgctxt "pli-tv-bu-vb-ay2:2.1.19"
msgid "Eko ekāyāti"
