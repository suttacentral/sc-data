msgctxt "pli-tv-bu-vb-pc64:0.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pc64:0.2"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p></p><p>
msgctxt "pli-tv-bu-vb-pc64:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

msgctxt "pli-tv-bu-vb-pc64:0.4"
msgid "Sappāṇakavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc64:0.5"
msgid "64. Duṭṭhullasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.127
msgctxt "pli-tv-bu-vb-pc64:1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.2"
msgid "Tena kho pana samayena āyasmā upanando sakyaputto sañcetanikaṃ sukkavissaṭṭhiṃ āpattiṃ āpajjitvā bhātuno saddhivihārikassa bhikkhuno ārocesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.3"
msgid "“ahaṃ, āvuso, sañcetanikaṃ sukkavissaṭṭhiṃ āpattiṃ āpanno."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.4"
msgid "Mā kassaci ārocehī”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.5"
msgid "Tena kho pana samayena aññataro bhikkhu sañcetanikaṃ sukkavissaṭṭhiṃ āpattiṃ āpajjitvā saṃghaṃ tassā āpattiyā parivāsaṃ yāci."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.6"
msgid "Tassa saṃgho tassā āpattiyā parivāsaṃ adāsi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.7"
msgid "So parivasanto taṃ bhikkhuṃ passitvā etadavoca—"
msgstr ""

#. VAR: vediyāmahaṃ → vedayāmahaṃ (s1-3)
msgctxt "pli-tv-bu-vb-pc64:1.8"
msgid "“ahaṃ, āvuso, sañcetanikaṃ sukkavissaṭṭhiṃ āpattiṃ āpajjitvā saṃghaṃ tassā āpattiyā parivāsaṃ yāciṃ, tassa me saṃgho tassā āpattiyā parivāsaṃ adāsi, sohaṃ parivasāmi, vediyāmahaṃ, āvuso, vediyatīti maṃ āyasmā dhāretū”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc64:1.9"
msgid "“Kiṃ nu kho, āvuso, yo aññopi imaṃ āpattiṃ āpajjati sopi evaṃ karotī”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.10"
msgid "“Evamāvuso”ti."
msgstr ""

#. VAR: āpajjitvā → āpajji (?)
msgctxt "pli-tv-bu-vb-pc64:1.11"
msgid "“Ayaṃ, āvuso, āyasmā upanando sakyaputto sañcetanikaṃ sukkavissaṭṭhiṃ āpattiṃ āpajjitvā so me āroceti mā kassaci ārocehī”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.12"
msgid "“Kiṃ pana tvaṃ, āvuso, paṭicchādesī”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.13"
msgid "“Evamāvuso”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc64:1.14"
msgid "Atha kho so bhikkhu bhikkhūnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.15"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.16"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.17"
msgid "“kathañhi nāma bhikkhu bhikkhussa jānaṃ duṭṭhullaṃ āpattiṃ paṭicchādessatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.18"
msgid "“saccaṃ kira tvaṃ, bhikkhu, bhikkhussa jānaṃ duṭṭhullaṃ āpattiṃ paṭicchādesī”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.19"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.20"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.21"
msgid "kathañhi nāma tvaṃ, moghapurisa, bhikkhussa jānaṃ duṭṭhullaṃ āpattiṃ paṭicchādessasi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.22"
msgid "Netaṃ, moghapurisa, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:1.23"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc64:1.24"
msgid "“Yo pana bhikkhu bhikkhussa jānaṃ duṭṭhullaṃ āpattiṃ paṭicchādeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc64:2.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc64:2.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc64:2.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc64:2.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc64:2.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc64:2.1.6"
msgid "Bhikkhussāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc64:2.1.7"
msgid "aññassa bhikkhussa."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc64:2.1.8"
msgid "Jānāti nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc64:2.1.9"
msgid "sāmaṃ vā jānāti aññe vā tassa ārocenti, so vā āroceti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc8, pts-vp-pli4.128
msgctxt "pli-tv-bu-vb-pc64:2.1.10"
msgid "Duṭṭhullā nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc64:2.1.11"
msgid "āpatti cattāri ca pārājikāni terasa ca saṃghādisesā."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc64:2.1.12"
msgid "Paṭicchādeyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc64:2.1.13"
msgid "“imaṃ jānitvā codessanti, sāressanti khuṃsessanti, vambhessanti, maṅkuṃ karissanti nārocessāmī”ti dhuraṃ nikkhittamatte, āpatti pācittiyassa."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc64:2.2.1"
msgid "Duṭṭhullāya āpattiyā duṭṭhullāpattisaññī paṭicchādeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:2.2.2"
msgid "Duṭṭhullāya āpattiyā vematiko paṭicchādeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:2.2.3"
msgid "Duṭṭhullāya āpattiyā aduṭṭhullāpattisaññī paṭicchādeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:2.2.4"
msgid "Aduṭṭhullaṃ āpattiṃ paṭicchādeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:2.2.5"
msgid "Anupasampannassa duṭṭhullaṃ vā aduṭṭhullaṃ vā ajjhācāraṃ paṭicchādeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:2.2.6"
msgid "Aduṭṭhullāya āpattiyā duṭṭhullāpattisaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:2.2.7"
msgid "Aduṭṭhullāya āpattiyā vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:2.2.8"
msgid "Aduṭṭhullāya āpattiyā aduṭṭhullāpattisaññī, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bu-vb-pc64:2.3.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc64:2.3.2"
msgid "“saṃghassa bhaṇḍanaṃ vā kalaho vā viggaho vā vivādo vā bhavissatī”ti nāroceti, “saṃghabhedo vā saṃgharāji vā bhavissatī”ti nāroceti, “ayaṃ kakkhaḷo pharuso jīvitantarāyaṃ vā brahmacariyantarāyaṃ vā karissatī”ti nāroceti, aññe patirūpe bhikkhū apassanto nāroceti, nachādetukāmo nāroceti, “paññāyissati sakena kammenā”ti nāroceti, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc12
msgctxt "pli-tv-bu-vb-pc64:2.3.3"
msgid "Duṭṭhullasikkhāpadaṃ niṭṭhitaṃ catutthaṃ."
msgstr ""
