msgctxt "pli-tv-bu-vb-pc2:2.9.0a"
msgid ""
msgstr "Non-offenses"

#. HTML: </h2><p>
#. REF: sc81, pts-cs-bu-pc2.2.9, ms2V_109
msgctxt "pli-tv-bu-vb-pc2:2.9.1"
msgid "Anāpatti—"
msgstr "There is no offense:"

msgctxt "pli-tv-bu-vb-pc2:2.9.2"
msgid "atthapurekkhārassa,"
msgstr "if he is aiming at what is beneficial;"

msgctxt "pli-tv-bu-vb-pc2:2.9.3"
msgid "dhammapurekkhārassa,"
msgstr "if he is aiming at giving a teaching;"

msgctxt "pli-tv-bu-vb-pc2:2.9.4"
msgid "anusāsanipurekkhārassa,"
msgstr "if he is aiming at giving instruction;"

msgctxt "pli-tv-bu-vb-pc2:2.9.5"
msgid "ummattakassa,"
msgstr "if he is insane;"

msgctxt "pli-tv-bu-vb-pc2:2.9.6"
msgid "khittacittassa,"
msgstr "if he is deranged;"

msgctxt "pli-tv-bu-vb-pc2:2.9.7"
msgid "vedanāṭṭassa,"
msgstr "if he is overwhelmed by pain;"

msgctxt "pli-tv-bu-vb-pc2:2.9.8"
msgid "ādikammikassāti."
msgstr "if he is the first offender."

