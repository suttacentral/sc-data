#. HTML: <section class="sutta" id="pi-tv-bu-vb-pc84"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bu-vb-pc84:0.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pc84:0.2"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p></p><p>
msgctxt "pli-tv-bu-vb-pc84:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

msgctxt "pli-tv-bu-vb-pc84:0.4"
msgid "Ratanavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc84:1.1.0"
msgid "84. Ratanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pc84:1.1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.2"
msgid "Tena kho pana samayena aññataro bhikkhu aciravatiyā nadiyā nahāyati."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.3"
msgid "Aññataropi brāhmaṇo pañcasatānaṃ thavikaṃ thale nikkhipitvā aciravatiyā nadiyā nahāyanto vissaritvā agamāsi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.4"
msgid "Atha kho so bhikkhu—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.5"
msgid "“tassāyaṃ brāhmaṇassa thavikā, mā idha nassī”ti aggahesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.6"
msgid "Atha kho so brāhmaṇo saritvā turito ādhāvitvā taṃ bhikkhuṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.7"
msgid "“api me, bho, thavikaṃ passeyyāsī”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.8"
msgid "“Handa, brāhmaṇā”ti adāsi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.9"
msgid "Atha kho tassa brāhmaṇassa etadahosi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.10"
msgid "“kena nu kho ahaṃ upāyena imassa bhikkhuno puṇṇapattaṃ na dadeyyan”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.11"
msgid "“Na me, bho, pañcasatāni, sahassaṃ me”ti palibundhetvā muñci."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc84:1.1.12"
msgid "Atha kho so bhikkhu ārāmaṃ gantvā bhikkhūnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.13"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.14"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.15"
msgid "“kathañhi nāma bhikkhu ratanaṃ uggahessatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.16"
msgid "“saccaṃ kira tvaṃ, bhikkhu, ratanaṃ uggahesī”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.17"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.18"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.19"
msgid "kathañhi nāma tvaṃ, moghapurisa, ratanaṃ uggahessasi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.20"
msgid "Netaṃ, moghapurisa, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:1.1.21"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc84:1.1.22"
msgid "“Yo pana bhikkhu ratanaṃ vā ratanasammataṃ vā uggaṇheyya vā uggaṇhāpeyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc84:1.1.23"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5, pts-vp-pli4.162
msgctxt "pli-tv-bu-vb-pc84:2.1.1"
msgid "Tena kho pana samayena sāvatthiyā ussavo hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.2"
msgid "Manussā alaṅkatappaṭiyattā uyyānaṃ gacchanti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.3"
msgid "Visākhāpi migāramātā alaṅkatappaṭiyattā “uyyānaṃ gamissāmī”ti gāmato nikkhamitvā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.4"
msgid "“kyāhaṃ karissāmi uyyānaṃ gantvā, yannūnāhaṃ bhagavantaṃ payirupāseyyan”ti ābharaṇaṃ omuñcitvā uttarāsaṅgena bhaṇḍikaṃ bandhitvā dāsiyā adāsi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.5"
msgid "“handa, je, imaṃ bhaṇḍikaṃ gaṇhāhī”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.6"
msgid "Atha kho visākhā migāramātā yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.7"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.8"
msgid "Ekamantaṃ nisinnaṃ kho visākhaṃ migāramātaraṃ bhagavā dhammiyā kathāya sandassesi samādapesi samuttejesi sampahaṃsesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.9"
msgid "Atha kho visākhā migāramātā bhagavatā dhammiyā kathāya sandassitā samādapitā samuttejitā sampahaṃsitā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.10"
msgid "Atha kho sā dāsī taṃ bhaṇḍikaṃ vissaritvā agamāsi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.11"
msgid "Bhikkhū passitvā bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.12"
msgid "“Tena hi, bhikkhave, uggahetvā nikkhipathā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.13"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.14"
msgid "“anujānāmi, bhikkhave, ratanaṃ vā ratanasammataṃ vā ajjhārāme uggahetvā vā uggahāpetvā vā nikkhipituṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.15"
msgid "‘yassa bhavissati so harissatī’ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:2.1.16"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc84:2.1.17"
msgid "“Yo pana bhikkhu ratanaṃ vā ratanasammataṃ vā, aññatra ajjhārāmā, uggaṇheyya vā uggaṇhāpeyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc84:2.1.18"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8, pts-vp-pli4.163
msgctxt "pli-tv-bu-vb-pc84:3.1.1"
msgid "Tena kho pana samayena kāsīsu janapade anāthapiṇḍikassa gahapatissa kammantagāmo hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.2"
msgid "Tena ca gahapatinā antevāsī āṇatto hoti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.3"
msgid "“sace bhadantā āgacchanti, bhattaṃ kareyyāsī”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.4"
msgid "Tena kho pana samayena sambahulā bhikkhū kāsīsu janapade cārikaṃ caramānā yena anāthapiṇḍikassa gahapatissa kammantagāmo tenupasaṅkamiṃsu."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.5"
msgid "Addasā kho so puriso te bhikkhū dūratova āgacchante."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.6"
msgid "Disvāna yena te bhikkhū tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.7"
msgid "upasaṅkamitvā te bhikkhū abhivādetvā etadavoca—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.8"
msgid "“adhivāsentu, bhante, ayyā svātanāya gahapatino bhattan”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.9"
msgid "Adhivāsesuṃ kho te bhikkhū tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.10"
msgid "Atha kho so puriso tassā rattiyā accayena paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā kālaṃ ārocāpetvā aṅgulimuddikaṃ omuñcitvā te bhikkhū bhattena parivisitvā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.11"
msgid "“ayyā bhuñjitvā gacchantu, ahampi kammantaṃ gamissāmī”ti aṅgulimuddikaṃ vissaritvā agamāsi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.12"
msgid "Bhikkhū passitvā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.13"
msgid "“sace mayaṃ gamissāma nassissatāyaṃ aṅgulimuddikā”ti tattheva acchiṃsu."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.14"
msgid "Atha kho so puriso kammantā āgacchanto te bhikkhū passitvā etadavoca—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.15"
msgid "“kissa, bhante, ayyā idheva acchantī”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.16"
msgid "Atha kho te bhikkhū tassa purisassa etamatthaṃ ārocetvā sāvatthiṃ gantvā bhikkhūnaṃ etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.17"
msgid "Bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc84:3.1.18"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.19"
msgid "“anujānāmi, bhikkhave, ratanaṃ vā ratanasammataṃ vā ajjhārāme vā ajjhāvasathe vā uggahetvā vā uggahāpetvā vā nikkhipituṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.20"
msgid "‘yassa bhavissati so harissatī’ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.21"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc84:3.1.22"
msgid "“Yo pana bhikkhu ratanaṃ vā ratanasammataṃ vā, aññatra ajjhārāmā vā ajjhāvasathā vā, uggaṇheyya vā uggaṇhāpeyya vā, pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:3.1.23"
msgid "Ratanaṃ vā pana bhikkhunā ratanasammataṃ vā ajjhārāme vā ajjhāvasathe vā uggahetvā vā uggahāpetvā vā nikkhipitabbaṃ—‘yassa bhavissati so harissatī’ti. Ayaṃ tattha sāmīcī”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc11
msgctxt "pli-tv-bu-vb-pc84:4.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc84:4.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc84:4.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc12
#. VAR: lohitaṅko → lohitako (?)
msgctxt "pli-tv-bu-vb-pc84:4.1.6"
msgid "Ratanaṃ nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.7"
msgid "muttā maṇi veḷuriyo saṅkho silā pavālaṃ rajataṃ jātarūpaṃ lohitaṅko masāragallaṃ."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc13
msgctxt "pli-tv-bu-vb-pc84:4.1.8"
msgid "Ratanasammataṃ nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.9"
msgid "yaṃ manussānaṃ upabhogaparibhogaṃ, etaṃ ratanasammataṃ nāma."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc14
msgctxt "pli-tv-bu-vb-pc84:4.1.10"
msgid "Aññatra ajjhārāmā vā ajjhāvasathā vāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.11"
msgid "ṭhapetvā ajjhārāmaṃ ajjhāvasathaṃ."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc15
msgctxt "pli-tv-bu-vb-pc84:4.1.12"
msgid "Ajjhārāmo nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.13"
msgid "parikkhittassa ārāmassa anto ārāmo, aparikkhittassa upacāro."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc16
msgctxt "pli-tv-bu-vb-pc84:4.1.14"
msgid "Ajjhāvasatho nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.15"
msgid "parikkhittassa āvasathassa anto āvasatho, aparikkhittassa upacāro."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc17
msgctxt "pli-tv-bu-vb-pc84:4.1.16"
msgid "Uggaṇheyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.17"
msgid "sayaṃ gaṇhāti, āpatti pācittiyassa."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc18
msgctxt "pli-tv-bu-vb-pc84:4.1.18"
msgid "Uggaṇhāpeyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.19"
msgid "aññaṃ gāhāpeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc19, pts-vp-pli4.164
msgctxt "pli-tv-bu-vb-pc84:4.1.20"
msgid "Ratanaṃ vā pana bhikkhunā ratanasammataṃ vā ajjhārāme vā ajjhāvasathe vā uggahetvā vā uggahāpetvā vā nikkhipitabbanti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.21"
msgid "rūpena vā nimittena vā saññāṇaṃ katvā nikkhipitvā ācikkhitabbaṃ—"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc84:4.1.22"
msgid "“yassa bhaṇḍaṃ naṭṭhaṃ so āgacchatū”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:4.1.23"
msgid "Sace tattha āgacchati so vattabbo—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:4.1.24"
msgid "“āvuso, kīdisaṃ te bhaṇḍan”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:4.1.25"
msgid "Sace rūpena vā nimittena vā sampādeti dātabbaṃ, no ce sampādeti “vicināhi, āvuso”ti vattabbo."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:4.1.26"
msgid "Tamhā āvāsā pakkamantena ye tattha honti bhikkhū patirūpā, tesaṃ hatthe nikkhipitvā pakkamitabbaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:4.1.27"
msgid "No ce honti bhikkhū patirūpā, ye tattha honti gahapatikā patirūpā, tesaṃ hatthe nikkhipitvā pakkamitabbaṃ."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc20
msgctxt "pli-tv-bu-vb-pc84:4.1.28"
msgid "Ayaṃ tattha sāmīcīti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc84:4.1.29"
msgid "ayaṃ tattha anudhammatā."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc21
msgctxt "pli-tv-bu-vb-pc84:4.2.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:4.2.2"
msgid "ratanaṃ vā ratanasammataṃ vā ajjhārāme vā ajjhāvasathe vā uggahetvā vā uggahāpetvā vā nikkhipati—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc84:4.2.3"
msgid "“yassa bhavissati so harissatī”ti, ratanasammataṃ vissāsaṃ gaṇhāti, tāvakālikaṃ gaṇhāti, paṃsukūlasaññissa, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc22
msgctxt "pli-tv-bu-vb-pc84:4.2.4"
msgid "Ratanasikkhāpadaṃ niṭṭhitaṃ dutiyaṃ."
msgstr ""
