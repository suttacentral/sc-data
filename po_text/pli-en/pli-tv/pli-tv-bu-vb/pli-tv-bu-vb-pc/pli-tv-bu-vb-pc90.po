msgctxt "pli-tv-bu-vb-pc90:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

#. VAR: Ratanavagga → kaṇḍu­pa­ṭicchā­di­sikkhā­padaṃ (bj)
msgctxt "pli-tv-bu-vb-pc90:0.4"
msgid "Ratanavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc90:1.1.0"
msgid "90. Kaṇḍuppaṭicchādisikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.172
msgctxt "pli-tv-bu-vb-pc90:1.1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.2"
msgid "Tena kho pana samayena bhagavatā bhikkhūnaṃ kaṇḍuppaṭicchādi anuññātā hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.3"
msgid "Chabbaggiyā bhikkhū—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.4"
msgid "“bhagavatā kaṇḍuppaṭicchādi anuññātā”ti appamāṇikāyo kaṇḍuppaṭicchādiyo dhārenti;"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.5"
msgid "puratopi pacchatopi ākaḍḍhantā āhiṇḍanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc90:1.1.6"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.7"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.8"
msgid "“kathañhi nāma chabbaggiyā bhikkhū appamāṇikāyo kaṇḍuppaṭicchādiyo dhāressantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.9"
msgid "“saccaṃ kira tumhe, bhikkhave, appamāṇikāyo kaṇḍuppaṭicchādiyo dhārethā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.10"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.11"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.12"
msgid "kathañhi nāma tumhe, moghapurisā, appamāṇikāyo kaṇḍuppaṭicchādiyo dhāressatha."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.13"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.14"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc90:1.1.15"
msgid "“Kaṇḍuppaṭicchādiṃ pana bhikkhunā kārayamānena pamāṇikā kāretabbā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.16"
msgid "Tatridaṃ pamāṇaṃ—dīghaso catasso vidatthiyo, sugatavidatthiyā; tiriyaṃ dve vidatthiyo."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:1.1.17"
msgid "Taṃ atikkāmayato chedanakaṃ pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc90:2.1.1"
msgid "Kaṇḍuppaṭicchādi nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc90:2.1.2"
msgid "yassa adhonābhi ubbhajāṇumaṇḍalaṃ kaṇḍu vā pīḷakā vā assāvo vā thullakacchu vā ābādho, tassa paṭicchādanatthāya."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc90:2.1.3"
msgid "Kārayamānenāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc90:2.1.4"
msgid "karonto vā kārāpento vā."
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc90:2.1.5"
msgid "Pamāṇikā kāretabbā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.6"
msgid "Tatridaṃ pamāṇaṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.7"
msgid "dīghaso catasso vidatthiyo, sugatavidatthiyā;"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.8"
msgid "tiriyaṃ dve vidatthiyo."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.9"
msgid "Taṃ atikkāmetvā karoti vā kārāpeti vā, payoge dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.10"
msgid "Paṭilābhena chinditvā pācittiyaṃ desetabbaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc90:2.1.11"
msgid "Attanā vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.12"
msgid "Attanā vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.13"
msgid "Parehi vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.14"
msgid "Parehi vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc90:2.1.15"
msgid "Aññassatthāya karoti vā kārāpeti vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.16"
msgid "Aññena kataṃ paṭilabhitvā paribhuñjati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc90:2.1.17"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc90:2.1.18"
msgid "pamāṇikaṃ karoti, ūnakaṃ karoti, aññena kataṃ pamāṇātikkantaṃ paṭilabhitvā chinditvā paribhuñjati, vitānaṃ vā bhūmattharaṇaṃ vā sāṇipākāraṃ vā bhisiṃ vā bibbohanaṃ vā karoti, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc90:2.1.19"
msgid "Kaṇḍuppaṭicchādisikkhāpadaṃ niṭṭhitaṃ aṭṭhamaṃ."
msgstr ""
