msgstr "The chapter on confession"

#. VAR: Ratanavagga → vassi­ka­sāṭika­sikkhā­padaṃ (bj)
msgctxt "pli-tv-bu-vb-pc91:0.4"
msgid "Ratanavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc91:1.1.0"
msgid "91. Vassikasāṭikāsikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pc91:1.1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.2"
msgid "Tena kho pana samayena bhagavatā bhikkhūnaṃ vassikasāṭikā anuññātā hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.3"
msgid "Chabbaggiyā bhikkhū—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.4"
msgid "“bhagavatā vassikasāṭikā anuññātā”ti appamāṇikāyo vassikasāṭikāyo dhārenti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.5"
msgid "Puratopi pacchatopi ākaḍḍhantā āhiṇḍanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc91:1.1.6"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.7"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.8"
msgid "“kathañhi nāma chabbaggiyā bhikkhū appamāṇikāyo vassikasāṭikāyo dhāressantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.9"
msgid "“saccaṃ kira tumhe, bhikkhave, appamāṇikāyo vassikasāṭikāyo dhārethā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.10"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.11"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.12"
msgid "kathañhi nāma tumhe, moghapurisā, appamāṇikāyo vassikasāṭikāyo dhāressatha."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.13"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.14"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc91:1.1.15"
msgid "“Vassikasāṭikaṃ pana bhikkhunā kārayamānena pamāṇikā kāretabbā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.16"
msgid "Tatridaṃ pamāṇaṃ—dīghaso cha vidatthiyo, sugatavidatthiyā; tiriyaṃ aḍḍhateyyā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:1.1.17"
msgid "Taṃ atikkāmayato chedanakaṃ pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4, pts-vp-pli4.173
msgctxt "pli-tv-bu-vb-pc91:2.1.1"
msgid "Vassikasāṭikā nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc91:2.1.2"
msgid "vassānassa catumāsatthāya."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc91:2.1.3"
msgid "Kārayamānenāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc91:2.1.4"
msgid "karonto vā kārāpento vā."
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc91:2.1.5"
msgid "Pamāṇikā kāretabbā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.6"
msgid "Tatridaṃ pamāṇaṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.7"
msgid "dīghaso cha vidatthiyo, sugatavidatthiyā;"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.8"
msgid "tiriyaṃ aḍḍhateyyā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.9"
msgid "Taṃ atikkāmetvā karoti vā kārāpeti vā, payoge dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.10"
msgid "Paṭilābhena chinditvā pācittiyaṃ desetabbaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc91:2.1.11"
msgid "Attanā vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.12"
msgid "Attanā vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.13"
msgid "Parehi vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.14"
msgid "Parehi vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc91:2.1.15"
msgid "Aññassatthāya karoti vā kārāpeti vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.16"
msgid "Aññena kataṃ paṭilabhitvā paribhuñjati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc91:2.1.17"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc91:2.1.18"
msgid "pamāṇikaṃ karoti, ūnakaṃ karoti, aññena kataṃ pamāṇātikkantaṃ paṭilabhitvā chinditvā paribhuñjati, vitānaṃ vā bhūmattharaṇaṃ vā sāṇipākāraṃ vā bhisiṃ vā bibbohanaṃ vā karoti, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc91:2.1.19"
msgid "Vassikasāṭikāsikkhāpadaṃ niṭṭhitaṃ navamaṃ."
msgstr ""
