msgctxt "pli-tv-bu-vb-pc61:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

#. VAR: Sappāṇakavagga → sañ­cicca­pāṇa­sikkhā­padaṃ (bj)
msgctxt "pli-tv-bu-vb-pc61:0.4"
msgid "Sappāṇakavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc61:0.5"
msgid "61. Sañciccasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pc61:1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.2"
msgid "Tena kho pana samayena āyasmā udāyī issāso hoti, kākā cassa amanāpā honti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.3"
msgid "So kāke vijjhitvā vijjhitvā sīsaṃ chinditvā sūle paṭipāṭiyā ṭhapesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.4"
msgid "Bhikkhū evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.5"
msgid "“kenime, āvuso, kākā jīvitā voropitā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.6"
msgid "“Mayā, āvuso."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.7"
msgid "Amanāpā me kākā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc61:1.8"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.9"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.10"
msgid "“kathañhi nāma āyasmā udāyī sañcicca pāṇaṃ jīvitā voropessatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.11"
msgid "“saccaṃ kira tvaṃ, udāyi, sañcicca pāṇaṃ jīvitā voropesī”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.12"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.13"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.14"
msgid "kathañhi nāma tvaṃ, moghapurisa, sañcicca pāṇaṃ jīvitā voropessasi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.15"
msgid "Netaṃ, moghapurisa, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:1.16"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc61:1.17"
msgid "“Yo pana bhikkhu sañcicca pāṇaṃ jīvitā voropeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc61:2.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc61:2.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc61:2.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc61:2.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc61:2.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc61:2.1.6"
msgid "Sañciccāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc61:2.1.7"
msgid "jānanto sañjānanto cecca abhivitaritvā vītikkamo."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc61:2.1.8"
msgid "Pāṇo nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc61:2.1.9"
msgid "tiracchānagatapāṇo vuccati."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc61:2.1.10"
msgid "Jīvitā voropeyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc61:2.1.11"
msgid "jīvitindriyaṃ upacchindati uparodheti santatiṃ vikopeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc8, pts-vp-pli4.125
msgctxt "pli-tv-bu-vb-pc61:2.2.1"
msgid "Pāṇe pāṇasaññī jīvitā voropeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:2.2.2"
msgid "Pāṇe vematiko jīvitā voropeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:2.2.3"
msgid "Pāṇe appāṇasaññī jīvitā voropeti, anāpatti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:2.2.4"
msgid "Appāṇe pāṇasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:2.2.5"
msgid "Appāṇe vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:2.2.6"
msgid "Appāṇe appāṇasaññī, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc61:2.3.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc61:2.3.2"
msgid "asañcicca, assatiyā, ajānantassa, namaraṇādhippāyassa, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc61:2.3.3"
msgid "Sañciccasikkhāpadaṃ niṭṭhitaṃ paṭhamaṃ."
msgstr ""
