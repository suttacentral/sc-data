#. HTML: <section class="sutta" id="pi-tv-bu-vb-pc85"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bu-vb-pc85:0.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pc85:0.2"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p></p><p> 
msgctxt "pli-tv-bu-vb-pc85:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

#. VAR: Ratanavagga → vikāle gāmap­pavesa­na­sikkhā­padaṃ (bj)
msgctxt "pli-tv-bu-vb-pc85:0.4"
msgid "Ratanavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc85:1.1.0"
msgid "85. Vikālagāmappavisanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pc85:1.1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

#. VAR: seyyathidaṃ → imā tiracchā­na­kathāyo 6D.17/16D.201/1; 10M.223/1; 14S5.1080/1; 17A10.69/1; 25Cn.2.135/1; 10M.223/1
msgctxt "pli-tv-bu-vb-pc85:1.1.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū vikāle gāmaṃ pavisitvā sabhāyaṃ nisīditvā anekavihitaṃ tiracchānakathaṃ kathenti, seyyathidaṃ—"
msgstr ""

#. VAR: itthikathaṃ → itthikathaṃ purisakathaṃ (bj, mr) | itthīkathaṃ (s1-3)
msgctxt "pli-tv-bu-vb-pc85:1.1.3"
msgid "rājakathaṃ corakathaṃ mahāmattakathaṃ senākathaṃ bhayakathaṃ yuddhakathaṃ annakathaṃ pānakathaṃ vatthakathaṃ sayanakathaṃ mālākathaṃ gandhakathaṃ ñātikathaṃ yānakathaṃ gāmakathaṃ nigamakathaṃ nagarakathaṃ janapadakathaṃ itthikathaṃ sūrakathaṃ visikhākathaṃ kumbhaṭṭhānakathaṃ pubbapetakathaṃ nānattakathaṃ lokakkhāyikaṃ samuddakkhāyikaṃ itibhavābhavakathaṃ iti vā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.4"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.5"
msgid "“kathañhi nāma samaṇā sakyaputtiyā vikāle gāmaṃ pavisitvā sabhāyaṃ nisīditvā anekavihitaṃ tiracchānakathaṃ kathessanti, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.6"
msgid "rājakathaṃ corakathaṃ … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.7"
msgid "itibhavābhavakathaṃ iti vā, seyyathāpi gihī kāmabhogino”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc85:1.1.8"
msgid "Assosuṃ kho bhikkhū tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.9"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.10"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.11"
msgid "“kathañhi nāma chabbaggiyā bhikkhū vikāle gāmaṃ pavisitvā sabhāyaṃ nisīditvā anekavihitaṃ tiracchānakathaṃ kathessanti, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.12"
msgid "rājakathaṃ corakathaṃ … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.13"
msgid "itibhavābhavakathaṃ iti vā”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.14"
msgid "“saccaṃ kira tumhe, bhikkhave, vikāle gāmaṃ pavisitvā sabhāyaṃ nisīditvā anekavihitaṃ tiracchānakathaṃ kathetha, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.15"
msgid "rājakathaṃ corakathaṃ … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.16"
msgid "itibhavābhavakathaṃ iti vā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.17"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.18"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.19"
msgid "kathañhi nāma tumhe, moghapurisā, vikāle gāmaṃ pavisitvā sabhāyaṃ nisīditvā anekavihitaṃ tiracchānakathaṃ kathessatha, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.20"
msgid "rājakathaṃ corakathaṃ … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.21"
msgid "itibhavābhavakathaṃ iti vā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.22"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:1.1.23"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3, pts-vp-pli4.165
msgctxt "pli-tv-bu-vb-pc85:1.1.24"
msgid "“Yo pana bhikkhu vikāle gāmaṃ paviseyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc85:1.1.25"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc85:2.1.1"
msgid "Tena kho pana samayena sambahulā bhikkhū kosalesu janapade sāvatthiṃ gacchantā sāyaṃ aññataraṃ gāmaṃ upagacchiṃsu."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.2"
msgid "Manussā te bhikkhū passitvā etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.3"
msgid "“pavisatha, bhante”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.4"
msgid "Atha kho te bhikkhū—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.5"
msgid "“bhagavatā paṭikkhittaṃ vikāle gāmaṃ pavisitun”ti kukkuccāyantā na pavisiṃsu."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.6"
msgid "Corā te bhikkhū acchindiṃsu."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.7"
msgid "Atha kho te bhikkhū sāvatthiṃ gantvā bhikkhūnaṃ etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.8"
msgid "Bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.9"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.10"
msgid "“anujānāmi, bhikkhave, āpucchā vikāle gāmaṃ pavisituṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:2.1.11"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc85:2.1.12"
msgid "“Yo pana bhikkhu anāpucchā vikāle gāmaṃ paviseyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc85:2.1.13"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc85:3.1.1"
msgid "Tena kho pana samayena aññataro bhikkhu kosalesu janapade sāvatthiṃ gacchanto sāyaṃ aññataraṃ gāmaṃ upagacchi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.2"
msgid "Manussā taṃ bhikkhuṃ passitvā etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.3"
msgid "“pavisatha, bhante”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.4"
msgid "Atha kho so bhikkhu—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.5"
msgid "“bhagavatā paṭikkhittaṃ anāpucchā vikāle gāmaṃ pavisitun”ti kukkuccāyanto na pāvisi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.6"
msgid "Corā taṃ bhikkhuṃ acchindiṃsu."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.7"
msgid "Atha kho so bhikkhu sāvatthiṃ gantvā bhikkhūnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.8"
msgid "Bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.9"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.10"
msgid "“anujānāmi, bhikkhave, santaṃ bhikkhuṃ āpucchā vikāle gāmaṃ pavisituṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:3.1.11"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc85:3.1.12"
msgid "“Yo pana bhikkhu santaṃ bhikkhuṃ anāpucchā vikāle gāmaṃ paviseyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc85:3.1.13"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc11, pts-vp-pli4.166
msgctxt "pli-tv-bu-vb-pc85:4.1.1"
msgid "Tena kho pana samayena aññataro bhikkhu ahinā daṭṭho hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:4.1.2"
msgid "Aññataro bhikkhu “aggiṃ āharissāmī”ti gāmaṃ gacchati."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:4.1.3"
msgid "Atha kho so bhikkhu—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:4.1.4"
msgid "“bhagavatā paṭikkhittaṃ santaṃ bhikkhuṃ anāpucchā vikāle gāmaṃ pavisitun”ti kukkuccāyanto na pāvisi … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:4.1.5"
msgid "bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:4.1.6"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:4.1.7"
msgid "“anujānāmi, bhikkhave, tathārūpe accāyike karaṇīye santaṃ bhikkhuṃ anāpucchā vikāle gāmaṃ pavisituṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:4.1.8"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc12
msgctxt "pli-tv-bu-vb-pc85:4.1.9"
msgid "“Yo pana bhikkhu santaṃ bhikkhuṃ anāpucchā vikāle gāmaṃ paviseyya, aññatra tathārūpā accāyikā karaṇīyā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc13
msgctxt "pli-tv-bu-vb-pc85:5.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc85:5.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc85:5.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc85:5.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc85:5.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc14
msgctxt "pli-tv-bu-vb-pc85:5.1.6"
msgid "Santo nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc85:5.1.7"
msgid "bhikkhu sakkā hoti āpucchā pavisituṃ."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc15
msgctxt "pli-tv-bu-vb-pc85:5.1.8"
msgid "Asanto nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc85:5.1.9"
msgid "bhikkhu na sakkā hoti āpucchā pavisituṃ."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc16
msgctxt "pli-tv-bu-vb-pc85:5.1.10"
msgid "Vikālo nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc85:5.1.11"
msgid "majjhanhike vītivatte yāva aruṇuggamanā."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc17
msgctxt "pli-tv-bu-vb-pc85:5.1.12"
msgid "Gāmaṃ paviseyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc85:5.1.13"
msgid "parikkhittassa gāmassa parikkhepaṃ atikkamantassa āpatti pācittiyassa."
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc85:5.1.14"
msgid "Aparikkhittassa gāmassa upacāraṃ okkamantassa āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc18
msgctxt "pli-tv-bu-vb-pc85:5.1.15"
msgid "Aññatra tathārūpā accāyikā karaṇīyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc85:5.1.16"
msgid "ṭhapetvā tathārūpaṃ accāyikaṃ karaṇīyaṃ."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc19
msgctxt "pli-tv-bu-vb-pc85:5.2.1"
msgid "Vikāle vikālasaññī santaṃ bhikkhuṃ anāpucchā gāmaṃ pavisati, aññatra tathārūpā accāyikā karaṇīyā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:5.2.2"
msgid "Vikāle vematiko santaṃ bhikkhuṃ anāpucchā gāmaṃ pavisati, aññatra tathārūpā accāyikā karaṇīyā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:5.2.3"
msgid "Vikāle kālasaññī santaṃ bhikkhuṃ anāpucchā gāmaṃ pavisati, aññatra tathārūpā accāyikā karaṇīyā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc20
msgctxt "pli-tv-bu-vb-pc85:5.2.4"
msgid "Kāle vikālasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:5.2.5"
msgid "Kāle vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:5.2.6"
msgid "Kāle kālasaññī, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-bu-vb-pc85:5.3.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc85:5.3.2"
msgid "tathārūpe accāyike karaṇīye, santaṃ bhikkhuṃ āpucchā pavisati, asantaṃ bhikkhuṃ anāpucchā pavisati, antarārāmaṃ gacchati, bhikkhunupassayaṃ gacchati, titthiyaseyyaṃ gacchati, paṭikkamanaṃ gacchati, gāmena maggo hoti, āpadāsu, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc22
msgctxt "pli-tv-bu-vb-pc85:5.3.3"
msgid "Vikālagāmappavisanasikkhāpadaṃ niṭṭhitaṃ tatiyaṃ."
msgstr ""
