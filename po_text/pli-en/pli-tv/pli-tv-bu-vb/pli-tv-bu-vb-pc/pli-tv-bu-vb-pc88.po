msgstr "The chapter on confession"

msgctxt "pli-tv-bu-vb-pc88:0.4"
msgid "Ratanavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc88:1.1.0"
msgid "88. Tūlonaddhasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pc88:1.1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū mañcampi pīṭhampi tūlonaddhaṃ kārāpenti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.3"
msgid "Manussā vihāracārikaṃ āhiṇḍantā passitvā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.4"
msgid "“kathañhi nāma samaṇā sakyaputtiyā mañcampi pīṭhampi tūlonaddhaṃ kārāpessanti, seyyathāpi gihī kāmabhogino”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc88:1.1.5"
msgid "Assosuṃ kho bhikkhū tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.6"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.7"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.8"
msgid "“kathañhi nāma chabbaggiyā bhikkhū mañcampi pīṭhampi tūlonaddhaṃ kārāpessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.9"
msgid "“saccaṃ kira tumhe, bhikkhave, mañcampi pīṭhampi tūlonaddhaṃ kārāpethā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.10"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.11"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.12"
msgid "kathañhi nāma tumhe, moghapurisā, mañcampi pīṭhampi tūlonaddhaṃ kārāpessatha."
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.13"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:1.1.14"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc88:1.1.15"
msgid "“Yo pana bhikkhu mañcaṃ vā pīṭhaṃ vā tūlonaddhaṃ kārāpeyya, uddālanakaṃ pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc88:2.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc88:2.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc88:2.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc88:2.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc88:2.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc88:2.1.6"
msgid "Mañco nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc88:2.1.7"
msgid "cattāro mañcā—"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc88:2.1.8"
msgid "masārako, bundikābaddho, kuḷīrapādako, āhaccapādako."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc88:2.1.9"
msgid "Pīṭhaṃ nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc88:2.1.10"
msgid "cattāri pīṭhāni—"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc88:2.1.11"
msgid "masārakaṃ, bundikābaddhaṃ, kuḷīrapādakaṃ, āhaccapādakaṃ."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc7, pts-vp-pli4.170
msgctxt "pli-tv-bu-vb-pc88:2.1.12"
msgid "Tūlaṃ nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc88:2.1.13"
msgid "tīṇi tūlāni—"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc88:2.1.14"
msgid "rukkhatūlaṃ, latātūlaṃ, poṭakitūlaṃ."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc88:2.1.15"
msgid "Kārāpeyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc88:2.1.16"
msgid "karoti vā kārāpeti vā, payoge dukkaṭaṃ."
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc88:2.1.17"
msgid "Paṭilābhena uddāletvā pācittiyaṃ desetabbaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc88:2.1.18"
msgid "Attanā vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:2.1.19"
msgid "Attanā vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:2.1.20"
msgid "Parehi vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:2.1.21"
msgid "Parehi vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc88:2.1.22"
msgid "Aññassatthāya karoti vā kārāpeti vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:2.1.23"
msgid "Aññena kataṃ paṭilabhitvā paribhuñjati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bu-vb-pc88:2.2.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc88:2.2.2"
msgid "āyoge, kāyabandhane, aṃsabaddhake, pattatthavikāya, parissāvane, bibbohanaṃ karoti, aññena kataṃ paṭilabhitvā uddāletvā paribhuñjati, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc12
msgctxt "pli-tv-bu-vb-pc88:2.2.3"
msgid "Tūlonaddhasikkhāpadaṃ niṭṭhitaṃ chaṭṭhaṃ."
msgstr ""
