msgctxt "pli-tv-bu-vb-pc73:0.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pc73:0.2"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p></p><p>
msgctxt "pli-tv-bu-vb-pc73:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

msgctxt "pli-tv-bu-vb-pc73:0.4"
msgid "Sahadhammikavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc73:1.1.0"
msgid "73. Mohanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pc73:1.1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū anācāraṃ ācaritvā “aññāṇakena āpannāti jānantū”ti pātimokkhe uddissamāne evaṃ vadanti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.3"
msgid "“idāneva kho mayaṃ jānāma, ayampi kira dhammo suttāgato suttapariyāpanno anvaddhamāsaṃ uddesaṃ āgacchatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc73:1.1.4"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.5"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.6"
msgid "“kathañhi nāma chabbaggiyā bhikkhū pātimokkhe uddissamāne evaṃ vakkhanti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.7"
msgid "‘idāneva kho mayaṃ jānāma, ayampi kira dhammo suttāgato suttapariyāpanno anvaddhamāsaṃ uddesaṃ āgacchatī’”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.8"
msgid "“saccaṃ kira tumhe, bhikkhave, pātimokkhe uddissamāne evaṃ vadetha—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.9"
msgid "‘idāneva kho mayaṃ jānāma, ayampi kira dhammo suttāgato suttapariyāpanno anvaddhamāsaṃ uddesaṃ āgacchatī’”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.10"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.11"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.12"
msgid "kathañhi nāma tumhe, moghapurisā, pātimokkhe uddissamāne evaṃ vakkhatha—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.13"
msgid "‘idāneva kho mayaṃ jānāma, ayampi kira dhammo suttāgato suttapariyāpanno anvaddhamāsaṃ uddesaṃ āgacchatī’ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.14"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.15"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc73:1.1.16"
msgid "“Yo pana bhikkhu anvaddhamāsaṃ pātimokkhe uddissamāne evaṃ vadeyya—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.17"
msgid "‘idāneva kho ahaṃ jānāmi, ayampi kira dhammo suttāgato suttapariyāpanno anvaddhamāsaṃ uddesaṃ āgacchatī’ti."
msgstr ""

#. VAR: bhiyyo → bhiyyoti (s1-3) 
#. VAR: uttari cassa → uttariṃ cassa (bj) | uttariñcassa (s1-3)
msgctxt "pli-tv-bu-vb-pc73:1.1.18"
msgid "Tañce bhikkhuṃ aññe bhikkhū jāneyyuṃ nisinnapubbaṃ iminā bhikkhunā dvattikkhattuṃ pātimokkhe uddissamāne, ko pana vādo bhiyyo, na ca tassa bhikkhuno aññāṇakena mutti atthi, yañca tattha āpattiṃ āpanno tañca yathādhammo kāretabbo, uttari cassa moho āropetabbo—"
msgstr ""

#. VAR: manasi karosī’ti → manasikarosīti (s1-3, pts1) 
#. VAR: aṭṭhiṃ katvā → aṭṭhikatvā (bj, s1-3, pts1, mr)
msgctxt "pli-tv-bu-vb-pc73:1.1.19"
msgid "‘tassa te, āvuso, alābhā, tassa te dulladdhaṃ, yaṃ tvaṃ pātimokkhe uddissamāne na sādhukaṃ aṭṭhiṃ katvā manasi karosī’ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:1.1.20"
msgid "Idaṃ tasmiṃ mohanake pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4, pts-vp-pli4.145
msgctxt "pli-tv-bu-vb-pc73:2.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc73:2.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc73:2.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc73:2.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc73:2.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc73:2.1.6"
msgid "Anvaddhamāsanti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc73:2.1.7"
msgid "anuposathikaṃ."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc73:2.1.8"
msgid "Pātimokkhe uddissamāneti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc73:2.1.9"
msgid "uddisante."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc73:2.1.10"
msgid "Evaṃ vadeyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc73:2.1.11"
msgid "anācāraṃ ācaritvā—"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc73:2.1.12"
msgid "“aññāṇakena āpannoti jānantū”ti pātimokkhe uddissamāne evaṃ vadeti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.13"
msgid "“idāneva kho ahaṃ jānāmi, ayampi kira dhammo suttāgato suttapariyāpanno anvaddhamāsaṃ uddesaṃ āgacchatī”ti, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc73:2.1.14"
msgid "Tañce mohetukāmaṃ bhikkhuṃ aññe bhikkhū jāneyyuṃ nisinnapubbaṃ iminā bhikkhunā dvattikkhattuṃ pātimokkhe uddissamāne, ko pana vādo bhiyyo, na ca tassa bhikkhuno aññāṇakena mutti atthi, yañca tattha āpattiṃ āpanno, tañca yathādhammo kāretabbo, uttari cassa moho āropetabbo."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.15"
msgid "“Evañca pana, bhikkhave, āropetabbo."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.16"
msgid "Byattena bhikkhunā paṭibalena saṃgho ñāpetabbo—"
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc73:2.1.17"
msgid "‘Suṇātu me, bhante, saṃgho."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.18"
msgid "Ayaṃ itthannāmo bhikkhu pātimokkhe uddissamāne na sādhukaṃ aṭṭhiṃ katvā manasi karoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.19"
msgid "Yadi saṃghassa pattakallaṃ, saṃgho itthannāmassa bhikkhuno mohaṃ āropeyya."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.20"
msgid "Esā ñatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc73:2.1.21"
msgid "Suṇātu me, bhante, saṃgho."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.22"
msgid "Ayaṃ itthannāmo bhikkhu pātimokkhe uddissamāne na sādhukaṃ aṭṭhiṃ katvā manasi karoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.23"
msgid "Saṃgho itthannāmassa bhikkhuno mohaṃ āropeti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.24"
msgid "Yassāyasmato khamati itthannāmassa bhikkhuno mohassa āropanā, so tuṇhassa;"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.25"
msgid "yassa nakkhamati, so bhāseyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bu-vb-pc73:2.1.26"
msgid "Āropito saṃghena itthannāmassa bhikkhuno moho."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.27"
msgid "Khamati saṃghassa, tasmā tuṇhī, evametaṃ dhārayāmī’”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bu-vb-pc73:2.1.28"
msgid "Anāropite mohe moheti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.1.29"
msgid "Āropite mohe moheti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bu-vb-pc73:2.2.1"
msgid "Dhammakamme dhammakammasaññī moheti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.2.2"
msgid "Dhammakamme vematiko moheti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.2.3"
msgid "Dhammakamme adhammakammasaññī moheti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-bu-vb-pc73:2.2.4"
msgid "Adhammakamme dhammakammasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.2.5"
msgid "Adhammakamme vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.2.6"
msgid "Adhammakamme adhammakammasaññī, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-bu-vb-pc73:2.3.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc73:2.3.2"
msgid "na vitthārena sutaṃ hoti, ūnakadvattikkhattuṃ vitthārena sutaṃ hoti, na mohetukāmassa, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc16
msgctxt "pli-tv-bu-vb-pc73:2.3.3"
msgid "Mohanasikkhāpadaṃ niṭṭhitaṃ tatiyaṃ."
msgstr ""
