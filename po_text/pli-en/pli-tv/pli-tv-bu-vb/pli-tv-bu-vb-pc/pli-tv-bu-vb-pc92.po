#. HTML: <section class="sutta" id="pi-tv-bu-vb-pc92"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bu-vb-pc92:0.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pc92:0.2"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p></p><p> 
msgctxt "pli-tv-bu-vb-pc92:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

#. VAR: Ratanavagga → nandat­thera­sikkhā­padaṃ (bj)
msgctxt "pli-tv-bu-vb-pc92:0.4"
msgid "Ratanavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc92:1.1.0"
msgid "92. Nandasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pc92:1.1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

#. VAR: bhagavatā → bhagavato (bj, pts1, mr)
msgctxt "pli-tv-bu-vb-pc92:1.1.2"
msgid "Tena kho pana samayena āyasmā nando bhagavato mātucchāputto abhirūpo hoti dassanīyo pāsādiko caturaṅgulomako bhagavatā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.3"
msgid "So sugatacīvarappamāṇaṃ cīvaraṃ dhāreti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.4"
msgid "Addasaṃsu kho therā bhikkhū āyasmantaṃ nandaṃ dūratova āgacchantaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.5"
msgid "Disvāna—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.6"
msgid "“bhagavā āgacchatī”ti āsanā vuṭṭhahanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
#. VAR: upagate jānitvā → upagate sañjānitvā (bj) | upagataṃ sañjānitvā (s1-3)
msgctxt "pli-tv-bu-vb-pc92:1.1.7"
msgid "Te upagate jānitvā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.8"
msgid "“kathañhi nāma āyasmā nando sugatacīvarappamāṇaṃ cīvaraṃ dhāressatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.9"
msgid "“saccaṃ kira tvaṃ, nanda, sugatacīvarappamāṇaṃ cīvaraṃ dhāresī”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.10"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.11"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.12"
msgid "kathañhi nāma tvaṃ, nanda, sugatacīvarappamāṇaṃ cīvaraṃ dhāressasi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.13"
msgid "Netaṃ, nanda, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.14"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc92:1.1.15"
msgid "“Yo pana bhikkhu sugatacīvarappamāṇaṃ cīvaraṃ kārāpeyya atirekaṃ vā, chedanakaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.16"
msgid "Tatridaṃ sugatassa sugatacīvarappamāṇaṃ—dīghaso nava vidatthiyo, sugatavidatthiyā; tiriyaṃ cha vidatthiyo."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:1.1.17"
msgid "Idaṃ sugatassa sugatacīvarappamāṇan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc92:2.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc92:2.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc92:2.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc92:2.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc92:2.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc92:2.1.6"
msgid "Sugatacīvarappamāṇaṃ nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc92:2.1.7"
msgid "dīghaso nava vidatthiyo, sugatavidatthiyā;"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc92:2.1.8"
msgid "tiriyaṃ cha vidatthiyo."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc92:2.1.9"
msgid "Kārāpeyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc92:2.1.10"
msgid "karoti vā kārāpeti vā, payoge dukkaṭaṃ."
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc92:2.1.11"
msgid "Paṭilābhena chinditvā pācittiyaṃ desetabbaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc92:2.1.12"
msgid "Attanā vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.1.13"
msgid "Attanā vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.1.14"
msgid "Parehi vippakataṃ attanā pariyosāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.1.15"
msgid "Parehi vippakataṃ parehi pariyosāpeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc92:2.1.16"
msgid "Aññassatthāya karoti vā kārāpeti vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.1.17"
msgid "Aññena kataṃ paṭilabhitvā paribhuñjati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc9, pts-vp-pli4.174
msgctxt "pli-tv-bu-vb-pc92:2.2.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.2.2"
msgid "ūnakaṃ karoti, aññena kataṃ paṭilabhitvā chinditvā paribhuñjati, vitānaṃ vā bhūmattharaṇaṃ vā sāṇipākāraṃ vā bhisiṃ vā bibbohanaṃ vā karoti, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc92:2.2.3"
msgid "Nandasikkhāpadaṃ niṭṭhitaṃ dasamaṃ."
msgstr ""

#. HTML: <br> 
#. VAR: Ratanavaggo → rājavaggo (bj)
msgctxt "pli-tv-bu-vb-pc92:2.2.4"
msgid "Ratanavaggo navamo."
msgstr ""

#. HTML: </p><p class="endsection summary">
#. REF: sc11
msgctxt "pli-tv-bu-vb-pc92:2.2.5"
msgid "Tassuddānaṃ"
msgstr ""

#. HTML: </p><blockquote class="uddanagatha"><p>
#. REF: sc12
msgctxt "pli-tv-bu-vb-pc92:2.2.6"
msgid "Rañño ca ratanaṃ santaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-bu-vb-pc92:2.2.7"
msgid "sūci mañcañca tūlikaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-bu-vb-pc92:2.2.8"
msgid "Nisīdanañca kaṇḍuñca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-bu-vb-pc92:2.2.9"
msgid "vassikā sugatena cāti."
msgstr ""

#. HTML: </p></blockquote><p>
#. REF: sc13
msgctxt "pli-tv-bu-vb-pc92:2.2.10"
msgid "Uddiṭṭhā kho, āyasmanto, dvenavuti pācittiyā dhammā."
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.2.11"
msgid "Tatthāyasmante pucchāmi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.2.12"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.2.13"
msgid "Dutiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.2.14"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.2.15"
msgid "Tatiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.2.16"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc92:2.2.17"
msgid "Parisuddhetthāyasmanto, tasmā tuṇhī, evametaṃ dhārayāmīti."
msgstr ""

#. HTML: </p><p class="endsection">
#. REF: sc14
msgctxt "pli-tv-bu-vb-pc92:2.2.18"
msgid "Khuddakaṃ samattaṃ."
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-bu-vb-pc92:2.2.19"
msgid "Pācittiyakaṇḍaṃ niṭṭhitaṃ."
msgstr ""
