msgctxt "pli-tv-bu-vb-pc71:0.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pc71:0.2"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p></p><p>
msgctxt "pli-tv-bu-vb-pc71:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

msgctxt "pli-tv-bu-vb-pc71:0.4"
msgid "Sahadhammikavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc71:1.1.0"
msgid "71. Sahadhammikasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.141
msgctxt "pli-tv-bu-vb-pc71:1.1.1"
msgid "Tena samayena buddho bhagavā kosambiyaṃ viharati ghositārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.2"
msgid "Tena kho pana samayena āyasmā channo anācāraṃ ācarati."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.3"
msgid "Bhikkhū evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.4"
msgid "“māvuso channa, evarūpaṃ akāsi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.5"
msgid "Netaṃ kappatī”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.6"
msgid "So evaṃ vadeti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.7"
msgid "“na tāvāhaṃ, āvuso, etasmiṃ sikkhāpade sikkhissāmi yāva na aññaṃ bhikkhuṃ byattaṃ vinayadharaṃ paripucchāmī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc71:1.1.8"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.9"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.10"
msgid "“kathañhi nāma āyasmā channo bhikkhūhi sahadhammikaṃ vuccamāno evaṃ vakkhati—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.11"
msgid "‘na tāvāhaṃ, āvuso, etasmiṃ sikkhāpade sikkhissāmi yāva na aññaṃ bhikkhuṃ byattaṃ vinayadharaṃ paripucchāmī’”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.12"
msgid "“saccaṃ kira tvaṃ, channa, bhikkhūhi sahadhammikaṃ vuccamāno evaṃ vadesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.13"
msgid "‘na tāvāhaṃ, āvuso, etasmiṃ sikkhāpade sikkhissāmi yāva na aññaṃ bhikkhuṃ byattaṃ vinayadharaṃ paripucchāmī’”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.14"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.15"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.16"
msgid "kathañhi nāma tvaṃ, moghapurisa, bhikkhūhi sahadhammikaṃ vuccamāno evaṃ vakkhasi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.17"
msgid "‘na tāvāhaṃ, āvuso, etasmiṃ sikkhāpade sikkhissāmi yāva na aññaṃ bhikkhuṃ byattaṃ vinayadharaṃ paripucchāmī’ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.18"
msgid "Netaṃ, moghapurisa, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.19"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc71:1.1.20"
msgid "“Yo pana bhikkhu bhikkhūhi sahadhammikaṃ vuccamāno evaṃ vadeyya—‘na tāvāhaṃ, āvuso, etasmiṃ sikkhāpade sikkhissāmi yāva na aññaṃ bhikkhuṃ byattaṃ vinayadharaṃ paripucchāmī’ti, pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:1.1.21"
msgid "Sikkhamānena, bhikkhave, bhikkhunā aññātabbaṃ paripucchitabbaṃ paripañhitabbaṃ. Ayaṃ tattha sāmīcī”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc71:2.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc71:2.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc71:2.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc71:2.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc71:2.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc71:2.1.6"
msgid "Bhikkhūhīti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc71:2.1.7"
msgid "aññehi bhikkhūhi."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc71:2.1.8"
msgid "Sahadhammikaṃ nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc71:2.1.9"
msgid "yaṃ bhagavatā paññattaṃ sikkhāpadaṃ etaṃ sahadhammikaṃ nāma."
msgstr ""

#. HTML: </b>
#. VAR: ti → imāni padāni s1-3 potthakesu na 
#. VAR: vadeti → vadeyyāti (bj, mr)
msgctxt "pli-tv-bu-vb-pc71:2.1.10"
msgid "Tena vuccamāno evaṃ vadeti—"
msgstr ""

#. VAR: byattaṃ → imāni padāni s1-3 potthakesu na
msgctxt "pli-tv-bu-vb-pc71:2.1.11"
msgid "“na tāvāhaṃ, āvuso, etasmiṃ sikkhāpade sikkhissāmi yāva na aññaṃ bhikkhuṃ byattaṃ vinayadharaṃ paripucchāmī”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:2.1.12"
msgid "Paṇḍitaṃ byattaṃ medhāviṃ bahussutaṃ dhammakathikaṃ paripucchāmīti bhaṇati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7, pts-vp-pli4.142
msgctxt "pli-tv-bu-vb-pc71:2.2.1"
msgid "Upasampanne upasampannasaññī evaṃ vadeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:2.2.2"
msgid "Upasampanne vematiko evaṃ vadeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:2.2.3"
msgid "Upasampanne anupasampannasaññī evaṃ vadeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc71:2.2.4"
msgid "Apaññattena vuccamāno—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:2.2.5"
msgid "“idaṃ na sallekhāya na dhutatthāya na pāsādikatāya na apacayāya na vīriyārambhāya saṃvattatī”ti evaṃ vadeti, “na tāvāhaṃ, āvuso, etasmiṃ sikkhāpade sikkhissāmi yāva na aññaṃ bhikkhuṃ byattaṃ vinayadharaṃ paṇḍitaṃ medhāviṃ bahussutaṃ dhammakathikaṃ paripucchāmī”ti bhaṇati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc71:2.2.6"
msgid "Anupasampannena paññattena vā apaññattena vā vuccamāno—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:2.2.7"
msgid "“idaṃ na sallekhāya na dhutatthāya na pāsādikatāya na apacayāya na vīriyārambhāya saṃvattatī”ti evaṃ vadeti, “na tāvāhaṃ, āvuso, etasmiṃ sikkhāpade sikkhissāmi yāva na aññaṃ bhikkhuṃ byattaṃ vinayadharaṃ paṇḍitaṃ medhāviṃ bahussutaṃ dhammakathikaṃ paripucchāmī”ti bhaṇati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:2.2.8"
msgid "Anupasampanne upasampannasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:2.2.9"
msgid "Anupasampanne vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:2.2.10"
msgid "Anupasampanne anupasampannasaññī, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc71:2.2.11"
msgid "Sikkhamānenāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc71:2.2.12"
msgid "sikkhitukāmena."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc11
msgctxt "pli-tv-bu-vb-pc71:2.2.13"
msgid "Aññātabbanti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc71:2.2.14"
msgid "jānitabbaṃ."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc12
msgctxt "pli-tv-bu-vb-pc71:2.2.15"
msgid "Paripucchitabbanti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc71:2.2.16"
msgid "“idaṃ, bhante, kathaṃ;"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc71:2.2.17"
msgid "imassa vā kvattho”ti?"
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc13
msgctxt "pli-tv-bu-vb-pc71:2.2.18"
msgid "Paripañhitabbanti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc71:2.2.19"
msgid "cintetabbaṃ tulayitabbaṃ."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc14
msgctxt "pli-tv-bu-vb-pc71:2.2.20"
msgid "Ayaṃ tattha sāmīcīti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc71:2.2.21"
msgid "ayaṃ tattha anudhammatā."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc15
msgctxt "pli-tv-bu-vb-pc71:2.3.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc71:2.3.2"
msgid "“jānissāmi sikkhissāmī”ti bhaṇati, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc16
msgctxt "pli-tv-bu-vb-pc71:2.3.3"
msgid "Sahadhammikasikkhāpadaṃ niṭṭhitaṃ paṭhamaṃ."
msgstr ""
