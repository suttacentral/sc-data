msgid "bhaṇitassa hoti musā mayā bhaṇitanti,"
msgstr "after he has lied, he knows he has lied;"

msgctxt "pli-tv-bu-vb-pj4:5.1.38"
msgid "vinidhāya diṭṭhiṃ,"
msgstr "he misrepresents his view of what is true;"

msgctxt "pli-tv-bu-vb-pj4:5.1.39"
msgid "vinidhāya khantiṃ,"
msgstr "he misrepresents his belief of what is true;"

msgctxt "pli-tv-bu-vb-pj4:5.1.40"
msgid "vinidhāya ruciṃ,"
msgstr "he misrepresents his acceptance of what is true;"

msgctxt "pli-tv-bu-vb-pj4:5.1.41"
msgid "vinidhāya bhāvaṃ."
msgstr "he misrepresents his sentiment of what is true."

