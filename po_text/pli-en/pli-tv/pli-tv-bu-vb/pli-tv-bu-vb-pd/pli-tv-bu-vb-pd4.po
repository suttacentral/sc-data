#. HTML: <section class="sutta" id="pli-tv-bu-vb-pd4"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bu-vb-pd4:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pd4:2.1"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pd4:3.1"
msgid "Pāṭidesanīyakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pd4:4.1"
msgid "4. Catutthapāṭidesanīyasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.182
msgctxt "pli-tv-bu-vb-pd4:5.1"
msgid "Tena samayena buddho bhagavā sakkesu viharati kapilavatthusmiṃ nigrodhārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:5.2"
msgid "Tena kho pana samayena sākiyadāsakā avaruddhā honti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:5.3"
msgid "Sākiyāniyo icchanti āraññakesu senāsanesu bhattaṃ kātuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:5.4"
msgid "Assosuṃ kho sākiyadāsakā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:5.5"
msgid "“sākiyāniyo kira āraññakesu senāsanesu bhattaṃ kattukāmā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:5.6"
msgid "Te magge pariyuṭṭhiṃsu."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:5.7"
msgid "Sākiyāniyo paṇītaṃ khādanīyaṃ bhojanīyaṃ ādāya āraññakaṃ senāsanaṃ agamaṃsu."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:5.8"
msgid "Sākiyadāsakā nikkhamitvā sākiyāniyo acchindiṃsu ca dūsesuñca."
msgstr ""

#. VAR: sabhaṇḍe → saha bhaṇḍena (pts1, mr)
msgctxt "pli-tv-bu-vb-pd4:5.9"
msgid "Sākiyā nikkhamitvā te core sabhaṇḍe gahetvā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:5.10"
msgid "“kathañhi nāma bhadantā ārāme core paṭivasante nārocessantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pd4:6.1"
msgid "Assosuṃ kho bhikkhū sākiyānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:6.2"
msgid "Atha kho te bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:6.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:6.4"
msgid "“tena hi, bhikkhave, bhikkhūnaṃ sikkhāpadaṃ paññapessāmi dasa atthavase paṭicca saṃghasuṭṭhutāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:6.5"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: senāsanesu → senāsanesu viharanto (bj, s1-3)
msgctxt "pli-tv-bu-vb-pd4:7.1"
msgid "“Yāni kho pana tāni āraññakāni senāsanāni sāsaṅkasammatāni sappaṭibhayāni, yo pana bhikkhu tathārūpesu senāsanesu pubbe appaṭisaṃviditaṃ khādanīyaṃ vā bhojanīyaṃ vā ajjhārāme sahatthā paṭiggahetvā khādeyya vā bhuñjeyya vā, paṭidesetabbaṃ tena bhikkhunā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:7.2"
msgid "‘gārayhaṃ, āvuso, dhammaṃ āpajjiṃ asappāyaṃ pāṭidesanīyaṃ taṃ paṭidesemī’”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc4
msgctxt "pli-tv-bu-vb-pd4:8.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bu-vb-pd4:9.1"
msgid "Tena kho pana samayena aññataro bhikkhu āraññakesu senāsanesu gilāno hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:9.2"
msgid "Manussā khādanīyaṃ vā bhojanīyaṃ vā ādāya āraññakaṃ senāsanaṃ agamaṃsu."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:9.3"
msgid "Atha kho te manussā taṃ bhikkhuṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:9.4"
msgid "“bhuñjatha, bhante”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:9.5"
msgid "Atha kho so bhikkhu—"
msgstr ""

#. VAR: carituṃ → pavisituṃ (pts1, mr)
msgctxt "pli-tv-bu-vb-pd4:9.6"
msgid "“bhagavatā paṭikkhittaṃ āraññakesu senāsanesu khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādituṃ bhuñjitun”ti kukkuccāyanto na paṭiggahesi, nāsakkhi piṇḍāya carituṃ, chinnabhatto ahosi."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bu-vb-pd4:10.1"
msgid "Atha kho so bhikkhu bhikkhūnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:10.2"
msgid "Bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:10.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:10.4"
msgid "“anujānāmi, bhikkhave, gilānena bhikkhunā āraññakesu senāsanesu pubbe appaṭisaṃviditaṃ khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādituṃ bhuñjituṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:10.5"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc7, pts-vp-pli4.183
#. VAR: senāsanesu pubbe → senāsanesu viharanto pubbe (bj, s1-3)
msgctxt "pli-tv-bu-vb-pd4:11.1"
msgid "“Yāni kho pana tāni āraññakāni senāsanāni sāsaṅkasammatāni sappaṭibhayāni, yo pana bhikkhu tathārūpesu senāsanesu pubbe appaṭisaṃviditaṃ khādanīyaṃ vā bhojanīyaṃ vā ajjhārāme sahatthā paṭiggahetvā agilāno khādeyya vā bhuñjeyya vā, paṭidesetabbaṃ tena bhikkhunā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:11.2"
msgid "‘gārayhaṃ, āvuso, dhammaṃ āpajjiṃ asappāyaṃ pāṭidesanīyaṃ, taṃ paṭidesemī’”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pd4:12.1"
msgid "Yāni kho pana tāni āraññakāni senāsanānīti"
msgstr ""

#. HTML: </b><b>
msgctxt "pli-tv-bu-vb-pd4:12.2"
msgid "āraññakaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:12.3"
msgid "senāsanaṃ pañcadhanusatikaṃ pacchimaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bu-vb-pd4:13.1"
msgid "Sāsaṅkaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:13.2"
msgid "ārāme ārāmūpacāre corānaṃ niviṭṭhokāso dissati, bhuttokāso dissati, ṭhitokāso dissati, nisinnokāso dissati, nipannokāso dissati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bu-vb-pd4:14.1"
msgid "Sappaṭibhayaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:14.2"
msgid "ārāme ārāmūpacāre corehi manussā hatā dissanti, viluttā dissanti, ākoṭitā dissanti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bu-vb-pd4:15.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:15.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bu-vb-pd4:15.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:15.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:15.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc12
msgctxt "pli-tv-bu-vb-pd4:16.1"
msgid "Tathārūpesu senāsanesūti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:16.2"
msgid "evarūpesu senāsanesu."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
#. VAR: etaṃ → etampi (bj)+. HTML: <b>
msgctxt "pli-tv-bu-vb-pd4:17.1"
msgid "Appaṭisaṃviditaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:17.2"
msgid "pañcannaṃ paṭisaṃviditaṃ, etaṃ appaṭisaṃviditaṃ nāma."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:17.3"
msgid "Ārāmaṃ ārāmūpacāraṃ ṭhapetvā paṭisaṃviditaṃ, etaṃ appaṭisaṃviditaṃ nāma."
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-bu-vb-pd4:18.1"
msgid "Paṭisaṃviditaṃ nāma yo koci itthī vā puriso vā ārāmaṃ ārāmūpacāraṃ āgantvā āroceti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.2"
msgid "“itthannāmassa, bhante, khādanīyaṃ vā bhojanīyaṃ vā āharissantī”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.3"
msgid "Sace sāsaṅkaṃ hoti, sāsaṅkanti ācikkhitabbaṃ;"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.4"
msgid "sace sappaṭibhayaṃ hoti, sappaṭibhayanti ācikkhitabbaṃ;"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.5"
msgid "sace—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.6"
msgid "“hotu, bhante, āhariyissatī”ti bhaṇati, corā vattabbā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.7"
msgid "“manussā idhūpacaranti apasakkathā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.8"
msgid "Yāguyā paṭisaṃvidite tassā parivāro āhariyyati, etaṃ paṭisaṃviditaṃ nāma."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.9"
msgid "Bhattena paṭisaṃvidite tassa parivāro āhariyyati, etaṃ paṭisaṃviditaṃ nāma."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.10"
msgid "Khādanīyena paṭisaṃvidite tassa parivāro āhariyyati, etaṃ paṭisaṃviditaṃ nāma."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.11"
msgid "Kulena paṭisaṃvidite yo tasmiṃ kule manusso khādanīyaṃ vā bhojanīyaṃ vā āharati, etaṃ paṭisaṃviditaṃ nāma."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.12"
msgid "Gāmena paṭisaṃvidite yo tasmiṃ gāme manusso khādanīyaṃ vā bhojanīyaṃ vā āharati, etaṃ paṭisaṃviditaṃ nāma."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:18.13"
msgid "Pūgena paṭisaṃvidite yo tasmiṃ pūge manusso khādanīyaṃ vā bhojanīyaṃ vā āharati, etaṃ paṭisaṃviditaṃ nāma."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc15
msgctxt "pli-tv-bu-vb-pd4:19.1"
msgid "Khādanīyaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:19.2"
msgid "pañca bhojanāni—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:19.3"
msgid "yāmakālikaṃ sattāhakālikaṃ yāvajīvikaṃ ṭhapetvā avasesaṃ khādanīyaṃ nāma."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc16
msgctxt "pli-tv-bu-vb-pd4:20.1"
msgid "Bhojanīyaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:20.2"
msgid "pañca bhojanāni—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:20.3"
msgid "odano, kummāso, sattu, maccho, maṃsaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc17
msgctxt "pli-tv-bu-vb-pd4:21.1"
msgid "Ajjhārāmo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:21.2"
msgid "parikkhittassa ārāmassa antoārāmo."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:21.3"
msgid "Aparikkhittassa upacāro."
msgstr ""

#. HTML: </p><p>
#. REF: sc18
#. VAR: carituṃ → gantuṃ (pts1, mr)+. HTML: <b>
msgctxt "pli-tv-bu-vb-pd4:22.1"
msgid "Agilāno nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:22.2"
msgid "sakkoti piṇḍāya carituṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
#. VAR: carituṃ → gantuṃ (pts1, mr)+. HTML: <b>
msgctxt "pli-tv-bu-vb-pd4:23.1"
msgid "Gilāno nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd4:23.2"
msgid "na sakkoti piṇḍāya carituṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc20, pts-vp-pli4.184
msgctxt "pli-tv-bu-vb-pd4:24.1"
msgid "Appaṭisaṃviditaṃ agilāno “khādissāmi bhuñjissāmī”ti paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:24.2"
msgid "Ajjhohāre ajjhohāre āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-bu-vb-pd4:25.1"
msgid "Appaṭisaṃvidite appaṭisaṃviditasaññī khādanīyaṃ vā bhojanīyaṃ vā ajjhārāme sahatthā paṭiggahetvā agilāno khādati vā bhuñjati vā, āpatti pāṭidesanīyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:25.2"
msgid "Appaṭisaṃvidite vematiko khādanīyaṃ vā bhojanīyaṃ vā ajjhārāme sahatthā paṭiggahetvā agilāno khādati vā bhuñjati vā, āpatti pāṭidesanīyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:25.3"
msgid "Appaṭisaṃvidite paṭisaṃviditasaññī khādanīyaṃ vā bhojanīyaṃ vā ajjhārāme sahatthā paṭiggahetvā agilāno khādati vā bhuñjati vā, āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc22
msgctxt "pli-tv-bu-vb-pd4:26.1"
msgid "Yāmakālikaṃ sattāhakālikaṃ yāvajīvikaṃ āhāratthāya paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:26.2"
msgid "Ajjhohāre ajjhohāre āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:26.3"
msgid "Paṭisaṃvidite appaṭisaṃviditasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:26.4"
msgid "Paṭisaṃvidite vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:26.5"
msgid "Paṭisaṃvidite paṭisaṃviditasaññī, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc23
msgctxt "pli-tv-bu-vb-pd4:27.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:27.2"
msgid "paṭisaṃvidite, gilānassa, paṭisaṃvidite vā gilānassa vā sesakaṃ bhuñjati, bahārāme paṭiggahetvā antoārāme bhuñjati, tattha jātakaṃ mūlaṃ vā tacaṃ vā pattaṃ vā pupphaṃ vā phalaṃ vā bhuñjati, yāmakālikaṃ sattāhakālikaṃ yāvajīvikaṃ sati paccaye paribhuñjati, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc24
msgctxt "pli-tv-bu-vb-pd4:28.1"
msgid "Catutthapāṭidesanīyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc25
msgctxt "pli-tv-bu-vb-pd4:29.1"
msgid "Uddiṭṭhā kho, āyasmanto, cattāro pāṭidesanīyā dhammā."
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:29.2"
msgid "Tatthāyasmante pucchāmi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:29.3"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:29.4"
msgid "Dutiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:29.5"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:29.6"
msgid "Tatiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:29.7"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bu-vb-pd4:29.8"
msgid "Parisuddhetthāyasmanto, tasmā tuṇhī, evametaṃ dhārayāmīti."
msgstr ""

#. HTML: </p><p class="endsection">
#. REF: sc26
msgctxt "pli-tv-bu-vb-pd4:30.1"
msgid "Pāṭidesanīyakaṇḍaṃ niṭṭhitaṃ."
msgstr ""
