#. HTML: <section class="sutta" id="pli-tv-bu-vb-pd2"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bu-vb-pd2:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pd2:2.1"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pd2:3.1"
msgid "Pāṭidesanīyakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pd2:4.1"
msgid "2. Dutiyapāṭidesanīyasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pd2:5.1"
msgid "Tena samayena buddho bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:5.2"
msgid "Tena kho pana samayena bhikkhū kulesu nimantitā bhuñjanti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:5.3"
msgid "Chabbaggiyā bhikkhuniyo chabbaggiyānaṃ bhikkhūnaṃ vosāsantiyo ṭhitā honti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:5.4"
msgid "“idha sūpaṃ detha, idha odanaṃ dethā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:5.5"
msgid "Chabbaggiyā bhikkhū yāvadatthaṃ bhuñjanti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:5.6"
msgid "Aññe bhikkhū na cittarūpaṃ bhuñjanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pd2:6.1"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:6.2"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:6.3"
msgid "“kathañhi nāma chabbaggiyā bhikkhū bhikkhuniyo vosāsantiyo na nivāressantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:6.4"
msgid "“saccaṃ kira tumhe, bhikkhave, bhikkhuniyo vosāsantiyo na nivārethā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:6.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:6.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:6.7"
msgid "kathañhi nāma tumhe, moghapurisā, bhikkhuniyo vosāsantiyo na nivāressatha."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:6.8"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:6.9"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: tatra ce sā → tatra ce (s1-3)
msgctxt "pli-tv-bu-vb-pd2:7.1"
msgid "“Bhikkhū paneva kulesu nimantitā bhuñjanti, tatra ce sā bhikkhunī vosāsamānarūpā ṭhitā hoti—‘idha sūpaṃ detha, idha odanaṃ dethā’ti, tehi bhikkhūhi sā bhikkhunī apasādetabbā—"
msgstr ""

#. VAR: bhuñjantī’ti → bhuñjanti (bj)
msgctxt "pli-tv-bu-vb-pd2:7.2"
msgid "‘apasakka tāva, bhagini, yāva bhikkhū bhuñjantī’ti."
msgstr ""

#. VAR: Ekassa cepi → ekassapi ce (bj, s1-3)
#. VAR: na paṭibhāseyya → nappaṭibhāseyya (bj, s1-3)
msgctxt "pli-tv-bu-vb-pd2:7.3"
msgid "Ekassa cepi bhikkhuno na paṭibhāseyya taṃ bhikkhuniṃ apasādetuṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:7.4"
msgid "‘apasakka tāva, bhagini, yāva bhikkhū bhuñjantī’ti paṭidesetabbaṃ tehi bhikkhūhi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:7.5"
msgid "‘gārayhaṃ, āvuso, dhammaṃ āpajjimhā asappāyaṃ pāṭidesanīyaṃ, taṃ paṭidesemā’”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bu-vb-pd2:8.1"
msgid "Bhikkhū paneva kulesu nimantitā bhuñjantīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd2:8.2"
msgid "kulaṃ nāma cattāri kulāni—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:8.3"
msgid "khattiyakulaṃ, brāhmaṇakulaṃ, vessakulaṃ, suddakulaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bu-vb-pd2:9.1"
msgid "Nimantitā bhuñjantīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd2:9.2"
msgid "pañcannaṃ bhojanānaṃ aññatarena bhojanena nimantitā bhuñjanti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bu-vb-pd2:10.1"
msgid "Bhikkhunī nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd2:10.2"
msgid "ubhatosaṃghe upasampannā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7, pts-vp-pli4.178
msgctxt "pli-tv-bu-vb-pd2:11.1"
msgid "Vosāsantī nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd2:11.2"
msgid "yathāmittatā yathāsandiṭṭhatā yathāsambhattatā yathāsamānupajjhāyakatā yathāsamānācariyakatā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:11.3"
msgid "“idha sūpaṃ detha, idha odanaṃ dethā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:11.4"
msgid "Esā vosāsantī nāma."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pd2:12.1"
msgid "Tehi bhikkhūhīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd2:12.2"
msgid "bhuñjamānehi bhikkhūhi."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bu-vb-pd2:13.1"
msgid "Sā bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd2:13.2"
msgid "yā sā vosāsantī bhikkhunī."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bu-vb-pd2:14.1"
msgid "Tehi bhikkhūhi sā bhikkhunī apasādetabbā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:14.2"
msgid "“apasakka tāva, bhagini, yāva bhikkhū bhuñjantī”ti."
msgstr ""

#. VAR: Ekassa cepi → ekassapi ce (bj, s1-3)
#. VAR: anapasādito → anapasādite (bj, s1-3, pts1)
msgctxt "pli-tv-bu-vb-pd2:14.3"
msgid "Ekassa cepi bhikkhuno anapasādito—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:14.4"
msgid "“khādissāmi bhuñjissāmī”ti paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:14.5"
msgid "Ajjhohāre ajjhohāre āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bu-vb-pd2:15.1"
msgid "Upasampannāya upasampannasaññī vosāsantiyā na nivāreti, āpatti pāṭidesanīyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:15.2"
msgid "Upasampannāya vematiko vosāsantiyā na nivāreti, āpatti pāṭidesanīyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:15.3"
msgid "Upasampannāya anupasampannasaññī vosāsantiyā na nivāreti, āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bu-vb-pd2:16.1"
msgid "Ekatoupasampannāya vosāsantiyā na nivāreti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:16.2"
msgid "Anupasampannāya upasampannasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:16.3"
msgid "Anupasampannāya vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:16.4"
msgid "Anupasampannāya anupasampannasaññī, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bu-vb-pd2:17.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd2:17.2"
msgid "attano bhattaṃ dāpeti na deti, aññesaṃ bhattaṃ deti na dāpeti, yaṃ na dinnaṃ taṃ dāpeti, yattha na dinnaṃ tattha dāpeti, sabbesaṃ samakaṃ dāpeti, sikkhamānā vosāsati, sāmaṇerī vosāsati, pañca bhojanāni ṭhapetvā sabbattha, anāpatti, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc14
msgctxt "pli-tv-bu-vb-pd2:18.1"
msgid "Dutiyapāṭidesanīyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
