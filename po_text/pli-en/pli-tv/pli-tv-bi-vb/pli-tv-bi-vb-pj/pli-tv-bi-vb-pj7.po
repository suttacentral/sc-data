#. HTML: <section class="sutta" id="pli-tv-bi-vb-pj7"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pj7:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pj7:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pj7:3.1"
msgid "Pārājikakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pj7:4.1"
msgid "7. Ukkhittānuvattikāsikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.218
msgctxt "pli-tv-bi-vb-pj7:5.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:5.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī samaggena saṃghena ukkhittaṃ ariṭṭhaṃ bhikkhuṃ gaddhabādhipubbaṃ anuvattati."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pj7:6.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:6.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:6.3"
msgid "“kathañhi nāma ayyā thullanandā samaggena saṃghena ukkhittaṃ ariṭṭhaṃ bhikkhuṃ gaddhabādhipubbaṃ anuvattissatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:6.4"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī samaggena saṃghena ukkhittaṃ ariṭṭhaṃ bhikkhuṃ gaddhabādhipubbaṃ anuvattatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:6.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:6.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:6.7"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī samaggena saṃghena ukkhittaṃ ariṭṭhaṃ bhikkhuṃ gaddhabādhipubbaṃ anuvattissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:6.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:6.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: appaṭikāraṃ → appatikāraṃ (bj) | apaṭikāraṃ (pts1)
msgctxt "pli-tv-bi-vb-pj7:7.1"
msgid "“Yā pana bhikkhunī samaggena saṃghena ukkhittaṃ bhikkhuṃ dhammena vinayena satthusāsanena anādaraṃ appaṭikāraṃ akatasahāyaṃ tamanuvatteyya, sā bhikkhunī bhikkhunīhi evamassa vacanīyā—"
msgstr ""

#. VAR: appaṭikāro → appatikāro (bj) | apaṭikāro (pts1)
msgctxt "pli-tv-bi-vb-pj7:7.2"
msgid "‘eso kho, ayye, bhikkhu samaggena saṃghena ukkhitto dhammena vinayena satthusāsanena anādaro appaṭikāro akatasahāyo, māyye, etaṃ bhikkhuṃ anuvattī’ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:7.3"
msgid "Evañca sā bhikkhunī bhikkhunīhi vuccamānā tatheva paggaṇheyya, sā bhikkhunī bhikkhunīhi yāvatatiyaṃ samanubhāsitabbā tassa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:7.4"
msgid "Yāvatatiyañce samanubhāsiyamānā taṃ paṭinissajjeyya, iccetaṃ kusalaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:7.5"
msgid "No ce paṭinissajjeyya, ayampi pārājikā hoti asaṃvāsā ukkhittānuvattikā”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pj7:8.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:8.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pj7:8.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:8.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:8.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pj7:9.1"
msgid "Samaggo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:9.2"
msgid "saṃgho samānasaṃvāsako samānasīmāyaṃ ṭhito."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
#. VAR: adassane vā appaṭikamme vā appaṭinissagge vā → adassane vā appaṭikamme vā diṭṭhiyā appaṭinissagge vā (bj) | adassanena vā appaṭikammena vā appaṭinissaggena vā (pts1, mr) | adassane vā appaṭikamme vā pāpikāya diṭṭhiyā appaṭinissagge vā (?)+. HTML: <b>
msgctxt "pli-tv-bi-vb-pj7:10.1"
msgid "Ukkhitto nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:10.2"
msgid "āpattiyā adassane vā appaṭikamme vā appaṭinissagge vā ukkhitto."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pj7:11.1"
msgid "Dhammena vinayenāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:11.2"
msgid "yena dhammena yena vinayena."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pj7:12.1"
msgid "Satthusāsanenāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:12.2"
msgid "jinasāsanena buddhasāsanena."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pj7:13.1"
msgid "Anādaro nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:13.2"
msgid "saṃghaṃ vā gaṇaṃ vā puggalaṃ vā kammaṃ vā nādiyati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pj7:14.1"
msgid "Appaṭikāro nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:14.2"
msgid "ukkhitto anosārito."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11, pts-vp-pli4.219
msgctxt "pli-tv-bi-vb-pj7:15.1"
msgid "Akatasahāyo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:15.2"
msgid "samānasaṃvāsakā bhikkhū vuccanti sahāyā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:15.3"
msgid "So tehi saddhiṃ natthi, tena vuccati akatasahāyoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pj7:16.1"
msgid "Tamanuvatteyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:16.2"
msgid "yaṃdiṭṭhiko so hoti yaṃkhantiko yaṃruciko, sāpi taṃdiṭṭhikā hoti taṃkhantikā taṃrucikā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pj7:17.1"
msgid "Sā bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:17.2"
msgid "yā sā ukkhittānuvattikā bhikkhunī."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc14
msgctxt "pli-tv-bi-vb-pj7:18.1"
msgid "Bhikkhunīhīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:18.2"
msgid "aññāhi bhikkhunīhi."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.3"
msgid "Yā passanti yā suṇanti tāhi vattabbā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.4"
msgid "“eso kho, ayye, bhikkhu samaggena saṃghena ukkhitto dhammena vinayena satthusāsanena anādaro appaṭikāro akatasahāyo."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.5"
msgid "Māyye, etaṃ bhikkhuṃ anuvattī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.6"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.7"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.8"
msgid "Sace paṭinissajjati, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.9"
msgid "no ce paṭinissajjati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.10"
msgid "Sutvā na vadanti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.11"
msgid "Sā bhikkhunī saṃghamajjhampi ākaḍḍhitvā vattabbā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.12"
msgid "“eso kho, ayye, bhikkhu samaggena saṃghena ukkhitto dhammena vinayena satthusāsanena anādaro appaṭikāro akatasahāyo."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.13"
msgid "Māyye, etaṃ bhikkhuṃ anuvattīti."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.14"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.15"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.16"
msgid "Sace paṭinissajjati, iccetaṃ kusalaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.17"
msgid "No ce paṭinissajjati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.18"
msgid "Sā bhikkhunī samanubhāsitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.19"
msgid "Evañca pana, bhikkhave, samanubhāsitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:18.20"
msgid "Byattāya bhikkhuniyā paṭibalāya saṃgho ñāpetabbo—"
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-bi-vb-pj7:19.1"
msgid "‘Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:19.2"
msgid "Ayaṃ itthannāmā bhikkhunī samaggena saṃghena ukkhittaṃ bhikkhuṃ dhammena vinayena satthusāsanena anādaraṃ appaṭikāraṃ akatasahāyaṃ tamanuvattati, sā taṃ vatthuṃ na paṭinissajjati."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:19.3"
msgid "Yadi saṃghassa pattakallaṃ, saṃgho itthannāmaṃ bhikkhuniṃ samanubhāseyya tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:19.4"
msgid "Esā ñatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc16
msgctxt "pli-tv-bi-vb-pj7:20.1"
msgid "Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:20.2"
msgid "Ayaṃ itthannāmā bhikkhunī samaggena saṃghena ukkhittaṃ bhikkhuṃ dhammena vinayena satthusāsanena anādaraṃ appaṭikāraṃ akatasahāyaṃ tamanuvattati."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:20.3"
msgid "Sā taṃ vatthuṃ na paṭinissajjati."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:20.4"
msgid "Saṃgho itthannāmaṃ bhikkhuniṃ samanubhāsati tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:20.5"
msgid "Yassā ayyāya khamati itthannāmāya bhikkhuniyā samanubhāsanā tassa vatthussa paṭinissaggāya, sā tuṇhassa;"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:20.6"
msgid "yassā nakkhamati, sā bhāseyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc17
msgctxt "pli-tv-bi-vb-pj7:21.1"
msgid "Dutiyampi etamatthaṃ vadāmi … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:21.2"
msgid "tatiyampi etamatthaṃ vadāmi …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:21.3"
msgid "pe …."
msgstr ""

#. HTML: </p><p>
#. REF: sc18
msgctxt "pli-tv-bi-vb-pj7:22.1"
msgid "Samanubhaṭṭhā saṃghena itthannāmā bhikkhunī tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:22.2"
msgid "Khamati saṃghassa, tasmā tuṇhī, evametaṃ dhārayāmī’”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-bi-vb-pj7:23.1"
msgid "Ñattiyā dukkaṭaṃ, dvīhi kammavācāhi thullaccayā, kammavācā pariyosāne āpatti pārājikassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc20
msgctxt "pli-tv-bi-vb-pj7:24.1"
msgid "Ayampīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:24.2"
msgid "purimāyo upādāya vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc21, pts-vp-pli4.220
msgctxt "pli-tv-bi-vb-pj7:25.1"
msgid "Pārājikā hotīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:25.2"
msgid "seyyathāpi nāma puthusilā dvedhā bhinnā appaṭisandhikā hoti, evameva bhikkhunī yāvatatiyaṃ samanubhāsanāya na paṭinissajjantī assamaṇī hoti asakyadhītā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:25.3"
msgid "Tena vuccati pārājikā hotīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc22
msgctxt "pli-tv-bi-vb-pj7:26.1"
msgid "Asaṃvāsāti"
msgstr ""

#. HTML: </b><b>
msgctxt "pli-tv-bi-vb-pj7:26.2"
msgid "saṃvāso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj7:26.3"
msgid "ekakammaṃ ekuddeso samasikkhatā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:26.4"
msgid "Eso saṃvāso nāma."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:26.5"
msgid "So tāya saddhiṃ natthi."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:26.6"
msgid "Tena vuccati asaṃvāsāti."
msgstr ""

#. HTML: </p><p>
#. REF: sc23
msgctxt "pli-tv-bi-vb-pj7:27.1"
msgid "Dhammakamme dhammakammasaññā na paṭinissajjati, āpatti pārājikassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:27.2"
msgid "Dhammakamme vematikā na paṭinissajjati, āpatti pārājikassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:27.3"
msgid "Dhammakamme adhammakammasaññā na paṭinissajjati, āpatti pārājikassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc24
msgctxt "pli-tv-bi-vb-pj7:28.1"
msgid "Adhammakamme dhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:28.2"
msgid "Adhammakamme vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:28.3"
msgid "Adhammakamme adhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc25
msgctxt "pli-tv-bi-vb-pj7:29.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:29.2"
msgid "asamanubhāsantiyā, paṭinissajjantiyā, ummattikāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj7:29.3"
msgid "ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc26
msgctxt "pli-tv-bi-vb-pj7:30.1"
msgid "Tatiyapārājikaṃ samattaṃ."
msgstr ""
