#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc87:5.1"
msgid "87. Itthālaṅkārasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc87:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:6.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhuniyo itthālaṅkāraṃ dhārenti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:6.3"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:6.4"
msgid "“kathañhi nāma bhikkhuniyo itthālaṅkāraṃ dhāressanti, seyyathāpi gihiniyo kāmabhoginiyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc87:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:7.4"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo itthālaṅkāraṃ dhāressantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:7.5"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo itthālaṅkāraṃ dhārentī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:7.8"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo itthālaṅkāraṃ dhāressanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc87:8.1"
msgid "“Yā pana bhikkhunī itthālaṅkāraṃ dhāreyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc87:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc87:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc87:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc87:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc87:10.1"
msgid "Itthālaṅkāro nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc87:10.2"
msgid "sīsūpago gīvūpago hatthūpago pādūpago kaṭūpago."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc87:10.3"
msgid "Dhāreyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc87:10.4"
msgid "sakimpi dhāreti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc87:11.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc87:11.2"
msgid "ābādhappaccayā, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc87:12.1"
msgid "Catutthasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
