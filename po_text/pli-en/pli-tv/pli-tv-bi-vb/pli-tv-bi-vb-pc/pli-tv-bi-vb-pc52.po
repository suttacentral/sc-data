#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc52:5.1"
msgid "52. Bhikkhuakkosanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc52:6.1"
msgid "Tena samayena buddho bhagavā vesāliyaṃ viharati mahāvane kūṭāgārasālāyaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.2"
msgid "Tena kho pana samayena āyasmato upālissa upajjhāyo āyasmā kappitako susāne viharati."
msgstr ""

#. VAR: mahattarā → mahantatarā (bj) | mahatarā (pts1)
msgctxt "pli-tv-bi-vb-pc52:6.3"
msgid "Tena kho pana samayena chabbaggiyānaṃ bhikkhunīnaṃ mahattarā bhikkhunī kālaṅkatā hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.4"
msgid "Chabbaggiyā bhikkhuniyo taṃ bhikkhuniṃ nīharitvā āyasmato kappitakassa vihārassa avidūre jhāpetvā thūpaṃ katvā gantvā tasmiṃ thūpe rodanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.5"
msgid "Atha kho āyasmā kappitako tena saddena ubbāḷho taṃ thūpaṃ bhinditvā pakiresi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.6"
msgid "Chabbaggiyā bhikkhuniyo—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.7"
msgid "“iminā kappitakena amhākaṃ ayyāya thūpo bhinno, handa naṃ ghātemā”ti mantesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.8"
msgid "Aññatarā bhikkhunī āyasmato upālissa etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.9"
msgid "Āyasmā upāli āyasmato kappitakassa etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.10"
msgid "Atha kho āyasmā kappitako vihārā nikkhamitvā nilīno acchi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.11"
msgid "Atha kho chabbaggiyā bhikkhuniyo yenāyasmato kappitakassa vihāro tenupasaṅkamiṃsu;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:6.12"
msgid "upasaṅkamitvā āyasmato kappitakassa vihāraṃ pāsāṇehi ca leḍḍūhi ca ottharāpetvā, “mato kappitako”ti pakkamiṃsu."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc52:7.1"
msgid "Atha kho āyasmā kappitako tassā rattiyā accayena pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya vesāliṃ piṇḍāya pāvisi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:7.2"
msgid "Addasaṃsu kho chabbaggiyā bhikkhuniyo āyasmantaṃ kappitakaṃ piṇḍāya carantaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:7.3"
msgid "Disvāna evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:7.4"
msgid "“ayaṃ kappitako jīvati, ko nu kho amhākaṃ mantaṃ saṃharī”ti?"
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc52:8.1"
msgid "Assosuṃ kho chabbaggiyā bhikkhuniyo—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:8.2"
msgid "“ayyena kira upālinā amhākaṃ manto saṃhaṭo”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:8.3"
msgid "Tā āyasmantaṃ upāliṃ akkosiṃsu—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:8.4"
msgid "“kathañhi nāma ayaṃ kāsāvaṭo malamajjano nihīnajacco amhākaṃ mantaṃ saṃharissatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc4, pts-vp-pli4.309
msgctxt "pli-tv-bi-vb-pc52:9.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:9.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:9.3"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo ayyaṃ upāliṃ akkosissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:9.4"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo upāliṃ akkosantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:9.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:9.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:9.7"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo upāliṃ akkosissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:9.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:9.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc52:10.1"
msgid "“Yā pana bhikkhunī bhikkhuṃ akkoseyya vā paribhāseyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc52:11.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc52:11.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc52:11.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc52:11.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:11.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc52:12.1"
msgid "Bhikkhunti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc52:12.2"
msgid "upasampannaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc52:12.3"
msgid "Akkoseyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc52:12.4"
msgid "dasahi vā akkosavatthūhi akkosati etesaṃ vā aññatarena, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc52:13.1"
msgid "Paribhāseyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc52:13.2"
msgid "bhayaṃ upadaṃseti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc52:14.1"
msgid "Upasampanne upasampannasaññā akkosati vā paribhāsati vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:14.2"
msgid "Upasampanne vematikā akkosati vā paribhāsati vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:14.3"
msgid "Upasampanne anupasampannasaññā akkosati vā paribhāsati vā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc52:15.1"
msgid "Anupasampannaṃ akkosati vā paribhāsati vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:15.2"
msgid "Anupasampanne upasampannasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:15.3"
msgid "Anupasampanne vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:15.4"
msgid "Anupasampanne anupasampannasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc52:16.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc52:16.2"
msgid "atthapurekkhārāya, dhammapurekkhārāya, anusāsanipurekkhārāya, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc52:17.1"
msgid "Dutiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
