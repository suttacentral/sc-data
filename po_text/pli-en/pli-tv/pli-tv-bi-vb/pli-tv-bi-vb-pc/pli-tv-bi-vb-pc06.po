#. HTML: <section class="sutta" id="pli-tv-bi-vb-pc6"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pc6:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc6:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc6:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc6:4.1"
msgid "Lasuṇavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc6:5.1"
msgid "6. Upatiṭṭhanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc6:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:6.2"
msgid "Tena kho pana samayena ārohanto nāma mahāmatto bhikkhūsu pabbajito hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:6.3"
msgid "Tassa purāṇadutiyikā bhikkhunīsu pabbajitā hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:6.4"
msgid "Tena kho pana samayena so bhikkhu tassā bhikkhuniyā santike bhattavissaggaṃ karoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:6.5"
msgid "Atha kho sā bhikkhunī tassa bhikkhuno bhuñjantassa pānīyena ca vidhūpanena ca upatiṭṭhitvā accāvadati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:6.6"
msgid "Atha kho so bhikkhu taṃ bhikkhuniṃ apasādeti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:6.7"
msgid "“mā, bhagini, evarūpaṃ akāsi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:6.8"
msgid "Netaṃ kappatī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:6.9"
msgid "“Pubbe maṃ tvaṃ evañca evañca karosi, idāni ettakaṃ na sahasī”ti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:6.10"
msgid "pānīyathālakaṃ matthake āsumbhitvā vidhūpanena pahāraṃ adāsi."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc6:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:7.3"
msgid "“kathañhi nāma bhikkhunī bhikkhussa pahāraṃ dassatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:7.4"
msgid "“saccaṃ kira, bhikkhave, bhikkhunī bhikkhussa pahāraṃ adāsī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:7.7"
msgid "kathañhi nāma, bhikkhave, bhikkhunī bhikkhussa pahāraṃ dassati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc6:8.1"
msgid "“Yā pana bhikkhunī bhikkhussa bhuñjantassa pānīyena vā vidhūpanena vā upatiṭṭheyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc6:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc6:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc6:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc6:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc6:10.1"
msgid "Bhikkhussāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc6:10.2"
msgid "upasampannassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc6:11.1"
msgid "Bhuñjantassāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc6:11.2"
msgid "pañcannaṃ bhojanānaṃ aññataraṃ bhojanaṃ bhuñjantassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc6:12.1"
msgid "Pānīyaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc6:12.2"
msgid "yaṃ kiñci pānīyaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc6:13.1"
msgid "Vidhūpanaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc6:13.2"
msgid "yā kāci bījanī."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc6:14.1"
msgid "Upatiṭṭheyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc6:14.2"
msgid "hatthapāse tiṭṭhati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc10, pts-vp-pli4.264
msgctxt "pli-tv-bi-vb-pc6:15.1"
msgid "Upasampanne upasampannasaññā pānīyena vā vidhūpanena vā upatiṭṭhati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:15.2"
msgid "Upasampanne vematikā pānīyena vā vidhūpanena vā upatiṭṭhati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:15.3"
msgid "Upasampanne anupasampannasaññā pānīyena vā vidhūpanena vā upatiṭṭhati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc6:16.1"
msgid "Hatthapāsaṃ vijahitvā upatiṭṭhati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:16.2"
msgid "Khādanīyaṃ khādantassa upatiṭṭhati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:16.3"
msgid "Anupasampannassa upatiṭṭhati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:16.4"
msgid "Anupasampanne upasampannasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:16.5"
msgid "Anupasampanne vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:16.6"
msgid "Anupasampanne anupasampannasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc6:17.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc6:17.2"
msgid "deti, dāpeti, anupasampannaṃ āṇāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc6:18.1"
msgid "Chaṭṭhasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
