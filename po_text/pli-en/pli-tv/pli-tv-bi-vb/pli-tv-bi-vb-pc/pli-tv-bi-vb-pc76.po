msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc76:5.1"
msgid "76. Khīyanadhammasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc76:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:6.2"
msgid "Tena kho pana samayena caṇḍakāḷī bhikkhunī bhikkhunisaṃghaṃ upasaṅkamitvā vuṭṭhāpanasammutiṃ yācati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:6.3"
msgid "Atha kho bhikkhunisaṃgho caṇḍakāḷiṃ bhikkhuniṃ paricchinditvā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:6.4"
msgid "“alaṃ tāva te, ayye, vuṭṭhāpitenā”ti, vuṭṭhāpanasammutiṃ na adāsi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:6.5"
msgid "Caṇḍakāḷī bhikkhunī “sādhū”ti paṭissuṇi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:6.6"
msgid "Tena kho pana samayena bhikkhunisaṃgho aññāsaṃ bhikkhunīnaṃ vuṭṭhāpanasammutiṃ deti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:6.7"
msgid "Caṇḍakāḷī bhikkhunī ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:6.8"
msgid "“ahameva nūna bālā, ahameva nūna alajjinī;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:6.9"
msgid "yaṃ saṃgho aññāsaṃ bhikkhunīnaṃ vuṭṭhāpanasammutiṃ deti, mayhameva na detī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc76:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:7.3"
msgid "“kathañhi nāma ayyā caṇḍakāḷī—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:7.4"
msgid "‘alaṃ tāva te, ayye, vuṭṭhāpitenā’ti vuccamānā ‘sādhū’ti paṭissuṇitvā pacchā khīyanadhammaṃ āpajjissatī”ti … pe …"
msgstr ""

#. VAR: āpajjatī”ti → āpajjīti (pts1, mr)
msgctxt "pli-tv-bi-vb-pc76:7.5"
msgid "“saccaṃ kira, bhikkhave, caṇḍakāḷī bhikkhunī ‘alaṃ tāva te, ayye, vuṭṭhāpitenā’ti vuccamānā ‘sādhū’ti paṭissuṇitvā pacchā khīyanadhammaṃ āpajjatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:7.8"
msgid "kathañhi nāma, bhikkhave, caṇḍakāḷī bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:7.9"
msgid "‘alaṃ tāva te, ayye, vuṭṭhāpitenā’ti vuccamānā ‘sādhū’ti paṭissuṇitvā pacchā khīyanadhammaṃ āpajjissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:7.10"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:7.11"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: alaṃ tāva → alantāva (s1-3)
msgctxt "pli-tv-bi-vb-pc76:8.1"
msgid "“Yā pana bhikkhunī—‘alaṃ tāva te, ayye, vuṭṭhāpitenā’ti vuccamānā ‘sādhū’ti paṭissuṇitvā pacchā khīyanadhammaṃ āpajjeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc76:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc76:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc76:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc76:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc76:10.1"
msgid "Alaṃ tāva te, ayye, vuṭṭhāpitenāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc76:10.2"
msgid "alaṃ tāva te, ayye, upasampāditena."
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:10.3"
msgid "“Sādhū”ti paṭissuṇitvā pacchā khīyanadhammaṃ āpajjati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc76:11.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc76:11.2"
msgid "pakatiyā chandā dosā mohā bhayā karontaṃ khiyyati, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc76:12.1"
msgid "Chaṭṭhasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
