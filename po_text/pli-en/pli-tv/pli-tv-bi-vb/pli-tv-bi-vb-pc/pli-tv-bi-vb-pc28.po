msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc28:5.1"
msgid "28. Cīvaradānasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc28:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

#. VAR: kumbhathūṇikānampi → kumbhathūnikānaṃpi (s1-3) | kumbhathuṇikānampi (mr)
#. VAR: sokajjhāyikānampi → sokasāyikānampi (bj)
msgctxt "pli-tv-bi-vb-pc28:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī naṭānampi naṭakānampi laṅghakānampi sokajjhāyikānampi kumbhathūṇikānampi samaṇacīvaraṃ deti—"
msgstr ""

#. VAR: parisati → parisatiṃ (bj)
msgctxt "pli-tv-bi-vb-pc28:6.3"
msgid "“mayhaṃ parisati vaṇṇaṃ bhāsathā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:6.4"
msgid "Naṭāpi naṭakāpi laṅghakāpi sokajjhāyikāpi kumbhathūṇikāpi thullanandāya bhikkhuniyā parisati vaṇṇaṃ bhāsanti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:6.5"
msgid "“ayyā thullanandā bahussutā bhāṇikā visāradā paṭṭā dhammiṃ kathaṃ kātuṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:6.6"
msgid "detha ayyāya, karotha ayyāyā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc28:7.1"
msgid "Yā tā bhikkhuniyo appicchā, tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:7.2"
msgid "“kathañhi nāma ayyā thullanandā agārikassa samaṇacīvaraṃ dassatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:7.3"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī agārikassa samaṇacīvaraṃ detī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:7.4"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:7.5"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:7.6"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī agārikassa samaṇacīvaraṃ dassati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:7.7"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:7.8"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: agārikassa → āgārikassa (s1-3)
msgctxt "pli-tv-bi-vb-pc28:8.1"
msgid "“Yā pana bhikkhunī agārikassa vā paribbājakassa vā paribbājikāya vā samaṇacīvaraṃ dadeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc28:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc28:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc28:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc28:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc28:10.1"
msgid "Agāriko nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc28:10.2"
msgid "yo koci agāraṃ ajjhāvasati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc28:11.1"
msgid "Paribbājako nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc28:11.2"
msgid "bhikkhuñca sāmaṇerañca ṭhapetvā yo koci paribbājakasamāpanno."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc28:12.1"
msgid "Paribbājikā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc28:12.2"
msgid "bhikkhuniñca sikkhamānañca sāmaṇeriñca ṭhapetvā yā kāci paribbājikasamāpannā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8, pts-vp-pli4.286
msgctxt "pli-tv-bi-vb-pc28:13.1"
msgid "Samaṇacīvaraṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc28:13.2"
msgid "kappakataṃ vuccati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:13.3"
msgid "Deti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc28:14.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc28:14.2"
msgid "mātāpitūnaṃ deti, tāvakālikaṃ deti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc28:15.1"
msgid "Aṭṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
