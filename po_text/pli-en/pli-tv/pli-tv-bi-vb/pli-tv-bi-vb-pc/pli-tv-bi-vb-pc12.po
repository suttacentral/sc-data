msgctxt "pli-tv-bi-vb-pc12:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc12:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc12:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc12:4.1"
msgid "Rattandhakāravagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc12:5.1"
msgid "12. Paṭicchannokāsasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc12:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:6.2"
msgid "Tena kho pana samayena bhaddāya kāpilāniyā antevāsiniyā bhikkhuniyā ñātako puriso gāmakā sāvatthiṃ agamāsi kenacideva karaṇīyena."
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:6.3"
msgid "Atha kho sā bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:6.4"
msgid "“bhagavatā paṭikkhittaṃ rattandhakāre appadīpe purisena saddhiṃ ekenekā santiṭṭhituṃ sallapitun”ti teneva purisena saddhiṃ paṭicchanne okāse ekenekā santiṭṭhatipi sallapatipi."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc12:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc12:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:7.3"
msgid "“kathañhi nāma bhikkhunī paṭicchanne okāse purisena saddhiṃ ekenekā santiṭṭhissatipi sallapissatipī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:7.4"
msgid "“saccaṃ kira, bhikkhave, bhikkhunī paṭicchanne okāse purisena saddhiṃ ekenekā santiṭṭhatipi sallapatipī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:7.7"
msgid "kathañhi nāma, bhikkhave, bhikkhunī paṭicchanne okāse purisena saddhiṃ ekenekā santiṭṭhissatipi sallapissatipi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc12:8.1"
msgid "“Yā pana bhikkhunī paṭicchanne okāse purisena saddhiṃ ekenekā santiṭṭheyya vā sallapeyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc12:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc12:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc12:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc12:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc12:10.1"
msgid "Paṭicchanno nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc12:10.2"
msgid "okāso kuṭṭena vā kavāṭena vā kilañjena vā sāṇipākārena vā rukkhena vā thambhena vā kotthaḷiyā vā yena kenaci paṭicchanno hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc12:11.1"
msgid "Puriso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc12:11.2"
msgid "manussapuriso na yakkho na peto na tiracchānagato viññū paṭibalo santiṭṭhituṃ sallapituṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc12:12.1"
msgid "Saddhinti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc12:12.2"
msgid "ekato."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc12:12.3"
msgid "Ekenekāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc12:12.4"
msgid "puriso ceva hoti bhikkhunī ca."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc12:13.1"
msgid "Santiṭṭheyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc12:13.2"
msgid "purisassa hatthapāse tiṭṭhati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc12:14.1"
msgid "Sallapeyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc12:14.2"
msgid "purisassa hatthapāse ṭhitā sallapati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc12:15.1"
msgid "Hatthapāsaṃ vijahitvā santiṭṭhati vā sallapati vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:15.2"
msgid "Yakkhena vā petena vā paṇḍakena vā tiracchānagatamanussaviggahena vā saddhiṃ santiṭṭhati vā sallapati vā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc12:16.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc12:16.2"
msgid "yo koci viññū dutiyo hoti, arahopekkhā, aññavihitā santiṭṭhati vā sallapati vā, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc12:17.1"
msgid "Dutiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
