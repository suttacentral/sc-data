msgctxt "pli-tv-bi-vb-pc19:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc19:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc19:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc19:4.1"
msgid "Rattandhakāravagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc19:5.1"
msgid "19. Paraabhisapanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc19:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:6.2"
msgid "Tena kho pana samayena bhikkhuniyo attano bhaṇḍakaṃ apassantiyo caṇḍakāḷiṃ bhikkhuniṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:6.3"
msgid "“apāyye, amhākaṃ bhaṇḍakaṃ passeyyāsī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:6.4"
msgid "Caṇḍakāḷī bhikkhunī ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:6.5"
msgid "“ahameva nūna corī, ahameva nūna alajjinī, yā ayyāyo attano bhaṇḍakaṃ apassantiyo tā maṃ evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:6.6"
msgid "‘apāyye, amhākaṃ bhaṇḍakaṃ passeyyāsī’ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:6.7"
msgid "Sacāhaṃ, ayye, tumhākaṃ bhaṇḍakaṃ gaṇhāmi, assamaṇī homi, brahmacariyā cavāmi, nirayaṃ upapajjāmi;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:6.8"
msgid "yā pana maṃ abhūtena evamāha sāpi assamaṇī hotu, brahmacariyā cavatu, nirayaṃ upapajjatū”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc19:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:7.3"
msgid "“kathañhi nāma ayyā caṇḍakāḷī attānampi parampi nirayenapi brahmacariyenapi abhisapissatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:7.4"
msgid "“saccaṃ kira, bhikkhave, caṇḍakāḷī bhikkhunī attānampi parampi nirayenapi brahmacariyenapi abhisapatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:7.7"
msgid "kathañhi nāma, bhikkhave, caṇḍakāḷī bhikkhunī attānampi parampi nirayenapi brahmacariyenapi abhisapissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc19:8.1"
msgid "“Yā pana bhikkhunī attānaṃ vā paraṃ vā nirayena vā brahmacariyena vā abhisapeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc19:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc19:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc19:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc19:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc19:10.1"
msgid "Attānanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc19:10.2"
msgid "paccattaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc19:10.3"
msgid "Paranti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc19:10.4"
msgid "upasampannaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:10.5"
msgid "Nirayena vā brahmacariyena vā abhisapati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6, pts-vp-pli4.277
msgctxt "pli-tv-bi-vb-pc19:11.1"
msgid "Upasampannāya upasampannasaññā nirayena vā brahmacariyena vā abhisapati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:11.2"
msgid "Upasampannāya vematikā nirayena vā brahmacariyena vā abhisapati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:11.3"
msgid "Upasampannāya anupasampannasaññā nirayena vā brahmacariyena vā abhisapati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc19:12.1"
msgid "Tiracchānayoniyā vā pettivisayena vā manussadobhaggena vā abhisapati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:12.2"
msgid "Anupasampannaṃ abhisapati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:12.3"
msgid "Anupasampannāya upasampannasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:12.4"
msgid "Anupasampannāya vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:12.5"
msgid "Anupasampannāya anupasampannasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc19:13.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc19:13.2"
msgid "atthapurekkhārāya, dhammapurekkhārāya, anusāsanipurekkhārāya, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc19:14.1"
msgid "Navamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
