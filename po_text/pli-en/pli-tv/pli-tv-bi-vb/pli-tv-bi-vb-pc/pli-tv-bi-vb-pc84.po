#. HTML: <section class="sutta" id="pli-tv-bi-vb-pc84"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pc84:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc84:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc84:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc84:4.1"
msgid "Chattupāhanavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc84:5.1"
msgid "84. Chattupāhanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc84:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:6.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhuniyo chattupāhanaṃ dhārenti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:6.3"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:6.4"
msgid "“kathañhi nāma bhikkhuniyo chattupāhanaṃ dhāressanti, seyyathāpi gihiniyo kāmabhoginiyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc84:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:7.4"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo chattupāhanaṃ dhāressantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:7.5"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo chattupāhanaṃ dhārentī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:7.8"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo chattupāhanaṃ dhāressanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc84:8.1"
msgid "“Yā pana bhikkhunī chattupāhanaṃ dhāreyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc84:9.1"
msgid "Evañcidaṃ bhagavatā bhikkhunīnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5, pts-vp-pli4.338
msgctxt "pli-tv-bi-vb-pc84:10.1"
msgid "Tena kho pana samayena aññatarā bhikkhunī gilānā hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:10.2"
msgid "Tassā vinā chattupāhanaṃ na phāsu hoti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:10.3"
msgid "bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:10.4"
msgid "anujānāmi, bhikkhave, gilānāya bhikkhuniyā chattupāhanaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:10.5"
msgid "Evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc84:11.1"
msgid "“Yā pana bhikkhunī agilānā chattupāhanaṃ dhāreyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc84:12.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc84:12.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc84:12.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc84:12.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:12.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc84:13.1"
msgid "Agilānā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc84:13.2"
msgid "yassā vinā chattupāhanaṃ phāsu hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc84:14.1"
msgid "Gilānā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc84:14.2"
msgid "yassā vinā chattupāhanaṃ na phāsu hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc84:15.1"
msgid "Chattaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc84:15.2"
msgid "tīṇi chattāni—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:15.3"
msgid "setacchattaṃ, kilañjacchattaṃ, paṇṇacchattaṃ maṇḍalabaddhaṃ salākabaddhaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc84:15.4"
msgid "Dhāreyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc84:15.5"
msgid "sakimpi dhāreti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc84:16.1"
msgid "Agilānā agilānasaññā chattupāhanaṃ dhāreti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:16.2"
msgid "Agilānā vematikā chattupāhanaṃ dhāreti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:16.3"
msgid "Agilānā gilānasaññā chattupāhanaṃ dhāreti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc84:17.1"
msgid "Chattaṃ dhāreti na upāhanaṃ, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:17.2"
msgid "Upāhanaṃ dhāreti na chattaṃ, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:17.3"
msgid "Gilānā agilānasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:17.4"
msgid "Gilānā vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:17.5"
msgid "Gilānā gilānasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc84:18.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc84:18.2"
msgid "gilānāya, ārāme ārāmūpacāre dhāreti, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc14
msgctxt "pli-tv-bi-vb-pc84:19.1"
msgid "Paṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
