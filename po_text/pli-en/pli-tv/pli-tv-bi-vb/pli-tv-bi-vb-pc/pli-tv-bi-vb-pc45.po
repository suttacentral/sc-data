msgctxt "pli-tv-bi-vb-pc45:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc45:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc45:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc45:4.1"
msgid "Cittāgāravagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc45:5.1"
msgid "45. Adhikaraṇasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc45:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:6.2"
msgid "Tena kho pana samayena aññatarā bhikkhunī thullanandaṃ bhikkhuniṃ upasaṅkamitvā etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:6.3"
msgid "“ehāyye, imaṃ adhikaraṇaṃ vūpasamehī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:6.4"
msgid "Thullanandā bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:6.5"
msgid "“sādhū”ti paṭissuṇitvā, neva vūpasameti na vūpasamāya ussukkaṃ karoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc45:7.1"
msgid "Atha kho sā bhikkhunī bhikkhunīnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.4"
msgid "“kathañhi nāma ayyā thullanandā bhikkhuniyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.5"
msgid "‘ehāyye, imaṃ adhikaraṇaṃ vūpasamehī’ti vuccamānā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.6"
msgid "‘sādhū’ti paṭissuṇitvā, neva vūpasamessati na vūpasamāya ussukkaṃ karissatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.7"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī bhikkhuniyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.8"
msgid "‘ehāyye, imaṃ adhikaraṇaṃ vūpasamehī’ti vuccamānā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.9"
msgid "‘sādhū’ti paṭissuṇitvā, neva vūpasameti na vūpasamāya ussukkaṃ karotī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.10"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.11"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.12"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī bhikkhuniyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.13"
msgid "‘ehāyye, imaṃ adhikaraṇaṃ vūpasamehī’ti vuccamānā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.14"
msgid "‘sādhū’ti paṭissuṇitvā, neva vūpasamessati na vūpasamāya ussukkaṃ karissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.15"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:7.16"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc45:8.1"
msgid "“Yā pana bhikkhunī bhikkhuniyā—‘ehāyye, imaṃ adhikaraṇaṃ vūpasamehī’ti vuccamānā—‘sādhū’ti paṭissuṇitvā sā pacchā anantarāyikinī neva vūpasameyya na vūpasamāya ussukkaṃ kareyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc45:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc45:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc45:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc45:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc45:10.1"
msgid "Bhikkhuniyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc45:10.2"
msgid "aññāya bhikkhuniyā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc45:11.1"
msgid "Adhikaraṇaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc45:11.2"
msgid "cattāri adhikaraṇāni—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:11.3"
msgid "vivādādhikaraṇaṃ, anuvādādhikaraṇaṃ, āpattādhikaraṇaṃ, kiccādhikaraṇaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc45:12.1"
msgid "Ehāyye imaṃ adhikaraṇaṃ vūpasamehīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc45:12.2"
msgid "ehāyye imaṃ adhikaraṇaṃ vinicchehi."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8, pts-vp-pli4.302
msgctxt "pli-tv-bi-vb-pc45:13.1"
msgid "Sā pacchā anantarāyikinīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc45:13.2"
msgid "asati antarāye."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc45:14.1"
msgid "Neva vūpasameyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc45:14.2"
msgid "na sayaṃ vūpasameyya."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc45:15.1"
msgid "Na vūpasamāya ussukkaṃ kareyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc45:15.2"
msgid "na aññaṃ āṇāpeyya."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:15.3"
msgid "“Neva vūpasamessāmi na vūpasamāya ussukkaṃ karissāmī”ti dhuraṃ nikkhittamatte, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc45:16.1"
msgid "Upasampannāya upasampannasaññā adhikaraṇaṃ neva vūpasameti na vūpasamāya ussukkaṃ karoti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:16.2"
msgid "Upasampannāya vematikā adhikaraṇaṃ neva vūpasameti, na vūpasamāya ussukkaṃ karoti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:16.3"
msgid "Upasampannāya anupasampannasaññā adhikaraṇaṃ neva vūpasameti, na vūpasamāya ussukkaṃ karoti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc45:17.1"
msgid "Anupasampannāya adhikaraṇaṃ neva vūpasameti, na vūpasamāya ussukkaṃ karoti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:17.2"
msgid "Anupasampannāya upasampannasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:17.3"
msgid "Anupasampannāya vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:17.4"
msgid "Anupasampannāya anupasampannasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc45:18.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc45:18.2"
msgid "sati antarāye, pariyesitvā na labhati, gilānāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc14
msgctxt "pli-tv-bi-vb-pc45:19.1"
msgid "Pañcamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
