msgctxt "pli-tv-bi-vb-pc41:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc41:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc41:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc41:4.1"
msgid "Cittāgāravagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc41:5.1"
msgid "41. Rājāgārasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.298
msgctxt "pli-tv-bi-vb-pc41:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:6.2"
msgid "Tena kho pana samayena rañño pasenadissa kosalassa uyyāne cittāgāre paṭibhānacittaṃ kataṃ hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:6.3"
msgid "Bahū manussā cittāgāraṃ dassanāya gacchanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:6.4"
msgid "Chabbaggiyāpi bhikkhuniyo cittāgāraṃ dassanāya agamaṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:6.5"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:6.6"
msgid "“kathañhi nāma bhikkhuniyo cittāgāraṃ dassanāya gacchissanti, seyyathāpi gihiniyo kāmabhoginiyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc41:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:7.4"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo cittāgāraṃ dassanāya gacchissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:7.5"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo cittāgāraṃ dassanāya gacchantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:7.8"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo cittāgāraṃ dassanāya gacchissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc41:8.1"
msgid "“Yā pana bhikkhunī rājāgāraṃ vā cittāgāraṃ vā ārāmaṃ vā uyyānaṃ vā pokkharaṇiṃ vā dassanāya gaccheyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc41:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc41:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc41:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc41:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc41:10.1"
msgid "Rājāgāraṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc41:10.2"
msgid "yattha katthaci rañño kīḷituṃ ramituṃ kataṃ hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc41:11.1"
msgid "Cittāgāraṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc41:11.2"
msgid "yattha katthaci manussānaṃ kīḷituṃ ramituṃ kataṃ hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc41:12.1"
msgid "Ārāmo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc41:12.2"
msgid "yattha katthaci manussānaṃ kīḷituṃ ramituṃ kato hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc41:13.1"
msgid "Uyyānaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc41:13.2"
msgid "yattha katthaci manussānaṃ kīḷituṃ ramituṃ kataṃ hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc41:14.1"
msgid "Pokkharaṇī nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc41:14.2"
msgid "yattha katthaci manussānaṃ kīḷituṃ ramituṃ katā hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc41:15.1"
msgid "Dassanāya gacchati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:15.2"
msgid "Yattha ṭhitā passati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:15.3"
msgid "Dassanūpacāraṃ vijahitvā punappunaṃ passati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:15.4"
msgid "Ekamekaṃ dassanāya gacchati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:15.5"
msgid "Yattha ṭhitā passati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:15.6"
msgid "Dassanūpacāraṃ vijahitvā punappunaṃ passati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11, pts-vp-pli4.299
msgctxt "pli-tv-bi-vb-pc41:16.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc41:16.2"
msgid "ārāme ṭhitā passati, gacchantī vā āgacchantī vā passati, sati karaṇīye gantvā passati, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc41:17.1"
msgid "Paṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
