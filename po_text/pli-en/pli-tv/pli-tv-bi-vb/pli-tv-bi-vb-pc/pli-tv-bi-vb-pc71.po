#. HTML: <section class="sutta" id="pli-tv-bi-vb-pc71"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pc71:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc71:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc71:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc71:4.1"
msgid "Kumāribhūtavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc71:5.1"
msgid "71. Kumāribhūtasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc71:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:6.2"
msgid "Tena kho pana samayena bhikkhuniyo ūnavīsativassaṃ kumāribhūtaṃ vuṭṭhāpenti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:6.3"
msgid "Tā akkhamā honti sītassa uṇhassa jighacchāya pipāsāya ḍaṃsamakasavātātapasarīsapasamphassānaṃ duruttānaṃ durāgatānaṃ vacanapathānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:6.4"
msgid "Uppannānaṃ sārīrikānaṃ vedanānaṃ dukkhānaṃ tibbānaṃ kharānaṃ kaṭukānaṃ asātānaṃ amanāpānaṃ pāṇaharānaṃ anadhivāsakajātikā honti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc71:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.3"
msgid "“kathañhi nāma bhikkhuniyo ūnavīsativassaṃ kumāribhūtaṃ vuṭṭhāpessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.4"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo ūnavīsativassaṃ kumāribhūtaṃ vuṭṭhāpentī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.7"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo ūnavīsativassaṃ kumāribhūtaṃ vuṭṭhāpessanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.8"
msgid "Ūnavīsativassā, bhikkhave, kumāribhūtā akkhamā hoti sītassa uṇhassa … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.9"
msgid "pāṇaharānaṃ anadhivāsakajātikā hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.10"
msgid "Vīsativassāva kho, bhikkhave, kumāribhūtā khamā hoti sītassa uṇhassa … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.11"
msgid "pāṇaharānaṃ adhivāsakajātikā hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.12"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:7.13"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: kumāribhūtaṃ → kumārībhtaṃ (bj, s1-3)
msgctxt "pli-tv-bi-vb-pc71:8.1"
msgid "“Yā pana bhikkhunī ūnavīsativassaṃ kumāribhūtaṃ vuṭṭhāpeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc71:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc71:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc71:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc71:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc71:10.1"
msgid "Ūnavīsativassā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc71:10.2"
msgid "appattavīsativassā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc71:10.3"
msgid "Kumāribhūtā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc71:10.4"
msgid "sāmaṇerī vuccati."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc71:10.5"
msgid "Vuṭṭhāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc71:10.6"
msgid "upasampādeyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc71:11.1"
msgid "“Vuṭṭhāpessāmī”ti gaṇaṃ vā ācariniṃ vā pattaṃ vā cīvaraṃ vā pariyesati, sīmaṃ vā sammannati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:11.2"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:11.3"
msgid "Dvīhi kammavācāhi dukkaṭā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:11.4"
msgid "Kammavācāpariyosāne upajjhāyāya āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:11.5"
msgid "Gaṇassa ca ācariniyā ca āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc71:12.1"
msgid "Ūnavīsativassāya ūnavīsativassasaññā vuṭṭhāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:12.2"
msgid "Ūnavīsativassāya vematikā vuṭṭhāpeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:12.3"
msgid "Ūnavīsativassāya paripuṇṇasaññā vuṭṭhāpeti, anāpatti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:12.4"
msgid "Paripuṇṇavīsativassāya ūnavīsativassasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:12.5"
msgid "Paripuṇṇavīsativassāya vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:12.6"
msgid "Paripuṇṇavīsativassāya paripuṇṇasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc71:13.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc71:13.2"
msgid "ūnavīsativassaṃ paripuṇṇasaññā vuṭṭhāpeti, paripuṇṇavīsativassaṃ paripuṇṇasaññā vuṭṭhāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc71:14.1"
msgid "Paṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
