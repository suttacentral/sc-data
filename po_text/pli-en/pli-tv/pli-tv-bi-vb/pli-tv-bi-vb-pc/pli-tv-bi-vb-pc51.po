#. HTML: <section class="sutta" id="pli-tv-bi-vb-pc51"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pc51:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc51:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc51:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc51:4.1"
msgid "Ārāmavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc51:5.1"
msgid "51. Ārāmapavisanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc51:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.2"
msgid "Tena kho pana samayena sambahulā bhikkhū gāmakāvāse ekacīvarā cīvarakammaṃ karonti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.3"
msgid "Bhikkhuniyo anāpucchā ārāmaṃ pavisitvā yena te bhikkhū tenupasaṅkamiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.4"
msgid "Bhikkhū ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.5"
msgid "“kathañhi nāma bhikkhuniyo anāpucchā ārāmaṃ pavisissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.6"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo anāpucchā ārāmaṃ pavisantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.7"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.8"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.9"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo anāpucchā ārāmaṃ pavisissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.10"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:6.11"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc51:7.1"
msgid "“Yā pana bhikkhunī anāpucchā ārāmaṃ paviseyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc51:8.1"
msgid "Evañcidaṃ bhagavatā bhikkhunīnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc4, pts-vp-pli4.307
msgctxt "pli-tv-bi-vb-pc51:9.1"
msgid "Tena kho pana samayena te bhikkhū tamhā āvāsā pakkamiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.2"
msgid "Bhikkhuniyo—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.3"
msgid "“ayyā pakkantā”ti ārāmaṃ nāgamaṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.4"
msgid "Atha kho te bhikkhū punadeva taṃ āvāsaṃ paccāgacchiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.5"
msgid "Bhikkhuniyo—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.6"
msgid "“ayyā āgatā”ti āpucchā ārāmaṃ pavisitvā yena te bhikkhū tenupasaṅkamiṃsu;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.7"
msgid "upasaṅkamitvā te bhikkhū abhivādetvā ekamantaṃ aṭṭhaṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.8"
msgid "Ekamantaṃ ṭhitā kho tā bhikkhuniyo te bhikkhū etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.9"
msgid "“kissa tumhe, bhaginiyo, ārāmaṃ neva sammajjittha na pānīyaṃ paribhojanīyaṃ upaṭṭhāpitthā”ti?"
msgstr ""

#. VAR: paññattaṃ → paññattaṃ hoti (pts1, c1)
msgctxt "pli-tv-bi-vb-pc51:9.10"
msgid "“Bhagavatā, ayyā, sikkhāpadaṃ paññattaṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.11"
msgid "‘na anāpucchā ārāmo pavisitabbo’ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.12"
msgid "Tena mayaṃ na āgamimhā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.13"
msgid "Bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.14"
msgid "anujānāmi, bhikkhave, santaṃ bhikkhuṃ āpucchā ārāmaṃ pavisituṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:9.15"
msgid "Evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc51:10.1"
msgid "“Yā pana bhikkhunī santaṃ bhikkhuṃ anāpucchā ārāmaṃ paviseyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc51:11.1"
msgid "Evañcidaṃ bhagavatā bhikkhunīnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc51:12.1"
msgid "Tena kho pana samayena te bhikkhū tamhā āvāsā pakkamitvā punadeva taṃ āvāsaṃ paccāgacchiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.2"
msgid "Bhikkhuniyo—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.3"
msgid "“ayyā pakkantā”ti anāpucchā ārāmaṃ pavisiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.4"
msgid "Tāsaṃ kukkuccaṃ ahosi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.5"
msgid "“bhagavatā sikkhāpadaṃ paññattaṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.6"
msgid "‘na santaṃ bhikkhuṃ anāpucchā ārāmo pavisitabbo’ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.7"
msgid "Mayañcamhā santaṃ bhikkhuṃ anāpucchā ārāmaṃ pavisimhā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.8"
msgid "Kacci nu kho mayaṃ pācittiyaṃ āpattiṃ āpannā”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.9"
msgid "bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.10"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:12.11"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc51:13.1"
msgid "“Yā pana bhikkhunī jānaṃ sabhikkhukaṃ ārāmaṃ anāpucchā paviseyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc51:14.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc51:14.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc51:14.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc51:14.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:14.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc51:15.1"
msgid "Jānāti nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc51:15.2"
msgid "sāmaṃ vā jānāti, aññe vā tassā ārocenti, te vā ārocenti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc51:16.1"
msgid "Sabhikkhuko nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc51:16.2"
msgid "ārāmo yattha bhikkhū rukkhamūlepi vasanti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc51:17.1"
msgid "Anāpucchā ārāmaṃ paviseyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc51:17.2"
msgid "bhikkhuṃ vā sāmaṇeraṃ vā ārāmikaṃ vā anāpucchā parikkhittassa ārāmassa parikkhepaṃ atikkāmentiyā āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:17.3"
msgid "Aparikkhittassa ārāmassa upacāraṃ okkamantiyā āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc51:18.1"
msgid "Sabhikkhuke sabhikkhukasaññā santaṃ bhikkhuṃ anāpucchā ārāmaṃ pavisati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:18.2"
msgid "Sabhikkhuke vematikā santaṃ bhikkhuṃ anāpucchā ārāmaṃ pavisati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:18.3"
msgid "Sabhikkhuke abhikkhukasaññā santaṃ bhikkhuṃ anāpucchā ārāmaṃ pavisati, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc14, pts-vp-pli4.308
msgctxt "pli-tv-bi-vb-pc51:19.1"
msgid "Abhikkhuke sabhikkhukasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:19.2"
msgid "Abhikkhuke vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:19.3"
msgid "Abhikkhuke abhikkhukasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-bi-vb-pc51:20.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc51:20.2"
msgid "santaṃ bhikkhuṃ āpucchā pavisati, asantaṃ bhikkhuṃ anāpucchā pavisati, sīsānulokikā gacchati, yattha bhikkhuniyo sannipatitā honti tattha gacchati, ārāmena maggo hoti, gilānāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc16
msgctxt "pli-tv-bi-vb-pc51:21.1"
msgid "Paṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
