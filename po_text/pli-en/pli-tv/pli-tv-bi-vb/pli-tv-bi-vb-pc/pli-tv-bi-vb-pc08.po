msgctxt "pli-tv-bi-vb-pc8:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc8:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc8:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc8:4.1"
msgid "Lasuṇavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc8:5.1"
msgid "8. Uccārachaḍḍanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc8:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.2"
msgid "Tena kho pana samayena aññataro brāhmaṇo nibbiṭṭharājabhaṭo “taññeva bhaṭapathaṃ yācissāmī”ti sīsaṃ nahāyitvā bhikkhunupassayaṃ nissāya rājakulaṃ gacchati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.3"
msgid "Aññatarā bhikkhunī kaṭāhe vaccaṃ katvā tirokuṭṭe chaḍḍentī tassa brāhmaṇassa matthake āsumbhi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.4"
msgid "Atha kho so brāhmaṇo ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.5"
msgid "“assamaṇiyo imā muṇḍā bandhakiniyo."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.6"
msgid "Kathañhi nāma gūthakaṭāhaṃ matthake āsumbhissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.7"
msgid "Imāsaṃ upassayaṃ jhāpessāmī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.8"
msgid "Ummukaṃ gahetvā upassayaṃ pavisati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.9"
msgid "Aññataro upāsako upassayā nikkhamanto addasa taṃ brāhmaṇaṃ ummukaṃ gahetvā upassayaṃ pavisantaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.10"
msgid "Disvāna taṃ brāhmaṇaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.11"
msgid "“kissa tvaṃ, bho, ummukaṃ gahetvā upassayaṃ pavisasī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.12"
msgid "“Imā maṃ, bho, muṇḍā bandhakiniyo gūthakaṭāhaṃ matthake āsumbhiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.13"
msgid "Imāsaṃ upassayaṃ jhāpessāmī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.14"
msgid "“Gaccha, bho brāhmaṇa, maṅgalaṃ etaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.15"
msgid "Sahassaṃ lacchasi tañca bhaṭapathan”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:6.16"
msgid "Atha kho so brāhmaṇo sīsaṃ nahāyitvā rājakulaṃ gantvā sahassaṃ alattha tañca bhaṭapathaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc8:7.1"
msgid "Atha kho so upāsako upassayaṃ pavisitvā bhikkhunīnaṃ etamatthaṃ ārocetvā paribhāsi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:7.4"
msgid "“kathañhi nāma bhikkhuniyo uccāraṃ tirokuṭṭe chaḍḍessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:7.5"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo uccāraṃ tirokuṭṭe chaḍḍentī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:7.8"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo uccāraṃ tirokuṭṭe chaḍḍessanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: tirokuṭṭe → tirokuḍḍe (bj, s1-3, pts1)
msgctxt "pli-tv-bi-vb-pc8:8.1"
msgid "“Yā pana bhikkhunī uccāraṃ vā passāvaṃ vā saṅkāraṃ vā vighāsaṃ vā tirokuṭṭe vā tiropākāre vā chaḍḍeyya vā chaḍḍāpeyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4, pts-vp-pli4.266
msgctxt "pli-tv-bi-vb-pc8:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc8:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc8:10.1"
msgid "Uccāro nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:10.2"
msgid "gūtho vuccati."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc8:10.3"
msgid "Passāvo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:10.4"
msgid "muttaṃ vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc8:11.1"
msgid "Saṅkāraṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:11.2"
msgid "kacavaraṃ vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc8:12.1"
msgid "Vighāsaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:12.2"
msgid "calakāni vā aṭṭhikāni vā ucchiṭṭhodakaṃ vā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc8:13.1"
msgid "Kuṭṭo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:13.2"
msgid "tayo kuṭṭā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:13.3"
msgid "iṭṭhakākuṭṭo, silākuṭṭo, dārukuṭṭo."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc8:14.1"
msgid "Pākāro nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:14.2"
msgid "tayo pākārā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:14.3"
msgid "iṭṭhakāpākāro, silāpākāro, dārupākāro."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc8:15.1"
msgid "Tirokuṭṭeti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:15.2"
msgid "kuṭṭassa parato."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc8:15.3"
msgid "Tiropākāreti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:15.4"
msgid "pākārassa parato."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc8:16.1"
msgid "Chaḍḍeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:16.2"
msgid "sayaṃ chaḍḍeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc8:17.1"
msgid "Chaḍḍāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc8:17.2"
msgid "aññaṃ āṇāpeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:17.3"
msgid "Sakiṃ āṇattā bahukampi chaḍḍeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc8:18.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc8:18.2"
msgid "oloketvā chaḍḍeti, avaḷañje chaḍḍeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc14
msgctxt "pli-tv-bi-vb-pc8:19.1"
msgid "Aṭṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
