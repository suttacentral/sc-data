msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc10:5.1"
msgid "10. Naccagītasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc10:6.1"
msgid "Tena samayena buddho bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:6.2"
msgid "Tena kho pana samayena rājagahe giraggasamajjo hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:6.3"
msgid "Chabbaggiyā bhikkhuniyo giraggasamajjaṃ dassanāya agamaṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:6.4"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:6.5"
msgid "“kathañhi nāma bhikkhuniyo naccampi gītampi vāditampi dassanāya gacchissanti, seyyathāpi gihiniyo kāmabhoginiyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc10:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:7.4"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo naccampi gītampi vāditampi dassanāya gacchissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:7.5"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo naccampi gītampi vāditampi dassanāya gacchantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:7.8"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo naccampi gītampi vāditampi dassanāya gacchissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc10:8.1"
msgid "“Yā pana bhikkhunī naccaṃ vā gītaṃ vā vāditaṃ vā dassanāya gaccheyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc10:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc10:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc10:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc10:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc10:10.1"
msgid "Naccaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc10:10.2"
msgid "yaṃ kiñci naccaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc10:10.3"
msgid "Gītaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc10:10.4"
msgid "yaṃ kiñci gītaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc10:10.5"
msgid "Vāditaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc10:10.6"
msgid "yaṃ kiñci vāditaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc6, pts-vp-pli4.268
msgctxt "pli-tv-bi-vb-pc10:11.1"
msgid "Dassanāya gacchati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:11.2"
msgid "Yattha ṭhitā passati vā suṇāti vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:11.3"
msgid "Dassanūpacāraṃ vijahitvā punappunaṃ passati vā suṇāti vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:11.4"
msgid "Ekamekaṃ dassanāya gacchati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:11.5"
msgid "Yattha ṭhitā passati vā suṇāti vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:11.6"
msgid "Dassanūpacāraṃ vijahitvā punappunaṃ passati vā suṇāti vā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc10:12.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc10:12.2"
msgid "ārāme ṭhitā passati vā suṇāti vā, bhikkhuniyā ṭhitokāsaṃ vā nisinnokāsaṃ vā nipannokāsaṃ vā āgantvā naccanti vā gāyanti vā vādenti vā, paṭipathaṃ gacchantī passati vā suṇāti vā, sati karaṇīye gantvā passati vā suṇāti vā, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc10:13.1"
msgid "Dasamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-bi-vb-pc10:13.2"
msgid "Lasuṇavaggo paṭhamo."
msgstr ""
