#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc53:5.1"
msgid "53. Gaṇaparibhāsanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.310
msgctxt "pli-tv-bi-vb-pc53:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.2"
msgid "Tena kho pana samayena caṇḍakāḷī bhikkhunī bhaṇḍanakārikā hoti kalahakārikā vivādakārikā bhassakārikā saṃghe adhikaraṇakārikā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.3"
msgid "Thullanandā bhikkhunī tassā kamme karīyamāne paṭikkosati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.4"
msgid "Tena kho pana samayena thullanandā bhikkhunī gāmakaṃ agamāsi kenacideva karaṇīyena."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.5"
msgid "Atha kho bhikkhunisaṃgho—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.6"
msgid "“thullanandā bhikkhunī pakkantā”ti caṇḍakāḷiṃ bhikkhuniṃ āpattiyā adassane ukkhipi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.7"
msgid "Thullanandā bhikkhunī gāmake taṃ karaṇīyaṃ tīretvā punadeva sāvatthiṃ paccāgacchi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.8"
msgid "Caṇḍakāḷī bhikkhunī thullanandāya bhikkhuniyā āgacchantiyā neva āsanaṃ paññapesi na pādodakaṃ pādapīṭhaṃ pādakaṭhalikaṃ upanikkhipi;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.9"
msgid "na paccuggantvā pattacīvaraṃ paṭiggahesi na pānīyena āpucchi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.10"
msgid "Thullanandā bhikkhunī caṇḍakāḷiṃ bhikkhuniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.11"
msgid "“kissa tvaṃ, ayye, mayi āgacchantiyā neva āsanaṃ paññapesi na pādodakaṃ pādapīṭhaṃ pādakaṭhalikaṃ upanikkhipi;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.12"
msgid "na paccuggantvā pattacīvaraṃ paṭiggahesi na pānīyena āpucchī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.13"
msgid "“Evañhetaṃ, ayye, hoti yathā taṃ anāthāyā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.14"
msgid "“Kissa pana tvaṃ, ayye, anāthā”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.15"
msgid "“Imā maṃ, ayye, bhikkhuniyo—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.16"
msgid "‘ayaṃ anāthā appaññātā, natthi imissā kāci pativattā’ti, āpattiyā adassane ukkhipiṃsū”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.17"
msgid "Thullanandā bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:6.18"
msgid "“bālā etā abyattā etā netā jānanti kammaṃ vā kammadosaṃ vā kammavipattiṃ vā kammasampattiṃ vā”ti, caṇḍīkatā gaṇaṃ paribhāsi."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc53:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:7.3"
msgid "“kathañhi nāma ayyā thullanandā caṇḍīkatā gaṇaṃ paribhāsissatī”ti … pe …"
msgstr ""

#. VAR: paribhāsatī”ti → paribhāsīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-pc53:7.4"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī caṇḍīkatā gaṇaṃ paribhāsatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:7.7"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī caṇḍīkatā gaṇaṃ paribhāsissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc53:8.1"
msgid "“Yā pana bhikkhunī caṇḍīkatā gaṇaṃ paribhāseyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc53:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc53:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc53:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc53:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc53:10.1"
msgid "Caṇḍīkatā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc53:10.2"
msgid "kodhanā vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc53:11.1"
msgid "Gaṇo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc53:11.2"
msgid "bhikkhunisaṃgho vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc53:12.1"
msgid "Paribhāseyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc53:12.2"
msgid "“bālā etā abyattā etā netā jānanti kammaṃ vā kammadosaṃ vā kammavipattiṃ vā kammasampattiṃ vā”ti paribhāsati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:12.3"
msgid "Sambahulā bhikkhuniyo vā ekaṃ bhikkhuniṃ vā anupasampannaṃ vā paribhāsati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc53:13.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc53:13.2"
msgid "atthapurekkhārāya, dhammapurekkhārāya, anusāsanipurekkhārāya, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc53:14.1"
msgid "Tatiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
