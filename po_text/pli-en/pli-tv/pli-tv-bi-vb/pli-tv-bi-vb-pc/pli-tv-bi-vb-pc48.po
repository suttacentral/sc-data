msgctxt "pli-tv-bi-vb-pc48:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc48:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc48:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc48:4.1"
msgid "Cittāgāravagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc48:5.1"
msgid "48. Āvasathavihārasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.304
msgctxt "pli-tv-bi-vb-pc48:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī āvasathaṃ anissajjitvā cārikaṃ pakkāmi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.3"
msgid "Tena kho pana samayena thullanandāya bhikkhuniyā āvasatho ḍayhati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.4"
msgid "Bhikkhuniyo evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.5"
msgid "“handāyye, bhaṇḍakaṃ nīharāmā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.6"
msgid "Ekaccā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.7"
msgid "“na mayaṃ, ayye, nīharissāma."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.8"
msgid "Yaṃ kiñci naṭṭhaṃ sabbaṃ amhe abhiyuñjissatī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.9"
msgid "Thullanandā bhikkhunī punadeva taṃ āvasathaṃ paccāgantvā bhikkhuniyo pucchi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.10"
msgid "“apāyye, bhaṇḍakaṃ nīharitthā”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.11"
msgid "“Na mayaṃ, ayye, nīharimhā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.12"
msgid "Thullanandā bhikkhunī ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:6.13"
msgid "“kathañhi nāma bhikkhuniyo āvasathe ḍayhamāne bhaṇḍakaṃ na nīharissantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc48:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:7.3"
msgid "“kathañhi nāma ayyā thullanandā āvasathaṃ anissajjitvā cārikaṃ pakkamissatī”ti … pe …"
msgstr ""

#. VAR: pakkamatī”ti → pakkamīti (bj, mr) | pakkāmīti (pts1)
msgctxt "pli-tv-bi-vb-pc48:7.4"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī āvasathaṃ anissajjitvā cārikaṃ pakkamatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:7.7"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī āvasathaṃ anissajjitvā cārikaṃ pakkamissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc48:8.1"
msgid "“Yā pana bhikkhunī āvasathaṃ anissajjitvā cārikaṃ pakkameyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc48:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc48:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc48:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc48:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc48:10.1"
msgid "Āvasatho nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc48:10.2"
msgid "kavāṭabaddho vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc48:11.1"
msgid "Anissajjitvā cārikaṃ pakkameyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc48:11.2"
msgid "bhikkhuniyā vā sikkhamānāya vā sāmaṇeriyā vā anissajjitvā parikkhittassa āvasathassa parikkhepaṃ atikkāmentiyā āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:11.3"
msgid "Aparikkhittassa āvasathassa upacāraṃ atikkāmentiyā āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc48:12.1"
msgid "Anissajjite anissajjitasaññā pakkamati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:12.2"
msgid "Anissajjite vematikā pakkamati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:12.3"
msgid "Anissajjite nissajjitasaññā pakkamati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc48:13.1"
msgid "Akavāṭabaddhaṃ anissajjitvā pakkamati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:13.2"
msgid "Nissajjite anissajjitasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:13.3"
msgid "Nissajjite vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:13.4"
msgid "Nissajjite nissajjitasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc9, pts-vp-pli4.305
msgctxt "pli-tv-bi-vb-pc48:14.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc48:14.2"
msgid "nissajjitvā pakkamati, sati antarāye, pariyesitvā na labhati, gilānāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc48:15.1"
msgid "Aṭṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
