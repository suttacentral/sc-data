msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc47:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc47:4.1"
msgid "Cittāgāravagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc47:5.1"
msgid "47. Āvasathacīvarasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc47:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī āvasathacīvaraṃ anissajjitvā paribhuñjati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:6.3"
msgid "Aññā utuniyo bhikkhuniyo na labhanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc47:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:7.3"
msgid "“kathañhi nāma ayyā thullanandā āvasathacīvaraṃ anissajjitvā paribhuñjissatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:7.4"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī āvasathacīvaraṃ anissajjitvā paribhuñjatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:7.7"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī āvasathacīvaraṃ anissajjitvā paribhuñjissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc47:8.1"
msgid "“Yā pana bhikkhunī āvasathacīvaraṃ anissajjitvā paribhuñjeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc47:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc47:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc47:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc47:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc47:10.1"
msgid "Āvasathacīvaraṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc47:10.2"
msgid "“utuniyo bhikkhuniyo paribhuñjantū”ti dinnaṃ hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc47:11.1"
msgid "Anissajjitvā paribhuñjeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc47:11.2"
msgid "dvetisso rattiyo paribhuñjitvā catutthadivase dhovitvā bhikkhuniyā vā sikkhamānāya vā sāmaṇeriyā vā anissajjitvā paribhuñjati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc47:12.1"
msgid "Anissajjite anissajjitasaññā paribhuñjati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:12.2"
msgid "Anissajjite vematikā paribhuñjati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:12.3"
msgid "Anissajjite nissajjitasaññā paribhuñjati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc47:13.1"
msgid "Nissajjite anissajjitasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:13.2"
msgid "Nissajjite vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:13.3"
msgid "Nissajjite nissajjitasaññā anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc47:14.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc47:14.2"
msgid "nissajjitvā paribhuñjati, puna pariyāyena paribhuñjati, aññā utuniyo bhikkhuniyo na honti, acchinnacīvarikāya, naṭṭhacīvarikāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc47:15.1"
msgid "Sattamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
