#. HTML: <section class="sutta" id="pli-tv-bi-vb-pc1"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pc1:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc1:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc1:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc1:4.1"
msgid "Lasuṇavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc1:5.1"
msgid "1. Lasuṇasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.258
msgctxt "pli-tv-bi-vb-pc1:6.1"
msgid "Ime kho panāyyāyo chasaṭṭhisatā pācittiyā dhammā uddesaṃ āgacchanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc1:7.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.2"
msgid "Tena kho pana samayena aññatarena upāsakena bhikkhunisaṃgho lasuṇena pavārito hoti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.3"
msgid "“yāsaṃ ayyānaṃ lasuṇena attho, ahaṃ lasuṇenā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.4"
msgid "Khettapālo ca āṇatto hoti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.5"
msgid "“sace bhikkhuniyo āgacchanti, ekamekāya bhikkhuniyā dvetayo bhaṇḍike dehī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.6"
msgid "Tena kho pana samayena sāvatthiyaṃ ussavo hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.7"
msgid "Yathābhataṃ lasuṇaṃ parikkhayaṃ agamāsi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.8"
msgid "Bhikkhuniyo taṃ upāsakaṃ upasaṅkamitvā etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.9"
msgid "“lasuṇena, āvuso, attho”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.10"
msgid "“Natthāyye."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.11"
msgid "Yathābhataṃ lasuṇaṃ parikkhīṇaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.12"
msgid "Khettaṃ gacchathā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.13"
msgid "Thullanandā bhikkhunī khettaṃ gantvā na mattaṃ jānitvā bahuṃ lasuṇaṃ harāpesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.14"
msgid "Khettapālo ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:7.15"
msgid "“kathañhi nāma bhikkhuniyo na mattaṃ jānitvā bahuṃ lasuṇaṃ harāpessantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc1:8.1"
msgid "Assosuṃ kho bhikkhuniyo tassa khettapālassa ujjhāyantassa khiyyantassa vipācentassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:8.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:8.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:8.4"
msgid "“kathañhi nāma ayyā thullanandā na mattaṃ jānitvā bahuṃ lasuṇaṃ harāpessatī”ti … pe …"
msgstr ""

#. VAR: harāpetī”ti → harāpesīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-pc1:8.5"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī na mattaṃ jānitvā bahuṃ lasuṇaṃ harāpetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:8.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:8.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:8.8"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī na mattaṃ jānitvā bahuṃ lasuṇaṃ harāpessati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:8.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:8.10"
msgid "dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

#. HTML: </p><p>
#. REF: sc4, pts-vp-pli4.259
msgctxt "pli-tv-bi-vb-pc1:9.1"
msgid "“Bhūtapubbaṃ, bhikkhave, thullanandā bhikkhunī aññatarassa brāhmaṇassa pajāpati ahosi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:9.2"
msgid "Tisso ca dhītaro—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:9.3"
msgid "nandā, nandavatī, sundarīnandā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:9.4"
msgid "Atha kho, bhikkhave, so brāhmaṇo kālaṃ katvā aññataraṃ haṃsayoniṃ upapajji."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:9.5"
msgid "Tassa sabbasovaṇṇamayā pattā ahesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:9.6"
msgid "So tāsaṃ ekekaṃ pattaṃ deti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:9.7"
msgid "Atha kho, bhikkhave, thullanandā bhikkhunī ‘ayaṃ haṃso amhākaṃ ekekaṃ pattaṃ detī’ti taṃ haṃsarājaṃ gahetvā nippattaṃ akāsi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:9.8"
msgid "Tassa puna jāyamānā pattā setā sampajjiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:9.9"
msgid "Tadāpi, bhikkhave, thullanandā bhikkhunī atilobhena suvaṇṇā parihīnā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:9.10"
msgid "Idāni lasuṇā parihāyissatīti."
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc1:10.1"
msgid "Yaṃ laddhaṃ tena tuṭṭhabbaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-bi-vb-pc1:10.2"
msgid "Atilobho hi pāpako;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-bi-vb-pc1:10.3"
msgid "Haṃsarājaṃ gahetvāna,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-bi-vb-pc1:10.4"
msgid "Suvaṇṇā parihāyathā”ti."
msgstr ""

#. HTML: </p></blockquote><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc1:11.1"
msgid "Atha kho bhagavā thullanandaṃ bhikkhuniṃ anekapariyāyena vigarahitvā dubbharatāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:11.2"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc7
#. VAR: lasuṇaṃ → lasunaṃ (bj)
msgctxt "pli-tv-bi-vb-pc1:12.1"
msgid "“Yā pana bhikkhunī lasuṇaṃ khādeyya pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc1:13.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc1:13.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc1:13.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc1:13.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:13.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc1:14.1"
msgid "Lasuṇaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc1:14.2"
msgid "māgadhakaṃ vuccati."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc1:15.1"
msgid "“Khādissāmīti paṭiggaṇhā”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:15.2"
msgid "Ajjhohāre ajjhohāre āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc1:16.1"
msgid "Lasuṇe lasuṇasaññā khādati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:16.2"
msgid "Lasuṇe vematikā khādati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:16.3"
msgid "Lasuṇe alasuṇasaññā khādati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc1:17.1"
msgid "Alasuṇe lasuṇasaññā khādati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:17.2"
msgid "Alasuṇe vematikā khādati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:17.3"
msgid "Alasuṇe alasuṇasaññā khādati, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc1:18.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc1:18.2"
msgid "palaṇḍuke, bhañjanake, harītake, cāpalasuṇe, sūpasampāke, maṃsasampāke, telasampāke, sāḷave, uttaribhaṅge, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc14
msgctxt "pli-tv-bi-vb-pc1:19.1"
msgid "Lasuṇasikkhāpadaṃ paṭhamaṃ niṭṭhitaṃ."
msgstr ""
