msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc80:5.1"
msgid "80. Ananuññātasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc80:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī mātāpitūhipi sāmikenapi ananuññātaṃ sikkhamānaṃ vuṭṭhāpeti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:6.3"
msgid "Mātāpitaropi sāmikopi ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:6.4"
msgid "“kathañhi nāma ayyā thullanandā amhehi ananuññātaṃ sikkhamānaṃ vuṭṭhāpessatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc80:7.1"
msgid "Assosuṃ kho bhikkhuniyo mātāpitūnampi sāmikassapi ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:7.4"
msgid "“kathañhi nāma ayyā thullanandā mātāpitūhipi sāmikenapi ananuññātaṃ sikkhamānaṃ vuṭṭhāpessatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:7.5"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī, mātāpitūhipi sāmikenapi ananuññātaṃ sikkhamānaṃ vuṭṭhāpetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:7.8"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī mātāpitūhipi sāmikenapi ananuññātaṃ sikkhamānaṃ vuṭṭhāpessati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3, pts-vp-pli4.335
msgctxt "pli-tv-bi-vb-pc80:8.1"
msgid "“Yā pana bhikkhunī mātāpitūhi vā sāmikena vā ananuññātaṃ sikkhamānaṃ vuṭṭhāpeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc80:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc80:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc80:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc80:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc80:10.1"
msgid "Mātāpitaro nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc80:10.2"
msgid "janakā vuccanti."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc80:10.3"
msgid "Sāmiko nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc80:10.4"
msgid "yena pariggahitā hoti."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc80:10.5"
msgid "Ananuññātāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc80:10.6"
msgid "anāpucchā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc80:10.7"
msgid "Sikkhamānā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc80:10.8"
msgid "dve vassāni chasu dhammesu sikkhitasikkhā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc80:10.9"
msgid "Vuṭṭhāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc80:10.10"
msgid "upasampādeyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc80:11.1"
msgid "“Vuṭṭhāpessāmī”ti gaṇaṃ vā ācariniṃ vā pattaṃ vā cīvaraṃ vā pariyesati, sīmaṃ vā sammannati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:11.2"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:11.3"
msgid "Dvīhi kammavācāhi dukkaṭā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:11.4"
msgid "Kammavācāpariyosāne upajjhāyāya āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:11.5"
msgid "Gaṇassa ca ācariniyā ca āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc80:12.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc80:12.2"
msgid "ajānantī vuṭṭhāpeti, apaloketvā vuṭṭhāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc80:13.1"
msgid "Dasamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
