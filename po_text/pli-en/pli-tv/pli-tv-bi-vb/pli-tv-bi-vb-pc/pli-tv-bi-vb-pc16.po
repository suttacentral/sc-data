msgctxt "pli-tv-bi-vb-pc16:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc16:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc16:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc16:4.1"
msgid "Rattandhakāravagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc16:5.1"
msgid "16. Anāpucchāabhinisīdanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.273
msgctxt "pli-tv-bi-vb-pc16:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī pacchābhattaṃ kulāni upasaṅkamitvā sāmike anāpucchā āsane abhinisīdatipi abhinipajjatipi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:6.3"
msgid "Manussā thullanandaṃ bhikkhuniṃ hirīyamānā āsane neva abhinisīdanti na abhinipajjanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:6.4"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:6.5"
msgid "“kathañhi nāma ayyā thullanandā pacchābhattaṃ kulāni upasaṅkamitvā sāmike anāpucchā āsane abhinisīdissatipi abhinipajjissatipī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc16:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:7.4"
msgid "“kathañhi nāma ayyā thullanandā pacchābhattaṃ kulāni upasaṅkamitvā sāmike anāpucchā āsane abhinisīdissatipi abhinipajjissatipī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:7.5"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī pacchābhattaṃ kulāni upasaṅkamitvā sāmike anāpucchā āsane abhinisīdatipi abhinipajjatipī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:7.8"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī pacchābhattaṃ kulāni upasaṅkamitvā sāmike anāpucchā āsane abhinisīdissatipi abhinipajjissatipi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc16:8.1"
msgid "“Yā pana bhikkhunī pacchābhattaṃ kulāni upasaṅkamitvā sāmike anāpucchā āsane abhinisīdeyya vā abhinipajjeyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc16:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc16:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc16:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc16:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc16:10.1"
msgid "Pacchābhattaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc16:10.2"
msgid "majjhanhike vītivatte yāva atthaṅgate sūriye."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc16:11.1"
msgid "Kulaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc16:11.2"
msgid "cattāri kulāni—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:11.3"
msgid "khattiyakulaṃ, brāhmaṇakulaṃ, vessakulaṃ, suddakulaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc16:11.4"
msgid "Upasaṅkamitvāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc16:11.5"
msgid "tattha gantvā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc16:12.1"
msgid "Sāmike anāpucchāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc16:12.2"
msgid "yo tasmiṃ kule manusso sāmiko dātuṃ, taṃ anāpucchā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc16:13.1"
msgid "Āsanaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc16:13.2"
msgid "pallaṅkassa okāso vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc16:14.1"
msgid "Abhinisīdeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc16:14.2"
msgid "tasmiṃ abhinisīdati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc16:15.1"
msgid "Abhinipajjeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc16:15.2"
msgid "tasmiṃ abhinipajjati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc16:16.1"
msgid "Anāpucchite anāpucchitasaññā āsane abhinisīdati vā abhinipajjati vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:16.2"
msgid "Anāpucchite vematikā āsane abhinisīdati vā abhinipajjati vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:16.3"
msgid "Anāpucchite āpucchitasaññā āsane abhinisīdati vā abhinipajjati vā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc16:17.1"
msgid "Pallaṅkassa anokāse āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:17.2"
msgid "Āpucchite anāpucchitasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:17.3"
msgid "Āpucchite vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:17.4"
msgid "Āpucchite āpucchitasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc13, pts-vp-pli4.274
msgctxt "pli-tv-bi-vb-pc16:18.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc16:18.2"
msgid "āpucchā āsane abhinisīdati vā abhinipajjati vā, dhuvapaññatte, gilānāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc14
msgctxt "pli-tv-bi-vb-pc16:19.1"
msgid "Chaṭṭhasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
