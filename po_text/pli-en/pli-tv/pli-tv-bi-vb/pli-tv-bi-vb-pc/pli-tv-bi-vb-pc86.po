#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc86:5.1"
msgid "86. Saṅghāṇisikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc86:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:6.2"
msgid "Tena kho pana samayena aññatarā bhikkhunī aññatarissā itthiyā kulūpikā hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:6.3"
msgid "Atha kho sā itthī taṃ bhikkhuniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:6.4"
msgid "“handāyye, imaṃ saṅghāṇiṃ amukāya nāma itthiyā dehī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:6.5"
msgid "Atha kho sā bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:6.6"
msgid "“sacāhaṃ pattena ādāya gacchāmi vissaro me bhavissatī”ti paṭimuñcitvā agamāsi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:6.7"
msgid "Tassā rathikāya suttake chinne vippakiriyiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:6.8"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:6.9"
msgid "“kathañhi nāma bhikkhuniyo saṅghāṇiṃ dhāressanti, seyyathāpi gihiniyo kāmabhoginiyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli4.340
msgctxt "pli-tv-bi-vb-pc86:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:7.4"
msgid "“kathañhi nāma bhikkhunī saṅghāṇiṃ dhāressatī”ti … pe …"
msgstr ""

#. VAR: dhāretī”ti → dhāresīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-pc86:7.5"
msgid "“saccaṃ kira, bhikkhave, bhikkhunī saṅghāṇiṃ dhāretī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:7.8"
msgid "kathañhi nāma, bhikkhave, bhikkhunī saṅghāṇiṃ dhāressati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc86:8.1"
msgid "“Yā pana bhikkhunī saṅghāṇiṃ dhāreyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc86:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc86:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc86:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc86:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc86:10.1"
msgid "Saṅghāṇi nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc86:10.2"
msgid "yā kāci kaṭūpagā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc86:11.1"
msgid "Dhāreyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc86:11.2"
msgid "sakimpi dhāreti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc86:12.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc86:12.2"
msgid "ābādhappaccayā, kaṭisuttakaṃ dhāreti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc86:13.1"
msgid "Tatiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
