#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc88:5.1"
msgid "88. Gandhavaṇṇakasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.341
msgctxt "pli-tv-bi-vb-pc88:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:6.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhuniyo gandhavaṇṇakena nahāyanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:6.3"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:6.4"
msgid "“kathañhi nāma bhikkhuniyo gandhavaṇṇakena nahāyissanti, seyyathāpi gihiniyo kāmabhoginiyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc88:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:7.4"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo gandhavaṇṇakena nahāyissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:7.5"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo gandhavaṇṇakena nahāyantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:7.8"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo gandhavaṇṇakena nahāyissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc88:8.1"
msgid "“Yā pana bhikkhunī gandhavaṇṇakena nahāyeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc88:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc88:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc88:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc88:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc88:10.1"
msgid "Gandho nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc88:10.2"
msgid "yo koci gandho."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc88:10.3"
msgid "Vaṇṇakaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc88:10.4"
msgid "yaṃ kiñci vaṇṇakaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc88:10.5"
msgid "Nahāyeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc88:10.6"
msgid "nahāyati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:10.7"
msgid "Payoge dukkaṭaṃ, nahānapariyosāne āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc88:11.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc88:11.2"
msgid "ābādhappaccayā, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc88:12.1"
msgid "Pañcamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
