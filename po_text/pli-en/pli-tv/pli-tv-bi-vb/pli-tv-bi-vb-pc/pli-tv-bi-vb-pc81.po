#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc81:5.1"
msgid "81. Pārivāsikasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc81:6.1"
msgid "Tena samayena buddho bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:6.3"
msgid "“sikkhamānaṃ vuṭṭhāpessāmī”ti there bhikkhū sannipātetvā pahūtaṃ khādanīyaṃ bhojanīyaṃ passitvā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:6.4"
msgid "“na tāvāhaṃ, ayyā, sikkhamānaṃ vuṭṭhāpessāmī”ti there bhikkhū uyyojetvā devadattaṃ kokālikaṃ kaṭamodakatissakaṃ khaṇḍadeviyā puttaṃ samuddadattaṃ sannipātetvā sikkhamānaṃ vuṭṭhāpesi."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc81:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:7.3"
msgid "“kathañhi nāma ayyā thullanandā pārivāsikachandadānena sikkhamānaṃ vuṭṭhāpessatī”ti … pe …"
msgstr ""

#. VAR: vuṭṭhāpetī”ti → vuṭṭhāpesīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-pc81:7.4"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī pārivāsikachandadānena sikkhamānaṃ vuṭṭhāpetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:7.7"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī pārivāsikachandadānena sikkhamānaṃ vuṭṭhāpessati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: pārivāsikachandadānena → pārivāsikacchandadānena (s2, s3)
msgctxt "pli-tv-bi-vb-pc81:8.1"
msgid "“Yā pana bhikkhunī pārivāsikachandadānena sikkhamānaṃ vuṭṭhāpeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc81:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc81:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc81:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc81:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5, pts-vp-pli4.336
msgctxt "pli-tv-bi-vb-pc81:10.1"
msgid "Pārivāsikachandadānenāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc81:10.2"
msgid "vuṭṭhitāya parisāya."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc81:10.3"
msgid "Sikkhamānā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc81:10.4"
msgid "dve vassāni chasu dhammesu sikkhitasikkhā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc81:10.5"
msgid "Vuṭṭhāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc81:10.6"
msgid "upasampādeyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc81:11.1"
msgid "“Vuṭṭhāpessāmī”ti gaṇaṃ vā ācariniṃ vā pattaṃ vā cīvaraṃ vā pariyesati, sīmaṃ vā sammannati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:11.2"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:11.3"
msgid "Dvīhi kammavācāhi dukkaṭā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:11.4"
msgid "Kammavācāpariyosāne upajjhāyāya āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:11.5"
msgid "Gaṇassa ca ācariniyā ca āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc81:12.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc81:12.2"
msgid "avuṭṭhitāya parisāya vuṭṭhāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc81:13.1"
msgid "Ekādasamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
