#. HTML: <section class="sutta" id="pli-tv-bi-vb-pc23"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pc23:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc23:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc23:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc23:4.1"
msgid "Naggavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc23:5.1"
msgid "23. Cīvarasibbanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.280
msgctxt "pli-tv-bi-vb-pc23:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:6.2"
msgid "Tena kho pana samayena aññatarissā bhikkhuniyā mahagghe cīvaradusse cīvaraṃ dukkaṭaṃ hoti dussibbitaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:6.3"
msgid "Thullanandā bhikkhunī taṃ bhikkhuniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:6.4"
msgid "“sundaraṃ kho idaṃ te, ayye, cīvaradussaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:6.5"
msgid "cīvarañca kho dukkaṭaṃ dussibbitan”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:6.6"
msgid "“Visibbemi, ayye, sibbissasī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:6.7"
msgid "“Āmāyye, sibbissāmī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:6.8"
msgid "Atha kho sā bhikkhunī taṃ cīvaraṃ visibbetvā thullanandāya bhikkhuniyā adāsi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:6.9"
msgid "Thullanandā bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:6.10"
msgid "“sibbissāmi sibbissāmī”ti neva sibbati na sibbāpanāya ussukkaṃ karoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc23:7.1"
msgid "Atha kho sā bhikkhunī bhikkhunīnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:7.4"
msgid "“kathañhi nāma ayyā thullanandā bhikkhuniyā cīvaraṃ visibbāpetvā neva sibbissati na sibbāpanāya ussukkaṃ karissatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:7.5"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī bhikkhuniyā cīvaraṃ visibbāpetvā neva sibbati na sibbāpanāya ussukkaṃ karotī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:7.8"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī bhikkhuniyā cīvaraṃ visibbāpetvā neva sibbissati na sibbāpanāya ussukkaṃ karissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc23:8.1"
msgid "“Yā pana bhikkhunī bhikkhuniyā cīvaraṃ visibbetvā vā visibbāpetvā vā sā pacchā anantarāyikinī neva sibbeyya na sibbāpanāya ussukkaṃ kareyya, aññatra catūhapañcāhā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc23:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc23:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc23:10.1"
msgid "Bhikkhuniyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:10.2"
msgid "aññāya bhikkhuniyā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc23:11.1"
msgid "Cīvaraṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:11.2"
msgid "channaṃ cīvarānaṃ aññataraṃ cīvaraṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc23:12.1"
msgid "Visibbetvāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:12.2"
msgid "sayaṃ visibbetvā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc23:12.3"
msgid "Visibbāpetvāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:12.4"
msgid "aññaṃ visibbāpetvā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc23:13.1"
msgid "Sā pacchā anantarāyikinīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:13.2"
msgid "asati antarāye."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc23:14.1"
msgid "Neva sibbeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:14.2"
msgid "na sayaṃ sibbeyya."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc23:14.3"
msgid "Na sibbāpanāya ussukkaṃ kareyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:14.4"
msgid "na aññaṃ āṇāpeyya."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc23:15.1"
msgid "Aññatra catūhapañcāhāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc23:15.2"
msgid "ṭhapetvā catūhapañcāhaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:15.3"
msgid "“Neva sibbissāmi na sibbāpanāya ussukkaṃ karissāmī”ti dhuraṃ nikkhittamatte āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc23:16.1"
msgid "Upasampannāya upasampannasaññā cīvaraṃ visibbetvā vā visibbāpetvā vā sā pacchā anantarāyikinī neva sibbati na sibbāpanāya ussukkaṃ karoti, aññatra catūhapañcāhā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:16.2"
msgid "Upasampannāya vematikā cīvaraṃ visibbetvā vā visibbāpetvā vā sā pacchā anantarāyikinī neva sibbati na sibbāpanāya ussukkaṃ karoti, aññatra catūhapañcāhā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:16.3"
msgid "Upasampannāya anupasampannasaññā cīvaraṃ visibbetvā vā visibbāpetvā vā sā pacchā anantarāyikinī neva sibbati na sibbāpanāya ussukkaṃ karoti, aññatra catūhapañcāhā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12, pts-vp-pli4.281
msgctxt "pli-tv-bi-vb-pc23:17.1"
msgid "Aññaṃ parikkhāraṃ visibbetvā vā visibbāpetvā vā sā pacchā anantarāyikinī neva sibbati na sibbāpanāya ussukkaṃ karoti, aññatra catūhapañcāhā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:17.2"
msgid "Anupasampannāya cīvaraṃ vā aññaṃ vā parikkhāraṃ visibbetvā vā visibbāpetvā vā sā pacchā anantarāyikinī neva sibbati na sibbāpanāya ussukkaṃ karoti, aññatra catūhapañcāhā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:17.3"
msgid "Anupasampannāya upasampannasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:17.4"
msgid "Anupasampannāya vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:17.5"
msgid "Anupasampannāya anupasampannasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc23:18.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc23:18.2"
msgid "sati antarāye, pariyesitvā na labhati, karontī catūhapañcāhaṃ atikkāmeti, gilānāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc14
msgctxt "pli-tv-bi-vb-pc23:19.1"
msgid "Tatiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
