msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc58:5.1"
msgid "58. Ovādasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc58:6.1"
msgid "Tena samayena buddho bhagavā sakkesu viharati kapilavatthusmiṃ nigrodhārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:6.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū bhikkhunupassayaṃ upasaṅkamitvā chabbaggiyā bhikkhuniyo ovadanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:6.3"
msgid "Bhikkhuniyo chabbaggiyā bhikkhuniyo etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:6.4"
msgid "“ethāyye, ovādaṃ gamissāmā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:6.5"
msgid "“Yampi mayaṃ, ayye, gaccheyyāma ovādassa kāraṇā, ayyā chabbaggiyā idheva āgantvā amhe ovadantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli4.315
msgctxt "pli-tv-bi-vb-pc58:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:7.3"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo ovādaṃ na gacchissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:7.4"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo ovādaṃ na gacchantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:7.7"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo ovādaṃ na gacchissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc58:8.1"
msgid "“Yā pana bhikkhunī ovādāya vā saṃvāsāya vā na gaccheyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc58:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc58:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc58:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc58:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc58:10.1"
msgid "Ovādo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc58:10.2"
msgid "aṭṭha garudhammā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc58:11.1"
msgid "Saṃvāso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc58:11.2"
msgid "ekakammaṃ ekuddeso samasikkhatā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:11.3"
msgid "Ovādāya vā saṃvāsāya vā na gacchissāmīti dhuraṃ nikkhittamatte āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc58:12.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc58:12.2"
msgid "sati antarāye, pariyesitvā dutiyikaṃ bhikkhuniṃ na labhati, gilānāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc58:13.1"
msgid "Aṭṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
