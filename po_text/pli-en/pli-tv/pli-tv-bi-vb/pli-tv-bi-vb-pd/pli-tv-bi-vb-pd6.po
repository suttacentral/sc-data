#. HTML: <section class="sutta" id="pli-tv-bi-vb-pd6"><article><div class="hgroup"><h1>
msgctxt "pli-tv-bi-vb-pd6:1.1"
msgid "Pāṭidesanīyā 6: Theravāda Vinaya"
msgstr ""

#. HTML: </h1></div><h2>
msgctxt "pli-tv-bi-vb-pd6:2.1"
msgid "2. Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </h2><h3>
msgctxt "pli-tv-bi-vb-pd6:3.1"
msgid "2.5 Pāṭidesanīyakaṇḍa"
msgstr ""

#. HTML: </h3><h2>
msgctxt "pli-tv-bi-vb-pd6:4.1"
msgid "2.5.6 Maṃsaviññāpanasikkhāpada"
msgstr ""

#. HTML: </h2><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pd6:5.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:5.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhuniyo maṃsaṃ viññāpetvā bhuñjanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:5.3"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:5.4"
msgid "“kathañhi nāma bhikkhuniyo maṃsaṃ viññāpetvā bhuñjissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:5.5"
msgid "Kassa sampannaṃ na manāpaṃ, kassa sāduṃ na ruccatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pd6:6.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:6.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:6.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:6.4"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo maṃsaṃ viññāpetvā bhuñjissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:6.5"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo maṃsaṃ viññāpetvā bhuñjantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:6.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:6.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:6.8"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo maṃsaṃ viññāpetvā bhuñjissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:6.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:6.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pd6:7.1"
msgid "“Yā pana bhikkhunī maṃsaṃ viññāpetvā bhuñjeyya, paṭidesetabbaṃ tāya bhikkhuniyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:7.2"
msgid "‘gārayhaṃ, ayye, dhammaṃ āpajjiṃ asappāyaṃ pāṭidesanīyaṃ, taṃ paṭidesemī’”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pd6:8.1"
msgid "Evañcidaṃ bhagavatā bhikkhunīnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pd6:9.1"
msgid "Tena kho pana samayena bhikkhuniyo gilānā honti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:9.2"
msgid "Gilānapucchikā bhikkhuniyo gilānā bhikkhuniyo etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:9.3"
msgid "“kacci, ayye, khamanīyaṃ, kacci yāpanīyan”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:9.4"
msgid "“Pubbe mayaṃ, ayye, maṃsaṃ viññāpetvā bhuñjimhā, tena no phāsu hoti;"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:9.5"
msgid "idāni pana ‘bhagavatā paṭikkhittan’ti kukkuccāyantā na viññāpema, tena no na phāsu hotī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:9.6"
msgid "bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:9.7"
msgid "anujānāmi, bhikkhave, gilānāya bhikkhuniyā maṃsaṃ viññāpetvā bhuñjituṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:9.8"
msgid "Evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc6, pts-vp-pli4.348
msgctxt "pli-tv-bi-vb-pd6:10.1"
msgid "“Yā pana bhikkhunī agilānā maṃsaṃ viññāpetvā bhuñjeyya, paṭidesetabbaṃ tāya bhikkhuniyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:10.2"
msgid "‘gārayhaṃ, ayye, dhammaṃ āpajjiṃ asappāyaṃ pāṭidesanīyaṃ, taṃ paṭidesemī’”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pd6:11.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd6:11.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pd6:11.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd6:11.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:11.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pd6:12.1"
msgid "Agilānā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd6:12.2"
msgid "yassā vinā maṃsanā phāsu hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pd6:13.1"
msgid "Gilānā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd6:13.2"
msgid "yassā vinā maṃsanā na phāsu hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pd6:14.1"
msgid "Maṃsaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd6:14.2"
msgid "yesaṃ maṃsaṃ kappati tesaṃ maṃsaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pd6:15.1"
msgid "Agilānā attano atthāya viññāpeti, payoge dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:15.2"
msgid "Paṭilābhena bhuñjissāmīti paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:15.3"
msgid "Ajjhohāre ajjhohāre āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pd6:16.1"
msgid "Agilānā agilānasaññā maṃsaṃ viññāpetvā bhuñjati, āpatti pāṭidesanīyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:16.2"
msgid "Agilānā vematikā maṃsaṃ viññāpetvā bhuñjati, āpatti pāṭidesanīyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:16.3"
msgid "Agilānā gilānasaññā maṃsaṃ viññāpetvā bhuñjati, āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pd6:17.1"
msgid "Gilānā agilānasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:17.2"
msgid "Gilānā vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:17.3"
msgid "Gilānā gilānasaññā anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-bi-vb-pd6:18.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:18.2"
msgid "gilānāya, gilānā hutvā viññāpetvā agilānā bhuñjati, gilānāya sesakaṃ bhuñjati, ñātakānaṃ pavāritānaṃ, aññassatthāya, attano dhanena, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc15
msgctxt "pli-tv-bi-vb-pd6:19.1"
msgid "Aṭṭhamapāṭidesanīyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc16
msgctxt "pli-tv-bi-vb-pd6:20.1"
msgid "Uddiṭṭhā kho, ayyāyo, aṭṭha pāṭidesanīyā dhammā."
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:20.2"
msgid "Tatthāyyāyo pucchāmi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:20.3"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:20.4"
msgid "Dutiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:20.5"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:20.6"
msgid "Tatiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:20.7"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bi-vb-pd6:20.8"
msgid "Parisuddhetthāyyāyo, tasmā tuṇhī, evametaṃ dhārayāmīti."
msgstr ""
