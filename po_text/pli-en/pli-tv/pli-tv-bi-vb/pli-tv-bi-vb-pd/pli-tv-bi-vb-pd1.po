#. HTML: <section class="sutta" id="pli-tv-bi-vb-pd1"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pd1:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pd1:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pd1:3.1"
msgid "Pāṭidesanīyakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pd1:4.1"
msgid "1. Sappiviññāpanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.346
msgctxt "pli-tv-bi-vb-pd1:5.1"
msgid "Ime kho panāyyāyo aṭṭha pāṭidesanīyā dhammā uddesaṃ āgacchanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pd1:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:6.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhuniyo sappiṃ viññāpetvā bhuñjanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:6.3"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:6.4"
msgid "“kathañhi nāma bhikkhuniyo sappiṃ viññāpetvā bhuñjissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:6.5"
msgid "Kassa sampannaṃ na manāpaṃ, kassa sāduṃ na ruccatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-bi-vb-pd1:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:7.4"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo sappiṃ viññāpetvā bhuñjissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:7.5"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā, bhikkhuniyo sappiṃ viññāpetvā bhuñjantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:7.8"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo sappiṃ viññāpetvā bhuñjissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc4
msgctxt "pli-tv-bi-vb-pd1:8.1"
msgid "“Yā pana bhikkhunī sappiṃ viññāpetvā bhuñjeyya, paṭidesetabbaṃ tāya bhikkhuniyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:8.2"
msgid "‘gārayhaṃ, ayye, dhammaṃ āpajjiṃ asappāyaṃ pāṭidesanīyaṃ, taṃ paṭidesemī’”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pd1:9.1"
msgid "Evañcidaṃ bhagavatā bhikkhunīnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc6, pts-vp-pli4.347
msgctxt "pli-tv-bi-vb-pd1:10.1"
msgid "Tena kho pana samayena bhikkhuniyo gilānā honti."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:10.2"
msgid "Gilānapucchikā bhikkhuniyo gilānā bhikkhuniyo etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:10.3"
msgid "“kacci, ayye, khamanīyaṃ, kacci yāpanīyan”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:10.4"
msgid "“Pubbe mayaṃ, ayye, sappiṃ viññāpetvā bhuñjāma, tena no phāsu hoti;"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:10.5"
msgid "idāni pana ‘bhagavatā paṭikkhittan’ti kukkuccāyantā na viññāpema, tena no na phāsu hotī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:10.6"
msgid "bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:10.7"
msgid "anujānāmi, bhikkhave, gilānāya bhikkhuniyā sappiṃ viññāpetvā bhuñjituṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:10.8"
msgid "Evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc7
msgctxt "pli-tv-bi-vb-pd1:11.1"
msgid "“Yā pana bhikkhunī agilānā sappiṃ viññāpetvā bhuñjeyya, paṭidesetabbaṃ tāya bhikkhuniyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:11.2"
msgid "‘gārayhaṃ, ayye, dhammaṃ āpajjiṃ asappāyaṃ pāṭidesanīyaṃ taṃ paṭidesemī’”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pd1:12.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd1:12.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pd1:12.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd1:12.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:12.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pd1:13.1"
msgid "Agilānā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd1:13.2"
msgid "yassā vinā sappinā phāsu hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pd1:14.1"
msgid "Gilānā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd1:14.2"
msgid "yassā vinā sappinā na phāsu hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pd1:15.1"
msgid "Sappi nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pd1:15.2"
msgid "gosappi vā ajikāsappi vā mahiṃsasappi vā."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:15.3"
msgid "Yesaṃ maṃsaṃ kappati tesaṃ sappi."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pd1:16.1"
msgid "Agilānā attano atthāya viññāpeti, payoge dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:16.2"
msgid "Paṭilābhena “bhuñjissāmī”ti paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:16.3"
msgid "Ajjhohāre ajjhohāre āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pd1:17.1"
msgid "Agilānā agilānasaññā sappiṃ viññāpetvā bhuñjati, āpatti pāṭidesanīyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:17.2"
msgid "Agilānā vematikā sappiṃ viññāpetvā bhuñjati, āpatti pāṭidesanīyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:17.3"
msgid "Agilānā gilānasaññā sappiṃ viññāpetvā bhuñjati, āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-bi-vb-pd1:18.1"
msgid "Gilānā agilānasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:18.2"
msgid "Gilānā vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:18.3"
msgid "Gilānā gilānasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-bi-vb-pd1:19.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pd1:19.2"
msgid "gilānāya, gilānā hutvā viññāpetvā agilānā bhuñjati, gilānāya sesakaṃ bhuñjati, ñātakānaṃ pavāritānaṃ, aññassatthāya, attano dhanena, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc16
msgctxt "pli-tv-bi-vb-pd1:20.1"
msgid "Paṭhamapāṭidesanīyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
