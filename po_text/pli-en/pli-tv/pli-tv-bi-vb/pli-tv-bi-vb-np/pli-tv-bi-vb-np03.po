#. HTML: <section class="sutta" id="pli-tv-bi-vb-np3"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-np3:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-np3:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-np3:3.1"
msgid "Nissaggiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-np3:4.1"
msgid "Pattavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-np3:5.1"
msgid "3. Cīvaraparivattanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.247
msgctxt "pli-tv-bi-vb-np3:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī aññatarāya bhikkhuniyā saddhiṃ cīvaraṃ parivattetvā paribhuñji."
msgstr ""

#. VAR: saṅgharitvā → saṃharitvā (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-np3:6.3"
msgid "Atha kho sā bhikkhunī taṃ cīvaraṃ saṅgharitvā nikkhipi."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:6.4"
msgid "Thullanandā bhikkhunī taṃ bhikkhuniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:6.5"
msgid "“yaṃ te, ayye, mayā saddhiṃ cīvaraṃ parivattitaṃ, kahaṃ taṃ cīvaran”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:6.6"
msgid "Atha kho sā bhikkhunī taṃ cīvaraṃ nīharitvā thullanandāya bhikkhuniyā dassesi."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:6.7"
msgid "Thullanandā bhikkhunī taṃ bhikkhuniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:6.8"
msgid "“handāyye, tuyhaṃ cīvaraṃ, āhara metaṃ cīvaraṃ, yaṃ tuyhaṃ tuyhamevetaṃ, yaṃ mayhaṃ mayhamevetaṃ, āhara metaṃ, sakaṃ paccāharā”ti acchindi."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-np3:7.1"
msgid "Atha kho sā bhikkhunī bhikkhunīnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.4"
msgid "“kathañhi nāma ayyā thullanandā bhikkhuniyā saddhiṃ cīvaraṃ parivattetvā acchindissatī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.5"
msgid "Atha kho tā bhikkhuniyo bhikkhūnaṃ etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.6"
msgid "Bhikkhū bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

#. VAR: acchindatī”ti → acchindīti (bj, mr)
msgctxt "pli-tv-bi-vb-np3:7.7"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī bhikkhuniyā saddhiṃ cīvaraṃ parivattetvā acchindatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.10"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī bhikkhuniyā saddhiṃ cīvaraṃ parivattetvā acchindissati."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.11"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:7.12"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: parivattetvā → parivaṭṭetvā (s1-3)
#. VAR: handāyye → handayye (bj, s1-3, pts1)
msgctxt "pli-tv-bi-vb-np3:8.1"
msgid "“Yā pana bhikkhunī bhikkhuniyā saddhiṃ cīvaraṃ parivattetvā sā pacchā evaṃ vadeyya—‘handāyye, tuyhaṃ cīvaraṃ āhara, metaṃ cīvaraṃ, yaṃ tuyhaṃ tuyhamevetaṃ, yaṃ mayhaṃ mayhamevetaṃ, āhara metaṃ, sakaṃ paccāharā’ti acchindeyya vā acchindāpeyya vā, nissaggiyaṃ pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-np3:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np3:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-np3:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np3:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-np3:10.1"
msgid "Bhikkhuniyā saddhinti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np3:10.2"
msgid "aññāya bhikkhuniyā saddhiṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-np3:11.1"
msgid "Cīvaraṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np3:11.2"
msgid "channaṃ cīvarānaṃ aññataraṃ cīvaraṃ vikappanupagaṃ pacchimaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-np3:12.1"
msgid "Parivattetvāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np3:12.2"
msgid "parittena vā vipulaṃ, vipulena vā parittaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-np3:13.1"
msgid "Acchindeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np3:13.2"
msgid "sayaṃ acchindati nissaggiyaṃ pācittiyaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-np3:14.1"
msgid "Acchindāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np3:14.2"
msgid "aññaṃ āṇāpeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:14.3"
msgid "Sakiṃ āṇattā bahukampi acchindati, nissaggiyaṃ hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:14.4"
msgid "Nissajjitabbaṃ saṃghassa vā gaṇassa vā ekabhikkhuniyā vā."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:14.5"
msgid "Evañca pana, bhikkhave, nissajjitabbaṃ … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:14.6"
msgid "“idaṃ me, ayye, cīvaraṃ bhikkhuniyā saddhiṃ parivattetvā acchinnaṃ nissaggiyaṃ, imāhaṃ saṃghassa nissajjāmī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:14.7"
msgid "dadeyyā”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:14.8"
msgid "dadeyyun”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:14.9"
msgid "ayyāya dammī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc10, pts-vp-pli4.248
msgctxt "pli-tv-bi-vb-np3:15.1"
msgid "Upasampannāya upasampannasaññā cīvaraṃ parivattetvā acchindati vā acchindāpeti vā, nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:15.2"
msgid "Upasampannāya vematikā cīvaraṃ parivattetvā acchindati vā acchindāpeti vā, nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:15.3"
msgid "Upasampannāya anupasampannasaññā cīvaraṃ parivattetvā acchindati vā acchindāpeti vā, nissaggiyaṃ pācittiyaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-np3:16.1"
msgid "Aññaṃ parikkhāraṃ parivattetvā acchindati vā acchindāpeti vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:16.2"
msgid "Anupasampannāya saddhiṃ cīvaraṃ vā aññaṃ vā parikkhāraṃ parivattetvā acchindati vā acchindāpeti vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:16.3"
msgid "Anupasampannāya upasampannasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:16.4"
msgid "Anupasampannāya vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np3:16.5"
msgid "Anupasampannāya anupasampannasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-np3:17.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-np3:17.2"
msgid "sā vā deti, tassā vā vissasantī gaṇhāti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc13
msgctxt "pli-tv-bi-vb-np3:18.1"
msgid "Tatiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
