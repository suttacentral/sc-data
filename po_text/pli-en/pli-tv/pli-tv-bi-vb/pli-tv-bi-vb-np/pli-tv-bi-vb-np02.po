#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-np2:5.1"
msgid "2. Akālacīvarabhājanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-np2:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

#. VAR: vassaṃvuṭṭhā → vassaṃ vutthā (bj, s1-3, pts1)
msgctxt "pli-tv-bi-vb-np2:6.2"
msgid "Tena kho pana samayena sambahulā bhikkhuniyo gāmakāvāse vassaṃvuṭṭhā sāvatthiṃ agamaṃsu vattasampannā iriyāpathasampannā duccoḷā lūkhacīvarā."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.3"
msgid "Upāsakā tā bhikkhuniyo passitvā—"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.4"
msgid "“imā bhikkhuniyo vattasampannā iriyāpathasampannā duccoḷā lūkhacīvarā, imā bhikkhuniyo acchinnā bhavissantī”ti bhikkhunisaṃghassa akālacīvaraṃ adaṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.5"
msgid "Thullanandā bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.6"
msgid "“amhākaṃ kathinaṃ atthataṃ kālacīvaran”ti adhiṭṭhahitvā bhājāpesi."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.7"
msgid "Upāsakā tā bhikkhuniyo passitvā etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.8"
msgid "“apayyāhi cīvaraṃ laddhan”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.9"
msgid "“Na mayaṃ, āvuso, cīvaraṃ labhāma."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.10"
msgid "Ayyā thullanandā—"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.11"
msgid "‘amhākaṃ kathinaṃ atthataṃ kālacīvaran’ti adhiṭṭhahitvā bhājāpesī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.12"
msgid "Upāsakā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:6.13"
msgid "“kathañhi nāma ayyā thullanandā akālacīvaraṃ ‘kālacīvaran’ti adhiṭṭhahitvā bhājāpessatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli4.246
msgctxt "pli-tv-bi-vb-np2:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ upāsakānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.4"
msgid "“kathañhi nāma ayyā thullanandā akālacīvaraṃ ‘kālacīvaran’ti adhiṭṭhahitvā bhājāpessatī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.5"
msgid "Atha kho tā bhikkhuniyo bhikkhūnaṃ etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.6"
msgid "Bhikkhū bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

#. VAR: bhājāpetī”ti → bhājāpesīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-np2:7.7"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī akālacīvaraṃ ‘kālacīvaran’ti adhiṭṭhahitvā bhājāpetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.10"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī akālacīvaraṃ “kālacīvaran”ti adhiṭṭhahitvā bhājāpessati."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.11"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:7.12"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-np2:8.1"
msgid "“Yā pana bhikkhunī akālacīvaraṃ ‘kālacīvaran’ti adhiṭṭhahitvā bhājāpeyya, nissaggiyaṃ pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-np2:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np2:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-np2:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np2:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-np2:10.1"
msgid "Akālacīvaraṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np2:10.2"
msgid "anatthate kathine ekādasamāse uppannaṃ, atthate kathine sattamāse uppannaṃ, kālepi ādissa dinnaṃ, etaṃ akālacīvaraṃ nāma."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-np2:11.1"
msgid "Akālacīvaraṃ “kālacīvaran”ti adhiṭṭhahitvā bhājāpeti, payoge dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:11.2"
msgid "Paṭilābhena nissaggiyaṃ hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:11.3"
msgid "Nissajjitabbaṃ saṃghassa vā gaṇassa vā ekabhikkhuniyā vā."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:11.4"
msgid "Evañca pana, bhikkhave, nissajjitabbaṃ … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:11.5"
msgid "“idaṃ me, ayye, akālacīvaraṃ ‘kālacīvaran’ti adhiṭṭhahitvā bhājāpitaṃ nissaggiyaṃ, imāhaṃ saṃghassa nissajjāmī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:11.6"
msgid "dadeyyā”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:11.7"
msgid "dadeyyun”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:11.8"
msgid "ayyāya dammī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-np2:12.1"
msgid "Akālacīvare akālacīvarasaññā “kālacīvaran”ti adhiṭṭhahitvā bhājāpeti, nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:12.2"
msgid "Akālacīvare vematikā “kālacīvaran”ti adhiṭṭhahitvā bhājāpeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:12.3"
msgid "Akālacīvare kālacīvarasaññā “kālacīvaran”ti adhiṭṭhahitvā bhājāpeti, anāpatti."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:12.4"
msgid "Kālacīvare akālacīvarasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:12.5"
msgid "Kālacīvare vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np2:12.6"
msgid "Kālacīvare kālacīvarasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-np2:13.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-np2:13.2"
msgid "akālacīvaraṃ kālacīvarasaññā bhājāpeti, kālacīvaraṃ kālacīvarasaññā bhājāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bi-vb-np2:14.1"
msgid "Dutiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
