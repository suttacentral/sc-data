#. HTML: <section class="sutta" id="pli-tv-bi-vb-ss11"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-ss11:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss11:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss11:3.1"
msgid "Saṃghādisesakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-ss11:4.1"
msgid "11. Adhikaraṇakupitasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.238
msgctxt "pli-tv-bi-vb-ss11:5.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:5.2"
msgid "Tena kho pana samayena caṇḍakāḷī bhikkhunī kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ vadeti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:5.3"
msgid "“chandagāminiyo ca bhikkhuniyo, dosagāminiyo ca bhikkhuniyo, mohagāminiyo ca bhikkhuniyo, bhayagāminiyo ca bhikkhuniyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-ss11:6.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.3"
msgid "“kathañhi nāma ayyā caṇḍakāḷī kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ vakkhati—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.4"
msgid "‘chandagāminiyo ca bhikkhuniyo … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.5"
msgid "bhayagāminiyo ca bhikkhuniyo’”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.6"
msgid "“saccaṃ kira, bhikkhave, caṇḍakāḷī bhikkhunī kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ vadeti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.7"
msgid "‘chandagāminiyo ca bhikkhuniyo … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.8"
msgid "bhayagāminiyo ca bhikkhuniyo’”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.9"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.10"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.11"
msgid "kathañhi nāma, bhikkhave, caṇḍakāḷī bhikkhunī kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ vakkhati—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.12"
msgid "‘chandagāminiyo ca bhikkhuniyo … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.13"
msgid "bhayagāminiyo ca bhikkhuniyo’ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.14"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:6.15"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: paccākatā → pacchā katā (s1-3)
msgctxt "pli-tv-bi-vb-ss11:7.1"
msgid "“Yā pana bhikkhunī kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ vadeyya—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:7.2"
msgid "‘chandagāminiyo ca bhikkhuniyo, dosagāminiyo ca bhikkhuniyo, mohagāminiyo ca bhikkhuniyo, bhayagāminiyo ca bhikkhuniyo’ti, sā bhikkhunī bhikkhunīhi evamassa vacanīyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:7.3"
msgid "‘māyye, kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ avaca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:7.4"
msgid "chandagāminiyo ca bhikkhuniyo dosagāminiyo ca bhikkhuniyo mohagāminiyo ca bhikkhuniyo bhayagāminiyo ca bhikkhuniyoti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:7.5"
msgid "Ayyā kho chandāpi gaccheyya, dosāpi gaccheyya, mohāpi gaccheyya, bhayāpi gaccheyyā’ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:7.6"
msgid "Evañca sā bhikkhunī bhikkhunīhi vuccamānā tatheva paggaṇheyya, sā bhikkhunī bhikkhunīhi yāvatatiyaṃ samanubhāsitabbā tassa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:7.7"
msgid "Yāvatatiyañce samanubhāsīyamānā taṃ paṭinissajjeyya, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:7.8"
msgid "no ce paṭinissajjeyya, ayampi bhikkhunī yāvatatiyakaṃ dhammaṃ āpannā nissāraṇīyaṃ saṃghādisesan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-ss11:8.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:8.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-ss11:8.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:8.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:8.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-ss11:9.1"
msgid "Kismiñcideva adhikaraṇeti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:9.2"
msgid "adhikaraṇaṃ nāma cattāri adhikaraṇāni—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:9.3"
msgid "vivādādhikaraṇaṃ, anuvādādhikaraṇaṃ, āpattādhikaraṇaṃ, kiccādhikaraṇaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-ss11:10.1"
msgid "Paccākatā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:10.2"
msgid "parājitā vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-ss11:11.1"
msgid "Kupitā anattamanāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:11.2"
msgid "anabhiraddhā āhatacittā khilajātā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-ss11:12.1"
msgid "Evaṃ vadeyyāti—"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:12.2"
msgid "“chandagāminiyo ca bhikkhuniyo … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:12.3"
msgid "bhayagāminiyo ca bhikkhuniyo”ti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-ss11:13.1"
msgid "Sā bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:13.2"
msgid "yā sā evaṃvādinī bhikkhunī."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-ss11:14.1"
msgid "Bhikkhunīhīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:14.2"
msgid "aññāhi bhikkhunīhi."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-ss11:15.1"
msgid "Yā passanti yā suṇanti tāhi vattabbā—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.2"
msgid "“māyye, kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ avaca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.3"
msgid "‘chandagāminiyo ca bhikkhuniyo … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.4"
msgid "bhayagāminiyo ca bhikkhuniyo’ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.5"
msgid "Ayyā kho chandāpi gaccheyya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.6"
msgid "bhayāpi gaccheyyā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.7"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.8"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.9"
msgid "Sace paṭinissajjati, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.10"
msgid "no ce paṭinissajjati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.11"
msgid "Sutvā na vadanti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.12"
msgid "Sā bhikkhunī saṃghamajjhampi ākaḍḍhitvā vattabbā—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.13"
msgid "“māyye, kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ avaca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.14"
msgid "‘chandagāminiyo ca bhikkhuniyo … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.15"
msgid "bhayagāminiyo ca bhikkhuniyo’ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.16"
msgid "Ayyā kho chandāpi gaccheyya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.17"
msgid "bhayāpi gaccheyyā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.18"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.19"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.20"
msgid "Sace paṭinissajjati, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.21"
msgid "no ce paṭinissajjati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.22"
msgid "Sā bhikkhunī samanubhāsitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.23"
msgid "“Evañca pana, bhikkhave, samanubhāsitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:15.24"
msgid "Byattāya bhikkhuniyā paṭibalāya saṃgho ñāpetabbo—"
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-ss11:16.1"
msgid "“chandagāminiyo ca bhikkhuniyo…"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.2"
msgid "pe…"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.3"
msgid "bhayagāminiyo ca bhikkhuniyo”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.4"
msgid "Sā taṃ vatthuṃ na paṭinissajjati."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.5"
msgid "Yadi saṃghassa pattakallaṃ, saṃgho itthannāmaṃ bhikkhuniṃ samanubhāseyya tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.6"
msgid "Esā ñatti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.7"
msgid "‘Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.8"
msgid "Ayaṃ itthannāmā bhikkhunī kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ vadeti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.9"
msgid "“chandagāminiyo ca bhikkhuniyo … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.10"
msgid "bhayagāminiyo ca bhikkhuniyo”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.11"
msgid "Sā taṃ vatthuṃ na paṭinissajjati."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.12"
msgid "Yadi saṃghassa pattakallaṃ, saṃgho itthannāmaṃ bhikkhuniṃ samanubhāseyya tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:16.13"
msgid "Esā ñatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-ss11:17.1"
msgid "“chandagāminiyo ca bhikkhuniyo…"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.2"
msgid "pe…"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.3"
msgid "bhayagāminiyo ca bhikkhuniyo”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.4"
msgid "Sā taṃ vatthuṃ na paṭinissajjati."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.5"
msgid "Saṃgho itthannāmaṃ bhikkhuniṃ samanubhāsati tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.6"
msgid "Yassā ayyāya khamati itthannāmāya bhikkhuniyā samanubhāsanā tassa vatthussa paṭinissaggāya, sā tuṇhassa;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.7"
msgid "yassā nakkhamati, sā bhāseyya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.8"
msgid "Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.9"
msgid "Ayaṃ itthannāmā bhikkhunī kismiñcideva adhikaraṇe paccākatā kupitā anattamanā evaṃ vadeti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.10"
msgid "“chandagāminiyo ca bhikkhuniyo … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.11"
msgid "bhayagāminiyo ca bhikkhuniyo”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.12"
msgid "Sā taṃ vatthuṃ na paṭinissajjati."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.13"
msgid "Saṃgho itthannāmaṃ bhikkhuniṃ samanubhāsati tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.14"
msgid "Yassā ayyāya khamati itthannāmāya bhikkhuniyā samanubhāsanā tassa vatthussa paṭinissaggāya, sā tuṇhassa;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:17.15"
msgid "yassā nakkhamati, sā bhāseyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-bi-vb-ss11:18.1"
msgid "Dutiyampi etamatthaṃ vadāmi … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:18.2"
msgid "tatiyampi etamatthaṃ vadāmi …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:18.3"
msgid "pe …."
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-bi-vb-ss11:19.1"
msgid "Samanubhaṭṭhā saṃghena itthannāmā bhikkhunī tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:19.2"
msgid "Khamati saṃghassa, tasmā tuṇhī, evametaṃ dhārayāmī’”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc16
msgctxt "pli-tv-bi-vb-ss11:20.1"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:20.2"
msgid "Dvīhi kammavācāhi thullaccayā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:20.3"
msgid "Kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:20.4"
msgid "Saṃghādisesaṃ ajjhāpajjantiyā ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:20.5"
msgid "Dvīhi kammavācāhi thullaccayā paṭippassambhanti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc17
msgctxt "pli-tv-bi-vb-ss11:21.1"
msgid "Ayampīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:21.2"
msgid "purimāyo upādāya vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc18
msgctxt "pli-tv-bi-vb-ss11:22.1"
msgid "Yāvatatiyakanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:22.2"
msgid "yāvatatiyaṃ samanubhāsanāya āpajjati, na saha vatthujjhācārā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc19
msgctxt "pli-tv-bi-vb-ss11:23.1"
msgid "Nissāraṇīyanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:23.2"
msgid "saṃghamhā nissārīyati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc20
msgctxt "pli-tv-bi-vb-ss11:24.1"
msgid "Saṃghādisesoti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss11:24.2"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:24.3"
msgid "tenapi vuccati saṃghādisesoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-bi-vb-ss11:25.1"
msgid "Dhammakamme dhammakammasaññā na paṭinissajjati, āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:25.2"
msgid "Dhammakamme vematikā na paṭinissajjati, āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:25.3"
msgid "Dhammakamme adhammakammasaññā na paṭinissajjati, āpatti saṃghādisesassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc22
msgctxt "pli-tv-bi-vb-ss11:26.1"
msgid "Adhammakamme dhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:26.2"
msgid "Adhammakamme vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:26.3"
msgid "Adhammakamme adhammakammasaññā āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc23, pts-vp-pli4.239
msgctxt "pli-tv-bi-vb-ss11:27.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss11:27.2"
msgid "asamanubhāsantiyā, paṭinissajjantiyā, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc24
msgctxt "pli-tv-bi-vb-ss11:28.1"
msgid "Aṭṭhamasaṃghādisesasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
