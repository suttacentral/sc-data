#. HTML: <section class="sutta" id="pli-tv-bi-vb-ss1"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-ss1:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss1:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss1:3.1"
msgid "Saṃghādisesakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-ss1:4.1"
msgid "1. Ussayavādikāsikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.223
msgctxt "pli-tv-bi-vb-ss1:5.1"
msgid "Ime kho panāyyāyo sattarasa saṃghādisesā dhammā uddesaṃ āgacchanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-ss1:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

#. VAR: udositaṃ → uddositaṃ (bj, s1-3, pts1)
msgctxt "pli-tv-bi-vb-ss1:6.2"
msgid "Tena kho pana samayena aññataro upāsako bhikkhunisaṃghassa udositaṃ datvā kālaṅkato hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.3"
msgid "Tassa dve puttā honti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.4"
msgid "eko assaddho appasanno, eko saddho pasanno."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.5"
msgid "Te pettikaṃ sāpateyyaṃ vibhajiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.6"
msgid "Atha kho so assaddho appasanno taṃ saddhaṃ pasannaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.7"
msgid "“amhākaṃ udosito, taṃ bhājemā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.8"
msgid "Evaṃ vutte, so saddho pasanno taṃ assaddhaṃ appasannaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.9"
msgid "“māyyo, evaṃ avaca."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.10"
msgid "Amhākaṃ pitunā bhikkhunisaṃghassa dinno”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.11"
msgid "Dutiyampi kho so assaddho appasanno taṃ saddhaṃ pasannaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.12"
msgid "“amhākaṃ udosito, taṃ bhājemā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.13"
msgid "Atha kho so saddho pasanno taṃ assaddhaṃ appasannaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.14"
msgid "“māyyo, evaṃ avaca."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.15"
msgid "Amhākaṃ pitunā bhikkhunisaṃghassa dinno”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.16"
msgid "Tatiyampi kho so assaddho appasanno taṃ saddhaṃ pasannaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.17"
msgid "“amhākaṃ udosito, taṃ bhājemā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.18"
msgid "Atha kho so saddho pasanno—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.19"
msgid "“sace mayhaṃ bhavissati, ahampi bhikkhunisaṃghassa dassāmī”ti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.20"
msgid "taṃ assaddhaṃ appasannaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.21"
msgid "“bhājemā”ti."
msgstr ""

#. VAR: pāpuṇāti → pāpuṇi (bj, s1-3)
msgctxt "pli-tv-bi-vb-ss1:6.22"
msgid "Atha kho so udosito tehi bhājīyamāno tassa assaddhassa appasannassa pāpuṇāti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.23"
msgid "Atha kho so assaddho appasanno bhikkhuniyo upasaṅkamitvā etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:6.24"
msgid "“nikkhamathāyye, amhākaṃ udosito”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc3, pts-vp-pli4.224
msgctxt "pli-tv-bi-vb-ss1:7.1"
msgid "Evaṃ vutte thullanandā bhikkhunī taṃ purisaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.2"
msgid "“māyyo, evaṃ avaca, tumhākaṃ pitunā bhikkhunisaṃghassa dinno”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.3"
msgid "“Dinno na dinno”ti vohārike mahāmatte pucchiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.4"
msgid "Mahāmattā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.5"
msgid "“ko, ayye, jānāti bhikkhunisaṃghassa dinno”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.6"
msgid "Evaṃ vutte, thullanandā bhikkhunī te mahāmatte etadavoca—"
msgstr ""

#. VAR: api nāyyā → api nāyyo (si, mr) | apinvayyā (s1-3) | api nayyo (pts1)
msgctxt "pli-tv-bi-vb-ss1:7.7"
msgid "“api nāyyā tumhehi diṭṭhaṃ vā sutaṃ vā sakkhiṃ ṭhapayitvā dānaṃ diyyamānan”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.8"
msgid "Atha kho te mahāmattā—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.9"
msgid "“saccaṃ kho ayyā āhā”ti taṃ udositaṃ bhikkhunisaṃghassa akaṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.10"
msgid "Atha kho so puriso parājito ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.11"
msgid "“assamaṇiyo imā muṇḍā bandhakiniyo."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.12"
msgid "Kathañhi nāma amhākaṃ udositaṃ acchindāpessantī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.13"
msgid "Thullanandā bhikkhunī mahāmattānaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.14"
msgid "Mahāmattā taṃ purisaṃ daṇḍāpesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.15"
msgid "Atha kho so puriso daṇḍito bhikkhunupassayassa avidūre ājīvakaseyyaṃ kārāpetvā ājīvake uyyojesi—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:7.16"
msgid "“etā bhikkhuniyo accāvadathā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc4
msgctxt "pli-tv-bi-vb-ss1:8.1"
msgid "Thullanandā bhikkhunī mahāmattānaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:8.2"
msgid "Mahāmattā taṃ purisaṃ bandhāpesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:8.3"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:8.4"
msgid "“paṭhamaṃ bhikkhuniyo udositaṃ acchindāpesuṃ, dutiyaṃ daṇḍāpesuṃ, tatiyaṃ bandhāpesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:8.5"
msgid "Idāni ghātāpessantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bi-vb-ss1:9.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.4"
msgid "“kathañhi nāma ayyā thullanandā ussayavādikā viharissatī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.5"
msgid "Atha kho tā bhikkhuniyo bhikkhūnaṃ etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.6"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī ussayavādikā viharatī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.7"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.8"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.9"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī ussayavādikā viharissati."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.10"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:9.11"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc6
#. VAR: kammakārena → kammakarena (bj, s1-3)
#. VAR: ussayavādikā → usuyyavādikā (s1-3)
msgctxt "pli-tv-bi-vb-ss1:10.1"
msgid "“Yā pana bhikkhunī ussayavādikā vihareyya gahapatinā vā gahapatiputtena vā dāsena vā kammakārena vā antamaso samaṇaparibbājakenāpi, ayaṃ bhikkhunī paṭhamāpattikaṃ dhammaṃ āpannā nissāraṇīyaṃ saṃghādisesan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-ss1:11.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:11.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-ss1:11.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:11.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:11.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-ss1:12.1"
msgid "Ussayavādikā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:12.2"
msgid "aḍḍakārikā vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-ss1:13.1"
msgid "Gahapati nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:13.2"
msgid "yo koci agāraṃ ajjhāvasati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-ss1:14.1"
msgid "Gahapatiputto nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:14.2"
msgid "ye keci puttabhātaro."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-ss1:15.1"
msgid "Dāso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:15.2"
msgid "antojāto dhanakkīto karamarānīto."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc12
msgctxt "pli-tv-bi-vb-ss1:16.1"
msgid "Kammakāro nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:16.2"
msgid "bhaṭako āhatako."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc13
msgctxt "pli-tv-bi-vb-ss1:17.1"
msgid "Samaṇaparibbājako nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:17.2"
msgid "bhikkhuñca bhikkhuniñca sikkhamānañca sāmaṇerañca sāmaṇeriñca ṭhapetvā yo koci paribbājakasamāpanno."
msgstr ""

#. HTML: </p><p>
#. REF: sc14, pts-vp-pli4.225
msgctxt "pli-tv-bi-vb-ss1:18.1"
msgid "Aḍḍaṃ karissāmīti dutiyaṃ vā pariyesati gacchati vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:18.2"
msgid "Ekassa āroceti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:18.3"
msgid "Dutiyassa āroceti, āpatti thullaccayassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:18.4"
msgid "Aḍḍapariyosāne āpatti saṃghādisesassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc15
msgctxt "pli-tv-bi-vb-ss1:19.1"
msgid "Paṭhamāpattikanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:19.2"
msgid "saha vatthujjhācārā āpajjati asamanubhāsanāya."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc16
msgctxt "pli-tv-bi-vb-ss1:20.1"
msgid "Nissāraṇīyanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:20.2"
msgid "saṃghamhā nissārīyati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc17
msgctxt "pli-tv-bi-vb-ss1:21.1"
msgid "Saṃghādisesanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss1:21.2"
msgid "saṃghova tassā āpattiyā mānattaṃ deti mūlāya paṭikassati abbheti, na sambahulā na ekā bhikkhunī."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:21.3"
msgid "Tena vuccati “saṃghādiseso”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:21.4"
msgid "Tasseva āpattinikāyassa nāmakammaṃ adhivacanaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:21.5"
msgid "Tenapi vuccati “saṃghādiseso”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc18
msgctxt "pli-tv-bi-vb-ss1:22.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:22.2"
msgid "manussehi ākaḍḍhīyamānā gacchati, ārakkhaṃ yācati, anodissa ācikkhati, ummattikāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss1:22.3"
msgid "ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc19
msgctxt "pli-tv-bi-vb-ss1:23.1"
msgid "Paṭhamasaṃghādisesasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
