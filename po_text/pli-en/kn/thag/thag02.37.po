msgctxt "thag2.37:1.1"
msgid "Theragāthā"
msgstr "Verses of the Senior Monks"

#. HTML: </p><p>
msgctxt "thag2.37:2.1"
msgid "Dukanipāta"
msgstr "The Book of the Twos"

#. HTML: </p><p>
msgctxt "thag2.37:3.1"
msgid "Catutthavagga"
msgstr "Chapter Four"

#. HTML: </p><h1>
#. VAR: 2.37 Soṇapoṭiriyattheragāthā → solissariyattheragāthā (bj)
msgctxt "thag2.37:4.1"
msgid "2.37 Soṇapoṭiriyattheragāthā"
msgstr "2.37. Soṇapoṭiriya"

#. HTML: </h1></div><blockquote class="gatha"><p><a class="sc" id="1"></a><a
#. class="vns" id="vns193"></a><a class="vnp" id="vnp193"></a>
msgctxt "thag2.37:5.1"
msgid "“Na tāva supituṃ hoti,"
msgstr "Night, with her garland of stars,"

#. HTML: <br>
msgctxt "thag2.37:5.2"
msgid "ratti nakkhattamālinī;"
msgstr "is not only for sleeping."

#. HTML: <br>
msgctxt "thag2.37:5.3"
msgid "Paṭijaggitumevesā,"
msgstr "For those who know,"

#. HTML: <br>
msgctxt "thag2.37:5.4"
msgid "ratti hoti vijānatā”."
msgstr "this night is really for waking."

#. HTML: </p><p><a class="sc" id="2"></a><a class="vns" id="vns194"></a><a
#. class="vnp" id="vnp194"></a>
msgctxt "thag2.37:6.1"
msgid "“Hatthikkhandhāvapatitaṃ,"
msgstr "Were I to fall from the back of an elephant,"

#. HTML: <br>
msgctxt "thag2.37:6.2"
msgid "kuñjaro ce anukkame;"
msgstr "trampled by the tuskers that follow,"

#. HTML: <br>
msgctxt "thag2.37:6.3"
msgid "Saṅgāme me mataṃ seyyo,"
msgstr "better for me to die in battle,"

#. HTML: <br>
msgctxt "thag2.37:6.4"
msgid "yañce jīve parājito”ti."
msgstr "than to live on in defeat."

#. HTML: </p></blockquote><p class="endsutta">
msgctxt "thag2.37:7.1"
msgid "…"
msgstr ""

#. VAR: poṭiriyo → selissariya (bj) | poṭiriyaputto (s2, s3, pts1-2)
msgctxt "thag2.37:7.2"
msgid "Soṇo poṭiriyo thero …."
msgstr ""
