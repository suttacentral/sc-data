msgstr " "

msgctxt "an6.62:10.20"
msgid "‘imassa kho puggalassa kusalā dhammā antarahitā, akusalā dhammā sammukhībhūtā. "
msgstr " "

msgctxt "an6.62:10.21"
msgid "Atthi ca khvassa kusalamūlaṃ asamucchinnaṃ, tampi sabbena sabbaṃ samugghātaṃ gacchati. "
msgstr " "

msgctxt "an6.62:10.22"
msgid "Evamayaṃ puggalo āyatiṃ parihānadhammo bhavissatī’ti. "
msgstr "This person is still liable to decline in the future … "

msgctxt "an6.62:10.23"
msgid "Evampi kho, ānanda, tathāgatassa purisapuggalo cetasā ceto paricca vidito hoti. "
msgstr " "

msgctxt "an6.62:10.24"
msgid "Evampi kho, ānanda, tathāgatassa purisindriyañāṇaṃ cetasā ceto paricca viditaṃ hoti. "
msgstr " "

msgctxt "an6.62:10.25"
msgid "Evampi kho, ānanda, tathāgatassa āyatiṃ dhammasamuppādo cetasā ceto paricca vidito hoti. (4) "
msgstr " "

