msgid "moho … "
msgstr "delusion … "

msgctxt "an10.23:7.15"
msgid "kodho … "
msgstr "anger … "

msgctxt "an10.23:7.16"
msgid "upanāho … "
msgstr "hostility … "

msgctxt "an10.23:7.17"
msgid "makkho … "
msgstr "offensiveness … "

msgctxt "an10.23:7.18"
msgid "paḷāso … "
msgstr "contempt … "

msgctxt "an10.23:7.19"
msgid "macchariyaṃ … "
msgstr "stinginess … "

msgctxt "an10.23:7.20"
msgid "pāpikā issā … "
msgstr "nasty jealousy … "

msgctxt "an10.23:7.21"
msgid "pāpikā icchā na hoti, tathāhimaṃ āyasmantaṃ pāpikā icchā abhibhuyya iriyatī’ti. "
msgstr "or corrupt wishes, so corrupt wishes master them and keep going.’ "

