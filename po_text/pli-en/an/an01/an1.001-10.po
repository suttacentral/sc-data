msgstr " "

#. HTML: </p></article></section><section class="sutta" data-uid="an1.9" id="9"><article><div class="hgroup"><h1>
msgctxt "an1.1-10:8.1.4"
msgid "9 "
msgstr "9 "

#. HTML: </h1></div><p>
#. REF: sc9.1
msgctxt "an1.1-10:9.1.1"
