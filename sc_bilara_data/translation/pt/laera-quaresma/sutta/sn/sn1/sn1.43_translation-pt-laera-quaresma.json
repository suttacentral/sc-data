{
  "sn1.43:0.1": "Saṃyutta Nikāya 1",
  "sn1.43:0.2": "5. Em Chamas",
  "sn1.43:0.3": "43. Comida",
  "sn1.43:1.1": "“Tanto devas quanto humanos",
  "sn1.43:1.2": "apreciam sua comida.",
  "sn1.43:1.3": "Então qual o nome do espírito",
  "sn1.43:1.4": "que não aprecia a comida?”",
  "sn1.43:2.1": "“Aqueles que oferecem com fé",
  "sn1.43:2.2": "e com clareza e confiança no coração,",
  "sn1.43:2.3": "se rodeiam de alimentos",
  "sn1.43:2.4": "neste mundo e no próximo.",
  "sn1.43:3.1": "A mesquinhez deve ser dissipada,",
  "sn1.43:3.2": "ultrapassando essa mácula e sendo generoso.",
  "sn1.43:3.3": "As boas ações dos seres vivos",
  "sn1.43:3.4": "os apóiam no mundo próximo.”"
}