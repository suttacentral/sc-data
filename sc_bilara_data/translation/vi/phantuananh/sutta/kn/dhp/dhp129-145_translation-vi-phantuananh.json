{
  "dhp129:0.1": "Tiểu Bộ Kinh ",
  "dhp129:0.2": "Kinh Pháp Cú ",
  "dhp129:0.3": "Phẩm Hình Phạt ",
  "dhp129:0.4": "Chuyện 6 vị Tỳ-kheo hành hun ",
  "dhp129:1": "Mọi người sợ hình phạt, ",
  "dhp129:2": "Mọi người sợ tử vong. ",
  "dhp129:3": "Lấy mình làm ví dụ ",
  "dhp129:4": "Không giết, không bảo giết. ",
  "dhp130:0": "Chuyện 6 vị Tỳ-kheo đe doạ ",
  "dhp130:1": "Mọi người sợ hình phạt, ",
  "dhp130:2": "Mọi người thương sống còn; ",
  "dhp130:3": "Lấy mình làm ví dụ, ",
  "dhp130:4": "Không giết, không bảo giết. ",
  "dhp131:0": "Chuyện lũ trẻ đập rắn ",
  "dhp131:1": "Chúng sanh cầu an lạc, ",
  "dhp131:2": "Ai dùng trượng hại người, ",
  "dhp131:3": "Ðể tìm lạc cho mình, ",
  "dhp131:4": "Ðời sau không được lạc. ",
  "dhp132:1": "Chúng sanh cầu an lạc, ",
  "dhp132:2": "Không dùng trượng hại người, ",
  "dhp132:3": "Ðể tìm lạc cho mình, ",
  "dhp132:4": "Ðời sau hưởng được lạc. ",
  "dhp133:0": "Chuyện Trưởng lão Koṇḍadhāna ",
  "dhp133:1": "Chớ nói lời ác độc, ",
  "dhp133:2": "Nói ác, bị nói lại, ",
  "dhp133:3": "Khổ thay lời phẫn nộ, ",
  "dhp133:4": "Ðao trượng phản chạm người. ",
  "dhp134:1": "Nếu tự mình yên lặng, ",
  "dhp134:2": "Như chiếc chuông bị bể. ",
  "dhp134:3": "Người đã chứng Niết-bàn ",
  "dhp134:4": "Người không còn phẫn nộ. ",
  "dhp135:0": "Chuyện bát quan trai giới của các tín nữ ",
  "dhp135:1": "Với gậy người chăn bò, ",
  "dhp135:2": "Lùa bò ra bãi cỏ; ",
  "dhp135:3": "Cũng vậy, già và chết, ",
  "dhp135:4": "Lùa người đến mạng chung. ",
  "dhp136:0": "Chuyện ngạ quỷ mình trăn ",
  "dhp136:1": "Người ngu làm điều ác, ",
  "dhp136:2": "Không ý thức việc làm. ",
  "dhp136:3": "Do tự nghiệp, người ngu ",
  "dhp136:4": "Bị nung nấu, như lửa. ",
  "dhp137:0": "Chuyện Trưởng lão Mahā Moggallāna (Mục-kiền-liên) ",
  "dhp137:1": "Dùng trượng phạt không trượng ",
  "dhp137:2": "Làm ác người không ác. ",
  "dhp137:3": "Trong mười loại khổ đau, ",
  "dhp137:4": "Chịu gấp một loại khổ: ",
  "dhp138:1": "Hoặc khổ thọ khốc liệt, ",
  "dhp138:2": "Thân thể bị thương vong, ",
  "dhp138:3": "Hoặc thọ bệnh kịch liệt, ",
  "dhp138:4": "Hay loạn ý tán tâm. ",
  "dhp139:1": "Hoặc tai vạ từ vua, ",
  "dhp139:2": "Hay bị vu trọng tội; ",
  "dhp139:3": "Bà con phải ly tán, ",
  "dhp139:4": "Tài sản bị nát tan. ",
  "dhp140:1": "Hoặc phòng ốc nhà cửa ",
  "dhp140:2": "Bị hỏa tai thiêu đốt; ",
  "dhp140:3": "Khi thân hoại mạng chung, ",
  "dhp140:4": "Ác tuệ sanh địa ngục. ",
  "dhp141:0": "Chuyện vị Tỳ-kheo có nhiều vật dụng ",
  "dhp141:1": "Không phải sống lõa thể Bện tóc, tro trét mình, ",
  "dhp141:2": "Tuyệt thực, lăn trên đất, ",
  "dhp141:3": "Sống nhớp, siêng ngồi xổm, ",
  "dhp141:4": "Làm con người được sạch, Nếu không trừ nghi hoặc. ",
  "dhp142:0": "Chuyện quan đại thần Santati ",
  "dhp142:1": "Ai sống tự trang sức, ",
  "dhp142:2": "Nhưng an tịnh, nhiếp phục, Sống kiên trì, phạm hạnh, ",
  "dhp142:3": "Không hại mọi sinh linh. ",
  "dhp142:4": "Vị ấy là phạm chí, Hay sa môn, khất sĩ. ",
  "dhp143:0": "Chuyện Trưởng lão Pilotika (Khố Rách) ",
  "dhp143:1": "Thật khó tìm ở đời, ",
  "dhp143:2": "Người biết thẹn, tự chế, ",
  "dhp143:3": "Biết tránh né chỉ trích ",
  "dhp143:4": "Như ngựa hiền tránh roi. ",
  "dhp144:1": "Như ngựa hiền chạm roi, ",
  "dhp144:2": "Hãy nhiệt tâm, hăng hái, ",
  "dhp144:3": "Với tín, giới, tinh tấn, ",
  "dhp144:4": "Thiền định cùng trạch pháp. ",
  "dhp144:5": "Minh hạnh đủ, chánh niệm, ",
  "dhp144:6": "Ðoạn khổ này vô lượng. ",
  "dhp145:0": "Chuyện Sa-di Sukha (Hạnh Phúc) ",
  "dhp145:1": "Người trị thủy dẫn nước, ",
  "dhp145:2": "Kẻ làm tên nắn tên, ",
  "dhp145:3": "Người thợ mộc uốn ván, ",
  "dhp145:4": "Bậc tự điều, điều thân. ",
  "dhp145:5": "Hết phẩm Hình Phạt "
}