{
  "dhp221:0.1": "Tiểu Bộ Kinh ",
  "dhp221:0.2": "Kinh Pháp Cú ",
  "dhp221:0.3": "Phẩm Phẫn Nộ ",
  "dhp221:0.4": "Chuyện Tỳ-kheo-ni Rohinī ",
  "dhp221:1": "Bỏ phẫn nộ, ly mạn, ",
  "dhp221:2": "Vượt qua mọi kiết sử, ",
  "dhp221:3": "Không chấp trước danh sắc. ",
  "dhp221:4": "Khổ không theo vô sản. ",
  "dhp222:0": "Chuyện Tỳ-kheo đốn cây rừng ",
  "dhp222:1": "Ai chận được phẫn nộ, ",
  "dhp222:2": "Như dừng xe đang lăn, ",
  "dhp222:3": "Ta gọi người đánh xe, ",
  "dhp222:4": "Kẻ khác, cầm cương hờ. ",
  "dhp223:0": "Chuyện tín nữ Uttarā ",
  "dhp223:1": "Lấy không giận thắng giận, ",
  "dhp223:2": "Lấy thiện thắng không thiện, ",
  "dhp223:3": "Lấy thí thắng xan tham, ",
  "dhp223:4": "Lấy chơn thắng hư ngụy. ",
  "dhp224:0": "Chuyện Trưởng lão Mahā Moggallāna (Mục-kiền-liên) vấn đạo ",
  "dhp224:1": "Nói thật, không phẫn nộ, ",
  "dhp224:2": "Của ít, thí người xin, ",
  "dhp224:3": "Nhờ ba việc lành này, ",
  "dhp224:4": "Người đến gần thiên giới. ",
  "dhp225:0": "Chuyện chư Tăng vấn đạo ",
  "dhp225:1": "Bậc hiền không hại ai, ",
  "dhp225:2": "Thân thường được chế ngự ",
  "dhp225:3": "Ðạt được cảnh bất tử, ",
  "dhp225:4": "Ðến đây, không ưu sầu. ",
  "dhp226:0": "Chuyện nữ tỳ Puṇṇa ",
  "dhp226:1": "Những người thường giác tỉnh, ",
  "dhp226:2": "Ngày đêm siêng tu học, ",
  "dhp226:3": "Chuyên tâm hướng Niết bàn, ",
  "dhp226:4": "Mọi lậu hoặc được tiêu. ",
  "dhp227:0": "Chuyện thiện nam tử Atula ",
  "dhp227:1": "A-tu-la, nên biết, ",
  "dhp227:2": "Xưa vậy, nay cũng vậy, ",
  "dhp227:3": "Ngồi im, bị người chê, ",
  "dhp227:4": "Nói nhiều, bị người chê, ",
  "dhp227:5": "Nói vừa phải, bị chê. ",
  "dhp227:6": "Làm người không bị chê, Thật khó tìm ở đời. ",
  "dhp228:1": "Xưa, vị lai, và nay, ",
  "dhp228:2": "Ðâu có sự kiện này, ",
  "dhp228:3": "Người hoàn toàn bị chê, ",
  "dhp228:4": "Người trọn vẹn được khen. ",
  "dhp229:1": "Sáng sáng, thẩm xét kỹ. ",
  "dhp229:2": "Bậc có trí tán thán. ",
  "dhp229:3": "Bậc trí không tỳ vết, ",
  "dhp229:4": "Ðầy đủ giới định tuệ. ",
  "dhp230:1": "Hạnh sáng như vàng ròng, ",
  "dhp230:2": "Ai dám chê vị ấy? ",
  "dhp230:3": "Chư thiên phải khen thưởng, ",
  "dhp230:4": "Phạm Thiên cũng tán dương. ",
  "dhp231:0": "Chuyện 6 vị Tỳ-kheo ",
  "dhp231:1": "Giữ thân đừng phẫn nộ, ",
  "dhp231:2": "Phòng thân khéo bảo vệ, ",
  "dhp231:3": "Từ bỏ thân làm ác, ",
  "dhp231:4": "Với thân làm hạnh lành. ",
  "dhp232:1": "Giữ lời đừng phẫn nộ, ",
  "dhp232:2": "Phòng lời khéo bảo vệ, ",
  "dhp232:3": "Từ bỏ lời thô ác, ",
  "dhp232:4": "Với lời, nói điều lành. ",
  "dhp233:1": "Giữ ý đừng phẫn nộ, ",
  "dhp233:2": "Phòng ý, khéo bảo vệ, ",
  "dhp233:3": "Từ bỏ ý nghĩ ác, ",
  "dhp233:4": "Với ý, nghĩ hạnh lành. ",
  "dhp234:1": "Bậc trí bảo vệ thân, ",
  "dhp234:2": "Bảo vệ luôn lời nói ",
  "dhp234:3": "Bảo vệ cả tâm tư, ",
  "dhp234:4": "Ba nghiệp khéo bảo vệ. ",
  "dhp234:5": "Hết phẩm Phẫn Nộ "
