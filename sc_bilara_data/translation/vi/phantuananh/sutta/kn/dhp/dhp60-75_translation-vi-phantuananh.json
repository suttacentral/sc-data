{
  "dhp60:0.1": "Tiểu Bộ Kinh ",
  "dhp60:0.2": "Kinh Pháp Cú ",
  "dhp60:0.3": "Phẩm Ngu ",
  "dhp60:0.4": "Chuyện trai nghèo có vợ đẹp ",
  "dhp60:1": "Ðêm dài cho kẻ thức, ",
  "dhp60:2": "Ðường dài cho kẻ mệt, ",
  "dhp60:3": "Luân hồi dài, kẻ ngu, ",
  "dhp60:4": "Không biết chơn diệu pháp. ",
  "dhp61:0": "Chuyện đệ tử của Trưởng lão Mahā Kassapa (Ca-diếp) ",
  "dhp61:1": "Tìm không được bạn đường, ",
  "dhp61:2": "Hơn mình hay bằng mình, ",
  "dhp61:3": "Thà quyết sống một mình, ",
  "dhp61:4": "Không làm bạn kẻ ngu. ",
  "dhp62:0": "Chuyện Trưởng giả Ānanda ",
  "dhp62:1": "“Con tôi, tài sản tôi”, ",
  "dhp62:2": "Người ngu sanh ưu não, ",
  "dhp62:3": "Tự ta, ta không có, ",
  "dhp62:4": "Con đâu, tài sản đâu? ",
  "dhp63:0": "Chuyện tên trộm ",
  "dhp63:1": "Người ngu nghĩ mình ngu, ",
  "dhp63:2": "Nhờ vậy thành có trí. ",
  "dhp63:3": "Người ngu tưởng có trí, ",
  "dhp63:4": "Thật xứng gọi chí ngu. ",
  "dhp64:0": "Chuyện Trưởng lão Udāyi ",
  "dhp64:1": "Người ngu, dầu trọn đời, ",
  "dhp64:2": "Thân cận người có trí, ",
  "dhp64:3": "Không biết được Chánh pháp, ",
  "dhp64:4": "Như muỗng với vị canh. ",
  "dhp65:0": "Chuyện nhóm Tỳ-kheo ở xứ Pāveyyaka ",
  "dhp65:1": "Người trí, dù một khắc, ",
  "dhp65:2": "Thân cận người có trí, ",
  "dhp65:3": "Biết ngay chân diệu pháp, ",
  "dhp65:4": "Như lưỡi với vị canh. ",
  "dhp66:0": "Chuyện ông Suppabuddhakuṭṭhi (Thiện Giác cùi) ",
  "dhp66:1": "Người ngu si thiếu trí, ",
  "dhp66:2": "Tự ngã thành kẻ thù. ",
  "dhp66:3": "Làm các nghiệp không thiện, ",
  "dhp66:4": "Phải chịu quả đắng cay. ",
  "dhp67:0": "Chuyện người nông phu mắc cạn ",
  "dhp67:1": "Nghiệp làm không chánh thiện, ",
  "dhp67:2": "Làm rồi sanh ăn năn, ",
  "dhp67:3": "Mặt nhuốm lệ, khóc than, ",
  "dhp67:4": "Lãnh chịu quả dị thục. ",
  "dhp68:0": "Chuyện người kết tràng hoa Sumana (Hảo Ý) ",
  "dhp68:1": "Và nghiệp làm chánh thiện, ",
  "dhp68:2": "Làm rồi không ăn năn, ",
  "dhp68:3": "Hoan hỷ, ý đẹp lòng, ",
  "dhp68:4": "Hưởng thọ quả dị thục. ",
  "dhp69:0": "Chuyện Thánh nữ Uppalavaṇṇā (Thanh Liên Sắc) ",
  "dhp69:1": "Người ngu nghĩ là ngọt, ",
  "dhp69:2": "Khi ác chưa chín muồi; ",
  "dhp69:3": "Ác nghiệp chín muồi rồi, ",
  "dhp69:4": "Người ngu chịu khổ đau. ",
  "dhp70:0": "Chuyện tu sĩ ngoại đạo Jambūka (Hào Cẩu) ",
  "dhp70:1": "Tháng tháng với ngọn cỏ, ",
  "dhp70:2": "Người ngu có ăn uống ",
  "dhp70:3": "Không bằng phần mười sáu, ",
  "dhp70:4": "Người hiểu pháp hữu vi. ",
  "dhp71:0": "Chuyện ngạ quỷ mình rắn ",
  "dhp71:1": "Nghiệp ác đã được làm, ",
  "dhp71:2": "Như sữa, không đông ngay, ",
  "dhp71:3": "Cháy ngầm theo kẻ ngu, ",
  "dhp71:4": "Như lửa tro che đậy. ",
  "dhp72:0": "Chuyện ngạ quỷ bị búa đập đầu ",
  "dhp72:1": "Tự nó chịu bất hạnh, ",
  "dhp72:2": "Khi danh đến kẻ ngu. ",
  "dhp72:3": "Vận may bị tổn hại, ",
  "dhp72:4": "Ðầu nó bị nát tan. ",
  "dhp73:0": "Chuyện Trưởng lão Suddhamma (Thiện Pháp) ",
  "dhp73:1": "Ưa danh không tương xứng, ",
  "dhp73:2": "Muốn ngồi trước tỳ-kheo, ",
  "dhp73:3": "ưa quyền tại tịnh xá, ",
  "dhp73:4": "Muốn mọi người lễ kính. ",
  "dhp74:1": "“Mong cả hai tăng, tục, ",
  "dhp74:2": "Nghĩ rằng chính ta làm. ",
  "dhp74:3": "Trong mọi việc lớn nhỏ, ",
  "dhp74:4": "Phải theo mệnh lệnh ta” ",
  "dhp74:5": "Người ngu nghĩ như vậy ",
  "dhp74:6": "Dục và mạn tăng trưởng. ",
  "dhp75:0": "Chuyện Trưởng lão Tissa ở rừng Vanavāsi ",
  "dhp75:1": "Khác thay duyên thế lợi, ",
  "dhp75:2": "Khác thay đường Niết-bàn. ",
  "dhp75:3": "Tỳ-kheo, đệ tử Phật, ",
  "dhp75:4": "Hãy như vậy thắng tri. ",
  "dhp75:5": "Chớ ưa thích cung kính, ",
  "dhp75:6": "Hãy tu hạnh viễn ly. ",
  "dhp75:7": "Hết phẩm Ngu "
}