{
  "dhp33:0.1": "Tiểu Bộ Kinh ",
  "dhp33:0.2": "Kinh Pháp Cú ",
  "dhp33:0.3": "Phẩm Tâm ",
  "dhp33:0.4": "Chuyện Trưởng lão Meghiya (Mê-kỳ-dạ) ",
  "dhp33:1": "Tâm hoảng hốt giao động, ",
  "dhp33:2": "Khó hộ trì, khó nhiếp, ",
  "dhp33:3": "Người trí làm tâm thẳng, ",
  "dhp33:4": "Như thợ tên, làm tên. ",
  "dhp34:1": "Như cá quăng lên bờ, ",
  "dhp34:2": "Vất ra ngoài thủy giới; ",
  "dhp34:3": "Tâm này vùng vẫy mạnh, ",
  "dhp34:4": "Hãy đoạn thế lực Ma. ",
  "dhp35:0": "Chuyện vị Tỳ-kheo ở làng Mātikagāma (Thủy Lưu) ",
  "dhp35:1": "Khó nắm giữ, khinh động, ",
  "dhp35:2": "Theo các dục quay cuồng. ",
  "dhp35:3": "Lành thay, điều phục tâm; ",
  "dhp35:4": "Tâm điều, an lạc đến. ",
  "dhp36:0": "Chuyện vị Tỳ-kheo bất mãn ",
  "dhp36:1": "Tâm khó thấy, tế nhị, ",
  "dhp36:2": "Theo các dục quay cuồng. ",
  "dhp36:3": "Người trí phòng hộ tâm, ",
  "dhp36:4": "Tâm hộ, an lạc đến. ",
  "dhp37:0": "Chuyện Trưởng lão Saṅgharakkhitabhāginey (Hộ Tăng Điệt) ",
  "dhp37:1": "Chạy xa, sống một mình, ",
  "dhp37:2": "Không thân, ẩn hang sâu, ",
  "dhp37:3": "Ai điều phục được tâm, ",
  "dhp37:4": "Thoát khỏi Ma trói buộc. ",
  "dhp38:0": "Chuyện Trưởng lão Cittahattha (Phục Tâm) ",
  "dhp38:1": "Ai tâm không an trú, ",
  "dhp38:2": "Không biết chân diệu pháp, ",
  "dhp38:3": "Tịnh tín bị rúng động, ",
  "dhp38:4": "Trí tuệ không viên thành. ",
  "dhp39:1": "Tâm không đầy tràn dục, ",
  "dhp39:2": "Tâm không (hận) công phá, ",
  "dhp39:3": "Ðoạn tuyệt mọi thiện ác, ",
  "dhp39:4": "Kẻ tỉnh không sợ hãi. ",
  "dhp40:0": "Chuyện các Tỳ-kheo quán tự ngã ",
  "dhp40:1": "Biết thân như đồ gốm, ",
  "dhp40:2": "Trú tâm như thành trì, ",
  "dhp40:3": "Chống Ma với gươm trí; ",
  "dhp40:4": "Giữ chiến thắng không tham ",
  "dhp41:0": "Chuyện Trưởng lão Tissa lở loét ",
  "dhp41:1": "Không bao lâu thân này, ",
  "dhp41:2": "Sẽ nằm dài trên đất, ",
  "dhp41:3": "Bị vất bỏ, vô thức, ",
  "dhp41:4": "Như khúc cây vô dụng. ",
  "dhp42:0": "Chuyện Nanda chủ trại bò ",
  "dhp42:1": "Kẻ thù hại kẻ thù, ",
  "dhp42:2": "Oan gia hại oan gia, ",
  "dhp42:3": "Không bằng tâm hướng tà, ",
  "dhp42:4": "Gây ác cho tự thân. ",
  "dhp43:0": "Chuyện Trưởng lão Soreyya (Tu-lệ-da) ",
  "dhp43:1": "Ðiều mẹ cha bà con, ",
  "dhp43:2": "Không có thể làm được, ",
  "dhp43:3": "Tâm hướng chánh làm được ",
  "dhp43:4": "Làm được tốt đẹp hơn. ",
  "dhp43:5": "Hết phẩm Tâm "
}