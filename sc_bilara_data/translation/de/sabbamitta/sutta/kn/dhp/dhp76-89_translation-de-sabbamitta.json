{
  "dhp76:0.1": "'\"\\'Kleinere Sammlung \\'\"'",
  "dhp76:0.2": "'\"\\'Dhammasprüche 76–89 \\'\"'",
  "dhp76:0.3": "'\"\\'6. Das Kapitel über den klugen Menschen \\'\"'",
  "dhp76:1": "'\"\\'Betrachte jemanden, der deine Fehler sieht, \\'\"'",
  "dhp76:2": "'\"\\'als Führer zu einem verborgenen Schatz. \\'\"'",
  "dhp76:3": "'\"\\'Bleib nahe bei einem, der so verständig und klug ist, \\'\"'",
  "dhp76:4": "'\"\\'der dich verbessert, wenn es nötig ist. \\'\"'",
  "dhp76:5": "'\"\\'Wenn man nahe bei einem solchen bleibt, \\'\"'",
  "dhp76:6": "'\"\\'wird es besser, nicht schlechter. \\'\"'",
  "dhp77:1": "'\"\\'Unterweise und leite an; \\'\"'",
  "dhp77:2": "'\"\\'gebiete dem Schlechten Einhalt: \\'\"'",
  "dhp77:3": "'\"\\'Denn du wirst den Guten lieb \\'\"'",
  "dhp77:4": "'\"\\'und den Schlechten unlieb sein. \\'\"'",
  "dhp78:1": "'\"\\'Mische dich nicht unter schlechte Freunde \\'\"'",
  "dhp78:2": "'\"\\'und auch nicht unter die schlechtesten Menschen. \\'\"'",
  "dhp78:3": "'\"\\'Misch dich unter geistliche Freunde \\'\"'",
  "dhp78:4": "'\"\\'und unter die besten der Menschen. \\'\"'",
  "dhp79:1": "'\"\\'Durch Freude an der Lehre schläft man gut \\'\"'",
  "dhp79:2": "'\"\\'mit klarem, zuversichtlichem Herzen. \\'\"'",
  "dhp79:3": "'\"\\'Ein kluger Mensch freut sich stets an der Lehre, \\'\"'",
  "dhp79:4": "'\"\\'die vom Edlen verkündet wurde. \\'\"'",
  "dhp80:1": "'\"\\'Bewässerungsanlagen leiten Wasser, \\'\"'",
  "dhp80:2": "'\"\\'Pfeilmacher richten Pfeile gerade, \\'\"'",
  "dhp80:3": "'\"\\'Zimmerer bearbeiten Holz; \\'\"'",
  "dhp80:4": "'\"\\'doch die Klugen zähmen sich selbst. \\'\"'",
  "dhp81:1": "'\"\\'So wie der Wind \\'\"'",
  "dhp81:2": "'\"\\'eine feste Felsmasse nicht aufwühlen kann, \\'\"'",
  "dhp81:3": "'\"\\'so können auch Ruhm und Schande \\'\"'",
  "dhp81:4": "'\"\\'den klugen Menschen nicht treffen. \\'\"'",
  "dhp82:1": "'\"\\'Wie ein tiefer See, \\'\"'",
  "dhp82:2": "'\"\\'klar und ungetrübt, \\'\"'",
  "dhp82:3": "'\"\\'so klar sind kluge Menschen, \\'\"'",
  "dhp82:4": "'\"\\'wenn sie die Lehren hören. \\'\"'",
  "dhp83:1": "'\"\\'Wahre Menschen geben alles auf, \\'\"'",
  "dhp83:2": "'\"\\'sie betteln nicht nach den Dingen, die sie begehren. \\'\"'",
  "dhp83:3": "'\"\\'Auch wenn von Glück oder Schmerz getroffen, \\'\"'",
  "dhp83:4": "'\"\\'erscheint der kluge Mensch weder niedergeschlagen noch freudig bewegt. \\'\"'",
  "dhp84:1": "'\"\\'Wünsche nie Erfolg mit unrechtmäßigen Mitteln \\'\"'",
  "dhp84:2": "'\"\\'für dich selbst oder jemand anderen, \\'\"'",
  "dhp84:3": "'\"\\'wünsche nicht Kinder, Besitz oder Herrschaft; \\'\"'",
  "dhp84:4": "'\"\\'sei vielmehr sittlich, weise und gerecht. \\'\"'",
  "dhp85:1": "'\"\\'Wenige sind es unter den Menschen, \\'\"'",
  "dhp85:2": "'\"\\'die zum anderen Ufer gelangt sind. \\'\"'",
  "dhp85:3": "'\"\\'Der Rest läuft nur \\'\"'",
  "dhp85:4": "'\"\\'an diesem Ufer hin und her. \\'\"'",
  "dhp86:1": "'\"\\'Wenn die Lehre gut erklärt ist, \\'\"'",
  "dhp86:2": "'\"\\'sind die, die danach üben, \\'\"'",
  "dhp86:3": "'\"\\'diejenigen, die hinübergelangen \\'\"'",
  "dhp86:4": "'\"\\'über das Hoheitsgebiet des Todes, dem so schwer zu entkommen ist. \\'\"'",
  "dhp87:1": "'\"\\'Nachdem er von dunklen Eigenschaften frei ist, \\'\"'",
  "dhp87:2": "'\"\\'soll ein kluger Mensch die hellen entwickeln. \\'\"'",
  "dhp87:3": "'\"\\'Lasst euer Heim zurück \\'\"'",
  "dhp87:4": "'\"\\'um der Abgeschiedenheit willen, die so schwer zu genießen ist; \\'\"'",
  "dhp88:1": "'\"\\'findet daran Gefallen, \\'\"'",
  "dhp88:2": "'\"\\'nachdem ihr Sinnenfreuden hinter euch gelassen habt. \\'\"'",
  "dhp88:3": "'\"\\'Ohne Besitz soll ein kluger Mensch \\'\"'",
  "dhp88:4": "'\"\\'sich von Verunreinigungen des Geistes läutern. \\'\"'",
  "dhp89:1": "'\"\\'Wessen Geist in den Faktoren des Erwachens \\'\"'",
  "dhp89:2": "'\"\\'richtig entwickelt ist, \\'\"'",
  "dhp89:3": "'\"\\'wer die Anhänglichkeit losgelassen hat \\'\"'",
  "dhp89:4": "'\"\\'und das Nicht-Ergreifen genießt: \\'\"'",
  "dhp89:5": "'\"\\'Solche haben die Befleckungen aufgelöst, glänzend, \\'\"'",
  "dhp89:6": "'\"\\'in dieser Welt sind sie erloschen. \\'\"'"
}