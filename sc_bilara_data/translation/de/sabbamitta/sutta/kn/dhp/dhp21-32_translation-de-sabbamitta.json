{
  "dhp21:0.1": "'\\'\"\\\\\\'Kleinere Sammlung \\\\\\'\"\\''",
  "dhp21:0.2": "'\\'\"\\\\\\'Dhammasprüche 21–32 \\\\\\'\"\\''",
  "dhp21:0.3": "'\\'\"\\\\\\'2. Das Kapitel über Beflissenheit \\\\\\'\"\\''",
  "dhp21:1": "'\\'\"\\\\\\'Beflissenheit ist der Zustand der Unsterblichkeit, \\\\\\'\"\\''",
  "dhp21:2": "'\\'\"\\\\\\'Nachlässigkeit ist der Zustand des Todes. \\\\\\'\"\\''",
  "dhp21:3": "'\\'\"\\\\\\'Die Beflissenen sterben nicht, \\\\\\'\"\\''",
  "dhp21:4": "'\\'\"\\\\\\'doch die Nachlässigen sind wie Tote. \\\\\\'\"\\''",
  "dhp22:1": "'\\'\"\\\\\\'Wenn sie diesen Unterschied \\\\\\'\"\\''",
  "dhp22:2": "'\\'\"\\\\\\'bei der Beflissenheit verstehen, \\\\\\'\"\\''",
  "dhp22:3": "'\\'\"\\\\\\'freuen sich kluge Menschen an Beflissenheit, \\\\\\'\"\\''",
  "dhp22:4": "'\\'\"\\\\\\'glücklich im Revier der Edlen. \\\\\\'\"\\''",
  "dhp23:1": "'\\'\"\\\\\\'Beständig in der Meditation, \\\\\\'\"\\''",
  "dhp23:2": "'\\'\"\\\\\\'stets beharrlich fest, \\\\\\'\"\\''",
  "dhp23:3": "'\\'\"\\\\\\'so verwirklichen die Weisen das Erlöschen, \\\\\\'\"\\''",
  "dhp23:4": "'\\'\"\\\\\\'das unübertreffliche Schutzgebiet. \\\\\\'\"\\''",
  "dhp24:1": "'\\'\"\\\\\\'Wer sich anstrengt und achtsam ist, \\\\\\'\"\\''",
  "dhp24:2": "'\\'\"\\\\\\'mit reiner Tat und bedächtig, \\\\\\'\"\\''",
  "dhp24:3": "'\\'\"\\\\\\'gezügelt, rechtschaffen lebend und beflissen: \\\\\\'\"\\''",
  "dhp24:4": "'\\'\"\\\\\\'Sein Ruhm nimmt stets zu. \\\\\\'\"\\''",
  "dhp25:1": "'\\'\"\\\\\\'Durch Anstrengung und Beflissenheit, \\\\\\'\"\\''",
  "dhp25:2": "'\\'\"\\\\\\'durch Zügelung und Selbstbeherrschung \\\\\\'\"\\''",
  "dhp25:3": "'\\'\"\\\\\\'kann ein verständiger Mensch eine Insel bauen, \\\\\\'\"\\''",
  "dhp25:4": "'\\'\"\\\\\\'die die Flut nicht überschwemmen kann. \\\\\\'\"\\''",
  "dhp26:1": "'\\'\"\\\\\\'Toren und Dummköpfe \\\\\\'\"\\''",
  "dhp26:2": "'\\'\"\\\\\\'weihen sich der Nachlässigkeit. \\\\\\'\"\\''",
  "dhp26:3": "'\\'\"\\\\\\'Doch der Verständige hütet Beflissenheit \\\\\\'\"\\''",
  "dhp26:4": "'\\'\"\\\\\\'als seinen besten Schatz. \\\\\\'\"\\''",
  "dhp27:1": "'\\'\"\\\\\\'Weihe dich nicht der Nachlässigkeit, \\\\\\'\"\\''",
  "dhp27:2": "'\\'\"\\\\\\'genieße nicht erotische Nähe. \\\\\\'\"\\''",
  "dhp27:3": "'\\'\"\\\\\\'Denn wenn du beflissen bist und Vertiefung übst, \\\\\\'\"\\''",
  "dhp27:4": "'\\'\"\\\\\\'wirst du das höchste Glück erlangen. \\\\\\'\"\\''",
  "dhp28:1": "'\\'\"\\\\\\'Wenn der Kluge Nachlässigkeit \\\\\\'\"\\''",
  "dhp28:2": "'\\'\"\\\\\\'mittels Beflissenheit vertreibt \\\\\\'\"\\''",
  "dhp28:3": "'\\'\"\\\\\\'und den Tempel der Weisheit erklimmt, \\\\\\'\"\\''",
  "dhp28:4": "'\\'\"\\\\\\'blickt er, von Kummer frei, auf diese Generation voller Kummer, \\\\\\'\"\\''",
  "dhp28:5": "'\\'\"\\\\\\'wie ein Weiser vom Berggipfel \\\\\\'\"\\''",
  "dhp28:6": "'\\'\"\\\\\\'auf die Toren am Boden blickt. \\\\\\'\"\\''",
  "dhp29:1": "'\\'\"\\\\\\'Beflissen unter den Nachlässigen, \\\\\\'\"\\''",
  "dhp29:2": "'\\'\"\\\\\\'hellwach, während andere schlafen – \\\\\\'\"\\''",
  "dhp29:3": "'\\'\"\\\\\\'wer wahrhaft verständig ist, lässt sie zurück \\\\\\'\"\\''",
  "dhp29:4": "'\\'\"\\\\\\'wie ein flinkes Pferd ein schwaches. \\\\\\'\"\\''",
  "dhp30:1": "'\\'\"\\\\\\'Maghavā errang Vorrang unter den Göttern \\\\\\'\"\\''",
  "dhp30:2": "'\\'\"\\\\\\'durch Beflissenheit. \\\\\\'\"\\''",
  "dhp30:3": "'\\'\"\\\\\\'Die Menschen loben Beflissenheit, \\\\\\'\"\\''",
  "dhp30:4": "'\\'\"\\\\\\'doch Nachlässigkeit wird stets getadelt. \\\\\\'\"\\''",
  "dhp31:1": "'\\'\"\\\\\\'Ein Mönch, der Beflissenheit liebt \\\\\\'\"\\''",
  "dhp31:2": "'\\'\"\\\\\\'und die Gefahr in der Nachlässigkeit sieht, \\\\\\'\"\\''",
  "dhp31:3": "'\\'\"\\\\\\'kommt voran wie ein Feuer, \\\\\\'\"\\''",
  "dhp31:4": "'\\'\"\\\\\\'brennt nieder die Fesseln grob und fein. \\\\\\'\"\\''",
  "dhp32:1": "'\\'\"\\\\\\'Ein Mönch, der Beflissenheit liebt \\\\\\'\"\\''",
  "dhp32:2": "'\\'\"\\\\\\'und die Gefahr in der Nachlässigkeit sieht, \\\\\\'\"\\''",
  "dhp32:3": "'\\'\"\\\\\\'kann nicht verkümmern \\\\\\'\"\\''",
  "dhp32:4": "'\\'\"\\\\\\'und ist dem Erlöschen nahegekommen. \\\\\\'\"\\''"
}