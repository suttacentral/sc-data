{
  "thag2.37:0.1": "'Strophen der altehrwürdigen Mönche 2.37 '",
  "thag2.37:0.2": "'Das Zweierbuch '",
  "thag2.37:0.3": "'4. Das vierte Kapitel '",
  "thag2.37:0.4": "'Soṇapoṭiriya '",
  "thag2.37:1.1": "'Die Nacht mit ihrem Kranz von Sternen '",
  "thag2.37:1.2": "'ist nicht nur zum Schlafen. '",
  "thag2.37:1.3": "'Für die, die wissen, '",
  "thag2.37:1.4": "'ist diese Nacht wirklich zum Wachen. '",
  "thag2.37:2.1": "'Wenn ich vom Rücken eines Elefanten fiele, '",
  "thag2.37:2.2": "'zertrampelt von den nachfolgenden Elefanten, '",
  "thag2.37:2.3": "'wäre es besser für mich, in der Schlacht zu sterben, '",
  "thag2.37:2.4": "'als besiegt weiterzuleben. '"
}