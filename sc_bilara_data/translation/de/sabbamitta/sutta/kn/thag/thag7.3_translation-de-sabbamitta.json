{
  "thag7.3:0.1": "'Strophen der altehrwürdigen Mönche 7.3 '",
  "thag7.3:0.2": "'Das Siebenerbuch '",
  "thag7.3:0.3": "'1. Das erste Kapitel '",
  "thag7.3:0.4": "'Bhadda '",
  "thag7.3:1.1": "'Ich war ein Einzelkind, '",
  "thag7.3:1.2": "'von Mutter und Vater geliebt. '",
  "thag7.3:1.3": "'Sie bekamen mich dadurch, '",
  "thag7.3:1.4": "'dass sie viele Gebete und Gelübde ausübten. '",
  "thag7.3:2.1": "'Aus Anteilnahme für mich, '",
  "thag7.3:2.2": "'weil sie auf mein Wohl und meinen Vorteil bedacht waren, '",
  "thag7.3:2.3": "'brachten mein Vater und meine Mutter '",
  "thag7.3:2.4": "'mich zum Buddha. '",
  "thag7.3:3.1": "'„Wir bekamen diesen Sohn unter Schwierigkeiten; '",
  "thag7.3:3.2": "'er ist zart und zierlich. '",
  "thag7.3:3.3": "'Wir geben ihn dir, Gebieter, '",
  "thag7.3:3.4": "'damit er dem Sieger aufwarte.“ '",
  "thag7.3:4.1": "'Der Lehrer nahm mich an '",
  "thag7.3:4.2": "'und erklärte Ānanda: '",
  "thag7.3:4.3": "'„Gib ihm rasch die Weihe des Fortziehens – '",
  "thag7.3:4.4": "'dieser wird ein Vollblüter sein!“ '",
  "thag7.3:5.1": "'Nachdem er, der Lehrer, mich zum Fortziehen geschickt hatte, '",
  "thag7.3:5.2": "'betrat der Sieger seine Unterkunft. '",
  "thag7.3:5.3": "'Ehe die Sonne unterging, '",
  "thag7.3:5.4": "'war mein Geist befreit. '",
  "thag7.3:6.1": "'Der Lehrer vernachlässigte mich nicht; '",
  "thag7.3:6.2": "'als er aus seiner Klausur kam, '",
  "thag7.3:6.3": "'sagte er: „Komm, Bhadda!“ '",
  "thag7.3:6.4": "'Das war meine Ordination. '",
  "thag7.3:7.1": "'Mit sieben Jahren '",
  "thag7.3:7.2": "'erhielt ich die Ordination. '",
  "thag7.3:7.3": "'Das dreifache Wissen habe ich verwirklicht; '",
  "thag7.3:7.4": "'ach, die Exzellenz der Lehre! '"
}