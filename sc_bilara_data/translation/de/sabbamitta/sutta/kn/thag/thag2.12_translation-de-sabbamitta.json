{
  "thag2.12:0.1": "'Strophen der altehrwürdigen Mönche 2.12 '",
  "thag2.12:0.2": "'Das Zweierbuch '",
  "thag2.12:0.3": "'2. Das zweite Kapitel '",
  "thag2.12:0.4": "'Jotidāsa '",
  "thag2.12:1.1": "'Menschen, die hart handeln, '",
  "thag2.12:1.2": "'die Menschen angreifen, '",
  "thag2.12:1.3": "'sie mit dem Strick fesseln, '",
  "thag2.12:1.4": "'sie auf alle Arten verletzen: '",
  "thag2.12:1.5": "'Sie werden auf die gleiche Art behandelt; '",
  "thag2.12:1.6": "'ihre Taten verschwinden nicht. '",
  "thag2.12:2.1": "'Welche Taten ein Mensch auch tut, '",
  "thag2.12:2.2": "'gut oder schlecht: '",
  "thag2.12:2.3": "'Er ist der Erbe jeder einzelnen Tat, '",
  "thag2.12:2.4": "'die er tut. '"
}