{
  "thag2.27:0.1": "'\\'\"\\\\\\'Strophen der altehrwürdigen Mönche 2.27 \\\\\\'\"\\''",
  "thag2.27:0.2": "'\\'\"\\\\\\'Das Zweierbuch \\\\\\'\"\\''",
  "thag2.27:0.3": "'\\'\"\\\\\\'3. Das dritte Kapitel \\\\\\'\"\\''",
  "thag2.27:0.4": "'\\'\"\\\\\\'Nandaka (1) \\\\\\'\"\\''",
  "thag2.27:1.1": "'\\'\"\\\\\\'Auch wenn ein erlesener Vollblüter stolpert, \\\\\\'\"\\''",
  "thag2.27:1.2": "'\\'\"\\\\\\'findet er rasch wieder festen Stand. \\\\\\'\"\\''",
  "thag2.27:1.3": "'\\'\"\\\\\\'Er gewinnt sogar noch mehr Dringlichkeit \\\\\\'\"\\''",
  "thag2.27:1.4": "'\\'\"\\\\\\'und zieht unbeirrt seine Last. \\\\\\'\"\\''",
  "thag2.27:2.1": "'\\'\"\\\\\\'So ist auch einer, der das Sehen vervollkommnet hat, \\\\\\'\"\\''",
  "thag2.27:2.2": "'\\'\"\\\\\\'ein Schüler des Buddha. \\\\\\'\"\\''",
  "thag2.27:2.3": "'\\'\"\\\\\\'Behalte mich als Vollblüter in Erinnerung, \\\\\\'\"\\''",
  "thag2.27:2.4": "'\\'\"\\\\\\'einen rechtmäßigen Sohn des Buddha. \\\\\\'\"\\''"
}