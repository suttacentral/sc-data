{
  "thag2.12:0.1": "Verses of the Senior Monks",
  "thag2.12:0.2": "The Book of the Twos",
  "thag2.12:0.3": "Chapter Two",
  "thag2.12:0.4": "Jotidāsa",
  "thag2.12:1.1": "People who act harshly—",
  "thag2.12:1.2": "attacking people,",
  "thag2.12:1.3": "tying them up,",
  "thag2.12:1.4": "hurting them in all kinds of ways—",
  "thag2.12:1.5": "they’re treated in the same way;",
  "thag2.12:1.6": "their deeds don’t vanish.",
  "thag2.12:2.1": "Whatever deeds a person does,",
  "thag2.12:2.2": "whether good or bad,",
  "thag2.12:2.3": "they are the heir to each",
  "thag2.12:2.4": "and every deed they do."
}