{
  "thag3.13:0.1": "Verses of the Senior Monks",
  "thag3.13:0.2": "The Book of the Threes",
  "thag3.13:0.3": "Chapter One",
  "thag3.13:0.4": "Abhibhūta",
  "thag3.13:1.1": "Listen up, all my relatives,",
  "thag3.13:1.2": "those who have gathered here:",
  "thag3.13:1.3": "I’ll teach you Dhamma!",
  "thag3.13:1.4": "Painful is birth again and again.",
  "thag3.13:2.1": "Rouse yourselves, try harder!",
  "thag3.13:2.2": "Devote yourselves to the instructions of the Buddha!",
  "thag3.13:2.3": "Crush the army of death,",
  "thag3.13:2.4": "as an elephant a hut of reeds.",
  "thag3.13:3.1": "Anyone who meditates diligently",
  "thag3.13:3.2": "in this teaching and training,",
  "thag3.13:3.3": "giving up transmigration,",
  "thag3.13:3.4": "will make an end to suffering."
}