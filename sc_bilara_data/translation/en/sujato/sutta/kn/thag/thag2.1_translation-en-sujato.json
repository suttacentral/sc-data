{
  "thag2.1:0.1": "Verses of the Senior Monks",
  "thag2.1:0.2": "The Book of the Twos",
  "thag2.1:0.3": "Chapter One",
  "thag2.1:0.4": "Uttara (1st)",
  "thag2.1:1.1": "No life is permanent,",
  "thag2.1:1.2": "and no conditions last forever.",
  "thag2.1:1.3": "The aggregates are reborn",
  "thag2.1:1.4": "and pass away, again and again.",
  "thag2.1:2.1": "Knowing this danger,",
  "thag2.1:2.2": "I don’t need another life.",
  "thag2.1:2.3": "I’ve escaped all sensual pleasures,",
  "thag2.1:2.4": "and attained the ending of defilements.",
  "thag2.1:2.5": "That is how these verses were recited by the senior venerable Uttara."
}