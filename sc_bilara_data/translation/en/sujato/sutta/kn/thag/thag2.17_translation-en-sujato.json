{
  "thag2.17:0.1": "Verses of the Senior Monks",
  "thag2.17:0.2": "The Book of the Twos",
  "thag2.17:0.3": "Chapter Two",
  "thag2.17:0.4": "Tissa (3rd)",
  "thag2.17:1.1": "A shaven one wrapped in the outer robe",
  "thag2.17:1.2": "gets many enemies",
  "thag2.17:1.3": "when they receive food and drink,",
  "thag2.17:1.4": "clothes and bedding.",
  "thag2.17:2.1": "Knowing this danger,",
  "thag2.17:2.2": "this great fear in honors,",
  "thag2.17:2.3": "a mendicant should wander mindful,",
  "thag2.17:2.4": "with few possessions, not full of desire."
}