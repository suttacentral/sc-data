{
  "kv12.8:0.1": "Kathāvatthu",
  "kv12.8:0.2": "Mahāpaṇṇāsaka",
  "kv12.8:0.3": "Dvādasamavagga",
  "kv12.8:0.4": "Jīvitāvoropanakathā",
  "kv12.8:1.1": "☑ Diṭṭhisampanno puggalo sañcicca pāṇaṁ jīvitā voropeyyāti?",
  "kv12.8:1.2": "Āmantā.",
  "kv12.8:1.3": "Diṭṭhisampanno puggalo sañcicca mātaraṁ jīvitā voropeyya …pe…",
  "kv12.8:1.4": "pitaraṁ jīvitā voropeyya …pe…",
  "kv12.8:1.5": "arahantaṁ jīvitā voropeyya …pe…",
  "kv12.8:1.6": "duṭṭhena cittena tathāgatassa lohitaṁ uppādeyya …pe…",
  "kv12.8:1.7": "saṅghaṁ bhindeyyāti?",
  "kv12.8:1.8": "Na hevaṁ vattabbe …pe….",
  "kv12.8:2.1": "☑ Diṭṭhisampanno puggalo sañcicca pāṇaṁ jīvitā voropeyyāti?",
  "kv12.8:2.2": "Āmantā.",
  "kv12.8:2.3": "Diṭṭhisampanno puggalo satthari agāravoti?",
  "kv12.8:2.4": "Na hevaṁ vattabbe …pe…",
  "kv12.8:2.5": "dhamme …pe…",
  "kv12.8:2.6": "saṅghe …pe…",
  "kv12.8:2.7": "sikkhāya agāravoti?",
  "kv12.8:2.8": "Na hevaṁ vattabbe …pe….",
  "kv12.8:3.1": "☑ Nanu diṭṭhisampanno puggalo satthari sagāravoti?",
  "kv12.8:3.2": "Āmantā.",
  "kv12.8:3.3": "Hañci diṭṭhisampanno puggalo satthari sagāravo, no ca vata re vattabbe—",
  "kv12.8:3.4": "“diṭṭhisampanno puggalo sañcicca pāṇaṁ jīvitā voropeyyā”ti.",
  "kv12.8:3.5": "Nanu diṭṭhisampanno puggalo dhamme …pe…",
  "kv12.8:3.6": "saṅghe …pe…",
  "kv12.8:3.7": "sikkhāya sagāravoti?",
  "kv12.8:3.8": "Āmantā.",
  "kv12.8:3.9": "Hañci diṭṭhisampanno puggalo sikkhāya sagāravo, no ca vata re vattabbe—",
  "kv12.8:3.10": "“diṭṭhisampanno puggalo sañcicca pāṇaṁ jīvitā voropeyyā”ti.",
  "kv12.8:4.1": "☑ Diṭṭhisampanno puggalo satthari agāravoti?",
  "kv12.8:4.2": "Āmantā.",
  "kv12.8:4.3": "Diṭṭhisampanno puggalo buddhathūpe ohadeyya omutteyya niṭṭhubheyya buddhathūpe apabyāmato kareyyāti?",
  "kv12.8:4.4": "Na hevaṁ vattabbe …pe….",
  "kv12.8:5.1": "☑ Diṭṭhisampanno puggalo sañcicca pāṇaṁ jīvitā voropeyyāti?",
  "kv12.8:5.2": "Āmantā.",
  "kv12.8:5.3": "Nanu vuttaṁ bhagavatā—",
  "kv12.8:5.4": "“seyyathāpi, bhikkhave, mahāsamuddo ṭhitadhammo velaṁ nātivattati;",
  "kv12.8:5.5": "evameva kho, bhikkhave, yaṁ mayā sāvakānaṁ sikkhāpadaṁ paññattaṁ taṁ mama sāvakā jīvitahetupi nātikkamantī”ti.",
  "kv12.8:5.6": "Attheva suttantoti?",
  "kv12.8:5.7": "Āmantā.",
  "kv12.8:5.8": "Tena hi na vattabbaṁ—",
  "kv12.8:5.9": "“diṭṭhisampanno puggalo sañcicca pāṇaṁ jīvitā voropeyyā”ti.",
  "kv12.8:5.10": "Jīvitā voropanakathā niṭṭhitā."
}