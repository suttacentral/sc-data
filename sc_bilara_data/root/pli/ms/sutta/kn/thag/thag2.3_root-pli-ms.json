{
  "thag2.3:0.1": "Theragāthā 2.3 ",
  "thag2.3:0.2": "Dukanipāta ",
  "thag2.3:0.3": "Paṭhamavagga ",
  "thag2.3:0.4": "Valliyattheragāthā ",
  "thag2.3:1.1": "“Makkaṭo pañcadvārāyaṁ, ",
  "thag2.3:1.2": "kuṭikāyaṁ pasakkiya; ",
  "thag2.3:1.3": "Dvārena anupariyeti, ",
  "thag2.3:1.4": "ghaṭṭayanto muhuṁ muhuṁ. ",
  "thag2.3:2.1": "Tiṭṭha makkaṭa mā dhāvi, ",
  "thag2.3:2.2": "na hi te taṁ yathā pure; ",
  "thag2.3:2.3": "Niggahītosi paññāya, ",
  "thag2.3:2.4": "neva dūraṁ gamissatī”ti. ",
  "thag2.3:2.5": "… Valliyo thero …. "
}