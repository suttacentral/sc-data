{
  "thag1.18:0.1": "Theragāthā",
  "thag1.18:0.2": "Ekakanipāta",
  "thag1.18:0.3": "Dutiyavagga",
  "thag1.18:0.4": "1.18. Siṅgālapituttheragāthā",
  "thag1.18:1.1": "“Ahu buddhassa dāyādo,",
  "thag1.18:1.2": "bhikkhu bhesakaḷāvane;",
  "thag1.18:1.3": "Kevalaṁ aṭṭhisaññāya,",
  "thag1.18:1.4": "apharī pathaviṁ imaṁ;",
  "thag1.18:1.5": "Maññehaṁ kāmarāgaṁ so,",
  "thag1.18:1.6": "khippameva pahissatī”ti.",
  "thag1.18:1.7": "… Siṅgālapitā thero …."
}