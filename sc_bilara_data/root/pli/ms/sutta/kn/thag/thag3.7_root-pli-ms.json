{
  "thag3.7:0.1": "Theragāthā 3.7 ",
  "thag3.7:0.2": "Tikanipāta ",
  "thag3.7:0.3": "Paṭhamavagga ",
  "thag3.7:0.4": "Vāraṇattheragāthā ",
  "thag3.7:1.1": "“Yodha koci manussesu, ",
  "thag3.7:1.2": "parapāṇāni hiṁsati; ",
  "thag3.7:1.3": "Asmā lokā paramhā ca, ",
  "thag3.7:1.4": "ubhayā dhaṁsate naro. ",
  "thag3.7:2.1": "Yo ca mettena cittena, ",
  "thag3.7:2.2": "sabbapāṇānukampati; ",
  "thag3.7:2.3": "Bahuñhi so pasavati, ",
  "thag3.7:2.4": "puññaṁ tādisako naro. ",
  "thag3.7:3.1": "Subhāsitassa sikkhetha, ",
  "thag3.7:3.2": "samaṇūpāsanassa ca; ",
  "thag3.7:3.3": "Ekāsanassa ca raho, ",
  "thag3.7:3.4": "cittavūpasamassa cā”ti. ",
  "thag3.7:3.5": "… Vāraṇo thero …. "
}