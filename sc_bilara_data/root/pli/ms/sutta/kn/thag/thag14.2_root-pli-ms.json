{
  "thag14.2:0.1": "Theragāthā",
  "thag14.2:0.2": "Cuddasakanipāta",
  "thag14.2:0.3": "Paṭhamavagga",
  "thag14.2:0.4": "14.2. Godattattheragāthā",
  "thag14.2:1.1": "“Yathāpi bhaddo ājañño,",
  "thag14.2:1.2": "dhure yutto dhurassaho;",
  "thag14.2:1.3": "Mathito atibhārena,",
  "thag14.2:1.4": "saṁyugaṁ nātivattati.",
  "thag14.2:2.1": "Evaṁ paññāya ye tittā,",
  "thag14.2:2.2": "samuddo vārinā yathā;",
  "thag14.2:2.3": "Na pare atimaññanti,",
  "thag14.2:2.4": "ariyadhammova pāṇinaṁ.",
  "thag14.2:3.1": "Kāle kālavasaṁ pattā,",
  "thag14.2:3.2": "bhavābhavavasaṁ gatā;",
  "thag14.2:3.3": "Narā dukkhaṁ nigacchanti,",
  "thag14.2:3.4": "tedha socanti māṇavā.",
  "thag14.2:4.1": "Unnatā sukhadhammena,",
  "thag14.2:4.2": "dukkhadhammena conatā;",
  "thag14.2:4.3": "Dvayena bālā haññanti,",
  "thag14.2:4.4": "yathābhūtaṁ adassino.",
  "thag14.2:5.1": "Ye ca dukkhe sukhasmiñca,",
  "thag14.2:5.2": "majjhe sibbinimaccagū;",
  "thag14.2:5.3": "Ṭhitā te indakhīlova,",
  "thag14.2:5.4": "na te unnataonatā.",
  "thag14.2:6.1": "Na heva lābhe nālābhe,",
  "thag14.2:6.2": "na yase na ca kittiyā;",
  "thag14.2:6.3": "Na nindāyaṁ pasaṁsāya,",
  "thag14.2:6.4": "na te dukkhe sukhamhi ca.",
  "thag14.2:7.1": "Sabbattha te na limpanti,",
  "thag14.2:7.2": "udabinduva pokkhare;",
  "thag14.2:7.3": "Sabbattha sukhitā dhīrā,",
  "thag14.2:7.4": "sabbattha aparājitā.",
  "thag14.2:8.1": "Dhammena ca alābho yo,",
  "thag14.2:8.2": "yo ca lābho adhammiko;",
  "thag14.2:8.3": "Alābho dhammiko seyyo,",
  "thag14.2:8.4": "yañce lābho adhammiko.",
  "thag14.2:9.1": "Yaso ca appabuddhīnaṁ,",
  "thag14.2:9.2": "viññūnaṁ ayaso ca yo;",
  "thag14.2:9.3": "Ayasova seyyo viññūnaṁ,",
  "thag14.2:9.4": "na yaso appabuddhinaṁ.",
  "thag14.2:10.1": "Dummedhehi pasaṁsā ca,",
  "thag14.2:10.2": "viññūhi garahā ca yā;",
  "thag14.2:10.3": "Garahāva seyyo viññūhi,",
  "thag14.2:10.4": "yañce bālappasaṁsanā.",
  "thag14.2:11.1": "Sukhañca kāmamayikaṁ,",
  "thag14.2:11.2": "dukkhañca pavivekiyaṁ;",
  "thag14.2:11.3": "Pavivekadukkhaṁ seyyo,",
  "thag14.2:11.4": "yañce kāmamayaṁ sukhaṁ.",
  "thag14.2:12.1": "Jīvitañca adhammena,",
  "thag14.2:12.2": "dhammena maraṇañca yaṁ;",
  "thag14.2:12.3": "Maraṇaṁ dhammikaṁ seyyo,",
  "thag14.2:12.4": "yañce jīve adhammikaṁ.",
  "thag14.2:13.1": "Kāmakopappahīnā ye,",
  "thag14.2:13.2": "santacittā bhavābhave;",
  "thag14.2:13.3": "Caranti loke asitā,",
  "thag14.2:13.4": "natthi tesaṁ piyāpiyaṁ.",
  "thag14.2:14.1": "Bhāvayitvāna bojjhaṅge,",
  "thag14.2:14.2": "indriyāni balāni ca;",
  "thag14.2:14.3": "Pappuyya paramaṁ santiṁ,",
  "thag14.2:14.4": "parinibbantināsavā”ti.",
  "thag14.2:14.5": "…",
  "thag14.2:14.6": "Godatto thero ….",
  "thag14.2:14.7": "Cuddasakanipāto niṭṭhito.",
  "thag14.2:15.0": "Tatruddānaṁ",
  "thag14.2:15.1": "Revato ceva godatto,",
  "thag14.2:15.2": "therā dve te mahiddhikā;",
  "thag14.2:15.3": "Cuddasamhi nipātamhi,",
  "thag14.2:15.4": "gāthāyo aṭṭhavīsatīti."
}