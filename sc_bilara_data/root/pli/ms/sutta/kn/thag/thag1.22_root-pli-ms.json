{
  "thag1.22:0.1": "Theragāthā",
  "thag1.22:0.2": "Ekakanipāta",
  "thag1.22:0.3": "Tatiyavagga",
  "thag1.22:0.4": "1.22. Cittakattheragāthā",
  "thag1.22:1.1": "“Nīlā sugīvā sikhino,",
  "thag1.22:1.2": "Morā kārambhiyaṁ abhinadanti;",
  "thag1.22:1.3": "Te sītavātakīḷitā,",
  "thag1.22:1.4": "Suttaṁ jhāyaṁ nibodhentī”ti.",
  "thag1.22:1.5": "… Cittako thero …."
}