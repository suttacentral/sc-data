{
  "thag6.5:0.1": "Theragāthā 6.5 ",
  "thag6.5:0.2": "Chakkanipāta ",
  "thag6.5:0.3": "Paṭhamavagga ",
  "thag6.5:0.4": "Mālukyaputtattheragāthā ",
  "thag6.5:1.1": "“Manujassa pamattacārino, ",
  "thag6.5:1.2": "Taṇhā vaḍḍhati māluvā viya; ",
  "thag6.5:1.3": "So plavatī hurā huraṁ, ",
  "thag6.5:1.4": "Phalamicchaṁva vanasmi vānaro. ",
  "thag6.5:2.1": "Yaṁ esā sahate jammī, ",
  "thag6.5:2.2": "taṇhā loke visattikā; ",
  "thag6.5:2.3": "Sokā tassa pavaḍḍhanti, ",
  "thag6.5:2.4": "abhivaṭṭhaṁva bīraṇaṁ. ",
  "thag6.5:3.1": "Yo cetaṁ sahate jammiṁ, ",
  "thag6.5:3.2": "taṇhaṁ loke duraccayaṁ; ",
  "thag6.5:3.3": "Sokā tamhā papatanti, ",
  "thag6.5:3.4": "udabindūva pokkharā. ",
  "thag6.5:4.1": "Taṁ vo vadāmi bhaddaṁ vo, ",
  "thag6.5:4.2": "yāvantettha samāgatā; ",
  "thag6.5:4.3": "Taṇhāya mūlaṁ khaṇatha, ",
  "thag6.5:4.4": "usīratthova bīraṇaṁ; ",
  "thag6.5:4.5": "Mā vo naḷaṁva sotova, ",
  "thag6.5:4.6": "māro bhañji punappunaṁ. ",
  "thag6.5:5.1": "Karotha buddhavacanaṁ, ",
  "thag6.5:5.2": "khaṇo vo mā upaccagā; ",
  "thag6.5:5.3": "Khaṇātītā hi socanti, ",
  "thag6.5:5.4": "nirayamhi samappitā. ",
  "thag6.5:6.1": "Pamādo rajo pamādo, ",
  "thag6.5:6.2": "pamādānupatito rajo; ",
  "thag6.5:6.3": "Appamādena vijjāya, ",
  "thag6.5:6.4": "abbahe sallamattano”ti. ",
  "thag6.5:6.5": "… Mālukyaputto thero …. "
}