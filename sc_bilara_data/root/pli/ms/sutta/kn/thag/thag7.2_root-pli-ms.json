{
  "thag7.2:0.1": "Theragāthā",
  "thag7.2:0.2": "Sattakanipāta",
  "thag7.2:0.3": "Paṭhamavagga",
  "thag7.2:0.4": "7.2 Lakuṇḍakabhaddiyattheragāthā",
  "thag7.2:1.1": "“Pare ambāṭakārāme,",
  "thag7.2:1.2": "vanasaṇḍamhi bhaddiyo;",
  "thag7.2:1.3": "Samūlaṁ taṇhamabbuyha,",
  "thag7.2:1.4": "tattha bhaddova jhāyati.",
  "thag7.2:2.1": "Ramanteke mudiṅgehi,",
  "thag7.2:2.2": "vīṇāhi paṇavehi ca;",
  "thag7.2:2.3": "Ahañca rukkhamūlasmiṁ,",
  "thag7.2:2.4": "rato buddhassa sāsane.",
  "thag7.2:3.1": "Buddho ce me varaṁ dajjā,",
  "thag7.2:3.2": "so ca labbhetha me varo;",
  "thag7.2:3.3": "Gaṇhehaṁ sabbalokassa,",
  "thag7.2:3.4": "niccaṁ kāyagataṁ satiṁ.",
  "thag7.2:4.1": "Ye maṁ rūpena pāmiṁsu,",
  "thag7.2:4.2": "ye ca ghosena anvagū;",
  "thag7.2:4.3": "Chandarāgavasūpetā,",
  "thag7.2:4.4": "na maṁ jānanti te janā.",
  "thag7.2:5.1": "Ajjhattañca na jānāti,",
  "thag7.2:5.2": "bahiddhā ca na passati;",
  "thag7.2:5.3": "Samantāvaraṇo bālo,",
  "thag7.2:5.4": "sa ve ghosena vuyhati.",
  "thag7.2:6.1": "Ajjhattañca na jānāti,",
  "thag7.2:6.2": "bahiddhā ca vipassati;",
  "thag7.2:6.3": "Bahiddhā phaladassāvī,",
  "thag7.2:6.4": "sopi ghosena vuyhati.",
  "thag7.2:7.1": "Ajjhattañca pajānāti,",
  "thag7.2:7.2": "bahiddhā ca vipassati;",
  "thag7.2:7.3": "Anāvaraṇadassāvī,",
  "thag7.2:7.4": "na so ghosena vuyhatī”ti.",
  "thag7.2:7.5": "… Lakuṇḍakabhaddiyo thero …."
}