{
  "thag3.11:0.1": "Theragāthā",
  "thag3.11:0.2": "Tikanipāta",
  "thag3.11:0.3": "Paṭhamavagga",
  "thag3.11:0.4": "3.11. Upālittheragāthā",
  "thag3.11:1.1": "“Saddhāya abhinikkhamma,",
  "thag3.11:1.2": "navapabbajito navo;",
  "thag3.11:1.3": "Mitte bhajeyya kalyāṇe,",
  "thag3.11:1.4": "suddhājīve atandite.",
  "thag3.11:2.1": "Saddhāya abhinikkhamma,",
  "thag3.11:2.2": "navapabbajito navo;",
  "thag3.11:2.3": "Saṅghasmiṁ viharaṁ bhikkhu,",
  "thag3.11:2.4": "sikkhetha vinayaṁ budho.",
  "thag3.11:3.1": "Saddhāya abhinikkhamma,",
  "thag3.11:3.2": "navapabbajito navo;",
  "thag3.11:3.3": "Kappākappesu kusalo,",
  "thag3.11:3.4": "careyya apurakkhato”ti.",
  "thag3.11:3.5": "… Upālitthero …."
}