{
  "thag2.32:0.1": "Theragāthā 2.32 ",
  "thag2.32:0.2": "Dukanipāta ",
  "thag2.32:0.3": "Catutthavagga ",
  "thag2.32:0.4": "Sivakattheragāthā ",
  "thag2.32:1.1": "“Aniccāni gahakāni, ",
  "thag2.32:1.2": "tattha tattha punappunaṁ; ",
  "thag2.32:1.3": "Gahakāraṁ gavesanto, ",
  "thag2.32:1.4": "dukkhā jāti punappunaṁ. ",
  "thag2.32:2.1": "Gahakāraka diṭṭhosi, ",
  "thag2.32:2.2": "puna gehaṁ na kāhasi; ",
  "thag2.32:2.3": "Sabbā te phāsukā bhaggā, ",
  "thag2.32:2.4": "thūṇikā ca vidālitā; ",
  "thag2.32:2.5": "Vimariyādikataṁ cittaṁ, ",
  "thag2.32:2.6": "idheva vidhamissatī”ti. ",
  "thag2.32:2.7": "… Sivako thero …. "
}