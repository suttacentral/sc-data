{
  "thag16.3:0.1": "Theragāthā",
  "thag16.3:0.2": "Vīsatinipāta",
  "thag16.3:0.3": "Paṭhamavagga",
  "thag16.3:0.4": "16.3. Telakānittheragāthā",
  "thag16.3:1.1": "“Cirarattaṁ vatātāpī,",
  "thag16.3:1.2": "dhammaṁ anuvicintayaṁ;",
  "thag16.3:1.3": "Samaṁ cittassa nālatthaṁ,",
  "thag16.3:1.4": "pucchaṁ samaṇabrāhmaṇe.",
  "thag16.3:2.1": "‘Ko so pāraṅgato loke,",
  "thag16.3:2.2": "ko patto amatogadhaṁ;",
  "thag16.3:2.3": "Kassa dhammaṁ paṭicchāmi,",
  "thag16.3:2.4": "paramatthavijānanaṁ’.",
  "thag16.3:3.1": "Antovaṅkagato āsi,",
  "thag16.3:3.2": "macchova ghasamāmisaṁ;",
  "thag16.3:3.3": "Baddho mahindapāsena,",
  "thag16.3:3.4": "vepacityasuro yathā.",
  "thag16.3:4.1": "Añchāmi naṁ na muñcāmi,",
  "thag16.3:4.2": "asmā sokapariddavā;",
  "thag16.3:4.3": "Ko me bandhaṁ muñcaṁ loke,",
  "thag16.3:4.4": "sambodhiṁ vedayissati.",
  "thag16.3:5.1": "Samaṇaṁ brāhmaṇaṁ vā kaṁ,",
  "thag16.3:5.2": "ādisantaṁ pabhaṅgunaṁ;",
  "thag16.3:5.3": "Kassa dhammaṁ paṭicchāmi,",
  "thag16.3:5.4": "jarāmaccupavāhanaṁ.",
  "thag16.3:6.1": "Vicikicchākaṅkhāganthitaṁ,",
  "thag16.3:6.2": "sārambhabalasaññutaṁ;",
  "thag16.3:6.3": "Kodhappattamanatthaddhaṁ,",
  "thag16.3:6.4": "abhijappappadāraṇaṁ.",
  "thag16.3:7.1": "Taṇhādhanusamuṭṭhānaṁ,",
  "thag16.3:7.2": "dve ca pannarasāyutaṁ;",
  "thag16.3:7.3": "Passa orasikaṁ bāḷhaṁ,",
  "thag16.3:7.4": "bhetvāna yadi tiṭṭhati.",
  "thag16.3:8.1": "Anudiṭṭhīnaṁ appahānaṁ,",
  "thag16.3:8.2": "saṅkappaparatejitaṁ;",
  "thag16.3:8.3": "Tena viddho pavedhāmi,",
  "thag16.3:8.4": "pattaṁva māluteritaṁ.",
  "thag16.3:9.1": "Ajjhattaṁ me samuṭṭhāya,",
  "thag16.3:9.2": "khippaṁ paccati māmakaṁ;",
  "thag16.3:9.3": "Chaphassāyatanī kāyo,",
  "thag16.3:9.4": "yattha sarati sabbadā.",
  "thag16.3:10.1": "Taṁ na passāmi tekicchaṁ,",
  "thag16.3:10.2": "yo metaṁ sallamuddhare;",
  "thag16.3:10.3": "Nānārajjena satthena,",
  "thag16.3:10.4": "nāññena vicikicchitaṁ.",
  "thag16.3:11.1": "Ko me asattho avaṇo,",
  "thag16.3:11.2": "Sallamabbhantarapassayaṁ;",
  "thag16.3:11.3": "Ahiṁsaṁ sabbagattāni,",
  "thag16.3:11.4": "Sallaṁ me uddharissati.",
  "thag16.3:12.1": "Dhammappati hi so seṭṭho,",
  "thag16.3:12.2": "visadosappavāhako;",
  "thag16.3:12.3": "Gambhīre patitassa me,",
  "thag16.3:12.4": "thalaṁ pāṇiñca dassaye.",
  "thag16.3:13.1": "Rahadehamasmi ogāḷho,",
  "thag16.3:13.2": "ahāriyarajamattike;",
  "thag16.3:13.3": "Māyāusūyasārambha,",
  "thag16.3:13.4": "thinamiddhamapatthaṭe.",
  "thag16.3:14.1": "Uddhaccameghathanitaṁ,",
  "thag16.3:14.2": "saṁyojanavalāhakaṁ;",
  "thag16.3:14.3": "Vāhā vahanti kuddiṭṭhiṁ,",
  "thag16.3:14.4": "saṅkappā rāganissitā.",
  "thag16.3:15.1": "Savanti sabbadhi sotā,",
  "thag16.3:15.2": "latā ubbhijja tiṭṭhati;",
  "thag16.3:15.3": "Te sote ko nivāreyya,",
  "thag16.3:15.4": "taṁ lataṁ ko hi checchati.",
  "thag16.3:16.1": "Velaṁ karotha bhaddante,",
  "thag16.3:16.2": "sotānaṁ sannivāraṇaṁ;",
  "thag16.3:16.3": "Mā te manomayo soto,",
  "thag16.3:16.4": "rukkhaṁva sahasā luve.",
  "thag16.3:17.1": "Evaṁ me bhayajātassa,",
  "thag16.3:17.2": "apārā pāramesato;",
  "thag16.3:17.3": "Tāṇo paññāvudho satthā,",
  "thag16.3:17.4": "isisaṅghanisevito.",
  "thag16.3:18.1": "Sopāṇaṁ sugataṁ suddhaṁ,",
  "thag16.3:18.2": "dhammasāramayaṁ daḷhaṁ;",
  "thag16.3:18.3": "Pādāsi vuyhamānassa,",
  "thag16.3:18.4": "‘mā bhāyī’ti ca mabravi.",
  "thag16.3:19.1": "Satipaṭṭhānapāsādaṁ,",
  "thag16.3:19.2": "āruyha paccavekkhisaṁ;",
  "thag16.3:19.3": "Yaṁ taṁ pubbe amaññissaṁ,",
  "thag16.3:19.4": "sakkāyābhirataṁ pajaṁ.",
  "thag16.3:20.1": "Yadā ca maggamaddakkhiṁ,",
  "thag16.3:20.2": "nāvāya abhirūhanaṁ;",
  "thag16.3:20.3": "Anadhiṭṭhāya attānaṁ,",
  "thag16.3:20.4": "titthamaddakkhimuttamaṁ.",
  "thag16.3:21.1": "Sallaṁ attasamuṭṭhānaṁ,",
  "thag16.3:21.2": "bhavanettippabhāvitaṁ;",
  "thag16.3:21.3": "Etesaṁ appavattāya,",
  "thag16.3:21.4": "desesi maggamuttamaṁ.",
  "thag16.3:22.1": "Dīgharattānusayitaṁ,",
  "thag16.3:22.2": "cirarattamadhiṭṭhitaṁ;",
  "thag16.3:22.3": "Buddho mepānudī ganthaṁ,",
  "thag16.3:22.4": "visadosappavāhano”ti.",
  "thag16.3:22.5": "… Telakāni thero …."
}