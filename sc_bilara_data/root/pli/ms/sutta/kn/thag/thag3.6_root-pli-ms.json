{
  "thag3.6:0.1": "Theragāthā",
  "thag3.6:0.2": "Tikanipāta",
  "thag3.6:0.3": "Paṭhamavagga",
  "thag3.6:0.4": "3.6. Khujjasobhitattheragāthā",
  "thag3.6:1.1": "“Ye cittakathī bahussutā,",
  "thag3.6:1.2": "Samaṇā pāṭaliputtavāsino;",
  "thag3.6:1.3": "Tesaññataroyamāyuvā,",
  "thag3.6:1.4": "Dvāre tiṭṭhati khujjasobhito”.",
  "thag3.6:2.1": "“Ye cittakathī bahussutā,",
  "thag3.6:2.2": "Samaṇā pāṭaliputtavāsino;",
  "thag3.6:2.3": "Tesaññataroyamāyuvā,",
  "thag3.6:2.4": "Dvāre tiṭṭhati māluterito”.",
  "thag3.6:3.1": "“Suyuddhena suyiṭṭhena,",
  "thag3.6:3.2": "saṅgāmavijayena ca;",
  "thag3.6:3.3": "Brahmacariyānuciṇṇena,",
  "thag3.6:3.4": "evāyaṁ sukhamedhatī”ti.",
  "thag3.6:3.5": "… Khujjasobhito thero …."
}