{
  "iti48:0.1": "Itivuttaka 48",
  "iti48:0.2": "Dukanipāta",
  "iti48:0.3": "Dutiyavagga",
  "iti48:0.4": "Āpāyikasutta",
  "iti48:1.1": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti48:2.1": "“Dveme, bhikkhave, āpāyikā nerayikā idamappahāya.",
  "iti48:2.2": "Katame dve?",
  "iti48:2.3": "Yo ca abrahmacārī brahmacāripaṭiñño, yo ca paripuṇṇaṁ parisuddhaṁ brahmacariyaṁ carantaṁ amūlakena abrahmacariyena anuddhaṁseti.",
  "iti48:2.4": "Ime kho, bhikkhave, dve āpāyikā nerayikā idamappahāyā”ti.",
  "iti48:2.5": "Etamatthaṁ bhagavā avoca.",
  "iti48:2.6": "Tatthetaṁ iti vuccati:",
  "iti48:3.1": "“Abhūtavādī nirayaṁ upeti,",
  "iti48:3.2": "Yo vāpi katvā na karomi cāha;",
  "iti48:3.3": "Ubhopi te pecca samā bhavanti,",
  "iti48:3.4": "Nihīnakammā manujā parattha.",
  "iti48:4.1": "Kāsāvakaṇṭhā bahavo,",
  "iti48:4.2": "pāpadhammā asaññatā;",
  "iti48:4.3": "Pāpā pāpehi kammehi,",
  "iti48:4.4": "nirayaṁ te upapajjare.",
  "iti48:5.1": "Seyyo ayoguḷo bhutto,",
  "iti48:5.2": "tatto aggisikhūpamo;",
  "iti48:5.3": "Yañce bhuñjeyya dussīlo,",
  "iti48:5.4": "raṭṭhapiṇḍamasaññato”ti.",
  "iti48:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti48:6.2": "Ekādasamaṁ."
}