{
  "ja451:0.1": "Jātaka",
  "ja451:0.2": "Dasakanipāta",
  "ja451:0.3": "Catudvāravagga",
  "ja451:0.4": "13. Cakkavākajātaka",
  "ja451:1.1": "“Vaṇṇavā abhirūposi,",
  "ja451:1.2": "ghano sañjātarohito;",
  "ja451:1.3": "Cakkavāka surūposi,",
  "ja451:1.4": "vippasannamukhindriyo.",
  "ja451:2.1": "Pāṭhīnaṁ pāvusaṁ macchaṁ,",
  "ja451:2.2": "balajaṁ muñjarohitaṁ;",
  "ja451:2.3": "Gaṅgāya tīre nisinno,",
  "ja451:2.4": "evaṁ bhuñjasi bhojanaṁ”.",
  "ja451:3.1": "“Na vāhametaṁ bhuñjāmi,",
  "ja451:3.2": "Jaṅgalānodakāni vā;",
  "ja451:3.3": "Aññatra sevālapaṇakā,",
  "ja451:3.4": "Etaṁ me samma bhojanaṁ”.",
  "ja451:4.1": "“Na vāhametaṁ saddahāmi,",
  "ja451:4.2": "cakkavākassa bhojanaṁ;",
  "ja451:4.3": "Ahampi samma bhuñjāmi,",
  "ja451:4.4": "gāme loṇiyateliyaṁ.",
  "ja451:5.1": "Manussesu kataṁ bhattaṁ,",
  "ja451:5.2": "suciṁ maṁsūpasecanaṁ;",
  "ja451:5.3": "Na ca me tādiso vaṇṇo,",
  "ja451:5.4": "cakkavāka yathā tuvaṁ”.",
  "ja451:6.1": "“Sampassaṁ attani veraṁ,",
  "ja451:6.2": "hiṁsayaṁ mānusiṁ pajaṁ;",
  "ja451:6.3": "Utrasto ghasasī bhīto,",
  "ja451:6.4": "tena vaṇṇo tavediso.",
  "ja451:7.1": "Sabbalokaviruddhosi,",
  "ja451:7.2": "dhaṅka pāpena kammunā;",
  "ja451:7.3": "Laddho piṇḍo na pīṇeti,",
  "ja451:7.4": "tena vaṇṇo tavediso.",
  "ja451:8.1": "Ahampi samma bhuñjāmi,",
  "ja451:8.2": "ahiṁsaṁ sabbapāṇinaṁ;",
  "ja451:8.3": "Appossukko nirāsaṅkī,",
  "ja451:8.4": "asoko akutobhayo.",
  "ja451:9.1": "So karassu ānubhāvaṁ,",
  "ja451:9.2": "vītivattassu sīliyaṁ;",
  "ja451:9.3": "Ahiṁsāya cara loke,",
  "ja451:9.4": "piyo hohisi maṁmiva.",
  "ja451:10.1": "Yo na hanti na ghāteti,",
  "ja451:10.2": "na jināti na jāpaye;",
  "ja451:10.3": "Mettaṁso sabbabhūtesu,",
  "ja451:10.4": "veraṁ tassa na kenacī”ti.",
  "ja451:11.1": "Cakkavākajātakaṁ terasamaṁ."
}