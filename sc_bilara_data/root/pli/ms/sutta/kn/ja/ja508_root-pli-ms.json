{
  "ja508:0.1": "Jātaka",
  "ja508:0.2": "Vīsatinipāta",
  "ja508:0.3": "Mātaṅgavagga",
  "ja508:0.4": "12. Pañcapaṇḍitajātaka",
  "ja508:1.1": "“Pañca paṇḍitā samāgatāttha,",
  "ja508:1.2": "Pañhā me paṭibhāti taṁ suṇātha;",
  "ja508:1.3": "Nindiyamatthaṁ pasaṁsiyaṁ vā,",
  "ja508:1.4": "Kassevāvikareyya guyhamatthaṁ”.",
  "ja508:2.1": "“Tvaṁ āvikarohi bhūmipāla,",
  "ja508:2.2": "Bhattā bhārasaho tuvaṁ vade taṁ;",
  "ja508:2.3": "Tava chandarucīni sammasitvā,",
  "ja508:2.4": "Atha vakkhanti janinda pañca dhīrā”.",
  "ja508:3.1": "“Yā sīlavatī anaññatheyyā,",
  "ja508:3.2": "Bhattucchandavasānugā manāpā;",
  "ja508:3.3": "Nindiyamatthaṁ pasaṁsiyaṁ vā,",
  "ja508:3.4": "Bhariyāyāvikareyya guyhamatthaṁ”.",
  "ja508:4.1": "“Yo kicchagatassa āturassa,",
  "ja508:4.2": "Saraṇaṁ hoti gatī parāyanañca;",
  "ja508:4.3": "Nindiyamatthaṁ pasaṁsiyaṁ vā,",
  "ja508:4.4": "Sakhino vāvikareyya guyhamatthaṁ”.",
  "ja508:5.1": "“Jeṭṭho atha majjhimo kaniṭṭho,",
  "ja508:5.2": "Yo ce sīlasamāhito ṭhitatto;",
  "ja508:5.3": "Nindiyamatthaṁ pasaṁsiyaṁ vā,",
  "ja508:5.4": "Bhātu vāvīkareyya guyhamatthaṁ”.",
  "ja508:6.1": "“Yo ve pituhadayassa paddhagū,",
  "ja508:6.2": "Anujāto pitaraṁ anomapañño;",
  "ja508:6.3": "Nindiyamatthaṁ pasaṁsiyaṁ vā,",
  "ja508:6.4": "Puttassāvikareyya guyhamatthaṁ”.",
  "ja508:7.1": "“Mātā dvipadājanindaseṭṭha,",
  "ja508:7.2": "Yā naṁ poseti chandasā piyena;",
  "ja508:7.3": "Nindiyamatthaṁ pasaṁsiyaṁ vā,",
  "ja508:7.4": "Mātuyāvīkareyya guyhamatthaṁ”.",
  "ja508:8.1": "“Guyhassa hi guyhameva sādhu,",
  "ja508:8.2": "Na hi guyhassa pasatthamāvikammaṁ;",
  "ja508:8.3": "Anipphannatā saheyya dhīro,",
  "ja508:8.4": "Nipphannova yathāsukhaṁ bhaṇeyya”.",
  "ja508:9.1": "“Kiṁ tvaṁ vimanosi rājaseṭṭha,",
  "ja508:9.2": "Dvipadajaninda vacanaṁ suṇoma metaṁ;",
  "ja508:9.3": "Kiṁ cintayamāno dummanosi,",
  "ja508:9.4": "Nūna deva aparādho atthi mayhaṁ”.",
  "ja508:10.1": "“‘Paṇhe vajjho mahosadho’ti,",
  "ja508:10.2": "Āṇatto me vadhāya bhūripañño;",
  "ja508:10.3": "Taṁ cintayamāno dummanosmi,",
  "ja508:10.4": "Na hi devī aparādho atthi tuyhaṁ”.",
  "ja508:11.1": "“Abhidosagato dāni ehisi,",
  "ja508:11.2": "Kiṁ sutvā kiṁ saṅkate mano te;",
  "ja508:11.3": "Ko te kimavoca bhūripañña,",
  "ja508:11.4": "Iṅgha vacanaṁ suṇoma brūhi metaṁ”.",
  "ja508:12.1": "“‘Paṇhe vajjho mahosadho’ti,",
  "ja508:12.2": "Yadi te mantayitaṁ janinda dosaṁ;",
  "ja508:12.3": "Bhariyāya rahogato asaṁsi,",
  "ja508:12.4": "Guyhaṁ pātukataṁ sutaṁ mametaṁ”.",
  "ja508:13.1": "“Yaṁ sālavanasmiṁ senako,",
  "ja508:13.2": "Pāpakammaṁ akāsi asabbhirūpaṁ;",
  "ja508:13.3": "Sakhinova rahogato asaṁsi,",
  "ja508:13.4": "Guyhaṁ pātukataṁ sutaṁ mametaṁ.",
  "ja508:14.1": "Pukkusa purisassa te janinda,",
  "ja508:14.2": "Uppanno rogo arājayutto;",
  "ja508:14.3": "Bhātuñca rahogato asaṁsi,",
  "ja508:14.4": "Guyhaṁ pātukataṁ sutaṁ mametaṁ.",
  "ja508:15.1": "Ābādhoyaṁ asabbhirūpo,",
  "ja508:15.2": "Kāmindo naradevena phuṭṭho;",
  "ja508:15.3": "Puttassa rahogato asaṁsi,",
  "ja508:15.4": "Guyhaṁ pātukataṁ sutaṁ mametaṁ.",
  "ja508:16.1": "Aṭṭhavaṅkaṁ maṇiratanaṁ uḷāraṁ,",
  "ja508:16.2": "Sakko te adadā pitāmahassa;",
  "ja508:16.3": "Devindassa gataṁ tadajja hatthaṁ,",
  "ja508:16.4": "Mātuñca rahogato asaṁsi;",
  "ja508:16.5": "Guyhaṁ pātukataṁ sutaṁ mametaṁ.",
  "ja508:17.1": "Guyhassa hi guyhameva sādhu,",
  "ja508:17.2": "Na hi guyhassa pasatthamāvikammaṁ;",
  "ja508:17.3": "Anipphannatā saheyya dhīro,",
  "ja508:17.4": "Nipphannova yathāsukhaṁ bhaṇeyya.",
  "ja508:18.1": "Na guyhamatthaṁ vivareyya,",
  "ja508:18.2": "rakkheyya naṁ yathā nidhiṁ;",
  "ja508:18.3": "Na hi pātukato sādhu,",
  "ja508:18.4": "guyho attho pajānatā.",
  "ja508:19.1": "Thiyā guyhaṁ na saṁseyya,",
  "ja508:19.2": "amittassa ca paṇḍito;",
  "ja508:19.3": "Yo cāmisena saṁhīro,",
  "ja508:19.4": "hadayattheno ca yo naro.",
  "ja508:20.1": "Guyhamatthaṁ asambuddhaṁ,",
  "ja508:20.2": "sambodhayati yo naro;",
  "ja508:20.3": "Mantabhedabhayā tassa,",
  "ja508:20.4": "dāsabhūto titikkhati.",
  "ja508:21.1": "Yāvanto purisassatthaṁ,",
  "ja508:21.2": "guyhaṁ jānanti mantinaṁ;",
  "ja508:21.3": "Tāvanto tassa ubbegā,",
  "ja508:21.4": "tasmā guyhaṁ na vissaje.",
  "ja508:22.1": "Vivicca bhāseyya divā rahassaṁ,",
  "ja508:22.2": "Rattiṁ giraṁ nātivelaṁ pamuñce;",
  "ja508:22.3": "Upassutikā hi suṇanti mantaṁ,",
  "ja508:22.4": "Tasmā manto khippamupeti bhedan”ti.",
  "ja508:23.1": "Pañcapaṇḍitajātakaṁ dvādasamaṁ."
}