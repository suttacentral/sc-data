{
  "cp32:0.1": "Cariyāpiṭaka",
  "cp32:0.2": "Yudhañjayavagga",
  "cp32:0.3": "Saccapāramī 6",
  "cp32:0.4": "Sutasomacariya",
  "cp32:1.1": "“Punāparaṁ yadā homi,",
  "cp32:1.2": "sutasomo mahīpati;",
  "cp32:1.3": "Gahito porisādena,",
  "cp32:1.4": "brāhmaṇe saṅgaraṁ sariṁ.",
  "cp32:2.1": "Khattiyānaṁ ekasataṁ,",
  "cp32:2.2": "āvuṇitvā karattale;",
  "cp32:2.3": "Etesaṁ pamilāpetvā,",
  "cp32:2.4": "yaññatthe upanayī mamaṁ.",
  "cp32:3.1": "Apucchi maṁ porisādo,",
  "cp32:3.2": "‘kiṁ tvaṁ icchasi nissajaṁ;",
  "cp32:3.3": "Yathāmati te kāhāmi,",
  "cp32:3.4": "yadi me tvaṁ punehisi’.",
  "cp32:4.1": "Tassa paṭissuṇitvāna,",
  "cp32:4.2": "paṇhe āgamanaṁ mama;",
  "cp32:4.3": "Upagantvā puraṁ rammaṁ,",
  "cp32:4.4": "rajjaṁ niyyādayiṁ tadā.",
  "cp32:5.1": "Anussaritvā sataṁ dhammaṁ,",
  "cp32:5.2": "pubbakaṁ jinasevitaṁ;",
  "cp32:5.3": "Brāhmaṇassa dhanaṁ datvā,",
  "cp32:5.4": "porisādaṁ upāgamiṁ.",
  "cp32:6.1": "Natthi me saṁsayo tattha,",
  "cp32:6.2": "Ghātayissati vā na vā;",
  "cp32:6.3": "Saccavācānurakkhanto,",
  "cp32:6.4": "Jīvitaṁ cajitumupāgamiṁ;",
  "cp32:6.5": "Saccena me samo natthi,",
  "cp32:6.6": "Esā me saccapāramī”ti.",
  "cp32:7.1": "Sutasomacariyaṁ dvādasamaṁ."
}