{
  "cp25:0.1": "Cariyāpiṭaka",
  "cp25:0.2": "Yudhañjayavagga",
  "cp25:0.3": "Nekkhammapāramī 5",
  "cp25:0.4": "Soṇapaṇḍitacariya",
  "cp25:1.1": "“Punāparaṁ yadā homi,",
  "cp25:1.2": "nagare brahmavaḍḍhane;",
  "cp25:1.3": "Tattha kulavare seṭṭhe,",
  "cp25:1.4": "mahāsāle ajāyahaṁ.",
  "cp25:2.1": "Tadāpi lokaṁ disvāna,",
  "cp25:2.2": "Andhībhūtaṁ tamotthaṭaṁ;",
  "cp25:2.3": "Cittaṁ bhavato patikuṭati,",
  "cp25:2.4": "Tuttavegahataṁ viya.",
  "cp25:3.1": "Disvāna vividhaṁ pāpaṁ,",
  "cp25:3.2": "evaṁ cintesahaṁ tadā;",
  "cp25:3.3": "‘Kadāhaṁ gehā nikkhamma,",
  "cp25:3.4": "pavisissāmi kānanaṁ’.",
  "cp25:4.1": "Tadāpi maṁ nimantesuṁ,",
  "cp25:4.2": "kāmabhogehi ñātayo;",
  "cp25:4.3": "Tesampi chandamācikkhiṁ,",
  "cp25:4.4": "‘mā nimantetha tehi maṁ’.",
  "cp25:5.1": "Yo me kaniṭṭhako bhātā,",
  "cp25:5.2": "nando nāmāsi paṇḍito;",
  "cp25:5.3": "Sopi maṁ anusikkhanto,",
  "cp25:5.4": "pabbajjaṁ samarocayi.",
  "cp25:6.1": "Ahaṁ soṇo ca nando ca,",
  "cp25:6.2": "ubho mātāpitā mama;",
  "cp25:6.3": "Tadāpi bhoge chaḍḍetvā,",
  "cp25:6.4": "pāvisimhā mahāvanan”ti.",
  "cp25:7.1": "Soṇapaṇḍitacariyaṁ pañcamaṁ."
}