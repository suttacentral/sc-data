{
  "cp16:0.1": "Cariyāpiṭaka",
  "cp16:0.2": "Hatthināgavagga",
  "cp16:0.3": "Sīlapāramī 6",
  "cp16:0.4": "Rurumigarājacariya",
  "cp16:1.1": "“Punāparaṁ yadā homi,",
  "cp16:1.2": "sutattakanakasannibho;",
  "cp16:1.3": "Migarājā ruru nāma,",
  "cp16:1.4": "paramasīlasamāhito.",
  "cp16:2.1": "Ramme padese ramaṇīye,",
  "cp16:2.2": "vivitte amanussake;",
  "cp16:2.3": "Tattha vāsaṁ upagañchiṁ,",
  "cp16:2.4": "gaṅgākūle manorame.",
  "cp16:3.1": "Atha upari gaṅgāya,",
  "cp16:3.2": "dhanikehi paripīḷito;",
  "cp16:3.3": "Puriso gaṅgāya papati,",
  "cp16:3.4": "‘jīvāmi vā marāmi vā’.",
  "cp16:4.1": "Rattindivaṁ so gaṅgāya,",
  "cp16:4.2": "vuyhamāno mahodake;",
  "cp16:4.3": "Ravanto karuṇaṁ ravaṁ,",
  "cp16:4.4": "majjhe gaṅgāya gacchati.",
  "cp16:5.1": "Tassāhaṁ saddaṁ sutvāna,",
  "cp16:5.2": "karuṇaṁ paridevato;",
  "cp16:5.3": "Gaṅgāya tīre ṭhatvāna,",
  "cp16:5.4": "apucchiṁ ‘kosi tvaṁ naro’.",
  "cp16:6.1": "So me puṭṭho ca byākāsi,",
  "cp16:6.2": "attano karaṇaṁ tadā;",
  "cp16:6.3": "‘Dhanikehi bhīto tasito,",
  "cp16:6.4": "pakkhandohaṁ mahānadiṁ’.",
  "cp16:7.1": "Tassa katvāna kāruññaṁ,",
  "cp16:7.2": "cajitvā mama jīvitaṁ;",
  "cp16:7.3": "Pavisitvā nīhariṁ tassa,",
  "cp16:7.4": "andhakāramhi rattiyā.",
  "cp16:8.1": "Assatthakālamaññāya,",
  "cp16:8.2": "tassāhaṁ idamabraviṁ;",
  "cp16:8.3": "‘Ekaṁ taṁ varaṁ yācāmi,",
  "cp16:8.4": "mā maṁ kassaci pāvada’.",
  "cp16:9.1": "Nagaraṁ gantvāna ācikkhi,",
  "cp16:9.2": "pucchito dhanahetuko;",
  "cp16:9.3": "Rājānaṁ so gahetvāna,",
  "cp16:9.4": "upagañchi mamantikaṁ.",
  "cp16:10.1": "Yāvatā karaṇaṁ sabbaṁ,",
  "cp16:10.2": "rañño ārocitaṁ mayā;",
  "cp16:10.3": "Rājā sutvāna vacanaṁ,",
  "cp16:10.4": "usuṁ tassa pakappayi;",
  "cp16:10.5": "‘Idheva ghātayissāmi,",
  "cp16:10.6": "mittadubbhiṁ anāriyaṁ’.",
  "cp16:11.1": "Tamahaṁ anurakkhanto,",
  "cp16:11.2": "nimminiṁ mama attanā;",
  "cp16:11.3": "‘Tiṭṭhateso mahārāja,",
  "cp16:11.4": "kāmakāro bhavāmi te’.",
  "cp16:12.1": "Anurakkhiṁ mama sīlaṁ,",
  "cp16:12.2": "nārakkhiṁ mama jīvitaṁ;",
  "cp16:12.3": "Sīlavā hi tadā āsiṁ,",
  "cp16:12.4": "bodhiyāyeva kāraṇā”ti.",
  "cp16:13.1": "Rurumigarājacariyaṁ chaṭṭhaṁ."
}