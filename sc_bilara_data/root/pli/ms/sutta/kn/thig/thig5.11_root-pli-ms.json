{
  "thig5.11:0.1": "Therīgāthā",
  "thig5.11:0.2": "Pañcakanipāta",
  "thig5.11:0.3": "11. Tiṁsamattātherīgāthā",
  "thig5.11:1.1": "“Musalāni gahetvāna,",
  "thig5.11:1.2": "dhaññaṁ koṭṭenti māṇavā;",
  "thig5.11:1.3": "Puttadārāni posentā,",
  "thig5.11:1.4": "dhanaṁ vindanti māṇavā.",
  "thig5.11:2.1": "Karotha buddhasāsanaṁ,",
  "thig5.11:2.2": "yaṁ katvā nānutappati;",
  "thig5.11:2.3": "Khippaṁ pādāni dhovitvā,",
  "thig5.11:2.4": "ekamante nisīdatha;",
  "thig5.11:2.5": "Cetosamathamanuyuttā,",
  "thig5.11:2.6": "karotha buddhasāsanaṁ”.",
  "thig5.11:3.1": "Tassā tā vacanaṁ sutvā,",
  "thig5.11:3.2": "paṭācārāya sāsanaṁ;",
  "thig5.11:3.3": "Pāde pakkhālayitvāna,",
  "thig5.11:3.4": "ekamantaṁ upāvisuṁ;",
  "thig5.11:3.5": "Cetosamathamanuyuttā,",
  "thig5.11:3.6": "akaṁsu buddhasāsanaṁ.",
  "thig5.11:4.1": "Rattiyā purime yāme,",
  "thig5.11:4.2": "pubbajātimanussaruṁ;",
  "thig5.11:4.3": "Rattiyā majjhime yāme,",
  "thig5.11:4.4": "dibbacakkhuṁ visodhayuṁ;",
  "thig5.11:4.5": "Rattiyā pacchime yāme,",
  "thig5.11:4.6": "tamokhandhaṁ padālayuṁ.",
  "thig5.11:5.1": "Uṭṭhāya pāde vandiṁsu,",
  "thig5.11:5.2": "“katā te anusāsanī;",
  "thig5.11:5.3": "Indaṁva devā tidasā,",
  "thig5.11:5.4": "saṅgāme aparājitaṁ;",
  "thig5.11:5.5": "Purakkhatvā vihassāma,",
  "thig5.11:5.6": "tevijjāmha anāsavā”ti.",
  "thig5.11:6.1": "Itthaṁ sudaṁ tiṁsamattā therī bhikkhuniyo paṭācārāya santike aññaṁ byākariṁsūti."
}