{
  "thig6.7:0.1": "Therīgāthā",
  "thig6.7:0.2": "Chakkanipāta",
  "thig6.7:0.3": "7. Guttātherīgāthā",
  "thig6.7:1.1": "“Gutte yadatthaṁ pabbajjā,",
  "thig6.7:1.2": "hitvā puttaṁ vasuṁ piyaṁ;",
  "thig6.7:1.3": "Tameva anubrūhehi,",
  "thig6.7:1.4": "mā cittassa vasaṁ gami.",
  "thig6.7:2.1": "Cittena vañcitā sattā,",
  "thig6.7:2.2": "mārassa visaye ratā;",
  "thig6.7:2.3": "Anekajātisaṁsāraṁ,",
  "thig6.7:2.4": "sandhāvanti aviddasū.",
  "thig6.7:3.1": "Kāmacchandañca byāpādaṁ,",
  "thig6.7:3.2": "sakkāyadiṭṭhimeva ca;",
  "thig6.7:3.3": "Sīlabbataparāmāsaṁ,",
  "thig6.7:3.4": "vicikicchañca pañcamaṁ.",
  "thig6.7:4.1": "Saṁyojanāni etāni,",
  "thig6.7:4.2": "pajahitvāna bhikkhunī;",
  "thig6.7:4.3": "Orambhāgamanīyāni,",
  "thig6.7:4.4": "nayidaṁ punarehisi.",
  "thig6.7:5.1": "Rāgaṁ mānaṁ avijjañca,",
  "thig6.7:5.2": "uddhaccañca vivajjiya;",
  "thig6.7:5.3": "Saṁyojanāni chetvāna,",
  "thig6.7:5.4": "dukkhassantaṁ karissasi.",
  "thig6.7:6.1": "Khepetvā jātisaṁsāraṁ,",
  "thig6.7:6.2": "pariññāya punabbhavaṁ;",
  "thig6.7:6.3": "Diṭṭheva dhamme nicchātā,",
  "thig6.7:6.4": "upasantā carissatī”ti.",
  "thig6.7:7.1": "… Guttā therī …."
}