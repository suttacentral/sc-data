{
  "thig5.3:0.1": "Therīgāthā",
  "thig5.3:0.2": "Pañcakanipāta",
  "thig5.3:0.3": "3. Sīhātherīgāthā",
  "thig5.3:1.1": "“Ayoniso manasikārā,",
  "thig5.3:1.2": "kāmarāgena aṭṭitā;",
  "thig5.3:1.3": "Ahosiṁ uddhatā pubbe,",
  "thig5.3:1.4": "citte avasavattinī.",
  "thig5.3:2.1": "Pariyuṭṭhitā klesehi,",
  "thig5.3:2.2": "subhasaññānuvattinī;",
  "thig5.3:2.3": "Samaṁ cittassa na labhiṁ,",
  "thig5.3:2.4": "rāgacittavasānugā.",
  "thig5.3:3.1": "Kisā paṇḍu vivaṇṇā ca,",
  "thig5.3:3.2": "satta vassāni cārihaṁ;",
  "thig5.3:3.3": "Nāhaṁ divā vā rattiṁ vā,",
  "thig5.3:3.4": "sukhaṁ vindiṁ sudukkhitā.",
  "thig5.3:4.1": "Tato rajjuṁ gahetvāna,",
  "thig5.3:4.2": "pāvisiṁ vanamantaraṁ;",
  "thig5.3:4.3": "Varaṁ me idha ubbandhaṁ,",
  "thig5.3:4.4": "yañca hīnaṁ punācare.",
  "thig5.3:5.1": "Daḷhapāsaṁ karitvāna,",
  "thig5.3:5.2": "rukkhasākhāya bandhiya;",
  "thig5.3:5.3": "Pakkhipiṁ pāsaṁ gīvāyaṁ,",
  "thig5.3:5.4": "atha cittaṁ vimucci me”ti.",
  "thig5.3:6.1": "… Sīhā therī …."
}