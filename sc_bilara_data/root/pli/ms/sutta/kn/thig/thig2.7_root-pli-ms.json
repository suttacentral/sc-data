{
  "thig2.7:0.1": "Therīgāthā",
  "thig2.7:0.2": "Dukanipāta",
  "thig2.7:0.3": "7. Mittātherīgāthā",
  "thig2.7:1.1": "“Cātuddasiṁ pañcadasiṁ,",
  "thig2.7:1.2": "yā ca pakkhassa aṭṭhamī;",
  "thig2.7:1.3": "Pāṭihāriyapakkhañca,",
  "thig2.7:1.4": "aṭṭhaṅgasusamāgataṁ.",
  "thig2.7:2.1": "Uposathaṁ upāgacchiṁ,",
  "thig2.7:2.2": "devakāyābhinandinī;",
  "thig2.7:2.3": "Sājja ekena bhattena,",
  "thig2.7:2.4": "muṇḍā saṅghāṭipārutā;",
  "thig2.7:2.5": "Devakāyaṁ na patthehaṁ,",
  "thig2.7:2.6": "vineyya hadaye daran”ti.",
  "thig2.7:3.1": "… Mittā therī …."
}