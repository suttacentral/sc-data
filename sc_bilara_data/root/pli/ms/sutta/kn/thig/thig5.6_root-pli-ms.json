{
  "thig5.6:0.1": "Therīgāthā",
  "thig5.6:0.2": "Pañcakanipāta",
  "thig5.6:0.3": "6 Mittākāḷītherīgāthā",
  "thig5.6:1.1": "“Saddhāya pabbajitvāna,",
  "thig5.6:1.2": "agārasmānagāriyaṁ;",
  "thig5.6:1.3": "Vicariṁhaṁ tena tena,",
  "thig5.6:1.4": "lābhasakkāraussukā.",
  "thig5.6:2.1": "Riñcitvā paramaṁ atthaṁ,",
  "thig5.6:2.2": "hīnamatthaṁ asevihaṁ;",
  "thig5.6:2.3": "Kilesānaṁ vasaṁ gantvā,",
  "thig5.6:2.4": "sāmaññatthaṁ na bujjhihaṁ.",
  "thig5.6:3.1": "Tassā me ahu saṁvego,",
  "thig5.6:3.2": "nisinnāya vihārake;",
  "thig5.6:3.3": "Ummaggapaṭipannāmhi,",
  "thig5.6:3.4": "taṇhāya vasamāgatā.",
  "thig5.6:4.1": "Appakaṁ jīvitaṁ mayhaṁ,",
  "thig5.6:4.2": "jarā byādhi ca maddati;",
  "thig5.6:4.3": "Purāyaṁ bhijjati kāyo,",
  "thig5.6:4.4": "na me kālo pamajjituṁ.",
  "thig5.6:5.1": "Yathābhūtamavekkhantī,",
  "thig5.6:5.2": "khandhānaṁ udayabbayaṁ;",
  "thig5.6:5.3": "Vimuttacittā uṭṭhāsiṁ,",
  "thig5.6:5.4": "kataṁ buddhassa sāsanan”ti.",
  "thig5.6:6.1": "… Mittā kāḷī therī …."
}