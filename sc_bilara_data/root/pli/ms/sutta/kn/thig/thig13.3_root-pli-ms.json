{
  "thig13.3:0.1": "Therīgāthā",
  "thig13.3:0.2": "Vīsatinipāta",
  "thig13.3:0.3": "3. Cāpātherīgāthā",
  "thig13.3:1.1": "“Laṭṭhihattho pure āsi,",
  "thig13.3:1.2": "so dāni migaluddako;",
  "thig13.3:1.3": "Āsāya palipā ghorā,",
  "thig13.3:1.4": "nāsakkhi pārametave.",
  "thig13.3:2.1": "Sumattaṁ maṁ maññamānā,",
  "thig13.3:2.2": "cāpā puttamatosayi;",
  "thig13.3:2.3": "Cāpāya bandhanaṁ chetvā,",
  "thig13.3:2.4": "pabbajissaṁ punopahaṁ”.",
  "thig13.3:3.1": "“Mā me kujjhi mahāvīra,",
  "thig13.3:3.2": "mā me kujjhi mahāmuni;",
  "thig13.3:3.3": "Na hi kodhaparetassa,",
  "thig13.3:3.4": "suddhi atthi kuto tapo”.",
  "thig13.3:4.1": "“Pakkamissañca nāḷāto,",
  "thig13.3:4.2": "kodha nāḷāya vacchati;",
  "thig13.3:4.3": "Bandhantī itthirūpena,",
  "thig13.3:4.4": "samaṇe dhammajīvino”.",
  "thig13.3:5.1": "“Ehi kāḷa nivattassu,",
  "thig13.3:5.2": "bhuñja kāme yathā pure;",
  "thig13.3:5.3": "Ahañca te vasīkatā,",
  "thig13.3:5.4": "ye ca me santi ñātakā”.",
  "thig13.3:6.1": "“Etto cāpe catubbhāgaṁ,",
  "thig13.3:6.2": "yathā bhāsasi tvañca me;",
  "thig13.3:6.3": "Tayi rattassa posassa,",
  "thig13.3:6.4": "uḷāraṁ vata taṁ siyā”.",
  "thig13.3:7.1": "“Kāḷaṅginiṁva takkāriṁ,",
  "thig13.3:7.2": "pupphitaṁ girimuddhani;",
  "thig13.3:7.3": "Phullaṁ dālimalaṭṭhiṁva,",
  "thig13.3:7.4": "antodīpeva pāṭaliṁ.",
  "thig13.3:8.1": "Haricandanalittaṅgiṁ,",
  "thig13.3:8.2": "kāsikuttamadhāriniṁ;",
  "thig13.3:8.3": "Taṁ maṁ rūpavatiṁ santiṁ,",
  "thig13.3:8.4": "kassa ohāya gacchasi”.",
  "thig13.3:9.1": "“Sākuntikova sakuṇiṁ,",
  "thig13.3:9.2": "yathā bandhitumicchati;",
  "thig13.3:9.3": "Āharimena rūpena,",
  "thig13.3:9.4": "na maṁ tvaṁ bādhayissasi”.",
  "thig13.3:10.1": "“Imañca me puttaphalaṁ,",
  "thig13.3:10.2": "kāḷa uppāditaṁ tayā;",
  "thig13.3:10.3": "Taṁ maṁ puttavatiṁ santiṁ,",
  "thig13.3:10.4": "kassa ohāya gacchasi”.",
  "thig13.3:11.1": "“Jahanti putte sappaññā,",
  "thig13.3:11.2": "tato ñātī tato dhanaṁ;",
  "thig13.3:11.3": "Pabbajanti mahāvīrā,",
  "thig13.3:11.4": "nāgo chetvāva bandhanaṁ”.",
  "thig13.3:12.1": "“Idāni te imaṁ puttaṁ,",
  "thig13.3:12.2": "Daṇḍena churikāya vā;",
  "thig13.3:12.3": "Bhūmiyaṁ vā nisumbhissaṁ,",
  "thig13.3:12.4": "Puttasokā na gacchasi”.",
  "thig13.3:13.1": "“Sace puttaṁ siṅgālānaṁ,",
  "thig13.3:13.2": "kukkurānaṁ padāhisi;",
  "thig13.3:13.3": "Na maṁ puttakatte jammi,",
  "thig13.3:13.4": "punarāvattayissasi”.",
  "thig13.3:14.1": "“Handa kho dāni bhaddante,",
  "thig13.3:14.2": "kuhiṁ kāḷa gamissasi;",
  "thig13.3:14.3": "Katamaṁ gāmanigamaṁ,",
  "thig13.3:14.4": "nagaraṁ rājadhāniyo”.",
  "thig13.3:15.1": "“Ahumha pubbe gaṇino,",
  "thig13.3:15.2": "Assamaṇā samaṇamānino;",
  "thig13.3:15.3": "Gāmena gāmaṁ vicarimha,",
  "thig13.3:15.4": "Nagare rājadhāniyo.",
  "thig13.3:16.1": "Eso hi bhagavā buddho,",
  "thig13.3:16.2": "nadiṁ nerañjaraṁ pati;",
  "thig13.3:16.3": "Sabbadukkhappahānāya,",
  "thig13.3:16.4": "dhammaṁ deseti pāṇinaṁ;",
  "thig13.3:16.5": "Tassāhaṁ santikaṁ gacchaṁ,",
  "thig13.3:16.6": "so me satthā bhavissati”.",
  "thig13.3:17.1": "“Vandanaṁ dāni vajjāsi,",
  "thig13.3:17.2": "lokanāthaṁ anuttaraṁ;",
  "thig13.3:17.3": "Padakkhiṇañca katvāna,",
  "thig13.3:17.4": "ādiseyyāsi dakkhiṇaṁ”.",
  "thig13.3:18.1": "“Etaṁ kho labbhamamhehi,",
  "thig13.3:18.2": "yathā bhāsasi tvañca me;",
  "thig13.3:18.3": "Vandanaṁ dāni te vajjaṁ,",
  "thig13.3:18.4": "lokanāthaṁ anuttaraṁ;",
  "thig13.3:18.5": "Padakkhiṇañca katvāna,",
  "thig13.3:18.6": "ādisissāmi dakkhiṇaṁ”.",
  "thig13.3:19.1": "Tato ca kāḷo pakkāmi,",
  "thig13.3:19.2": "nadiṁ nerañjaraṁ pati;",
  "thig13.3:19.3": "So addasāsi sambuddhaṁ,",
  "thig13.3:19.4": "desentaṁ amataṁ padaṁ.",
  "thig13.3:20.1": "Dukkhaṁ dukkhasamuppādaṁ,",
  "thig13.3:20.2": "dukkhassa ca atikkamaṁ;",
  "thig13.3:20.3": "Ariyaṁ caṭṭhaṅgikaṁ maggaṁ,",
  "thig13.3:20.4": "dukkhūpasamagāminaṁ.",
  "thig13.3:21.1": "Tassa pādāni vanditvā,",
  "thig13.3:21.2": "Katvāna naṁ padakkhiṇaṁ;",
  "thig13.3:21.3": "Cāpāya ādisitvāna,",
  "thig13.3:21.4": "Pabbajiṁ anagāriyaṁ;",
  "thig13.3:21.5": "Tisso vijjā anuppattā,",
  "thig13.3:21.6": "Kataṁ buddhassa sāsanaṁ.",
  "thig13.3:22.1": "… Cāpā therī …."
}