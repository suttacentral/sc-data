{
  "snp2.1:0.1": "Sutta Nipāta 2.1",
  "snp2.1:0.2": "Ratanasutta",
  "snp2.1:1.1": "Yānīdha bhūtāni samāgatāni,",
  "snp2.1:1.2": "Bhummāni vā yāni va antalikkhe;",
  "snp2.1:1.3": "Sabbeva bhūtā sumanā bhavantu,",
  "snp2.1:1.4": "Athopi sakkacca suṇantu bhāsitaṁ.",
  "snp2.1:2.1": "Tasmā hi bhūtā nisāmetha sabbe,",
  "snp2.1:2.2": "Mettaṁ karotha mānusiyā pajāya;",
  "snp2.1:2.3": "Divā ca ratto ca haranti ye baliṁ,",
  "snp2.1:2.4": "Tasmā hi ne rakkhatha appamattā.",
  "snp2.1:3.1": "Yaṁ kiñci vittaṁ idha vā huraṁ vā,",
  "snp2.1:3.2": "Saggesu vā yaṁ ratanaṁ paṇītaṁ;",
  "snp2.1:3.3": "Na no samaṁ atthi tathāgatena,",
  "snp2.1:3.4": "Idampi buddhe ratanaṁ paṇītaṁ;",
  "snp2.1:3.5": "Etena saccena suvatthi hotu.",
  "snp2.1:4.1": "Khayaṁ virāgaṁ amataṁ paṇītaṁ,",
  "snp2.1:4.2": "Yadajjhagā sakyamunī samāhito;",
  "snp2.1:4.3": "Na tena dhammena samatthi kiñci,",
  "snp2.1:4.4": "Idampi dhamme ratanaṁ paṇītaṁ;",
  "snp2.1:4.5": "Etena saccena suvatthi hotu.",
  "snp2.1:5.1": "Yaṁ buddhaseṭṭho parivaṇṇayī suciṁ,",
  "snp2.1:5.2": "Samādhimānantarikaññamāhu;",
  "snp2.1:5.3": "Samādhinā tena samo na vijjati,",
  "snp2.1:5.4": "Idampi dhamme ratanaṁ paṇītaṁ;",
  "snp2.1:5.5": "Etena saccena suvatthi hotu.",
  "snp2.1:6.1": "Ye puggalā aṭṭha sataṁ pasatthā,",
  "snp2.1:6.2": "Cattāri etāni yugāni honti;",
  "snp2.1:6.3": "Te dakkhiṇeyyā sugatassa sāvakā,",
  "snp2.1:6.4": "Etesu dinnāni mahapphalāni;",
  "snp2.1:6.5": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "snp2.1:6.6": "Etena saccena suvatthi hotu.",
  "snp2.1:7.1": "Ye suppayuttā manasā daḷhena,",
  "snp2.1:7.2": "Nikkāmino gotamasāsanamhi;",
  "snp2.1:7.3": "Te pattipattā amataṁ vigayha,",
  "snp2.1:7.4": "Laddhā mudhā nibbutiṁ bhuñjamānā;",
  "snp2.1:7.5": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "snp2.1:7.6": "Etena saccena suvatthi hotu.",
  "snp2.1:8.1": "Yathindakhīlo pathavissito siyā,",
  "snp2.1:8.2": "Catubbhi vātehi asampakampiyo;",
  "snp2.1:8.3": "Tathūpamaṁ sappurisaṁ vadāmi,",
  "snp2.1:8.4": "Yo ariyasaccāni avecca passati;",
  "snp2.1:8.5": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "snp2.1:8.6": "Etena saccena suvatthi hotu.",
  "snp2.1:9.1": "Ye ariyasaccāni vibhāvayanti,",
  "snp2.1:9.2": "Gambhīrapaññena sudesitāni;",
  "snp2.1:9.3": "Kiñcāpi te honti bhusaṁ pamattā,",
  "snp2.1:9.4": "Na te bhavaṁ aṭṭhamamādiyanti;",
  "snp2.1:9.5": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "snp2.1:9.6": "Etena saccena suvatthi hotu.",
  "snp2.1:10.1": "Sahāvassa dassanasampadāya,",
  "snp2.1:10.2": "Tayassu dhammā jahitā bhavanti;",
  "snp2.1:10.3": "Sakkāyadiṭṭhī vicikicchitañca,",
  "snp2.1:10.4": "Sīlabbataṁ vāpi yadatthi kiñci.",
  "snp2.1:11.1": "Catūhapāyehi ca vippamutto,",
  "snp2.1:11.2": "Chaccābhiṭhānāni abhabba kātuṁ;",
  "snp2.1:11.3": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "snp2.1:11.4": "Etena saccena suvatthi hotu.",
  "snp2.1:12.1": "Kiñcāpi so kamma karoti pāpakaṁ,",
  "snp2.1:12.2": "Kāyena vācā uda cetasā vā;",
  "snp2.1:12.3": "Abhabba so tassa paṭicchadāya,",
  "snp2.1:12.4": "Abhabbatā diṭṭhapadassa vuttā;",
  "snp2.1:12.5": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "snp2.1:12.6": "Etena saccena suvatthi hotu.",
  "snp2.1:13.1": "Vanappagumbe yatha phussitagge,",
  "snp2.1:13.2": "Gimhānamāse paṭhamasmiṁ gimhe;",
  "snp2.1:13.3": "Tathūpamaṁ dhammavaraṁ adesayi,",
  "snp2.1:13.4": "Nibbānagāmiṁ paramaṁ hitāya;",
  "snp2.1:13.5": "Idampi buddhe ratanaṁ paṇītaṁ,",
  "snp2.1:13.6": "Etena saccena suvatthi hotu.",
  "snp2.1:14.1": "Varo varaññū varado varāharo,",
  "snp2.1:14.2": "Anuttaro dhammavaraṁ adesayi;",
  "snp2.1:14.3": "Idampi buddhe ratanaṁ paṇītaṁ,",
  "snp2.1:14.4": "Etena saccena suvatthi hotu.",
  "snp2.1:15.1": "Khīṇaṁ purāṇaṁ nava natthi sambhavaṁ,",
  "snp2.1:15.2": "Virattacittāyatike bhavasmiṁ;",
  "snp2.1:15.3": "Te khīṇabījā avirūḷhichandā,",
  "snp2.1:15.4": "Nibbanti dhīrā yathāyaṁ padīpo;",
  "snp2.1:15.5": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "snp2.1:15.6": "Etena saccena suvatthi hotu.",
  "snp2.1:16.1": "Yānīdha bhūtāni samāgatāni,",
  "snp2.1:16.2": "Bhummāni vā yāni va antalikkhe;",
  "snp2.1:16.3": "Tathāgataṁ devamanussapūjitaṁ,",
  "snp2.1:16.4": "Buddhaṁ namassāma suvatthi hotu.",
  "snp2.1:17.1": "Yānīdha bhūtāni samāgatāni,",
  "snp2.1:17.2": "Bhummāni vā yāni va antalikkhe;",
  "snp2.1:17.3": "Tathāgataṁ devamanussapūjitaṁ,",
  "snp2.1:17.4": "Dhammaṁ namassāma suvatthi hotu.",
  "snp2.1:18.1": "Yānīdha bhūtāni samāgatāni,",
  "snp2.1:18.2": "Bhummāni vā yāni va antalikkhe;",
  "snp2.1:18.3": "Tathāgataṁ devamanussapūjitaṁ,",
  "snp2.1:18.4": "Saṅghaṁ namassāma suvatthi hotūti.",
  "snp2.1:18.5": "Ratanasuttaṁ paṭhamaṁ."
}