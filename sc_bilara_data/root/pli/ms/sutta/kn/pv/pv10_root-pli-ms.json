{
  "pv10:0.1": "Petavatthu",
  "pv10:0.2": "Uragavagga",
  "pv10:0.3": "10. Khallāṭiyapetivatthu",
  "pv10:1.1": "“Kā nu antovimānasmiṁ,",
  "pv10:1.2": "tiṭṭhantī nūpanikkhami;",
  "pv10:1.3": "Upanikkhamassu bhadde,",
  "pv10:1.4": "passāma taṁ bahiṭṭhitan”ti.",
  "pv10:2.1": "“Aṭṭīyāmi harāyāmi,",
  "pv10:2.2": "naggā nikkhamituṁ bahi;",
  "pv10:2.3": "Kesehamhi paṭicchannā,",
  "pv10:2.4": "puññaṁ me appakaṁ katan”ti.",
  "pv10:3.1": "“Handuttarīyaṁ dadāmi te,",
  "pv10:3.2": "idaṁ dussaṁ nivāsaya;",
  "pv10:3.3": "Idaṁ dussaṁ nivāsetvā,",
  "pv10:3.4": "ehi nikkhama sobhane;",
  "pv10:3.5": "Upanikkhamassu bhadde,",
  "pv10:3.6": "passāma taṁ bahiṭṭhitan”ti.",
  "pv10:4.1": "“Hatthena hatthe te dinnaṁ,",
  "pv10:4.2": "na mayhaṁ upakappati;",
  "pv10:4.3": "Esetthupāsako saddho,",
  "pv10:4.4": "sammāsambuddhasāvako.",
  "pv10:5.1": "Etaṁ acchādayitvāna,",
  "pv10:5.2": "mama dakkhiṇamādisa;",
  "pv10:5.3": "Tathāhaṁ sukhitā hessaṁ,",
  "pv10:5.4": "sabbakāmasamiddhinī”ti.",
  "pv10:6.1": "Tañca te nhāpayitvāna,",
  "pv10:6.2": "vilimpetvāna vāṇijā;",
  "pv10:6.3": "Vatthehacchādayitvāna,",
  "pv10:6.4": "tassā dakkhiṇamādisuṁ.",
  "pv10:7.1": "Samanantarānuddiṭṭhe,",
  "pv10:7.2": "vipāko udapajjatha;",
  "pv10:7.3": "Bhojanacchādanapānīyaṁ,",
  "pv10:7.4": "dakkhiṇāya idaṁ phalaṁ.",
  "pv10:8.1": "Tato suddhā sucivasanā,",
  "pv10:8.2": "kāsikuttamadhārinī;",
  "pv10:8.3": "Hasantī vimānā nikkhami,",
  "pv10:8.4": "dakkhiṇāya idaṁ phalanti.",
  "pv10:9.1": "“Sucittarūpaṁ ruciraṁ,",
  "pv10:9.2": "vimānaṁ te pabhāsati;",
  "pv10:9.3": "Devate pucchitācikkha,",
  "pv10:9.4": "kissa kammassidaṁ phalan”ti.",
  "pv10:10.1": "“Bhikkhuno caramānassa,",
  "pv10:10.2": "doṇinimmajjaniṁ ahaṁ;",
  "pv10:10.3": "Adāsiṁ ujubhūtassa,",
  "pv10:10.4": "vippasannena cetasā.",
  "pv10:11.1": "Tassa kammassa kusalassa,",
  "pv10:11.2": "vipākaṁ dīghamantaraṁ;",
  "pv10:11.3": "Anubhomi vimānasmiṁ,",
  "pv10:11.4": "tañca dāni parittakaṁ.",
  "pv10:12.1": "Uddhaṁ catūhi māsehi,",
  "pv10:12.2": "kālakiriyā bhavissati;",
  "pv10:12.3": "Ekantakaṭukaṁ ghoraṁ,",
  "pv10:12.4": "nirayaṁ papatissahaṁ.",
  "pv10:13.1": "Catukkaṇṇaṁ catudvāraṁ,",
  "pv10:13.2": "vibhattaṁ bhāgaso mitaṁ;",
  "pv10:13.3": "Ayopākārapariyantaṁ,",
  "pv10:13.4": "ayasā paṭikujjitaṁ.",
  "pv10:14.1": "Tassa ayomayā bhūmi,",
  "pv10:14.2": "jalitā tejasā yutā;",
  "pv10:14.3": "Samantā yojanasataṁ,",
  "pv10:14.4": "pharitvā tiṭṭhati sabbadā.",
  "pv10:15.1": "Tatthāhaṁ dīghamaddhānaṁ,",
  "pv10:15.2": "dukkhaṁ vedissa vedanaṁ;",
  "pv10:15.3": "Phalañca pāpakammassa,",
  "pv10:15.4": "tasmā socāmahaṁ bhusan”ti.",
  "pv10:16.1": "Khallāṭiyapetivatthu dasamaṁ."
}