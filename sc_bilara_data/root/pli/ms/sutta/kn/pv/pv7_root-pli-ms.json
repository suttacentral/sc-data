{
  "pv7:0.1": "Petavatthu",
  "pv7:0.2": "Uragavagga",
  "pv7:0.3": "7. Sattaputtakhādapetivatthu",
  "pv7:1.1": "“Naggā dubbaṇṇarūpāsi,",
  "pv7:1.2": "duggandhā pūti vāyasi;",
  "pv7:1.3": "Makkhikāhi parikiṇṇā,",
  "pv7:1.4": "kā nu tvaṁ idha tiṭṭhasī”ti.",
  "pv7:2.1": "“Ahaṁ bhadante petīmhi,",
  "pv7:2.2": "duggatā yamalokikā;",
  "pv7:2.3": "Pāpakammaṁ karitvāna,",
  "pv7:2.4": "petalokaṁ ito gatā.",
  "pv7:3.1": "Kālena satta puttāni,",
  "pv7:3.2": "sāyaṁ satta punāpare;",
  "pv7:3.3": "Vijāyitvāna khādāmi,",
  "pv7:3.4": "tepi nā honti me alaṁ.",
  "pv7:4.1": "Pariḍayhati dhūmāyati,",
  "pv7:4.2": "khudāya hadayaṁ mama;",
  "pv7:4.3": "Nibbutiṁ nādhigacchāmi,",
  "pv7:4.4": "aggidaḍḍhāva ātape”ti.",
  "pv7:5.1": "“Kiṁ nu kāyena vācāya,",
  "pv7:5.2": "manasā dukkaṭaṁ kataṁ;",
  "pv7:5.3": "Kissa kammavipākena,",
  "pv7:5.4": "puttamaṁsāni khādasī”ti.",
  "pv7:6.1": "“Ahū mayhaṁ duve puttā,",
  "pv7:6.2": "ubho sampattayobbanā;",
  "pv7:6.3": "Sāhaṁ puttabalūpetā,",
  "pv7:6.4": "sāmikaṁ atimaññisaṁ.",
  "pv7:7.1": "Tato me sāmiko kuddho,",
  "pv7:7.2": "sapatiṁ mayhamānayi;",
  "pv7:7.3": "Sā ca gabbhaṁ alabhittha,",
  "pv7:7.4": "tassā pāpaṁ acetayiṁ.",
  "pv7:8.1": "Sāhaṁ paduṭṭhamanasā,",
  "pv7:8.2": "akariṁ gabbhapātanaṁ;",
  "pv7:8.3": "Tassā temāsiko gabbho,",
  "pv7:8.4": "pūtilohitako pati.",
  "pv7:9.1": "Tadassā mātā kupitā,",
  "pv7:9.2": "mayhaṁ ñātī samānayi;",
  "pv7:9.3": "Sapathañca maṁ kāresi,",
  "pv7:9.4": "paribhāsāpayī ca maṁ.",
  "pv7:10.1": "Sāhaṁ ghorañca sapathaṁ,",
  "pv7:10.2": "musāvādaṁ abhāsisaṁ;",
  "pv7:10.3": "‘Puttamaṁsāni khādāmi,",
  "pv7:10.4": "sace taṁ pakataṁ mayā’.",
  "pv7:11.1": "Tassa kammassa vipākena,",
  "pv7:11.2": "musāvādassa cūbhayaṁ;",
  "pv7:11.3": "Puttamaṁsāni khādāmi,",
  "pv7:11.4": "pubbalohitamakkhitā”ti.",
  "pv7:12.1": "Sattaputtakhādapetivatthu sattamaṁ."
}