{
  "pv5:0.1": "Petavatthu",
  "pv5:0.2": "Uragavagga",
  "pv5:0.3": "5. Tirokuṭṭapetavatthu",
  "pv5:1.1": "“Tirokuṭṭesu tiṭṭhanti,",
  "pv5:1.2": "sandhisiṅghāṭakesu ca;",
  "pv5:1.3": "Dvārabāhāsu tiṭṭhanti,",
  "pv5:1.4": "āgantvāna sakaṁ gharaṁ.",
  "pv5:2.1": "Pahūte annapānamhi,",
  "pv5:2.2": "khajjabhojje upaṭṭhite;",
  "pv5:2.3": "Na tesaṁ koci sarati,",
  "pv5:2.4": "sattānaṁ kammapaccayā.",
  "pv5:3.1": "Evaṁ dadanti ñātīnaṁ,",
  "pv5:3.2": "ye honti anukampakā;",
  "pv5:3.3": "Suciṁ paṇītaṁ kālena,",
  "pv5:3.4": "kappiyaṁ pānabhojanaṁ;",
  "pv5:3.5": "‘Idaṁ vo ñātīnaṁ hotu,",
  "pv5:3.6": "sukhitā hontu ñātayo’.",
  "pv5:4.1": "Te ca tattha samāgantvā,",
  "pv5:4.2": "ñātipetā samāgatā;",
  "pv5:4.3": "Pahūte annapānamhi,",
  "pv5:4.4": "sakkaccaṁ anumodare.",
  "pv5:5.1": "‘Ciraṁ jīvantu no ñātī,",
  "pv5:5.2": "yesaṁ hetu labhāmase;",
  "pv5:5.3": "Amhākañca katā pūjā,",
  "pv5:5.4": "dāyakā ca anipphalā’.",
  "pv5:6.1": "Na hi tattha kasī atthi,",
  "pv5:6.2": "gorakkhettha na vijjati;",
  "pv5:6.3": "Vaṇijjā tādisī natthi,",
  "pv5:6.4": "hiraññena kayākayaṁ;",
  "pv5:6.5": "Ito dinnena yāpenti,",
  "pv5:6.6": "petā kālagatā tahiṁ.",
  "pv5:7.1": "Unname udakaṁ vuṭṭhaṁ,",
  "pv5:7.2": "yathā ninnaṁ pavattati;",
  "pv5:7.3": "Evamevaṁ ito dinnaṁ,",
  "pv5:7.4": "petānaṁ upakappati.",
  "pv5:8.1": "Yathā vārivahā pūrā,",
  "pv5:8.2": "paripūrenti sāgaraṁ;",
  "pv5:8.3": "Evamevaṁ ito dinnaṁ,",
  "pv5:8.4": "petānaṁ upakappati.",
  "pv5:9.1": "‘Adāsi me akāsi me,",
  "pv5:9.2": "ñāti mittā sakhā ca me’;",
  "pv5:9.3": "Petānaṁ dakkhiṇaṁ dajjā,",
  "pv5:9.4": "pubbe katamanussaraṁ.",
  "pv5:10.1": "Na hi ruṇṇaṁ vā soko vā,",
  "pv5:10.2": "yā caññā paridevanā;",
  "pv5:10.3": "Na taṁ petānamatthāya,",
  "pv5:10.4": "evaṁ tiṭṭhanti ñātayo.",
  "pv5:11.1": "Ayañca kho dakkhiṇā dinnā,",
  "pv5:11.2": "saṅghamhi suppatiṭṭhitā;",
  "pv5:11.3": "Dīgharattaṁ hitāyassa,",
  "pv5:11.4": "ṭhānaso upakappati.",
  "pv5:12.1": "So ñātidhammo ca ayaṁ nidassito,",
  "pv5:12.2": "Petāna pūjā ca katā uḷārā;",
  "pv5:12.3": "Balañca bhikkhūnamanuppadinnaṁ,",
  "pv5:12.4": "Tumhehi puññaṁ pasutaṁ anappakan”ti.",
  "pv5:13.1": "Tirokuṭṭapetavatthu pañcamaṁ."
}