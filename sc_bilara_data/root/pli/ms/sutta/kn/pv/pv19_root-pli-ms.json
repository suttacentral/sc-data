{
  "pv19:0.1": "Petavatthu",
  "pv19:0.2": "Ubbarivagga",
  "pv19:0.3": "7. Dhanapālaseṭṭhipetavatthu",
  "pv19:1.1": "“Naggo dubbaṇṇarūposi,",
  "pv19:1.2": "kiso dhamanisanthato;",
  "pv19:1.3": "Upphāsuliko kisiko,",
  "pv19:1.4": "ko nu tvamasi mārisa”.",
  "pv19:2.1": "“Ahaṁ bhadante petomhi,",
  "pv19:2.2": "duggato yamalokiko;",
  "pv19:2.3": "Pāpakammaṁ karitvāna,",
  "pv19:2.4": "petalokaṁ ito gato”.",
  "pv19:3.1": "“Kiṁ nu kāyena vācāya,",
  "pv19:3.2": "manasā dukkaṭaṁ kataṁ;",
  "pv19:3.3": "Kissa kammavipākena,",
  "pv19:3.4": "petalokaṁ ito gato”.",
  "pv19:4.1": "“Nagaraṁ atthi paṇṇānaṁ,",
  "pv19:4.2": "erakacchanti vissutaṁ;",
  "pv19:4.3": "Tattha seṭṭhi pure āsiṁ,",
  "pv19:4.4": "dhanapāloti maṁ vidū.",
  "pv19:5.1": "Asīti sakaṭavāhānaṁ,",
  "pv19:5.2": "hiraññassa ahosi me;",
  "pv19:5.3": "Pahūtaṁ me jātarūpaṁ,",
  "pv19:5.4": "muttā veḷuriyā bahū.",
  "pv19:6.1": "Tāva mahaddhanassāpi,",
  "pv19:6.2": "na me dātuṁ piyaṁ ahu;",
  "pv19:6.3": "Pidahitvā dvāraṁ bhuñjiṁ,",
  "pv19:6.4": "mā maṁ yācanakāddasuṁ.",
  "pv19:7.1": "Assaddho maccharī cāsiṁ,",
  "pv19:7.2": "kadariyo paribhāsako;",
  "pv19:7.3": "Dadantānaṁ karontānaṁ,",
  "pv19:7.4": "vārayissaṁ bahū jane.",
  "pv19:8.1": "Vipāko natthi dānassa,",
  "pv19:8.2": "saṁyamassa kuto phalaṁ;",
  "pv19:8.3": "Pokkharaññodapānāni,",
  "pv19:8.4": "ārāmāni ca ropite;",
  "pv19:8.5": "Papāyo ca vināsesiṁ,",
  "pv19:8.6": "dugge saṅkamanāni ca.",
  "pv19:9.1": "Svāhaṁ akatakalyāṇo,",
  "pv19:9.2": "katapāpo tato cuto;",
  "pv19:9.3": "Upapanno pettivisayaṁ,",
  "pv19:9.4": "khuppipāsasamappito.",
  "pv19:10.1": "Pañcapaṇṇāsavassāni,",
  "pv19:10.2": "yato kālaṅkato ahaṁ;",
  "pv19:10.3": "Nābhijānāmi bhuttaṁ vā,",
  "pv19:10.4": "pītaṁ vā pana pāniyaṁ.",
  "pv19:11.1": "Yo saṁyamo so vināso,",
  "pv19:11.2": "yo vināso so saṁyamo;",
  "pv19:11.3": "Petā hi kira jānanti,",
  "pv19:11.4": "yo saṁyamo so vināso.",
  "pv19:12.1": "Ahaṁ pure saṁyamissaṁ,",
  "pv19:12.2": "nādāsiṁ bahuke dhane;",
  "pv19:12.3": "Santesu deyyadhammesu,",
  "pv19:12.4": "dīpaṁ nākāsimattano;",
  "pv19:12.5": "Svāhaṁ pacchānutappāmi,",
  "pv19:12.6": "attakammaphalūpago.",
  "pv19:13.1": "Uddhaṁ catūhi māsehi,",
  "pv19:13.2": "kālaṅkiriyā bhavissati;",
  "pv19:13.3": "Ekantakaṭukaṁ ghoraṁ,",
  "pv19:13.4": "nirayaṁ papatissahaṁ.",
  "pv19:14.1": "Catukkaṇṇaṁ catudvāraṁ,",
  "pv19:14.2": "vibhattaṁ bhāgaso mitaṁ;",
  "pv19:14.3": "Ayopākārapariyantaṁ,",
  "pv19:14.4": "ayasā paṭikujjitaṁ.",
  "pv19:15.1": "Tassa ayomayā bhūmi,",
  "pv19:15.2": "jalitā tejasā yutā;",
  "pv19:15.3": "Samantā yojanasataṁ,",
  "pv19:15.4": "pharitvā tiṭṭhati sabbadā.",
  "pv19:16.1": "Tatthāhaṁ dīghamaddhānaṁ,",
  "pv19:16.2": "Dukkhaṁ vedissa vedanaṁ;",
  "pv19:16.3": "Phalaṁ pāpassa kammassa,",
  "pv19:16.4": "Tasmā socāmahaṁ bhusaṁ.",
  "pv19:17.1": "Taṁ vo vadāmi bhaddaṁ vo,",
  "pv19:17.2": "yāvantettha samāgatā;",
  "pv19:17.3": "Mākattha pāpakaṁ kammaṁ,",
  "pv19:17.4": "āvi vā yadi vā raho.",
  "pv19:18.1": "Sace taṁ pāpakaṁ kammaṁ,",
  "pv19:18.2": "karissatha karotha vā;",
  "pv19:18.3": "Na vo dukkhā pamutyatthi,",
  "pv19:18.4": "uppaccāpi palāyataṁ.",
  "pv19:19.1": "Matteyyā hotha petteyyā,",
  "pv19:19.2": "kule jeṭṭhāpacāyikā;",
  "pv19:19.3": "Sāmaññā hotha brahmaññā,",
  "pv19:19.4": "evaṁ saggaṁ gamissathā”ti.",
  "pv19:20.1": "Dhanapālaseṭṭhipetavatthu sattamaṁ."
}