{
  "vv67:0.1": "Vimānavatthu",
  "vv67:0.2": "Purisavimāna",
  "vv67:0.3": "Pāyāsivagga",
  "vv67:0.4": "3. Phaladāyakavimānavatthu",
  "vv67:1.1": "“Uccamidaṁ maṇithūṇaṁ vimānaṁ,",
  "vv67:1.2": "Samantato soḷasa yojanāni;",
  "vv67:1.3": "Kūṭāgārā sattasatā uḷārā,",
  "vv67:1.4": "Veḷuriyathambhā rucakatthatā subhā.",
  "vv67:2.1": "Tatthacchasi pivasi khādasi ca,",
  "vv67:2.2": "Dibbā ca vīṇā pavadanti vagguṁ;",
  "vv67:2.3": "Aṭṭhaṭṭhakā sikkhitā sādhurūpā,",
  "vv67:2.4": "Dibbā ca kaññā tidasacarā uḷārā;",
  "vv67:2.5": "Naccanti gāyanti pamodayanti.",
  "vv67:3.1": "Deviddhipattosi mahānubhāvo,",
  "vv67:3.2": "Manussabhūto kimakāsi puññaṁ;",
  "vv67:3.3": "Kenāsi evaṁ jalitānubhāvo,",
  "vv67:3.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv67:4.1": "So devaputto attamano,",
  "vv67:4.2": "…pe…",
  "vv67:4.3": "Yassa kammassidaṁ phalaṁ.",
  "vv67:5.1": "“Phaladāyī phalaṁ vipulaṁ labhati,",
  "vv67:5.2": "Dadamujugatesu pasannamānaso;",
  "vv67:5.3": "So hi pamodati saggagato tidive,",
  "vv67:5.4": "Anubhoti ca puññaphalaṁ vipulaṁ.",
  "vv67:6.1": "Tavevāhaṁ mahāmuni,",
  "vv67:6.2": "Adāsiṁ caturo phale.",
  "vv67:7.1": "Tasmā hi phalaṁ alameva dātuṁ,",
  "vv67:7.2": "Niccaṁ manussena sukhatthikena;",
  "vv67:7.3": "Dibbāni vā patthayatā sukhāni,",
  "vv67:7.4": "Manussasobhaggatamicchatā vā.",
  "vv67:8.1": "Tena metādiso vaṇṇo,",
  "vv67:8.2": "…pe…",
  "vv67:8.3": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
  "vv67:9.1": "Phaladāyakavimānaṁ tatiyaṁ."
}