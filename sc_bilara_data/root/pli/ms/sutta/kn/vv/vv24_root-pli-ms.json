{
  "vv24:0.1": "Vimānavatthu",
  "vv24:0.2": "Itthivimāna",
  "vv24:0.3": "Cittalatāvagga",
  "vv24:0.4": "7. Uposathāvimānavatthu",
  "vv24:1.1": "“Abhikkantena vaṇṇena,",
  "vv24:1.2": "yā tvaṁ tiṭṭhasi devate;",
  "vv24:1.3": "Obhāsentī disā sabbā,",
  "vv24:1.4": "osadhī viya tārakā.",
  "vv24:2.1": "Kena tetādiso vaṇṇo,",
  "vv24:2.2": "…pe…",
  "vv24:2.3": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv24:3.1": "Sā devatā attamanā,",
  "vv24:3.2": "…pe…",
  "vv24:3.3": "yassa kammassidaṁ phalaṁ.",
  "vv24:4.1": "“Uposathāti maṁ aññaṁsu,",
  "vv24:4.2": "sāketāyaṁ upāsikā;",
  "vv24:4.3": "Saddhā sīlena sampannā,",
  "vv24:4.4": "saṁvibhāgaratā sadā.",
  "vv24:5.1": "Acchādanañca bhattañca,",
  "vv24:5.2": "senāsanaṁ padīpiyaṁ;",
  "vv24:5.3": "Adāsiṁ ujubhūtesu,",
  "vv24:5.4": "vippasannena cetasā.",
  "vv24:6.1": "Cātuddasiṁ pañcadasiṁ,",
  "vv24:6.2": "yā ca pakkhassa aṭṭhamī;",
  "vv24:6.3": "Pāṭihāriyapakkhañca,",
  "vv24:6.4": "aṭṭhaṅgasusamāgataṁ.",
  "vv24:7.1": "Uposathaṁ upavasissaṁ,",
  "vv24:7.2": "sadā sīlesu saṁvutā;",
  "vv24:7.3": "Saññamā saṁvibhāgā ca,",
  "vv24:7.4": "vimānaṁ āvasāmahaṁ.",
  "vv24:8.1": "Pāṇātipātā viratā,",
  "vv24:8.2": "musāvādā ca saññatā;",
  "vv24:8.3": "Theyyā ca aticārā ca,",
  "vv24:8.4": "majjapānā ca ārakā.",
  "vv24:9.1": "Pañcasikkhāpade ratā,",
  "vv24:9.2": "ariyasaccāna kovidā;",
  "vv24:9.3": "Upāsikā cakkhumato,",
  "vv24:9.4": "gotamassa yasassino.",
  "vv24:10.1": "Tena metādiso vaṇṇo,",
  "vv24:10.2": "…pe…",
  "vv24:10.3": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
  "vv24:11.1": "“Abhikkhaṇaṁ nandanaṁ sutvā,",
  "vv24:11.2": "Chando me udapajjatha;",
  "vv24:11.3": "Tattha cittaṁ paṇidhāya,",
  "vv24:11.4": "Upapannāmhi nandanaṁ.",
  "vv24:12.1": "Nākāsiṁ satthu vacanaṁ,",
  "vv24:12.2": "buddhassādiccabandhuno;",
  "vv24:12.3": "Hīne cittaṁ paṇidhāya,",
  "vv24:12.4": "sāmhi pacchānutāpinī”ti.",
  "vv24:13.1": "“Kīva ciraṁ vimānamhi,",
  "vv24:13.2": "idha vacchasuposathe;",
  "vv24:13.3": "Devate pucchitācikkha,",
  "vv24:13.4": "yadi jānāsi āyuno”ti.",
  "vv24:14.1": "“Saṭṭhi vassasahassāni,",
  "vv24:14.2": "tisso ca vassakoṭiyo;",
  "vv24:14.3": "Idha ṭhatvā mahāmuni,",
  "vv24:14.4": "ito cutā gamissāmi;",
  "vv24:14.5": "Manussānaṁ sahabyatan”ti.",
  "vv24:15.1": "“Mā tvaṁ uposathe bhāyi,",
  "vv24:15.2": "sambuddhenāsi byākatā;",
  "vv24:15.3": "Sotāpannā visesayi,",
  "vv24:15.4": "pahīnā tava duggatī”ti.",
  "vv24:16.1": "Uposathāvimānaṁ sattamaṁ."
}