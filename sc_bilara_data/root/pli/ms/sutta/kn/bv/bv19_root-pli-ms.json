{
  "bv19:0.1": "Buddhavaṁsa ",
  "bv19:0.2": "19. Tissabuddhavaṁsa ",
  "bv19:1.1": "“Siddhatthassa aparena, ",
  "bv19:1.2": "Asamo appaṭipuggalo; ",
  "bv19:1.3": "Anantatejo amitayaso, ",
  "bv19:1.4": "Tisso lokagganāyako. ",
  "bv19:2.1": "Tamandhakāraṁ vidhamitvā, ",
  "bv19:2.2": "obhāsetvā sadevakaṁ; ",
  "bv19:2.3": "Anukampako mahāvīro, ",
  "bv19:2.4": "loke uppajji cakkhumā. ",
  "bv19:3.1": "Tassāpi atulā iddhi, ",
  "bv19:3.2": "atulaṁ sīlaṁ samādhi ca; ",
  "bv19:3.3": "Sabbattha pāramiṁ gantvā, ",
  "bv19:3.4": "dhammacakkaṁ pavattayi. ",
  "bv19:4.1": "So buddho dasasahassimhi, ",
  "bv19:4.2": "Viññāpesi giraṁ suciṁ; ",
  "bv19:4.3": "Koṭisatāni abhisamiṁsu, ",
  "bv19:4.4": "Paṭhame dhammadesane. ",
  "bv19:5.1": "Dutiyo navutikoṭīnaṁ, ",
  "bv19:5.2": "tatiyo saṭṭhikoṭiyo; ",
  "bv19:5.3": "Bandhanāto pamocesi, ",
  "bv19:5.4": "satte naramarū tadā. ",
  "bv19:6.1": "Sannipātā tayo āsuṁ, ",
  "bv19:6.2": "tisse lokagganāyake; ",
  "bv19:6.3": "Khīṇāsavānaṁ vimalānaṁ, ",
  "bv19:6.4": "santacittāna tādinaṁ. ",
  "bv19:7.1": "Khīṇāsavasatasahassānaṁ, ",
  "bv19:7.2": "Paṭhamo āsi samāgamo; ",
  "bv19:7.3": "Navutisatasahassānaṁ, ",
  "bv19:7.4": "Dutiyo āsi samāgamo. ",
  "bv19:8.1": "Asītisatasahassānaṁ, ",
  "bv19:8.2": "tatiyo āsi samāgamo; ",
  "bv19:8.3": "Khīṇāsavānaṁ vimalānaṁ, ",
  "bv19:8.4": "pupphitānaṁ vimuttiyā. ",
  "bv19:9.1": "Ahaṁ tena samayena, ",
  "bv19:9.2": "sujāto nāma khattiyo; ",
  "bv19:9.3": "Mahābhogaṁ chaḍḍayitvā, ",
  "bv19:9.4": "pabbajiṁ isipabbajaṁ. ",
  "bv19:10.1": "Mayi pabbajite sante, ",
  "bv19:10.2": "uppajji lokanāyako; ",
  "bv19:10.3": "Buddhoti saddaṁ sutvāna, ",
  "bv19:10.4": "pīti me upapajjatha. ",
  "bv19:11.1": "Dibbaṁ mandāravaṁ pupphaṁ, ",
  "bv19:11.2": "padumaṁ pārichattakaṁ; ",
  "bv19:11.3": "Ubho hatthehi paggayha, ",
  "bv19:11.4": "dhunamāno upāgamiṁ. ",
  "bv19:12.1": "Catuvaṇṇaparivutaṁ, ",
  "bv19:12.2": "tissaṁ lokagganāyakaṁ; ",
  "bv19:12.3": "Tamahaṁ pupphaṁ gahetvā, ",
  "bv19:12.4": "matthake dhārayiṁ jinaṁ. ",
  "bv19:13.1": "Sopi maṁ buddho byākāsi, ",
  "bv19:13.2": "janamajjhe nisīdiya; ",
  "bv19:13.3": "‘Dvenavute ito kappe, ",
  "bv19:13.4": "ayaṁ buddho bhavissati. ",
  "bv19:14.1": "Padhānaṁ padahitvāna, ",
  "bv19:14.2": "…pe… ",
  "bv19:14.3": "hessāma sammukhā imaṁ’. ",
  "bv19:15.1": "Tassāpi vacanaṁ sutvā, ",
  "bv19:15.2": "bhiyyo cittaṁ pasādayiṁ; ",
  "bv19:15.3": "Uttariṁ vatamadhiṭṭhāsiṁ, ",
  "bv19:15.4": "dasapāramipūriyā. ",
  "bv19:16.1": "Khemakaṁ nāma nagaraṁ, ",
  "bv19:16.2": "janasandho nāma khattiyo; ",
  "bv19:16.3": "Padumā nāma janikā, ",
  "bv19:16.4": "tissassa ca mahesino. ",
  "bv19:17.1": "Sattavassasahassāni, ",
  "bv19:17.2": "Agāraṁ ajjha so vasi; ",
  "bv19:17.3": "Guhāsela nārisaya nisabhā, ",
  "bv19:17.4": "Tayo pāsādamuttamā. ",
  "bv19:18.1": "Samatiṁsasahassāni, ",
  "bv19:18.2": "nāriyo samalaṅkatā; ",
  "bv19:18.3": "Subhaddānāmikā nārī, ",
  "bv19:18.4": "ānando nāma atrajo. ",
  "bv19:19.1": "Nimitte caturo disvā, ",
  "bv19:19.2": "assayānena nikkhami; ",
  "bv19:19.3": "Anūnaaṭṭhamāsāni, ",
  "bv19:19.4": "padhānaṁ padahī jino. ",
  "bv19:20.1": "Brahmunā yācito santo, ",
  "bv19:20.2": "tisso lokagganāyako; ",
  "bv19:20.3": "Vatti cakkaṁ mahāvīro, ",
  "bv19:20.4": "yasavatiyamuttame. ",
  "bv19:21.1": "Brahmadevo udayo ca, ",
  "bv19:21.2": "ahesuṁ aggasāvakā; ",
  "bv19:21.3": "Samaṅgo nāmupaṭṭhāko, ",
  "bv19:21.4": "tissassa ca mahesino. ",
  "bv19:22.1": "Phussā ceva sudattā ca, ",
  "bv19:22.2": "ahesuṁ aggasāvikā; ",
  "bv19:22.3": "Bodhi tassa bhagavato, ",
  "bv19:22.4": "asanoti pavuccati. ",
  "bv19:23.1": "Sambalo ca sirimā ceva, ",
  "bv19:23.2": "ahesuṁ aggupaṭṭhakā; ",
  "bv19:23.3": "Kisāgotamī upasenā, ",
  "bv19:23.4": "ahesuṁ aggupaṭṭhikā. ",
  "bv19:24.1": "So buddho saṭṭhiratano, ",
  "bv19:24.2": "ahu uccattane jino; ",
  "bv19:24.3": "Anūpamo asadiso, ",
  "bv19:24.4": "himavā viya dissati. ",
  "bv19:25.1": "Tassāpi atulatejassa, ",
  "bv19:25.2": "āyu āsi anuttaro; ",
  "bv19:25.3": "Vassasatasahassāni, ",
  "bv19:25.4": "loke aṭṭhāsi cakkhumā. ",
  "bv19:26.1": "Uttamaṁ pavaraṁ seṭṭhaṁ, ",
  "bv19:26.2": "anubhotvā mahāyasaṁ; ",
  "bv19:26.3": "Jalitvā aggikkhandhova, ",
  "bv19:26.4": "nibbuto so sasāvako. ",
  "bv19:27.1": "Valāhakova anilena, ",
  "bv19:27.2": "sūriyena viya ussavo; ",
  "bv19:27.3": "Andhakārova padīpena, ",
  "bv19:27.4": "nibbuto so sasāvako. ",
  "bv19:28.1": "Tisso jinavaro buddho, ",
  "bv19:28.2": "Nandārāmamhi nibbuto; ",
  "bv19:28.3": "Tatthevassa jinathūpo, ",
  "bv19:28.4": "Tīṇiyojanamuggato”ti. ",
  "bv19:29.1": "Tissassa bhagavato vaṁso sattarasamo. "
}