{
  "bv9:0.1": "Buddhavaṁsa ",
  "bv9:0.2": "9 Anomadassībuddhavaṁsa ",
  "bv9:1.1": "“Sobhitassa aparena, ",
  "bv9:1.2": "Sambuddho dvipaduttamo; ",
  "bv9:1.3": "Anomadassī amitayaso, ",
  "bv9:1.4": "Tejassī duratikkamo. ",
  "bv9:2.1": "So chetvā bandhanaṁ sabbaṁ, ",
  "bv9:2.2": "viddhaṁsetvā tayo bhave; ",
  "bv9:2.3": "Anivattigamanaṁ maggaṁ, ",
  "bv9:2.4": "desesi devamānuse. ",
  "bv9:3.1": "Sāgarova asaṅkhobbho, ",
  "bv9:3.2": "pabbatova durāsado; ",
  "bv9:3.3": "Ākāsova ananto so, ",
  "bv9:3.4": "sālarājāva phullito. ",
  "bv9:4.1": "Dassanenapi taṁ buddhaṁ, ",
  "bv9:4.2": "tositā honti pāṇino; ",
  "bv9:4.3": "Byāharantaṁ giraṁ sutvā, ",
  "bv9:4.4": "amataṁ pāpuṇanti te. ",
  "bv9:5.1": "Dhammābhisamayo tassa, ",
  "bv9:5.2": "Iddho phīto tadā ahu; ",
  "bv9:5.3": "Koṭisatāni abhisamiṁsu, ",
  "bv9:5.4": "Paṭhame dhammadesane. ",
  "bv9:6.1": "Tato paraṁ abhisamaye, ",
  "bv9:6.2": "Vassante dhammavuṭṭhiyo; ",
  "bv9:6.3": "Asītikoṭiyobhisamiṁsu, ",
  "bv9:6.4": "Dutiye dhammadesane. ",
  "bv9:7.1": "Tatoparañhi vassante, ",
  "bv9:7.2": "tappayante ca pāṇinaṁ; ",
  "bv9:7.3": "Aṭṭhasattatikoṭīnaṁ, ",
  "bv9:7.4": "tatiyābhisamayo ahu. ",
  "bv9:8.1": "Sannipātā tayo āsuṁ, ",
  "bv9:8.2": "tassāpi ca mahesino; ",
  "bv9:8.3": "Abhiññābalappattānaṁ, ",
  "bv9:8.4": "pupphitānaṁ vimuttiyā. ",
  "bv9:9.1": "Aṭṭhasatasahassānaṁ, ",
  "bv9:9.2": "sannipāto tadā ahu; ",
  "bv9:9.3": "Pahīnamadamohānaṁ, ",
  "bv9:9.4": "santacittāna tādinaṁ. ",
  "bv9:10.1": "Sattasatasahassānaṁ, ",
  "bv9:10.2": "dutiyo āsi samāgamo; ",
  "bv9:10.3": "Anaṅgaṇānaṁ virajānaṁ, ",
  "bv9:10.4": "upasantāna tādinaṁ. ",
  "bv9:11.1": "Channaṁ satasahassānaṁ, ",
  "bv9:11.2": "tatiyo āsi samāgamo; ",
  "bv9:11.3": "Abhiññābalappattānaṁ, ",
  "bv9:11.4": "nibbutānaṁ tapassinaṁ. ",
  "bv9:12.1": "Ahaṁ tena samayena, ",
  "bv9:12.2": "yakkho āsiṁ mahiddhiko; ",
  "bv9:12.3": "Nekānaṁ yakkhakoṭīnaṁ, ",
  "bv9:12.4": "vasavattimhi issaro. ",
  "bv9:13.1": "Tadāpi taṁ buddhavaraṁ, ",
  "bv9:13.2": "upagantvā mahesinaṁ; ",
  "bv9:13.3": "Annapānena tappesiṁ, ",
  "bv9:13.4": "sasaṅghaṁ lokanāyakaṁ. ",
  "bv9:14.1": "Sopi maṁ tadā byākāsi, ",
  "bv9:14.2": "visuddhanayano muni; ",
  "bv9:14.3": "‘Aparimeyyito kappe, ",
  "bv9:14.4": "ayaṁ buddho bhavissati. ",
  "bv9:15.1": "Padhānaṁ padahitvāna, ",
  "bv9:15.2": "…pe… ",
  "bv9:15.3": "hessāma sammukhā imaṁ’. ",
  "bv9:16.1": "Tassāpi vacanaṁ sutvā, ",
  "bv9:16.2": "haṭṭho saṁviggamānaso; ",
  "bv9:16.3": "Uttariṁ vatamadhiṭṭhāsiṁ, ",
  "bv9:16.4": "dasapāramipūriyā. ",
  "bv9:17.1": "Nagaraṁ candavatī nāma, ",
  "bv9:17.2": "yasavā nāma khattiyo; ",
  "bv9:17.3": "Mātā yasodharā nāma, ",
  "bv9:17.4": "anomadassissa satthuno. ",
  "bv9:18.1": "Dasavassasahassāni, ",
  "bv9:18.2": "agāraṁ ajjha so vasi; ",
  "bv9:18.3": "Sirī upasirī vaḍḍho, ",
  "bv9:18.4": "tayo pāsādamuttamā. ",
  "bv9:19.1": "Tevīsatisahassāni, ",
  "bv9:19.2": "nāriyo samalaṅkatā; ",
  "bv9:19.3": "Sirimā nāma sā nārī, ",
  "bv9:19.4": "upavāṇo nāma atrajo. ",
  "bv9:20.1": "Nimitte caturo disvā, ",
  "bv9:20.2": "sivikāyābhinikkhami; ",
  "bv9:20.3": "Anūnadasamāsāni, ",
  "bv9:20.4": "padhānaṁ padahī jino. ",
  "bv9:21.1": "Brahmunā yācito santo, ",
  "bv9:21.2": "anomadassī mahāmuni; ",
  "bv9:21.3": "Vatti cakkaṁ mahāvīro, ",
  "bv9:21.4": "uyyāne so sudassane. ",
  "bv9:22.1": "Nisabho ca anomo ca, ",
  "bv9:22.2": "ahesuṁ aggasāvakā; ",
  "bv9:22.3": "Varuṇo nāmupaṭṭhāko, ",
  "bv9:22.4": "anomadassissa satthuno. ",
  "bv9:23.1": "Sundarī ca sumanā ca, ",
  "bv9:23.2": "ahesuṁ aggasāvikā; ",
  "bv9:23.3": "Bodhi tassa bhagavato, ",
  "bv9:23.4": "ajjunoti pavuccati. ",
  "bv9:24.1": "Nandivaḍḍho sirivaḍḍho, ",
  "bv9:24.2": "ahesuṁ aggupaṭṭhakā; ",
  "bv9:24.3": "Uppalā ceva padumā ca, ",
  "bv9:24.4": "ahesuṁ aggupaṭṭhikā. ",
  "bv9:25.1": "Aṭṭhapaṇṇāsaratanaṁ, ",
  "bv9:25.2": "accuggato mahāmuni; ",
  "bv9:25.3": "Pabhā niddhāvatī tassa, ",
  "bv9:25.4": "sataraṁsīva uggato. ",
  "bv9:26.1": "Vassasatasahassāni, ",
  "bv9:26.2": "āyu vijjati tāvade; ",
  "bv9:26.3": "Tāvatā tiṭṭhamāno so, ",
  "bv9:26.4": "tāresi janataṁ bahuṁ. ",
  "bv9:27.1": "Supupphitaṁ pāvacanaṁ, ",
  "bv9:27.2": "arahantehi tādihi; ",
  "bv9:27.3": "Vītarāgehi vimalehi, ",
  "bv9:27.4": "sobhittha jinasāsanaṁ. ",
  "bv9:28.1": "So ca satthā amitayaso, ",
  "bv9:28.2": "Yugāni tāni atuliyāni; ",
  "bv9:28.3": "Sabbaṁ tamantarahitaṁ, ",
  "bv9:28.4": "Nanu rittā sabbasaṅkhārā. ",
  "bv9:29.1": "Anomadassī jino satthā, ",
  "bv9:29.2": "Dhammārāmamhi nibbuto; ",
  "bv9:29.3": "Tatthevassa jinathūpo, ",
  "bv9:29.4": "Ubbedho pañcavīsatī”ti. ",
  "bv9:30.1": "Anomadassissa bhagavato vaṁso sattamo. "
}