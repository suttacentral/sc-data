{
  "bv1:0.1": "Buddhavaṁsa",
  "bv1:0.2": "1. Ratanacaṅkamanakaṇḍa",
  "bv1:1.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
  "bv1:2.1": "Brahmā ca lokādhipatī sahampatī,",
  "bv1:2.2": "Katañjalī anadhivaraṁ ayācatha;",
  "bv1:2.3": "“Santīdha sattāpparajakkhajātikā,",
  "bv1:2.4": "Desehi dhammaṁ anukampimaṁ pajaṁ”.",
  "bv1:3.1": "Sampannavijjācaraṇassa tādino,",
  "bv1:3.2": "Jutindharassantimadehadhārino;",
  "bv1:3.3": "Tathāgatassappaṭipuggalassa,",
  "bv1:3.4": "Uppajji kāruññatā sabbasatte.",
  "bv1:4.1": "“Na hete jānanti sadevamānusā,",
  "bv1:4.2": "Buddho ayaṁ kīdisako naruttamo;",
  "bv1:4.3": "Iddhibalaṁ paññābalañca kīdisaṁ,",
  "bv1:4.4": "Buddhabalaṁ lokahitassa kīdisaṁ.",
  "bv1:5.1": "Na hete jānanti sadevamānusā,",
  "bv1:5.2": "Buddho ayaṁ edisako naruttamo;",
  "bv1:5.3": "Iddhibalaṁ paññābalañca edisaṁ,",
  "bv1:5.4": "Buddhabalaṁ lokahitassa edisaṁ.",
  "bv1:6.1": "Handāhaṁ dassayissāmi,",
  "bv1:6.2": "buddhabalamanuttaraṁ;",
  "bv1:6.3": "Caṅkamaṁ māpayissāmi,",
  "bv1:6.4": "nabhe ratanamaṇḍitaṁ”.",
  "bv1:7.1": "Bhummā mahārājikā tāvatiṁsā,",
  "bv1:7.2": "Yāmā ca devā tusitā ca nimmitā;",
  "bv1:7.3": "Paranimmitā yepi ca brahmakāyikā,",
  "bv1:7.4": "Ānanditā vipulamakaṁsu ghosaṁ.",
  "bv1:8.1": "Obhāsitā ca pathavī sadevakā,",
  "bv1:8.2": "Puthū ca lokantarikā asaṁvutā;",
  "bv1:8.3": "Tamo ca tibbo vihato tadā ahu,",
  "bv1:8.4": "Disvāna accherakaṁ pāṭihīraṁ.",
  "bv1:9.1": "Sadevagandhabbamanussarakkhase,",
  "bv1:9.2": "Ābhā uḷārā vipulā ajāyatha;",
  "bv1:9.3": "Imasmiṁ loke parasmiñcobhayasmiṁ,",
  "bv1:9.4": "Adho ca uddhaṁ tiriyañca vitthataṁ.",
  "bv1:10.1": "Sattuttamo anadhivaro vināyako,",
  "bv1:10.2": "Satthā ahū devamanussapūjito;",
  "bv1:10.3": "Mahānubhāvo satapuññalakkhaṇo,",
  "bv1:10.4": "Dassesi accherakaṁ pāṭihīraṁ.",
  "bv1:11.1": "So yācito devavarena cakkhumā,",
  "bv1:11.2": "Atthaṁ samekkhitvā tadā naruttamo;",
  "bv1:11.3": "Caṅkamaṁ māpayi lokanāyako,",
  "bv1:11.4": "Suniṭṭhitaṁ sabbaratananimmitaṁ.",
  "bv1:12.1": "Iddhī ca ādesanānusāsanī,",
  "bv1:12.2": "Tipāṭihīre bhagavā vasī ahu;",
  "bv1:12.3": "Caṅkamaṁ māpayi lokanāyako,",
  "bv1:12.4": "Suniṭṭhitaṁ sabbaratananimmitaṁ.",
  "bv1:13.1": "Dasasahassīlokadhātuyā,",
  "bv1:13.2": "Sinerupabbatuttame;",
  "bv1:13.3": "Thambheva dassesi paṭipāṭiyā,",
  "bv1:13.4": "Caṅkame ratanāmaye.",
  "bv1:14.1": "Dasasahassī atikkamma,",
  "bv1:14.2": "caṅkamaṁ māpayī jino;",
  "bv1:14.3": "Sabbasoṇṇamayā passe,",
  "bv1:14.4": "caṅkame ratanāmaye.",
  "bv1:15.1": "Tulāsaṅghāṭānuvaggā,",
  "bv1:15.2": "sovaṇṇaphalakatthatā;",
  "bv1:15.3": "Vedikā sabbasovaṇṇā,",
  "bv1:15.4": "dubhato passesu nimmitā.",
  "bv1:16.1": "Maṇimuttāvālikākiṇṇā,",
  "bv1:16.2": "nimmito ratanāmayo;",
  "bv1:16.3": "Obhāseti disā sabbā,",
  "bv1:16.4": "sataraṁsīva uggato.",
  "bv1:17.1": "Tasmiṁ caṅkamane dhīro,",
  "bv1:17.2": "dvattiṁsavaralakkhaṇo;",
  "bv1:17.3": "Virocamāno sambuddho,",
  "bv1:17.4": "caṅkame caṅkamī jino.",
  "bv1:18.1": "Dibbaṁ mandāravaṁ pupphaṁ,",
  "bv1:18.2": "padumaṁ pārichattakaṁ;",
  "bv1:18.3": "Caṅkamane okiranti,",
  "bv1:18.4": "sabbe devā samāgatā.",
  "bv1:19.1": "Passanti taṁ devasaṅghā,",
  "bv1:19.2": "dasasahassī pamoditā;",
  "bv1:19.3": "Namassamānā nipatanti,",
  "bv1:19.4": "tuṭṭhahaṭṭhā pamoditā.",
  "bv1:20.1": "Tāvatiṁsā ca yāmā ca,",
  "bv1:20.2": "tusitā cāpi devatā;",
  "bv1:20.3": "Nimmānaratino devā,",
  "bv1:20.4": "ye devā vasavattino;",
  "bv1:20.5": "Udaggacittā sumanā,",
  "bv1:20.6": "passanti lokanāyakaṁ.",
  "bv1:21.1": "Sadevagandhabbamanussarakkhasā,",
  "bv1:21.2": "Nāgā supaṇṇā atha vāpi kinnarā;",
  "bv1:21.3": "Passanti taṁ lokahitānukampakaṁ,",
  "bv1:21.4": "Nabheva accuggatacandamaṇḍalaṁ.",
  "bv1:22.1": "Ābhassarā subhakiṇhā,",
  "bv1:22.2": "Vehapphalā akaniṭṭhā ca devatā;",
  "bv1:22.3": "Susuddhasukkavatthavasanā,",
  "bv1:22.4": "Tiṭṭhanti pañjalīkatā.",
  "bv1:23.1": "Muñcanti pupphaṁ pana pañcavaṇṇikaṁ,",
  "bv1:23.2": "Mandāravaṁ candanacuṇṇamissitaṁ;",
  "bv1:23.3": "Bhamenti celāni ca ambare tadā,",
  "bv1:23.4": "“Aho jino lokahitānukampako.",
  "bv1:24.1": "Tuvaṁ satthā ca ketū ca,",
  "bv1:24.2": "dhajo yūpo ca pāṇinaṁ;",
  "bv1:24.3": "Parāyaṇo patiṭṭhā ca,",
  "bv1:24.4": "dīpo ca dvipaduttamo”.",
  "bv1:25.1": "Dasasahassīlokadhātuyā,",
  "bv1:25.2": "Devatāyo mahiddhikā;",
  "bv1:25.3": "Parivāretvā namassanti,",
  "bv1:25.4": "Tuṭṭhahaṭṭhā pamoditā.",
  "bv1:26.1": "Devatā devakaññā ca,",
  "bv1:26.2": "pasannā tuṭṭhamānasā;",
  "bv1:26.3": "Pañcavaṇṇikapupphehi,",
  "bv1:26.4": "pūjayanti narāsabhaṁ.",
  "bv1:27.1": "Passanti taṁ devasaṅghā,",
  "bv1:27.2": "pasannā tuṭṭhamānasā;",
  "bv1:27.3": "Pañcavaṇṇikapupphehi,",
  "bv1:27.4": "pūjayanti narāsabhaṁ.",
  "bv1:28.1": "“Aho acchariyaṁ loke,",
  "bv1:28.2": "abbhutaṁ lomahaṁsanaṁ;",
  "bv1:28.3": "Na medisaṁ bhūtapubbaṁ,",
  "bv1:28.4": "accheraṁ lomahaṁsanaṁ”.",
  "bv1:29.1": "Sakasakamhi bhavane,",
  "bv1:29.2": "nisīditvāna devatā;",
  "bv1:29.3": "Hasanti tā mahāhasitaṁ,",
  "bv1:29.4": "disvānaccherakaṁ nabhe.",
  "bv1:30.1": "Ākāsaṭṭhā ca bhūmaṭṭhā,",
  "bv1:30.2": "tiṇapanthanivāsino;",
  "bv1:30.3": "Katañjalī namassanti,",
  "bv1:30.4": "tuṭṭhahaṭṭhā pamoditā.",
  "bv1:31.1": "Yepi dīghāyukā nāgā,",
  "bv1:31.2": "puññavanto mahiddhikā;",
  "bv1:31.3": "Pamoditā namassanti,",
  "bv1:31.4": "pūjayanti naruttamaṁ.",
  "bv1:32.1": "Saṅgītiyo pavattenti,",
  "bv1:32.2": "ambare anilañjase;",
  "bv1:32.3": "Cammanaddhāni vādenti,",
  "bv1:32.4": "disvānaccherakaṁ nabhe.",
  "bv1:33.1": "Saṅkhā ca paṇavā ceva,",
  "bv1:33.2": "athopi ḍiṇḍimā bahū;",
  "bv1:33.3": "Antalikkhasmiṁ vajjanti,",
  "bv1:33.4": "disvānaccherakaṁ nabhe.",
  "bv1:34.1": "“Abbhuto vata no ajja,",
  "bv1:34.2": "uppajji lomahaṁsano;",
  "bv1:34.3": "Dhuvamatthasiddhiṁ labhāma,",
  "bv1:34.4": "khaṇo no paṭipādito”.",
  "bv1:35.1": "Buddhoti tesaṁ sutvāna,",
  "bv1:35.2": "pīti uppajji tāvade;",
  "bv1:35.3": "Buddho buddhoti kathayantā,",
  "bv1:35.4": "tiṭṭhanti pañjalīkatā.",
  "bv1:36.1": "Hiṅkārā sādhukārā ca,",
  "bv1:36.2": "ukkuṭṭhi sampahaṁsanaṁ;",
  "bv1:36.3": "Pajā ca vividhā gagane,",
  "bv1:36.4": "vattenti pañjalīkatā.",
  "bv1:37.1": "Gāyanti seḷenti ca vādayanti ca,",
  "bv1:37.2": "Bhujāni pothenti ca naccayanti ca;",
  "bv1:37.3": "Muñcanti pupphaṁ pana pañcavaṇṇikaṁ,",
  "bv1:37.4": "Mandāravaṁ candanacuṇṇamissitaṁ.",
  "bv1:38.1": "“Yathā tuyhaṁ mahāvīra,",
  "bv1:38.2": "pādesu cakkalakkhaṇaṁ;",
  "bv1:38.3": "Dhajavajirapaṭākā,",
  "bv1:38.4": "vaḍḍhamānaṅkusācitaṁ.",
  "bv1:39.1": "Rūpe sīle samādhimhi,",
  "bv1:39.2": "paññāya ca asādiso;",
  "bv1:39.3": "Vimuttiyā asamasamo,",
  "bv1:39.4": "dhammacakkappavattane.",
  "bv1:40.1": "Dasanāgabalaṁ kāye,",
  "bv1:40.2": "tuyhaṁ pākatikaṁ balaṁ;",
  "bv1:40.3": "Iddhibalena asamo,",
  "bv1:40.4": "dhammacakkappavattane.",
  "bv1:41.1": "Evaṁ sabbaguṇūpetaṁ,",
  "bv1:41.2": "sabbaṅgasamupāgataṁ;",
  "bv1:41.3": "Mahāmuniṁ kāruṇikaṁ,",
  "bv1:41.4": "lokanāthaṁ namassatha.",
  "bv1:42.1": "Abhivādanaṁ thomanañca,",
  "bv1:42.2": "vandanañca pasaṁsanaṁ;",
  "bv1:42.3": "Namassanañca pūjañca,",
  "bv1:42.4": "sabbaṁ arahasī tuvaṁ.",
  "bv1:43.1": "Ye keci loke vandaneyyā,",
  "bv1:43.2": "vandanaṁ arahanti ye;",
  "bv1:43.3": "Sabbaseṭṭho mahāvīra,",
  "bv1:43.4": "sadiso te na vijjati.",
  "bv1:44.1": "Sāriputto mahāpañño,",
  "bv1:44.2": "samādhijjhānakovido;",
  "bv1:44.3": "Gijjhakūṭe ṭhitoyeva,",
  "bv1:44.4": "passati lokanāyakaṁ.",
  "bv1:45.1": "Suphullaṁ sālarājaṁva,",
  "bv1:45.2": "candaṁva gagane yathā;",
  "bv1:45.3": "Majjhanhikeva sūriyaṁ,",
  "bv1:45.4": "olokesi narāsabhaṁ.",
  "bv1:46.1": "Jalantaṁ dīparukkhaṁva,",
  "bv1:46.2": "Taruṇasūriyaṁva uggataṁ;",
  "bv1:46.3": "Byāmappabhānurañjitaṁ,",
  "bv1:46.4": "Dhīraṁ passati lokanāyakaṁ.",
  "bv1:47.1": "Pañcannaṁ bhikkhusatānaṁ,",
  "bv1:47.2": "katakiccāna tādinaṁ;",
  "bv1:47.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv1:47.4": "khaṇena sannipātayi.",
  "bv1:48.1": "Lokappasādanaṁ nāma,",
  "bv1:48.2": "pāṭihīraṁ nidassayi;",
  "bv1:48.3": "Amhepi tattha gantvāna,",
  "bv1:48.4": "vandissāma mayaṁ jinaṁ.",
  "bv1:49.1": "Etha sabbe gamissāma,",
  "bv1:49.2": "pucchissāma mayaṁ jinaṁ;",
  "bv1:49.3": "Kaṅkhaṁ vinodayissāma,",
  "bv1:49.4": "passitvā lokanāyakaṁ”.",
  "bv1:50.1": "Sādhūti te paṭissutvā,",
  "bv1:50.2": "nipakā saṁvutindriyā;",
  "bv1:50.3": "Pattacīvaramādāya,",
  "bv1:50.4": "taramānā upāgamuṁ.",
  "bv1:51.1": "Khīṇāsavehi vimalehi,",
  "bv1:51.2": "dantehi uttame dame;",
  "bv1:51.3": "Sāriputto mahāpañño,",
  "bv1:51.4": "iddhiyā upasaṅkami.",
  "bv1:52.1": "Tehi bhikkhūhi parivuto,",
  "bv1:52.2": "sāriputto mahāgaṇī;",
  "bv1:52.3": "Laḷanto devova gagane,",
  "bv1:52.4": "iddhiyā upasaṅkami.",
  "bv1:53.1": "Ukkāsitañca khipitaṁ,",
  "bv1:53.2": "ajjhupekkhiya subbatā;",
  "bv1:53.3": "Sagāravā sappatissā,",
  "bv1:53.4": "sambuddhaṁ upasaṅkamuṁ.",
  "bv1:54.1": "Upasaṅkamitvā passanti,",
  "bv1:54.2": "sayambhuṁ lokanāyakaṁ;",
  "bv1:54.3": "Nabhe accuggataṁ dhīraṁ,",
  "bv1:54.4": "candaṁva gagane yathā.",
  "bv1:55.1": "Jalantaṁ dīparukkhaṁva,",
  "bv1:55.2": "vijjuṁva gagane yathā;",
  "bv1:55.3": "Majjhanhikeva sūriyaṁ,",
  "bv1:55.4": "passanti lokanāyakaṁ.",
  "bv1:56.1": "Pañcabhikkhusatā sabbe,",
  "bv1:56.2": "passanti lokanāyakaṁ;",
  "bv1:56.3": "Rahadamiva vippasannaṁ,",
  "bv1:56.4": "suphullaṁ padumaṁ yathā.",
  "bv1:57.1": "Añjaliṁ paggahetvāna,",
  "bv1:57.2": "tuṭṭhahaṭṭhā pamoditā;",
  "bv1:57.3": "Namassamānā nipatanti,",
  "bv1:57.4": "satthuno cakkalakkhaṇe.",
  "bv1:58.1": "Sāriputto mahāpañño,",
  "bv1:58.2": "koraṇḍasamasādiso;",
  "bv1:58.3": "Samādhijjhānakusalo,",
  "bv1:58.4": "vandate lokanāyakaṁ.",
  "bv1:59.1": "Gajjitā kālameghova,",
  "bv1:59.2": "nīluppalasamasādiso;",
  "bv1:59.3": "Iddhibalena asamo,",
  "bv1:59.4": "moggallāno mahiddhiko.",
  "bv1:60.1": "Mahākassapopi ca thero,",
  "bv1:60.2": "uttattakanakasannibho;",
  "bv1:60.3": "Dhutaguṇe agganikkhitto,",
  "bv1:60.4": "thomito satthuvaṇṇito.",
  "bv1:61.1": "Dibbacakkhūnaṁ yo aggo,",
  "bv1:61.2": "anuruddho mahāgaṇī;",
  "bv1:61.3": "Ñātiseṭṭho bhagavato,",
  "bv1:61.4": "avidūreva tiṭṭhati.",
  "bv1:62.1": "Āpattianāpattiyā,",
  "bv1:62.2": "satekicchāya kovido;",
  "bv1:62.3": "Vinaye agganikkhitto,",
  "bv1:62.4": "upāli satthuvaṇṇito.",
  "bv1:63.1": "Sukhumanipuṇatthapaṭividdho,",
  "bv1:63.2": "Kathikānaṁ pavaro gaṇī;",
  "bv1:63.3": "Isi mantāniyā putto,",
  "bv1:63.4": "Puṇṇo nāmāti vissuto.",
  "bv1:64.1": "Etesaṁ cittamaññāya,",
  "bv1:64.2": "opammakusalo muni;",
  "bv1:64.3": "Kaṅkhacchedo mahāvīro,",
  "bv1:64.4": "kathesi attano guṇaṁ.",
  "bv1:65.1": "“Cattāro te asaṅkheyyā,",
  "bv1:65.2": "koṭi yesaṁ na nāyati;",
  "bv1:65.3": "Sattakāyo ca ākāso,",
  "bv1:65.4": "cakkavāḷā canantakā;",
  "bv1:65.5": "Buddhañāṇaṁ appameyyaṁ,",
  "bv1:65.6": "na sakkā ete vijānituṁ.",
  "bv1:66.1": "Kimetaṁ acchariyaṁ loke,",
  "bv1:66.2": "yaṁ me iddhivikubbanaṁ;",
  "bv1:66.3": "Aññe bahū acchariyā,",
  "bv1:66.4": "abbhutā lomahaṁsanā.",
  "bv1:67.1": "Yadāhaṁ tusite kāye,",
  "bv1:67.2": "santusito nāmahaṁ tadā;",
  "bv1:67.3": "Dasasahassī samāgamma,",
  "bv1:67.4": "yācanti pañjalī mamaṁ.",
  "bv1:68.1": "‘Kālo kho te mahāvīra,",
  "bv1:68.2": "uppajja mātukucchiyaṁ;",
  "bv1:68.3": "Sadevakaṁ tārayanto,",
  "bv1:68.4": "bujjhassu amataṁ padaṁ’.",
  "bv1:69.1": "Tusitā kāyā cavitvāna,",
  "bv1:69.2": "yadā okkami kucchiyaṁ;",
  "bv1:69.3": "Dasasahassīlokadhātu,",
  "bv1:69.4": "kampittha dharaṇī tadā.",
  "bv1:70.1": "Yadāhaṁ mātukucchito,",
  "bv1:70.2": "sampajānova nikkhamiṁ;",
  "bv1:70.3": "Sādhukāraṁ pavattenti,",
  "bv1:70.4": "dasasahassī pakampatha.",
  "bv1:71.1": "Okkantiṁ me samo natthi,",
  "bv1:71.2": "jātito abhinikkhame;",
  "bv1:71.3": "Sambodhiyaṁ ahaṁ seṭṭho,",
  "bv1:71.4": "dhammacakkappavattane.",
  "bv1:72.1": "Aho acchariyaṁ loke,",
  "bv1:72.2": "buddhānaṁ guṇamahantatā;",
  "bv1:72.3": "Dasasahassīlokadhātu,",
  "bv1:72.4": "chappakāraṁ pakampatha;",
  "bv1:72.5": "Obhāso ca mahā āsi,",
  "bv1:72.6": "accheraṁ lomahaṁsanaṁ”.",
  "bv1:73.1": "Bhagavā tamhi samaye,",
  "bv1:73.2": "lokajeṭṭho narāsabho;",
  "bv1:73.3": "Sadevakaṁ dassayanto,",
  "bv1:73.4": "iddhiyā caṅkamī jino.",
  "bv1:74.1": "Caṅkame caṅkamantova,",
  "bv1:74.2": "kathesi lokanāyako;",
  "bv1:74.3": "Antarā na nivatteti,",
  "bv1:74.4": "catuhatthe caṅkame yathā.",
  "bv1:75.1": "Sāriputto mahāpañño,",
  "bv1:75.2": "samādhijjhānakovido;",
  "bv1:75.3": "Paññāya pāramippatto,",
  "bv1:75.4": "pucchati lokanāyakaṁ.",
  "bv1:76.1": "“Kīdiso te mahāvīra,",
  "bv1:76.2": "abhinīhāro naruttama;",
  "bv1:76.3": "Kamhi kāle tayā dhīra,",
  "bv1:76.4": "patthitā bodhimuttamā.",
  "bv1:77.1": "Dānaṁ sīlañca nekkhammaṁ,",
  "bv1:77.2": "paññāvīriyañca kīdisaṁ;",
  "bv1:77.3": "Khantisaccamadhiṭṭhānaṁ,",
  "bv1:77.4": "mettupekkhā ca kīdisā.",
  "bv1:78.1": "Dasa pāramī tayā dhīra,",
  "bv1:78.2": "kīdisī lokanāyaka;",
  "bv1:78.3": "Kathaṁ upapāramī puṇṇā,",
  "bv1:78.4": "paramatthapāramī kathaṁ”.",
  "bv1:79.1": "Tassa puṭṭho viyākāsi,",
  "bv1:79.2": "karavīkamadhuragiro;",
  "bv1:79.3": "Nibbāpayanto hadayaṁ,",
  "bv1:79.4": "hāsayanto sadevakaṁ.",
  "bv1:80.1": "Atītabuddhānaṁ jinānaṁ desitaṁ,",
  "bv1:80.2": "Nikīlitaṁ buddhaparamparāgataṁ;",
  "bv1:80.3": "Pubbenivāsānugatāya buddhiyā,",
  "bv1:80.4": "Pakāsayī lokahitaṁ sadevake.",
  "bv1:81.1": "“Pītipāmojjajananaṁ,",
  "bv1:81.2": "sokasallavinodanaṁ;",
  "bv1:81.3": "Sabbasampattipaṭilābhaṁ,",
  "bv1:81.4": "cittīkatvā suṇātha me.",
  "bv1:82.1": "Madanimmadanaṁ sokanudaṁ,",
  "bv1:82.2": "Saṁsāraparimocanaṁ;",
  "bv1:82.3": "Sabbadukkhakkhayaṁ maggaṁ,",
  "bv1:82.4": "Sakkaccaṁ paṭipajjathā”ti.",
  "bv1:83.1": "Ratanacaṅkamanakaṇḍo niṭṭhito."
}