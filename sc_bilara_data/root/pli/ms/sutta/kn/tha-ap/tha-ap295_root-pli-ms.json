{
  "tha-ap295:0.1": "Therāpadāna",
  "tha-ap295:0.2": "Citakapūjakavagga",
  "tha-ap295:0.3": "3. Chattadāyakattheraapadāna",
  "tha-ap295:1.1": "“Putto mama pabbajito,",
  "tha-ap295:1.2": "kāsāyavasano tadā;",
  "tha-ap295:1.3": "So ca buddhattaṁ sampatto,",
  "tha-ap295:1.4": "nibbuto lokapūjito.",
  "tha-ap295:2.1": "Vicinanto sakaṁ puttaṁ,",
  "tha-ap295:2.2": "agamaṁ pacchato ahaṁ;",
  "tha-ap295:2.3": "Nibbutassa mahantassa,",
  "tha-ap295:2.4": "citakaṁ agamāsahaṁ.",
  "tha-ap295:3.1": "Paggayha añjaliṁ tattha,",
  "tha-ap295:3.2": "vanditvā citakaṁ ahaṁ;",
  "tha-ap295:3.3": "Setacchattañca paggayha,",
  "tha-ap295:3.4": "āropesiṁ ahaṁ tadā.",
  "tha-ap295:4.1": "Catunnavutito kappe,",
  "tha-ap295:4.2": "yaṁ chattamabhiropayiṁ;",
  "tha-ap295:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap295:4.4": "chattadānassidaṁ phalaṁ.",
  "tha-ap295:5.1": "Pañcavīse ito kappe,",
  "tha-ap295:5.2": "satta āsuṁ janādhipā;",
  "tha-ap295:5.3": "Mahārahasanāmā te,",
  "tha-ap295:5.4": "cakkavattī mahabbalā.",
  "tha-ap295:6.1": "Paṭisambhidā catasso,",
  "tha-ap295:6.2": "…pe…",
  "tha-ap295:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap295:7.1": "Itthaṁ sudaṁ āyasmā chattadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap295:8.1": "Chattadāyakattherassāpadānaṁ tatiyaṁ."
}