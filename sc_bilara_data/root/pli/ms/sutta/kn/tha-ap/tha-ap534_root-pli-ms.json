{
  "tha-ap534:0.1": "Therāpadāna",
  "tha-ap534:0.2": "Kaccāyanavagga",
  "tha-ap534:0.3": "2. Vakkalittheraapadāna",
  "tha-ap534:1.1": "“Ito satasahassamhi,",
  "tha-ap534:1.2": "kappe uppajji nāyako;",
  "tha-ap534:1.3": "Anomanāmo amito,",
  "tha-ap534:1.4": "nāmena padumuttaro.",
  "tha-ap534:2.1": "Padumākāravadano,",
  "tha-ap534:2.2": "padumāmalasucchavī;",
  "tha-ap534:2.3": "Lokenānupalittova,",
  "tha-ap534:2.4": "toyena padumaṁ yathā.",
  "tha-ap534:3.1": "Vīro padumapattakkho,",
  "tha-ap534:3.2": "kanto ca padumaṁ yathā;",
  "tha-ap534:3.3": "Padumuttaragandhova,",
  "tha-ap534:3.4": "tasmā so padumuttaro.",
  "tha-ap534:4.1": "Lokajeṭṭho ca nimmāno,",
  "tha-ap534:4.2": "andhānaṁ nayanūpamo;",
  "tha-ap534:4.3": "Santaveso guṇanidhi,",
  "tha-ap534:4.4": "karuṇāmatisāgaro.",
  "tha-ap534:5.1": "Sa kadāci mahāvīro,",
  "tha-ap534:5.2": "brahmāsurasuraccito;",
  "tha-ap534:5.3": "Sadevamanujākiṇṇe,",
  "tha-ap534:5.4": "janamajjhe jinuttamo.",
  "tha-ap534:6.1": "Vadanena sugandhena,",
  "tha-ap534:6.2": "madhurena rutena ca;",
  "tha-ap534:6.3": "Rañjayaṁ parisaṁ sabbaṁ,",
  "tha-ap534:6.4": "santhavī sāvakaṁ sakaṁ.",
  "tha-ap534:7.1": "Saddhādhimutto sumati,",
  "tha-ap534:7.2": "mama dassanalālaso;",
  "tha-ap534:7.3": "Natthi etādiso añño,",
  "tha-ap534:7.4": "yathāyaṁ bhikkhu vakkali.",
  "tha-ap534:8.1": "Tadāhaṁ haṁsavatiyaṁ,",
  "tha-ap534:8.2": "nagare brāhmaṇatrajo;",
  "tha-ap534:8.3": "Hutvā sutvā ca taṁ vākyaṁ,",
  "tha-ap534:8.4": "taṁ ṭhānamabhirocayiṁ.",
  "tha-ap534:9.1": "Sasāvakaṁ taṁ vimalaṁ,",
  "tha-ap534:9.2": "nimantetvā tathāgataṁ;",
  "tha-ap534:9.3": "Sattāhaṁ bhojayitvāna,",
  "tha-ap534:9.4": "dussehacchādayiṁ tadā.",
  "tha-ap534:10.1": "Nipacca sirasā tassa,",
  "tha-ap534:10.2": "anantaguṇasāgare;",
  "tha-ap534:10.3": "Nimuggo pītisampuṇṇo,",
  "tha-ap534:10.4": "idaṁ vacanamabraviṁ.",
  "tha-ap534:11.1": "‘Yo so tayā santhavito,",
  "tha-ap534:11.2": "ito sattamake muni;",
  "tha-ap534:11.3": "Bhikkhu saddhāvataṁ aggo,",
  "tha-ap534:11.4": "tādiso homahaṁ mune’.",
  "tha-ap534:12.1": "Evaṁ vutte, mahāvīro,",
  "tha-ap534:12.2": "anāvaraṇadassano;",
  "tha-ap534:12.3": "Imaṁ vākyaṁ udīresi,",
  "tha-ap534:12.4": "parisāya mahāmuni.",
  "tha-ap534:13.1": "‘Passathetaṁ māṇavakaṁ,",
  "tha-ap534:13.2": "pītamaṭṭhanivāsanaṁ;",
  "tha-ap534:13.3": "Hemayaññopacitaṅgaṁ,",
  "tha-ap534:13.4": "jananettamanoharaṁ.",
  "tha-ap534:14.1": "Eso anāgataddhāne,",
  "tha-ap534:14.2": "gotamassa mahesino;",
  "tha-ap534:14.3": "Aggo saddhādhimuttānaṁ,",
  "tha-ap534:14.4": "sāvakoyaṁ bhavissati.",
  "tha-ap534:15.1": "Devabhūto manusso vā,",
  "tha-ap534:15.2": "sabbasantāpavajjito;",
  "tha-ap534:15.3": "Sabbabhogaparibyūḷho,",
  "tha-ap534:15.4": "sukhito saṁsarissati.",
  "tha-ap534:16.1": "Satasahassito kappe,",
  "tha-ap534:16.2": "okkākakulasambhavo;",
  "tha-ap534:16.3": "Gotamo nāma gottena,",
  "tha-ap534:16.4": "satthā loke bhavissati.",
  "tha-ap534:17.1": "Tassa dhammesu dāyādo,",
  "tha-ap534:17.2": "oraso dhammanimmito;",
  "tha-ap534:17.3": "Vakkali nāma nāmena,",
  "tha-ap534:17.4": "hessati satthu sāvako’.",
  "tha-ap534:18.1": "Tena kammavisesena,",
  "tha-ap534:18.2": "cetanāpaṇidhīhi ca;",
  "tha-ap534:18.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap534:18.4": "tāvatiṁsamagacchahaṁ.",
  "tha-ap534:19.1": "Sabbattha sukhito hutvā,",
  "tha-ap534:19.2": "saṁsaranto bhavābhave;",
  "tha-ap534:19.3": "Sāvatthiyaṁ pure jāto,",
  "tha-ap534:19.4": "kule aññatare ahaṁ.",
  "tha-ap534:20.1": "Nonītasukhumālaṁ maṁ,",
  "tha-ap534:20.2": "jātapallavakomalaṁ;",
  "tha-ap534:20.3": "Mandaṁ uttānasayanaṁ,",
  "tha-ap534:20.4": "pisācībhayatajjitā.",
  "tha-ap534:21.1": "Pādamūle mahesissa,",
  "tha-ap534:21.2": "sāyesuṁ dīnamānasā;",
  "tha-ap534:21.3": "‘Imaṁ dadāma te nātha,",
  "tha-ap534:21.4": "saraṇaṁ hohi nāyaka’.",
  "tha-ap534:22.1": "Tadā paṭiggahi so maṁ,",
  "tha-ap534:22.2": "bhītānaṁ saraṇo muni;",
  "tha-ap534:22.3": "Jālinā cakkaṅkitena,",
  "tha-ap534:22.4": "mudukomalapāṇinā.",
  "tha-ap534:23.1": "Tadā pabhuti tenāhaṁ,",
  "tha-ap534:23.2": "arakkheyyena rakkhito;",
  "tha-ap534:23.3": "Sabbaveravinimutto,",
  "tha-ap534:23.4": "sukhena parivuddhito.",
  "tha-ap534:24.1": "Sugatena vinā bhūto,",
  "tha-ap534:24.2": "ukkaṇṭhāmi muhuttakaṁ;",
  "tha-ap534:24.3": "Jātiyā sattavassohaṁ,",
  "tha-ap534:24.4": "pabbajiṁ anagāriyaṁ.",
  "tha-ap534:25.1": "Sabbapāramisambhūtaṁ,",
  "tha-ap534:25.2": "nīlakkhinayanaṁ varaṁ;",
  "tha-ap534:25.3": "Rūpaṁ sabbasubhākiṇṇaṁ,",
  "tha-ap534:25.4": "atitto viharāmahaṁ.",
  "tha-ap534:26.1": "Buddharūparatiṁ ñatvā,",
  "tha-ap534:26.2": "tadā ovadi maṁ jino;",
  "tha-ap534:26.3": "‘Alaṁ vakkali kiṁ rūpe,",
  "tha-ap534:26.4": "ramase bālanandite.",
  "tha-ap534:27.1": "Yo hi passati saddhammaṁ,",
  "tha-ap534:27.2": "so maṁ passati paṇḍito;",
  "tha-ap534:27.3": "Apassamāno saddhammaṁ,",
  "tha-ap534:27.4": "maṁ passampi na passati.",
  "tha-ap534:28.1": "Anantādīnavo kāyo,",
  "tha-ap534:28.2": "visarukkhasamūpamo;",
  "tha-ap534:28.3": "Āvāso sabbarogānaṁ,",
  "tha-ap534:28.4": "puñjo dukkhassa kevalo.",
  "tha-ap534:29.1": "Nibbindiya tato rūpe,",
  "tha-ap534:29.2": "khandhānaṁ udayabbayaṁ;",
  "tha-ap534:29.3": "Passa upakkilesānaṁ,",
  "tha-ap534:29.4": "sukhenantaṁ gamissasi’.",
  "tha-ap534:30.1": "Evaṁ tenānusiṭṭhohaṁ,",
  "tha-ap534:30.2": "nāyakena hitesinā;",
  "tha-ap534:30.3": "Gijjhakūṭaṁ samāruyha,",
  "tha-ap534:30.4": "jhāyāmi girikandare.",
  "tha-ap534:31.1": "Ṭhito pabbatapādamhi,",
  "tha-ap534:31.2": "assāsayi mahāmuni;",
  "tha-ap534:31.3": "Vakkalīti jino vācaṁ,",
  "tha-ap534:31.4": "taṁ sutvā mudito ahaṁ.",
  "tha-ap534:32.1": "Pakkhandiṁ selapabbhāre,",
  "tha-ap534:32.2": "anekasataporise;",
  "tha-ap534:32.3": "Tadā buddhānubhāvena,",
  "tha-ap534:32.4": "sukheneva mahiṁ gato.",
  "tha-ap534:33.1": "Punopi dhammaṁ deseti,",
  "tha-ap534:33.2": "khandhānaṁ udayabbayaṁ;",
  "tha-ap534:33.3": "Tamahaṁ dhammamaññāya,",
  "tha-ap534:33.4": "arahattamapāpuṇiṁ.",
  "tha-ap534:34.1": "Sumahāparisamajjhe,",
  "tha-ap534:34.2": "tadā maṁ caraṇantago;",
  "tha-ap534:34.3": "Aggaṁ saddhādhimuttānaṁ,",
  "tha-ap534:34.4": "paññapesi mahāmati.",
  "tha-ap534:35.1": "Satasahassito kappe,",
  "tha-ap534:35.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap534:35.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap534:35.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap534:36.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap534:36.2": "…pe…",
  "tha-ap534:36.3": "viharāmi anāsavo.",
  "tha-ap534:37.1": "Svāgataṁ vata me āsi,",
  "tha-ap534:37.2": "…pe…",
  "tha-ap534:37.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap534:38.1": "Paṭisambhidā catasso,",
  "tha-ap534:38.2": "…pe…",
  "tha-ap534:38.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap534:39.1": "Itthaṁ sudaṁ āyasmā vakkalitthero imā gāthāyo abhāsitthāti.",
  "tha-ap534:40.1": "Vakkalittherassāpadānaṁ dutiyaṁ."
}