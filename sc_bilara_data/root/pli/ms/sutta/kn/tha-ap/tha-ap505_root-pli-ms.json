{
  "tha-ap505:0.1": "Therāpadāna",
  "tha-ap505:0.2": "Kaṇikāravagga",
  "tha-ap505:0.3": "3 Kāsumāraphaliyattheraapadāna",
  "tha-ap505:1.1": "“Kaṇikāraṁva jotantaṁ,",
  "tha-ap505:1.2": "nisinnaṁ pabbatantare;",
  "tha-ap505:1.3": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap505:1.4": "lokajeṭṭhaṁ narāsabhaṁ.",
  "tha-ap505:2.1": "Pasannacitto sumano,",
  "tha-ap505:2.2": "sire katvāna añjaliṁ;",
  "tha-ap505:2.3": "Kāsumārikamādāya,",
  "tha-ap505:2.4": "buddhaseṭṭhassadāsahaṁ.",
  "tha-ap505:3.1": "Ekatiṁse ito kappe,",
  "tha-ap505:3.2": "yaṁ phalaṁ adadiṁ tadā;",
  "tha-ap505:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap505:3.4": "phaladānassidaṁ phalaṁ.",
  "tha-ap505:4.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap505:4.2": "…pe…",
  "tha-ap505:4.3": "viharāmi anāsavo.",
  "tha-ap505:5.1": "Svāgataṁ vata me āsi,",
  "tha-ap505:5.2": "…pe…",
  "tha-ap505:5.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap505:6.1": "Paṭisambhidā catasso,",
  "tha-ap505:6.2": "…pe…",
  "tha-ap505:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap505:7.1": "Itthaṁ sudaṁ āyasmā kāsumāraphaliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap505:8.1": "Kāsumāraphaliyattherassāpadānaṁ tatiyaṁ."
}