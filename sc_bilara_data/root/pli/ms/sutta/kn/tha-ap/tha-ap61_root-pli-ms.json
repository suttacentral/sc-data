{
  "tha-ap61:0.1": "Therāpadāna",
  "tha-ap61:0.2": "Bījanivagga",
  "tha-ap61:0.3": "9. Padumattheraapadāna",
  "tha-ap61:1.1": "“Catusaccaṁ pakāsento,",
  "tha-ap61:1.2": "varadhammappavattako;",
  "tha-ap61:1.3": "Vassate amataṁ vuṭṭhiṁ,",
  "tha-ap61:1.4": "nibbāpento mahājanaṁ.",
  "tha-ap61:2.1": "Sadhajaṁ padumaṁ gayha,",
  "tha-ap61:2.2": "aḍḍhakose ṭhito ahaṁ;",
  "tha-ap61:2.3": "Padumuttaramunissa,",
  "tha-ap61:2.4": "pahaṭṭho ukkhipimambare.",
  "tha-ap61:3.1": "Āgacchante ca padume,",
  "tha-ap61:3.2": "abbhuto āsi tāvade;",
  "tha-ap61:3.3": "Mama saṅkappamaññāya,",
  "tha-ap61:3.4": "paggaṇhi vadataṁ varo.",
  "tha-ap61:4.1": "Karaseṭṭhena paggayha,",
  "tha-ap61:4.2": "jalajaṁ pupphamuttamaṁ;",
  "tha-ap61:4.3": "Bhikkhusaṅghe ṭhito satthā,",
  "tha-ap61:4.4": "imā gāthā abhāsatha.",
  "tha-ap61:5.1": "‘Yenidaṁ padumaṁ khittaṁ,",
  "tha-ap61:5.2": "sabbaññumhi vināyake;",
  "tha-ap61:5.3": "Tamahaṁ kittayissāmi,",
  "tha-ap61:5.4": "suṇātha mama bhāsato.",
  "tha-ap61:6.1": "Tiṁsakappāni devindo,",
  "tha-ap61:6.2": "devarajjaṁ karissati;",
  "tha-ap61:6.3": "Pathabyā rajjaṁ sattasataṁ,",
  "tha-ap61:6.4": "vasudhaṁ āvasissati.",
  "tha-ap61:7.1": "Tattha pattaṁ gaṇetvāna,",
  "tha-ap61:7.2": "cakkavattī bhavissati;",
  "tha-ap61:7.3": "Ākāsato pupphavuṭṭhi,",
  "tha-ap61:7.4": "abhivassissatī tadā.",
  "tha-ap61:8.1": "Kappasatasahassamhi,",
  "tha-ap61:8.2": "okkākakulasambhavo;",
  "tha-ap61:8.3": "Gotamo nāma gottena,",
  "tha-ap61:8.4": "satthā loke bhavissati.",
  "tha-ap61:9.1": "Tassa dhammesu dāyādo,",
  "tha-ap61:9.2": "oraso dhammanimmito;",
  "tha-ap61:9.3": "Sabbāsave pariññāya,",
  "tha-ap61:9.4": "nibbāyissatināsavo’.",
  "tha-ap61:10.1": "Nikkhamitvāna kucchimhā,",
  "tha-ap61:10.2": "sampajāno patissato;",
  "tha-ap61:10.3": "Jātiyā pañcavassohaṁ,",
  "tha-ap61:10.4": "arahattaṁ apāpuṇiṁ.",
  "tha-ap61:11.1": "Paṭisambhidā catasso,",
  "tha-ap61:11.2": "…pe…",
  "tha-ap61:11.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap61:12.1": "Itthaṁ sudaṁ āyasmā padumo thero imā gāthāyo abhāsitthāti.",
  "tha-ap61:13.1": "Padumattherassāpadānaṁ navamaṁ."
}