{
  "tha-ap113:0.1": "Therāpadāna",
  "tha-ap113:0.2": "Mahāparivāravagga",
  "tha-ap113:0.3": "1 Mahāparivārakattheraapadāna",
  "tha-ap113:1.1": "“Vipassī nāma bhagavā,",
  "tha-ap113:1.2": "lokajeṭṭho narāsabho;",
  "tha-ap113:1.3": "Aṭṭhasaṭṭhisahassehi,",
  "tha-ap113:1.4": "pāvisi bandhumaṁ tadā.",
  "tha-ap113:2.1": "Nagarā abhinikkhamma,",
  "tha-ap113:2.2": "agamaṁ dīpacetiyaṁ;",
  "tha-ap113:2.3": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap113:2.4": "āhutīnaṁ paṭiggahaṁ.",
  "tha-ap113:3.1": "Cullāsītisahassāni,",
  "tha-ap113:3.2": "yakkhā mayhaṁ upantike;",
  "tha-ap113:3.3": "Upaṭṭhahanti sakkaccaṁ,",
  "tha-ap113:3.4": "indaṁva tidasā gaṇā.",
  "tha-ap113:4.1": "Bhavanā abhinikkhamma,",
  "tha-ap113:4.2": "dussaṁ paggayhahaṁ tadā;",
  "tha-ap113:4.3": "Sirasā abhivādesiṁ,",
  "tha-ap113:4.4": "tañcādāsiṁ mahesino.",
  "tha-ap113:5.1": "Aho buddhā aho dhammā,",
  "tha-ap113:5.2": "aho no satthu sampadā;",
  "tha-ap113:5.3": "Buddhassa ānubhāvena,",
  "tha-ap113:5.4": "vasudhāyaṁ pakampatha.",
  "tha-ap113:6.1": "Tañca acchariyaṁ disvā,",
  "tha-ap113:6.2": "abbhutaṁ lomahaṁsanaṁ;",
  "tha-ap113:6.3": "Buddhe cittaṁ pasādemi,",
  "tha-ap113:6.4": "dvipadindamhi tādine.",
  "tha-ap113:7.1": "Sohaṁ cittaṁ pasādetvā,",
  "tha-ap113:7.2": "dussaṁ datvāna satthuno;",
  "tha-ap113:7.3": "Saraṇañca upāgacchiṁ,",
  "tha-ap113:7.4": "sāmacco saparijjano.",
  "tha-ap113:8.1": "Ekanavutito kappe,",
  "tha-ap113:8.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap113:8.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap113:8.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap113:9.1": "Ito pannarase kappe,",
  "tha-ap113:9.2": "soḷasāsuṁ suvāhanā;",
  "tha-ap113:9.3": "Sattaratanasampannā,",
  "tha-ap113:9.4": "cakkavattī mahabbalā.",
  "tha-ap113:10.1": "Paṭisambhidā catasso,",
  "tha-ap113:10.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap113:10.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap113:10.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap113:11.1": "Itthaṁ sudaṁ āyasmā mahāparivārako thero imā gāthāyo abhāsitthāti.",
  "tha-ap113:12.1": "Mahāparivārakattherassāpadānaṁ paṭhamaṁ."
}