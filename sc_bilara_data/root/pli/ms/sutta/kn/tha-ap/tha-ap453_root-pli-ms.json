{
  "tha-ap453:0.1": "Therāpadāna",
  "tha-ap453:0.2": "Jagatidāyakavagga",
  "tha-ap453:0.3": "1. Jagatidāyakattheraapadāna",
  "tha-ap453:1.1": "“Dhammadassissa munino,",
  "tha-ap453:1.2": "bodhiyā pādaputtame;",
  "tha-ap453:1.3": "Pasannacitto sumano,",
  "tha-ap453:1.4": "jagatiṁ kārayiṁ ahaṁ.",
  "tha-ap453:2.1": "Darito pabbatato vā,",
  "tha-ap453:2.2": "rukkhato patito ahaṁ;",
  "tha-ap453:2.3": "Cuto patiṭṭhaṁ vindāmi,",
  "tha-ap453:2.4": "jagatiyā idaṁ phalaṁ.",
  "tha-ap453:3.1": "Na me corā vihesanti,",
  "tha-ap453:3.2": "nātimaññanti khattiyā;",
  "tha-ap453:3.3": "Sabbāmittetikkamāmi,",
  "tha-ap453:3.4": "jagatiyā idaṁ phalaṁ.",
  "tha-ap453:4.1": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap453:4.2": "devattaṁ atha mānusaṁ;",
  "tha-ap453:4.3": "Sabbattha pūjito homi,",
  "tha-ap453:4.4": "jagatiyā idaṁ phalaṁ.",
  "tha-ap453:5.1": "Aṭṭhārase kappasate,",
  "tha-ap453:5.2": "jagatiṁ kārayiṁ ahaṁ;",
  "tha-ap453:5.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap453:5.4": "jagatidānassidaṁ phalaṁ.",
  "tha-ap453:6.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap453:6.2": "bhavā sabbe samūhatā;",
  "tha-ap453:6.3": "Nāgova bandhanaṁ chetvā,",
  "tha-ap453:6.4": "viharāmi anāsavo.",
  "tha-ap453:7.1": "Svāgataṁ vata me āsi,",
  "tha-ap453:7.2": "mama buddhassa santike;",
  "tha-ap453:7.3": "Tisso vijjā anuppattā,",
  "tha-ap453:7.4": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap453:8.1": "Paṭisambhidā catasso,",
  "tha-ap453:8.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap453:8.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap453:8.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap453:9.1": "Itthaṁ sudaṁ āyasmā jagatidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap453:10.1": "Jagatidāyakattherassāpadānaṁ paṭhamaṁ."
}