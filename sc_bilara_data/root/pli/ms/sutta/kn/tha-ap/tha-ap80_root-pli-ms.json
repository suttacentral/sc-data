{
  "tha-ap80:0.1": "Therāpadāna",
  "tha-ap80:0.2": "Nāgasamālavagga",
  "tha-ap80:0.3": "8. Pāṭalipupphiyattheraapadāna",
  "tha-ap80:1.1": "“Suvaṇṇavaṇṇaṁ sambuddhaṁ,",
  "tha-ap80:1.2": "Gacchantaṁ antarāpaṇe;",
  "tha-ap80:1.3": "Kañcanagghiyasaṅkāsaṁ,",
  "tha-ap80:1.4": "Bāttiṁsavaralakkhaṇaṁ.",
  "tha-ap80:2.1": "Seṭṭhiputto tadā āsiṁ,",
  "tha-ap80:2.2": "sukhumālo sukhedhito;",
  "tha-ap80:2.3": "Ucchaṅge pāṭalipupphaṁ,",
  "tha-ap80:2.4": "katvāna abhisaṁhariṁ.",
  "tha-ap80:3.1": "Haṭṭho haṭṭhena cittena,",
  "tha-ap80:3.2": "pupphehi abhipūjayiṁ;",
  "tha-ap80:3.3": "Tissaṁ lokaviduṁ nāthaṁ,",
  "tha-ap80:3.4": "naradevaṁ namassahaṁ.",
  "tha-ap80:4.1": "Dvenavute ito kappe,",
  "tha-ap80:4.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap80:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap80:4.4": "pupphapūjāyidaṁ phalaṁ.",
  "tha-ap80:5.1": "Ito tesaṭṭhikappamhi,",
  "tha-ap80:5.2": "abhisammatanāmako;",
  "tha-ap80:5.3": "Sattaratanasampanno,",
  "tha-ap80:5.4": "cakkavattī mahabbalo.",
  "tha-ap80:6.1": "Paṭisambhidā catasso,",
  "tha-ap80:6.2": "…pe…",
  "tha-ap80:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap80:7.1": "Itthaṁ sudaṁ āyasmā pāṭalipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap80:8.1": "Pāṭalipupphiyattherassāpadānaṁ aṭṭhamaṁ."
}