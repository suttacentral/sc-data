{
  "tha-ap86:0.1": "Therāpadāna",
  "tha-ap86:0.2": "Timiravagga",
  "tha-ap86:0.3": "4. Adhopupphiyattheraapadāna",
  "tha-ap86:1.1": "“Abhibhū nāma so bhikkhu,",
  "tha-ap86:1.2": "sikhino aggasāvako;",
  "tha-ap86:1.3": "Mahānubhāvo tevijjo,",
  "tha-ap86:1.4": "himavantaṁ upāgami.",
  "tha-ap86:2.1": "Ahampi himavantamhi,",
  "tha-ap86:2.2": "ramaṇīyassame isi;",
  "tha-ap86:2.3": "Vasāmi appamaññāsu,",
  "tha-ap86:2.4": "iddhīsu ca tadā vasī.",
  "tha-ap86:3.1": "Pakkhijāto viyākāse,",
  "tha-ap86:3.2": "pabbataṁ adhivatthayiṁ;",
  "tha-ap86:3.3": "Adhopupphaṁ gahetvāna,",
  "tha-ap86:3.4": "āgacchiṁ pabbataṁ ahaṁ.",
  "tha-ap86:4.1": "Satta pupphāni gaṇhitvā,",
  "tha-ap86:4.2": "matthake okiriṁ ahaṁ;",
  "tha-ap86:4.3": "Ālokite ca vīrena,",
  "tha-ap86:4.4": "pakkāmiṁ pācināmukho.",
  "tha-ap86:5.1": "Āvāsaṁ abhisambhosiṁ,",
  "tha-ap86:5.2": "patvāna assamaṁ ahaṁ;",
  "tha-ap86:5.3": "Khāribhāraṁ gahetvāna,",
  "tha-ap86:5.4": "pāyāsiṁ pabbatantaraṁ.",
  "tha-ap86:6.1": "Ajagaro maṁ pīḷesi,",
  "tha-ap86:6.2": "ghorarūpo mahabbalo;",
  "tha-ap86:6.3": "Pubbakammaṁ saritvāna,",
  "tha-ap86:6.4": "tattha kālaṅkato ahaṁ.",
  "tha-ap86:7.1": "Ekattiṁse ito kappe,",
  "tha-ap86:7.2": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap86:7.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap86:7.4": "pupphapūjāyidaṁ phalaṁ.",
  "tha-ap86:8.1": "Paṭisambhidā catasso,",
  "tha-ap86:8.2": "…pe…",
  "tha-ap86:8.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap86:9.1": "Itthaṁ sudaṁ āyasmā adhopupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap86:10.1": "Adhopupphiyattherassāpadānaṁ catutthaṁ."
}