{
  "tha-ap502:0.1": "Therāpadāna ",
  "tha-ap502:0.2": "Kiṅkaṇipupphavagga ",
  "tha-ap502:0.3": "10. Piyālaphaladāyakattheraapadāna ",
  "tha-ap502:1.1": "“Migaluddo pure āsiṁ, ",
  "tha-ap502:1.2": "vipine vicaraṁ tadā; ",
  "tha-ap502:1.3": "Addasaṁ virajaṁ buddhaṁ, ",
  "tha-ap502:1.4": "sabbadhammāna pāraguṁ. ",
  "tha-ap502:2.1": "Piyālaphalamādāya, ",
  "tha-ap502:2.2": "buddhaseṭṭhassadāsahaṁ; ",
  "tha-ap502:2.3": "Puññakkhettassa vīrassa, ",
  "tha-ap502:2.4": "pasanno sehi pāṇibhi. ",
  "tha-ap502:3.1": "Ekatiṁse ito kappe, ",
  "tha-ap502:3.2": "yaṁ phalaṁ adadiṁ tadā; ",
  "tha-ap502:3.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap502:3.4": "phaladānassidaṁ phalaṁ. ",
  "tha-ap502:4.1": "Kilesā jhāpitā mayhaṁ, ",
  "tha-ap502:4.2": "…pe… ",
  "tha-ap502:4.3": "viharāmi anāsavo. ",
  "tha-ap502:5.1": "Svāgataṁ vata me āsi, ",
  "tha-ap502:5.2": "…pe… ",
  "tha-ap502:5.3": "kataṁ buddhassa sāsanaṁ. ",
  "tha-ap502:6.1": "Paṭisambhidā catasso, ",
  "tha-ap502:6.2": "…pe… ",
  "tha-ap502:6.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap502:7.1": "Itthaṁ sudaṁ āyasmā piyālaphaladāyako thero imā gāthāyo abhāsitthāti. ",
  "tha-ap502:8.1": "Piyālaphaladāyakattherassāpadānaṁ dasamaṁ. ",
  "tha-ap502:8.2": "Kiṅkaṇipupphavaggo paññāsamo. ",
  "tha-ap502:9.1": "Tassuddānaṁ ",
  "tha-ap502:10.1": "Kiṅkaṇī paṁsukūlañca, ",
  "tha-ap502:10.2": "koraṇḍamatha kiṁsukaṁ; ",
  "tha-ap502:10.3": "Upaḍḍhadussī ghatado, ",
  "tha-ap502:10.4": "udakaṁ thūpakārako. ",
  "tha-ap502:11.1": "Naḷakārī ca navamo, ",
  "tha-ap502:11.2": "piyālaphaladāyako; ",
  "tha-ap502:11.3": "Satamekañca gāthānaṁ, ",
  "tha-ap502:11.4": "navakañca taduttari. ",
  "tha-ap502:12.1": "Atha vagguddānaṁ ",
  "tha-ap502:13.1": "Metteyyavaggo bhaddāli, ",
  "tha-ap502:13.2": "sakiṁsammajjakopi ca; ",
  "tha-ap502:13.3": "Ekavihārī vibhītakī, ",
  "tha-ap502:13.4": "jagatī sālapupphiyo. ",
  "tha-ap502:14.1": "Naḷāgāraṁ paṁsukūlaṁ, ",
  "tha-ap502:14.2": "kiṅkaṇipupphiyo tathā; ",
  "tha-ap502:14.3": "Asīti dve ca gāthāyo, ",
  "tha-ap502:14.4": "catuddasasatāni ca. ",
  "tha-ap502:15.1": "Metteyyavaggadasakaṁ. ",
  "tha-ap502:16.1": "Pañcamasatakaṁ samattaṁ. "
}