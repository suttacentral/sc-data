{
  "tha-ap499:0.1": "Therāpadāna",
  "tha-ap499:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap499:0.3": "7. Udakadāyakattheraapadāna",
  "tha-ap499:1.1": "“Padumuttarabuddhassa,",
  "tha-ap499:1.2": "bhikkhusaṅghe anuttare;",
  "tha-ap499:1.3": "Pasannacitto sumano,",
  "tha-ap499:1.4": "pānīghaṭamapūrayiṁ.",
  "tha-ap499:2.1": "Pabbatagge dumagge vā,",
  "tha-ap499:2.2": "ākāse vātha bhūmiyaṁ;",
  "tha-ap499:2.3": "Yadā pānīyamicchāmi,",
  "tha-ap499:2.4": "khippaṁ nibbattate mama.",
  "tha-ap499:3.1": "Satasahassito kappe,",
  "tha-ap499:3.2": "yaṁ dānamadadiṁ tadā;",
  "tha-ap499:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap499:3.4": "dakadānassidaṁ phalaṁ.",
  "tha-ap499:4.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap499:4.2": "…pe…",
  "tha-ap499:4.3": "viharāmi anāsavo.",
  "tha-ap499:5.1": "Svāgataṁ vata me āsi,",
  "tha-ap499:5.2": "…pe…",
  "tha-ap499:5.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap499:6.1": "Paṭisambhidā catasso,",
  "tha-ap499:6.2": "…pe…",
  "tha-ap499:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap499:7.1": "Itthaṁ sudaṁ āyasmā udakadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap499:8.1": "Udakadāyakattherassāpadānaṁ sattamaṁ."
}