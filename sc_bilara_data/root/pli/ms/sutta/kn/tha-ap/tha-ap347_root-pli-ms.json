{
  "tha-ap347:0.1": "Therāpadāna",
  "tha-ap347:0.2": "Ekapadumiyavagga",
  "tha-ap347:0.3": "5. Naḷāgārikattheraapadāna",
  "tha-ap347:1.1": "“Himavantassāvidūre,",
  "tha-ap347:1.2": "hārito nāma pabbato;",
  "tha-ap347:1.3": "Sayambhū nārado nāma,",
  "tha-ap347:1.4": "rukkhamūle vasī tadā.",
  "tha-ap347:2.1": "Naḷāgāraṁ karitvāna,",
  "tha-ap347:2.2": "tiṇena chādayiṁ ahaṁ;",
  "tha-ap347:2.3": "Caṅkamaṁ sodhayitvāna,",
  "tha-ap347:2.4": "sayambhussa adāsahaṁ.",
  "tha-ap347:3.1": "Catuddasasu kappesu,",
  "tha-ap347:3.2": "devaloke ramiṁ ahaṁ;",
  "tha-ap347:3.3": "Catusattatikkhattuñca,",
  "tha-ap347:3.4": "devarajjaṁ akārayiṁ.",
  "tha-ap347:4.1": "Catusattatikkhattuñca,",
  "tha-ap347:4.2": "cakkavattī ahosahaṁ;",
  "tha-ap347:4.3": "Padesarajjaṁ vipulaṁ,",
  "tha-ap347:4.4": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap347:5.1": "Ubbiddhaṁ bhavanaṁ mayhaṁ,",
  "tha-ap347:5.2": "Indalaṭṭhīva uggataṁ;",
  "tha-ap347:5.3": "Sahassathambhaṁ atulaṁ,",
  "tha-ap347:5.4": "Vimānaṁ sapabhassaraṁ.",
  "tha-ap347:6.1": "Dve sampattī anubhotvā,",
  "tha-ap347:6.2": "sukkamūlena codito;",
  "tha-ap347:6.3": "Gotamassa bhagavato,",
  "tha-ap347:6.4": "sāsane pabbajiṁ ahaṁ.",
  "tha-ap347:7.1": "Padhānapahitattomhi,",
  "tha-ap347:7.2": "upasanto nirūpadhi;",
  "tha-ap347:7.3": "Nāgova bandhanaṁ chetvā,",
  "tha-ap347:7.4": "viharāmi anāsavo.",
  "tha-ap347:8.1": "Paṭisambhidā catasso,",
  "tha-ap347:8.2": "…pe…",
  "tha-ap347:8.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap347:9.1": "Itthaṁ sudaṁ āyasmā naḷāgāriko thero imā gāthāyo abhāsitthāti.",
  "tha-ap347:10.1": "Naḷāgārikattherassāpadānaṁ pañcamaṁ."
}