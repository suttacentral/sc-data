{
  "tha-ap320:0.1": "Therāpadāna",
  "tha-ap320:0.2": "Ārakkhadāyakavagga",
  "tha-ap320:0.3": "8. Tiraṁsiyattheraapadāna",
  "tha-ap320:1.1": "“Kesariṁ abhijātaṁva,",
  "tha-ap320:1.2": "aggikkhandhaṁva pabbate;",
  "tha-ap320:1.3": "Obhāsentaṁ disā sabbā,",
  "tha-ap320:1.4": "siddhatthaṁ pabbatantare.",
  "tha-ap320:2.1": "Sūriyassa ca ālokaṁ,",
  "tha-ap320:2.2": "candālokaṁ tatheva ca;",
  "tha-ap320:2.3": "Buddhālokañca disvāna,",
  "tha-ap320:2.4": "vitti me udapajjatha.",
  "tha-ap320:3.1": "Tayo āloke disvāna,",
  "tha-ap320:3.2": "sambuddhaṁ sāvakuttamaṁ;",
  "tha-ap320:3.3": "Ekaṁsaṁ ajinaṁ katvā,",
  "tha-ap320:3.4": "santhaviṁ lokanāyakaṁ.",
  "tha-ap320:4.1": "Tayo hi ālokakarā,",
  "tha-ap320:4.2": "loke lokatamonudā;",
  "tha-ap320:4.3": "Cando ca sūriyo cāpi,",
  "tha-ap320:4.4": "buddho ca lokanāyako.",
  "tha-ap320:5.1": "Opammaṁ upadassetvā,",
  "tha-ap320:5.2": "kittito me mahāmuni;",
  "tha-ap320:5.3": "Buddhassa vaṇṇaṁ kittetvā,",
  "tha-ap320:5.4": "kappaṁ saggamhi modahaṁ.",
  "tha-ap320:6.1": "Catunnavutito kappe,",
  "tha-ap320:6.2": "yaṁ buddhamabhikittayiṁ;",
  "tha-ap320:6.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap320:6.4": "kittanāya idaṁ phalaṁ.",
  "tha-ap320:7.1": "Ekasaṭṭhimhito kappe,",
  "tha-ap320:7.2": "eko ñāṇadharo ahu;",
  "tha-ap320:7.3": "Sattaratanasampanno,",
  "tha-ap320:7.4": "cakkavattī mahabbalo.",
  "tha-ap320:8.1": "Paṭisambhidā catasso,",
  "tha-ap320:8.2": "…pe…",
  "tha-ap320:8.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap320:9.1": "Itthaṁ sudaṁ āyasmā tiraṁsiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap320:10.1": "Tiraṁsiyattherassāpadānaṁ aṭṭhamaṁ."
}