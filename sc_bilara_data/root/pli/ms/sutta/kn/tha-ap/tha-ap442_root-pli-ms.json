{
  "tha-ap442:0.1": "Therāpadāna ",
  "tha-ap442:0.2": "Ekavihārivagga ",
  "tha-ap442:0.3": "10 Ambaphaliyattheraapadāna ",
  "tha-ap442:1.1": "“Padumuttarabuddhassa, ",
  "tha-ap442:1.2": "lokajeṭṭhassa tādino; ",
  "tha-ap442:1.3": "Piṇḍāya vicarantassa, ",
  "tha-ap442:1.4": "dhārato uttamaṁ yasaṁ. ",
  "tha-ap442:2.1": "Aggaphalaṁ gahetvāna, ",
  "tha-ap442:2.2": "vippasannena cetasā; ",
  "tha-ap442:2.3": "Dakkhiṇeyyassa vīrassa, ",
  "tha-ap442:2.4": "adāsiṁ satthuno ahaṁ. ",
  "tha-ap442:3.1": "Tena kammena dvipadinda, ",
  "tha-ap442:3.2": "lokajeṭṭha narāsabha; ",
  "tha-ap442:3.3": "Pattomhi acalaṁ ṭhānaṁ, ",
  "tha-ap442:3.4": "hitvā jayaparājayaṁ. ",
  "tha-ap442:4.1": "Satasahassito kappe, ",
  "tha-ap442:4.2": "yaṁ dānamadadiṁ tadā; ",
  "tha-ap442:4.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap442:4.4": "aggadānassidaṁ phalaṁ. ",
  "tha-ap442:5.1": "Kilesā jhāpitā mayhaṁ, ",
  "tha-ap442:5.2": "…pe… ",
  "tha-ap442:5.3": "viharāmi anāsavo. ",
  "tha-ap442:6.1": "Svāgataṁ vata me āsi, ",
  "tha-ap442:6.2": "…pe… ",
  "tha-ap442:6.3": "kataṁ buddhassa sāsanaṁ. ",
  "tha-ap442:7.1": "Paṭisambhidā catasso, ",
  "tha-ap442:7.2": "…pe… ",
  "tha-ap442:7.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap442:8.1": "Itthaṁ sudaṁ āyasmā ambaphaliyo thero imā gāthāyo abhāsitthāti. ",
  "tha-ap442:9.1": "Ambaphaliyattherassāpadānaṁ dasamaṁ. ",
  "tha-ap442:10.1": "Ekavihārivaggo catucattālīsamo. ",
  "tha-ap442:11.1": "Tassuddānaṁ ",
  "tha-ap442:12.1": "Thero ekavihārī ca, ",
  "tha-ap442:12.2": "saṅkhiyo pāṭihīrako; ",
  "tha-ap442:12.3": "Thaviko ucchukhaṇḍī ca, ",
  "tha-ap442:12.4": "kaḷambaambāṭakado. ",
  "tha-ap442:13.1": "Harītakambapiṇḍī ca, ",
  "tha-ap442:13.2": "ambado dasamo yati; ",
  "tha-ap442:13.3": "Chaḷasīti ca gāthāyo, ",
  "tha-ap442:13.4": "gaṇitāyo vibhāvibhi. "
}