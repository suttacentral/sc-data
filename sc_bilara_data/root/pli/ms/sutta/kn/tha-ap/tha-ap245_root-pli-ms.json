{
  "tha-ap245:0.1": "Therāpadāna",
  "tha-ap245:0.2": "Tuvaradāyakavagga",
  "tha-ap245:0.3": "3. Naḷinakesariyattheraapadāna",
  "tha-ap245:1.1": "“Jātassarassa vemajjhe,",
  "tha-ap245:1.2": "vasāmi jalakukkuṭo;",
  "tha-ap245:1.3": "Addasāhaṁ devadevaṁ,",
  "tha-ap245:1.4": "gacchantaṁ anilañjase.",
  "tha-ap245:2.1": "Tuṇḍena kesariṁ gayha,",
  "tha-ap245:2.2": "vippasannena cetasā;",
  "tha-ap245:2.3": "Buddhassa abhiropesiṁ,",
  "tha-ap245:2.4": "tissassa lokabandhuno.",
  "tha-ap245:3.1": "Dvenavute ito kappe,",
  "tha-ap245:3.2": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap245:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap245:3.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap245:4.1": "Tesattatimhi kappamhi,",
  "tha-ap245:4.2": "satta kesaranāmakā;",
  "tha-ap245:4.3": "Sattaratanasampannā,",
  "tha-ap245:4.4": "cakkavattī mahabbalā.",
  "tha-ap245:5.1": "Paṭisambhidā catasso,",
  "tha-ap245:5.2": "…pe…",
  "tha-ap245:5.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap245:6.1": "Itthaṁ sudaṁ āyasmā naḷinakesariyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap245:7.1": "Naḷinakesariyattherassāpadānaṁ tatiyaṁ."
}