{
  "tha-ap497:0.1": "Therāpadāna",
  "tha-ap497:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap497:0.3": "5. Upaḍḍhadussadāyakattheraapadāna",
  "tha-ap497:1.1": "“Padumuttarabhagavato,",
  "tha-ap497:1.2": "sujāto nāma sāvako;",
  "tha-ap497:1.3": "Paṁsukūlaṁ gavesanto,",
  "tha-ap497:1.4": "saṅkāre carate tadā.",
  "tha-ap497:2.1": "Nagare haṁsavatiyā,",
  "tha-ap497:2.2": "paresaṁ bhatako ahaṁ;",
  "tha-ap497:2.3": "Upaḍḍhadussaṁ datvāna,",
  "tha-ap497:2.4": "sirasā abhivādayiṁ.",
  "tha-ap497:3.1": "Tena kammena sukatena,",
  "tha-ap497:3.2": "cetanāpaṇidhīhi ca;",
  "tha-ap497:3.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap497:3.4": "tāvatiṁsamagacchahaṁ.",
  "tha-ap497:4.1": "Tettiṁsakkhattuṁ devindo,",
  "tha-ap497:4.2": "devarajjamakārayiṁ;",
  "tha-ap497:4.3": "Sattasattatikkhattuñca,",
  "tha-ap497:4.4": "cakkavattī ahosahaṁ.",
  "tha-ap497:5.1": "Padesarajjaṁ vipulaṁ,",
  "tha-ap497:5.2": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap497:5.3": "Upaḍḍhadussadānena,",
  "tha-ap497:5.4": "modāmi akutobhayo.",
  "tha-ap497:6.1": "Icchamāno cahaṁ ajja,",
  "tha-ap497:6.2": "sakānanaṁ sapabbataṁ;",
  "tha-ap497:6.3": "Khomadussehi chādeyyaṁ,",
  "tha-ap497:6.4": "aḍḍhadussassidaṁ phalaṁ.",
  "tha-ap497:7.1": "Satasahassito kappe,",
  "tha-ap497:7.2": "yaṁ dānamadadiṁ tadā;",
  "tha-ap497:7.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap497:7.4": "aḍḍhadussassidaṁ phalaṁ.",
  "tha-ap497:8.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap497:8.2": "…pe…",
  "tha-ap497:8.3": "viharāmi anāsavo.",
  "tha-ap497:9.1": "Svāgataṁ vata me āsi,",
  "tha-ap497:9.2": "…pe…",
  "tha-ap497:9.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap497:10.1": "Paṭisambhidā catasso,",
  "tha-ap497:10.2": "…pe…",
  "tha-ap497:10.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap497:11.1": "Itthaṁ sudaṁ āyasmā upaḍḍhadussadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap497:12.1": "Upaḍḍhadussadāyakattherassāpadānaṁ pañcamaṁ."
}