{
  "tha-ap203:0.1": "Therāpadāna",
  "tha-ap203:0.2": "Kaṇikārapupphiyavagga",
  "tha-ap203:0.3": "1. Kaṇikārapupphiyattheraapadāna",
  "tha-ap203:1.1": "“Kaṇikāraṁ pupphitaṁ disvā,",
  "tha-ap203:1.2": "ocinitvānahaṁ tadā;",
  "tha-ap203:1.3": "Tissassa abhiropesiṁ,",
  "tha-ap203:1.4": "oghatiṇṇassa tādino.",
  "tha-ap203:2.1": "Dvenavute ito kappe,",
  "tha-ap203:2.2": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap203:2.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap203:2.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap203:3.1": "Pañcattiṁse ito kappe,",
  "tha-ap203:3.2": "aruṇapāṇīti vissuto;",
  "tha-ap203:3.3": "Sattaratanasampanno,",
  "tha-ap203:3.4": "cakkavattī mahabbalo.",
  "tha-ap203:4.1": "Paṭisambhidā catasso,",
  "tha-ap203:4.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap203:4.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap203:4.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap203:5.1": "Itthaṁ sudaṁ āyasmā kaṇikārapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap203:6.1": "Kaṇikārapupphiyattherassāpadānaṁ paṭhamaṁ."
}