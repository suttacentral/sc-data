{
  "tha-ap223:0.1": "Therāpadāna",
  "tha-ap223:0.2": "Ālambaṇadāyakavagga",
  "tha-ap223:0.3": "1 Ālambaṇadāyakattheraapadāna",
  "tha-ap223:1.1": "“Atthadassissa bhagavato,",
  "tha-ap223:1.2": "lokajeṭṭhassa tādino;",
  "tha-ap223:1.3": "Ālambaṇaṁ mayā dinnaṁ,",
  "tha-ap223:1.4": "dvipadindassa tādino.",
  "tha-ap223:2.1": "Dharaṇiṁ paṭipajjāmi,",
  "tha-ap223:2.2": "vipulaṁ sāgarapparaṁ;",
  "tha-ap223:2.3": "Pāṇesu ca issariyaṁ,",
  "tha-ap223:2.4": "vattemi vasudhāya ca.",
  "tha-ap223:3.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap223:3.2": "bhavā sabbe samūhatā;",
  "tha-ap223:3.3": "Tisso vijjā anuppattā,",
  "tha-ap223:3.4": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap223:4.1": "Ito dvesaṭṭhikappamhi,",
  "tha-ap223:4.2": "tayo āsiṁsu khattiyā;",
  "tha-ap223:4.3": "Ekāpassitanāmā te,",
  "tha-ap223:4.4": "cakkavattī mahabbalā.",
  "tha-ap223:5.1": "Paṭisambhidā catasso,",
  "tha-ap223:5.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap223:5.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap223:5.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap223:6.1": "Itthaṁ sudaṁ āyasmā ālambaṇadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap223:7.1": "Ālambaṇadāyakattherassāpadānaṁ paṭhamaṁ."
}