{
  "tha-ap155:0.1": "Therāpadāna",
  "tha-ap155:0.2": "Bandhujīvakavagga",
  "tha-ap155:0.3": "3. Vīthisammajjakattheraapadāna",
  "tha-ap155:1.1": "“Udentaṁ sataraṁsiṁva,",
  "tha-ap155:1.2": "pītaraṁsiṁva bhāṇumaṁ;",
  "tha-ap155:1.3": "Pannarase yathā candaṁ,",
  "tha-ap155:1.4": "niyyantaṁ lokanāyakaṁ.",
  "tha-ap155:2.1": "Aṭṭhasaṭṭhisahassāni,",
  "tha-ap155:2.2": "sabbe khīṇāsavā ahuṁ;",
  "tha-ap155:2.3": "Parivāriṁsu sambuddhaṁ,",
  "tha-ap155:2.4": "dvipadindaṁ narāsabhaṁ.",
  "tha-ap155:3.1": "Sammajjitvāna taṁ vīthiṁ,",
  "tha-ap155:3.2": "niyyante lokanāyake;",
  "tha-ap155:3.3": "Ussāpesiṁ dhajaṁ tattha,",
  "tha-ap155:3.4": "vippasannena cetasā.",
  "tha-ap155:4.1": "Ekanavutito kappe,",
  "tha-ap155:4.2": "yaṁ dhajaṁ abhiropayiṁ;",
  "tha-ap155:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap155:4.4": "dhajadānassidaṁ phalaṁ.",
  "tha-ap155:5.1": "Ito catutthake kappe,",
  "tha-ap155:5.2": "rājāhosiṁ mahabbalo;",
  "tha-ap155:5.3": "Sabbākārena sampanno,",
  "tha-ap155:5.4": "sudhajo iti vissuto.",
  "tha-ap155:6.1": "Paṭisambhidā catasso,",
  "tha-ap155:6.2": "…pe…",
  "tha-ap155:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap155:7.1": "Itthaṁ sudaṁ āyasmā vīthisammajjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap155:8.1": "Vīthisammajjakattherassāpadānaṁ tatiyaṁ."
}