{
  "tha-ap474:0.1": "Therāpadāna",
  "tha-ap474:0.2": "Naḷamālivagga",
  "tha-ap474:0.3": "2. Maṇipūjakattheraapadāna",
  "tha-ap474:1.1": "“Padumuttaro nāma jino,",
  "tha-ap474:1.2": "sabbadhammāna pāragū;",
  "tha-ap474:1.3": "Vivekakāmo sambuddho,",
  "tha-ap474:1.4": "gacchate anilañjase.",
  "tha-ap474:2.1": "Avidūre himavantassa,",
  "tha-ap474:2.2": "mahājātassaro ahu;",
  "tha-ap474:2.3": "Tattha me bhavanaṁ āsi,",
  "tha-ap474:2.4": "puññakammena saṁyutaṁ.",
  "tha-ap474:3.1": "Bhavanā abhinikkhamma,",
  "tha-ap474:3.2": "addasaṁ lokanāyakaṁ;",
  "tha-ap474:3.3": "Indīvaraṁva jalitaṁ,",
  "tha-ap474:3.4": "ādittaṁva hutāsanaṁ.",
  "tha-ap474:4.1": "Vicinaṁ naddasaṁ pupphaṁ,",
  "tha-ap474:4.2": "pūjayissanti nāyakaṁ;",
  "tha-ap474:4.3": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap474:4.4": "avandiṁ satthuno ahaṁ.",
  "tha-ap474:5.1": "Mama sīse maṇiṁ gayha,",
  "tha-ap474:5.2": "pūjayiṁ lokanāyakaṁ;",
  "tha-ap474:5.3": "Imāya maṇipūjāya,",
  "tha-ap474:5.4": "vipāko hotu bhaddako.",
  "tha-ap474:6.1": "Padumuttaro lokavidū,",
  "tha-ap474:6.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap474:6.3": "Antalikkhe ṭhito satthā,",
  "tha-ap474:6.4": "imaṁ gāthaṁ abhāsatha.",
  "tha-ap474:7.1": "‘So te ijjhatu saṅkappo,",
  "tha-ap474:7.2": "labhassu vipulaṁ sukhaṁ;",
  "tha-ap474:7.3": "Imāya maṇipūjāya,",
  "tha-ap474:7.4": "anubhohi mahāyasaṁ’.",
  "tha-ap474:8.1": "Idaṁ vatvāna bhagavā,",
  "tha-ap474:8.2": "jalajuttamanāmako;",
  "tha-ap474:8.3": "Agamāsi buddhaseṭṭho,",
  "tha-ap474:8.4": "yattha cittaṁ paṇīhitaṁ.",
  "tha-ap474:9.1": "Saṭṭhikappāni devindo,",
  "tha-ap474:9.2": "devarajjamakārayiṁ;",
  "tha-ap474:9.3": "Anekasatakkhattuñca,",
  "tha-ap474:9.4": "cakkavattī ahosahaṁ.",
  "tha-ap474:10.1": "Pubbakammaṁ sarantassa,",
  "tha-ap474:10.2": "devabhūtassa me sato;",
  "tha-ap474:10.3": "Maṇi nibbattate mayhaṁ,",
  "tha-ap474:10.4": "ālokakaraṇo mamaṁ.",
  "tha-ap474:11.1": "Chaḷasītisahassāni,",
  "tha-ap474:11.2": "nāriyo me pariggahā;",
  "tha-ap474:11.3": "Vicittavatthābharaṇā,",
  "tha-ap474:11.4": "āmukkamaṇikuṇḍalā.",
  "tha-ap474:12.1": "Aḷārapamhā hasulā,",
  "tha-ap474:12.2": "susaññā tanumajjhimā;",
  "tha-ap474:12.3": "Parivārenti maṁ niccaṁ,",
  "tha-ap474:12.4": "maṇipūjāyidaṁ phalaṁ.",
  "tha-ap474:13.1": "Soṇṇamayā maṇimayā,",
  "tha-ap474:13.2": "lohitaṅgamayā tathā;",
  "tha-ap474:13.3": "Bhaṇḍā me sukatā honti,",
  "tha-ap474:13.4": "yadicchasi piḷandhanā.",
  "tha-ap474:14.1": "Kūṭāgārā gahārammā,",
  "tha-ap474:14.2": "sayanañca mahārahaṁ;",
  "tha-ap474:14.3": "Mama saṅkappamaññāya,",
  "tha-ap474:14.4": "nibbattanti yadicchakaṁ.",
  "tha-ap474:15.1": "Lābhā tesaṁ suladdhañca,",
  "tha-ap474:15.2": "ye labhanti upassutiṁ;",
  "tha-ap474:15.3": "Puññakkhettaṁ manussānaṁ,",
  "tha-ap474:15.4": "osadhaṁ sabbapāṇinaṁ.",
  "tha-ap474:16.1": "Mayhampi sukataṁ kammaṁ,",
  "tha-ap474:16.2": "yohaṁ adakkhi nāyakaṁ;",
  "tha-ap474:16.3": "Vinipātā pamuttomhi,",
  "tha-ap474:16.4": "pattomhi acalaṁ padaṁ.",
  "tha-ap474:17.1": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap474:17.2": "devattaṁ atha mānusaṁ;",
  "tha-ap474:17.3": "Divasañceva rattiñca,",
  "tha-ap474:17.4": "āloko hoti me sadā.",
  "tha-ap474:18.1": "Tāyeva maṇipūjāya,",
  "tha-ap474:18.2": "anubhotvāna sampadā;",
  "tha-ap474:18.3": "Ñāṇāloko mayā diṭṭho,",
  "tha-ap474:18.4": "pattomhi acalaṁ padaṁ.",
  "tha-ap474:19.1": "Satasahassito kappe,",
  "tha-ap474:19.2": "yaṁ maṇiṁ abhipūjayiṁ;",
  "tha-ap474:19.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap474:19.4": "maṇipūjāyidaṁ phalaṁ.",
  "tha-ap474:20.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap474:20.2": "…pe…",
  "tha-ap474:20.3": "viharāmi anāsavo.",
  "tha-ap474:21.1": "Svāgataṁ vata me āsi,",
  "tha-ap474:21.2": "…pe…",
  "tha-ap474:21.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap474:22.1": "Paṭisambhidā catasso,",
  "tha-ap474:22.2": "…pe…",
  "tha-ap474:22.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap474:23.1": "Itthaṁ sudaṁ āyasmā maṇipūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap474:24.1": "Maṇipūjakattherassāpadānaṁ dutiyaṁ."
}