{
  "tha-ap144:0.1": "Therāpadāna",
  "tha-ap144:0.2": "Chattavagga",
  "tha-ap144:0.3": "2. Thambhāropakattheraapadāna",
  "tha-ap144:1.1": "“Nibbute lokanāthamhi,",
  "tha-ap144:1.2": "dhammadassīnarāsabhe;",
  "tha-ap144:1.3": "Āropesiṁ dhajatthambhaṁ,",
  "tha-ap144:1.4": "buddhaseṭṭhassa cetiye.",
  "tha-ap144:2.1": "Nisseṇiṁ māpayitvāna,",
  "tha-ap144:2.2": "thūpaseṭṭhaṁ samāruhiṁ;",
  "tha-ap144:2.3": "Jātipupphaṁ gahetvāna,",
  "tha-ap144:2.4": "thūpamhi abhiropayiṁ.",
  "tha-ap144:3.1": "Aho buddhā aho dhammā,",
  "tha-ap144:3.2": "aho no satthu sampadā;",
  "tha-ap144:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap144:3.4": "thūpapūjāyidaṁ phalaṁ.",
  "tha-ap144:4.1": "Catunnavutito kappe,",
  "tha-ap144:4.2": "thūpasīkhasanāmakā;",
  "tha-ap144:4.3": "Soḷasāsiṁsu rājāno,",
  "tha-ap144:4.4": "cakkavattī mahabbalā.",
  "tha-ap144:5.1": "Paṭisambhidā catasso,",
  "tha-ap144:5.2": "…pe…",
  "tha-ap144:5.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap144:6.1": "Itthaṁ sudaṁ āyasmā thambhāropako thero imā gāthāyo abhāsitthāti.",
  "tha-ap144:7.1": "Thambhāropakattherassāpadānaṁ dutiyaṁ."
}