{
  "tha-ap280:0.1": "Therāpadāna",
  "tha-ap280:0.2": "Suvaṇṇabibbohanavagga",
  "tha-ap280:0.3": "8. Āluvadāyakattheraapadāna",
  "tha-ap280:1.1": "“Pabbate himavantamhi,",
  "tha-ap280:1.2": "mahāsindhu sudassanā;",
  "tha-ap280:1.3": "Tatthaddasaṁ vītarāgaṁ,",
  "tha-ap280:1.4": "suppabhāsaṁ sudassanaṁ.",
  "tha-ap280:2.1": "Paramopasame yuttaṁ,",
  "tha-ap280:2.2": "disvā vimhitamānaso;",
  "tha-ap280:2.3": "Āluvaṁ tassa pādāsiṁ,",
  "tha-ap280:2.4": "pasanno sehi pāṇibhi.",
  "tha-ap280:3.1": "Ekattiṁse ito kappe,",
  "tha-ap280:3.2": "yaṁ phalamadadiṁ tadā;",
  "tha-ap280:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap280:3.4": "āluvassa idaṁ phalaṁ.",
  "tha-ap280:4.1": "Paṭisambhidā catasso,",
  "tha-ap280:4.2": "…pe…",
  "tha-ap280:4.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap280:5.1": "Itthaṁ sudaṁ āyasmā āluvadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap280:6.1": "Āluvadāyakattherassāpadānaṁ aṭṭhamaṁ."
}