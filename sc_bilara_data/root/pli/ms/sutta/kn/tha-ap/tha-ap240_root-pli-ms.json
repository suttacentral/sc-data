{
  "tha-ap240:0.1": "Therāpadāna",
  "tha-ap240:0.2": "Udakāsanavagga",
  "tha-ap240:0.3": "8. Ambayāgadāyakattheraapadāna",
  "tha-ap240:1.1": "“Sake sippe apatthaddho,",
  "tha-ap240:1.2": "agamaṁ kānanaṁ ahaṁ;",
  "tha-ap240:1.3": "Sambuddhaṁ yantaṁ disvāna,",
  "tha-ap240:1.4": "ambayāgaṁ adāsahaṁ.",
  "tha-ap240:2.1": "Ekanavutito kappe,",
  "tha-ap240:2.2": "yaṁ dānamadadiṁ tadā;",
  "tha-ap240:2.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap240:2.4": "ambayāgassidaṁ phalaṁ.",
  "tha-ap240:3.1": "Paṭisambhidā catasso,",
  "tha-ap240:3.2": "…pe…",
  "tha-ap240:3.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap240:4.1": "Itthaṁ sudaṁ āyasmā ambayāgadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap240:5.1": "Ambayāgadāyakattherassāpadānaṁ aṭṭhamaṁ."
}