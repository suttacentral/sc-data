{
  "tha-ap399:0.1": "Therāpadāna",
  "tha-ap399:0.2": "Pilindavacchavagga",
  "tha-ap399:0.3": "7. Girimānandattheraapadāna",
  "tha-ap399:1.1": "“Bhariyā me kālaṅkatā,",
  "tha-ap399:1.2": "putto sīvathikaṁ gato;",
  "tha-ap399:1.3": "Mātā pitā matā bhātā,",
  "tha-ap399:1.4": "ekacitamhi ḍayhare.",
  "tha-ap399:2.1": "Tena sokena santatto,",
  "tha-ap399:2.2": "kiso paṇḍu ahosahaṁ;",
  "tha-ap399:2.3": "Cittakkhepo ca me āsi,",
  "tha-ap399:2.4": "tena sokena aṭṭito.",
  "tha-ap399:3.1": "Sokasallaparetohaṁ,",
  "tha-ap399:3.2": "vanantamupasaṅkamiṁ;",
  "tha-ap399:3.3": "Pavattaphalaṁ bhuñjitvā,",
  "tha-ap399:3.4": "rukkhamūle vasāmahaṁ.",
  "tha-ap399:4.1": "Sumedho nāma sambuddho,",
  "tha-ap399:4.2": "dukkhassantakaro jino;",
  "tha-ap399:4.3": "Mamuddharitukāmo so,",
  "tha-ap399:4.4": "āgañchi mama santikaṁ.",
  "tha-ap399:5.1": "Padasaddaṁ suṇitvāna,",
  "tha-ap399:5.2": "sumedhassa mahesino;",
  "tha-ap399:5.3": "Paggahetvānahaṁ sīsaṁ,",
  "tha-ap399:5.4": "ullokesiṁ mahāmuniṁ.",
  "tha-ap399:6.1": "Upāgate mahāvīre,",
  "tha-ap399:6.2": "pīti me udapajjatha;",
  "tha-ap399:6.3": "Tadāsimekaggamano,",
  "tha-ap399:6.4": "disvā taṁ lokanāyakaṁ.",
  "tha-ap399:7.1": "Satiṁ paṭilabhitvāna,",
  "tha-ap399:7.2": "paṇṇamuṭṭhimadāsahaṁ;",
  "tha-ap399:7.3": "Nisīdi bhagavā tattha,",
  "tha-ap399:7.4": "anukampāya cakkhumā.",
  "tha-ap399:8.1": "Nisajja tattha bhagavā,",
  "tha-ap399:8.2": "sumedho lokanāyako;",
  "tha-ap399:8.3": "Dhammaṁ me kathayī buddho,",
  "tha-ap399:8.4": "sokasallavinodanaṁ.",
  "tha-ap399:9.1": "‘Anavhitā tato āguṁ,",
  "tha-ap399:9.2": "ananuññātā ito gatā;",
  "tha-ap399:9.3": "Yathāgatā tathā gatā,",
  "tha-ap399:9.4": "tattha kā paridevanā.",
  "tha-ap399:10.1": "Yathāpi pathikā sattā,",
  "tha-ap399:10.2": "vassamānāya vuṭṭhiyā;",
  "tha-ap399:10.3": "Sabhaṇḍā upagacchanti,",
  "tha-ap399:10.4": "vassassāpatanāya te.",
  "tha-ap399:11.1": "Vasse ca te oramite,",
  "tha-ap399:11.2": "sampayanti yadicchakaṁ;",
  "tha-ap399:11.3": "Evaṁ mātā pitā tuyhaṁ,",
  "tha-ap399:11.4": "tattha kā paridevanā.",
  "tha-ap399:12.1": "Āgantukā pāhunakā,",
  "tha-ap399:12.2": "caliteritakampitā;",
  "tha-ap399:12.3": "Evaṁ mātā pitā tuyhaṁ,",
  "tha-ap399:12.4": "tattha kā paridevanā.",
  "tha-ap399:13.1": "Yathāpi urago jiṇṇaṁ,",
  "tha-ap399:13.2": "hitvā gacchati saṁ tacaṁ;",
  "tha-ap399:13.3": "Evaṁ mātā pitā tuyhaṁ,",
  "tha-ap399:13.4": "saṁ tanuṁ idha hīyare’.",
  "tha-ap399:14.1": "Buddhassa giramaññāya,",
  "tha-ap399:14.2": "sokasallaṁ vivajjayiṁ;",
  "tha-ap399:14.3": "Pāmojjaṁ janayitvāna,",
  "tha-ap399:14.4": "buddhaseṭṭhaṁ avandahaṁ.",
  "tha-ap399:15.1": "Vanditvāna mahānāgaṁ,",
  "tha-ap399:15.2": "Pūjayiṁ girimañjariṁ;",
  "tha-ap399:15.3": "Dibbagandhaṁ sampavantaṁ,",
  "tha-ap399:15.4": "Sumedhaṁ lokanāyakaṁ.",
  "tha-ap399:16.1": "Pūjayitvāna sambuddhaṁ,",
  "tha-ap399:16.2": "sire katvāna añjaliṁ;",
  "tha-ap399:16.3": "Anussaraṁ guṇaggāni,",
  "tha-ap399:16.4": "santhaviṁ lokanāyakaṁ.",
  "tha-ap399:17.1": "‘Nittiṇṇosi mahāvīra,",
  "tha-ap399:17.2": "sabbaññu lokanāyaka;",
  "tha-ap399:17.3": "Sabbe satte uddharasi,",
  "tha-ap399:17.4": "ñāṇena tvaṁ mahāmune.",
  "tha-ap399:18.1": "Vimatiṁ dveḷhakaṁ vāpi,",
  "tha-ap399:18.2": "sañchindasi mahāmune;",
  "tha-ap399:18.3": "Paṭipādesi me maggaṁ,",
  "tha-ap399:18.4": "tava ñāṇena cakkhuma.",
  "tha-ap399:19.1": "Arahā vasipattā ca,",
  "tha-ap399:19.2": "chaḷabhiññā mahiddhikā;",
  "tha-ap399:19.3": "Antalikkhacarā dhīrā,",
  "tha-ap399:19.4": "parivārenti tāvade.",
  "tha-ap399:20.1": "Paṭipannā ca sekhā ca,",
  "tha-ap399:20.2": "phalaṭṭhā santi sāvakā;",
  "tha-ap399:20.3": "Sūrodayeva padumā,",
  "tha-ap399:20.4": "pupphanti tava sāvakā.",
  "tha-ap399:21.1": "Mahāsamuddovakkhobho,",
  "tha-ap399:21.2": "atulopi duruttaro;",
  "tha-ap399:21.3": "Evaṁ ñāṇena sampanno,",
  "tha-ap399:21.4": "appameyyosi cakkhuma’.",
  "tha-ap399:22.1": "Vanditvāhaṁ lokajinaṁ,",
  "tha-ap399:22.2": "cakkhumantaṁ mahāyasaṁ;",
  "tha-ap399:22.3": "Puthu disā namassanto,",
  "tha-ap399:22.4": "paṭikuṭiko agañchahaṁ.",
  "tha-ap399:23.1": "Devalokā cavitvāna,",
  "tha-ap399:23.2": "sampajāno patissato;",
  "tha-ap399:23.3": "Okkamiṁ mātuyā kucchiṁ,",
  "tha-ap399:23.4": "sandhāvanto bhavābhave.",
  "tha-ap399:24.1": "Agārā abhinikkhamma,",
  "tha-ap399:24.2": "pabbajiṁ anagāriyaṁ;",
  "tha-ap399:24.3": "Ātāpī nipako jhāyī,",
  "tha-ap399:24.4": "paṭisallānagocaro.",
  "tha-ap399:25.1": "Padhānaṁ padahitvāna,",
  "tha-ap399:25.2": "tosayitvā mahāmuniṁ;",
  "tha-ap399:25.3": "Candovabbhaghanā mutto,",
  "tha-ap399:25.4": "vicarāmi ahaṁ sadā.",
  "tha-ap399:26.1": "Vivekamanuyuttomhi,",
  "tha-ap399:26.2": "upasanto nirūpadhi;",
  "tha-ap399:26.3": "Sabbāsave pariññāya,",
  "tha-ap399:26.4": "viharāmi anāsavo.",
  "tha-ap399:27.1": "Tiṁsakappasahassamhi,",
  "tha-ap399:27.2": "yaṁ buddhamabhipūjayiṁ;",
  "tha-ap399:27.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap399:27.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap399:28.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap399:28.2": "bhavā sabbe samūhatā;",
  "tha-ap399:28.3": "Sabbāsavā parikkhīṇā,",
  "tha-ap399:28.4": "natthi dāni punabbhavo.",
  "tha-ap399:29.1": "Svāgataṁ vata me āsi,",
  "tha-ap399:29.2": "…pe…",
  "tha-ap399:29.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap399:30.1": "Paṭisambhidā catasso,",
  "tha-ap399:30.2": "…pe…",
  "tha-ap399:30.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap399:31.1": "Itthaṁ sudaṁ āyasmā girimānando thero imā gāthāyo abhāsitthāti.",
  "tha-ap399:32.1": "Girimānandattherassāpadānaṁ sattamaṁ."
}