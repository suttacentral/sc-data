{
  "tha-ap418:0.1": "Therāpadāna",
  "tha-ap418:0.2": "Bhaddālivagga",
  "tha-ap418:0.3": "6. Ekadīpiyattheraapadāna",
  "tha-ap418:1.1": "“Parinibbute sugate,",
  "tha-ap418:1.2": "siddhatthe lokanāyake;",
  "tha-ap418:1.3": "Sadevamānusā sabbe,",
  "tha-ap418:1.4": "pūjenti dvipaduttamaṁ.",
  "tha-ap418:2.1": "Āropite ca citake,",
  "tha-ap418:2.2": "siddhatthe lokanāyake;",
  "tha-ap418:2.3": "Yathāsakena thāmena,",
  "tha-ap418:2.4": "citaṁ pūjenti satthuno.",
  "tha-ap418:3.1": "Avidūre citakassa,",
  "tha-ap418:3.2": "dīpaṁ ujjālayiṁ ahaṁ;",
  "tha-ap418:3.3": "Yāva udeti sūriyo,",
  "tha-ap418:3.4": "dīpaṁ me tāva ujjali.",
  "tha-ap418:4.1": "Tena kammena sukatena,",
  "tha-ap418:4.2": "cetanāpaṇidhīhi ca;",
  "tha-ap418:4.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap418:4.4": "tāvatiṁsamagacchahaṁ.",
  "tha-ap418:5.1": "Tattha me sukataṁ byamhaṁ,",
  "tha-ap418:5.2": "ekadīpīti ñāyati;",
  "tha-ap418:5.3": "Dīpasatasahassāni,",
  "tha-ap418:5.4": "byamhe pajjalare mama.",
  "tha-ap418:6.1": "Udayantova sūriyo,",
  "tha-ap418:6.2": "deho me jotate sadā;",
  "tha-ap418:6.3": "Sappabhāhi sarīrassa,",
  "tha-ap418:6.4": "āloko hoti me sadā.",
  "tha-ap418:7.1": "Tirokuṭṭaṁ tiroselaṁ,",
  "tha-ap418:7.2": "samatiggayha pabbataṁ;",
  "tha-ap418:7.3": "Samantā yojanasataṁ,",
  "tha-ap418:7.4": "passāmi cakkhunā ahaṁ.",
  "tha-ap418:8.1": "Sattasattatikkhattuñca,",
  "tha-ap418:8.2": "devaloke ramiṁ ahaṁ;",
  "tha-ap418:8.3": "Ekatiṁsatikkhattuñca,",
  "tha-ap418:8.4": "devarajjamakārayiṁ.",
  "tha-ap418:9.1": "Aṭṭhavīsatikkhattuñca,",
  "tha-ap418:9.2": "cakkavattī ahosahaṁ;",
  "tha-ap418:9.3": "Padesarajjaṁ vipulaṁ,",
  "tha-ap418:9.4": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap418:10.1": "Devalokā cavitvāna,",
  "tha-ap418:10.2": "nibbattiṁ mātukucchiyaṁ;",
  "tha-ap418:10.3": "Mātukucchigatassāpi,",
  "tha-ap418:10.4": "akkhi me na nimīlati.",
  "tha-ap418:11.1": "Jātiyā catuvassohaṁ,",
  "tha-ap418:11.2": "pabbajiṁ anagāriyaṁ;",
  "tha-ap418:11.3": "Aḍḍhamāse asampatte,",
  "tha-ap418:11.4": "arahattamapāpuṇiṁ.",
  "tha-ap418:12.1": "Dibbacakkhuṁ visodhesiṁ,",
  "tha-ap418:12.2": "bhavā sabbe samūhatā;",
  "tha-ap418:12.3": "Sabbe kilesā sañchinnā,",
  "tha-ap418:12.4": "ekadīpassidaṁ phalaṁ.",
  "tha-ap418:13.1": "Tirokuṭṭaṁ tiroselaṁ,",
  "tha-ap418:13.2": "pabbatañcāpi kevalaṁ;",
  "tha-ap418:13.3": "Samatikkamma passāmi,",
  "tha-ap418:13.4": "ekadīpassidaṁ phalaṁ.",
  "tha-ap418:14.1": "Visamā me samā honti,",
  "tha-ap418:14.2": "andhakāro na vijjati;",
  "tha-ap418:14.3": "Nāhaṁ passāmi timiraṁ,",
  "tha-ap418:14.4": "ekadīpassidaṁ phalaṁ.",
  "tha-ap418:15.1": "Catunnavutito kappe,",
  "tha-ap418:15.2": "yaṁ dīpamadadiṁ tadā;",
  "tha-ap418:15.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap418:15.4": "ekadīpassidaṁ phalaṁ.",
  "tha-ap418:16.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap418:16.2": "…pe…",
  "tha-ap418:16.3": "viharāmi anāsavo.",
  "tha-ap418:17.1": "Svāgataṁ vata me āsi,",
  "tha-ap418:17.2": "…pe…",
  "tha-ap418:17.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap418:18.1": "Paṭisambhidā catasso,",
  "tha-ap418:18.2": "…pe…",
  "tha-ap418:18.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap418:19.1": "Itthaṁ sudaṁ āyasmā ekadīpiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap418:20.1": "Ekadīpiyattherassāpadānaṁ chaṭṭhaṁ."
}