{
  "tha-ap516:0.1": "Therāpadāna",
  "tha-ap516:0.2": "Phaladāyakavagga",
  "tha-ap516:0.3": "4. Ketakapupphiyattheraapadāna",
  "tha-ap516:1.1": "“Vinatānadiyā tīre,",
  "tha-ap516:1.2": "vihāsi purisuttamo;",
  "tha-ap516:1.3": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap516:1.4": "ekaggaṁ susamāhitaṁ.",
  "tha-ap516:2.1": "Madhugandhassa pupphena,",
  "tha-ap516:2.2": "ketakassa ahaṁ tadā;",
  "tha-ap516:2.3": "Pasannacitto sumano,",
  "tha-ap516:2.4": "buddhaseṭṭhamapūjayiṁ.",
  "tha-ap516:3.1": "Ekanavutito kappe,",
  "tha-ap516:3.2": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap516:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap516:3.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap516:4.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap516:4.2": "…pe…",
  "tha-ap516:4.3": "viharāmi anāsavo.",
  "tha-ap516:5.1": "Svāgataṁ vata me āsi,",
  "tha-ap516:5.2": "…pe…",
  "tha-ap516:5.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap516:6.1": "Paṭisambhidā catasso,",
  "tha-ap516:6.2": "…pe…",
  "tha-ap516:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap516:7.1": "Itthaṁ sudaṁ āyasmā ketakapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap516:8.1": "Ketakapupphiyattherassāpadānaṁ catutthaṁ."
}