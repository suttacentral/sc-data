{
  "tha-ap407:0.1": "Therāpadāna",
  "tha-ap407:0.2": "Metteyyavagga",
  "tha-ap407:0.3": "5 Upasivattheraapadāna",
  "tha-ap407:1.1": "“Himavantassāvidūre,",
  "tha-ap407:1.2": "anomo nāma pabbato;",
  "tha-ap407:1.3": "Assamo sukato mayhaṁ,",
  "tha-ap407:1.4": "paṇṇasālā sumāpitā.",
  "tha-ap407:2.1": "Nadī ca sandatī tattha,",
  "tha-ap407:2.2": "supatitthā manoramā;",
  "tha-ap407:2.3": "Anūpatitthe jāyanti,",
  "tha-ap407:2.4": "padumuppalakā bahū.",
  "tha-ap407:3.1": "Pāṭhīnā pāvusā macchā,",
  "tha-ap407:3.2": "balajā muñjarohitā;",
  "tha-ap407:3.3": "Macchakacchapasañchannā,",
  "tha-ap407:3.4": "nadikā sandate tadā.",
  "tha-ap407:4.1": "Timirā pupphitā tattha,",
  "tha-ap407:4.2": "asokā khuddamālakā;",
  "tha-ap407:4.3": "Punnāgā giripunnāgā,",
  "tha-ap407:4.4": "sampavanti mamassamaṁ.",
  "tha-ap407:5.1": "Kuṭajā pupphitā tattha,",
  "tha-ap407:5.2": "tiṇasūlavanāni ca;",
  "tha-ap407:5.3": "Sālā ca saḷalā tattha,",
  "tha-ap407:5.4": "campakā pupphitā bahū.",
  "tha-ap407:6.1": "Ajjunā atimuttā ca,",
  "tha-ap407:6.2": "mahānāmā ca pupphitā;",
  "tha-ap407:6.3": "Asanā madhugandhī ca,",
  "tha-ap407:6.4": "pupphitā te mamassame.",
  "tha-ap407:7.1": "Uddālakā pāṭalikā,",
  "tha-ap407:7.2": "yūthikā ca piyaṅgukā;",
  "tha-ap407:7.3": "Bimbijālakasañchannā,",
  "tha-ap407:7.4": "samantā aḍḍhayojanaṁ.",
  "tha-ap407:8.1": "Mātaggārā sattaliyo,",
  "tha-ap407:8.2": "pāṭalī sinduvārakā;",
  "tha-ap407:8.3": "Aṅkolakā bahū tattha,",
  "tha-ap407:8.4": "tālakuṭṭhi ca pupphitā;",
  "tha-ap407:8.5": "Seleyyakā bahū tattha,",
  "tha-ap407:8.6": "pupphitā mama assame.",
  "tha-ap407:9.1": "Etesu pupphajātesu,",
  "tha-ap407:9.2": "sobhanti pādapā bahū;",
  "tha-ap407:9.3": "Samantā tena gandhena,",
  "tha-ap407:9.4": "vāyate mama assamo.",
  "tha-ap407:10.1": "Harītakā āmalakā,",
  "tha-ap407:10.2": "ambajambuvibhītakā;",
  "tha-ap407:10.3": "Kolā bhallātakā billā,",
  "tha-ap407:10.4": "phārusakaphalāni ca.",
  "tha-ap407:11.1": "Tindukā ca piyālā ca,",
  "tha-ap407:11.2": "madhukā kāsumārayo;",
  "tha-ap407:11.3": "Labujā panasā tattha,",
  "tha-ap407:11.4": "kadalī badarīphalā.",
  "tha-ap407:12.1": "Ambāṭakā bahū tattha,",
  "tha-ap407:12.2": "vallikāraphalāni ca;",
  "tha-ap407:12.3": "Bījapūrasapāriyo,",
  "tha-ap407:12.4": "phalitā mama assame.",
  "tha-ap407:13.1": "Āḷakā isimuggā ca,",
  "tha-ap407:13.2": "tato modaphalā bahū;",
  "tha-ap407:13.3": "Avaṭā pakkabharitā,",
  "tha-ap407:13.4": "pilakkhudumbarāni ca.",
  "tha-ap407:14.1": "Pipphalī marīcā tattha,",
  "tha-ap407:14.2": "nigrodhā ca kapitthanā;",
  "tha-ap407:14.3": "Udumbarakā bahavo,",
  "tha-ap407:14.4": "kaṇḍupaṇṇā ca hariyo.",
  "tha-ap407:15.1": "Ete caññe ca bahavo,",
  "tha-ap407:15.2": "phalitā assame mama;",
  "tha-ap407:15.3": "Puppharukkhāpi bahavo,",
  "tha-ap407:15.4": "pupphitā mama assame.",
  "tha-ap407:16.1": "Āluvā ca kaḷambā ca,",
  "tha-ap407:16.2": "biḷālī takkalāni ca;",
  "tha-ap407:16.3": "Ālakā tālakā ceva,",
  "tha-ap407:16.4": "vijjanti assame mama.",
  "tha-ap407:17.1": "Assamassāvidūre me,",
  "tha-ap407:17.2": "mahājātassaro ahu;",
  "tha-ap407:17.3": "Acchodako sītajalo,",
  "tha-ap407:17.4": "supatittho manoramo.",
  "tha-ap407:18.1": "Padumuppalā bahū tattha,",
  "tha-ap407:18.2": "puṇḍarīkasamāyutā;",
  "tha-ap407:18.3": "Mandālakehi sañchannā,",
  "tha-ap407:18.4": "nānāgandhasameritā.",
  "tha-ap407:19.1": "Gabbhaṁ gaṇhanti padumā,",
  "tha-ap407:19.2": "aññe pupphanti kesarī;",
  "tha-ap407:19.3": "Opupphapattā tiṭṭhanti,",
  "tha-ap407:19.4": "padumākaṇṇikā bahū.",
  "tha-ap407:20.1": "Madhu bhisamhā savati,",
  "tha-ap407:20.2": "khīraṁ sappi mulāḷibhi;",
  "tha-ap407:20.3": "Samantā tena gandhena,",
  "tha-ap407:20.4": "nānāgandhasameritā.",
  "tha-ap407:21.1": "Kumudā ambagandhi ca,",
  "tha-ap407:21.2": "nayitā dissare bahū;",
  "tha-ap407:21.3": "Jātassarassānukūlaṁ,",
  "tha-ap407:21.4": "ketakā pupphitā bahū.",
  "tha-ap407:22.1": "Suphullā bandhujīvā ca,",
  "tha-ap407:22.2": "setavārī sugandhikā;",
  "tha-ap407:22.3": "Kumbhilā susumārā ca,",
  "tha-ap407:22.4": "gahakā tattha jāyare.",
  "tha-ap407:23.1": "Uggāhakā ajagarā,",
  "tha-ap407:23.2": "tattha jātassare bahū;",
  "tha-ap407:23.3": "Pāṭhīnā pāvusā macchā,",
  "tha-ap407:23.4": "balajā muñjarohitā.",
  "tha-ap407:24.1": "Macchakacchapasañchannā,",
  "tha-ap407:24.2": "atho papaṭakāhi ca;",
  "tha-ap407:24.3": "Pārevatā ravihaṁsā,",
  "tha-ap407:24.4": "kukutthā ca nadīcarā.",
  "tha-ap407:25.1": "Dindibhā cakkavākā ca,",
  "tha-ap407:25.2": "pampakā jīvajīvakā;",
  "tha-ap407:25.3": "Kalandakā ukkusā ca,",
  "tha-ap407:25.4": "senakā uddharā bahū.",
  "tha-ap407:26.1": "Koṭṭhakā sukapotā ca,",
  "tha-ap407:26.2": "tuliyā camarā bahū;",
  "tha-ap407:26.3": "Kāreniyo ca tilakā,",
  "tha-ap407:26.4": "upajīvanti taṁ saraṁ.",
  "tha-ap407:27.1": "Sīhā byagghā ca dīpī ca,",
  "tha-ap407:27.2": "acchakokataracchakā;",
  "tha-ap407:27.3": "Vānarā kinnarā ceva,",
  "tha-ap407:27.4": "dissanti mama assame.",
  "tha-ap407:28.1": "Tāni gandhāni ghāyanto,",
  "tha-ap407:28.2": "bhakkhayanto phalānahaṁ;",
  "tha-ap407:28.3": "Gandhodakaṁ pivanto ca,",
  "tha-ap407:28.4": "vasāmi mama assame.",
  "tha-ap407:29.1": "Eṇīmigā varāhā ca,",
  "tha-ap407:29.2": "pasadā khuddarūpakā;",
  "tha-ap407:29.3": "Aggikā jotikā ceva,",
  "tha-ap407:29.4": "vasanti mama assame.",
  "tha-ap407:30.1": "Haṁsā koñcā mayūrā ca,",
  "tha-ap407:30.2": "sālikāpi ca kokilā;",
  "tha-ap407:30.3": "Majjārikā bahū tattha,",
  "tha-ap407:30.4": "kosikā poṭṭhasīsakā.",
  "tha-ap407:31.1": "Pisācā dānavā ceva,",
  "tha-ap407:31.2": "kumbhaṇḍā rakkhasā bahū;",
  "tha-ap407:31.3": "Garuḷā pannagā ceva,",
  "tha-ap407:31.4": "vasanti mama assame.",
  "tha-ap407:32.1": "Mahānubhāvā isayo,",
  "tha-ap407:32.2": "santacittā samāhitā;",
  "tha-ap407:32.3": "Kamaṇḍaludharā sabbe,",
  "tha-ap407:32.4": "ajinuttaravāsanā;",
  "tha-ap407:32.5": "Jaṭābhārabharitāva,",
  "tha-ap407:32.6": "vasanti mama assame.",
  "tha-ap407:33.1": "Yugamattañca pekkhantā,",
  "tha-ap407:33.2": "nipakā santavuttino;",
  "tha-ap407:33.3": "Lābhālābhena santuṭṭhā,",
  "tha-ap407:33.4": "vasanti mama assame.",
  "tha-ap407:34.1": "Vākacīraṁ dhunantā te,",
  "tha-ap407:34.2": "phoṭentājinacammakaṁ;",
  "tha-ap407:34.3": "Sabalehi upatthaddhā,",
  "tha-ap407:34.4": "gacchanti ambare tadā.",
  "tha-ap407:35.1": "Na te dakaṁ āharanti,",
  "tha-ap407:35.2": "kaṭṭhaṁ vā aggidārukaṁ;",
  "tha-ap407:35.3": "Sayañca upasampannā,",
  "tha-ap407:35.4": "pāṭihīrassidaṁ phalaṁ.",
  "tha-ap407:36.1": "Lohadoṇiṁ gahetvāna,",
  "tha-ap407:36.2": "vanamajjhe vasanti te;",
  "tha-ap407:36.3": "Kuñjarāva mahānāgā,",
  "tha-ap407:36.4": "asambhītāva kesarī.",
  "tha-ap407:37.1": "Aññe gacchanti goyānaṁ,",
  "tha-ap407:37.2": "aññe pubbavidehakaṁ;",
  "tha-ap407:37.3": "Aññe ca uttarakuruṁ,",
  "tha-ap407:37.4": "sakaṁ balamavassitā.",
  "tha-ap407:38.1": "Tato piṇḍaṁ āharitvā,",
  "tha-ap407:38.2": "paribhuñjanti ekato;",
  "tha-ap407:38.3": "Sabbesaṁ pakkamantānaṁ,",
  "tha-ap407:38.4": "uggatejāna tādinaṁ.",
  "tha-ap407:39.1": "Ajinacammasaddena,",
  "tha-ap407:39.2": "vanaṁ saddāyate tadā;",
  "tha-ap407:39.3": "Edisā te mahāvīra,",
  "tha-ap407:39.4": "sissā uggatapā mama.",
  "tha-ap407:40.1": "Parivuto ahaṁ tehi,",
  "tha-ap407:40.2": "vasāmi mama assame;",
  "tha-ap407:40.3": "Tositā sakakammena,",
  "tha-ap407:40.4": "vinītāpi samāgatā.",
  "tha-ap407:41.1": "Ārādhayiṁsu maṁ ete,",
  "tha-ap407:41.2": "sakakammābhilāsino;",
  "tha-ap407:41.3": "Sīlavanto ca nipakā,",
  "tha-ap407:41.4": "appamaññāsu kovidā.",
  "tha-ap407:42.1": "Padumuttaro lokavidū,",
  "tha-ap407:42.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap407:42.3": "Samayaṁ saṁviditvāna,",
  "tha-ap407:42.4": "upagacchi vināyako.",
  "tha-ap407:43.1": "Upagantvāna sambuddho,",
  "tha-ap407:43.2": "ātāpī nipako muni;",
  "tha-ap407:43.3": "Pattaṁ paggayha sambuddho,",
  "tha-ap407:43.4": "bhikkhāya mamupāgami.",
  "tha-ap407:44.1": "Upāgataṁ mahāvīraṁ,",
  "tha-ap407:44.2": "jalajuttamanāyakaṁ;",
  "tha-ap407:44.3": "Tiṇasantharaṁ paññāpetvā,",
  "tha-ap407:44.4": "sālapupphehi okiriṁ.",
  "tha-ap407:45.1": "Nisādetvāna sambuddhaṁ,",
  "tha-ap407:45.2": "haṭṭho saṁviggamānaso;",
  "tha-ap407:45.3": "Khippaṁ pabbatamāruyha,",
  "tha-ap407:45.4": "agaḷuṁ aggahiṁ ahaṁ.",
  "tha-ap407:46.1": "Kumbhamattaṁ gahetvāna,",
  "tha-ap407:46.2": "panasaṁ devagandhikaṁ;",
  "tha-ap407:46.3": "Khandhe āropayitvāna,",
  "tha-ap407:46.4": "upagacchiṁ vināyakaṁ.",
  "tha-ap407:47.1": "Phalaṁ buddhassa datvāna,",
  "tha-ap407:47.2": "agaḷuṁ anulimpahaṁ;",
  "tha-ap407:47.3": "Pasannacitto sumano,",
  "tha-ap407:47.4": "buddhaseṭṭhaṁ avandihaṁ.",
  "tha-ap407:48.1": "Padumuttaro lokavidū,",
  "tha-ap407:48.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap407:48.3": "Isimajjhe nisīditvā,",
  "tha-ap407:48.4": "imā gāthā abhāsatha.",
  "tha-ap407:49.1": "‘Yo me phalañca agaḷuṁ,",
  "tha-ap407:49.2": "āsanañca adāsi me;",
  "tha-ap407:49.3": "Tamahaṁ kittayissāmi,",
  "tha-ap407:49.4": "suṇātha mama bhāsato.",
  "tha-ap407:50.1": "Gāme vā yadi vāraññe,",
  "tha-ap407:50.2": "pabbhāresu guhāsu vā;",
  "tha-ap407:50.3": "Imassa cittamaññāya,",
  "tha-ap407:50.4": "nibbattissati bhojanaṁ.",
  "tha-ap407:51.1": "Devaloke manusse vā,",
  "tha-ap407:51.2": "upapanno ayaṁ naro;",
  "tha-ap407:51.3": "Bhojanehi ca vatthehi,",
  "tha-ap407:51.4": "parisaṁ tappayissati.",
  "tha-ap407:52.1": "Upapajjati yaṁ yoniṁ,",
  "tha-ap407:52.2": "devattaṁ atha mānusaṁ;",
  "tha-ap407:52.3": "Akkhobhabhogo hutvāna,",
  "tha-ap407:52.4": "saṁsarissatiyaṁ naro.",
  "tha-ap407:53.1": "Tiṁsakappasahassāni,",
  "tha-ap407:53.2": "devaloke ramissati;",
  "tha-ap407:53.3": "Sahassakkhattuṁ rājā ca,",
  "tha-ap407:53.4": "cakkavattī bhavissati.",
  "tha-ap407:54.1": "Ekasattatikkhattuñca,",
  "tha-ap407:54.2": "devarajjaṁ karissati;",
  "tha-ap407:54.3": "Padesarajjaṁ vipulaṁ,",
  "tha-ap407:54.4": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap407:55.1": "Kappasatasahassamhi,",
  "tha-ap407:55.2": "okkākakulasambhavo;",
  "tha-ap407:55.3": "Gotamo nāma gottena,",
  "tha-ap407:55.4": "satthā loke bhavissati.",
  "tha-ap407:56.1": "Tassa dhammesu dāyādo,",
  "tha-ap407:56.2": "oraso dhammanimmito;",
  "tha-ap407:56.3": "(…)",
  "tha-ap407:56.4": "Sabbāsave pariññāya,",
  "tha-ap407:56.5": "viharissatināsavo’.",
  "tha-ap407:57.1": "Suladdhalābho laddho me,",
  "tha-ap407:57.2": "yohaṁ addakkhiṁ nāyakaṁ;",
  "tha-ap407:57.3": "Tisso vijjā anuppattā,",
  "tha-ap407:57.4": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap407:58.1": "Gāme vā yadi vāraññe,",
  "tha-ap407:58.2": "pabbhāresu guhāsu vā;",
  "tha-ap407:58.3": "Mama saṅkappamaññāya,",
  "tha-ap407:58.4": "bhojanaṁ hoti me sadā.",
  "tha-ap407:59.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap407:59.2": "…pe…",
  "tha-ap407:59.3": "viharāmi anāsavo.",
  "tha-ap407:60.1": "Svāgataṁ vata me āsi,",
  "tha-ap407:60.2": "…pe…",
  "tha-ap407:60.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap407:61.1": "Paṭisambhidā catasso,",
  "tha-ap407:61.2": "…pe…",
  "tha-ap407:61.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap407:62.1": "Itthaṁ sudaṁ āyasmā upasivo thero imā gāthāyo abhāsitthāti.",
  "tha-ap407:63.1": "Upasivattherassāpadānaṁ pañcamaṁ."
}