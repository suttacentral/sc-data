{
  "tha-ap37:0.1": "Therāpadāna",
  "tha-ap37:0.2": "Kuṇḍadhānavagga",
  "tha-ap37:0.3": "5. Mogharājattheraapadāna",
  "tha-ap37:1.1": "“Atthadassī tu bhagavā,",
  "tha-ap37:1.2": "sayambhū aparājito;",
  "tha-ap37:1.3": "Bhikkhusaṅghaparibyūḷho,",
  "tha-ap37:1.4": "rathiyaṁ paṭipajjatha.",
  "tha-ap37:2.1": "Sissehi samparivuto,",
  "tha-ap37:2.2": "gharamhā abhinikkhamiṁ;",
  "tha-ap37:2.3": "Nikkhamitvānahaṁ tattha,",
  "tha-ap37:2.4": "addasaṁ lokanāyakaṁ.",
  "tha-ap37:3.1": "Abhivādiya sambuddhaṁ,",
  "tha-ap37:3.2": "sire katvāna añjaliṁ;",
  "tha-ap37:3.3": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap37:3.4": "santhaviṁ lokanāyakaṁ.",
  "tha-ap37:4.1": "Yāvatā rūpino sattā,",
  "tha-ap37:4.2": "arūpī vā asaññino;",
  "tha-ap37:4.3": "Sabbe te tava ñāṇamhi,",
  "tha-ap37:4.4": "anto honti samogadhā.",
  "tha-ap37:5.1": "Sukhumacchikajālena,",
  "tha-ap37:5.2": "udakaṁ yo parikkhipe;",
  "tha-ap37:5.3": "Ye keci udake pāṇā,",
  "tha-ap37:5.4": "antojāle bhavanti te.",
  "tha-ap37:6.1": "Yesañca cetanā atthi,",
  "tha-ap37:6.2": "rūpino ca arūpino;",
  "tha-ap37:6.3": "Sabbe te tava ñāṇamhi,",
  "tha-ap37:6.4": "anto honti samogadhā.",
  "tha-ap37:7.1": "Samuddharasimaṁ lokaṁ,",
  "tha-ap37:7.2": "andhakārasamākulaṁ;",
  "tha-ap37:7.3": "Tava dhammaṁ suṇitvāna,",
  "tha-ap37:7.4": "kaṅkhāsotaṁ taranti te.",
  "tha-ap37:8.1": "Avijjānivute loke,",
  "tha-ap37:8.2": "andhakārena otthaṭe;",
  "tha-ap37:8.3": "Tava ñāṇamhi jotante,",
  "tha-ap37:8.4": "andhakārā padhaṁsitā.",
  "tha-ap37:9.1": "Tuvaṁ cakkhūsi sabbesaṁ,",
  "tha-ap37:9.2": "mahātamapanūdano;",
  "tha-ap37:9.3": "Tava dhammaṁ suṇitvāna,",
  "tha-ap37:9.4": "nibbāyati bahujjano.",
  "tha-ap37:10.1": "Puṭakaṁ pūrayitvāna,",
  "tha-ap37:10.2": "madhukhuddamaneḷakaṁ;",
  "tha-ap37:10.3": "Ubho hatthehi paggayha,",
  "tha-ap37:10.4": "upanesiṁ mahesino.",
  "tha-ap37:11.1": "Paṭiggaṇhi mahāvīro,",
  "tha-ap37:11.2": "sahatthena mahā isi;",
  "tha-ap37:11.3": "Bhuñjitvā tañca sabbaññū,",
  "tha-ap37:11.4": "vehāsaṁ nabhamuggami.",
  "tha-ap37:12.1": "Antalikkhe ṭhito satthā,",
  "tha-ap37:12.2": "atthadassī narāsabho;",
  "tha-ap37:12.3": "Mama cittaṁ pasādento,",
  "tha-ap37:12.4": "imā gāthā abhāsatha.",
  "tha-ap37:13.1": "‘Yenidaṁ thavitaṁ ñāṇaṁ,",
  "tha-ap37:13.2": "buddhaseṭṭho ca thomito;",
  "tha-ap37:13.3": "Tena cittappasādena,",
  "tha-ap37:13.4": "duggatiṁ so na gacchati.",
  "tha-ap37:14.1": "Catuddasañcakkhattuṁ so,",
  "tha-ap37:14.2": "devarajjaṁ karissati;",
  "tha-ap37:14.3": "Pathabyā rajjaṁ aṭṭhasataṁ,",
  "tha-ap37:14.4": "vasudhaṁ āvasissati.",
  "tha-ap37:15.1": "Pañceva satakkhattuñca,",
  "tha-ap37:15.2": "cakkavattī bhavissati;",
  "tha-ap37:15.3": "Padesarajjaṁ asaṅkheyyaṁ,",
  "tha-ap37:15.4": "mahiyā kārayissati.",
  "tha-ap37:16.1": "Ajjhāyako mantadharo,",
  "tha-ap37:16.2": "tiṇṇaṁ vedāna pāragū;",
  "tha-ap37:16.3": "Gotamassa bhagavato,",
  "tha-ap37:16.4": "sāsane pabbajissati.",
  "tha-ap37:17.1": "Gambhīraṁ nipuṇaṁ atthaṁ,",
  "tha-ap37:17.2": "ñāṇena vicinissati;",
  "tha-ap37:17.3": "Mogharājāti nāmena,",
  "tha-ap37:17.4": "hessati satthu sāvako.",
  "tha-ap37:18.1": "Tīhi vijjāhi sampannaṁ,",
  "tha-ap37:18.2": "katakiccamanāsavaṁ;",
  "tha-ap37:18.3": "Gotamo satthavāhaggo,",
  "tha-ap37:18.4": "etadagge ṭhapessati’.",
  "tha-ap37:19.1": "Hitvā mānusakaṁ yogaṁ,",
  "tha-ap37:19.2": "chetvāna bhavabandhanaṁ;",
  "tha-ap37:19.3": "Sabbāsave pariññāya,",
  "tha-ap37:19.4": "viharāmi anāsavo.",
  "tha-ap37:20.1": "Paṭisambhidā catasso,",
  "tha-ap37:20.2": "…pe…",
  "tha-ap37:20.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap37:21.1": "Itthaṁ sudaṁ āyasmā mogharājo thero imā gāthāyo abhāsitthāti.",
  "tha-ap37:22.1": "Mogharājattherassāpadānaṁ pañcamaṁ."
}