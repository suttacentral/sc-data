{
  "tha-ap459:0.1": "Therāpadāna",
  "tha-ap459:0.2": "Jagatidāyakavagga",
  "tha-ap459:0.3": "7. Ekachattiyattheraapadāna",
  "tha-ap459:1.1": "“Aṅgārajātā pathavī,",
  "tha-ap459:1.2": "kukkuḷānugatā mahī;",
  "tha-ap459:1.3": "Padumuttaro bhagavā,",
  "tha-ap459:1.4": "abbhokāsamhi caṅkami.",
  "tha-ap459:2.1": "Paṇḍaraṁ chattamādāya,",
  "tha-ap459:2.2": "addhānaṁ paṭipajjahaṁ;",
  "tha-ap459:2.3": "Tattha disvāna sambuddhaṁ,",
  "tha-ap459:2.4": "vitti me upapajjatha.",
  "tha-ap459:3.1": "Marīciyotthaṭā bhūmi,",
  "tha-ap459:3.2": "aṅgārāva mahī ayaṁ;",
  "tha-ap459:3.3": "Upahanti mahāvātā,",
  "tha-ap459:3.4": "sarīrassāsukhepanā.",
  "tha-ap459:4.1": "Sītaṁ uṇhaṁ vihanantaṁ,",
  "tha-ap459:4.2": "vātātapanivāraṇaṁ;",
  "tha-ap459:4.3": "Paṭiggaṇha imaṁ chattaṁ,",
  "tha-ap459:4.4": "phassayissāmi nibbutiṁ.",
  "tha-ap459:5.1": "Anukampako kāruṇiko,",
  "tha-ap459:5.2": "padumuttaro mahāyaso;",
  "tha-ap459:5.3": "Mama saṅkappamaññāya,",
  "tha-ap459:5.4": "paṭiggaṇhi tadā jino.",
  "tha-ap459:6.1": "Tiṁsa kappāni devindo,",
  "tha-ap459:6.2": "devarajjamakārayiṁ;",
  "tha-ap459:6.3": "Satānaṁ pañcakkhattuñca,",
  "tha-ap459:6.4": "cakkavattī ahosahaṁ.",
  "tha-ap459:7.1": "Padesarajjaṁ vipulaṁ,",
  "tha-ap459:7.2": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap459:7.3": "Anubhomi sakaṁ kammaṁ,",
  "tha-ap459:7.4": "pubbe sukatamattano.",
  "tha-ap459:8.1": "Ayaṁ me pacchimā jāti,",
  "tha-ap459:8.2": "carimo vattate bhavo;",
  "tha-ap459:8.3": "Ajjāpi setacchattaṁ me,",
  "tha-ap459:8.4": "sabbakālaṁ dharīyati.",
  "tha-ap459:9.1": "Satasahassito kappe,",
  "tha-ap459:9.2": "yaṁ chattamadadiṁ tadā;",
  "tha-ap459:9.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap459:9.4": "chattadānassidaṁ phalaṁ.",
  "tha-ap459:10.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap459:10.2": "…pe…",
  "tha-ap459:10.3": "viharāmi anāsavo.",
  "tha-ap459:11.1": "Svāgataṁ vata me āsi,",
  "tha-ap459:11.2": "…pe…",
  "tha-ap459:11.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap459:12.1": "Paṭisambhidā catasso,",
  "tha-ap459:12.2": "…pe…",
  "tha-ap459:12.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap459:13.1": "Itthaṁ sudaṁ āyasmā ekachattiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap459:14.1": "Ekachattiyattherassāpadānaṁ sattamaṁ."
}