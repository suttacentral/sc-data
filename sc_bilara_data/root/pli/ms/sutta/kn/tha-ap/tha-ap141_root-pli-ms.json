{
  "tha-ap141:0.1": "Therāpadāna",
  "tha-ap141:0.2": "Sobhitavagga",
  "tha-ap141:0.3": "9 Sālapupphadāyakattheraapadāna",
  "tha-ap141:1.1": "“Migarājā tadā āsiṁ,",
  "tha-ap141:1.2": "abhijāto sukesarī;",
  "tha-ap141:1.3": "Giriduggaṁ gavesanto,",
  "tha-ap141:1.4": "addasaṁ lokanāyakaṁ.",
  "tha-ap141:2.1": "Ayaṁ nu kho mahāvīro,",
  "tha-ap141:2.2": "nibbāpeti mahājanaṁ;",
  "tha-ap141:2.3": "Yannūnāhaṁ upāseyyaṁ,",
  "tha-ap141:2.4": "devadevaṁ narāsabhaṁ.",
  "tha-ap141:3.1": "Sākhaṁ sālassa bhañjitvā,",
  "tha-ap141:3.2": "sakosaṁ pupphamāhariṁ;",
  "tha-ap141:3.3": "Upagantvāna sambuddhaṁ,",
  "tha-ap141:3.4": "adāsiṁ pupphamuttamaṁ.",
  "tha-ap141:4.1": "Ekanavutito kappe,",
  "tha-ap141:4.2": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap141:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap141:4.4": "pupphadānassidaṁ phalaṁ.",
  "tha-ap141:5.1": "Ito ca navame kappe,",
  "tha-ap141:5.2": "virocanasanāmakā;",
  "tha-ap141:5.3": "Tayo āsiṁsu rājāno,",
  "tha-ap141:5.4": "cakkavattī mahabbalā.",
  "tha-ap141:6.1": "Paṭisambhidā catasso,",
  "tha-ap141:6.2": "…pe…",
  "tha-ap141:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap141:7.1": "Itthaṁ sudaṁ āyasmā sālapupphadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap141:8.1": "Sālapupphadāyakattherassāpadānaṁ navamaṁ."
}