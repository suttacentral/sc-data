{
  "tha-ap270:0.1": "Therāpadāna",
  "tha-ap270:0.2": "Padumukkhipavagga",
  "tha-ap270:0.3": "8 Saḷalapupphiyattheraapadāna",
  "tha-ap270:1.1": "“Candabhāgānadītīre,",
  "tha-ap270:1.2": "ahosiṁ kinnaro tadā;",
  "tha-ap270:1.3": "Vipassiṁ addasaṁ buddhaṁ,",
  "tha-ap270:1.4": "raṁsijālasamākulaṁ.",
  "tha-ap270:2.1": "Pasannacitto sumano,",
  "tha-ap270:2.2": "paramāya ca pītiyā;",
  "tha-ap270:2.3": "Paggayha saḷalaṁ pupphaṁ,",
  "tha-ap270:2.4": "vipassiṁ okiriṁ ahaṁ.",
  "tha-ap270:3.1": "Ekanavutito kappe,",
  "tha-ap270:3.2": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap270:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap270:3.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap270:4.1": "Paṭisambhidā catasso,",
  "tha-ap270:4.2": "…pe…",
  "tha-ap270:4.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap270:5.1": "Itthaṁ sudaṁ āyasmā saḷalapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap270:6.1": "Saḷalapupphiyattherassāpadānaṁ aṭṭhamaṁ."
}