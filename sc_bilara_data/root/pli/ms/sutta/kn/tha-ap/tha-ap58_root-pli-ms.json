{
  "tha-ap58:0.1": "Therāpadāna",
  "tha-ap58:0.2": "Bījanivagga",
  "tha-ap58:0.3": "6. Saparivārāsanattheraapadāna",
  "tha-ap58:1.1": "“Padumuttarabuddhassa,",
  "tha-ap58:1.2": "piṇḍapātaṁ adāsahaṁ;",
  "tha-ap58:1.3": "Gantvā kiliṭṭhakaṁ ṭhānaṁ,",
  "tha-ap58:1.4": "mallikāhi parikkhitaṁ.",
  "tha-ap58:2.1": "Tamhāsanamhi āsīno,",
  "tha-ap58:2.2": "buddho lokagganāyako;",
  "tha-ap58:2.3": "Akittayi piṇḍapātaṁ,",
  "tha-ap58:2.4": "ujubhūto samāhito.",
  "tha-ap58:3.1": "Yathāpi bhaddake khette,",
  "tha-ap58:3.2": "bījaṁ appampi ropitaṁ;",
  "tha-ap58:3.3": "Sammā dhāraṁ pavecchante,",
  "tha-ap58:3.4": "phalaṁ toseti kassakaṁ.",
  "tha-ap58:4.1": "Tathevāyaṁ piṇḍapāto,",
  "tha-ap58:4.2": "sukhette ropito tayā;",
  "tha-ap58:4.3": "Bhave nibbattamānamhi,",
  "tha-ap58:4.4": "phalaṁ te tosayissati.",
  "tha-ap58:5.1": "Idaṁ vatvāna sambuddho,",
  "tha-ap58:5.2": "jalajuttamanāmako;",
  "tha-ap58:5.3": "Piṇḍapātaṁ gahetvāna,",
  "tha-ap58:5.4": "pakkāmi uttarāmukho.",
  "tha-ap58:6.1": "Saṁvuto pātimokkhasmiṁ,",
  "tha-ap58:6.2": "indriyesu ca pañcasu;",
  "tha-ap58:6.3": "Pavivekamanuyutto,",
  "tha-ap58:6.4": "viharāmi anāsavo.",
  "tha-ap58:7.1": "Paṭisambhidā catasso,",
  "tha-ap58:7.2": "…pe…",
  "tha-ap58:7.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap58:8.1": "Itthaṁ sudaṁ āyasmā saparivārāsano thero imā gāthāyo abhāsitthāti.",
  "tha-ap58:9.1": "Saparivārāsanattherassāpadānaṁ chaṭṭhaṁ."
}