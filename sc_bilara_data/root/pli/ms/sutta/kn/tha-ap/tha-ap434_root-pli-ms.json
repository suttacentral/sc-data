{
  "tha-ap434:0.1": "Therāpadāna",
  "tha-ap434:0.2": "Ekavihārivagga",
  "tha-ap434:0.3": "2. Ekasaṅkhiyattheraapadāna",
  "tha-ap434:1.1": "“Vipassino bhagavato,",
  "tha-ap434:1.2": "mahābodhimaho ahu;",
  "tha-ap434:1.3": "Mahājanā samāgamma,",
  "tha-ap434:1.4": "pūjenti bodhimuttamaṁ.",
  "tha-ap434:2.1": "Na hi taṁ orakaṁ maññe,",
  "tha-ap434:2.2": "buddhaseṭṭho bhavissati;",
  "tha-ap434:2.3": "Yassāyaṁ īdisā bodhi,",
  "tha-ap434:2.4": "pūjanīyā ca satthuno.",
  "tha-ap434:3.1": "Tato saṅkhaṁ gahetvāna,",
  "tha-ap434:3.2": "bodhirukkhamupaṭṭhahiṁ;",
  "tha-ap434:3.3": "Dhamanto sabbadivasaṁ,",
  "tha-ap434:3.4": "avandiṁ bodhimuttamaṁ.",
  "tha-ap434:4.1": "Āsannake kataṁ kammaṁ,",
  "tha-ap434:4.2": "devalokaṁ apāpayī;",
  "tha-ap434:4.3": "Kaḷevaraṁ me patitaṁ,",
  "tha-ap434:4.4": "devaloke ramāmahaṁ.",
  "tha-ap434:5.1": "Saṭṭhituriyasahassāni,",
  "tha-ap434:5.2": "tuṭṭhahaṭṭhā pamoditā;",
  "tha-ap434:5.3": "Sadā mayhaṁ upaṭṭhanti,",
  "tha-ap434:5.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap434:6.1": "Ekasattatime kappe,",
  "tha-ap434:6.2": "rājā āsiṁ sudassano;",
  "tha-ap434:6.3": "Cāturanto vijitāvī,",
  "tha-ap434:6.4": "jambumaṇḍassa issaro.",
  "tha-ap434:7.1": "Tato aṅgasatā turiyā,",
  "tha-ap434:7.2": "parivārenti maṁ sadā;",
  "tha-ap434:7.3": "Anubhomi sakaṁ kammaṁ,",
  "tha-ap434:7.4": "upaṭṭhānassidaṁ phalaṁ.",
  "tha-ap434:8.1": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap434:8.2": "devattaṁ atha mānusaṁ;",
  "tha-ap434:8.3": "Mātukucchigatassāpi,",
  "tha-ap434:8.4": "vajjare bheriyo sadā.",
  "tha-ap434:9.1": "Upaṭṭhitvāna sambuddhaṁ,",
  "tha-ap434:9.2": "anubhutvāna sampadā;",
  "tha-ap434:9.3": "Sivaṁ sukhemaṁ amataṁ,",
  "tha-ap434:9.4": "pattomhi acalaṁ padaṁ.",
  "tha-ap434:10.1": "Ekanavutito kappe,",
  "tha-ap434:10.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap434:10.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap434:10.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap434:11.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap434:11.2": "…pe…",
  "tha-ap434:11.3": "viharāmi anāsavo.",
  "tha-ap434:12.1": "Svāgataṁ vata me āsi,",
  "tha-ap434:12.2": "…pe…",
  "tha-ap434:12.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap434:13.1": "Paṭisambhidā catasso,",
  "tha-ap434:13.2": "…pe…",
  "tha-ap434:13.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap434:14.1": "Itthaṁ sudaṁ āyasmā ekasaṅkhiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap434:15.1": "Ekasaṅkhiyattherassāpadānaṁ dutiyaṁ."
}