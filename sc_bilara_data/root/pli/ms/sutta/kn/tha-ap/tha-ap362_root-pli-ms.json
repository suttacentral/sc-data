{
  "tha-ap362:0.1": "Therāpadāna ",
  "tha-ap362:0.2": "Saddasaññakavagga ",
  "tha-ap362:0.3": "10. Piṇḍapātikattheraapadāna ",
  "tha-ap362:1.1": "“Tisso nāmāsi sambuddho, ",
  "tha-ap362:1.2": "vihāsi vipine tadā; ",
  "tha-ap362:1.3": "Tusitā hi idhāgantvā, ",
  "tha-ap362:1.4": "piṇḍapātaṁ adāsahaṁ. ",
  "tha-ap362:2.1": "Sambuddhamabhivādetvā, ",
  "tha-ap362:2.2": "tissaṁ nāma mahāyasaṁ; ",
  "tha-ap362:2.3": "Sakaṁ cittaṁ pasādetvā, ",
  "tha-ap362:2.4": "tusitaṁ agamāsahaṁ. ",
  "tha-ap362:3.1": "Dvenavute ito kappe, ",
  "tha-ap362:3.2": "yaṁ dānamadadiṁ tadā; ",
  "tha-ap362:3.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap362:3.4": "piṇḍapātassidaṁ phalaṁ. ",
  "tha-ap362:4.1": "Paṭisambhidā catasso, ",
  "tha-ap362:4.2": "…pe… ",
  "tha-ap362:4.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap362:5.1": "Itthaṁ sudaṁ āyasmā piṇḍapātiko thero imā gāthāyo abhāsitthāti. ",
  "tha-ap362:6.1": "Piṇḍapātikattherassāpadānaṁ dasamaṁ. ",
  "tha-ap362:7.1": "Saddasaññakavaggo chattiṁsatimo. ",
  "tha-ap362:8.1": "Tassuddānaṁ ",
  "tha-ap362:9.1": "Saddasaññī yavasiko, ",
  "tha-ap362:9.2": "kiṁsukoraṇḍapupphiyo; ",
  "tha-ap362:9.3": "Ālambano ambayāgu, ",
  "tha-ap362:9.4": "supuṭī mañcadāyako; ",
  "tha-ap362:9.5": "Saraṇaṁ piṇḍapāto ca, ",
  "tha-ap362:9.6": "gāthā tālīsameva ca. "
}