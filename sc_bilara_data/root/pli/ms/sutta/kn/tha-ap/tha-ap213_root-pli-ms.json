{
  "tha-ap213:0.1": "Therāpadāna",
  "tha-ap213:0.2": "Hatthivagga",
  "tha-ap213:0.3": "1. Hatthidāyakattheraapadāna",
  "tha-ap213:1.1": "“Siddhatthassa bhagavato,",
  "tha-ap213:1.2": "dvipadindassa tādino;",
  "tha-ap213:1.3": "Nāgaseṭṭho mayā dinno,",
  "tha-ap213:1.4": "īsādanto urūḷhavā.",
  "tha-ap213:2.1": "Uttamatthaṁ anubhomi,",
  "tha-ap213:2.2": "santipadamanuttaraṁ;",
  "tha-ap213:2.3": "Nāgadānaṁ mayā dinnaṁ,",
  "tha-ap213:2.4": "sabbalokahitesino.",
  "tha-ap213:3.1": "Catunnavutito kappe,",
  "tha-ap213:3.2": "yaṁ nāga madadiṁ tadā;",
  "tha-ap213:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap213:3.4": "nāgadānassidaṁ phalaṁ.",
  "tha-ap213:4.1": "Aṭṭhasattatikappamhi,",
  "tha-ap213:4.2": "soḷasāsiṁsu khattiyā;",
  "tha-ap213:4.3": "Samantapāsādikā nāma,",
  "tha-ap213:4.4": "cakkavattī mahabbalā.",
  "tha-ap213:5.1": "Paṭisambhidā catasso,",
  "tha-ap213:5.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap213:5.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap213:5.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap213:6.1": "Itthaṁ sudaṁ āyasmā hatthidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap213:7.1": "Hatthidāyakattherassāpadānaṁ paṭhamaṁ."
}