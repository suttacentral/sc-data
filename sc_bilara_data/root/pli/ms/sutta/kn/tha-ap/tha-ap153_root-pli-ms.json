{
  "tha-ap153:0.1": "Therāpadāna",
  "tha-ap153:0.2": "Bandhujīvakavagga",
  "tha-ap153:0.3": "1. Bandhujīvakattheraapadāna",
  "tha-ap153:1.1": "“Candaṁva vimalaṁ suddhaṁ,",
  "tha-ap153:1.2": "vippasannamanāvilaṁ;",
  "tha-ap153:1.3": "Nandībhavaparikkhīṇaṁ,",
  "tha-ap153:1.4": "tiṇṇaṁ loke visattikaṁ.",
  "tha-ap153:2.1": "Nibbāpayantaṁ janataṁ,",
  "tha-ap153:2.2": "Tiṇṇaṁ tārayataṁ varaṁ;",
  "tha-ap153:2.3": "Muniṁ vanamhi jhāyantaṁ,",
  "tha-ap153:2.4": "Ekaggaṁ susamāhitaṁ.",
  "tha-ap153:3.1": "Bandhujīvakapupphāni,",
  "tha-ap153:3.2": "lagetvā suttakenahaṁ;",
  "tha-ap153:3.3": "Buddhassa abhiropayiṁ,",
  "tha-ap153:3.4": "sikhino lokabandhuno.",
  "tha-ap153:4.1": "Ekattiṁse ito kappe,",
  "tha-ap153:4.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap153:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap153:4.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap153:5.1": "Ito sattamake kappe,",
  "tha-ap153:5.2": "manujindo mahāyaso;",
  "tha-ap153:5.3": "Samantacakkhu nāmāsi,",
  "tha-ap153:5.4": "cakkavattī mahabbalo.",
  "tha-ap153:6.1": "Paṭisambhidā catasso,",
  "tha-ap153:6.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap153:6.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap153:6.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap153:7.1": "Itthaṁ sudaṁ āyasmā bandhujīvako thero imā gāthāyo abhāsitthāti.",
  "tha-ap153:8.1": "Bandhujīvakattherassāpadānaṁ paṭhamaṁ."
}