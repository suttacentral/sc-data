{
  "tha-ap374:0.1": "Therāpadāna",
  "tha-ap374:0.2": "Bodhivandanavagga",
  "tha-ap374:0.3": "2. Pāṭalipupphiyattheraapadāna",
  "tha-ap374:1.1": "“Vipassī nāma bhagavā,",
  "tha-ap374:1.2": "sayambhū aggapuggalo;",
  "tha-ap374:1.3": "Purakkhato sasissehi,",
  "tha-ap374:1.4": "pāvisi bandhumaṁ jino.",
  "tha-ap374:2.1": "Tīṇi pāṭalipupphāni,",
  "tha-ap374:2.2": "ucchaṅge ṭhapitāni me;",
  "tha-ap374:2.3": "Sīsaṁ nhāyitukāmova,",
  "tha-ap374:2.4": "nadītitthaṁ agacchahaṁ.",
  "tha-ap374:3.1": "Nikkhamma bandhumatiyā,",
  "tha-ap374:3.2": "addasaṁ lokanāyakaṁ;",
  "tha-ap374:3.3": "Indīvaraṁva jalitaṁ,",
  "tha-ap374:3.4": "ādittaṁva hutāsanaṁ.",
  "tha-ap374:4.1": "Byagghūsabhaṁva pavaraṁ,",
  "tha-ap374:4.2": "abhijātaṁva kesariṁ;",
  "tha-ap374:4.3": "Gacchantaṁ samaṇānaggaṁ,",
  "tha-ap374:4.4": "bhikkhusaṅghapurakkhataṁ.",
  "tha-ap374:5.1": "Tasmiṁ pasanno sugate,",
  "tha-ap374:5.2": "kilesamaladhovane;",
  "tha-ap374:5.3": "Gahetvā tīṇi pupphāni,",
  "tha-ap374:5.4": "buddhaseṭṭhaṁ apūjayiṁ.",
  "tha-ap374:6.1": "Ekanavutito kappe,",
  "tha-ap374:6.2": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap374:6.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap374:6.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap374:7.1": "Paṭisambhidā catasso,",
  "tha-ap374:7.2": "…pe…",
  "tha-ap374:7.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap374:8.1": "Itthaṁ sudaṁ āyasmā pāṭalipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap374:9.1": "Pāṭalipupphiyattherassāpadānaṁ dutiyaṁ."
}