{
  "tha-ap536:0.1": "Therāpadāna",
  "tha-ap536:0.2": "Kaccāyanavagga",
  "tha-ap536:0.3": "4. Dabbamallaputtattheraapadāna",
  "tha-ap536:1.1": "“Padumuttaro nāma jino,",
  "tha-ap536:1.2": "sabbalokavidū muni;",
  "tha-ap536:1.3": "Ito satasahassamhi,",
  "tha-ap536:1.4": "kappe uppajji cakkhumā.",
  "tha-ap536:2.1": "Ovādako viññāpako,",
  "tha-ap536:2.2": "tārako sabbapāṇinaṁ;",
  "tha-ap536:2.3": "Desanākusalo buddho,",
  "tha-ap536:2.4": "tāresi janataṁ bahuṁ.",
  "tha-ap536:3.1": "Anukampako kāruṇiko,",
  "tha-ap536:3.2": "hitesī sabbapāṇinaṁ;",
  "tha-ap536:3.3": "Sampatte titthiye sabbe,",
  "tha-ap536:3.4": "pañcasīle patiṭṭhapi.",
  "tha-ap536:4.1": "Evaṁ nirākulaṁ āsi,",
  "tha-ap536:4.2": "suññataṁ titthiyehi ca;",
  "tha-ap536:4.3": "Vicittaṁ arahantehi,",
  "tha-ap536:4.4": "vasībhūtehi tādibhi.",
  "tha-ap536:5.1": "Ratanānaṭṭhapaññāsaṁ,",
  "tha-ap536:5.2": "uggato so mahāmuni;",
  "tha-ap536:5.3": "Kañcanagghiyasaṅkāso,",
  "tha-ap536:5.4": "bāttiṁsavaralakkhaṇo.",
  "tha-ap536:6.1": "Vassasatasahassāni,",
  "tha-ap536:6.2": "āyu vijjati tāvade;",
  "tha-ap536:6.3": "Tāvatā tiṭṭhamāno so,",
  "tha-ap536:6.4": "tāresi janataṁ bahuṁ.",
  "tha-ap536:7.1": "Tadāhaṁ haṁsavatiyaṁ,",
  "tha-ap536:7.2": "seṭṭhiputto mahāyaso;",
  "tha-ap536:7.3": "Upetvā lokapajjotaṁ,",
  "tha-ap536:7.4": "assosiṁ dhammadesanaṁ.",
  "tha-ap536:8.1": "Senāsanāni bhikkhūnaṁ,",
  "tha-ap536:8.2": "paññāpentaṁ sasāvakaṁ;",
  "tha-ap536:8.3": "Kittayantassa vacanaṁ,",
  "tha-ap536:8.4": "suṇitvā mudito ahaṁ.",
  "tha-ap536:9.1": "Adhikāraṁ sasaṅghassa,",
  "tha-ap536:9.2": "katvā tassa mahesino;",
  "tha-ap536:9.3": "Nipacca sirasā pāde,",
  "tha-ap536:9.4": "taṁ ṭhānamabhipatthayiṁ.",
  "tha-ap536:10.1": "Tadāha sa mahāvīro,",
  "tha-ap536:10.2": "mama kammaṁ pakittayaṁ;",
  "tha-ap536:10.3": "‘Yo sasaṅghamabhojesi,",
  "tha-ap536:10.4": "sattāhaṁ lokanāyakaṁ.",
  "tha-ap536:11.1": "Soyaṁ kamalapattakkho,",
  "tha-ap536:11.2": "sīhaṁso kanakattaco;",
  "tha-ap536:11.3": "Mama pādamūle nipati,",
  "tha-ap536:11.4": "patthayaṁ ṭhānamuttamaṁ.",
  "tha-ap536:12.1": "Satasahassito kappe,",
  "tha-ap536:12.2": "okkākakulasambhavo;",
  "tha-ap536:12.3": "Gotamo nāma gottena,",
  "tha-ap536:12.4": "satthā loke bhavissati.",
  "tha-ap536:13.1": "Sāvako tassa buddhassa,",
  "tha-ap536:13.2": "dabbo nāmena vissuto;",
  "tha-ap536:13.3": "Senāsanapaññāpako,",
  "tha-ap536:13.4": "aggo hessatiyaṁ tadā’.",
  "tha-ap536:14.1": "Tena kammena sukatena,",
  "tha-ap536:14.2": "cetanāpaṇidhīhi ca;",
  "tha-ap536:14.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap536:14.4": "tāvatiṁsamagacchahaṁ.",
  "tha-ap536:15.1": "Satānaṁ tīṇikkhattuñca,",
  "tha-ap536:15.2": "devarajjamakārayiṁ;",
  "tha-ap536:15.3": "Satānaṁ pañcakkhattuñca,",
  "tha-ap536:15.4": "cakkavattī ahosahaṁ.",
  "tha-ap536:16.1": "Padesarajjaṁ vipulaṁ,",
  "tha-ap536:16.2": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap536:16.3": "Sabbattha sukhito āsiṁ,",
  "tha-ap536:16.4": "tassa kammassa vāhasā.",
  "tha-ap536:17.1": "Ekanavutito kappe,",
  "tha-ap536:17.2": "vipassī nāma nāyako;",
  "tha-ap536:17.3": "Uppajji cārudassano,",
  "tha-ap536:17.4": "sabbadhammavipassako.",
  "tha-ap536:18.1": "Duṭṭhacitto upavadiṁ,",
  "tha-ap536:18.2": "sāvakaṁ tassa tādino;",
  "tha-ap536:18.3": "Sabbāsavaparikkhīṇaṁ,",
  "tha-ap536:18.4": "suddhoti ca vijāniya.",
  "tha-ap536:19.1": "Tasseva naravīrassa,",
  "tha-ap536:19.2": "sāvakānaṁ mahesinaṁ;",
  "tha-ap536:19.3": "Salākañca gahetvāna,",
  "tha-ap536:19.4": "khīrodanamadāsahaṁ.",
  "tha-ap536:20.1": "Imamhi bhaddake kappe,",
  "tha-ap536:20.2": "brahmabandhu mahāyaso;",
  "tha-ap536:20.3": "Kassapo nāma gottena,",
  "tha-ap536:20.4": "uppajji vadataṁ varo.",
  "tha-ap536:21.1": "Sāsanaṁ jotayitvāna,",
  "tha-ap536:21.2": "abhibhuyya kutitthiye;",
  "tha-ap536:21.3": "Vineyye vinayitvāva,",
  "tha-ap536:21.4": "nibbuto so sasāvako.",
  "tha-ap536:22.1": "Sasisse nibbute nāthe,",
  "tha-ap536:22.2": "atthamentamhi sāsane;",
  "tha-ap536:22.3": "Devā kandiṁsu saṁviggā,",
  "tha-ap536:22.4": "muttakesā rudammukhā.",
  "tha-ap536:23.1": "‘Nibbāyissati dhammakkho,",
  "tha-ap536:23.2": "na passissāma subbate;",
  "tha-ap536:23.3": "Na suṇissāma saddhammaṁ,",
  "tha-ap536:23.4": "aho no appapuññatā’.",
  "tha-ap536:24.1": "Tadāyaṁ pathavī sabbā,",
  "tha-ap536:24.2": "acalā sā calācalā;",
  "tha-ap536:24.3": "Sāgaro ca sasokova,",
  "tha-ap536:24.4": "vinadī karuṇaṁ giraṁ.",
  "tha-ap536:25.1": "Catuddisā dundubhiyo,",
  "tha-ap536:25.2": "nādayiṁsu amānusā;",
  "tha-ap536:25.3": "Samantato asaniyo,",
  "tha-ap536:25.4": "phaliṁsu ca bhayāvahā.",
  "tha-ap536:26.1": "Ukkā patiṁsu nabhasā,",
  "tha-ap536:26.2": "dhūmaketu ca dissati;",
  "tha-ap536:26.3": "Sadhūmā jālavaṭṭā ca,",
  "tha-ap536:26.4": "raviṁsu karuṇaṁ migā.",
  "tha-ap536:27.1": "Uppāde dāruṇe disvā,",
  "tha-ap536:27.2": "sāsanatthaṅgasūcake;",
  "tha-ap536:27.3": "Saṁviggā bhikkhavo satta,",
  "tha-ap536:27.4": "cintayimha mayaṁ tadā.",
  "tha-ap536:28.1": "‘Sāsanena vināmhākaṁ,",
  "tha-ap536:28.2": "jīvitena alaṁ mayaṁ;",
  "tha-ap536:28.3": "Pavisitvā mahāraññaṁ,",
  "tha-ap536:28.4": "yuñjāma jinasāsanaṁ’.",
  "tha-ap536:29.1": "Addasamha tadāraññe,",
  "tha-ap536:29.2": "ubbiddhaṁ selamuttamaṁ;",
  "tha-ap536:29.3": "Nisseṇiyā tamāruyha,",
  "tha-ap536:29.4": "nisseṇiṁ pātayimhase.",
  "tha-ap536:30.1": "Tadā ovadi no thero,",
  "tha-ap536:30.2": "‘buddhuppādo sudullabho;",
  "tha-ap536:30.3": "Saddhātidullabhā laddhā,",
  "tha-ap536:30.4": "thokaṁ sesañca sāsanaṁ.",
  "tha-ap536:31.1": "Nipatanti khaṇātītā,",
  "tha-ap536:31.2": "anante dukkhasāgare;",
  "tha-ap536:31.3": "Tasmā payogo kattabbo,",
  "tha-ap536:31.4": "yāva ṭhāti mune mataṁ’.",
  "tha-ap536:32.1": "Arahā āsi so thero,",
  "tha-ap536:32.2": "anāgāmī tadānugo;",
  "tha-ap536:32.3": "Susīlā itare yuttā,",
  "tha-ap536:32.4": "devalokaṁ agamhase.",
  "tha-ap536:33.1": "Nibbuto tiṇṇasaṁsāro,",
  "tha-ap536:33.2": "suddhāvāse ca ekako;",
  "tha-ap536:33.3": "Ahañca pakkusāti ca,",
  "tha-ap536:33.4": "sabhiyo bāhiyo tathā.",
  "tha-ap536:34.1": "Kumārakassapo ceva,",
  "tha-ap536:34.2": "tattha tatthūpagā mayaṁ;",
  "tha-ap536:34.3": "Saṁsārabandhanā muttā,",
  "tha-ap536:34.4": "gotamenānukampitā.",
  "tha-ap536:35.1": "Mallesu kusinārāyaṁ,",
  "tha-ap536:35.2": "jāto gabbheva me sato;",
  "tha-ap536:35.3": "Mātā matā citāruḷhā,",
  "tha-ap536:35.4": "tato nippatito ahaṁ.",
  "tha-ap536:36.1": "Patito dabbapuñjamhi,",
  "tha-ap536:36.2": "tato dabboti vissuto;",
  "tha-ap536:36.3": "Brahmacārībalenāhaṁ,",
  "tha-ap536:36.4": "vimutto sattavassiko.",
  "tha-ap536:37.1": "Khīrodanabalenāhaṁ,",
  "tha-ap536:37.2": "pañcahaṅgehupāgato;",
  "tha-ap536:37.3": "Khīṇāsavopavādena,",
  "tha-ap536:37.4": "pāpehi bahucodito.",
  "tha-ap536:38.1": "Ubho puññañca pāpañca,",
  "tha-ap536:38.2": "vītivattomhi dānihaṁ;",
  "tha-ap536:38.3": "Patvāna paramaṁ santiṁ,",
  "tha-ap536:38.4": "viharāmi anāsavo.",
  "tha-ap536:39.1": "Senāsanaṁ paññāpayiṁ,",
  "tha-ap536:39.2": "hāsayitvāna subbate;",
  "tha-ap536:39.3": "Jino tasmiṁ guṇe tuṭṭho,",
  "tha-ap536:39.4": "etadagge ṭhapesi maṁ.",
  "tha-ap536:40.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap536:40.2": "…pe…",
  "tha-ap536:40.3": "viharāmi anāsavo.",
  "tha-ap536:41.1": "Svāgataṁ vata me āsi,",
  "tha-ap536:41.2": "…pe…",
  "tha-ap536:41.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap536:42.1": "Paṭisambhidā catasso,",
  "tha-ap536:42.2": "…pe…",
  "tha-ap536:42.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap536:43.1": "Itthaṁ sudaṁ āyasmā dabbamallaputto thero imā gāthāyo abhāsitthāti.",
  "tha-ap536:44.1": "Dabbamallaputtattherassāpadānaṁ catutthaṁ."
}