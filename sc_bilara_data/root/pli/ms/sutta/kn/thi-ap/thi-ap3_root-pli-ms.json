{
  "thi-ap3:0.1": "Therīapadāna",
  "thi-ap3:0.2": "Sumedhāvagga",
  "thi-ap3:0.3": "3. Maṇḍapadāyikātherīapadāna",
  "thi-ap3:1.1": "“Koṇāgamanabuddhassa,",
  "thi-ap3:1.2": "maṇḍapo kārito mayā;",
  "thi-ap3:1.3": "Dhuvaṁ ticīvaraṁdāsiṁ,",
  "thi-ap3:1.4": "buddhassa lokabandhuno.",
  "thi-ap3:2.1": "Yaṁ yaṁ janapadaṁ yāmi,",
  "thi-ap3:2.2": "nigame rājadhāniyo;",
  "thi-ap3:2.3": "Sabbattha pūjitā homi,",
  "thi-ap3:2.4": "puññakammassidaṁ phalaṁ.",
  "thi-ap3:3.1": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap3:3.2": "…pe…",
  "thi-ap3:3.3": "viharāmi anāsavā.",
  "thi-ap3:4.1": "Svāgataṁ vata me āsi,",
  "thi-ap3:4.2": "…pe…",
  "thi-ap3:4.3": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap3:5.1": "Paṭisambhidā catasso,",
  "thi-ap3:5.2": "…pe…",
  "thi-ap3:5.3": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap3:6.1": "Itthaṁ sudaṁ maṇḍapadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap3:7.1": "Maṇḍapadāyikātheriyāpadānaṁ tatiyaṁ."
}