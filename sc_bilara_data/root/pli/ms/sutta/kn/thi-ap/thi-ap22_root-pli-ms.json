{
  "thi-ap22:0.1": "Therīapadāna",
  "thi-ap22:0.2": "Kuṇḍalakesīvagga",
  "thi-ap22:0.3": "2. Kisāgotamītherīapadāna",
  "thi-ap22:1.1": "“Padumuttaro nāma jino,",
  "thi-ap22:1.2": "sabbadhammāna pāragū;",
  "thi-ap22:1.3": "Ito satasahassamhi,",
  "thi-ap22:1.4": "kappe uppajji nāyako.",
  "thi-ap22:2.1": "Tadāhaṁ haṁsavatiyaṁ,",
  "thi-ap22:2.2": "jātā aññatare kule;",
  "thi-ap22:2.3": "Upetvā taṁ naravaraṁ,",
  "thi-ap22:2.4": "saraṇaṁ samupāgamiṁ.",
  "thi-ap22:3.1": "Dhammañca tassa assosiṁ,",
  "thi-ap22:3.2": "catusaccūpasañhitaṁ;",
  "thi-ap22:3.3": "Madhuraṁ paramassādaṁ,",
  "thi-ap22:3.4": "vaṭṭasantisukhāvahaṁ.",
  "thi-ap22:4.1": "Tadā ca bhikkhuniṁ vīro,",
  "thi-ap22:4.2": "lūkhacīvaradhāriniṁ;",
  "thi-ap22:4.3": "Ṭhapento etadaggamhi,",
  "thi-ap22:4.4": "vaṇṇayī purisuttamo.",
  "thi-ap22:5.1": "Janetvānappakaṁ pītiṁ,",
  "thi-ap22:5.2": "sutvā bhikkhuniyā guṇe;",
  "thi-ap22:5.3": "Kāraṁ katvāna buddhassa,",
  "thi-ap22:5.4": "yathāsatti yathābalaṁ.",
  "thi-ap22:6.1": "Nipacca munivaraṁ taṁ,",
  "thi-ap22:6.2": "taṁ ṭhānamabhipatthayiṁ;",
  "thi-ap22:6.3": "Tadānumodi sambuddho,",
  "thi-ap22:6.4": "ṭhānalābhāya nāyako.",
  "thi-ap22:7.1": "‘Satasahassito kappe,",
  "thi-ap22:7.2": "okkākakulasambhavo;",
  "thi-ap22:7.3": "Gotamo nāma gottena,",
  "thi-ap22:7.4": "satthā loke bhavissati.",
  "thi-ap22:8.1": "Tassa dhammesu dāyādā,",
  "thi-ap22:8.2": "orasā dhammanimmitā;",
  "thi-ap22:8.3": "Kisāgotamī nāmena,",
  "thi-ap22:8.4": "hessati satthu sāvikā’.",
  "thi-ap22:9.1": "Taṁ sutvā muditā hutvā,",
  "thi-ap22:9.2": "yāvajīvaṁ tadā jinaṁ;",
  "thi-ap22:9.3": "Mettacittā paricariṁ,",
  "thi-ap22:9.4": "paccayehi vināyakaṁ.",
  "thi-ap22:10.1": "Tena kammena sukatena,",
  "thi-ap22:10.2": "cetanāpaṇidhīhi ca;",
  "thi-ap22:10.3": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap22:10.4": "tāvatiṁsamagacchahaṁ.",
  "thi-ap22:11.1": "Imamhi bhaddake kappe,",
  "thi-ap22:11.2": "brahmabandhu mahāyaso;",
  "thi-ap22:11.3": "Kassapo nāma gottena,",
  "thi-ap22:11.4": "uppajji vadataṁ varo.",
  "thi-ap22:12.1": "Upaṭṭhāko mahesissa,",
  "thi-ap22:12.2": "tadā āsi narissaro;",
  "thi-ap22:12.3": "Kāsirājā kikī nāma,",
  "thi-ap22:12.4": "bārāṇasipuruttame.",
  "thi-ap22:13.1": "Pañcamī tassa dhītāsiṁ,",
  "thi-ap22:13.2": "dhammā nāmena vissutā;",
  "thi-ap22:13.3": "Dhammaṁ sutvā jinaggassa,",
  "thi-ap22:13.4": "pabbajjaṁ samarocayiṁ.",
  "thi-ap22:14.1": "Anujāni na no tāto,",
  "thi-ap22:14.2": "agāreva tadā mayaṁ;",
  "thi-ap22:14.3": "Vīsavassasahassāni,",
  "thi-ap22:14.4": "vicarimha atanditā.",
  "thi-ap22:15.1": "Komāribrahmacariyaṁ,",
  "thi-ap22:15.2": "rājakaññā sukhedhitā;",
  "thi-ap22:15.3": "Buddhopaṭṭhānaniratā,",
  "thi-ap22:15.4": "muditā satta dhītaro.",
  "thi-ap22:16.1": "Samaṇī samaṇaguttā ca,",
  "thi-ap22:16.2": "bhikkhunī bhikkhudāyikā;",
  "thi-ap22:16.3": "Dhammā ceva sudhammā ca,",
  "thi-ap22:16.4": "sattamī saṅghadāyikā.",
  "thi-ap22:17.1": "Khemā uppalavaṇṇā ca,",
  "thi-ap22:17.2": "paṭācārā ca kuṇḍalā;",
  "thi-ap22:17.3": "Ahañca dhammadinnā ca,",
  "thi-ap22:17.4": "visākhā hoti sattamī.",
  "thi-ap22:18.1": "Tehi kammehi sukatehi,",
  "thi-ap22:18.2": "cetanāpaṇidhīhi ca;",
  "thi-ap22:18.3": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap22:18.4": "tāvatiṁsamagacchahaṁ.",
  "thi-ap22:19.1": "Pacchime ca bhave dāni,",
  "thi-ap22:19.2": "jātā seṭṭhikule ahaṁ;",
  "thi-ap22:19.3": "Duggate adhane naṭṭhe,",
  "thi-ap22:19.4": "gatā ca sadhanaṁ kulaṁ.",
  "thi-ap22:20.1": "Patiṁ ṭhapetvā sesā me,",
  "thi-ap22:20.2": "dessanti adhanā iti;",
  "thi-ap22:20.3": "Yadā ca pasūtā āsiṁ,",
  "thi-ap22:20.4": "sabbesaṁ dayitā tadā.",
  "thi-ap22:21.1": "Yadā so taruṇo bhaddo,",
  "thi-ap22:21.2": "komalako sukhedhito;",
  "thi-ap22:21.3": "Sapāṇamiva kanto me,",
  "thi-ap22:21.4": "tadā yamavasaṁ gato.",
  "thi-ap22:22.1": "Sokaṭṭādīnavadanā,",
  "thi-ap22:22.2": "assunettā rudammukhā;",
  "thi-ap22:22.3": "Mataṁ kuṇapamādāya,",
  "thi-ap22:22.4": "vilapantī gamāmahaṁ.",
  "thi-ap22:23.1": "Tadā ekena sandiṭṭhā,",
  "thi-ap22:23.2": "upetvābhisakkuttamaṁ;",
  "thi-ap22:23.3": "Avocaṁ ‘dehi bhesajjaṁ,",
  "thi-ap22:23.4": "puttasañjīvananti bho’.",
  "thi-ap22:24.1": "‘Na vijjante matā yasmiṁ,",
  "thi-ap22:24.2": "gehe siddhatthakaṁ tato;",
  "thi-ap22:24.3": "Āharā’ti jino āha,",
  "thi-ap22:24.4": "vinayopāyakovido.",
  "thi-ap22:25.1": "Tadā gamitvā sāvatthiṁ,",
  "thi-ap22:25.2": "na labhiṁ tādisaṁ gharaṁ;",
  "thi-ap22:25.3": "Kuto siddhatthakaṁ tasmā,",
  "thi-ap22:25.4": "tato laddhā satiṁ ahaṁ.",
  "thi-ap22:26.1": "Kuṇapaṁ chaḍḍayitvāna,",
  "thi-ap22:26.2": "upesiṁ lokanāyakaṁ;",
  "thi-ap22:26.3": "Dūratova mamaṁ disvā,",
  "thi-ap22:26.4": "avoca madhurassaro.",
  "thi-ap22:27.1": "‘Yo ca vassasataṁ jīve,",
  "thi-ap22:27.2": "apassaṁ udayabbayaṁ;",
  "thi-ap22:27.3": "Ekāhaṁ jīvitaṁ seyyo,",
  "thi-ap22:27.4": "passato udayabbayaṁ.",
  "thi-ap22:28.1": "Na gāmadhammo nigamassa dhammo,",
  "thi-ap22:28.2": "Na cāpiyaṁ ekakulassa dhammo;",
  "thi-ap22:28.3": "Sabbassa lokassa sadevakassa,",
  "thi-ap22:28.4": "Eseva dhammo yadidaṁ aniccatā’.",
  "thi-ap22:29.1": "Sāhaṁ sutvānimā gāthā,",
  "thi-ap22:29.2": "dhammacakkhuṁ visodhayiṁ;",
  "thi-ap22:29.3": "Tato viññātasaddhammā,",
  "thi-ap22:29.4": "pabbajiṁ anagāriyaṁ.",
  "thi-ap22:30.1": "Tathā pabbajitā santī,",
  "thi-ap22:30.2": "yuñjantī jinasāsane;",
  "thi-ap22:30.3": "Na cireneva kālena,",
  "thi-ap22:30.4": "arahattamapāpuṇiṁ.",
  "thi-ap22:31.1": "Iddhīsu ca vasī homi,",
  "thi-ap22:31.2": "dibbāya sotadhātuyā;",
  "thi-ap22:31.3": "Paracittāni jānāmi,",
  "thi-ap22:31.4": "satthusāsanakārikā.",
  "thi-ap22:32.1": "Pubbenivāsaṁ jānāmi,",
  "thi-ap22:32.2": "dibbacakkhu visodhitaṁ;",
  "thi-ap22:32.3": "Khepetvā āsave sabbe,",
  "thi-ap22:32.4": "visuddhāsiṁ sunimmalā.",
  "thi-ap22:33.1": "Pariciṇṇo mayā satthā,",
  "thi-ap22:33.2": "kataṁ buddhassa sāsanaṁ;",
  "thi-ap22:33.3": "Ohito garuko bhāro,",
  "thi-ap22:33.4": "bhavanetti samūhatā.",
  "thi-ap22:34.1": "Yassatthāya pabbajitā,",
  "thi-ap22:34.2": "agārasmānagāriyaṁ;",
  "thi-ap22:34.3": "So me attho anuppatto,",
  "thi-ap22:34.4": "sabbasaṁyojanakkhayo.",
  "thi-ap22:35.1": "Atthadhammaniruttīsu,",
  "thi-ap22:35.2": "paṭibhāne tatheva ca;",
  "thi-ap22:35.3": "Ñāṇaṁ me vimalaṁ suddhaṁ,",
  "thi-ap22:35.4": "buddhaseṭṭhassa vāhasā.",
  "thi-ap22:36.1": "Saṅkārakūṭā āhitvā,",
  "thi-ap22:36.2": "susānā rathiyāpi ca;",
  "thi-ap22:36.3": "Tato saṅghāṭikaṁ katvā,",
  "thi-ap22:36.4": "lūkhaṁ dhāremi cīvaraṁ.",
  "thi-ap22:37.1": "Jino tasmiṁ guṇe tuṭṭho,",
  "thi-ap22:37.2": "lūkhacīvaradhāraṇe;",
  "thi-ap22:37.3": "Ṭhapesi etadaggamhi,",
  "thi-ap22:37.4": "parisāsu vināyako.",
  "thi-ap22:38.1": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap22:38.2": "…pe…",
  "thi-ap22:38.3": "viharāmi anāsavā.",
  "thi-ap22:39.1": "Svāgataṁ vata me āsi,",
  "thi-ap22:39.2": "…pe…",
  "thi-ap22:39.3": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap22:40.1": "Paṭisambhidā catasso,",
  "thi-ap22:40.2": "…pe…",
  "thi-ap22:40.3": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap22:41.1": "Itthaṁ sudaṁ kisāgotamī bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap22:42.1": "Kisāgotamītheriyāpadānaṁ dutiyaṁ."
}