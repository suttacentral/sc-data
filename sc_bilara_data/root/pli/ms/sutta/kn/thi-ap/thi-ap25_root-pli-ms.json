{
  "thi-ap25:0.1": "Therīapadāna",
  "thi-ap25:0.2": "Kuṇḍalakesīvagga",
  "thi-ap25:0.3": "5 Nandātherīapadāna",
  "thi-ap25:1.1": "“Padumuttaro nāma jino,",
  "thi-ap25:1.2": "sabbadhammāna pāragū;",
  "thi-ap25:1.3": "Ito satasahassamhi,",
  "thi-ap25:1.4": "kappe uppajji nāyako.",
  "thi-ap25:2.1": "Ovādako viññāpako,",
  "thi-ap25:2.2": "tārako sabbapāṇinaṁ;",
  "thi-ap25:2.3": "Desanākusalo buddho,",
  "thi-ap25:2.4": "tāresi janataṁ bahuṁ.",
  "thi-ap25:3.1": "Anukampako kāruṇiko,",
  "thi-ap25:3.2": "hitesī sabbapāṇinaṁ;",
  "thi-ap25:3.3": "Sampatte titthiye sabbe,",
  "thi-ap25:3.4": "pañcasīle patiṭṭhapi.",
  "thi-ap25:4.1": "Evaṁ nirākulaṁ āsi,",
  "thi-ap25:4.2": "suññataṁ titthiyehi ca;",
  "thi-ap25:4.3": "Vicittaṁ arahantehi,",
  "thi-ap25:4.4": "vasībhūtehi tādibhi.",
  "thi-ap25:5.1": "Ratanānaṭṭhapaññāsaṁ,",
  "thi-ap25:5.2": "uggatova mahāmuni;",
  "thi-ap25:5.3": "Kañcanagghiyasaṅkāso,",
  "thi-ap25:5.4": "bāttiṁsavaralakkhaṇo.",
  "thi-ap25:6.1": "Vassasatasahassāni,",
  "thi-ap25:6.2": "āyu vijjati tāvade;",
  "thi-ap25:6.3": "Tāvatā tiṭṭhamāno so,",
  "thi-ap25:6.4": "tāresi janataṁ bahuṁ.",
  "thi-ap25:7.1": "Tadāhaṁ haṁsavatiyaṁ,",
  "thi-ap25:7.2": "jātā seṭṭhikule ahuṁ;",
  "thi-ap25:7.3": "Nānāratanapajjote,",
  "thi-ap25:7.4": "mahāsukhasamappitā.",
  "thi-ap25:8.1": "Upetvā taṁ mahāvīraṁ,",
  "thi-ap25:8.2": "assosiṁ dhammadesanaṁ;",
  "thi-ap25:8.3": "Amataṁ paramassādaṁ,",
  "thi-ap25:8.4": "paramatthanivedakaṁ.",
  "thi-ap25:9.1": "Tadā nimantayitvāna,",
  "thi-ap25:9.2": "sasaṅghaṁ lokanāyakaṁ;",
  "thi-ap25:9.3": "Datvā tassa mahādānaṁ,",
  "thi-ap25:9.4": "pasannā sehi pāṇibhi.",
  "thi-ap25:10.1": "Jhāyinīnaṁ bhikkhunīnaṁ,",
  "thi-ap25:10.2": "aggaṭṭhānamapatthayiṁ;",
  "thi-ap25:10.3": "Nipacca sirasā dhīraṁ,",
  "thi-ap25:10.4": "sasaṅghaṁ lokanāyakaṁ.",
  "thi-ap25:11.1": "Tadā adantadamako,",
  "thi-ap25:11.2": "tilokasaraṇo pabhū;",
  "thi-ap25:11.3": "Byākāsi narasārathi,",
  "thi-ap25:11.4": "‘lacchase taṁ supatthitaṁ.",
  "thi-ap25:12.1": "Satasahassito kappe,",
  "thi-ap25:12.2": "okkākakulasambhavo;",
  "thi-ap25:12.3": "Gotamo nāma gottena,",
  "thi-ap25:12.4": "satthā loke bhavissati.",
  "thi-ap25:13.1": "Tassa dhammesu dāyādā,",
  "thi-ap25:13.2": "orasā dhammanimmitā;",
  "thi-ap25:13.3": "Nandāti nāma nāmena,",
  "thi-ap25:13.4": "hessati satthu sāvikā’.",
  "thi-ap25:14.1": "Taṁ sutvā muditā hutvā,",
  "thi-ap25:14.2": "yāvajīvaṁ tadā jinaṁ;",
  "thi-ap25:14.3": "Mettacittā paricariṁ,",
  "thi-ap25:14.4": "paccayehi vināyakaṁ.",
  "thi-ap25:15.1": "Tena kammena sukatena,",
  "thi-ap25:15.2": "cetanāpaṇidhīhi ca;",
  "thi-ap25:15.3": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap25:15.4": "tāvatiṁsamagacchahaṁ.",
  "thi-ap25:16.1": "Tato cutā yāmamagaṁ,",
  "thi-ap25:16.2": "tatohaṁ tusitaṁ gatā;",
  "thi-ap25:16.3": "Tato ca nimmānaratiṁ,",
  "thi-ap25:16.4": "vasavattipuraṁ tato.",
  "thi-ap25:17.1": "Yattha yatthūpapajjāmi,",
  "thi-ap25:17.2": "tassa kammassa vāhasā;",
  "thi-ap25:17.3": "Tattha tattheva rājūnaṁ,",
  "thi-ap25:17.4": "mahesittamakārayiṁ.",
  "thi-ap25:18.1": "Tato cutā manussatte,",
  "thi-ap25:18.2": "rājānaṁ cakkavattinaṁ;",
  "thi-ap25:18.3": "Maṇḍalīnañca rājūnaṁ,",
  "thi-ap25:18.4": "mahesittamakārayiṁ.",
  "thi-ap25:19.1": "Sampattiṁ anubhotvāna,",
  "thi-ap25:19.2": "devesu manujesu ca;",
  "thi-ap25:19.3": "Sabbattha sukhitā hutvā,",
  "thi-ap25:19.4": "nekakappesu saṁsariṁ.",
  "thi-ap25:20.1": "Pacchime bhave sampatte,",
  "thi-ap25:20.2": "suramme kapilavhaye;",
  "thi-ap25:20.3": "Rañño suddhodanassāhaṁ,",
  "thi-ap25:20.4": "dhītā āsiṁ aninditā.",
  "thi-ap25:21.1": "Siriyā rūpiniṁ disvā,",
  "thi-ap25:21.2": "nanditaṁ āsi taṁ kulaṁ;",
  "thi-ap25:21.3": "Tena nandāti me nāmaṁ,",
  "thi-ap25:21.4": "sundaraṁ pavaraṁ ahu.",
  "thi-ap25:22.1": "Yuvatīnañca sabbāsaṁ,",
  "thi-ap25:22.2": "kalyāṇīti ca vissutā;",
  "thi-ap25:22.3": "Tasmimpi nagare ramme,",
  "thi-ap25:22.4": "ṭhapetvā taṁ yasodharaṁ.",
  "thi-ap25:23.1": "Jeṭṭho bhātā tilokaggo,",
  "thi-ap25:23.2": "pacchimo arahā tathā;",
  "thi-ap25:23.3": "Ekākinī gahaṭṭhāhaṁ,",
  "thi-ap25:23.4": "mātarā paricoditā.",
  "thi-ap25:24.1": "‘Sākiyamhi kule jātā,",
  "thi-ap25:24.2": "putte buddhānujā tuvaṁ;",
  "thi-ap25:24.3": "Nandenapi vinā bhūtā,",
  "thi-ap25:24.4": "agāre kiṁ nu acchasi.",
  "thi-ap25:25.1": "Jarāvasānaṁ yobbaññaṁ,",
  "thi-ap25:25.2": "rūpaṁ asucisammataṁ;",
  "thi-ap25:25.3": "Rogantamapicārogyaṁ,",
  "thi-ap25:25.4": "jīvitaṁ maraṇantikaṁ.",
  "thi-ap25:26.1": "Idampi te subhaṁ rūpaṁ,",
  "thi-ap25:26.2": "sasīkantaṁ manoharaṁ;",
  "thi-ap25:26.3": "Bhūsanānaṁ alaṅkāraṁ,",
  "thi-ap25:26.4": "sirisaṅghāṭasannibhaṁ.",
  "thi-ap25:27.1": "Puñjitaṁ lokasāraṁva,",
  "thi-ap25:27.2": "nayanānaṁ rasāyanaṁ;",
  "thi-ap25:27.3": "Puññānaṁ kittijananaṁ,",
  "thi-ap25:27.4": "ukkākakulanandanaṁ.",
  "thi-ap25:28.1": "Na cireneva kālena,",
  "thi-ap25:28.2": "jarā samadhisessati;",
  "thi-ap25:28.3": "Vihāya gehaṁ kāruññe,",
  "thi-ap25:28.4": "cara dhammamanindite’.",
  "thi-ap25:29.1": "Sutvāhaṁ mātu vacanaṁ,",
  "thi-ap25:29.2": "pabbajiṁ anagāriyaṁ;",
  "thi-ap25:29.3": "Dehena na tu cittena,",
  "thi-ap25:29.4": "rūpayobbanalāḷitā.",
  "thi-ap25:30.1": "Mahatā ca payattena,",
  "thi-ap25:30.2": "jhānajjhena paraṁ mama;",
  "thi-ap25:30.3": "Kātuñca vadate mātā,",
  "thi-ap25:30.4": "na cāhaṁ tattha ussukā.",
  "thi-ap25:31.1": "Tato mahākāruṇiko,",
  "thi-ap25:31.2": "disvā maṁ kāmalālasaṁ;",
  "thi-ap25:31.3": "Nibbindanatthaṁ rūpasmiṁ,",
  "thi-ap25:31.4": "mama cakkhupathe jino.",
  "thi-ap25:32.1": "Sakena ānubhāvena,",
  "thi-ap25:32.2": "itthiṁ māpesi sobhiniṁ;",
  "thi-ap25:32.3": "Dassanīyaṁ suruciraṁ,",
  "thi-ap25:32.4": "mamatopi surūpiniṁ.",
  "thi-ap25:33.1": "Tamahaṁ vimhitā disvā,",
  "thi-ap25:33.2": "ativimhitadehiniṁ;",
  "thi-ap25:33.3": "Cintayiṁ ‘saphalaṁ meti,",
  "thi-ap25:33.4": "nettalābhañca mānusaṁ.",
  "thi-ap25:34.1": "Tamahaṁ ehi subhage,",
  "thi-ap25:34.2": "yenattho taṁ vadehi me;",
  "thi-ap25:34.3": "Kulaṁ te nāmagottañca,",
  "thi-ap25:34.4": "vada me yadi te piyaṁ.",
  "thi-ap25:35.1": "Na vañcakālo subhage,",
  "thi-ap25:35.2": "ucchaṅge maṁ nivāsaya;",
  "thi-ap25:35.3": "Sīdantīva mamaṅgāni,",
  "thi-ap25:35.4": "pasuppaya muhuttakaṁ’.",
  "thi-ap25:36.1": "Tato sīsaṁ mamaṅge sā,",
  "thi-ap25:36.2": "katvā sayi sulocanā;",
  "thi-ap25:36.3": "Tassā nalāṭe patitā,",
  "thi-ap25:36.4": "luddhā paramadāruṇā.",
  "thi-ap25:37.1": "Saha tassā nipātena,",
  "thi-ap25:37.2": "piḷakā upapajjatha;",
  "thi-ap25:37.3": "Pagghariṁsu pabhinnā ca,",
  "thi-ap25:37.4": "kuṇapā pubbalohitā.",
  "thi-ap25:38.1": "Pabhinnaṁ vadanañcāpi,",
  "thi-ap25:38.2": "kuṇapaṁ pūtigandhanaṁ;",
  "thi-ap25:38.3": "Uddhumātaṁ vinilañca,",
  "thi-ap25:38.4": "pubbañcāpi sarīrakaṁ.",
  "thi-ap25:39.1": "Sā paveditasabbaṅgī,",
  "thi-ap25:39.2": "nissasantī muhuṁ muhuṁ;",
  "thi-ap25:39.3": "Vedayantī sakaṁ dukkhaṁ,",
  "thi-ap25:39.4": "karuṇaṁ paridevayi.",
  "thi-ap25:40.1": "‘Dukkhena dukkhitā homi,",
  "thi-ap25:40.2": "phusayanti ca vedanā;",
  "thi-ap25:40.3": "Mahādukkhe nimuggamhi,",
  "thi-ap25:40.4": "saraṇaṁ hohi me sakhī.",
  "thi-ap25:41.1": "Kuhiṁ vadanasobhaṁ te,",
  "thi-ap25:41.2": "kuhiṁ te tuṅganāsikā;",
  "thi-ap25:41.3": "Tambabimbavaroṭṭhaṁ te,",
  "thi-ap25:41.4": "vadanaṁ te kuhiṁ gataṁ.",
  "thi-ap25:42.1": "Kuhiṁ sasīnibhaṁ vaṇṇaṁ,",
  "thi-ap25:42.2": "kambugīvā kuhiṁ gatā;",
  "thi-ap25:42.3": "Doḷālolāva te kaṇṇā,",
  "thi-ap25:42.4": "vevaṇṇaṁ samupāgatā.",
  "thi-ap25:43.1": "Makuḷakhārakākārā,",
  "thi-ap25:43.2": "kalikāva payodharā;",
  "thi-ap25:43.3": "Pabhinnā pūtikuṇapā,",
  "thi-ap25:43.4": "duṭṭhagandhittamāgatā.",
  "thi-ap25:44.1": "Vedimajjhāva sussoṇī,",
  "thi-ap25:44.2": "sūnāva nītakibbisā;",
  "thi-ap25:44.3": "Jātā amejjhabharitā,",
  "thi-ap25:44.4": "aho rūpamasassataṁ.",
  "thi-ap25:45.1": "Sabbaṁ sarīrasañjātaṁ,",
  "thi-ap25:45.2": "pūtigandhaṁ bhayānakaṁ;",
  "thi-ap25:45.3": "Susānamiva bībhacchaṁ,",
  "thi-ap25:45.4": "ramante yattha bālisā’.",
  "thi-ap25:46.1": "Tadā mahākāruṇiko,",
  "thi-ap25:46.2": "bhātā me lokanāyako;",
  "thi-ap25:46.3": "Disvā saṁviggacittaṁ maṁ,",
  "thi-ap25:46.4": "imā gāthā abhāsatha.",
  "thi-ap25:47.1": "‘Āturaṁ kuṇapaṁ pūtiṁ,",
  "thi-ap25:47.2": "passa nande samussayaṁ;",
  "thi-ap25:47.3": "Asubhāya cittaṁ bhāvehi,",
  "thi-ap25:47.4": "ekaggaṁ susamāhitaṁ.",
  "thi-ap25:48.1": "Yathā idaṁ tathā etaṁ,",
  "thi-ap25:48.2": "yathā etaṁ tathā idaṁ;",
  "thi-ap25:48.3": "Duggandhaṁ pūtikaṁ vāti,",
  "thi-ap25:48.4": "bālānaṁ abhinanditaṁ.",
  "thi-ap25:49.1": "Evametaṁ avekkhantī,",
  "thi-ap25:49.2": "rattindivamatanditā;",
  "thi-ap25:49.3": "Tato sakāya paññāya,",
  "thi-ap25:49.4": "abhinibbijjha dakkhasi’.",
  "thi-ap25:50.1": "Tatohaṁ atisaṁviggā,",
  "thi-ap25:50.2": "sutvā gāthā subhāsitā;",
  "thi-ap25:50.3": "Tatraṭṭhitāvahaṁ santī,",
  "thi-ap25:50.4": "arahattamapāpuṇiṁ.",
  "thi-ap25:51.1": "Yattha yattha nisinnāhaṁ,",
  "thi-ap25:51.2": "sadā jhānaparāyaṇā;",
  "thi-ap25:51.3": "Jino tasmiṁ guṇe tuṭṭho,",
  "thi-ap25:51.4": "etadagge ṭhapesi maṁ.",
  "thi-ap25:52.1": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap25:52.2": "…pe…",
  "thi-ap25:52.3": "viharāmi anāsavā.",
  "thi-ap25:53.1": "Svāgataṁ vata me āsi,",
  "thi-ap25:53.2": "…pe…",
  "thi-ap25:53.3": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap25:54.1": "Paṭisambhidā catasso,",
  "thi-ap25:54.2": "…pe…",
  "thi-ap25:54.3": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap25:55.1": "Itthaṁ sudaṁ nandā bhikkhunī janapadakalyāṇī imā gāthāyo abhāsitthāti.",
  "thi-ap25:56.1": "Nandātheriyāpadānaṁ pañcamaṁ."
}