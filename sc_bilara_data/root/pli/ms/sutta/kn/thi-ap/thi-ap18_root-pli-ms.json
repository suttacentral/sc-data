{
  "thi-ap18:0.1": "Therīapadāna",
  "thi-ap18:0.2": "Ekūposathikavagga",
  "thi-ap18:0.3": "8. Khemātherīapadāna",
  "thi-ap18:1.1": "“Padumuttaro nāma jino,",
  "thi-ap18:1.2": "sabbadhammesu cakkhumā;",
  "thi-ap18:1.3": "Ito satasahassamhi,",
  "thi-ap18:1.4": "kappe uppajji nāyako.",
  "thi-ap18:2.1": "Tadāhaṁ haṁsavatiyaṁ,",
  "thi-ap18:2.2": "jātā seṭṭhikule ahuṁ;",
  "thi-ap18:2.3": "Nānāratanapajjote,",
  "thi-ap18:2.4": "mahāsukhasamappitā.",
  "thi-ap18:3.1": "Upetvā taṁ mahāvīraṁ,",
  "thi-ap18:3.2": "assosiṁ dhammadesanaṁ;",
  "thi-ap18:3.3": "Tato jātappasādāhaṁ,",
  "thi-ap18:3.4": "upemi saraṇaṁ jinaṁ.",
  "thi-ap18:4.1": "Mātaraṁ pitarañcāhaṁ,",
  "thi-ap18:4.2": "āyācitvā vināyakaṁ;",
  "thi-ap18:4.3": "Nimantayitvā sattāhaṁ,",
  "thi-ap18:4.4": "bhojayiṁ sahasāvakaṁ.",
  "thi-ap18:5.1": "Atikkante ca sattāhe,",
  "thi-ap18:5.2": "mahāpaññānamuttamaṁ;",
  "thi-ap18:5.3": "Bhikkhuniṁ etadaggamhi,",
  "thi-ap18:5.4": "ṭhapesi narasārathi.",
  "thi-ap18:6.1": "Taṁ sutvā muditā hutvā,",
  "thi-ap18:6.2": "puno tassa mahesino;",
  "thi-ap18:6.3": "Kāraṁ katvāna taṁ ṭhānaṁ,",
  "thi-ap18:6.4": "paṇipacca paṇīdahiṁ.",
  "thi-ap18:7.1": "Tato mama jino āha,",
  "thi-ap18:7.2": "‘sijjhataṁ paṇidhī tava;",
  "thi-ap18:7.3": "Sasaṅghe me kataṁ kāraṁ,",
  "thi-ap18:7.4": "appameyyaphalaṁ tayā.",
  "thi-ap18:8.1": "Satasahassito kappe,",
  "thi-ap18:8.2": "okkākakulasambhavo;",
  "thi-ap18:8.3": "Gotamo nāma gottena,",
  "thi-ap18:8.4": "satthā loke bhavissati.",
  "thi-ap18:9.1": "Tassa dhammesu dāyādā,",
  "thi-ap18:9.2": "orasā dhammanimmitā;",
  "thi-ap18:9.3": "Etadaggamanuppattā,",
  "thi-ap18:9.4": "khemā nāma bhavissati’.",
  "thi-ap18:10.1": "Tena kammena sukatena,",
  "thi-ap18:10.2": "cetanāpaṇidhīhi ca;",
  "thi-ap18:10.3": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap18:10.4": "tāvatiṁsūpagā ahaṁ.",
  "thi-ap18:11.1": "Tato cutā yāmamagaṁ,",
  "thi-ap18:11.2": "tatohaṁ tusitaṁ gatā;",
  "thi-ap18:11.3": "Tato ca nimmānaratiṁ,",
  "thi-ap18:11.4": "vasavattipuraṁ tato.",
  "thi-ap18:12.1": "Yattha yatthūpapajjāmi,",
  "thi-ap18:12.2": "tassa kammassa vāhasā;",
  "thi-ap18:12.3": "Tattha tattheva rājūnaṁ,",
  "thi-ap18:12.4": "mahesittamakārayiṁ.",
  "thi-ap18:13.1": "Tato cutā manussatte,",
  "thi-ap18:13.2": "rājūnaṁ cakkavattinaṁ;",
  "thi-ap18:13.3": "Maṇḍalīnañca rājūnaṁ,",
  "thi-ap18:13.4": "mahesittamakārayiṁ.",
  "thi-ap18:14.1": "Sampattiṁ anubhotvāna,",
  "thi-ap18:14.2": "devesu manujesu ca;",
  "thi-ap18:14.3": "Sabbattha sukhitā hutvā,",
  "thi-ap18:14.4": "nekakappesu saṁsariṁ.",
  "thi-ap18:15.1": "Ekanavutito kappe,",
  "thi-ap18:15.2": "vipassī lokanāyako;",
  "thi-ap18:15.3": "Uppajji cārudassano,",
  "thi-ap18:15.4": "sabbadhammavipassako.",
  "thi-ap18:16.1": "Tamahaṁ lokanāyakaṁ,",
  "thi-ap18:16.2": "upetvā narasārathiṁ;",
  "thi-ap18:16.3": "Dhammaṁ bhaṇitaṁ sutvāna,",
  "thi-ap18:16.4": "pabbajiṁ anagāriyaṁ.",
  "thi-ap18:17.1": "Dasavassasahassāni,",
  "thi-ap18:17.2": "tassa vīrassa sāsane;",
  "thi-ap18:17.3": "Brahmacariyaṁ caritvāna,",
  "thi-ap18:17.4": "yuttayogā bahussutā.",
  "thi-ap18:18.1": "Paccayākārakusalā,",
  "thi-ap18:18.2": "catusaccavisāradā;",
  "thi-ap18:18.3": "Nipuṇā cittakathikā,",
  "thi-ap18:18.4": "satthusāsanakārikā.",
  "thi-ap18:19.1": "Tato cutāhaṁ tusitaṁ,",
  "thi-ap18:19.2": "upapannā yasassinī;",
  "thi-ap18:19.3": "Abhibhomi tahiṁ aññe,",
  "thi-ap18:19.4": "brahmacārīphalenahaṁ.",
  "thi-ap18:20.1": "Yattha yatthūpapannāhaṁ,",
  "thi-ap18:20.2": "mahābhogā mahaddhanā;",
  "thi-ap18:20.3": "Medhāvinī rūpavatī,",
  "thi-ap18:20.4": "vinītaparisāpi ca.",
  "thi-ap18:21.1": "Bhavāmi tena kammena,",
  "thi-ap18:21.2": "yogena jinasāsane;",
  "thi-ap18:21.3": "Sabbā sampattiyo mayhaṁ,",
  "thi-ap18:21.4": "sulabhā manaso piyā.",
  "thi-ap18:22.1": "Yopi me bhavate bhattā,",
  "thi-ap18:22.2": "yattha yattha gatāyapi;",
  "thi-ap18:22.3": "Vimāneti na maṁ koci,",
  "thi-ap18:22.4": "paṭipattibalena me.",
  "thi-ap18:23.1": "Imamhi bhaddake kappe,",
  "thi-ap18:23.2": "brahmabandhu mahāyaso;",
  "thi-ap18:23.3": "Nāmena koṇāgamano,",
  "thi-ap18:23.4": "uppajji vadataṁ varo.",
  "thi-ap18:24.1": "Tadā hi bārāṇasiyaṁ,",
  "thi-ap18:24.2": "susamiddhakulappajā;",
  "thi-ap18:24.3": "Dhanañjānī sumedhā ca,",
  "thi-ap18:24.4": "ahampi ca tayo janā.",
  "thi-ap18:25.1": "Saṅghārāmamadāsimha,",
  "thi-ap18:25.2": "dānasahāyikā pure;",
  "thi-ap18:25.3": "Saṅghassa ca vihārampi,",
  "thi-ap18:25.4": "uddissa kārikā mayaṁ.",
  "thi-ap18:26.1": "Tato cutā mayaṁ sabbā,",
  "thi-ap18:26.2": "tāvatiṁsūpagā ahuṁ;",
  "thi-ap18:26.3": "Yasasā aggataṁ pattā,",
  "thi-ap18:26.4": "manussesu tatheva ca.",
  "thi-ap18:27.1": "Imasmiṁyeva kappamhi,",
  "thi-ap18:27.2": "brahmabandhu mahāyaso;",
  "thi-ap18:27.3": "Kassapo nāma gottena,",
  "thi-ap18:27.4": "uppajji vadataṁ varo.",
  "thi-ap18:28.1": "Upaṭṭhāko mahesissa,",
  "thi-ap18:28.2": "tadā āsi narissaro;",
  "thi-ap18:28.3": "Kāsirājā kikī nāma,",
  "thi-ap18:28.4": "bārāṇasipuruttame.",
  "thi-ap18:29.1": "Tassāsiṁ jeṭṭhikā dhītā,",
  "thi-ap18:29.2": "samaṇī iti vissutā;",
  "thi-ap18:29.3": "Dhammaṁ sutvā jinaggassa,",
  "thi-ap18:29.4": "pabbajjaṁ samarocayiṁ.",
  "thi-ap18:30.1": "Anujāni na no tāto,",
  "thi-ap18:30.2": "agāreva tadā mayaṁ;",
  "thi-ap18:30.3": "Vīsavassasahassāni,",
  "thi-ap18:30.4": "vicarimha atanditā.",
  "thi-ap18:31.1": "Komāribrahmacariyaṁ,",
  "thi-ap18:31.2": "rājakaññā sukhedhitā;",
  "thi-ap18:31.3": "Buddhopaṭṭhānaniratā,",
  "thi-ap18:31.4": "muditā satta dhītaro.",
  "thi-ap18:32.1": "Samaṇī samaṇaguttā ca,",
  "thi-ap18:32.2": "bhikkhunī bhikkhudāyikā;",
  "thi-ap18:32.3": "Dhammā ceva sudhammā ca,",
  "thi-ap18:32.4": "sattamī saṅghadāyikā.",
  "thi-ap18:33.1": "Ahaṁ uppalavaṇṇā ca,",
  "thi-ap18:33.2": "paṭācārā ca kuṇḍalā;",
  "thi-ap18:33.3": "Kisāgotamī dhammadinnā,",
  "thi-ap18:33.4": "visākhā hoti sattamī.",
  "thi-ap18:34.1": "Kadāci so narādicco,",
  "thi-ap18:34.2": "dhammaṁ desesi abbhutaṁ;",
  "thi-ap18:34.3": "Mahānidānasuttantaṁ,",
  "thi-ap18:34.4": "sutvā taṁ pariyāpuṇiṁ.",
  "thi-ap18:35.1": "Tehi kammehi sukatehi,",
  "thi-ap18:35.2": "cetanāpaṇidhīhi ca;",
  "thi-ap18:35.3": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap18:35.4": "tāvatiṁsamagacchahaṁ.",
  "thi-ap18:36.1": "Pacchime ca bhave dāni,",
  "thi-ap18:36.2": "sākalāya puruttame;",
  "thi-ap18:36.3": "Rañño maddassa dhītāmhi,",
  "thi-ap18:36.4": "manāpā dayitā piyā.",
  "thi-ap18:37.1": "Saha me jātamattamhi,",
  "thi-ap18:37.2": "khemaṁ tamhi pure ahu;",
  "thi-ap18:37.3": "Tato khemāti nāmaṁ me,",
  "thi-ap18:37.4": "guṇato upapajjatha.",
  "thi-ap18:38.1": "Yadāhaṁ yobbanaṁ pattā,",
  "thi-ap18:38.2": "rūpalāvaññabhūsitā;",
  "thi-ap18:38.3": "Tadā adāsi maṁ tāto,",
  "thi-ap18:38.4": "bimbisārassa rājino.",
  "thi-ap18:39.1": "Tassāhaṁ suppiyā āsiṁ,",
  "thi-ap18:39.2": "rūpake lāyane ratā;",
  "thi-ap18:39.3": "Rūpānaṁ dosavādīti,",
  "thi-ap18:39.4": "na upesiṁ mahādayaṁ.",
  "thi-ap18:40.1": "Bimbisāro tadā rājā,",
  "thi-ap18:40.2": "mamānuggahabuddhiyā;",
  "thi-ap18:40.3": "Vaṇṇayitvā veḷuvanaṁ,",
  "thi-ap18:40.4": "gāyake gāpayī mamaṁ.",
  "thi-ap18:41.1": "Rammaṁ veḷuvanaṁ yena,",
  "thi-ap18:41.2": "na diṭṭhaṁ sugatālayaṁ;",
  "thi-ap18:41.3": "Na tena nandanaṁ diṭṭhaṁ,",
  "thi-ap18:41.4": "iti maññāmase mayaṁ.",
  "thi-ap18:42.1": "Yena veḷuvanaṁ diṭṭhaṁ,",
  "thi-ap18:42.2": "naranandananandanaṁ;",
  "thi-ap18:42.3": "Sudiṭṭhaṁ nandanaṁ tena,",
  "thi-ap18:42.4": "amarindasunandanaṁ.",
  "thi-ap18:43.1": "Vihāya nandanaṁ devā,",
  "thi-ap18:43.2": "otaritvā mahītalaṁ;",
  "thi-ap18:43.3": "Rammaṁ veḷuvanaṁ disvā,",
  "thi-ap18:43.4": "na tappanti suvimhitā.",
  "thi-ap18:44.1": "Rājapuññena nibbattaṁ,",
  "thi-ap18:44.2": "buddhapuññena bhūsitaṁ;",
  "thi-ap18:44.3": "Ko vattā tassa nissesaṁ,",
  "thi-ap18:44.4": "vanassa guṇasañcayaṁ.",
  "thi-ap18:45.1": "Taṁ sutvā vanasamiddhaṁ,",
  "thi-ap18:45.2": "mama sotamanoharaṁ;",
  "thi-ap18:45.3": "Daṭṭhukāmā tamuyyānaṁ,",
  "thi-ap18:45.4": "rañño ārocayiṁ tadā.",
  "thi-ap18:46.1": "Mahatā parivārena,",
  "thi-ap18:46.2": "tadā ca so mahīpati;",
  "thi-ap18:46.3": "Maṁ pesesi tamuyyānaṁ,",
  "thi-ap18:46.4": "dassanāya samussukaṁ.",
  "thi-ap18:47.1": "‘Gaccha passa mahābhoge,",
  "thi-ap18:47.2": "vanaṁ nettarasāyanaṁ;",
  "thi-ap18:47.3": "Yaṁ sadā bhāti siriyā,",
  "thi-ap18:47.4": "sugatābhānurañjitaṁ’.",
  "thi-ap18:48.1": "‘Yadā ca piṇḍāya muni,",
  "thi-ap18:48.2": "giribbajapuruttamaṁ;",
  "thi-ap18:48.3": "Paviṭṭhohaṁ tadāyeva,",
  "thi-ap18:48.4": "vanaṁ daṭṭhumupāgamiṁ’.",
  "thi-ap18:49.1": "Tadā taṁ phullavipinaṁ,",
  "thi-ap18:49.2": "nānābhamarakūjitaṁ;",
  "thi-ap18:49.3": "Kokilāgītasahitaṁ,",
  "thi-ap18:49.4": "mayūragaṇanaccitaṁ.",
  "thi-ap18:50.1": "Appasaddamanākiṇṇaṁ,",
  "thi-ap18:50.2": "nānācaṅkamabhūsitaṁ;",
  "thi-ap18:50.3": "Kuṭimaṇḍapasaṅkiṇṇaṁ,",
  "thi-ap18:50.4": "yogīvaravirājitaṁ.",
  "thi-ap18:51.1": "Vicarantī amaññissaṁ,",
  "thi-ap18:51.2": "‘saphalaṁ nayanaṁ mama’;",
  "thi-ap18:51.3": "Tatthāpi taruṇaṁ bhikkhuṁ,",
  "thi-ap18:51.4": "yuttaṁ disvā vicintayiṁ.",
  "thi-ap18:52.1": "‘Īdise vipine ramme,",
  "thi-ap18:52.2": "ṭhitoyaṁ navayobbane;",
  "thi-ap18:52.3": "Vasantamiva kantena,",
  "thi-ap18:52.4": "rūpena ca samanvito.",
  "thi-ap18:53.1": "Nisinno rukkhamūlamhi,",
  "thi-ap18:53.2": "muṇḍo saṅghāṭipāruto;",
  "thi-ap18:53.3": "Jhāyate vatayaṁ bhikkhu,",
  "thi-ap18:53.4": "hitvā visayajaṁ ratiṁ.",
  "thi-ap18:54.1": "Nanu nāma gahaṭṭhena,",
  "thi-ap18:54.2": "kāmaṁ bhutvā yathāsukhaṁ;",
  "thi-ap18:54.3": "Pacchā jiṇṇena dhammoyaṁ,",
  "thi-ap18:54.4": "caritabbo subhaddako’.",
  "thi-ap18:55.1": "‘Suññakan’ti viditvāna,",
  "thi-ap18:55.2": "‘gandhagehaṁ jinālayaṁ’;",
  "thi-ap18:55.3": "Upetvā jinamaddakkhaṁ,",
  "thi-ap18:55.4": "udayantaṁva bhākaraṁ.",
  "thi-ap18:56.1": "Ekakaṁ sukhamāsīnaṁ,",
  "thi-ap18:56.2": "bījamānaṁ varitthiyā;",
  "thi-ap18:56.3": "Disvānevaṁ vicintesiṁ,",
  "thi-ap18:56.4": "‘nāyaṁ lūkho narāsabho.",
  "thi-ap18:57.1": "Sā kaññā kanakābhāsā,",
  "thi-ap18:57.2": "padumānanalocanā;",
  "thi-ap18:57.3": "Bimboṭṭhī kundadasanā,",
  "thi-ap18:57.4": "manonettarasāyanā.",
  "thi-ap18:58.1": "Hemadolābhasavanā,",
  "thi-ap18:58.2": "kalikākārasutthanī;",
  "thi-ap18:58.3": "Vedimajjhāva sussoṇī,",
  "thi-ap18:58.4": "rambhoru cārubhūsanā.",
  "thi-ap18:59.1": "Rattaṁsakupasambyānā,",
  "thi-ap18:59.2": "nīlamaṭṭhanivāsanā;",
  "thi-ap18:59.3": "Atappaneyyarūpena,",
  "thi-ap18:59.4": "hāsabhāvasamanvitā’.",
  "thi-ap18:60.1": "Disvā tamevaṁ cintesiṁ,",
  "thi-ap18:60.2": "‘ahoyamabhirūpinī;",
  "thi-ap18:60.3": "Na mayānena nettena,",
  "thi-ap18:60.4": "diṭṭhapubbā kudācanaṁ’.",
  "thi-ap18:61.1": "Tato jarābhibhūtā sā,",
  "thi-ap18:61.2": "vivaṇṇā vikatānanā;",
  "thi-ap18:61.3": "Bhinnadantā setasirā,",
  "thi-ap18:61.4": "salālā vadanāsuci.",
  "thi-ap18:62.1": "Saṅkhittakaṇṇā setakkhī,",
  "thi-ap18:62.2": "lambāsubhapayodharā;",
  "thi-ap18:62.3": "Valivitatasabbaṅgī,",
  "thi-ap18:62.4": "sirāvitatadehinī.",
  "thi-ap18:63.1": "Nataṅgā daṇḍadutiyā,",
  "thi-ap18:63.2": "upphāsulikatā kisā;",
  "thi-ap18:63.3": "Pavedhamānā patitā,",
  "thi-ap18:63.4": "nissasantī muhuṁ muhuṁ.",
  "thi-ap18:64.1": "Tato me āsi saṁvego,",
  "thi-ap18:64.2": "abbhuto lomahaṁsano;",
  "thi-ap18:64.3": "‘Dhiratthu rūpaṁ asuciṁ,",
  "thi-ap18:64.4": "ramante yattha bālisā’.",
  "thi-ap18:65.1": "Tadā mahākāruṇiko,",
  "thi-ap18:65.2": "disvā saṁviggamānasaṁ;",
  "thi-ap18:65.3": "Udaggacitto sugato,",
  "thi-ap18:65.4": "imā gāthā abhāsatha.",
  "thi-ap18:66.1": "‘Āturaṁ asuciṁ pūtiṁ,",
  "thi-ap18:66.2": "passa kheme samussayaṁ;",
  "thi-ap18:66.3": "Uggharantaṁ paggharantaṁ,",
  "thi-ap18:66.4": "bālānaṁ abhinanditaṁ.",
  "thi-ap18:67.1": "Asubhāya cittaṁ bhāvehi,",
  "thi-ap18:67.2": "ekaggaṁ susamāhitaṁ;",
  "thi-ap18:67.3": "Sati kāyagatā tyatthu,",
  "thi-ap18:67.4": "nibbidā bahulā bhava.",
  "thi-ap18:68.1": "Yathā idaṁ tathā etaṁ,",
  "thi-ap18:68.2": "yathā etaṁ tathā idaṁ;",
  "thi-ap18:68.3": "Ajjhattañca bahiddhā ca,",
  "thi-ap18:68.4": "kāye chandaṁ virājaya.",
  "thi-ap18:69.1": "Animittañca bhāvehi,",
  "thi-ap18:69.2": "mānānusayamujjaha;",
  "thi-ap18:69.3": "Tato mānābhisamayā,",
  "thi-ap18:69.4": "upasantā carissasi.",
  "thi-ap18:70.1": "Ye rāgarattānupatanti sotaṁ,",
  "thi-ap18:70.2": "Sayaṁ kataṁ makkaṭakova jālaṁ;",
  "thi-ap18:70.3": "Etampi chetvāna paribbajanti,",
  "thi-ap18:70.4": "Anapekkhino kāmasukhaṁ pahāya’.",
  "thi-ap18:71.1": "Tato kallitacittaṁ maṁ,",
  "thi-ap18:71.2": "ñatvāna narasārathi;",
  "thi-ap18:71.3": "Mahānidānaṁ desesi,",
  "thi-ap18:71.4": "suttantaṁ vinayāya me.",
  "thi-ap18:72.1": "Sutvā suttantaseṭṭhaṁ taṁ,",
  "thi-ap18:72.2": "pubbasaññamanussariṁ;",
  "thi-ap18:72.3": "Tattha ṭhitāvahaṁ santī,",
  "thi-ap18:72.4": "dhammacakkhuṁ visodhayiṁ.",
  "thi-ap18:73.1": "Nipatitvā mahesissa,",
  "thi-ap18:73.2": "pādamūlamhi tāvade;",
  "thi-ap18:73.3": "Accayaṁ desanatthāya,",
  "thi-ap18:73.4": "idaṁ vacanamabraviṁ.",
  "thi-ap18:74.1": "‘Namo te sabbadassāvī,",
  "thi-ap18:74.2": "namo te karuṇākara;",
  "thi-ap18:74.3": "Namo te tiṇṇasaṁsāra,",
  "thi-ap18:74.4": "namo te amataṁdada.",
  "thi-ap18:75.1": "Diṭṭhigahanapakkhandā,",
  "thi-ap18:75.2": "kāmarāgavimohitā;",
  "thi-ap18:75.3": "Tayā sammā upāyena,",
  "thi-ap18:75.4": "vinītā vinaye ratā.",
  "thi-ap18:76.1": "Adassanena vibhogā,",
  "thi-ap18:76.2": "tādisānaṁ mahesinaṁ;",
  "thi-ap18:76.3": "Anubhonti mahādukkhaṁ,",
  "thi-ap18:76.4": "sattā saṁsārasāgare.",
  "thi-ap18:77.1": "Yadāhaṁ lokasaraṇaṁ,",
  "thi-ap18:77.2": "araṇaṁ araṇantaguṁ;",
  "thi-ap18:77.3": "Nāddasāmi adūraṭṭhaṁ,",
  "thi-ap18:77.4": "desayāmi tamaccayaṁ.",
  "thi-ap18:78.1": "Mahāhitaṁ varadadaṁ,",
  "thi-ap18:78.2": "ahitoti visaṅkitā;",
  "thi-ap18:78.3": "Nopesiṁ rūpaniratā,",
  "thi-ap18:78.4": "desayāmi tamaccayaṁ’.",
  "thi-ap18:79.1": "Tadā madhuranigghoso,",
  "thi-ap18:79.2": "mahākāruṇiko jino;",
  "thi-ap18:79.3": "Avoca tiṭṭha khemeti,",
  "thi-ap18:79.4": "siñcanto amatena maṁ.",
  "thi-ap18:80.1": "Tadā paṇamya sirasā,",
  "thi-ap18:80.2": "katvā ca naṁ padakkhiṇaṁ;",
  "thi-ap18:80.3": "Gantvā disvā narapatiṁ,",
  "thi-ap18:80.4": "idaṁ vacanamabraviṁ.",
  "thi-ap18:81.1": "‘Aho sammā upāyo te,",
  "thi-ap18:81.2": "cintitoyamarindama;",
  "thi-ap18:81.3": "Vanadassanakāmāya,",
  "thi-ap18:81.4": "diṭṭho nibbānato muni.",
  "thi-ap18:82.1": "Yadi te ruccate rāja,",
  "thi-ap18:82.2": "sāsane tassa tādino;",
  "thi-ap18:82.3": "Pabbajissāmi rūpehaṁ,",
  "thi-ap18:82.4": "nibbinnā munivāṇinā’.",
  "thi-ap18:83.1": "Dutiyaṁ bhāṇavāraṁ.",
  "thi-ap18:84.1": "Añjaliṁ paggahetvāna,",
  "thi-ap18:84.2": "tadāha sa mahīpati;",
  "thi-ap18:84.3": "‘Anujānāmi te bhadde,",
  "thi-ap18:84.4": "pabbajjā tava sijjhatu’.",
  "thi-ap18:85.1": "Pabbajitvā tadā cāhaṁ,",
  "thi-ap18:85.2": "addhamāse upaṭṭhite;",
  "thi-ap18:85.3": "Dīpodayañca bhedañca,",
  "thi-ap18:85.4": "disvā saṁviggamānasā.",
  "thi-ap18:86.1": "Nibbinnā sabbasaṅkhāre,",
  "thi-ap18:86.2": "paccayākārakovidā;",
  "thi-ap18:86.3": "Caturoghe atikkamma,",
  "thi-ap18:86.4": "arahattamapāpuṇiṁ.",
  "thi-ap18:87.1": "Iddhīsu ca vasī āsiṁ,",
  "thi-ap18:87.2": "dibbāya sotadhātuyā;",
  "thi-ap18:87.3": "Cetopariyañāṇassa,",
  "thi-ap18:87.4": "vasī cāpi bhavāmahaṁ.",
  "thi-ap18:88.1": "Pubbenivāsaṁ jānāmi,",
  "thi-ap18:88.2": "dibbacakkhu visodhitaṁ;",
  "thi-ap18:88.3": "Sabbāsavā parikkhīṇā,",
  "thi-ap18:88.4": "natthi dāni punabbhavo.",
  "thi-ap18:89.1": "Atthadhammaniruttīsu,",
  "thi-ap18:89.2": "paṭibhāne tatheva ca;",
  "thi-ap18:89.3": "Parisuddhaṁ mama ñāṇaṁ,",
  "thi-ap18:89.4": "uppannaṁ buddhasāsane.",
  "thi-ap18:90.1": "Kusalāhaṁ visuddhīsu,",
  "thi-ap18:90.2": "kathāvatthuvisāradā;",
  "thi-ap18:90.3": "Abhidhammanayaññū ca,",
  "thi-ap18:90.4": "vasippattāmhi sāsane.",
  "thi-ap18:91.1": "Tato toraṇavatthusmiṁ,",
  "thi-ap18:91.2": "raññā kosalasāminā;",
  "thi-ap18:91.3": "Pucchitā nipuṇe pañhe,",
  "thi-ap18:91.4": "byākarontī yathātathaṁ.",
  "thi-ap18:92.1": "Tadā sa rājā sugataṁ,",
  "thi-ap18:92.2": "upasaṅkamma pucchatha;",
  "thi-ap18:92.3": "Tatheva buddho byākāsi,",
  "thi-ap18:92.4": "yathā te byākatā mayā.",
  "thi-ap18:93.1": "Jino tasmiṁ guṇe tuṭṭho,",
  "thi-ap18:93.2": "etadagge ṭhapesi maṁ;",
  "thi-ap18:93.3": "Mahāpaññānamaggāti,",
  "thi-ap18:93.4": "bhikkhunīnaṁ naruttamo.",
  "thi-ap18:94.1": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap18:94.2": "…pe…",
  "thi-ap18:94.3": "viharāmi anāsavā.",
  "thi-ap18:95.1": "Svāgataṁ vata me āsi,",
  "thi-ap18:95.2": "…pe…",
  "thi-ap18:95.3": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap18:96.1": "Paṭisambhidā catasso,",
  "thi-ap18:96.2": "…pe…",
  "thi-ap18:96.3": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap18:97.1": "Itthaṁ sudaṁ khemā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap18:98.1": "Khemātheriyāpadānaṁ aṭṭhamaṁ."
}