{
  "thi-ap38:0.1": "Therīapadāna",
  "thi-ap38:0.2": "Khattiyāvagga",
  "thi-ap38:0.3": "8 Puṇṇikātherīapadāna",
  "thi-ap38:1.1": "“Vipassino bhagavato,",
  "thi-ap38:1.2": "sikhino vessabhussa ca;",
  "thi-ap38:1.3": "Kakusandhassa munino,",
  "thi-ap38:1.4": "koṇāgamanatādino.",
  "thi-ap38:2.1": "Kassapassa ca buddhassa,",
  "thi-ap38:2.2": "pabbajitvāna sāsane;",
  "thi-ap38:2.3": "Bhikkhunī sīlasampannā,",
  "thi-ap38:2.4": "nipakā saṁvutindriyā.",
  "thi-ap38:3.1": "Bahussutā dhammadharā,",
  "thi-ap38:3.2": "dhammatthapaṭipucchikā;",
  "thi-ap38:3.3": "Uggahetā ca dhammānaṁ,",
  "thi-ap38:3.4": "sotā payirupāsitā.",
  "thi-ap38:4.1": "Desentī janamajjhehaṁ,",
  "thi-ap38:4.2": "ahosiṁ jinasāsane;",
  "thi-ap38:4.3": "Bāhusaccena tenāhaṁ,",
  "thi-ap38:4.4": "pesalā atimaññisaṁ.",
  "thi-ap38:5.1": "Pacchime ca bhave dāni,",
  "thi-ap38:5.2": "sāvatthiyaṁ puruttame;",
  "thi-ap38:5.3": "Anāthapiṇḍino gehe,",
  "thi-ap38:5.4": "jātāhaṁ kumbhadāsiyā.",
  "thi-ap38:6.1": "Gatā udakahāriyaṁ,",
  "thi-ap38:6.2": "sotthiyaṁ dijamaddasaṁ;",
  "thi-ap38:6.3": "Sītaṭṭaṁ toyamajjhamhi,",
  "thi-ap38:6.4": "taṁ disvā idamabraviṁ.",
  "thi-ap38:7.1": "‘Udahārī ahaṁ sīte,",
  "thi-ap38:7.2": "sadā udakamotariṁ;",
  "thi-ap38:7.3": "Ayyānaṁ daṇḍabhayabhītā,",
  "thi-ap38:7.4": "vācādosabhayaṭṭitā.",
  "thi-ap38:8.1": "Kassa brāhmaṇa tvaṁ bhīto,",
  "thi-ap38:8.2": "sadā udakamotari;",
  "thi-ap38:8.3": "Vedhamānehi gattehi,",
  "thi-ap38:8.4": "sītaṁ vedayase bhusaṁ’.",
  "thi-ap38:9.1": "‘Jānantī vata maṁ bhoti,",
  "thi-ap38:9.2": "puṇṇike paripucchasi;",
  "thi-ap38:9.3": "Karontaṁ kusalaṁ kammaṁ,",
  "thi-ap38:9.4": "rundhantaṁ katapāpakaṁ.",
  "thi-ap38:10.1": "Yo ce vuḍḍho daharo vā,",
  "thi-ap38:10.2": "pāpakammaṁ pakubbati;",
  "thi-ap38:10.3": "Dakābhisiñcanā sopi,",
  "thi-ap38:10.4": "pāpakammā pamuccati’.",
  "thi-ap38:11.1": "Uttarantassa akkhāsiṁ,",
  "thi-ap38:11.2": "dhammatthasaṁhitaṁ padaṁ;",
  "thi-ap38:11.3": "Tañca sutvā sa saṁviggo,",
  "thi-ap38:11.4": "pabbajitvārahā ahu.",
  "thi-ap38:12.1": "Pūrentī ūnakasataṁ,",
  "thi-ap38:12.2": "jātā dāsikule yato;",
  "thi-ap38:12.3": "Tato puṇṇāti nāmaṁ me,",
  "thi-ap38:12.4": "bhujissaṁ maṁ akaṁsu te.",
  "thi-ap38:13.1": "Seṭṭhiṁ tatonujānetvā,",
  "thi-ap38:13.2": "pabbajiṁ anagāriyaṁ;",
  "thi-ap38:13.3": "Na cireneva kālena,",
  "thi-ap38:13.4": "arahattamapāpuṇiṁ.",
  "thi-ap38:14.1": "Iddhīsu ca vasī homi,",
  "thi-ap38:14.2": "dibbāya sotadhātuyā;",
  "thi-ap38:14.3": "Cetopariyañāṇassa,",
  "thi-ap38:14.4": "vasī homi mahāmune.",
  "thi-ap38:15.1": "Pubbenivāsaṁ jānāmi,",
  "thi-ap38:15.2": "dibbacakkhu visodhitaṁ;",
  "thi-ap38:15.3": "Sabbāsavā parikkhīṇā,",
  "thi-ap38:15.4": "natthi dāni punabbhavo.",
  "thi-ap38:16.1": "Atthadhammaniruttīsu,",
  "thi-ap38:16.2": "paṭibhāne tatheva ca;",
  "thi-ap38:16.3": "Ñāṇaṁ me vimalaṁ suddhaṁ,",
  "thi-ap38:16.4": "buddhaseṭṭhassa vāhasā.",
  "thi-ap38:17.1": "Bhāvanāya mahāpaññā,",
  "thi-ap38:17.2": "suteneva sutāvinī;",
  "thi-ap38:17.3": "Mānena nīcakulajā,",
  "thi-ap38:17.4": "na hi kammaṁ vinassati.",
  "thi-ap38:18.1": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap38:18.2": "…pe…",
  "thi-ap38:18.3": "viharāmi anāsavā.",
  "thi-ap38:19.1": "Svāgataṁ vata me āsi,",
  "thi-ap38:19.2": "…pe…",
  "thi-ap38:19.3": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap38:20.1": "Paṭisambhidā catasso,",
  "thi-ap38:20.2": "…pe…",
  "thi-ap38:20.3": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap38:21.1": "Itthaṁ sudaṁ puṇṇikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap38:22.1": "Puṇṇikātheriyāpadānaṁ aṭṭhamaṁ."
}