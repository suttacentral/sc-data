{
  "thag3.7:0.1": "Verses of the Senior Monks",
  "thag3.7:0.2": "The Book of the Threes",
  "thag3.7:0.3": "Chapter One",
  "thag3.7:0.4": "3.7. Vāraṇa",
  "thag3.7:1.1": "Anyone among men",
  "thag3.7:1.2": "who harms other creatures:",
  "thag3.7:1.3": "that person will fall",
  "thag3.7:1.4": "both from this world and the next.",
  "thag3.7:2.1": "But someone with a mind of love,",
  "thag3.7:2.2": "compassionate for all creatures:",
  "thag3.7:2.3": "a person like that",
  "thag3.7:2.4": "makes much merit.",
  "thag3.7:3.1": "One should train in following good advice,",
  "thag3.7:3.2": "in attending closely to ascetics,",
  "thag3.7:3.3": "in sitting alone in hidden places,",
  "thag3.7:3.4": "and in calming the mind."
}