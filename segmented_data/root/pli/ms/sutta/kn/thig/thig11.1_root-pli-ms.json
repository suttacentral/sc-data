{
  "thig11.1:0.1": "Therīgāthā",
  "thig11.1:0.2": "Dvādasakanipāta",
  "thig11.1:0.3": "1. Uppalavaṇṇātherīgāthā",
  "thig11.1:1.1": "“Ubho mātā ca dhītā ca,",
  "thig11.1:1.2": "mayaṃ āsuṃ sapattiyo;",
  "thig11.1:1.3": "Tassā me ahu saṃvego,",
  "thig11.1:1.4": "abbhuto lomahaṃsano.",
  "thig11.1:2.1": "Dhiratthu kāmā asucī,",
  "thig11.1:2.2": "duggandhā bahukaṇṭakā;",
  "thig11.1:2.3": "Yattha mātā ca dhītā ca,",
  "thig11.1:2.4": "sabhariyā mayaṃ ahuṃ.",
  "thig11.1:3.1": "Kāmesvādīnavaṃ disvā,",
  "thig11.1:3.2": "nekkhammaṃ daṭṭhu khemato;",
  "thig11.1:3.3": "Sā pabbajjiṃ rājagahe,",
  "thig11.1:3.4": "agārasmānagāriyaṃ.",
  "thig11.1:4.1": "Pubbenivāsaṃ jānāmi,",
  "thig11.1:4.2": "dibbacakkhu visodhitaṃ;",
  "thig11.1:4.3": "Cetopariccañāṇañca,",
  "thig11.1:4.4": "sotadhātu visodhitā.",
  "thig11.1:5.1": "Iddhīpi me sacchikatā,",
  "thig11.1:5.2": "patto me āsavakkhayo;",
  "thig11.1:5.3": "Chaḷabhiññā sacchikatā,",
  "thig11.1:5.4": "kataṃ buddhassa sāsanaṃ.",
  "thig11.1:6.1": "Iddhiyā abhinimmitvā,",
  "thig11.1:6.2": "caturassaṃ rathaṃ ahaṃ;",
  "thig11.1:6.3": "Buddhassa pāde vanditvā,",
  "thig11.1:6.4": "lokanāthassa tādino”.",
  "thig11.1:7.1": "“Supupphitaggaṃ upagamma pādapaṃ,",
  "thig11.1:7.2": "Ekā tuvaṃ tiṭṭhasi sālamūle;",
  "thig11.1:7.3": "Na cāpi te dutiyo atthi koci,",
  "thig11.1:7.4": "Bāle na tvaṃ bhāyasi dhuttakānaṃ”.",
  "thig11.1:8.1": "“Sataṃ sahassānipi dhuttakānaṃ,",
  "thig11.1:8.2": "Samāgatā edisakā bhaveyyuṃ;",
  "thig11.1:8.3": "Lomaṃ na iñje napi sampavedhe,",
  "thig11.1:8.4": "Kiṃ me tuvaṃ māra karissaseko.",
  "thig11.1:9.1": "Esā antaradhāyāmi,",
  "thig11.1:9.2": "kucchiṃ vā pavisāmi te;",
  "thig11.1:9.3": "Bhamukantare tiṭṭhāmi,",
  "thig11.1:9.4": "tiṭṭhantiṃ maṃ na dakkhasi.",
  "thig11.1:10.1": "Cittamhi vasībhūtāhaṃ,",
  "thig11.1:10.2": "iddhipādā subhāvitā;",
  "thig11.1:10.3": "Chaḷabhiññā sacchikatā,",
  "thig11.1:10.4": "kataṃ buddhassa sāsanaṃ.",
  "thig11.1:11.1": "Sattisūlūpamā kāmā,",
  "thig11.1:11.2": "khandhāsaṃ adhikuṭṭanā;",
  "thig11.1:11.3": "Yaṃ tvaṃ ‘kāmaratiṃ’ brūsi,",
  "thig11.1:11.4": "‘āratī’ dāni sā mama.",
  "thig11.1:12.1": "Sabbattha vihatā nandī,",
  "thig11.1:12.2": "Tamokhandho padālito;",
  "thig11.1:12.3": "Evaṃ jānāhi pāpima,",
  "thig11.1:12.4": "Nihato tvamasi antakā”ti.",
  "thig11.1:13.1": "…",
  "thig11.1:13.2": "Uppalavaṇṇā therī ….",
  "thig11.1:14.1": "Dvādasakanipāto niṭṭhito."
}