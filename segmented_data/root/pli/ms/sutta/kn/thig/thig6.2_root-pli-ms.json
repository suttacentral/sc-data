{
  "thig6.2:0.1": "Therīgāthā",
  "thig6.2:0.2": "Chakkanipāta",
  "thig6.2:0.3": "2. Vāseṭṭhītherīgāthā",
  "thig6.2:1.1": "“Puttasokenahaṃ aṭṭā,",
  "thig6.2:1.2": "khittacittā visaññinī;",
  "thig6.2:1.3": "Naggā pakiṇṇakesī ca,",
  "thig6.2:1.4": "tena tena vicārihaṃ.",
  "thig6.2:2.1": "Vīthi saṅkārakūṭesu,",
  "thig6.2:2.2": "susāne rathiyāsu ca;",
  "thig6.2:2.3": "Acariṃ tīṇi vassāni,",
  "thig6.2:2.4": "khuppipāsāsamappitā.",
  "thig6.2:3.1": "Athaddasāsiṃ sugataṃ,",
  "thig6.2:3.2": "nagaraṃ mithilaṃ pati;",
  "thig6.2:3.3": "Adantānaṃ dametāraṃ,",
  "thig6.2:3.4": "sambuddhamakutobhayaṃ.",
  "thig6.2:4.1": "Sacittaṃ paṭiladdhāna,",
  "thig6.2:4.2": "vanditvāna upāvisiṃ;",
  "thig6.2:4.3": "So me dhammamadesesi,",
  "thig6.2:4.4": "anukampāya gotamo.",
  "thig6.2:5.1": "Tassa dhammaṃ suṇitvāna,",
  "thig6.2:5.2": "pabbajiṃ anagāriyaṃ;",
  "thig6.2:5.3": "Yuñjantī satthuvacane,",
  "thig6.2:5.4": "sacchākāsiṃ padaṃ sivaṃ.",
  "thig6.2:6.1": "Sabbe sokā samucchinnā,",
  "thig6.2:6.2": "pahīnā etadantikā;",
  "thig6.2:6.3": "Pariññātā hi me vatthū,",
  "thig6.2:6.4": "yato sokāna sambhavo”ti.",
  "thig6.2:7.1": "…",
  "thig6.2:7.2": "Vāseṭṭhī therī …."
}