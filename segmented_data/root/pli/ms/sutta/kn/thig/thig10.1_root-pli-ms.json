{
  "thig10.1:0.1": "Therīgāthā",
  "thig10.1:0.2": "Ekādasakanipāta",
  "thig10.1:0.3": "1. Kisāgotamītherīgāthā",
  "thig10.1:1.1": "“Kalyāṇamittatā muninā,",
  "thig10.1:1.2": "lokaṃ ādissa vaṇṇitā;",
  "thig10.1:1.3": "Kalyāṇamitte bhajamāno,",
  "thig10.1:1.4": "api bālo paṇḍito assa.",
  "thig10.1:2.1": "Bhajitabbā sappurisā,",
  "thig10.1:2.2": "Paññā tathā vaḍḍhati bhajantānaṃ;",
  "thig10.1:2.3": "Bhajamāno sappurise,",
  "thig10.1:2.4": "Sabbehipi dukkhehi pamucceyya.",
  "thig10.1:3.1": "Dukkhañca vijāneyya,",
  "thig10.1:3.2": "Dukkhassa ca samudayaṃ nirodhaṃ;",
  "thig10.1:3.3": "Aṭṭhaṅgikañca maggaṃ,",
  "thig10.1:3.4": "Cattāripi ariyasaccāni”.",
  "thig10.1:4.1": "“Dukkho itthibhāvo,",
  "thig10.1:4.2": "Akkhāto purisadammasārathinā;",
  "thig10.1:4.3": "Sapattikampi hi dukkhaṃ,",
  "thig10.1:4.4": "Appekaccā sakiṃ vijātāyo.",
  "thig10.1:5.1": "Galake api kantanti,",
  "thig10.1:5.2": "Sukhumāliniyo visāni khādanti;",
  "thig10.1:5.3": "Janamārakamajjhagatā,",
  "thig10.1:5.4": "Ubhopi byasanāni anubhonti”.",
  "thig10.1:6.1": "“Upavijaññā gacchantī,",
  "thig10.1:6.2": "addasāhaṃ patiṃ mataṃ;",
  "thig10.1:6.3": "Panthamhi vijāyitvāna,",
  "thig10.1:6.4": "appattāva sakaṃ gharaṃ.",
  "thig10.1:7.1": "Dve puttā kālakatā,",
  "thig10.1:7.2": "Patī ca panthe mato kapaṇikāya;",
  "thig10.1:7.3": "Mātā pitā ca bhātā,",
  "thig10.1:7.4": "Ḍayhanti ca ekacitakāyaṃ”.",
  "thig10.1:8.1": "“Khīṇakulīne kapaṇe,",
  "thig10.1:8.2": "Anubhūtaṃ te dukhaṃ aparimāṇaṃ;",
  "thig10.1:8.3": "Assū ca te pavattaṃ,",
  "thig10.1:8.4": "Bahūni ca jātisahassāni.",
  "thig10.1:9.1": "Vasitā susānamajjhe,",
  "thig10.1:9.2": "Athopi khāditāni puttamaṃsāni;",
  "thig10.1:9.3": "Hatakulikā sabbagarahitā,",
  "thig10.1:9.4": "Matapatikā amatamadhigacchiṃ.",
  "thig10.1:10.1": "Bhāvito me maggo,",
  "thig10.1:10.2": "Ariyo aṭṭhaṅgiko amatagāmī;",
  "thig10.1:10.3": "Nibbānaṃ sacchikataṃ,",
  "thig10.1:10.4": "Dhammādāsaṃ avekkhiṃhaṃ.",
  "thig10.1:11.1": "Ahamamhi kantasallā,",
  "thig10.1:11.2": "Ohitabhārā katañhi karaṇīyaṃ;",
  "thig10.1:11.3": "Kisā gotamī therī,",
  "thig10.1:11.4": "Vimuttacittā imaṃ bhaṇī”ti.",
  "thig10.1:12.1": "…",
  "thig10.1:12.2": "Kisā gotamī therī ….",
  "thig10.1:13.1": "Ekādasakanipāto niṭṭhito."
}