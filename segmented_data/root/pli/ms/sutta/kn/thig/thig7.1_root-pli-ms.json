{
  "thig7.1:0.1": "Therīgāthā",
  "thig7.1:0.2": "Sattakanipāta",
  "thig7.1:0.3": "1. Uttarātherīgāthā",
  "thig7.1:1.1": "“Musalāni gahetvāna,",
  "thig7.1:1.2": "dhaññaṁ koṭṭenti māṇavā;",
  "thig7.1:1.3": "Puttadārāni posentā,",
  "thig7.1:1.4": "dhanaṁ vindanti māṇavā.",
  "thig7.1:2.1": "Ghaṭetha buddhasāsane,",
  "thig7.1:2.2": "yaṁ katvā nānutappati;",
  "thig7.1:2.3": "Khippaṁ pādāni dhovitvā,",
  "thig7.1:2.4": "ekamantaṁ nisīdatha.",
  "thig7.1:3.1": "Cittaṁ upaṭṭhapetvāna,",
  "thig7.1:3.2": "ekaggaṁ susamāhitaṁ;",
  "thig7.1:3.3": "Paccavekkhatha saṅkhāre,",
  "thig7.1:3.4": "parato no ca attato”.",
  "thig7.1:4.1": "“Tassāhaṁ vacanaṁ sutvā,",
  "thig7.1:4.2": "paṭācārānusāsaniṁ;",
  "thig7.1:4.3": "Pāde pakkhālayitvāna,",
  "thig7.1:4.4": "ekamante upāvisiṁ.",
  "thig7.1:5.1": "Rattiyā purime yāme,",
  "thig7.1:5.2": "pubbajātimanussariṁ;",
  "thig7.1:5.3": "Rattiyā majjhime yāme,",
  "thig7.1:5.4": "dibbacakkhuṁ visodhayiṁ.",
  "thig7.1:6.1": "Rattiyā pacchime yāme,",
  "thig7.1:6.2": "tamokhandhaṁ padālayiṁ;",
  "thig7.1:6.3": "Tevijjā atha vuṭṭhāsiṁ,",
  "thig7.1:6.4": "katā te anusāsanī.",
  "thig7.1:7.1": "Sakkaṁva devā tidasā,",
  "thig7.1:7.2": "saṅgāme aparājitaṁ;",
  "thig7.1:7.3": "Purakkhatvā vihassāmi,",
  "thig7.1:7.4": "tevijjāmhi anāsavā”.",
  "thig7.1:8.1": "… Uttarā therī …."
}