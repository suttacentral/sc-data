{
  "thig13.4:0.1": "Therīgāthā",
  "thig13.4:0.2": "Vīsatinipāta",
  "thig13.4:0.3": "4. Sundarītherīgāthā",
  "thig13.4:1.1": "“Petāni bhoti puttāni,",
  "thig13.4:1.2": "khādamānā tuvaṃ pure;",
  "thig13.4:1.3": "Tuvaṃ divā ca ratto ca,",
  "thig13.4:1.4": "atīva paritappasi.",
  "thig13.4:2.1": "Sājja sabbāni khāditvā,",
  "thig13.4:2.2": "sataputtāni brāhmaṇī;",
  "thig13.4:2.3": "Vāseṭṭhi kena vaṇṇena,",
  "thig13.4:2.4": "na bāḷhaṃ paritappasi”.",
  "thig13.4:3.1": "“Bahūni puttasatāni,",
  "thig13.4:3.2": "ñātisaṅghasatāni ca;",
  "thig13.4:3.3": "Khāditāni atītaṃse,",
  "thig13.4:3.4": "mama tuyhañca brāhmaṇa.",
  "thig13.4:4.1": "Sāhaṃ nissaraṇaṃ ñatvā,",
  "thig13.4:4.2": "jātiyā maraṇassa ca;",
  "thig13.4:4.3": "Na socāmi na rodāmi,",
  "thig13.4:4.4": "na cāpi paritappayiṃ”.",
  "thig13.4:5.1": "“Abbhutaṃ vata vāseṭṭhi,",
  "thig13.4:5.2": "vācaṃ bhāsasi edisiṃ;",
  "thig13.4:5.3": "Kassa tvaṃ dhammamaññāya,",
  "thig13.4:5.4": "giraṃ bhāsasi edisiṃ”.",
  "thig13.4:6.1": "“Esa brāhmaṇa sambuddho,",
  "thig13.4:6.2": "nagaraṃ mithilaṃ pati;",
  "thig13.4:6.3": "Sabbadukkhappahānāya,",
  "thig13.4:6.4": "dhammaṃ desesi pāṇinaṃ.",
  "thig13.4:7.1": "Tassa brahme arahato,",
  "thig13.4:7.2": "dhammaṃ sutvā nirūpadhiṃ;",
  "thig13.4:7.3": "Tattha viññātasaddhammā,",
  "thig13.4:7.4": "puttasokaṃ byapānudiṃ”.",
  "thig13.4:8.1": "“So ahampi gamissāmi,",
  "thig13.4:8.2": "nagaraṃ mithilaṃ pati;",
  "thig13.4:8.3": "Appeva maṃ so bhagavā,",
  "thig13.4:8.4": "sabbadukkhā pamocaye”.",
  "thig13.4:9.1": "Addasa brāhmaṇo buddhaṃ,",
  "thig13.4:9.2": "vippamuttaṃ nirūpadhiṃ;",
  "thig13.4:9.3": "Svassa dhammamadesesi,",
  "thig13.4:9.4": "muni dukkhassa pāragū.",
  "thig13.4:10.1": "Dukkhaṃ dukkhasamuppādaṃ,",
  "thig13.4:10.2": "dukkhassa ca atikkamaṃ;",
  "thig13.4:10.3": "Ariyaṃ caṭṭhaṅgikaṃ maggaṃ,",
  "thig13.4:10.4": "dukkhūpasamagāminaṃ.",
  "thig13.4:11.1": "Tattha viññātasaddhammo,",
  "thig13.4:11.2": "pabbajjaṃ samarocayi;",
  "thig13.4:11.3": "Sujāto tīhi rattīhi,",
  "thig13.4:11.4": "tisso vijjā aphassayi.",
  "thig13.4:12.1": "“Ehi sārathi gacchāhi,",
  "thig13.4:12.2": "rathaṃ niyyādayāhimaṃ;",
  "thig13.4:12.3": "Ārogyaṃ brāhmaṇiṃ vajja,",
  "thig13.4:12.4": "‘pabbaji dāni brāhmaṇo;",
  "thig13.4:12.5": "Sujāto tīhi rattīhi,",
  "thig13.4:12.6": "tisso vijjā aphassayi’”.",
  "thig13.4:13.1": "Tato ca rathamādāya,",
  "thig13.4:13.2": "sahassañcāpi sārathi;",
  "thig13.4:13.3": "Ārogyaṃ brāhmaṇiṃvoca,",
  "thig13.4:13.4": "“pabbaji dāni brāhmaṇo;",
  "thig13.4:13.5": "Sujāto tīhi rattīhi,",
  "thig13.4:13.6": "tisso vijjā aphassayi”.",
  "thig13.4:14.1": "“Etañcāhaṃ assarathaṃ,",
  "thig13.4:14.2": "sahassañcāpi sārathi;",
  "thig13.4:14.3": "Tevijjaṃ brāhmaṇaṃ sutvā,",
  "thig13.4:14.4": "puṇṇapattaṃ dadāmi te”.",
  "thig13.4:15.1": "“Tuyheva hotvassaratho,",
  "thig13.4:15.2": "sahassañcāpi brāhmaṇi;",
  "thig13.4:15.3": "Ahampi pabbajissāmi,",
  "thig13.4:15.4": "varapaññassa santike”.",
  "thig13.4:16.1": "“Hatthī gavassaṃ maṇikuṇḍalañca,",
  "thig13.4:16.2": "Phītañcimaṃ gahavibhavaṃ pahāya;",
  "thig13.4:16.3": "Pitā pabbajito tuyhaṃ,",
  "thig13.4:16.4": "Bhuñja bhogāni sundarī;",
  "thig13.4:16.5": "Tuvaṃ dāyādikā kule”.",
  "thig13.4:17.1": "“Hatthī gavassaṃ maṇikuṇḍalañca,",
  "thig13.4:17.2": "Rammaṃ cimaṃ gahavibhavaṃ pahāya;",
  "thig13.4:17.3": "Pitā pabbajito mayhaṃ,",
  "thig13.4:17.4": "Puttasokena aṭṭito;",
  "thig13.4:17.5": "Ahampi pabbajissāmi,",
  "thig13.4:17.6": "Bhātusokena aṭṭitā”.",
  "thig13.4:18.1": "“So te ijjhatu saṅkappo,",
  "thig13.4:18.2": "yaṃ tvaṃ patthesi sundarī;",
  "thig13.4:18.3": "Uttiṭṭhapiṇḍo uñcho ca,",
  "thig13.4:18.4": "paṃsukūlañca cīvaraṃ;",
  "thig13.4:18.5": "Etāni abhisambhontī,",
  "thig13.4:18.6": "paraloke anāsavā”.",
  "thig13.4:19.1": "“Sikkhamānāya me ayye,",
  "thig13.4:19.2": "dibbacakkhu visodhitaṃ;",
  "thig13.4:19.3": "Pubbenivāsaṃ jānāmi,",
  "thig13.4:19.4": "yattha me vusitaṃ pure.",
  "thig13.4:20.1": "Tuvaṃ nissāya kalyāṇi,",
  "thig13.4:20.2": "theri saṃghassa sobhane;",
  "thig13.4:20.3": "Tisso vijjā anuppattā,",
  "thig13.4:20.4": "kataṃ buddhassa sāsanaṃ.",
  "thig13.4:21.1": "Anujānāhi me ayye,",
  "thig13.4:21.2": "icche sāvatthi gantave;",
  "thig13.4:21.3": "Sīhanādaṃ nadissāmi,",
  "thig13.4:21.4": "buddhaseṭṭhassa santike”.",
  "thig13.4:22.1": "“Passa sundari satthāraṃ,",
  "thig13.4:22.2": "hemavaṇṇaṃ harittacaṃ;",
  "thig13.4:22.3": "Adantānaṃ dametāraṃ,",
  "thig13.4:22.4": "sambuddhamakutobhayaṃ”.",
  "thig13.4:23.1": "“Passa sundarimāyantiṃ,",
  "thig13.4:23.2": "vippamuttaṃ nirūpadhiṃ;",
  "thig13.4:23.3": "Vītarāgaṃ visaṃyuttaṃ,",
  "thig13.4:23.4": "katakiccamanāsavaṃ.",
  "thig13.4:24.1": "Bārāṇasito nikkhamma,",
  "thig13.4:24.2": "tava santikamāgatā;",
  "thig13.4:24.3": "Sāvikā te mahāvīra,",
  "thig13.4:24.4": "pāde vandati sundarī.",
  "thig13.4:25.1": "Tuvaṃ buddho tuvaṃ satthā,",
  "thig13.4:25.2": "tuyhaṃ dhītāmhi brāhmaṇa;",
  "thig13.4:25.3": "Orasā mukhato jātā,",
  "thig13.4:25.4": "katakiccā anāsavā”.",
  "thig13.4:26.1": "“Tassā te svāgataṃ bhadde,",
  "thig13.4:26.2": "tato te adurāgataṃ;",
  "thig13.4:26.3": "Evañhi dantā āyanti,",
  "thig13.4:26.4": "satthu pādāni vandikā;",
  "thig13.4:26.5": "Vītarāgā visaṃyuttā,",
  "thig13.4:26.6": "katakiccā anāsavā”.",
  "thig13.4:27.1": "…",
  "thig13.4:27.2": "Sundarī therī …."
}