{
  "thig13.3:0.1": "Therīgāthā",
  "thig13.3:0.2": "Vīsatinipāta",
  "thig13.3:0.3": "3. Cāpātherīgāthā",
  "thig13.3:1.1": "“Laṭṭhihattho pure āsi,",
  "thig13.3:1.2": "so dāni migaluddako;",
  "thig13.3:1.3": "Āsāya palipā ghorā,",
  "thig13.3:1.4": "nāsakkhi pārametave.",
  "thig13.3:2.1": "Sumattaṃ maṃ maññamānā,",
  "thig13.3:2.2": "cāpā puttamatosayi;",
  "thig13.3:2.3": "Cāpāya bandhanaṃ chetvā,",
  "thig13.3:2.4": "pabbajissaṃ punopahaṃ”.",
  "thig13.3:3.1": "“Mā me kujjhi mahāvīra,",
  "thig13.3:3.2": "mā me kujjhi mahāmuni;",
  "thig13.3:3.3": "Na hi kodhaparetassa,",
  "thig13.3:3.4": "suddhi atthi kuto tapo”.",
  "thig13.3:4.1": "“Pakkamissañca nāḷāto,",
  "thig13.3:4.2": "kodha nāḷāya vacchati;",
  "thig13.3:4.3": "Bandhantī itthirūpena,",
  "thig13.3:4.4": "samaṇe dhammajīvino”.",
  "thig13.3:5.1": "“Ehi kāḷa nivattassu,",
  "thig13.3:5.2": "bhuñja kāme yathā pure;",
  "thig13.3:5.3": "Ahañca te vasīkatā,",
  "thig13.3:5.4": "ye ca me santi ñātakā”.",
  "thig13.3:6.1": "“Etto cāpe catubbhāgaṃ,",
  "thig13.3:6.2": "yathā bhāsasi tvañca me;",
  "thig13.3:6.3": "Tayi rattassa posassa,",
  "thig13.3:6.4": "uḷāraṃ vata taṃ siyā”.",
  "thig13.3:7.1": "“Kāḷaṅginiṃva takkāriṃ,",
  "thig13.3:7.2": "pupphitaṃ girimuddhani;",
  "thig13.3:7.3": "Phullaṃ dālimalaṭṭhiṃva,",
  "thig13.3:7.4": "antodīpeva pāṭaliṃ.",
  "thig13.3:8.1": "Haricandanalittaṅgiṃ,",
  "thig13.3:8.2": "kāsikuttamadhāriniṃ;",
  "thig13.3:8.3": "Taṃ maṃ rūpavatiṃ santiṃ,",
  "thig13.3:8.4": "kassa ohāya gacchasi”.",
  "thig13.3:9.1": "“Sākuntikova sakuṇiṃ,",
  "thig13.3:9.2": "yathā bandhitumicchati;",
  "thig13.3:9.3": "Āharimena rūpena,",
  "thig13.3:9.4": "na maṃ tvaṃ bādhayissasi”.",
  "thig13.3:10.1": "“Imañca me puttaphalaṃ,",
  "thig13.3:10.2": "kāḷa uppāditaṃ tayā;",
  "thig13.3:10.3": "Taṃ maṃ puttavatiṃ santiṃ,",
  "thig13.3:10.4": "kassa ohāya gacchasi”.",
  "thig13.3:11.1": "“Jahanti putte sappaññā,",
  "thig13.3:11.2": "tato ñātī tato dhanaṃ;",
  "thig13.3:11.3": "Pabbajanti mahāvīrā,",
  "thig13.3:11.4": "nāgo chetvāva bandhanaṃ”.",
  "thig13.3:12.1": "“Idāni te imaṃ puttaṃ,",
  "thig13.3:12.2": "Daṇḍena churikāya vā;",
  "thig13.3:12.3": "Bhūmiyaṃ vā nisumbhissaṃ,",
  "thig13.3:12.4": "Puttasokā na gacchasi”.",
  "thig13.3:13.1": "“Sace puttaṃ siṅgālānaṃ,",
  "thig13.3:13.2": "kukkurānaṃ padāhisi;",
  "thig13.3:13.3": "Na maṃ puttakatte jammi,",
  "thig13.3:13.4": "punarāvattayissasi”.",
  "thig13.3:14.1": "“Handa kho dāni bhaddante,",
  "thig13.3:14.2": "kuhiṃ kāḷa gamissasi;",
  "thig13.3:14.3": "Katamaṃ gāmanigamaṃ,",
  "thig13.3:14.4": "nagaraṃ rājadhāniyo”.",
  "thig13.3:15.1": "“Ahumha pubbe gaṇino,",
  "thig13.3:15.2": "Assamaṇā samaṇamānino;",
  "thig13.3:15.3": "Gāmena gāmaṃ vicarimha,",
  "thig13.3:15.4": "Nagare rājadhāniyo.",
  "thig13.3:16.1": "Eso hi bhagavā buddho,",
  "thig13.3:16.2": "nadiṃ nerañjaraṃ pati;",
  "thig13.3:16.3": "Sabbadukkhappahānāya,",
  "thig13.3:16.4": "dhammaṃ deseti pāṇinaṃ;",
  "thig13.3:16.5": "Tassāhaṃ santikaṃ gacchaṃ,",
  "thig13.3:16.6": "so me satthā bhavissati”.",
  "thig13.3:17.1": "“Vandanaṃ dāni vajjāsi,",
  "thig13.3:17.2": "lokanāthaṃ anuttaraṃ;",
  "thig13.3:17.3": "Padakkhiṇañca katvāna,",
  "thig13.3:17.4": "ādiseyyāsi dakkhiṇaṃ”.",
  "thig13.3:18.1": "“Etaṃ kho labbhamamhehi,",
  "thig13.3:18.2": "yathā bhāsasi tvañca me;",
  "thig13.3:18.3": "Vandanaṃ dāni te vajjaṃ,",
  "thig13.3:18.4": "lokanāthaṃ anuttaraṃ;",
  "thig13.3:18.5": "Padakkhiṇañca katvāna,",
  "thig13.3:18.6": "ādisissāmi dakkhiṇaṃ”.",
  "thig13.3:19.1": "Tato ca kāḷo pakkāmi,",
  "thig13.3:19.2": "nadiṃ nerañjaraṃ pati;",
  "thig13.3:19.3": "So addasāsi sambuddhaṃ,",
  "thig13.3:19.4": "desentaṃ amataṃ padaṃ.",
  "thig13.3:20.1": "Dukkhaṃ dukkhasamuppādaṃ,",
  "thig13.3:20.2": "dukkhassa ca atikkamaṃ;",
  "thig13.3:20.3": "Ariyaṃ caṭṭhaṅgikaṃ maggaṃ,",
  "thig13.3:20.4": "dukkhūpasamagāminaṃ.",
  "thig13.3:21.1": "Tassa pādāni vanditvā,",
  "thig13.3:21.2": "Katvāna naṃ padakkhiṇaṃ;",
  "thig13.3:21.3": "Cāpāya ādisitvāna,",
  "thig13.3:21.4": "Pabbajiṃ anagāriyaṃ;",
  "thig13.3:21.5": "Tisso vijjā anuppattā,",
  "thig13.3:21.6": "Kataṃ buddhassa sāsanaṃ.",
  "thig13.3:22.1": "…",
  "thig13.3:22.2": "Cāpā therī …."
}