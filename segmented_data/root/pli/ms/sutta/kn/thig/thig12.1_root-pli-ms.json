{
  "thig12.1:0.1": "Therīgāthā",
  "thig12.1:0.2": "Soḷasakanipāta",
  "thig12.1:0.3": "1. Puṇṇātherīgāthā",
  "thig12.1:1.1": "“Udahārī ahaṁ sīte,",
  "thig12.1:1.2": "sadā udakamotariṁ;",
  "thig12.1:1.3": "Ayyānaṁ daṇḍabhayabhītā,",
  "thig12.1:1.4": "vācādosabhayaṭṭitā.",
  "thig12.1:2.1": "Kassa brāhmaṇa tvaṁ bhīto,",
  "thig12.1:2.2": "sadā udakamotari;",
  "thig12.1:2.3": "Vedhamānehi gattehi,",
  "thig12.1:2.4": "sītaṁ vedayase bhusaṁ”.",
  "thig12.1:3.1": "“Jānantī vata maṁ bhoti,",
  "thig12.1:3.2": "puṇṇike paripucchasi;",
  "thig12.1:3.3": "Karontaṁ kusalaṁ kammaṁ,",
  "thig12.1:3.4": "rundhantaṁ katapāpakaṁ.",
  "thig12.1:4.1": "Yo ca vuḍḍho daharo vā,",
  "thig12.1:4.2": "pāpakammaṁ pakubbati;",
  "thig12.1:4.3": "Dakābhisecanā sopi,",
  "thig12.1:4.4": "pāpakammā pamuccati”.",
  "thig12.1:5.1": "“Ko nu te idamakkhāsi,",
  "thig12.1:5.2": "ajānantassa ajānako;",
  "thig12.1:5.3": "Dakābhisecanā nāma,",
  "thig12.1:5.4": "pāpakammā pamuccati.",
  "thig12.1:6.1": "Saggaṁ nūna gamissanti,",
  "thig12.1:6.2": "sabbe maṇḍūkakacchapā;",
  "thig12.1:6.3": "Nāgā ca susumārā ca,",
  "thig12.1:6.4": "ye caññe udake carā.",
  "thig12.1:7.1": "Orabbhikā sūkarikā,",
  "thig12.1:7.2": "macchikā migabandhakā;",
  "thig12.1:7.3": "Corā ca vajjhaghātā ca,",
  "thig12.1:7.4": "ye caññe pāpakammino;",
  "thig12.1:7.5": "Dakābhisecanā tepi,",
  "thig12.1:7.6": "pāpakammā pamuccare.",
  "thig12.1:8.1": "Sace imā nadiyo te,",
  "thig12.1:8.2": "pāpaṁ pubbe kataṁ vahuṁ;",
  "thig12.1:8.3": "Puññampimā vaheyyuṁ te,",
  "thig12.1:8.4": "tena tvaṁ paribāhiro.",
  "thig12.1:9.1": "Yassa brāhmaṇa tvaṁ bhīto,",
  "thig12.1:9.2": "sadā udakamotari;",
  "thig12.1:9.3": "Tameva brahme mā kāsi,",
  "thig12.1:9.4": "mā te sītaṁ chaviṁ hane”.",
  "thig12.1:10.1": "“Kummaggapaṭipannaṁ maṁ,",
  "thig12.1:10.2": "ariyamaggaṁ samānayi;",
  "thig12.1:10.3": "Dakābhisecanā bhoti,",
  "thig12.1:10.4": "imaṁ sāṭaṁ dadāmi te”.",
  "thig12.1:11.1": "“Tuyheva sāṭako hotu,",
  "thig12.1:11.2": "nāhamicchāmi sāṭakaṁ;",
  "thig12.1:11.3": "Sace bhāyasi dukkhassa,",
  "thig12.1:11.4": "sace te dukkhamappiyaṁ.",
  "thig12.1:12.1": "Mākāsi pāpakaṁ kammaṁ,",
  "thig12.1:12.2": "āvi vā yadi vā raho;",
  "thig12.1:12.3": "Sace ca pāpakaṁ kammaṁ,",
  "thig12.1:12.4": "karissasi karosi vā.",
  "thig12.1:13.1": "Na te dukkhā pamutyatthi,",
  "thig12.1:13.2": "upeccāpi palāyato;",
  "thig12.1:13.3": "Sace bhāyasi dukkhassa,",
  "thig12.1:13.4": "sace te dukkhamappiyaṁ.",
  "thig12.1:14.1": "Upehi saraṇaṁ buddhaṁ,",
  "thig12.1:14.2": "dhammaṁ saṅghañca tādinaṁ;",
  "thig12.1:14.3": "Samādiyāhi sīlāni,",
  "thig12.1:14.4": "taṁ te atthāya hehiti”.",
  "thig12.1:15.1": "“Upemi saraṇaṁ buddhaṁ,",
  "thig12.1:15.2": "dhammaṁ saṅghañca tādinaṁ;",
  "thig12.1:15.3": "Samādiyāmi sīlāni,",
  "thig12.1:15.4": "taṁ me atthāya hehiti.",
  "thig12.1:16.1": "Brahmabandhu pure āsiṁ,",
  "thig12.1:16.2": "ajjamhi saccabrāhmaṇo;",
  "thig12.1:16.3": "Tevijjo vedasampanno,",
  "thig12.1:16.4": "sottiyo camhi nhātako”ti.",
  "thig12.1:17.1": "… Puṇṇā therī ….",
  "thig12.1:18.1": "Soḷasakanipāto niṭṭhito."
}