{
  "snp4.4:0.1": "Sutta Nipāta 4.4",
  "snp4.4:0.2": "Suddhaṭṭhakasutta",
  "snp4.4:1.1": "Passāmi suddhaṁ paramaṁ arogaṁ,",
  "snp4.4:1.2": "Diṭṭhena saṁsuddhi narassa hoti;",
  "snp4.4:1.3": "Evābhijānaṁ paramanti ñatvā,",
  "snp4.4:1.4": "Suddhānupassīti pacceti ñāṇaṁ.",
  "snp4.4:2.1": "Diṭṭhena ce suddhi narassa hoti,",
  "snp4.4:2.2": "Ñāṇena vā so pajahāti dukkhaṁ;",
  "snp4.4:2.3": "Aññena so sujjhati sopadhīko,",
  "snp4.4:2.4": "Diṭṭhī hi naṁ pāva tathā vadānaṁ.",
  "snp4.4:3.1": "Na brāhmaṇo aññato suddhimāha,",
  "snp4.4:3.2": "Diṭṭhe sute sīlavate mute vā;",
  "snp4.4:3.3": "Puññe ca pāpe ca anūpalitto,",
  "snp4.4:3.4": "Attañjaho nayidha pakubbamāno.",
  "snp4.4:4.1": "Purimaṁ pahāya aparaṁ sitāse,",
  "snp4.4:4.2": "Ejānugā te na taranti saṅgaṁ;",
  "snp4.4:4.3": "Te uggahāyanti nirassajanti,",
  "snp4.4:4.4": "Kapīva sākhaṁ pamuñcaṁ gahāyaṁ.",
  "snp4.4:5.1": "Sayaṁ samādāya vatāni jantu,",
  "snp4.4:5.2": "Uccāvacaṁ gacchati saññasatto;",
  "snp4.4:5.3": "Vidvā ca vedehi samecca dhammaṁ,",
  "snp4.4:5.4": "Na uccāvacaṁ gacchati bhūripañño.",
  "snp4.4:6.1": "Sa sabbadhammesu visenibhūto,",
  "snp4.4:6.2": "Yaṁ kiñci diṭṭhaṁ va sutaṁ mutaṁ vā;",
  "snp4.4:6.3": "Tameva dassiṁ vivaṭaṁ carantaṁ,",
  "snp4.4:6.4": "Kenīdha lokasmi vikappayeyya.",
  "snp4.4:7.1": "Na kappayanti na purekkharonti,",
  "snp4.4:7.2": "Accantasuddhīti na te vadanti;",
  "snp4.4:7.3": "Ādānaganthaṁ gathitaṁ visajja,",
  "snp4.4:7.4": "Āsaṁ na kubbanti kuhiñci loke.",
  "snp4.4:8.1": "Sīmātigo brāhmaṇo tassa natthi,",
  "snp4.4:8.2": "Ñatvā va disvā va samuggahītaṁ;",
  "snp4.4:8.3": "Na rāgarāgī na virāgaratto,",
  "snp4.4:8.4": "Tassīdha natthi paramuggahītanti.",
  "snp4.4:8.5": "Suddhaṭṭhakasuttaṁ catutthaṁ."
}