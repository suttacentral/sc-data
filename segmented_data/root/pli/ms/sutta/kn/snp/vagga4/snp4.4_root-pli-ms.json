{
  "snp4.4:0.1": "Sutta Nipāta 4.4",
  "snp4.4:0.2": "Suddhaṭṭhakasutta",
  "snp4.4:1.1": "Passāmi suddhaṃ paramaṃ arogaṃ,",
  "snp4.4:1.2": "Diṭṭhena saṃsuddhi narassa hoti;",
  "snp4.4:1.3": "Evābhijānaṃ paramanti ñatvā,",
  "snp4.4:1.4": "Suddhānupassīti pacceti ñāṇaṃ.",
  "snp4.4:2.1": "Diṭṭhena ce suddhi narassa hoti,",
  "snp4.4:2.2": "Ñāṇena vā so pajahāti dukkhaṃ;",
  "snp4.4:2.3": "Aññena so sujjhati sopadhīko,",
  "snp4.4:2.4": "Diṭṭhī hi naṃ pāva tathā vadānaṃ.",
  "snp4.4:3.1": "Na brāhmaṇo aññato suddhimāha,",
  "snp4.4:3.2": "Diṭṭhe sute sīlavate mute vā;",
  "snp4.4:3.3": "Puññe ca pāpe ca anūpalitto,",
  "snp4.4:3.4": "Attañjaho nayidha pakubbamāno.",
  "snp4.4:4.1": "Purimaṃ pahāya aparaṃ sitāse,",
  "snp4.4:4.2": "Ejānugā te na taranti saṅgaṃ;",
  "snp4.4:4.3": "Te uggahāyanti nirassajanti,",
  "snp4.4:4.4": "Kapīva sākhaṃ pamuñcaṃ gahāyaṃ.",
  "snp4.4:5.1": "Sayaṃ samādāya vatāni jantu,",
  "snp4.4:5.2": "Uccāvacaṃ gacchati saññasatto;",
  "snp4.4:5.3": "Vidvā ca vedehi samecca dhammaṃ,",
  "snp4.4:5.4": "Na uccāvacaṃ gacchati bhūripañño.",
  "snp4.4:6.1": "Sa sabbadhammesu visenibhūto,",
  "snp4.4:6.2": "Yaṃ kiñci diṭṭhaṃ va sutaṃ mutaṃ vā;",
  "snp4.4:6.3": "Tameva dassiṃ vivaṭaṃ carantaṃ,",
  "snp4.4:6.4": "Kenīdha lokasmi vikappayeyya.",
  "snp4.4:7.1": "Na kappayanti na purekkharonti,",
  "snp4.4:7.2": "Accantasuddhīti na te vadanti;",
  "snp4.4:7.3": "Ādānaganthaṃ gathitaṃ visajja,",
  "snp4.4:7.4": "Āsaṃ na kubbanti kuhiñci loke.",
  "snp4.4:8.1": "Sīmātigo brāhmaṇo tassa natthi,",
  "snp4.4:8.2": "Ñatvā va disvā va samuggahītaṃ;",
  "snp4.4:8.3": "Na rāgarāgī na virāgaratto,",
  "snp4.4:8.4": "Tassīdha natthi paramuggahītanti.",
  "snp4.4:8.5": "Suddhaṭṭhakasuttaṃ catutthaṃ."
}