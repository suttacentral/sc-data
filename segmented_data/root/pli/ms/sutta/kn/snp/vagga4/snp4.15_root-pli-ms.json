{
  "snp4.15:0.1": "Sutta Nipāta 4.15",
  "snp4.15:0.2": "Attadaṇḍasutta",
  "snp4.15:1.1": "“Attadaṇḍā bhayaṁ jātaṁ,",
  "snp4.15:1.2": "janaṁ passatha medhagaṁ;",
  "snp4.15:1.3": "Saṁvegaṁ kittayissāmi,",
  "snp4.15:1.4": "yathā saṁvijitaṁ mayā.",
  "snp4.15:2.1": "Phandamānaṁ pajaṁ disvā,",
  "snp4.15:2.2": "macche appodake yathā;",
  "snp4.15:2.3": "Aññamaññehi byāruddhe,",
  "snp4.15:2.4": "disvā maṁ bhayamāvisi.",
  "snp4.15:3.1": "Samantamasāro loko,",
  "snp4.15:3.2": "disā sabbā sameritā;",
  "snp4.15:3.3": "Icchaṁ bhavanamattano,",
  "snp4.15:3.4": "nāddasāsiṁ anositaṁ.",
  "snp4.15:4.1": "Osāne tveva byāruddhe,",
  "snp4.15:4.2": "Disvā me aratī ahu;",
  "snp4.15:4.3": "Athettha sallamaddakkhiṁ,",
  "snp4.15:4.4": "Duddasaṁ hadayanissitaṁ.",
  "snp4.15:5.1": "Yena sallena otiṇṇo,",
  "snp4.15:5.2": "disā sabbā vidhāvati;",
  "snp4.15:5.3": "Tameva sallamabbuyha,",
  "snp4.15:5.4": "na dhāvati na sīdati.",
  "snp4.15:6.1": "Tattha sikkhānugīyanti,",
  "snp4.15:6.2": "yāni loke gadhitāni;",
  "snp4.15:6.3": "Na tesu pasuto siyā,",
  "snp4.15:6.4": "nibbijjha sabbaso kāme;",
  "snp4.15:6.5": "Sikkhe nibbānamattano.",
  "snp4.15:7.1": "Sacco siyā appagabbho,",
  "snp4.15:7.2": "amāyo rittapesuṇo;",
  "snp4.15:7.3": "Akkodhano lobhapāpaṁ,",
  "snp4.15:7.4": "vevicchaṁ vitare muni.",
  "snp4.15:8.1": "Niddaṁ tandiṁ sahe thīnaṁ,",
  "snp4.15:8.2": "pamādena na saṁvase;",
  "snp4.15:8.3": "Atimāne na tiṭṭheyya,",
  "snp4.15:8.4": "nibbānamanaso naro.",
  "snp4.15:9.1": "Mosavajje na nīyetha,",
  "snp4.15:9.2": "rūpe snehaṁ na kubbaye;",
  "snp4.15:9.3": "Mānañca parijāneyya,",
  "snp4.15:9.4": "sāhasā virato care.",
  "snp4.15:10.1": "Purāṇaṁ nābhinandeyya,",
  "snp4.15:10.2": "Nave khantiṁ na kubbaye;",
  "snp4.15:10.3": "Hiyyamāne na soceyya,",
  "snp4.15:10.4": "Ākāsaṁ na sito siyā.",
  "snp4.15:11.1": "Gedhaṁ brūmi mahoghoti,",
  "snp4.15:11.2": "Ājavaṁ brūmi jappanaṁ;",
  "snp4.15:11.3": "Ārammaṇaṁ pakappanaṁ,",
  "snp4.15:11.4": "Kāmapaṅko duraccayo.",
  "snp4.15:12.1": "Saccā avokkamma muni,",
  "snp4.15:12.2": "Thale tiṭṭhati brāhmaṇo;",
  "snp4.15:12.3": "Sabbaṁ so paṭinissajja,",
  "snp4.15:12.4": "Sa ve santoti vuccati.",
  "snp4.15:13.1": "Sa ve vidvā sa vedagū,",
  "snp4.15:13.2": "Ñatvā dhammaṁ anissito;",
  "snp4.15:13.3": "Sammā so loke iriyāno,",
  "snp4.15:13.4": "Na pihetīdha kassaci.",
  "snp4.15:14.1": "Yodha kāme accatari,",
  "snp4.15:14.2": "Saṅgaṁ loke duraccayaṁ;",
  "snp4.15:14.3": "Na so socati nājjheti,",
  "snp4.15:14.4": "Chinnasoto abandhano.",
  "snp4.15:15.1": "Yaṁ pubbe taṁ visosehi,",
  "snp4.15:15.2": "Pacchā te māhu kiñcanaṁ;",
  "snp4.15:15.3": "Majjhe ce no gahessasi,",
  "snp4.15:15.4": "Upasanto carissasi.",
  "snp4.15:16.1": "Sabbaso nāmarūpasmiṁ,",
  "snp4.15:16.2": "Yassa natthi mamāyitaṁ;",
  "snp4.15:16.3": "Asatā ca na socati,",
  "snp4.15:16.4": "Sa ve loke na jīyati.",
  "snp4.15:17.1": "Yassa natthi idaṁ meti,",
  "snp4.15:17.2": "Paresaṁ vāpi kiñcanaṁ;",
  "snp4.15:17.3": "Mamattaṁ so asaṁvindaṁ,",
  "snp4.15:17.4": "Natthi meti na socati.",
  "snp4.15:18.1": "Aniṭṭhurī ananugiddho,",
  "snp4.15:18.2": "Anejo sabbadhī samo;",
  "snp4.15:18.3": "Tamānisaṁsaṁ pabrūmi,",
  "snp4.15:18.4": "Pucchito avikampinaṁ.",
  "snp4.15:19.1": "Anejassa vijānato,",
  "snp4.15:19.2": "Natthi kāci nisaṅkhati;",
  "snp4.15:19.3": "Virato so viyārabbhā,",
  "snp4.15:19.4": "Khemaṁ passati sabbadhi.",
  "snp4.15:20.1": "Na samesu na omesu,",
  "snp4.15:20.2": "Na ussesu vadate muni;",
  "snp4.15:20.3": "Santo so vītamaccharo,",
  "snp4.15:20.4": "Nādeti na nirassatī”ti.",
  "snp4.15:20.5": "Attadaṇḍasuttaṁ pannarasamaṁ."
}