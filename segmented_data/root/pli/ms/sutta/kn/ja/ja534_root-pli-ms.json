{
  "ja534:0.1": "Jātaka",
  "ja534:0.2": "Asītinipāta",
  "ja534:0.3": "Cūḷahaṁsavagga",
  "ja534:0.4": "2. Mahāhaṁsajātaka",
  "ja534:1.1": "“Ete haṁsā pakkamanti,",
  "ja534:1.2": "vakkaṅgā bhayameritā;",
  "ja534:1.3": "Harittaca hemavaṇṇa,",
  "ja534:1.4": "kāmaṁ sumukha pakkama.",
  "ja534:2.1": "Ohāya maṁ ñātigaṇā,",
  "ja534:2.2": "ekaṁ pāsavasaṁ gataṁ;",
  "ja534:2.3": "Anapekkhamānā gacchanti,",
  "ja534:2.4": "kiṁ eko avahīyasi.",
  "ja534:3.1": "Pateva patataṁ seṭṭha,",
  "ja534:3.2": "natthi baddhe sahāyatā;",
  "ja534:3.3": "Mā anīghāya hāpesi,",
  "ja534:3.4": "kāmaṁ sumukha pakkama”.",
  "ja534:4.1": "“Nāhaṁ dukkhaparetopi,",
  "ja534:4.2": "dhataraṭṭha tuvaṁ jahe;",
  "ja534:4.3": "Jīvitaṁ maraṇaṁ vā me,",
  "ja534:4.4": "tayā saddhiṁ bhavissati.",
  "ja534:5.1": "Nāhaṁ dukkhaparetopi,",
  "ja534:5.2": "dhataraṭṭha tuvaṁ jahe;",
  "ja534:5.3": "Na maṁ anariyasaṁyutte,",
  "ja534:5.4": "kamme yojetumarahasi.",
  "ja534:6.1": "Sakumāro sakhā tyasmi,",
  "ja534:6.2": "sacitte casmi te ṭhito;",
  "ja534:6.3": "Ñāto senāpati tyāhaṁ,",
  "ja534:6.4": "haṁsānaṁ pavaruttama.",
  "ja534:7.1": "Kathaṁ ahaṁ vikatthissaṁ,",
  "ja534:7.2": "ñātimajjhe ito gato;",
  "ja534:7.3": "Taṁ hitvā patataṁ seṭṭha,",
  "ja534:7.4": "kiṁ te vakkhāmito gato;",
  "ja534:7.5": "Idha pāṇaṁ cajissāmi,",
  "ja534:7.6": "nānariyaṁ kattumussahe”.",
  "ja534:8.1": "“Eso hi dhammo sumukha,",
  "ja534:8.2": "yaṁ tvaṁ ariyapathe ṭhito;",
  "ja534:8.3": "Yo bhattāraṁ sakhāraṁ maṁ,",
  "ja534:8.4": "na pariccattumussahe.",
  "ja534:9.1": "Tañhi me pekkhamānassa,",
  "ja534:9.2": "bhayaṁ na tveva jāyati;",
  "ja534:9.3": "Adhigacchasi tvaṁ mayhaṁ,",
  "ja534:9.4": "evaṁ bhūtassa jīvitaṁ”.",
  "ja534:10.1": "Iccevaṁ mantayantānaṁ,",
  "ja534:10.2": "Ariyānaṁ ariyavuttinaṁ;",
  "ja534:10.3": "Daṇḍamādāya nesādo,",
  "ja534:10.4": "Āpatī turito bhusaṁ.",
  "ja534:11.1": "Tamāpatantaṁ disvāna,",
  "ja534:11.2": "Sumukho atibrūhayi;",
  "ja534:11.3": "Aṭṭhāsi purato rañño,",
  "ja534:11.4": "Haṁso vissāsayaṁ byathaṁ.",
  "ja534:12.1": "“Mā bhāyi patataṁ seṭṭha,",
  "ja534:12.2": "na hi bhāyanti tādisā;",
  "ja534:12.3": "Ahaṁ yogaṁ payuñjissaṁ,",
  "ja534:12.4": "yuttaṁ dhammūpasaṁhitaṁ;",
  "ja534:12.5": "Tena pariyāpadānena,",
  "ja534:12.6": "khippaṁ pāsā pamokkhasi”.",
  "ja534:13.1": "Tassa taṁ vacanaṁ sutvā,",
  "ja534:13.2": "sumukhassa subhāsitaṁ;",
  "ja534:13.3": "Pahaṭṭhalomo nesādo,",
  "ja534:13.4": "añjalissa paṇāmayi.",
  "ja534:14.1": "“Na me sutaṁ vā diṭṭhaṁ vā,",
  "ja534:14.2": "bhāsanto mānusiṁ dijo;",
  "ja534:14.3": "Ariyaṁ bruvāno vakkaṅgo,",
  "ja534:14.4": "cajanto mānusiṁ giraṁ.",
  "ja534:15.1": "Kiṁ nu tāyaṁ dijo hoti,",
  "ja534:15.2": "mutto baddhaṁ upāsasi;",
  "ja534:15.3": "Ohāya sakuṇā yanti,",
  "ja534:15.4": "kiṁ eko avahīyasi”.",
  "ja534:16.1": "“Rājā me so dijāmitta,",
  "ja534:16.2": "senāpaccassa kārayiṁ;",
  "ja534:16.3": "Tamāpade pariccattuṁ,",
  "ja534:16.4": "nussahe vihagādhipaṁ.",
  "ja534:17.1": "Mahāgaṇāya bhattā me,",
  "ja534:17.2": "mā eko byasanaṁ agā;",
  "ja534:17.3": "Tathā taṁ samma nesāda,",
  "ja534:17.4": "bhattāyaṁ abhito rame”.",
  "ja534:18.1": "“Ariyavattasi vakkaṅga,",
  "ja534:18.2": "yo piṇḍamapacāyasi;",
  "ja534:18.3": "Cajāmi te taṁ bhattāraṁ,",
  "ja534:18.4": "gacchathūbho yathāsukhaṁ”.",
  "ja534:19.1": "“Sace attappayogena,",
  "ja534:19.2": "ohito haṁsapakkhinaṁ;",
  "ja534:19.3": "Paṭigaṇhāma te samma,",
  "ja534:19.4": "etaṁ abhayadakkhiṇaṁ.",
  "ja534:20.1": "No ce attappayogena,",
  "ja534:20.2": "ohito haṁsapakkhinaṁ;",
  "ja534:20.3": "Anissaro muñcamamhe,",
  "ja534:20.4": "theyyaṁ kayirāsi luddaka”.",
  "ja534:21.1": "“Yassa tvaṁ bhatako rañño,",
  "ja534:21.2": "kāmaṁ tasseva pāpaya;",
  "ja534:21.3": "Tattha saṁyamano rājā,",
  "ja534:21.4": "yathābhiññaṁ karissati”.",
  "ja534:22.1": "Iccevaṁ vutto nesādo,",
  "ja534:22.2": "hemavaṇṇe harittace;",
  "ja534:22.3": "Ubho hatthehi saṅgayha,",
  "ja534:22.4": "pañjare ajjhavodahi.",
  "ja534:23.1": "Te pañjaragate pakkhī,",
  "ja534:23.2": "ubho bhassaravaṇṇine;",
  "ja534:23.3": "Sumukhaṁ dhataraṭṭhañca,",
  "ja534:23.4": "luddo ādāya pakkami.",
  "ja534:24.1": "Harīyamāno dhataraṭṭho,",
  "ja534:24.2": "sumukhaṁ etadabravi;",
  "ja534:24.3": "“Bāḷhaṁ bhāyāmi sumukha,",
  "ja534:24.4": "sāmāya lakkhaṇūruyā;",
  "ja534:24.5": "Asmākaṁ vadhamaññāya,",
  "ja534:24.6": "athattānaṁ vadhissati.",
  "ja534:25.1": "Pākahaṁsā ca sumukha,",
  "ja534:25.2": "suhemā hemasuttacā;",
  "ja534:25.3": "Koñcī samuddatīreva,",
  "ja534:25.4": "kapaṇā nūna rucchati”.",
  "ja534:26.1": "“Evaṁ mahanto lokassa,",
  "ja534:26.2": "appameyyo mahāgaṇī;",
  "ja534:26.3": "Ekitthimanusoceyya,",
  "ja534:26.4": "nayidaṁ paññavatāmiva.",
  "ja534:27.1": "Vātova gandhamādeti,",
  "ja534:27.2": "ubhayaṁ chekapāpakaṁ;",
  "ja534:27.3": "Bālo āmakapakkaṁva,",
  "ja534:27.4": "lolo andhova āmisaṁ.",
  "ja534:28.1": "Avinicchayaññu atthesu,",
  "ja534:28.2": "mandova paṭibhāsi maṁ;",
  "ja534:28.3": "Kiccākiccaṁ na jānāsi,",
  "ja534:28.4": "sampatto kālapariyāyaṁ.",
  "ja534:29.1": "Aḍḍhummatto udīresi,",
  "ja534:29.2": "yo seyyā maññasitthiyo;",
  "ja534:29.3": "Bahusādhāraṇā hetā,",
  "ja534:29.4": "soṇḍānaṁva surāgharaṁ.",
  "ja534:30.1": "Māyā cesā marīcī ca,",
  "ja534:30.2": "soko rogo cupaddavo;",
  "ja534:30.3": "Kharā ca bandhanā cetā,",
  "ja534:30.4": "maccupāsā guhāsayā;",
  "ja534:30.5": "Tāsu yo vissase poso,",
  "ja534:30.6": "so naresu narādhamo”.",
  "ja534:31.1": "“Yaṁ vuddhehi upaññātaṁ,",
  "ja534:31.2": "ko taṁ ninditumarahati;",
  "ja534:31.3": "Mahābhūtitthiyo nāma,",
  "ja534:31.4": "lokasmiṁ udapajjisuṁ.",
  "ja534:32.1": "Khiḍḍā paṇihitā tyāsu,",
  "ja534:32.2": "rati tyāsu patiṭṭhitā;",
  "ja534:32.3": "Bījāni tyāsu rūhanti,",
  "ja534:32.4": "yadidaṁ sattā pajāyare;",
  "ja534:32.5": "Tāsu ko nibbide poso,",
  "ja534:32.6": "pāṇamāsajja pāṇibhi.",
  "ja534:33.1": "Tvameva nañño sumukha,",
  "ja534:33.2": "thīnaṁ atthesu yuñjasi;",
  "ja534:33.3": "Tassa tyajja bhaye jāte,",
  "ja534:33.4": "bhītena jāyate mati.",
  "ja534:34.1": "Sabbo hi saṁsayaṁ patto,",
  "ja534:34.2": "bhayaṁ bhīru titikkhati;",
  "ja534:34.3": "Paṇḍitā ca mahantāno,",
  "ja534:34.4": "atthe yuñjanti duyyuje.",
  "ja534:35.1": "Etadatthāya rājāno,",
  "ja534:35.2": "sūramicchanti mantinaṁ;",
  "ja534:35.3": "Paṭibāhati yaṁ sūro,",
  "ja534:35.4": "āpadaṁ attapariyāyaṁ.",
  "ja534:36.1": "Mā no ajja vikantiṁsu,",
  "ja534:36.2": "rañño sūdā mahānase;",
  "ja534:36.3": "Tathā hi vaṇṇo pattānaṁ,",
  "ja534:36.4": "phalaṁ veḷuṁva taṁ vadhi.",
  "ja534:37.1": "Muttopi na icchi uḍḍetuṁ,",
  "ja534:37.2": "Sayaṁ bandhaṁ upāgami;",
  "ja534:37.3": "Sopajja saṁsayaṁ patto,",
  "ja534:37.4": "Atthaṁ gaṇhāhi mā mukhaṁ.",
  "ja534:38.1": "So taṁ yogaṁ payuñjassu,",
  "ja534:38.2": "yuttaṁ dhammūpasaṁhitaṁ;",
  "ja534:38.3": "Tava pariyāpadānena,",
  "ja534:38.4": "mama pāṇesanaṁ cara”.",
  "ja534:39.1": "“Mā bhāyi patataṁ seṭṭha,",
  "ja534:39.2": "na hi bhāyanti tādisā;",
  "ja534:39.3": "Ahaṁ yogaṁ payuñjissaṁ,",
  "ja534:39.4": "yuttaṁ dhammūpasaṁhitaṁ;",
  "ja534:39.5": "Mama pariyāpadānena,",
  "ja534:39.6": "khippaṁ pāsā pamokkhasi”.",
  "ja534:40.1": "So luddo haṁsakājena,",
  "ja534:40.2": "rājadvāraṁ upāgami;",
  "ja534:40.3": "“Paṭivedetha maṁ rañño,",
  "ja534:40.4": "dhataraṭṭhāyamāgato”.",
  "ja534:41.1": "Te disvā puññasaṅkāse,",
  "ja534:41.2": "ubho lakkhaṇasammate;",
  "ja534:41.3": "Khalu saṁyamano rājā,",
  "ja534:41.4": "amacce ajjhabhāsatha.",
  "ja534:42.1": "“Detha luddassa vatthāni,",
  "ja534:42.2": "annaṁ pānañca bhojanaṁ;",
  "ja534:42.3": "Kāmaṅkaro hiraññassa,",
  "ja534:42.4": "yāvanto esa icchati”.",
  "ja534:43.1": "Disvā luddaṁ pasannattaṁ,",
  "ja534:43.2": "Kāsirājā tadabravi;",
  "ja534:43.3": "“Yadyāyaṁ samma khemaka,",
  "ja534:43.4": "Puṇṇā haṁsehi tiṭṭhati.",
  "ja534:44.1": "Kathaṁ rucimajjhagataṁ,",
  "ja534:44.2": "pāsahattho upāgami;",
  "ja534:44.3": "Okiṇṇaṁ ñātisaṅghehi,",
  "ja534:44.4": "nimmajjhimaṁ kathaṁ gahi”.",
  "ja534:45.1": "“Ajja me sattamā ratti,",
  "ja534:45.2": "adanāni upāsato;",
  "ja534:45.3": "Padametassa anvesaṁ,",
  "ja534:45.4": "appamatto ghaṭassito.",
  "ja534:46.1": "Athassa padamaddakkhiṁ,",
  "ja534:46.2": "carato adanesanaṁ;",
  "ja534:46.3": "Tatthāhaṁ odahiṁ pāsaṁ,",
  "ja534:46.4": "evaṁ taṁ dijamaggahiṁ”.",
  "ja534:47.1": "“Ludda dve ime sakuṇā,",
  "ja534:47.2": "atha ekoti bhāsasi;",
  "ja534:47.3": "Cittaṁ nu te vipariyattaṁ,",
  "ja534:47.4": "adu kiṁ nu jigīsasi”.",
  "ja534:48.1": "“Yassa lohitakā tālā,",
  "ja534:48.2": "tapanīyanibhā subhā;",
  "ja534:48.3": "Uraṁ saṁhacca tiṭṭhanti,",
  "ja534:48.4": "so me bandhaṁ upāgami.",
  "ja534:49.1": "Athāyaṁ bhassaro pakkhī,",
  "ja534:49.2": "abaddho baddhamāturaṁ;",
  "ja534:49.3": "Ariyaṁ bruvāno aṭṭhāsi,",
  "ja534:49.4": "cajanto mānusiṁ giraṁ”.",
  "ja534:50.1": "“Atha kiṁ dāni sumukha,",
  "ja534:50.2": "Hanuṁ saṁhacca tiṭṭhasi;",
  "ja534:50.3": "Adu me parisaṁ patto,",
  "ja534:50.4": "Bhayā bhīto na bhāsasi”.",
  "ja534:51.1": "“Nāhaṁ kāsipati bhīto,",
  "ja534:51.2": "ogayha parisaṁ tava;",
  "ja534:51.3": "Nāhaṁ bhayā na bhāsissaṁ,",
  "ja534:51.4": "vākyaṁ atthamhi tādise”.",
  "ja534:52.1": "“Na te abhisaraṁ passe,",
  "ja534:52.2": "na rathe napi pattike;",
  "ja534:52.3": "Nāssa cammaṁ va kīṭaṁ vā,",
  "ja534:52.4": "vammite ca dhanuggahe.",
  "ja534:53.1": "Na hiraññaṁ suvaṇṇaṁ vā,",
  "ja534:53.2": "nagaraṁ vā sumāpitaṁ;",
  "ja534:53.3": "Okiṇṇaparikhaṁ duggaṁ,",
  "ja534:53.4": "daḷhamaṭṭālakoṭṭhakaṁ;",
  "ja534:53.5": "Yattha paviṭṭho sumukha,",
  "ja534:53.6": "bhāyitabbaṁ na bhāyasi”.",
  "ja534:54.1": "“Na me abhisarenattho,",
  "ja534:54.2": "nagarena dhanena vā;",
  "ja534:54.3": "Apathena pathaṁ yāma,",
  "ja534:54.4": "antalikkhecarā mayaṁ.",
  "ja534:55.1": "Sutā ca paṇḍitā tyamhā,",
  "ja534:55.2": "nipuṇā atthacintakā;",
  "ja534:55.3": "Bhāsematthavatiṁ vācaṁ,",
  "ja534:55.4": "sacce cassa patiṭṭhito.",
  "ja534:56.1": "Kiñca tuyhaṁ asaccassa,",
  "ja534:56.2": "anariyassa karissati;",
  "ja534:56.3": "Musāvādissa luddassa,",
  "ja534:56.4": "bhaṇitampi subhāsitaṁ.",
  "ja534:57.1": "Taṁ brāhmaṇānaṁ vacanā,",
  "ja534:57.2": "imaṁ khemamakārayi;",
  "ja534:57.3": "Abhayañca tayā ghuṭṭhaṁ,",
  "ja534:57.4": "imāyo dasadhā disā.",
  "ja534:58.1": "Ogayha te pokkharaṇiṁ,",
  "ja534:58.2": "vippasannodakaṁ suciṁ;",
  "ja534:58.3": "Pahūtaṁ cādanaṁ tattha,",
  "ja534:58.4": "ahiṁsā cettha pakkhinaṁ.",
  "ja534:59.1": "Idaṁ sutvāna nigghosaṁ,",
  "ja534:59.2": "āgatamha tavantike;",
  "ja534:59.3": "Te te bandhasma pāsena,",
  "ja534:59.4": "etaṁ te bhāsitaṁ musā.",
  "ja534:60.1": "Musāvādaṁ purakkhatvā,",
  "ja534:60.2": "icchālobhañca pāpakaṁ;",
  "ja534:60.3": "Ubho sandhimatikkamma,",
  "ja534:60.4": "asātaṁ upapajjati”.",
  "ja534:61.1": "“Nāparajjhāma sumukha,",
  "ja534:61.2": "napi lobhāva maggahiṁ;",
  "ja534:61.3": "Sutā ca paṇḍitātyattha-",
  "ja534:61.4": "nipuṇā atthacintakā.",
  "ja534:62.1": "Appevatthavatiṁ vācaṁ,",
  "ja534:62.2": "byāhareyyuṁ idhāgatā;",
  "ja534:62.3": "Tathā taṁ samma nesādo,",
  "ja534:62.4": "vutto sumukha maggahi”.",
  "ja534:63.1": "“Neva bhītā kāsipati,",
  "ja534:63.2": "upanītasmi jīvite;",
  "ja534:63.3": "Bhāsematthavatiṁ vācaṁ,",
  "ja534:63.4": "sampattā kālapariyāyaṁ.",
  "ja534:64.1": "Yo migena migaṁ hanti,",
  "ja534:64.2": "pakkhiṁ vā pana pakkhinā;",
  "ja534:64.3": "Sutena vā sutaṁ kiṇyā,",
  "ja534:64.4": "kiṁ anariyataraṁ tato.",
  "ja534:65.1": "Yo cāriyarudaṁ bhāse,",
  "ja534:65.2": "anariyadhammavassito;",
  "ja534:65.3": "Ubho so dhaṁsate lokā,",
  "ja534:65.4": "idha ceva parattha ca.",
  "ja534:66.1": "Na majjetha yasaṁ patto,",
  "ja534:66.2": "na byādhe pattasaṁsayaṁ;",
  "ja534:66.3": "Vāyametheva kiccesu,",
  "ja534:66.4": "saṁvare vivarāni ca.",
  "ja534:67.1": "Ye vuddhā abbhatikkantā,",
  "ja534:67.2": "sampattā kālapariyāyaṁ;",
  "ja534:67.3": "Idha dhammaṁ caritvāna,",
  "ja534:67.4": "evaṁte tidivaṁ gatā.",
  "ja534:68.1": "Idaṁ sutvā kāsipati,",
  "ja534:68.2": "dhammamattani pālaya;",
  "ja534:68.3": "Dhataraṭṭhañca muñcāhi,",
  "ja534:68.4": "haṁsānaṁ pavaruttamaṁ”.",
  "ja534:69.1": "“Āharantudakaṁ pajjaṁ,",
  "ja534:69.2": "āsanañca mahārahaṁ;",
  "ja534:69.3": "Pañjarato pamokkhāmi,",
  "ja534:69.4": "dhataraṭṭhaṁ yasassinaṁ.",
  "ja534:70.1": "Tañca senāpatiṁ dhīraṁ,",
  "ja534:70.2": "nipuṇaṁ atthacintakaṁ;",
  "ja534:70.3": "Yo sukhe sukhito rañño,",
  "ja534:70.4": "dukkhite hoti dukkhito.",
  "ja534:71.1": "Ediso kho arahati,",
  "ja534:71.2": "piṇḍamasnātu bhattuno;",
  "ja534:71.3": "Yathāyaṁ sumukho rañño,",
  "ja534:71.4": "pāṇasādhāraṇo sakhā”.",
  "ja534:72.1": "Pīṭhañca sabbasovaṇṇaṁ,",
  "ja534:72.2": "Aṭṭhapādaṁ manoramaṁ;",
  "ja534:72.3": "Maṭṭhaṁ kāsikamatthannaṁ,",
  "ja534:72.4": "Dhataraṭṭho upāvisi.",
  "ja534:73.1": "Kocchañca sabbasovaṇṇaṁ,",
  "ja534:73.2": "veyyagghaparisibbitaṁ;",
  "ja534:73.3": "Sumukho ajjhupāvekkhi,",
  "ja534:73.4": "dhataraṭṭhassanantarā.",
  "ja534:74.1": "Tesaṁ kañcanapattehi,",
  "ja534:74.2": "puthū ādāya kāsiyo;",
  "ja534:74.3": "Haṁsānaṁ abhihāresuṁ,",
  "ja534:74.4": "aggarañño pavāsitaṁ.",
  "ja534:75.1": "Disvā abhihaṭaṁ aggaṁ,",
  "ja534:75.2": "kāsirājena pesitaṁ;",
  "ja534:75.3": "Kusalo khattadhammānaṁ,",
  "ja534:75.4": "tato pucchi anantarā.",
  "ja534:76.1": "“Kaccinnu bhoto kusalaṁ,",
  "ja534:76.2": "kacci bhoto anāmayaṁ;",
  "ja534:76.3": "Kacci raṭṭhamidaṁ phītaṁ,",
  "ja534:76.4": "dhammena manusāsasi”.",
  "ja534:77.1": "“Kusalañceva me haṁsa,",
  "ja534:77.2": "atho haṁsa anāmayaṁ;",
  "ja534:77.3": "Atho raṭṭhamidaṁ phītaṁ,",
  "ja534:77.4": "dhammenaṁ manusāsahaṁ”.",
  "ja534:78.1": "“Kacci bhoto amaccesu,",
  "ja534:78.2": "doso koci na vijjati;",
  "ja534:78.3": "Kacci ca te tavatthesu,",
  "ja534:78.4": "nāvakaṅkhanti jīvitaṁ”.",
  "ja534:79.1": "“Athopi me amaccesu,",
  "ja534:79.2": "doso koci na vijjati;",
  "ja534:79.3": "Athopi te mamatthesu,",
  "ja534:79.4": "nāvakaṅkhanti jīvitaṁ”.",
  "ja534:80.1": "“Kacci te sādisī bhariyā,",
  "ja534:80.2": "assavā piyabhāṇinī;",
  "ja534:80.3": "Puttarūpayasūpetā,",
  "ja534:80.4": "tava chandavasānugā”.",
  "ja534:81.1": "“Atho me sādisī bhariyā,",
  "ja534:81.2": "assavā piyabhāṇinī;",
  "ja534:81.3": "Puttarūpayasūpetā,",
  "ja534:81.4": "mama chandavasānugā”.",
  "ja534:82.1": "“Kacci raṭṭhaṁ anuppīḷaṁ,",
  "ja534:82.2": "akutociupaddavaṁ;",
  "ja534:82.3": "Asāhasena dhammena,",
  "ja534:82.4": "samena manusāsasi”.",
  "ja534:83.1": "“Atho raṭṭhaṁ anuppīḷaṁ,",
  "ja534:83.2": "akutociupaddavaṁ;",
  "ja534:83.3": "Asāhasena dhammena,",
  "ja534:83.4": "samena manusāsahaṁ”.",
  "ja534:84.1": "“Kacci santo apacitā,",
  "ja534:84.2": "Asanto parivajjitā;",
  "ja534:84.3": "No ce dhammaṁ niraṅkatvā,",
  "ja534:84.4": "Adhammamanuvattasi”.",
  "ja534:85.1": "“Santo ca me apacitā,",
  "ja534:85.2": "asanto parivajjitā;",
  "ja534:85.3": "Dhammamevānuvattāmi,",
  "ja534:85.4": "adhammo me niraṅkato”.",
  "ja534:86.1": "“Kacci nānāgataṁ dīghaṁ,",
  "ja534:86.2": "samavekkhasi khattiya;",
  "ja534:86.3": "Kacci matto madanīye,",
  "ja534:86.4": "paralokaṁ na santasi”.",
  "ja534:87.1": "“Nāhaṁ anāgataṁ dīghaṁ,",
  "ja534:87.2": "samavekkhāmi pakkhima;",
  "ja534:87.3": "Ṭhito dasasu dhammesu,",
  "ja534:87.4": "paralokaṁ na santase.",
  "ja534:88.1": "Dānaṁ sīlaṁ pariccāgaṁ,",
  "ja534:88.2": "ajjavaṁ maddavaṁ tapaṁ;",
  "ja534:88.3": "Akkodhaṁ avihiṁsañca,",
  "ja534:88.4": "khantiñca avirodhanaṁ.",
  "ja534:89.1": "Iccete kusale dhamme,",
  "ja534:89.2": "ṭhite passāmi attani;",
  "ja534:89.3": "Tato me jāyate pīti,",
  "ja534:89.4": "somanassañcanappakaṁ.",
  "ja534:90.1": "Sumukho ca acintetvā,",
  "ja534:90.2": "visajji pharusaṁ giraṁ;",
  "ja534:90.3": "Bhāvadosamanaññāya,",
  "ja534:90.4": "asmākāyaṁ vihaṅgamo.",
  "ja534:91.1": "So kuddho pharusaṁ vācaṁ,",
  "ja534:91.2": "nicchāresi ayoniso;",
  "ja534:91.3": "Yānasmesu na vijjanti,",
  "ja534:91.4": "nayidaṁ paññavatāmiva”.",
  "ja534:92.1": "“Atthi me taṁ atisāraṁ,",
  "ja534:92.2": "vegena manujādhipa;",
  "ja534:92.3": "Dhataraṭṭhe ca baddhasmiṁ,",
  "ja534:92.4": "dukkhaṁ me vipulaṁ ahu.",
  "ja534:93.1": "Tvaṁ no pitāva puttānaṁ,",
  "ja534:93.2": "bhūtānaṁ dharaṇīriva;",
  "ja534:93.3": "Asmākaṁ adhipannānaṁ,",
  "ja534:93.4": "khamassu rājakuñjara”.",
  "ja534:94.1": "“Etaṁ te anumodāma,",
  "ja534:94.2": "yaṁ bhāvaṁ na nigūhasi;",
  "ja534:94.3": "Khilaṁ pabhindasi pakkhi,",
  "ja534:94.4": "ujukosi vihaṅgama.",
  "ja534:95.1": "Yaṁ kiñci ratanaṁ atthi,",
  "ja534:95.2": "kāsirājanivesane;",
  "ja534:95.3": "Rajataṁ jātarūpañca,",
  "ja534:95.4": "muttā veḷuriyā bahū.",
  "ja534:96.1": "Maṇayo saṅkhamuttā ca,",
  "ja534:96.2": "vatthakaṁ haricandanaṁ;",
  "ja534:96.3": "Ajinaṁ dantabhaṇḍañca,",
  "ja534:96.4": "lohaṁ kāḷāyasaṁ bahuṁ;",
  "ja534:96.5": "Etaṁ dadāmi vo vittaṁ,",
  "ja534:96.6": "issaraṁ vissajāmi vo”.",
  "ja534:97.1": "“Addhā apacitā tyamhā,",
  "ja534:97.2": "sakkatā ca rathesabha;",
  "ja534:97.3": "Dhammesu vattamānānaṁ,",
  "ja534:97.4": "tvaṁ no ācariyo bhava.",
  "ja534:98.1": "Ācariya samanuññātā,",
  "ja534:98.2": "Tayā anumatā mayaṁ;",
  "ja534:98.3": "Taṁ padakkhiṇato katvā,",
  "ja534:98.4": "Ñātiṁ passemurindama”.",
  "ja534:99.1": "Sabbarattiṁ cintayitvā,",
  "ja534:99.2": "mantayitvā yathātathaṁ;",
  "ja534:99.3": "Kāsirājā anuññāsi,",
  "ja534:99.4": "haṁsānaṁ pavaruttamaṁ.",
  "ja534:100.1": "Tato ratyā vivasāne,",
  "ja534:100.2": "sūriyuggamanaṁ pati;",
  "ja534:100.3": "Pekkhato kāsirājassa,",
  "ja534:100.4": "bhavanā te vigāhisuṁ.",
  "ja534:101.1": "Te aroge anuppatte,",
  "ja534:101.2": "disvāna parame dije;",
  "ja534:101.3": "Kekāti makaruṁ haṁsā,",
  "ja534:101.4": "puthusaddo ajāyatha.",
  "ja534:102.1": "Te patītā pamuttena,",
  "ja534:102.2": "bhattunā bhattugāravā;",
  "ja534:102.3": "Samantā parikiriṁsu,",
  "ja534:102.4": "aṇḍajā laddhapaccayā.",
  "ja534:103.1": "Evaṁ mittavataṁ atthā,",
  "ja534:103.2": "sabbe honti padakkhiṇā;",
  "ja534:103.3": "Haṁsā yathā dhataraṭṭhā,",
  "ja534:103.4": "ñātisaṅghaṁ upāgamunti.",
  "ja534:104.1": "Mahāhaṁsajātakaṁ dutiyaṁ."
}