{
  "ja526:0.1": "Jātaka",
  "ja526:0.2": "Paṇṇāsanipāta",
  "ja526:0.3": "Niḷinikāvagga",
  "ja526:0.4": "1 Niḷinikājātaka",
  "ja526:1.1": "“Uddayhate janapado,",
  "ja526:1.2": "raṭṭhañcāpi vinassati;",
  "ja526:1.3": "Ehi niḷinike gaccha,",
  "ja526:1.4": "taṃ me brāhmaṇamānaya”.",
  "ja526:2.1": "“Nāhaṃ dukkhakkhamā rāja,",
  "ja526:2.2": "nāhaṃ addhānakovidā;",
  "ja526:2.3": "Kathaṃ ahaṃ gamissāmi,",
  "ja526:2.4": "vanaṃ kuñjarasevitaṃ”.",
  "ja526:3.1": "“Phītaṃ janapadaṃ gantvā,",
  "ja526:3.2": "hatthinā ca rathena ca;",
  "ja526:3.3": "Dārusaṅghāṭayānena,",
  "ja526:3.4": "evaṃ gaccha niḷinike.",
  "ja526:4.1": "Hatthiassarathe pattī,",
  "ja526:4.2": "gacchevādāya khattiye;",
  "ja526:4.3": "Taveva vaṇṇarūpena,",
  "ja526:4.4": "vasaṃ tamānayissasi”.",
  "ja526:5.1": "“Kadalīdhajapaññāṇo,",
  "ja526:5.2": "ābhujīparivārito;",
  "ja526:5.3": "Eso padissati rammo,",
  "ja526:5.4": "isisiṅgassa assamo.",
  "ja526:6.1": "Eso aggissa saṅkhāto,",
  "ja526:6.2": "eso dhūmo padissati;",
  "ja526:6.3": "Maññe no aggiṃ hāpeti,",
  "ja526:6.4": "isisiṅgo mahiddhiko”.",
  "ja526:7.1": "“Tañca disvāna āyantiṃ,",
  "ja526:7.2": "āmuttamaṇikuṇḍalaṃ;",
  "ja526:7.3": "Isisiṅgo pāvisi bhīto,",
  "ja526:7.4": "assamaṃ paṇṇachādanaṃ.",
  "ja526:8.1": "Assamassa ca sā dvāre,",
  "ja526:8.2": "geṇḍukenassa kīḷati;",
  "ja526:8.3": "Vidaṃsayantī aṅgāni,",
  "ja526:8.4": "guyhaṃ pakāsitāni ca.",
  "ja526:9.1": "Tañca disvāna kīḷantiṃ,",
  "ja526:9.2": "paṇṇasālagato jaṭī;",
  "ja526:9.3": "Assamā nikkhamitvāna,",
  "ja526:9.4": "idaṃ vacanamabravi.",
  "ja526:10.1": "Ambho ko nāma so rukkho,",
  "ja526:10.2": "yassa tevaṃgataṃ phalaṃ;",
  "ja526:10.3": "Dūrepi khittaṃ pacceti,",
  "ja526:10.4": "na taṃ ohāya gacchati”.",
  "ja526:11.1": "“Assamassa mama brahme,",
  "ja526:11.2": "samīpe gandhamādane;",
  "ja526:11.3": "Bahavo tādisā rukkhā,",
  "ja526:11.4": "yassa tevaṃgataṃ phalaṃ;",
  "ja526:11.5": "Dūrepi khittaṃ pacceti,",
  "ja526:11.6": "na maṃ ohāya gacchati”.",
  "ja526:12.1": "“Etū bhavaṃ assamimaṃ adetu,",
  "ja526:12.2": "Pajjañca bhakkhañca paṭiccha dammi;",
  "ja526:12.3": "Idamāsanaṃ atra bhavaṃ nisīdatu,",
  "ja526:12.4": "Ito bhavaṃ mūlaphalāni bhuñjatu.",
  "ja526:13.1": "Kiṃ te idaṃ ūrūnamantarasmiṃ,",
  "ja526:13.2": "Supicchitaṃ kaṇharivappakāsati;",
  "ja526:13.3": "Akkhāhi me pucchito etamatthaṃ,",
  "ja526:13.4": "Kose nu te uttamaṅgaṃ paviṭṭhaṃ”.",
  "ja526:14.1": "“Ahaṃ vane mūlaphalesanaṃ caraṃ,",
  "ja526:14.2": "Āsādayiṃ acchaṃ sughorarūpaṃ;",
  "ja526:14.3": "So maṃ patitvā sahasājjhapatto,",
  "ja526:14.4": "Panujja maṃ abbahi uttamaṅgaṃ.",
  "ja526:15.1": "Svāyaṃ vaṇo khajjati kaṇḍuvāyati,",
  "ja526:15.2": "Sabbañca kālaṃ na labhāmi sātaṃ;",
  "ja526:15.3": "Paho bhavaṃ kaṇḍumimaṃ vinetuṃ,",
  "ja526:15.4": "Kurutaṃ bhavaṃ yācito brāhmaṇatthaṃ”.",
  "ja526:16.1": "“Gambhīrarūpo te vaṇo salohito,",
  "ja526:16.2": "Apūtiko vaṇagandho mahā ca;",
  "ja526:16.3": "Karomi te kiñci kasāyayogaṃ,",
  "ja526:16.4": "Yathā bhavaṃ paramasukhī bhaveyya”.",
  "ja526:17.1": "“Na mantayogā na kasāyayogā,",
  "ja526:17.2": "Na osadhā brahmacāri kamanti;",
  "ja526:17.3": "Yaṃ te mudu tena vinehi kaṇḍuṃ,",
  "ja526:17.4": "Yathā ahaṃ paramasukhī bhaveyyaṃ”.",
  "ja526:18.1": "“Ito nu bhoto katamena assamo,",
  "ja526:18.2": "Kacci bhavaṃ abhiramasi araññe;",
  "ja526:18.3": "Kacci nu te mūlaphalaṃ pahūtaṃ,",
  "ja526:18.4": "Kacci bhavantaṃ na vihiṃsanti vāḷā”.",
  "ja526:19.1": "“Ito ujuṃ uttarāyaṃ disāyaṃ,",
  "ja526:19.2": "Khemānadī himavatā pabhāvī;",
  "ja526:19.3": "Tassā tīre assamo mayha rammo,",
  "ja526:19.4": "Aho bhavaṃ assamaṃ mayhaṃ passe.",
  "ja526:20.1": "Ambā ca sālā tilakā ca jambuyo,",
  "ja526:20.2": "Uddālakā pāṭaliyo ca phullā;",
  "ja526:20.3": "Samantato kimpurisābhigītaṃ,",
  "ja526:20.4": "Aho bhavaṃ assamaṃ mayhaṃ passe.",
  "ja526:21.1": "Tālā ca mūlā ca phalā ca mettha,",
  "ja526:21.2": "Vaṇṇena gandhena upetarūpaṃ;",
  "ja526:21.3": "Taṃ bhūmibhāgehi upetarūpaṃ,",
  "ja526:21.4": "Aho bhavaṃ assamaṃ mayhaṃ passe.",
  "ja526:22.1": "Phalā ca mūlā ca pahūtamettha,",
  "ja526:22.2": "Vaṇṇena gandhena rasenupetā;",
  "ja526:22.3": "Āyanti ca luddakā taṃ padesaṃ,",
  "ja526:22.4": "Mā me tato mūlaphalaṃ ahāsuṃ”.",
  "ja526:23.1": "“Pitā mamaṃ mūlaphalesanaṃ gato,",
  "ja526:23.2": "Idāni āgacchati sāyakāle;",
  "ja526:23.3": "Ubhova gacchāmase assamaṃ taṃ,",
  "ja526:23.4": "Yāva pitā mūlaphalato etu”.",
  "ja526:24.1": "“Aññe bahū isayo sādhurūpā,",
  "ja526:24.2": "Rājīsayo anumagge vasanti;",
  "ja526:24.3": "Teyeva pucchesi mamassamaṃ taṃ,",
  "ja526:24.4": "Te taṃ nayissanti mamaṃ sakāse”.",
  "ja526:25.1": "“Na te kaṭṭhāni bhinnāni,",
  "ja526:25.2": "na te udakamābhataṃ;",
  "ja526:25.3": "Aggīpi te na hāpito,",
  "ja526:25.4": "kiṃ nu mandova jhāyasi.",
  "ja526:26.1": "Bhinnāni kaṭṭhāni huto ca aggi,",
  "ja526:26.2": "Tapanīpi te samitā brahmacārī;",
  "ja526:26.3": "Pīṭhañca mayhaṃ udakañca hoti,",
  "ja526:26.4": "Ramasi tuvaṃ brahmabhūto puratthā.",
  "ja526:27.1": "Abhinnakaṭṭhosi anābhatodako,",
  "ja526:27.2": "Ahāpitaggīsi asiddhabhojano;",
  "ja526:27.3": "Na me tuvaṃ ālapasī mamajja,",
  "ja526:27.4": "Naṭṭhaṃ nu kiṃ cetasikañca dukkhaṃ”.",
  "ja526:28.1": "“Idhāgamā jaṭilo brahmacārī,",
  "ja526:28.2": "Sudassaneyyo sutanū vineti;",
  "ja526:28.3": "Nevātidīgho na panātirasso,",
  "ja526:28.4": "Sukaṇhakaṇhacchadanehi bhoto.",
  "ja526:29.1": "Amassujāto apurāṇavaṇṇī,",
  "ja526:29.2": "Ādhārarūpañca panassa kaṇṭhe;",
  "ja526:29.3": "Dve yamā gaṇḍā ure sujātā,",
  "ja526:29.4": "Suvaṇṇatindukanibhā pabhassarā.",
  "ja526:30.1": "Mukhañca tassa bhusadassaneyyaṃ,",
  "ja526:30.2": "Kaṇṇesu lambanti ca kuñcitaggā;",
  "ja526:30.3": "Te jotare carato māṇavassa,",
  "ja526:30.4": "Suttañca yaṃ saṃyamanaṃ jaṭānaṃ.",
  "ja526:31.1": "Aññā ca tassa saṃyamāni catasso,",
  "ja526:31.2": "Nīlā pītā lohitikā ca setā;",
  "ja526:31.3": "Tā piṃsare carato māṇavassa,",
  "ja526:31.4": "Tiriṭisaṅghāriva pāvusamhi.",
  "ja526:32.1": "Na mikhalaṃ muñjamayaṃ dhāreti,",
  "ja526:32.2": "Na santhare no pana pabbajassa;",
  "ja526:32.3": "Tā jotare jaghanantare vilaggā,",
  "ja526:32.4": "Sateratā vijjurivantalikkhe.",
  "ja526:33.1": "Akhīlakāni ca avaṇṭakāni,",
  "ja526:33.2": "Heṭṭhā nabhyā kaṭisamohitāni;",
  "ja526:33.3": "Aghaṭṭitā niccakīḷaṃ karonti,",
  "ja526:33.4": "Haṃ tāta kiṃrukkhaphalāni tāni.",
  "ja526:34.1": "Jaṭā ca tassa bhusadassaneyyā,",
  "ja526:34.2": "Parosataṃ vellitaggā sugandhā;",
  "ja526:34.3": "Dvedhā siro sādhu vibhattarūpo,",
  "ja526:34.4": "Aho nu kho mayha tathā jaṭāssu.",
  "ja526:35.1": "Yadā ca so pakirati tā jaṭāyo,",
  "ja526:35.2": "Vaṇṇena gandhena upetarūpā;",
  "ja526:35.3": "Nīluppalaṃ vātasameritaṃva,",
  "ja526:35.4": "Tatheva saṃvāti panassamo ayaṃ.",
  "ja526:36.1": "Paṅko ca tassa bhusadassaneyyo,",
  "ja526:36.2": "Netādiso yādiso mayhaṃ kāye;",
  "ja526:36.3": "So vāyatī erito mālutena,",
  "ja526:36.4": "Vanaṃ yathā aggagimhe suphullaṃ.",
  "ja526:37.1": "Nihanti so rukkhaphalaṃ pathabyā,",
  "ja526:37.2": "Sucittarūpaṃ ruciraṃ dassaneyyaṃ;",
  "ja526:37.3": "Khittañca tassa punareti hatthaṃ,",
  "ja526:37.4": "Haṃ tāta kiṃrukkhaphalaṃ nu kho taṃ.",
  "ja526:38.1": "Dantā ca tassa bhusadassaneyyā,",
  "ja526:38.2": "Suddhā samā saṅkhavarūpapannā;",
  "ja526:38.3": "Mano pasādenti vivariyamānā,",
  "ja526:38.4": "Na hi nūna so sākamakhādi tehi.",
  "ja526:39.1": "Akakkasaṃ aggaḷitaṃ muhuṃ muduṃ,",
  "ja526:39.2": "Ujuṃ anuddhataṃ acapalamassa bhāsitaṃ;",
  "ja526:39.3": "Rudaṃ manuññaṃ karavīkasussaraṃ,",
  "ja526:39.4": "Hadayaṅgamaṃ rañjayateva me mano.",
  "ja526:40.1": "Bindussaro nātivisaṭṭhavākyo,",
  "ja526:40.2": "Na nūna sajjhāyamatippayutto;",
  "ja526:40.3": "Icchāmi bho taṃ punadeva daṭṭhuṃ,",
  "ja526:40.4": "Mitto hi me māṇavohu puratthā.",
  "ja526:41.1": "Susandhi sabbattha vimaṭṭhimaṃ vaṇaṃ,",
  "ja526:41.2": "Puthū sujātaṃ kharapattasannitaṃ;",
  "ja526:41.3": "Teneva maṃ uttariyāna māṇavo,",
  "ja526:41.4": "Vivaritaṃ ūruṃ jaghanena piḷayi.",
  "ja526:42.1": "Tapanti ābhanti virocare ca,",
  "ja526:42.2": "Sateratā vijjurivantalikkhe;",
  "ja526:42.3": "Bāhā mudū añjanalomasādisā,",
  "ja526:42.4": "Vicitravaṭṭaṅgulikāssa sobhare.",
  "ja526:43.1": "Akakkasaṅgo na ca dīghalomo,",
  "ja526:43.2": "Nakhāssa dīghā api lohitaggā;",
  "ja526:43.3": "Mudūhi bāhāhi palissajanto,",
  "ja526:43.4": "Kalyāṇarūpo ramayaṃ upaṭṭhahi.",
  "ja526:44.1": "Dumassa tūlūpanibhā pabhassarā,",
  "ja526:44.2": "Suvaṇṇakambutalavaṭṭasucchavi;",
  "ja526:44.3": "Hatthā mudū tehi maṃ samphusitvā,",
  "ja526:44.4": "Ito gato tena maṃ dahanti tāta.",
  "ja526:45.1": "Na nūna so khārividhaṃ ahāsi,",
  "ja526:45.2": "Na nūna so kaṭṭhāni sayaṃ abhañji;",
  "ja526:45.3": "Na nūna so hanti dume kuṭhāriyā,",
  "ja526:45.4": "Na hissa hatthesu khilāni atthi.",
  "ja526:46.1": "Accho ca kho tassa vaṇaṃ akāsi,",
  "ja526:46.2": "So maṃbravi sukhitaṃ maṃ karohi;",
  "ja526:46.3": "Tāhaṃ kariṃ tena mamāsi sokhyaṃ,",
  "ja526:46.4": "So cabravi ‘sukhitosmī’ti brahme.",
  "ja526:47.1": "Ayañca te māluvapaṇṇasanthatā,",
  "ja526:47.2": "Vikiṇṇarūpāva mayā ca tena ca;",
  "ja526:47.3": "Kilantarūpā udake ramitvā,",
  "ja526:47.4": "Punappunaṃ paṇṇakuṭiṃ vajāma.",
  "ja526:48.1": "Na majja mantā paṭibhanti tāta,",
  "ja526:48.2": "Na aggihuttaṃ napi yaññatantaṃ;",
  "ja526:48.3": "Na cāpi te mūlaphalāni bhuñje,",
  "ja526:48.4": "Yāva na passāmi taṃ brahmacāriṃ.",
  "ja526:49.1": "Addhā pajānāsi tuvampi tāta,",
  "ja526:49.2": "Yassaṃ disaṃ vasate brahmacārī;",
  "ja526:49.3": "Taṃ maṃ disaṃ pāpaya tāta khippaṃ,",
  "ja526:49.4": "Mā te ahaṃ amarimassamamhi.",
  "ja526:50.1": "Vicitraphullaṃ hi vanaṃ sutaṃ mayā,",
  "ja526:50.2": "Dijābhighuṭṭhaṃ dijasaṅghasevitaṃ;",
  "ja526:50.3": "Taṃ maṃ vanaṃ pāpaya tāta khippaṃ,",
  "ja526:50.4": "Purā te pāṇaṃ vijahāmi assame”.",
  "ja526:51.1": "“Imasmāhaṃ jotirase vanamhi,",
  "ja526:51.2": "Gandhabbadevaccharasaṅghasevite;",
  "ja526:51.3": "Isīnamāvāse sanantanamhi,",
  "ja526:51.4": "Netādisaṃ aratiṃ pāpuṇetha.",
  "ja526:52.1": "Bhavanti mittāni atho na honti,",
  "ja526:52.2": "Ñātīsu mittesu karonti pemaṃ;",
  "ja526:52.3": "Ayañca jammo kissa vā niviṭṭho,",
  "ja526:52.4": "Yo neva jānāti kutomhi āgato.",
  "ja526:53.1": "Saṃvāsena hi mittāni,",
  "ja526:53.2": "sandhīyanti punappunaṃ;",
  "ja526:53.3": "Sveva mitto asaṅgantu,",
  "ja526:53.4": "asaṃvāsena jīrati.",
  "ja526:54.1": "Sace tuvaṃ dakkhasi brahmacāriṃ,",
  "ja526:54.2": "Sace tuvaṃ sallape brahmacārinā;",
  "ja526:54.3": "Sampannasassaṃva mahodakena,",
  "ja526:54.4": "Tapoguṇaṃ khippamimaṃ pahissasi.",
  "ja526:55.1": "Punapi ce dakkhasi brahmacāriṃ,",
  "ja526:55.2": "Punapi ce sallape brahmacārinā;",
  "ja526:55.3": "Sampannasassaṃva mahodakena,",
  "ja526:55.4": "Usmāgataṃ khippamimaṃ pahissasi.",
  "ja526:56.1": "Bhūtāni hetāni caranti tāta,",
  "ja526:56.2": "Virūparūpena manussaloke;",
  "ja526:56.3": "Na tāni sevetha naro sapañño,",
  "ja526:56.4": "Āsajja naṃ nassati brahmacārī”ti.",
  "ja526:57.1": "Niḷinikājātakaṃ paṭhamaṃ."
}