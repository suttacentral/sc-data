{
  "ja488:0.1": "Jātaka",
  "ja488:0.2": "Pakiṇṇakanipāta",
  "ja488:0.3": "Sālikedāravagga",
  "ja488:0.4": "5. Bhisajātaka",
  "ja488:1.1": "“Assaṃ gavaṃ rajataṃ jātarūpaṃ,",
  "ja488:1.2": "Bhariyañca so idha labhataṃ manāpaṃ;",
  "ja488:1.3": "Puttehi dārehi samaṅgi hotu,",
  "ja488:1.4": "Bhisāni te brāhmaṇa yo ahāsi”.",
  "ja488:2.1": "“Mālañca so kāsikacandanañca,",
  "ja488:2.2": "Dhāretu puttassa bahū bhavantu;",
  "ja488:2.3": "Kāmesu tibbaṃ kurutaṃ apekkhaṃ,",
  "ja488:2.4": "Bhisāni te brāhmaṇa yo ahāsi”.",
  "ja488:3.1": "“Pahūtadhañño kasimā yasassī,",
  "ja488:3.2": "Putte gihī dhanimā sabbakāme;",
  "ja488:3.3": "Vayaṃ apassaṃ gharamāvasātu,",
  "ja488:3.4": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:4.1": "So khattiyo hotu pasayhakārī,",
  "ja488:4.2": "Rājābhirājā balavā yasassī;",
  "ja488:4.3": "Sa cāturantaṃ mahimāvasātu,",
  "ja488:4.4": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:5.1": "So brāhmaṇo hotu avītarāgo,",
  "ja488:5.2": "Muhuttanakkhattapathesu yutto;",
  "ja488:5.3": "Pūjetu naṃ raṭṭhapatī yasassī,",
  "ja488:5.4": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:6.1": "Ajjhāyakaṃ sabbasamantavedaṃ,",
  "ja488:6.2": "Tapassīnaṃ maññatu sabbaloko;",
  "ja488:6.3": "Pūjentu naṃ jānapadā samecca,",
  "ja488:6.4": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:7.1": "Catussadaṃ gāmavaraṃ samiddhaṃ,",
  "ja488:7.2": "Dinnañhi so bhuñjatu vāsavena;",
  "ja488:7.3": "Avītarāgo maraṇaṃ upetu,",
  "ja488:7.4": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:8.1": "So gāmaṇī hotu sahāyamajjhe,",
  "ja488:8.2": "Naccehi gītehi pamodamāno;",
  "ja488:8.3": "So rājato byasana mālattha kiñci,",
  "ja488:8.4": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:9.1": "Yaṃ ekarājā pathaviṃ vijetvā,",
  "ja488:9.2": "Itthīsahassāna ṭhapetu aggaṃ;",
  "ja488:9.3": "Sīmantinīnaṃ pavarā bhavātu,",
  "ja488:9.4": "Bhisāni te brāhmaṇa yā ahāsi.",
  "ja488:10.1": "Isīnañhi sā sabbasamāgatānaṃ,",
  "ja488:10.2": "Bhuñjeyya sāduṃ avikampamānā;",
  "ja488:10.3": "Carātu lābhena vikatthamānā,",
  "ja488:10.4": "Bhisāni te brāhmaṇa yā ahāsi.",
  "ja488:11.1": "Āvāsiko hotu mahāvihāre,",
  "ja488:11.2": "Navakammiko hotu gajaṅgalāyaṃ;",
  "ja488:11.3": "Ālokasandhiṃ divasaṃ karotu,",
  "ja488:11.4": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:12.1": "So bajjhatū pāsasatehi chabbhi,",
  "ja488:12.2": "Rammā vanā niyyatu rājadhāniṃ;",
  "ja488:12.3": "Tuttehi so haññatu pācanehi,",
  "ja488:12.4": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:13.1": "Alakkamālī tipukaṇṇaviddho,",
  "ja488:13.2": "Laṭṭhīhato sappamukhaṃ upetu;",
  "ja488:13.3": "Sakacchabandho visikhaṃ carātu,",
  "ja488:13.4": "Bhisāni te brāhmaṇa yo ahāsi”.",
  "ja488:14.1": "“Yo ve anaṭṭhaṃva naṭṭhanti cāha,",
  "ja488:14.2": "Kāmeva so labhataṃ bhuñjatañca;",
  "ja488:14.3": "Agāramajjhe maraṇaṃ upetu,",
  "ja488:14.4": "Yo vā bhonto saṅkati kañcideva”.",
  "ja488:15.1": "“Yadesamānā vicaranti loke,",
  "ja488:15.2": "Iṭṭhañca kantañca bahūnametaṃ;",
  "ja488:15.3": "Piyaṃ manuññaṃ cidha jīvaloke,",
  "ja488:15.4": "Kasmā isayo nappasaṃsanti kāme”.",
  "ja488:16.1": "“Kāmesu ve haññare bajjhare ca,",
  "ja488:16.2": "Kāmesu dukkhañca bhayañca jātaṃ;",
  "ja488:16.3": "Kāmesu bhūtādhipatī pamattā,",
  "ja488:16.4": "Pāpāni kammāni karonti mohā.",
  "ja488:17.1": "Te pāpadhammā pasavetva pāpaṃ,",
  "ja488:17.2": "Kāyassa bhedā nirayaṃ vajanti;",
  "ja488:17.3": "Ādīnavaṃ kāmaguṇesu disvā,",
  "ja488:17.4": "Tasmā isayo nappasaṃsanti kāme”.",
  "ja488:18.1": "“Vīmaṃsamāno isino bhisāni,",
  "ja488:18.2": "Tīre gahetvāna thale nidhesiṃ;",
  "ja488:18.3": "Suddhā apāpā isayo vasanti,",
  "ja488:18.4": "Etāni te brahmacārī bhisāni”.",
  "ja488:19.1": "“Na te naṭā no pana kīḷaneyyā,",
  "ja488:19.2": "Na bandhavā no pana te sahāyā;",
  "ja488:19.3": "Kismiṃ vupatthambha sahassanetta,",
  "ja488:19.4": "Isīhi tvaṃ kīḷasi devarāja”.",
  "ja488:20.1": "“Ācariyo mesi pitā ca mayhaṃ,",
  "ja488:20.2": "Esā patiṭṭhā khalitassa brahme;",
  "ja488:20.3": "Ekāparādhaṃ khama bhūripañña,",
  "ja488:20.4": "Na paṇḍitā kodhabalā bhavanti”.",
  "ja488:21.1": "“Suvāsitaṃ isinaṃ ekarattaṃ,",
  "ja488:21.2": "Yaṃ vāsavaṃ bhūtapatiddasāma;",
  "ja488:21.3": "Sabbeva bhonto sumanā bhavantu,",
  "ja488:21.4": "Yaṃ brāhmaṇo paccupādī bhisāni”.",
  "ja488:22.1": "“Ahañca sāriputto ca,",
  "ja488:22.2": "moggallāno ca kassapo;",
  "ja488:22.3": "Anuruddho puṇṇo ānando,",
  "ja488:22.4": "tadāsuṃ satta bhātaro.",
  "ja488:23.1": "Bhaginī uppalavaṇṇā ca,",
  "ja488:23.2": "dāsī khujjuttarā tadā;",
  "ja488:23.3": "Citto gahapati dāso,",
  "ja488:23.4": "yakkho sātāgiro tadā.",
  "ja488:24.1": "Pālileyyo tadā nāgo,",
  "ja488:24.2": "madhudo seṭṭhavānaro;",
  "ja488:24.3": "Kāḷudāyī tadā sakko,",
  "ja488:24.4": "evaṃ dhāretha jātakanti”.",
  "ja488:25.1": "Bhisajātakaṃ pañcamaṃ."
}