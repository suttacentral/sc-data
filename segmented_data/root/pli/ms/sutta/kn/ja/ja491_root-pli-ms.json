{
  "ja491:0.1": "Jātaka",
  "ja491:0.2": "Pakiṇṇakanipāta",
  "ja491:0.3": "Sālikedāravagga",
  "ja491:0.4": "8. Mahāmorajātaka",
  "ja491:1.1": "“Sace hi tyāhaṃ dhanahetu gāhito,",
  "ja491:1.2": "Mā maṃ vadhī jīvagāhaṃ gahetvā;",
  "ja491:1.3": "Rañño ca maṃ samma upantikaṃ nehi,",
  "ja491:1.4": "Maññe dhanaṃ lacchasinapparūpaṃ”.",
  "ja491:2.1": "“Na me ayaṃ tuyha vadhāya ajja,",
  "ja491:2.2": "Samāhito cāpadhure khurappo;",
  "ja491:2.3": "Pāsañca tyāhaṃ adhipātayissaṃ,",
  "ja491:2.4": "Yathāsukhaṃ gacchatu morarājā”.",
  "ja491:3.1": "“Yaṃ satta vassāni mamānubandhi,",
  "ja491:3.2": "Rattindivaṃ khuppipāsaṃ sahanto;",
  "ja491:3.3": "Atha kissa maṃ pāsavasūpanītaṃ,",
  "ja491:3.4": "Pamuttave icchasi bandhanasmā.",
  "ja491:4.1": "Pāṇātipātā virato nusajja,",
  "ja491:4.2": "Abhayaṃ nu te sabbabhūtesu dinnaṃ;",
  "ja491:4.3": "Yaṃ maṃ tuvaṃ pāsavasūpanītaṃ,",
  "ja491:4.4": "Pamuttave icchasi bandhanasmā”.",
  "ja491:5.1": "“Pāṇātipātā viratassa brūhi,",
  "ja491:5.2": "Abhayañca yo sabbabhūtesu deti;",
  "ja491:5.3": "Pucchāmi taṃ morarājetamatthaṃ,",
  "ja491:5.4": "Ito cuto kiṃ labhate sukhaṃ so”.",
  "ja491:6.1": "“Pāṇātipātā viratassa brūmi,",
  "ja491:6.2": "Abhayañca yo sabbabhūtesu deti;",
  "ja491:6.3": "Diṭṭheva dhamme labhate pasaṃsaṃ,",
  "ja491:6.4": "Saggañca so yāti sarīrabhedā”.",
  "ja491:7.1": "“Na santi devā iti āhu eke,",
  "ja491:7.2": "Idheva jīvo vibhavaṃ upeti;",
  "ja491:7.3": "Tathā phalaṃ sukatadukkaṭānaṃ,",
  "ja491:7.4": "Dattupaññattañca vadanti dānaṃ;",
  "ja491:7.5": "Tesaṃ vaco arahataṃ saddahāno,",
  "ja491:7.6": "Tasmā ahaṃ sakuṇe bādhayāmi”.",
  "ja491:8.1": "“Cando ca suriyo ca ubho sudassanā,",
  "ja491:8.2": "Gacchanti obhāsayamantalikkhe;",
  "ja491:8.3": "Imassa lokassa parassa vā te,",
  "ja491:8.4": "Kathaṃ nu te āhu manussaloke”.",
  "ja491:9.1": "“Cando ca suriyo ca ubho sudassanā,",
  "ja491:9.2": "Gacchanti obhāsayamantalikkhe;",
  "ja491:9.3": "Parassa lokassa na te imassa,",
  "ja491:9.4": "Devāti te āhu manussaloke”.",
  "ja491:10.1": "“Ettheva te nīhatā hīnavādā,",
  "ja491:10.2": "Ahetukā ye na vadanti kammaṃ;",
  "ja491:10.3": "Tathā phalaṃ sukatadukkaṭānaṃ,",
  "ja491:10.4": "Dattupaññattaṃ ye ca vadanti dānaṃ”.",
  "ja491:11.1": "“Addhā hi saccaṃ vacanaṃ tavedaṃ,",
  "ja491:11.2": "Kathañhi dānaṃ aphalaṃ bhaveyya;",
  "ja491:11.3": "Tathā phalaṃ sukatadukkaṭānaṃ,",
  "ja491:11.4": "Dattupaññattañca kathaṃ bhaveyya.",
  "ja491:12.1": "Kathaṃkaro kintikaro kimācaraṃ,",
  "ja491:12.2": "Kiṃ sevamāno kena tapoguṇena;",
  "ja491:12.3": "Akkhāhi me morarājetamatthaṃ,",
  "ja491:12.4": "Yathā ahaṃ no nirayaṃ pateyyaṃ”.",
  "ja491:13.1": "“Ye keci atthi samaṇā pathabyā,",
  "ja491:13.2": "Kāsāyavatthā anagāriyā te;",
  "ja491:13.3": "Pātova piṇḍāya caranti kāle,",
  "ja491:13.4": "Vikālacariyā viratā hi santo.",
  "ja491:14.1": "Te tattha kālenupasaṅkamitvā,",
  "ja491:14.2": "Pucchāhi yaṃ te manaso piyaṃ siyā;",
  "ja491:14.3": "Te te pavakkhanti yathāpajānaṃ,",
  "ja491:14.4": "Imassa lokassa parassa catthaṃ”.",
  "ja491:15.1": "“Tacaṃva jiṇṇaṃ urago purāṇaṃ,",
  "ja491:15.2": "Paṇḍūpalāsaṃ harito dumova;",
  "ja491:15.3": "Esappahīno mama luddabhāvo,",
  "ja491:15.4": "Jahāmahaṃ luddakabhāvamajja.",
  "ja491:16.1": "Ye cāpi me sakuṇā atthi baddhā,",
  "ja491:16.2": "Satāninekāni nivesanasmiṃ;",
  "ja491:16.3": "Tesampahaṃ jīvitamajja dammi,",
  "ja491:16.4": "Mokkhañca te pattā sakaṃ niketaṃ”.",
  "ja491:17.1": "“Luddo carī pāsahattho araññe,",
  "ja491:17.2": "Bādhetu morādhipatiṃ yasassiṃ;",
  "ja491:17.3": "Bandhitvā morādhipatiṃ yasassiṃ,",
  "ja491:17.4": "Dukkhā sa pamucci yathāhaṃ pamutto”ti.",
  "ja491:18.1": "Mahāmorajātakaṃ aṭṭhamaṃ."
}