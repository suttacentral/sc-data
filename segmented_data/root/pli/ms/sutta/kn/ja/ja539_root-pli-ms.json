{
  "ja539:0.1": "Jātaka",
  "ja539:0.2": "Mahānipāta",
  "ja539:0.3": "Mūgapakkhavagga",
  "ja539:0.4": "2. Mahājanakajātaka",
  "ja539:1.1": "“Koyaṁ majjhe samuddasmiṁ,",
  "ja539:1.2": "apassaṁ tīramāyuhe;",
  "ja539:1.3": "Kaṁ tvaṁ atthavasaṁ ñatvā,",
  "ja539:1.4": "evaṁ vāyamase bhusaṁ”.",
  "ja539:2.1": "“Nisamma vattaṁ lokassa,",
  "ja539:2.2": "vāyāmassa ca devate;",
  "ja539:2.3": "Tasmā majjhe samuddasmiṁ,",
  "ja539:2.4": "apassaṁ tīramāyuhe”.",
  "ja539:3.1": "“Gambhīre appameyyasmiṁ,",
  "ja539:3.2": "tīraṁ yassa na dissati;",
  "ja539:3.3": "Mogho te purisavāyāmo,",
  "ja539:3.4": "appatvāva marissasi”.",
  "ja539:4.1": "“Anaṇo ñātinaṁ hoti,",
  "ja539:4.2": "devānaṁ pitunañca so;",
  "ja539:4.3": "Karaṁ purisakiccāni,",
  "ja539:4.4": "na ca pacchānutappati”.",
  "ja539:5.1": "“Apāraneyyaṁ yaṁ kammaṁ,",
  "ja539:5.2": "Aphalaṁ kilamathuddayaṁ;",
  "ja539:5.3": "Tattha ko vāyamenattho,",
  "ja539:5.4": "Maccu yassābhinippataṁ”.",
  "ja539:6.1": "“Apāraneyyamaccantaṁ,",
  "ja539:6.2": "yo viditvāna devate;",
  "ja539:6.3": "Na rakkhe attano pāṇaṁ,",
  "ja539:6.4": "jaññā so yadi hāpaye.",
  "ja539:7.1": "Adhippāyaphalaṁ eke,",
  "ja539:7.2": "asmiṁ lokasmi devate;",
  "ja539:7.3": "Payojayanti kammāni,",
  "ja539:7.4": "tāni ijjhanti vā na vā.",
  "ja539:8.1": "Sandiṭṭhikaṁ kammaphalaṁ,",
  "ja539:8.2": "nanu passasi devate;",
  "ja539:8.3": "Sannā aññe tarāmahaṁ,",
  "ja539:8.4": "tañca passāmi santike.",
  "ja539:9.1": "So ahaṁ vāyamissāmi,",
  "ja539:9.2": "yathāsatti yathābalaṁ;",
  "ja539:9.3": "Gacchaṁ pāraṁ samuddassa,",
  "ja539:9.4": "kassaṁ purisakāriyaṁ”.",
  "ja539:10.1": "“Yo tvaṁ evaṁ gate oghe,",
  "ja539:10.2": "appameyye mahaṇṇave;",
  "ja539:10.3": "Dhammavāyāmasampanno,",
  "ja539:10.4": "kammunā nāvasīdasi;",
  "ja539:10.5": "So tvaṁ tattheva gacchāhi,",
  "ja539:10.6": "yattha te nirato mano.",
  "ja539:11.1": "Suriyuggamane nidhi,",
  "ja539:11.2": "atho oggamane nidhi;",
  "ja539:11.3": "Anto nidhi bahi nidhi,",
  "ja539:11.4": "na anto na bahi nidhi.",
  "ja539:12.1": "Ārohane mahānidhi,",
  "ja539:12.2": "atho orohane nidhi;",
  "ja539:12.3": "Catūsu mahāsālesu,",
  "ja539:12.4": "samantā yojane nidhi.",
  "ja539:13.1": "Dantaggesu mahānidhi,",
  "ja539:13.2": "bālaggesu ca kepuke;",
  "ja539:13.3": "Rukkhaggesu mahānidhi,",
  "ja539:13.4": "soḷasete mahānidhī;",
  "ja539:13.5": "Sahassathāmo pallaṅko,",
  "ja539:13.6": "sīvalārādhanena ca.",
  "ja539:14.1": "Āsīsetheva puriso,",
  "ja539:14.2": "na nibbindeyya paṇḍito;",
  "ja539:14.3": "Passāmi vohaṁ attānaṁ,",
  "ja539:14.4": "yathā icchiṁ tathā ahu.",
  "ja539:15.1": "Āsīsetheva puriso,",
  "ja539:15.2": "na nibbindeyya paṇḍito;",
  "ja539:15.3": "Passāmi vohaṁ attānaṁ,",
  "ja539:15.4": "udakā thalamubbhataṁ.",
  "ja539:16.1": "Vāyametheva puriso,",
  "ja539:16.2": "na nibbindeyya paṇḍito;",
  "ja539:16.3": "Passāmi vohaṁ attānaṁ,",
  "ja539:16.4": "yathā icchiṁ tathā ahu.",
  "ja539:17.1": "Vāyametheva puriso,",
  "ja539:17.2": "na nibbindeyya paṇḍito;",
  "ja539:17.3": "Passāmi vohaṁ attānaṁ,",
  "ja539:17.4": "udakā thalamubbhataṁ.",
  "ja539:18.1": "Dukkhūpanītopi naro sapañño,",
  "ja539:18.2": "Āsaṁ na chindeyya sukhāgamāya;",
  "ja539:18.3": "Bahū hi phassā ahitā hitā ca,",
  "ja539:18.4": "Avitakkitā maccumupabbajanti.",
  "ja539:19.1": "Acintitampi bhavati,",
  "ja539:19.2": "cintitampi vinassati;",
  "ja539:19.3": "Na hi cintāmayā bhogā,",
  "ja539:19.4": "itthiyā purisassa vā”.",
  "ja539:20.1": "“Aporāṇaṁ vata bho rājā,",
  "ja539:20.2": "sabbabhummo disampati;",
  "ja539:20.3": "Nājja nacce nisāmeti,",
  "ja539:20.4": "na gīte kurute mano.",
  "ja539:21.1": "Na mige napi uyyāne,",
  "ja539:21.2": "napi haṁse udikkhati;",
  "ja539:21.3": "Mūgova tuṇhimāsīno,",
  "ja539:21.4": "na atthamanusāsati”.",
  "ja539:22.1": "“Sukhakāmā rahosīlā,",
  "ja539:22.2": "vadhabandhā upāratā;",
  "ja539:22.3": "Kassa nu ajja ārāme,",
  "ja539:22.4": "daharā vuddhā ca acchare.",
  "ja539:23.1": "Atikkantavanathā dhīrā,",
  "ja539:23.2": "namo tesaṁ mahesinaṁ;",
  "ja539:23.3": "Ye ussukamhi lokamhi,",
  "ja539:23.4": "viharanti manussukā.",
  "ja539:24.1": "Te chetvā maccuno jālaṁ,",
  "ja539:24.2": "tataṁ māyāvino daḷaṁ;",
  "ja539:24.3": "Chinnālayattā gacchanti,",
  "ja539:24.4": "ko tesaṁ gatimāpaye.",
  "ja539:25.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:25.2": "vibhattaṁ bhāgaso mitaṁ;",
  "ja539:25.3": "Pahāya pabbajissāmi,",
  "ja539:25.4": "taṁ kudāssu bhavissati.",
  "ja539:26.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:26.2": "visālaṁ sabbatopabhaṁ;",
  "ja539:26.3": "Pahāya pabbajissāmi,",
  "ja539:26.4": "taṁ kudāssu bhavissati.",
  "ja539:27.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:27.2": "bahupākāratoraṇaṁ;",
  "ja539:27.3": "Pahāya pabbajissāmi,",
  "ja539:27.4": "taṁ kudāssu bhavissati.",
  "ja539:28.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:28.2": "daḷhamaṭṭālakoṭṭhakaṁ;",
  "ja539:28.3": "Pahāya pabbajissāmi,",
  "ja539:28.4": "taṁ kudāssu bhavissati.",
  "ja539:29.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:29.2": "suvibhattaṁ mahāpathaṁ;",
  "ja539:29.3": "Pahāya pabbajissāmi,",
  "ja539:29.4": "taṁ kudāssu bhavissati.",
  "ja539:30.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:30.2": "suvibhattantarāpaṇaṁ;",
  "ja539:30.3": "Pahāya pabbajissāmi,",
  "ja539:30.4": "taṁ kudāssu bhavissati.",
  "ja539:31.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:31.2": "gavassarathapīḷitaṁ;",
  "ja539:31.3": "Pahāya pabbajissāmi,",
  "ja539:31.4": "taṁ kudāssu bhavissati.",
  "ja539:32.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:32.2": "ārāmavanamāliniṁ;",
  "ja539:32.3": "Pahāya pabbajissāmi,",
  "ja539:32.4": "taṁ kudāssu bhavissati.",
  "ja539:33.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:33.2": "uyyānavanamāliniṁ;",
  "ja539:33.3": "Pahāya pabbajissāmi,",
  "ja539:33.4": "taṁ kudāssu bhavissati.",
  "ja539:34.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:34.2": "pāsādavanamāliniṁ;",
  "ja539:34.3": "Pahāya pabbajissāmi,",
  "ja539:34.4": "taṁ kudāssu bhavissati.",
  "ja539:35.1": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:35.2": "tipuraṁ rājabandhuniṁ;",
  "ja539:35.3": "Māpitaṁ somanassena,",
  "ja539:35.4": "vedehena yasassinā;",
  "ja539:35.5": "Pahāya pabbajissāmi,",
  "ja539:35.6": "taṁ kudāssu bhavissati.",
  "ja539:36.1": "Kadāhaṁ vedehe phīte,",
  "ja539:36.2": "nicite dhammarakkhite;",
  "ja539:36.3": "Pahāya pabbajissāmi,",
  "ja539:36.4": "taṁ kudāssu bhavissati.",
  "ja539:37.1": "Kadāhaṁ vedehe phīte,",
  "ja539:37.2": "ajeyye dhammarakkhite;",
  "ja539:37.3": "Pahāya pabbajissāmi,",
  "ja539:37.4": "taṁ kudāssu bhavissati.",
  "ja539:38.1": "Kadāhaṁ antepuraṁ rammaṁ,",
  "ja539:38.2": "Vibhattaṁ bhāgaso mitaṁ;",
  "ja539:38.3": "Pahāya pabbajissāmi,",
  "ja539:38.4": "Taṁ kudāssu bhavissati.",
  "ja539:39.1": "Kadāhaṁ antepuraṁ rammaṁ,",
