{
  "ja507:0.1": "Jātaka",
  "ja507:0.2": "Vīsatinipāta",
  "ja507:0.3": "Mātaṅgavagga",
  "ja507:0.4": "11. Mahāpalobhanajātaka",
  "ja507:1.1": "Brahmalokā cavitvāna,",
  "ja507:1.2": "devaputto mahiddhiko;",
  "ja507:1.3": "Rañño putto udapādi,",
  "ja507:1.4": "sabbakāmasamiddhisu.",
  "ja507:2.1": "Kāmā vā kāmasaññā vā,",
  "ja507:2.2": "brahmaloke na vijjati;",
  "ja507:2.3": "Svāssu tāyeva saññāya,",
  "ja507:2.4": "kāmehi vijigucchatha.",
  "ja507:3.1": "Tassa cantepure āsi,",
  "ja507:3.2": "jhānāgāraṃ sumāpitaṃ;",
  "ja507:3.3": "So tattha paṭisallīno,",
  "ja507:3.4": "eko rahasi jhāyatha.",
  "ja507:4.1": "Sa rājā paridevesi,",
  "ja507:4.2": "puttasokena aṭṭito;",
  "ja507:4.3": "“Ekaputto cayaṃ mayhaṃ,",
  "ja507:4.4": "na ca kāmāni bhuñjati.",
  "ja507:5.1": "Ko nu khvettha upāyo so,",
  "ja507:5.2": "ko vā jānāti kiñcanaṃ;",
  "ja507:5.3": "Yo me puttaṃ palobheyya,",
  "ja507:5.4": "yathā kāmāni patthaye”.",
  "ja507:6.1": "Ahu kumārī tattheva,",
  "ja507:6.2": "vaṇṇarūpasamāhitā;",
  "ja507:6.3": "Kusalā naccagītassa,",
  "ja507:6.4": "vādite ca padakkhiṇā.",
  "ja507:7.1": "Sā tattha upasaṅkamma,",
  "ja507:7.2": "rājānaṃ etadabravi;",
  "ja507:7.3": "“Ahaṃ kho naṃ palobheyyaṃ,",
  "ja507:7.4": "sace bhattā bhavissati”.",
  "ja507:8.1": "Taṃ tathāvādiniṃ rājā,",
  "ja507:8.2": "kumāriṃ etadabravi;",
  "ja507:8.3": "“Tvaññeva naṃ palobhehi,",
  "ja507:8.4": "tava bhattā bhavissati”.",
  "ja507:9.1": "Sā ca antepuraṃ gantvā,",
  "ja507:9.2": "bahuṃ kāmupasaṃhitaṃ;",
  "ja507:9.3": "Hadayaṅgamā pemanīyā,",
  "ja507:9.4": "citrā gāthā abhāsatha.",
  "ja507:10.1": "Tassā ca gāyamānāya,",
  "ja507:10.2": "saddaṃ sutvāna nāriyā;",
  "ja507:10.3": "Kāmacchandassa uppajji,",
  "ja507:10.4": "janaṃ so paripucchatha.",
  "ja507:11.1": "“Kasseso saddo ko vā so,",
  "ja507:11.2": "bhaṇati uccāvacaṃ bahuṃ;",
  "ja507:11.3": "Hadayaṅgamaṃ pemanīyaṃ,",
  "ja507:11.4": "aho kaṇṇasukhaṃ mama”.",
  "ja507:12.1": "“Esā kho pamadā deva,",
  "ja507:12.2": "khiḍḍā esā anappikā;",
  "ja507:12.3": "Sace tvaṃ kāme bhuñjeyya,",
  "ja507:12.4": "bhiyyo bhiyyo chādeyyu taṃ”.",
  "ja507:13.1": "“Iṅgha āgacchatorena,",
  "ja507:13.2": "avidūramhi gāyatu;",
  "ja507:13.3": "Assamassa samīpamhi,",
  "ja507:13.4": "santike mayhaṃ gāyatu”.",
  "ja507:14.1": "Tirokuṭṭamhi gāyitvā,",
  "ja507:14.2": "jhānāgāramhi pāvisi;",
  "ja507:14.3": "Bandhi naṃ anupubbena,",
  "ja507:14.4": "āraññamiva kuñjaraṃ.",
  "ja507:15.1": "Tassa kāmarasaṃ ñatvā,",
  "ja507:15.2": "issādhammo ajāyatha;",
  "ja507:15.3": "“Ahameva kāme bhuñjeyyaṃ,",
  "ja507:15.4": "mā añño puriso ahu”.",
  "ja507:16.1": "Tato asiṃ gahetvāna,",
  "ja507:16.2": "purise hantuṃ upakkami;",
  "ja507:16.3": "“Ahameveko bhuñjissaṃ,",
  "ja507:16.4": "mā añño puriso siyā”.",
  "ja507:17.1": "Tato jānapadā sabbe,",
  "ja507:17.2": "vikkandiṃsu samāgatā;",
  "ja507:17.3": "“Putto tyāyaṃ mahārāja,",
  "ja507:17.4": "janaṃ heṭhetyadūsakaṃ”.",
  "ja507:18.1": "Tañca rājā vivāhesi,",
  "ja507:18.2": "samhā raṭṭhā ca khattiyo;",
  "ja507:18.3": "“Yāvatā vijitaṃ mayhaṃ,",
  "ja507:18.4": "na te vatthabba tāvade”.",
  "ja507:19.1": "Tato so bhariyamādāya,",
  "ja507:19.2": "samuddaṃ upasaṅkami;",
  "ja507:19.3": "Paṇṇasālaṃ karitvāna,",
  "ja507:19.4": "vanamuñchāya pāvisi.",
  "ja507:20.1": "Athettha isi māgacchi,",
  "ja507:20.2": "samuddaṃ uparūpari;",
  "ja507:20.3": "So tassa gehaṃ pāvekkhi,",
  "ja507:20.4": "bhattakāle upaṭṭhite.",
  "ja507:21.1": "Tañca bhariyā palobhesi,",
  "ja507:21.2": "passa yāva sudāruṇaṃ;",
  "ja507:21.3": "Cuto so brahmacariyamhā,",
  "ja507:21.4": "iddhiyā parihāyatha.",
  "ja507:22.1": "Rājaputto ca uñchāto,",
  "ja507:22.2": "vanamūlaphalaṃ bahuṃ;",
  "ja507:22.3": "Sāyaṃ kājena ādāya,",
  "ja507:22.4": "assamaṃ upasaṅkami.",
  "ja507:23.1": "Isī ca khattiyaṃ disvā,",
  "ja507:23.2": "samuddaṃ upasaṅkami;",
  "ja507:23.3": "“Vehāyasaṃ gamissan”ti,",
  "ja507:23.4": "sīdate so mahaṇṇave.",
  "ja507:24.1": "Khattiyo ca isiṃ disvā,",
  "ja507:24.2": "sīdamānaṃ mahaṇṇave;",
  "ja507:24.3": "Tasseva anukampāya,",
  "ja507:24.4": "imā gāthā abhāsatha.",
  "ja507:25.1": "“Abhijjamāne vārismiṃ,",
  "ja507:25.2": "sayaṃ āgamma iddhiyā;",
  "ja507:25.3": "Missībhāvitthiyā gantvā,",
  "ja507:25.4": "saṃsīdasi mahaṇṇave.",
  "ja507:26.1": "Āvaṭṭanī mahāmāyā,",
  "ja507:26.2": "brahmacariyavikopanā;",
  "ja507:26.3": "Sīdanti naṃ viditvāna,",
  "ja507:26.4": "ārakā parivajjaye.",
  "ja507:27.1": "Analā mudusambhāsā,",
  "ja507:27.2": "duppūrā tā nadīsamā;",
  "ja507:27.3": "Sīdanti naṃ viditvāna,",
  "ja507:27.4": "ārakā parivajjaye.",
  "ja507:28.1": "Yaṃ etā upasevanti,",
  "ja507:28.2": "chandasā vā dhanena vā;",
  "ja507:28.3": "Jātavedova saṃ ṭhānaṃ,",
  "ja507:28.4": "khippaṃ anudahanti naṃ”.",
  "ja507:29.1": "Khattiyassa vaco sutvā,",
  "ja507:29.2": "isissa nibbidā ahu;",
  "ja507:29.3": "Laddhā porāṇakaṃ maggaṃ,",
  "ja507:29.4": "gacchate so vihāyasaṃ.",
  "ja507:30.1": "Khattiyo ca isiṃ disvā,",
  "ja507:30.2": "gacchamānaṃ vihāyasaṃ;",
  "ja507:30.3": "Saṃvegaṃ alabhī dhīro,",
  "ja507:30.4": "pabbajjaṃ samarocayi.",
  "ja507:31.1": "Tato so pabbajitvāna,",
  "ja507:31.2": "kāmarāgaṃ virājayi;",
  "ja507:31.3": "Kāmarāgaṃ virājetvā,",
  "ja507:31.4": "brahmalokūpago ahūti.",
  "ja507:32.1": "Mahāpalobhanajātakaṃ ekādasamaṃ."
}