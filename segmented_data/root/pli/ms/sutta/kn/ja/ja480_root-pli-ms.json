{
  "ja480:0.1": "Jātaka",
  "ja480:0.2": "Terasakanipāta",
  "ja480:0.3": "Ambavagga",
  "ja480:0.4": "7. Akittijātaka",
  "ja480:1.1": "“Akittiṃ disvā sammantaṃ,",
  "ja480:1.2": "sakko bhūtapatī bravi;",
  "ja480:1.3": "Kiṃ patthayaṃ mahābrahme,",
  "ja480:1.4": "eko sammasi ghammani”.",
  "ja480:2.1": "“Dukkho punabbhavo sakka,",
  "ja480:2.2": "sarīrassa ca bhedanaṃ;",
  "ja480:2.3": "Sammohamaraṇaṃ dukkhaṃ,",
  "ja480:2.4": "tasmā sammāmi vāsava”.",
  "ja480:3.1": "“Etasmiṃ te sulapite,",
  "ja480:3.2": "patirūpe subhāsite;",
  "ja480:3.3": "Varaṃ kassapa te dammi,",
  "ja480:3.4": "yaṃ kiñci manasicchasi”.",
  "ja480:4.1": "“Varañce me ado sakka,",
  "ja480:4.2": "sabbabhūtānamissara;",
  "ja480:4.3": "Yena putte ca dāre ca,",
  "ja480:4.4": "dhanadhaññaṃ piyāni ca;",
  "ja480:4.5": "Laddhā narā na tappanti,",
  "ja480:4.6": "so lobho na mayī vase”.",
  "ja480:5.1": "“Etasmiṃ te sulapite,",
  "ja480:5.2": "patirūpe subhāsite;",
  "ja480:5.3": "Varaṃ kassapa te dammi,",
  "ja480:5.4": "yaṃ kiñci manasicchasi”.",
  "ja480:6.1": "“Varañce me ado sakka,",
  "ja480:6.2": "sabbabhūtānamissara;",
  "ja480:6.3": "Khettaṃ vatthuṃ hiraññañca,",
  "ja480:6.4": "gavāssaṃ dāsaporisaṃ;",
  "ja480:6.5": "Yena jātena jīyanti,",
  "ja480:6.6": "so doso na mayī vase”.",
  "ja480:7.1": "“Etasmiṃ te sulapite,",
  "ja480:7.2": "patirūpe subhāsite;",
  "ja480:7.3": "Varaṃ kassapa te dammi,",
  "ja480:7.4": "yaṃ kiñci manasicchasi”.",
  "ja480:8.1": "“Varañce me ado sakka,",
  "ja480:8.2": "sabbabhūtānamissara;",
  "ja480:8.3": "Bālaṃ na passe na suṇe,",
  "ja480:8.4": "na ca bālena saṃvase;",
  "ja480:8.5": "Bālenallāpasallāpaṃ,",
  "ja480:8.6": "na kare na ca rocaye”.",
  "ja480:9.1": "“Kiṃ nu te akaraṃ bālo,",
  "ja480:9.2": "vada kassapa kāraṇaṃ;",
  "ja480:9.3": "Kena kassapa bālassa,",
  "ja480:9.4": "dassanaṃ nābhikaṅkhasi”.",
  "ja480:10.1": "“Anayaṃ nayati dummedho,",
  "ja480:10.2": "adhurāyaṃ niyuñjati;",
  "ja480:10.3": "Dunnayo seyyaso hoti,",
  "ja480:10.4": "sammā vutto pakuppati;",
  "ja480:10.5": "Vinayaṃ so na jānāti,",
  "ja480:10.6": "sādhu tassa adassanaṃ”.",
  "ja480:11.1": "“Etasmiṃ te sulapite,",
  "ja480:11.2": "patirūpe subhāsite;",
  "ja480:11.3": "Varaṃ kassapa te dammi,",
  "ja480:11.4": "yaṃ kiñci manasicchasi”.",
  "ja480:12.1": "“Varañce me ado sakka,",
  "ja480:12.2": "sabbabhūtānamissara;",
  "ja480:12.3": "Dhīraṃ passe suṇe dhīraṃ,",
  "ja480:12.4": "dhīrena saha saṃvase;",
  "ja480:12.5": "Dhīrenallāpasallāpaṃ,",
  "ja480:12.6": "taṃ kare tañca rocaye”.",
  "ja480:13.1": "“Kiṃ nu te akaraṃ dhīro,",
  "ja480:13.2": "vada kassapa kāraṇaṃ;",
  "ja480:13.3": "Kena kassapa dhīrassa,",
  "ja480:13.4": "dassanaṃ abhikaṅkhasi”.",
  "ja480:14.1": "“Nayaṃ nayati medhāvī,",
  "ja480:14.2": "adhurāyaṃ na yuñjati;",
  "ja480:14.3": "Sunayo seyyaso hoti,",
  "ja480:14.4": "sammā vutto na kuppati;",
  "ja480:14.5": "Vinayaṃ so pajānāti,",
  "ja480:14.6": "sādhu tena samāgamo”.",
  "ja480:15.1": "“Etasmiṃ te sulapite,",
  "ja480:15.2": "patirūpe subhāsite;",
  "ja480:15.3": "Varaṃ kassapa te dammi,",
  "ja480:15.4": "yaṃ kiñci manasicchasi”.",
  "ja480:16.1": "“Varañce me ado sakka,",
  "ja480:16.2": "sabbabhūtānamissara;",
  "ja480:16.3": "Tato ratyā vivasāne,",
  "ja480:16.4": "sūriyuggamanaṃ pati;",
  "ja480:16.5": "Dibbā bhakkhā pātubhaveyyuṃ,",
  "ja480:16.6": "sīlavanto ca yācakā.",
  "ja480:17.1": "Dadato me na khīyetha,",
  "ja480:17.2": "datvā nānutapeyyahaṃ;",
  "ja480:17.3": "Dadaṃ cittaṃ pasādeyyaṃ,",
  "ja480:17.4": "etaṃ sakka varaṃ vare”.",
  "ja480:18.1": "“Etasmiṃ te sulapite,",
  "ja480:18.2": "patirūpe subhāsite;",
  "ja480:18.3": "Varaṃ kassapa te dammi,",
  "ja480:18.4": "yaṃ kiñci manasicchasi”.",
  "ja480:19.1": "“Varañce me ado sakka,",
  "ja480:19.2": "sabbabhūtānamissara;",
  "ja480:19.3": "Na maṃ puna upeyyāsi,",
  "ja480:19.4": "etaṃ sakka varaṃ vare”.",
  "ja480:20.1": "“Bahūhi vatacariyāhi,",
  "ja480:20.2": "narā ca atha nāriyo;",
  "ja480:20.3": "Dassanaṃ abhikaṅkhanti,",
  "ja480:20.4": "kiṃ nu me dassane bhayaṃ”.",
  "ja480:21.1": "“Taṃ tādisaṃ devavaṇṇaṃ,",
  "ja480:21.2": "sabbakāmasamiddhinaṃ;",
  "ja480:21.3": "Disvā tapo pamajjeyyaṃ,",
  "ja480:21.4": "etaṃ te dassane bhayan”ti.",
  "ja480:22.1": "Akittijātakaṃ sattamaṃ."
}