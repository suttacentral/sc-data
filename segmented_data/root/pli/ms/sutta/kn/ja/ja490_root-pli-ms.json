{
  "ja490:0.1": "Jātaka",
  "ja490:0.2": "Pakiṇṇakanipāta",
  "ja490:0.3": "Sālikedāravagga",
  "ja490:0.4": "7. Pañcuposathikajātaka",
  "ja490:1.1": "“Appossukko dāni tuvaṃ kapota,",
  "ja490:1.2": "Vihaṅgama na tava bhojanattho;",
  "ja490:1.3": "Khudaṃ pipāsaṃ adhivāsayanto,",
  "ja490:1.4": "Kasmā bhavaṃposathiko kapota”.",
  "ja490:2.1": "“Ahaṃ pure giddhigato kapotiyā,",
  "ja490:2.2": "Asmiṃ padesasmimubho ramāma;",
  "ja490:2.3": "Athaggahī sākuṇiko kapotiṃ,",
  "ja490:2.4": "Akāmako tāya vinā ahosiṃ.",
  "ja490:3.1": "Nānābhavā vippayogena tassā,",
  "ja490:3.2": "Manomayaṃ vedana vedayāmi;",
  "ja490:3.3": "Tasmā ahaṃposathaṃ pālayāmi,",
  "ja490:3.4": "Rāgo mamaṃ mā punarāgamāsi”. (1)",
  "ja490:4.1": "“Anujjugāmī uragā dujivha,",
  "ja490:4.2": "Dāṭhāvudho ghoravisosi sappa;",
  "ja490:4.3": "Khudaṃ pipāsaṃ adhivāsayanto,",
  "ja490:4.4": "Kasmā bhavaṃposathiko nu dīgha.",
  "ja490:5.1": "Usabho ahū balavā gāmikassa,",
  "ja490:5.2": "Calakkakū vaṇṇabalūpapanno;",
  "ja490:5.3": "So maṃ akkami taṃ kupito aḍaṃsiṃ,",
  "ja490:5.4": "Dukkhābhitunno maraṇaṃ upāgā.",
  "ja490:6.1": "Tato janā nikkhamitvāna gāmā,",
  "ja490:6.2": "Kanditvā roditvā apakkamiṃsu;",
  "ja490:6.3": "Tasmā ahaṃposathaṃ pālayāmi,",
  "ja490:6.4": "Kodho mamaṃ mā punarāgamāsi. (2)",
  "ja490:7.1": "Matāna maṃsāni bahū susāne,",
  "ja490:7.2": "Manuññarūpaṃ tava bhojane taṃ;",
  "ja490:7.3": "Khudaṃ pipāsaṃ adhivāsayanto,",
  "ja490:7.4": "Kasmā bhavaṃposathiko siṅgāla.",
  "ja490:8.1": "Pavisi kucchiṃ mahato gajassa,",
  "ja490:8.2": "Kuṇape rato hatthimaṃsesu giddho;",
  "ja490:8.3": "Uṇho ca vāto tikhiṇā ca rasmiyo,",
  "ja490:8.4": "Te sosayuṃ tassa karīsamaggaṃ.",
  "ja490:9.1": "Kiso ca paṇḍū ca ahaṃ bhadante,",
  "ja490:9.2": "Na me ahū nikkhamanāya maggo;",
  "ja490:9.3": "Mahā ca megho sahasā pavassi,",
  "ja490:9.4": "So temayī tassa karīsamaggaṃ.",
  "ja490:10.1": "Tato ahaṃ nikkhamisaṃ bhadante,",
  "ja490:10.2": "Cando yathā rāhumukhā pamutto;",
  "ja490:10.3": "Tasmā ahaṃposathaṃ pālayāmi,",
  "ja490:10.4": "Lobho mamaṃ mā punarāgamāsi. (3)",
  "ja490:11.1": "Vammīkathūpasmiṃ kipillikāni,",
  "ja490:11.2": "Nippothayanto tuvaṃ pure carāsi;",
  "ja490:11.3": "Khudaṃ pipāsaṃ adhivāsayanto,",
  "ja490:11.4": "Kasmā bhavaṃposathiko nu accha.",
  "ja490:12.1": "Sakaṃ niketaṃ atihīḷayāno,",
  "ja490:12.2": "Atricchatā mallagāmaṃ agacchiṃ;",
  "ja490:12.3": "Tato janā nikkhamitvāna gāmā,",
  "ja490:12.4": "Kodaṇḍakena paripothayiṃsu maṃ.",
  "ja490:13.1": "So bhinnasīso ruhiramakkhitaṅgo,",
  "ja490:13.2": "Paccāgamāsiṃ sakaṃ niketaṃ;",
  "ja490:13.3": "Tasmā ahaṃposathaṃ pālayāmi,",
  "ja490:13.4": "Atricchatā mā punarāgamāsi”. (4)",
  "ja490:14.1": "“Yaṃ no apucchittha tuvaṃ bhadante,",
  "ja490:14.2": "Sabbeva byākarimha yathāpajānaṃ;",
  "ja490:14.3": "Mayampi pucchāma tuvaṃ bhadante,",
  "ja490:14.4": "Kasmā bhavaṃposathiko nu brahme”.",
  "ja490:15.1": "“Anūpalitto mama assamamhi,",
  "ja490:15.2": "Paccekabuddho muhuttaṃ nisīdi;",
  "ja490:15.3": "So maṃ avedī gatimāgatiñca,",
  "ja490:15.4": "Nāmañca gottaṃ caraṇañca sabbaṃ.",
  "ja490:16.1": "Evampahaṃ vandi na tassa pāde,",
  "ja490:16.2": "Na cāpi naṃ mānagatena pucchiṃ;",
  "ja490:16.3": "Tasmā ahaṃposathaṃ pālayāmi,",
  "ja490:16.4": "Māno mamaṃ mā punarāgamāsī”ti. (5)",
  "ja490:17.1": "Pañcuposathikajātakaṃ sattamaṃ."
}