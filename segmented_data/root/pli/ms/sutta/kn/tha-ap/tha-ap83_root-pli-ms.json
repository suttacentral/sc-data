{
  "tha-ap83:0.1": "Therāpadāna",
  "tha-ap83:0.2": "Timiravagga",
  "tha-ap83:0.3": "1. Timirapupphiyattheraapadāna",
  "tha-ap83:1.1": "“Candabhāgānadītīre,",
  "tha-ap83:1.2": "anusotaṃ vajāmahaṃ;",
  "tha-ap83:1.3": "Nisinnaṃ samaṇaṃ disvā,",
  "tha-ap83:1.4": "vippasannamanāvilaṃ.",
  "tha-ap83:2.1": "Tattha cittaṃ pasādetvā,",
  "tha-ap83:2.2": "evaṃ cintesahaṃ tadā;",
  "tha-ap83:2.3": "Tārayissati tiṇṇoyaṃ,",
  "tha-ap83:2.4": "dantoyaṃ damayissati.",
  "tha-ap83:3.1": "Assāsissati assattho,",
  "tha-ap83:3.2": "santo ca samayissati;",
  "tha-ap83:3.3": "Mocayissati mutto ca,",
  "tha-ap83:3.4": "nibbāpessati nibbuto.",
  "tha-ap83:4.1": "Evāhaṃ cintayitvāna,",
  "tha-ap83:4.2": "siddhatthassa mahesino;",
  "tha-ap83:4.3": "Gahetvā timirapupphaṃ,",
  "tha-ap83:4.4": "matthake okiriṃ ahaṃ.",
  "tha-ap83:5.1": "Añjaliṃ paggahetvāna,",
  "tha-ap83:5.2": "katvā ca naṃ padakkhiṇaṃ;",
  "tha-ap83:5.3": "Vanditvā satthuno pāde,",
  "tha-ap83:5.4": "pakkāmiṃ aparaṃ disaṃ.",
  "tha-ap83:6.1": "Aciraṃ gatamattaṃ maṃ,",
  "tha-ap83:6.2": "migarājā viheṭhayi;",
  "tha-ap83:6.3": "Papātamanugacchanto,",
  "tha-ap83:6.4": "tattheva papatiṃ ahaṃ.",
  "tha-ap83:7.1": "Catunnavutito kappe,",
  "tha-ap83:7.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap83:7.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap83:7.4": "pupphapūjāyidaṃ phalaṃ.",
  "tha-ap83:8.1": "Chappaññāsamhi kappamhi,",
  "tha-ap83:8.2": "sattevāsuṃ mahāyasā;",
  "tha-ap83:8.3": "Sattaratanasampannā,",
  "tha-ap83:8.4": "cakkavattī mahabbalā.",
  "tha-ap83:9.1": "Paṭisambhidā catasso,",
  "tha-ap83:9.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap83:9.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap83:9.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap83:10.1": "Itthaṃ sudaṃ āyasmā timirapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap83:11.1": "Timirapupphiyattherassāpadānaṃ paṭhamaṃ."
}