{
  "tha-ap540:0.1": "Therāpadāna",
  "tha-ap540:0.2": "Kaccāyanavagga",
  "tha-ap540:0.3": "8 Uruveḷakassapattheraapadāna",
  "tha-ap540:1.1": "“Padumuttaro nāma jino,",
  "tha-ap540:1.2": "sabbalokavidū muni;",
  "tha-ap540:1.3": "Ito satasahassamhi,",
  "tha-ap540:1.4": "kappe uppajji cakkhumā.",
  "tha-ap540:2.1": "Ovādako viññāpako,",
  "tha-ap540:2.2": "tārako sabbapāṇinaṁ;",
  "tha-ap540:2.3": "Desanākusalo buddho,",
  "tha-ap540:2.4": "tāresi janataṁ bahuṁ.",
  "tha-ap540:3.1": "Anukampako kāruṇiko,",
  "tha-ap540:3.2": "hitesī sabbapāṇinaṁ;",
  "tha-ap540:3.3": "Sampatte titthiye sabbe,",
  "tha-ap540:3.4": "pañcasīle patiṭṭhapi.",
  "tha-ap540:4.1": "Evaṁ nirākulaṁ āsi,",
  "tha-ap540:4.2": "suññataṁ titthiyehi ca;",
  "tha-ap540:4.3": "Vicittaṁ arahantehi,",
  "tha-ap540:4.4": "vasībhūtehi tādibhi.",
  "tha-ap540:5.1": "Ratanānaṭṭhapaññāsaṁ,",
  "tha-ap540:5.2": "uggato so mahāmuni;",
  "tha-ap540:5.3": "Kañcanagghiyasaṅkāso,",
  "tha-ap540:5.4": "bāttiṁsavaralakkhaṇo.",
  "tha-ap540:6.1": "Vassasatasahassāni,",
  "tha-ap540:6.2": "āyu vijjati tāvade;",
  "tha-ap540:6.3": "Tāvatā tiṭṭhamāno so,",
  "tha-ap540:6.4": "tāresi janataṁ bahuṁ.",
  "tha-ap540:7.1": "Tadāhaṁ haṁsavatiyā,",
  "tha-ap540:7.2": "brāhmaṇo sādhusammato;",
  "tha-ap540:7.3": "Upecca lokapajjotaṁ,",
  "tha-ap540:7.4": "assosiṁ dhammadesanaṁ.",
  "tha-ap540:8.1": "Tadā mahāparisatiṁ,",
  "tha-ap540:8.2": "mahāparisasāvakaṁ;",
  "tha-ap540:8.3": "Ṭhapentaṁ etadaggamhi,",
  "tha-ap540:8.4": "sutvāna mudito ahaṁ.",
  "tha-ap540:9.1": "Mahatā parivārena,",
  "tha-ap540:9.2": "nimantetvā mahājinaṁ;",
  "tha-ap540:9.3": "Brāhmaṇānaṁ sahassena,",
  "tha-ap540:9.4": "sahadānamadāsahaṁ.",
  "tha-ap540:10.1": "Mahādānaṁ daditvāna,",
  "tha-ap540:10.2": "abhivādiya nāyakaṁ;",
  "tha-ap540:10.3": "Ekamantaṁ ṭhito haṭṭho,",
  "tha-ap540:10.4": "idaṁ vacanamabraviṁ.",
  "tha-ap540:11.1": "‘Tayi saddhāya me vīra,",
  "tha-ap540:11.2": "adhikāraguṇena ca;",
  "tha-ap540:11.3": "Parisā mahatī hotu,",
  "tha-ap540:11.4": "nibbattassa tahiṁ tahiṁ’.",
  "tha-ap540:12.1": "Tadā avoca parisaṁ,",
  "tha-ap540:12.2": "gajagajjitasussaro;",
  "tha-ap540:12.3": "Karavīkaruto satthā,",
  "tha-ap540:12.4": "‘etaṁ passatha brāhmaṇaṁ.",
  "tha-ap540:13.1": "Hemavaṇṇaṁ mahābāhuṁ,",
  "tha-ap540:13.2": "kamalānanalocanaṁ;",
  "tha-ap540:13.3": "Udaggatanujaṁ haṭṭhaṁ,",
  "tha-ap540:13.4": "saddhavantaṁ guṇe mama.",
  "tha-ap540:14.1": "Esa patthayate ṭhānaṁ,",
  "tha-ap540:14.2": "sīhaghosassa bhikkhuno;",
  "tha-ap540:14.3": "Anāgatamhi addhāne,",
  "tha-ap540:14.4": "lacchase taṁ manorathaṁ.",
  "tha-ap540:15.1": "Satasahassito kappe,",
  "tha-ap540:15.2": "okkākakulasambhavo;",
  "tha-ap540:15.3": "Gotamo nāma gottena,",
  "tha-ap540:15.4": "satthā loke bhavissati.",
  "tha-ap540:16.1": "Tassa dhammesu dāyādo,",
  "tha-ap540:16.2": "oraso dhammanimmito;",
  "tha-ap540:16.3": "Kassapo nāma gottena,",
  "tha-ap540:16.4": "hessati satthu sāvako’.",
  "tha-ap540:17.1": "Ito dvenavute kappe,",
  "tha-ap540:17.2": "ahu satthā anuttaro;",
  "tha-ap540:17.3": "Anūpamo asadiso,",
  "tha-ap540:17.4": "phusso lokagganāyako.",
  "tha-ap540:18.1": "So ca sabbaṁ tamaṁ hantvā,",
  "tha-ap540:18.2": "vijaṭetvā mahājaṭaṁ;",
  "tha-ap540:18.3": "Vassate amataṁ vuṭṭhiṁ,",
  "tha-ap540:18.4": "tappayanto sadevakaṁ.",
  "tha-ap540:19.1": "Tadā hi bārāṇasiyaṁ,",
  "tha-ap540:19.2": "rājā paccā ahumhase;",
  "tha-ap540:19.3": "Bhātaromha tayo sabbe,",
  "tha-ap540:19.4": "saṁvisaṭṭhāva rājino.",
  "tha-ap540:20.1": "Vīraṅgarūpā balino,",
  "tha-ap540:20.2": "saṅgāme aparājitā;",
  "tha-ap540:20.3": "Tadā kupitapaccanto,",
  "tha-ap540:20.4": "amhe āha mahīpati.",
  "tha-ap540:21.1": "‘Etha gantvāna paccantaṁ,",
  "tha-ap540:21.2": "sodhetvā aṭṭavībalaṁ;",
  "tha-ap540:21.3": "Khemaṁ vijiritaṁ katvā,",
  "tha-ap540:21.4": "puna dethāti bhāsatha’.",
  "tha-ap540:22.1": "Tato mayaṁ avocumha,",
  "tha-ap540:22.2": "yadi deyyāsi nāyakaṁ;",
  "tha-ap540:22.3": "Upaṭṭhānāya amhākaṁ,",
  "tha-ap540:22.4": "sādhayissāma vo tato.",
  "tha-ap540:23.1": "Tato mayaṁ laddhavarā,",
  "tha-ap540:23.2": "bhūmipālena pesitā;",
  "tha-ap540:23.3": "Nikkhittasatthaṁ paccantaṁ,",
  "tha-ap540:23.4": "katvā punarupacca taṁ.",
  "tha-ap540:24.1": "Yācitvā satthupaṭṭhānaṁ,",
  "tha-ap540:24.2": "rājānaṁ lokanāyakaṁ;",
  "tha-ap540:24.3": "Munivīraṁ labhitvāna,",
  "tha-ap540:24.4": "yāvajīvaṁ yajimha taṁ.",
  "tha-ap540:25.1": "Mahagghāni ca vatthāni,",
  "tha-ap540:25.2": "paṇītāni rasāni ca;",
  "tha-ap540:25.3": "Senāsanāni rammāni,",
  "tha-ap540:25.4": "bhesajjāni hitāni ca.",
  "tha-ap540:26.1": "Datvā sasaṅghamunino,",
  "tha-ap540:26.2": "dhammenuppāditāni no;",
  "tha-ap540:26.3": "Sīlavanto kāruṇikā,",
  "tha-ap540:26.4": "bhāvanāyuttamānasā.",
  "tha-ap540:27.1": "Saddhā paricaritvāna,",
  "tha-ap540:27.2": "mettacittena nāyakaṁ;",
  "tha-ap540:27.3": "Nibbute tamhi lokagge,",
  "tha-ap540:27.4": "pūjaṁ katvā yathābalaṁ.",
  "tha-ap540:28.1": "Tato cutā santusitaṁ,",
  "tha-ap540:28.2": "gatā tattha mahāsukhaṁ;",
  "tha-ap540:28.3": "Anubhūtā mayaṁ sabbe,",
  "tha-ap540:28.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap540:29.1": "Māyākāro yathā raṅge,",
  "tha-ap540:29.2": "dassesi vikatiṁ bahuṁ;",
  "tha-ap540:29.3": "Tathā bhave bhamantohaṁ,",
  "tha-ap540:29.4": "videhādhipatī ahuṁ.",
  "tha-ap540:30.1": "Guṇāceḷassa vākyena,",
  "tha-ap540:30.2": "micchādiṭṭhigatāsayo;",
  "tha-ap540:30.3": "Narakaṁ maggamārūḷho,",
  "tha-ap540:30.4": "rucāya mama dhītuyā.",
  "tha-ap540:31.1": "Ovādaṁ nādiyitvāna,",
  "tha-ap540:31.2": "brahmunā nāradenahaṁ;",
  "tha-ap540:31.3": "Bahudhā saṁsito santo,",
  "tha-ap540:31.4": "diṭṭhiṁ hitvāna pāpikaṁ.",
  "tha-ap540:32.1": "Pūrayitvā visesena,",
  "tha-ap540:32.2": "dasa kammapathānihaṁ;",
  "tha-ap540:32.3": "Hitvāna dehamagamiṁ,",
  "tha-ap540:32.4": "saggaṁ sabhavanaṁ yathā.",
  "tha-ap540:33.1": "Pacchime bhave sampatte,",
  "tha-ap540:33.2": "brahmabandhu ahosahaṁ;",
  "tha-ap540:33.3": "Bārāṇasiyaṁ phītāyaṁ,",
  "tha-ap540:33.4": "jāto vippamahākule.",
  "tha-ap540:34.1": "Maccubyādhijarā bhīto,",
  "tha-ap540:34.2": "ogāhetvā mahāvanaṁ;",
  "tha-ap540:34.3": "Nibbānaṁ padamesanto,",
  "tha-ap540:34.4": "jaṭilesu paribbajiṁ.",
  "tha-ap540:35.1": "Tadā dve bhātaro mayhaṁ,",
  "tha-ap540:35.2": "pabbajiṁsu mayā saha;",
  "tha-ap540:35.3": "Uruvelāyaṁ māpetvā,",
  "tha-ap540:35.4": "assamaṁ nivasiṁ ahaṁ.",
  "tha-ap540:36.1": "Kassapo nāma gottena,",
  "tha-ap540:36.2": "uruveḷanivāsiko;",
  "tha-ap540:36.3": "Tato me āsi paññatti,",
  "tha-ap540:36.4": "uruveḷakassapo iti.",
  "tha-ap540:37.1": "Nadīsakāse bhātā me,",
  "tha-ap540:37.2": "nadīkassapasavhayo;",
  "tha-ap540:37.3": "Āsī sakāsanāmena,",
  "tha-ap540:37.4": "gayāyaṁ gayākassapo.",
  "tha-ap540:38.1": "Dve satāni kaniṭṭhassa,",
  "tha-ap540:38.2": "tīṇi majjhassa bhātuno;",
  "tha-ap540:38.3": "Mama pañca satānūnā,",
  "tha-ap540:38.4": "sissā sabbe mamānugā.",
  "tha-ap540:39.1": "Tadā upecca maṁ buddho,",
  "tha-ap540:39.2": "katvāna vividhāni me;",
  "tha-ap540:39.3": "Pāṭihīrāni lokaggo,",
  "tha-ap540:39.4": "vinesi narasārathi.",
  "tha-ap540:40.1": "Sahassaparivārena,",
  "tha-ap540:40.2": "ahosiṁ ehibhikkhuko;",
  "tha-ap540:40.3": "Teheva saha sabbehi,",
  "tha-ap540:40.4": "arahattamapāpuṇiṁ.",
  "tha-ap540:41.1": "Te cevaññe ca bahavo,",
  "tha-ap540:41.2": "sissā maṁ parivārayuṁ;",
  "tha-ap540:41.3": "Sāsituñca samatthohaṁ,",
  "tha-ap540:41.4": "tato maṁ isisattamo.",
  "tha-ap540:42.1": "Mahāparisabhāvasmiṁ,",
  "tha-ap540:42.2": "etadagge ṭhapesi maṁ;",
  "tha-ap540:42.3": "Aho buddhe kataṁ kāraṁ,",
  "tha-ap540:42.4": "saphalaṁ me ajāyatha.",
  "tha-ap540:43.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap540:43.2": "…pe…",
  "tha-ap540:43.3": "viharāmi anāsavo.",
  "tha-ap540:44.1": "Svāgataṁ vata me āsi,",
  "tha-ap540:44.2": "…pe…",
  "tha-ap540:44.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap540:45.1": "Paṭisambhidā catasso,",
  "tha-ap540:45.2": "…pe…",
  "tha-ap540:45.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap540:46.1": "Itthaṁ sudaṁ āyasmā uruveḷakassapo thero imā gāthāyo abhāsitthāti.",
  "tha-ap540:47.1": "Uruveḷakassapattherassāpadānaṁ aṭṭhamaṁ."
}