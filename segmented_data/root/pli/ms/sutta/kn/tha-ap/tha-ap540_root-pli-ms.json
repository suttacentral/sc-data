{
  "tha-ap540:0.1": "Therāpadāna",
  "tha-ap540:0.2": "Kaccāyanavagga",
  "tha-ap540:0.3": "8 Uruveḷakassapattheraapadāna",
  "tha-ap540:1.1": "“Padumuttaro nāma jino,",
  "tha-ap540:1.2": "sabbalokavidū muni;",
  "tha-ap540:1.3": "Ito satasahassamhi,",
  "tha-ap540:1.4": "kappe uppajji cakkhumā.",
  "tha-ap540:2.1": "Ovādako viññāpako,",
  "tha-ap540:2.2": "tārako sabbapāṇinaṃ;",
  "tha-ap540:2.3": "Desanākusalo buddho,",
  "tha-ap540:2.4": "tāresi janataṃ bahuṃ.",
  "tha-ap540:3.1": "Anukampako kāruṇiko,",
  "tha-ap540:3.2": "hitesī sabbapāṇinaṃ;",
  "tha-ap540:3.3": "Sampatte titthiye sabbe,",
  "tha-ap540:3.4": "pañcasīle patiṭṭhapi.",
  "tha-ap540:4.1": "Evaṃ nirākulaṃ āsi,",
  "tha-ap540:4.2": "suññataṃ titthiyehi ca;",
  "tha-ap540:4.3": "Vicittaṃ arahantehi,",
  "tha-ap540:4.4": "vasībhūtehi tādibhi.",
  "tha-ap540:5.1": "Ratanānaṭṭhapaññāsaṃ,",
  "tha-ap540:5.2": "uggato so mahāmuni;",
  "tha-ap540:5.3": "Kañcanagghiyasaṅkāso,",
  "tha-ap540:5.4": "bāttiṃsavaralakkhaṇo.",
  "tha-ap540:6.1": "Vassasatasahassāni,",
  "tha-ap540:6.2": "āyu vijjati tāvade;",
  "tha-ap540:6.3": "Tāvatā tiṭṭhamāno so,",
  "tha-ap540:6.4": "tāresi janataṃ bahuṃ.",
  "tha-ap540:7.1": "Tadāhaṃ haṃsavatiyā,",
  "tha-ap540:7.2": "brāhmaṇo sādhusammato;",
  "tha-ap540:7.3": "Upecca lokapajjotaṃ,",
  "tha-ap540:7.4": "assosiṃ dhammadesanaṃ.",
  "tha-ap540:8.1": "Tadā mahāparisatiṃ,",
  "tha-ap540:8.2": "mahāparisasāvakaṃ;",
  "tha-ap540:8.3": "Ṭhapentaṃ etadaggamhi,",
  "tha-ap540:8.4": "sutvāna mudito ahaṃ.",
  "tha-ap540:9.1": "Mahatā parivārena,",
  "tha-ap540:9.2": "nimantetvā mahājinaṃ;",
  "tha-ap540:9.3": "Brāhmaṇānaṃ sahassena,",
  "tha-ap540:9.4": "sahadānamadāsahaṃ.",
  "tha-ap540:10.1": "Mahādānaṃ daditvāna,",
  "tha-ap540:10.2": "abhivādiya nāyakaṃ;",
  "tha-ap540:10.3": "Ekamantaṃ ṭhito haṭṭho,",
  "tha-ap540:10.4": "idaṃ vacanamabraviṃ.",
  "tha-ap540:11.1": "‘Tayi saddhāya me vīra,",
  "tha-ap540:11.2": "adhikāraguṇena ca;",
  "tha-ap540:11.3": "Parisā mahatī hotu,",
  "tha-ap540:11.4": "nibbattassa tahiṃ tahiṃ’.",
  "tha-ap540:12.1": "Tadā avoca parisaṃ,",
  "tha-ap540:12.2": "gajagajjitasussaro;",
  "tha-ap540:12.3": "Karavīkaruto satthā,",
  "tha-ap540:12.4": "‘etaṃ passatha brāhmaṇaṃ.",
  "tha-ap540:13.1": "Hemavaṇṇaṃ mahābāhuṃ,",
  "tha-ap540:13.2": "kamalānanalocanaṃ;",
  "tha-ap540:13.3": "Udaggatanujaṃ haṭṭhaṃ,",
  "tha-ap540:13.4": "saddhavantaṃ guṇe mama.",
  "tha-ap540:14.1": "Esa patthayate ṭhānaṃ,",
  "tha-ap540:14.2": "sīhaghosassa bhikkhuno;",
  "tha-ap540:14.3": "Anāgatamhi addhāne,",
  "tha-ap540:14.4": "lacchase taṃ manorathaṃ.",
  "tha-ap540:15.1": "Satasahassito kappe,",
  "tha-ap540:15.2": "okkākakulasambhavo;",
  "tha-ap540:15.3": "Gotamo nāma gottena,",
  "tha-ap540:15.4": "satthā loke bhavissati.",
  "tha-ap540:16.1": "Tassa dhammesu dāyādo,",
  "tha-ap540:16.2": "oraso dhammanimmito;",
  "tha-ap540:16.3": "Kassapo nāma gottena,",
  "tha-ap540:16.4": "hessati satthu sāvako’.",
  "tha-ap540:17.1": "Ito dvenavute kappe,",
  "tha-ap540:17.2": "ahu satthā anuttaro;",
  "tha-ap540:17.3": "Anūpamo asadiso,",
  "tha-ap540:17.4": "phusso lokagganāyako.",
  "tha-ap540:18.1": "So ca sabbaṃ tamaṃ hantvā,",
  "tha-ap540:18.2": "vijaṭetvā mahājaṭaṃ;",
  "tha-ap540:18.3": "Vassate amataṃ vuṭṭhiṃ,",
  "tha-ap540:18.4": "tappayanto sadevakaṃ.",
  "tha-ap540:19.1": "Tadā hi bārāṇasiyaṃ,",
  "tha-ap540:19.2": "rājā paccā ahumhase;",
  "tha-ap540:19.3": "Bhātaromha tayo sabbe,",
  "tha-ap540:19.4": "saṃvisaṭṭhāva rājino.",
  "tha-ap540:20.1": "Vīraṅgarūpā balino,",
  "tha-ap540:20.2": "saṅgāme aparājitā;",
  "tha-ap540:20.3": "Tadā kupitapaccanto,",
  "tha-ap540:20.4": "amhe āha mahīpati.",
  "tha-ap540:21.1": "‘Etha gantvāna paccantaṃ,",
  "tha-ap540:21.2": "sodhetvā aṭṭavībalaṃ;",
  "tha-ap540:21.3": "Khemaṃ vijiritaṃ katvā,",
  "tha-ap540:21.4": "puna dethāti bhāsatha’.",
  "tha-ap540:22.1": "Tato mayaṃ avocumha,",
  "tha-ap540:22.2": "yadi deyyāsi nāyakaṃ;",
  "tha-ap540:22.3": "Upaṭṭhānāya amhākaṃ,",
  "tha-ap540:22.4": "sādhayissāma vo tato.",
  "tha-ap540:23.1": "Tato mayaṃ laddhavarā,",
  "tha-ap540:23.2": "bhūmipālena pesitā;",
  "tha-ap540:23.3": "Nikkhittasatthaṃ paccantaṃ,",
  "tha-ap540:23.4": "katvā punarupacca taṃ.",
  "tha-ap540:24.1": "Yācitvā satthupaṭṭhānaṃ,",
  "tha-ap540:24.2": "rājānaṃ lokanāyakaṃ;",
  "tha-ap540:24.3": "Munivīraṃ labhitvāna,",
  "tha-ap540:24.4": "yāvajīvaṃ yajimha taṃ.",
  "tha-ap540:25.1": "Mahagghāni ca vatthāni,",
  "tha-ap540:25.2": "paṇītāni rasāni ca;",
  "tha-ap540:25.3": "Senāsanāni rammāni,",
  "tha-ap540:25.4": "bhesajjāni hitāni ca.",
  "tha-ap540:26.1": "Datvā sasaṃghamunino,",
  "tha-ap540:26.2": "dhammenuppāditāni no;",
  "tha-ap540:26.3": "Sīlavanto kāruṇikā,",
  "tha-ap540:26.4": "bhāvanāyuttamānasā.",
  "tha-ap540:27.1": "Saddhā paricaritvāna,",
  "tha-ap540:27.2": "mettacittena nāyakaṃ;",
  "tha-ap540:27.3": "Nibbute tamhi lokagge,",
  "tha-ap540:27.4": "pūjaṃ katvā yathābalaṃ.",
  "tha-ap540:28.1": "Tato cutā santusitaṃ,",
  "tha-ap540:28.2": "gatā tattha mahāsukhaṃ;",
  "tha-ap540:28.3": "Anubhūtā mayaṃ sabbe,",
  "tha-ap540:28.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap540:29.1": "Māyākāro yathā raṅge,",
  "tha-ap540:29.2": "dassesi vikatiṃ bahuṃ;",
  "tha-ap540:29.3": "Tathā bhave bhamantohaṃ,",
  "tha-ap540:29.4": "videhādhipatī ahuṃ.",
  "tha-ap540:30.1": "Guṇāceḷassa vākyena,",
  "tha-ap540:30.2": "micchādiṭṭhigatāsayo;",
  "tha-ap540:30.3": "Narakaṃ maggamārūḷho,",
  "tha-ap540:30.4": "rucāya mama dhītuyā.",
  "tha-ap540:31.1": "Ovādaṃ nādiyitvāna,",
  "tha-ap540:31.2": "brahmunā nāradenahaṃ;",
  "tha-ap540:31.3": "Bahudhā saṃsito santo,",
  "tha-ap540:31.4": "diṭṭhiṃ hitvāna pāpikaṃ.",
  "tha-ap540:32.1": "Pūrayitvā visesena,",
  "tha-ap540:32.2": "dasa kammapathānihaṃ;",
  "tha-ap540:32.3": "Hitvāna dehamagamiṃ,",
  "tha-ap540:32.4": "saggaṃ sabhavanaṃ yathā.",
  "tha-ap540:33.1": "Pacchime bhave sampatte,",
  "tha-ap540:33.2": "brahmabandhu ahosahaṃ;",
  "tha-ap540:33.3": "Bārāṇasiyaṃ phītāyaṃ,",
  "tha-ap540:33.4": "jāto vippamahākule.",
  "tha-ap540:34.1": "Maccubyādhijarā bhīto,",
  "tha-ap540:34.2": "ogāhetvā mahāvanaṃ;",
  "tha-ap540:34.3": "Nibbānaṃ padamesanto,",
  "tha-ap540:34.4": "jaṭilesu paribbajiṃ.",
  "tha-ap540:35.1": "Tadā dve bhātaro mayhaṃ,",
  "tha-ap540:35.2": "pabbajiṃsu mayā saha;",
  "tha-ap540:35.3": "Uruvelāyaṃ māpetvā,",
  "tha-ap540:35.4": "assamaṃ nivasiṃ ahaṃ.",
  "tha-ap540:36.1": "Kassapo nāma gottena,",
  "tha-ap540:36.2": "uruveḷanivāsiko;",
  "tha-ap540:36.3": "Tato me āsi paññatti,",
  "tha-ap540:36.4": "uruveḷakassapo iti.",
  "tha-ap540:37.1": "Nadīsakāse bhātā me,",
  "tha-ap540:37.2": "nadīkassapasavhayo;",
  "tha-ap540:37.3": "Āsī sakāsanāmena,",
  "tha-ap540:37.4": "gayāyaṃ gayākassapo.",
  "tha-ap540:38.1": "Dve satāni kaniṭṭhassa,",
  "tha-ap540:38.2": "tīṇi majjhassa bhātuno;",
  "tha-ap540:38.3": "Mama pañca satānūnā,",
  "tha-ap540:38.4": "sissā sabbe mamānugā.",
  "tha-ap540:39.1": "Tadā upecca maṃ buddho,",
  "tha-ap540:39.2": "katvāna vividhāni me;",
  "tha-ap540:39.3": "Pāṭihīrāni lokaggo,",
  "tha-ap540:39.4": "vinesi narasārathi.",
  "tha-ap540:40.1": "Sahassaparivārena,",
  "tha-ap540:40.2": "ahosiṃ ehibhikkhuko;",
  "tha-ap540:40.3": "Teheva saha sabbehi,",
  "tha-ap540:40.4": "arahattamapāpuṇiṃ.",
  "tha-ap540:41.1": "Te cevaññe ca bahavo,",
  "tha-ap540:41.2": "sissā maṃ parivārayuṃ;",
  "tha-ap540:41.3": "Sāsituñca samatthohaṃ,",
  "tha-ap540:41.4": "tato maṃ isisattamo.",
  "tha-ap540:42.1": "Mahāparisabhāvasmiṃ,",
  "tha-ap540:42.2": "etadagge ṭhapesi maṃ;",
  "tha-ap540:42.3": "Aho buddhe kataṃ kāraṃ,",
  "tha-ap540:42.4": "saphalaṃ me ajāyatha.",
  "tha-ap540:43.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap540:43.2": "…pe…",
  "tha-ap540:43.3": "viharāmi anāsavo.",
  "tha-ap540:44.1": "Svāgataṃ vata me āsi,",
  "tha-ap540:44.2": "…pe…",
  "tha-ap540:44.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap540:45.1": "Paṭisambhidā catasso,",
  "tha-ap540:45.2": "…pe…",
  "tha-ap540:45.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap540:46.1": "Itthaṃ sudaṃ āyasmā uruveḷakassapo thero imā gāthāyo abhāsitthāti.",
  "tha-ap540:47.1": "Uruveḷakassapattherassāpadānaṃ aṭṭhamaṃ."
}