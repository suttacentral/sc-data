{
  "tha-ap535:0.1": "Therāpadāna",
  "tha-ap535:0.2": "Kaccāyanavagga",
  "tha-ap535:0.3": "3. Mahākappinattheraapadāna",
  "tha-ap535:1.1": "“Padumuttaro nāma jino,",
  "tha-ap535:1.2": "sabbadhammāna pāragū;",
  "tha-ap535:1.3": "Udito ajaṭākāse,",
  "tha-ap535:1.4": "ravīva saradambare.",
  "tha-ap535:2.1": "Vacanābhāya bodheti,",
  "tha-ap535:2.2": "veneyyapadumāni so;",
  "tha-ap535:2.3": "Kilesapaṅkaṃ soseti,",
  "tha-ap535:2.4": "matiraṃsīhi nāyako.",
  "tha-ap535:3.1": "Titthiyānaṃ yase hanti,",
  "tha-ap535:3.2": "khajjotābhā yathā ravi;",
  "tha-ap535:3.3": "Saccatthābhaṃ pakāseti,",
  "tha-ap535:3.4": "ratanaṃva divākaro.",
  "tha-ap535:4.1": "Guṇānaṃ āyatibhūto,",
  "tha-ap535:4.2": "ratanānaṃva sāgaro;",
  "tha-ap535:4.3": "Pajjunnoriva bhūtāni,",
  "tha-ap535:4.4": "dhammameghena vassati.",
  "tha-ap535:5.1": "Akkhadasso tadā āsiṃ,",
  "tha-ap535:5.2": "nagare haṃsasavhaye;",
  "tha-ap535:5.3": "Upecca dhammamassosiṃ,",
  "tha-ap535:5.4": "jalajuttamanāmino.",
  "tha-ap535:6.1": "Ovādakassa bhikkhūnaṃ,",
  "tha-ap535:6.2": "sāvakassa katāvino;",
  "tha-ap535:6.3": "Guṇaṃ pakāsayantassa,",
  "tha-ap535:6.4": "tappayantassa me manaṃ.",
  "tha-ap535:7.1": "Sutvā patīto sumano,",
  "tha-ap535:7.2": "nimantetvā tathāgataṃ;",
  "tha-ap535:7.3": "Sasissaṃ bhojayitvāna,",
  "tha-ap535:7.4": "taṃ ṭhānamabhipatthayiṃ.",
  "tha-ap535:8.1": "Tadā haṃsasamabhāgo,",
  "tha-ap535:8.2": "haṃsadundubhinissano;",
  "tha-ap535:8.3": "‘Passathetaṃ mahāmattaṃ,",
  "tha-ap535:8.4": "vinicchayavisāradaṃ.",
  "tha-ap535:9.1": "Patitaṃ pādamūle me,",
  "tha-ap535:9.2": "samuggatatanūruhaṃ;",
  "tha-ap535:9.3": "Jīmūtavaṇṇaṃ pīṇaṃsaṃ,",
  "tha-ap535:9.4": "pasannanayanānanaṃ.",
  "tha-ap535:10.1": "Parivārena mahatā,",
  "tha-ap535:10.2": "rājayuttaṃ mahāyasaṃ;",
  "tha-ap535:10.3": "Eso katāvino ṭhānaṃ,",
  "tha-ap535:10.4": "pattheti muditāsayo.",
  "tha-ap535:11.1": "Iminā paṇipātena,",
  "tha-ap535:11.2": "cāgena paṇidhīhi ca;",
  "tha-ap535:11.3": "Kappasatasahassāni,",
  "tha-ap535:11.4": "nupapajjati duggatiṃ.",
  "tha-ap535:12.1": "Devesu devasobhaggaṃ,",
  "tha-ap535:12.2": "manussesu mahantataṃ;",
  "tha-ap535:12.3": "Anubhotvāna sesena,",
  "tha-ap535:12.4": "nibbānaṃ pāpuṇissati.",
  "tha-ap535:13.1": "Satasahassito kappe,",
  "tha-ap535:13.2": "okkākakulasambhavo;",
  "tha-ap535:13.3": "Gotamo nāma gottena,",
  "tha-ap535:13.4": "satthā loke bhavissati.",
  "tha-ap535:14.1": "Tassa dhammesu dāyādo,",
  "tha-ap535:14.2": "oraso dhammanimmito;",
  "tha-ap535:14.3": "Kappino nāma nāmena,",
  "tha-ap535:14.4": "hessati satthu sāvako’.",
  "tha-ap535:15.1": "Tatohaṃ sukataṃ kāraṃ,",
  "tha-ap535:15.2": "katvāna jinasāsane;",
  "tha-ap535:15.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap535:15.4": "tusitaṃ agamāsahaṃ.",
  "tha-ap535:16.1": "Devamānusarajjāni,",
  "tha-ap535:16.2": "sataso anusāsiya;",
  "tha-ap535:16.3": "Bārāṇasiyamāsanne,",
  "tha-ap535:16.4": "jāto keniyajātiyaṃ.",
  "tha-ap535:17.1": "Sahassaparivārena,",
  "tha-ap535:17.2": "sapajāpatiko ahaṃ;",
  "tha-ap535:17.3": "Pañca paccekabuddhānaṃ,",
  "tha-ap535:17.4": "satāni samupaṭṭhahiṃ.",
  "tha-ap535:18.1": "Temāsaṃ bhojayitvāna,",
  "tha-ap535:18.2": "pacchādamha ticīvaraṃ;",
  "tha-ap535:18.3": "Tato cutā mayaṃ sabbe,",
  "tha-ap535:18.4": "ahumha tidasūpagā.",
  "tha-ap535:19.1": "Puno sabbe manussattaṃ,",
  "tha-ap535:19.2": "agamimha tato cutā;",
  "tha-ap535:19.3": "Kukkuṭamhi pure jātā,",
  "tha-ap535:19.4": "himavantassa passato.",
  "tha-ap535:20.1": "Kappino nāmahaṃ āsiṃ,",
  "tha-ap535:20.2": "rājaputto mahāyaso;",
  "tha-ap535:20.3": "Sesāmaccakule jātā,",
  "tha-ap535:20.4": "mameva parivārayuṃ.",
  "tha-ap535:21.1": "Mahārajjasukhaṃ patto,",
  "tha-ap535:21.2": "sabbakāmasamiddhimā;",
  "tha-ap535:21.3": "Vāṇijehi samakkhātaṃ,",
  "tha-ap535:21.4": "buddhuppādamahaṃ suṇiṃ.",
  "tha-ap535:22.1": "‘Buddho loke samuppanno,",
  "tha-ap535:22.2": "asamo ekapuggalo;",
  "tha-ap535:22.3": "So pakāseti saddhammaṃ,",
  "tha-ap535:22.4": "amataṃ sukhamuttamaṃ.",
  "tha-ap535:23.1": "Suyuttā tassa sissā ca,",
  "tha-ap535:23.2": "sumuttā ca anāsavā’;",
  "tha-ap535:23.3": "Sutvā nesaṃ suvacanaṃ,",
  "tha-ap535:23.4": "sakkaritvāna vāṇije.",
  "tha-ap535:24.1": "Pahāya rajjaṃ sāmacco,",
  "tha-ap535:24.2": "nikkhamiṃ buddhamāmako;",
  "tha-ap535:24.3": "Nadiṃ disvā mahācandaṃ,",
  "tha-ap535:24.4": "pūritaṃ samatittikaṃ.",
  "tha-ap535:25.1": "Appatiṭṭhaṃ anālambaṃ,",
  "tha-ap535:25.2": "duttaraṃ sīghavāhiniṃ;",
  "tha-ap535:25.3": "Guṇaṃ saritvā buddhassa,",
  "tha-ap535:25.4": "sotthinā samatikkamiṃ.",
  "tha-ap535:26.1": "‘Bhavasotaṃ sace buddho,",
  "tha-ap535:26.2": "tiṇṇo lokantagū vidū;",
  "tha-ap535:26.3": "Etena saccavajjena,",
  "tha-ap535:26.4": "gamanaṃ me samijjhatu.",
  "tha-ap535:27.1": "Yadi santigamo maggo,",
  "tha-ap535:27.2": "mokkho caccantikaṃ sukhaṃ;",
  "tha-ap535:27.3": "Etena saccavajjena,",
  "tha-ap535:27.4": "gamanaṃ me samijjhatu.",
  "tha-ap535:28.1": "Saṃgho ce tiṇṇakantāro,",
  "tha-ap535:28.2": "puññakkhetto anuttaro;",
  "tha-ap535:28.3": "Etena saccavajjena,",
  "tha-ap535:28.4": "gamanaṃ me samijjhatu’.",
  "tha-ap535:29.1": "Saha kate saccavare,",
  "tha-ap535:29.2": "maggā apagataṃ jalaṃ;",
  "tha-ap535:29.3": "Tato sukhena uttiṇṇo,",
  "tha-ap535:29.4": "nadītīre manorame.",
  "tha-ap535:30.1": "Nisinnaṃ addasaṃ buddhaṃ,",
  "tha-ap535:30.2": "udentaṃva pabhaṅkaraṃ;",
  "tha-ap535:30.3": "Jalantaṃ hemaselaṃva,",
  "tha-ap535:30.4": "dīparukkhaṃva jotitaṃ.",
  "tha-ap535:31.1": "Sasiṃva tārāsahitaṃ,",
  "tha-ap535:31.2": "sāvakehi purakkhataṃ;",
  "tha-ap535:31.3": "Vāsavaṃ viya vassantaṃ,",
  "tha-ap535:31.4": "desanājaladantaraṃ.",
  "tha-ap535:32.1": "Vanditvāna sahāmacco,",
  "tha-ap535:32.2": "ekamantamupāvisiṃ;",
  "tha-ap535:32.3": "Tato no āsayaṃ ñatvā,",
  "tha-ap535:32.4": "buddho dhammamadesayi.",
  "tha-ap535:33.1": "Sutvāna dhammaṃ vimalaṃ,",
  "tha-ap535:33.2": "avocumha mayaṃ jinaṃ;",
  "tha-ap535:33.3": "‘Pabbājehi mahāvīra,",
  "tha-ap535:33.4": "nibbindāmha mayaṃ bhave’.",
  "tha-ap535:34.1": "‘Svākkhāto bhikkhave dhammo,",
  "tha-ap535:34.2": "dukkhantakaraṇāya vo;",
  "tha-ap535:34.3": "Caratha brahmacariyaṃ’,",
  "tha-ap535:34.4": "iccāha munisattamo.",
  "tha-ap535:35.1": "Saha vācāya sabbepi,",
  "tha-ap535:35.2": "bhikkhuvesadharā mayaṃ;",
  "tha-ap535:35.3": "Ahumha upasampannā,",
  "tha-ap535:35.4": "sotāpannā ca sāsane.",
  "tha-ap535:36.1": "Tato jetavanaṃ gantvā,",
  "tha-ap535:36.2": "anusāsi vināyako;",
  "tha-ap535:36.3": "Anusiṭṭho jinenāhaṃ,",
  "tha-ap535:36.4": "arahattamapāpuṇiṃ.",
  "tha-ap535:37.1": "Tato bhikkhusahassāni,",
  "tha-ap535:37.2": "anusāsimahaṃ tadā;",
  "tha-ap535:37.3": "Mamānusāsanakarā,",
  "tha-ap535:37.4": "tepi āsuṃ anāsavā.",
  "tha-ap535:38.1": "Jino tasmiṃ guṇe tuṭṭho,",
  "tha-ap535:38.2": "etadagge ṭhapesi maṃ;",
  "tha-ap535:38.3": "Bhikkhuovādakānaggo,",
  "tha-ap535:38.4": "kappinoti mahājane.",
  "tha-ap535:39.1": "Satasahasse kataṃ kammaṃ,",
  "tha-ap535:39.2": "phalaṃ dassesi me idha;",
  "tha-ap535:39.3": "Pamutto saravegova,",
  "tha-ap535:39.4": "kilese jhāpayiṃ mama.",
  "tha-ap535:40.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap535:40.2": "…pe…",
  "tha-ap535:40.3": "viharāmi anāsavo.",
  "tha-ap535:41.1": "Svāgataṃ vata me āsi,",
  "tha-ap535:41.2": "…pe…",
  "tha-ap535:41.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap535:42.1": "Paṭisambhidā catasso,",
  "tha-ap535:42.2": "…pe…",
  "tha-ap535:42.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap535:43.1": "Itthaṃ sudaṃ āyasmā mahākappino thero imā gāthāyo abhāsitthāti.",
  "tha-ap535:44.1": "Mahākappinattherassāpadānaṃ tatiyaṃ."
}