{
  "tha-ap541:0.1": "Therāpadāna",
  "tha-ap541:0.2": "Kaccāyanavagga",
  "tha-ap541:0.3": "9. Rādhattheraapadāna",
  "tha-ap541:1.1": "“Padumuttaro nāma jino,",
  "tha-ap541:1.2": "sabbalokavidū muni;",
  "tha-ap541:1.3": "Ito satasahassamhi,",
  "tha-ap541:1.4": "kappe uppajji cakkhumā.",
  "tha-ap541:2.1": "Ovādako viññāpako,",
  "tha-ap541:2.2": "tārako sabbapāṇinaṃ;",
  "tha-ap541:2.3": "Desanākusalo buddho,",
  "tha-ap541:2.4": "tāresi janataṃ bahuṃ.",
  "tha-ap541:3.1": "Anukampako kāruṇiko,",
  "tha-ap541:3.2": "hitesī sabbapāṇinaṃ;",
  "tha-ap541:3.3": "Sampatte titthiye sabbe,",
  "tha-ap541:3.4": "pañcasīle patiṭṭhapi.",
  "tha-ap541:4.1": "Evaṃ nirākulaṃ āsi,",
  "tha-ap541:4.2": "suññataṃ titthiyehi ca;",
  "tha-ap541:4.3": "Vicittaṃ arahantehi,",
  "tha-ap541:4.4": "vasībhūtehi tādibhi.",
  "tha-ap541:5.1": "Ratanānaṭṭhapaññāsaṃ,",
  "tha-ap541:5.2": "uggato so mahāmuni;",
  "tha-ap541:5.3": "Kañcanagghiyasaṅkāso,",
  "tha-ap541:5.4": "bāttiṃsavaralakkhaṇo.",
  "tha-ap541:6.1": "Vassasatasahassāni,",
  "tha-ap541:6.2": "āyu vijjati tāvade;",
  "tha-ap541:6.3": "Tāvatā tiṭṭhamāno so,",
  "tha-ap541:6.4": "tāresi janataṃ bahuṃ.",
  "tha-ap541:7.1": "Tadāhaṃ haṃsavatiyaṃ,",
  "tha-ap541:7.2": "brāhmaṇo mantapāragū;",
  "tha-ap541:7.3": "Upecca taṃ naravaraṃ,",
  "tha-ap541:7.4": "assosiṃ dhammadesanaṃ.",
  "tha-ap541:8.1": "Paññāpentaṃ mahāvīraṃ,",
  "tha-ap541:8.2": "parisāsu visāradaṃ;",
  "tha-ap541:8.3": "Paṭibhāneyyakaṃ bhikkhuṃ,",
  "tha-ap541:8.4": "etadagge vināyakaṃ.",
  "tha-ap541:9.1": "Tadāhaṃ kāraṃ katvāna,",
  "tha-ap541:9.2": "sasaṃghe lokanāyake;",
  "tha-ap541:9.3": "Nipacca sirasā pāde,",
  "tha-ap541:9.4": "taṃ ṭhānaṃ abhipatthayiṃ.",
  "tha-ap541:10.1": "Tato maṃ bhagavā āha,",
  "tha-ap541:10.2": "siṅgīnikkhasamappabho;",
  "tha-ap541:10.3": "Sarena rajanīyena,",
  "tha-ap541:10.4": "kilesamalahārinā.",
  "tha-ap541:11.1": "‘Sukhī bhavassu dīghāyu,",
  "tha-ap541:11.2": "sijjhatu paṇidhī tava;",
  "tha-ap541:11.3": "Sasaṃghe me kataṃ kāraṃ,",
  "tha-ap541:11.4": "atīva vipulaṃ tayā.",
  "tha-ap541:12.1": "Satasahassito kappe,",
  "tha-ap541:12.2": "okkākakulasambhavo;",
  "tha-ap541:12.3": "Gotamo nāma gottena,",
  "tha-ap541:12.4": "satthā loke bhavissati.",
  "tha-ap541:13.1": "Tassa dhammesu dāyādo,",
  "tha-ap541:13.2": "oraso dhammanimmito;",
  "tha-ap541:13.3": "Rādhoti nāmadheyyena,",
  "tha-ap541:13.4": "hessati satthu sāvako.",
  "tha-ap541:14.1": "Sa te hetuguṇe tuṭṭho,",
  "tha-ap541:14.2": "sakyaputto narāsabho;",
  "tha-ap541:14.3": "Paṭibhāneyyakānaggaṃ,",
  "tha-ap541:14.4": "paññapessati nāyako’.",
  "tha-ap541:15.1": "Taṃ sutvā mudito hutvā,",
  "tha-ap541:15.2": "yāvajīvaṃ tadā jinaṃ;",
  "tha-ap541:15.3": "Mettacitto paricariṃ,",
  "tha-ap541:15.4": "sato paññāsamāhito.",
  "tha-ap541:16.1": "Tena kammena sukatena,",
  "tha-ap541:16.2": "cetanāpaṇidhīhi ca;",
  "tha-ap541:16.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap541:16.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap541:17.1": "Satānaṃ tīṇikkhattuñca,",
  "tha-ap541:17.2": "devarajjamakārayiṃ;",
  "tha-ap541:17.3": "Satānaṃ pañcakkhattuñca,",
  "tha-ap541:17.4": "cakkavattī ahosahaṃ.",
  "tha-ap541:18.1": "Padesarajjaṃ vipulaṃ,",
  "tha-ap541:18.2": "gaṇanāto asaṅkhiyaṃ;",
  "tha-ap541:18.3": "Sabbattha sukhito āsiṃ,",
  "tha-ap541:18.4": "tassa kammassa vāhasā.",
  "tha-ap541:19.1": "Pacchime bhave sampatte,",
  "tha-ap541:19.2": "giribbajapuruttame;",
  "tha-ap541:19.3": "Jāto vippakule niddhe,",
  "tha-ap541:19.4": "vikalacchādanāsane.",
  "tha-ap541:20.1": "Kaṭacchubhikkhaṃ pādāsiṃ,",
  "tha-ap541:20.2": "sāriputtassa tādino;",
  "tha-ap541:20.3": "Yadā jiṇṇo ca vuddho ca,",
  "tha-ap541:20.4": "tadārāmamupāgamiṃ.",
  "tha-ap541:21.1": "Pabbajati na maṃ koci,",
  "tha-ap541:21.2": "jiṇṇadubbalathāmakaṃ;",
  "tha-ap541:21.3": "Tena dīno vivaṇṇaṅgo,",
  "tha-ap541:21.4": "soko cāsiṃ tadā ahaṃ.",
  "tha-ap541:22.1": "Disvā mahākāruṇiko,",
  "tha-ap541:22.2": "mamamāha mahāmuni;",
  "tha-ap541:22.3": "‘Kimatthaṃ puttasokaṭṭo,",
  "tha-ap541:22.4": "brūhi te cittajaṃ rujaṃ’.",
  "tha-ap541:23.1": "‘Pabbajjaṃ na labhe vīra,",
  "tha-ap541:23.2": "svākkhāte tava sāsane;",
  "tha-ap541:23.3": "Tena sokena dīnosmi,",
  "tha-ap541:23.4": "saraṇaṃ hohi nāyaka’.",
  "tha-ap541:24.1": "Tadā bhikkhū samānetvā,",
  "tha-ap541:24.2": "apucchi munisattamo;",
  "tha-ap541:24.3": "‘Imassa adhikāraṃ ye,",
  "tha-ap541:24.4": "saranti byāharantu te’.",
  "tha-ap541:25.1": "Sāriputto tadāvoca,",
  "tha-ap541:25.2": "‘kāramassa sarāmahaṃ;",
  "tha-ap541:25.3": "Kaṭacchubhikkhaṃ dāpesi,",
  "tha-ap541:25.4": "piṇḍāya carato mama’.",
  "tha-ap541:26.1": "‘Sādhu sādhu kataññūsi,",
  "tha-ap541:26.2": "sāriputta imaṃ tuvaṃ;",
  "tha-ap541:26.3": "Pabbājehi dijaṃ vuḍḍhaṃ,",
  "tha-ap541:26.4": "hessatājāniyo ayaṃ’.",
  "tha-ap541:27.1": "Tato alatthaṃ pabbajjaṃ,",
  "tha-ap541:27.2": "kammavācopasampadaṃ;",
  "tha-ap541:27.3": "Na cireneva kālena,",
  "tha-ap541:27.4": "pāpuṇiṃ āsavakkhayaṃ.",
  "tha-ap541:28.1": "Sakkaccaṃ munino vākyaṃ,",
  "tha-ap541:28.2": "suṇāmi mudito yato;",
  "tha-ap541:28.3": "Paṭibhāneyyakānaggaṃ,",
  "tha-ap541:28.4": "tato maṃ ṭhapayī jino.",
  "tha-ap541:29.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap541:29.2": "…pe…",
  "tha-ap541:29.3": "viharāmi anāsavo.",
  "tha-ap541:30.1": "Svāgataṃ vata me āsi,",
  "tha-ap541:30.2": "…pe…",
  "tha-ap541:30.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap541:31.1": "Paṭisambhidā catasso,",
  "tha-ap541:31.2": "…pe…",
  "tha-ap541:31.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap541:32.1": "Itthaṃ sudaṃ āyasmā rādho thero imā gāthāyo abhāsitthāti.",
  "tha-ap541:33.1": "Rādhattherassāpadānaṃ navamaṃ."
}