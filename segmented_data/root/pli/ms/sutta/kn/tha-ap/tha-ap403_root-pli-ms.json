{
  "tha-ap403:0.1": "Therāpadāna",
  "tha-ap403:0.2": "Metteyyavagga",
  "tha-ap403:0.3": "1. Tissametteyyattheraapadāna",
  "tha-ap403:1.1": "“Pabbhārakūṭaṃ nissāya,",
  "tha-ap403:1.2": "sobhito nāma tāpaso;",
  "tha-ap403:1.3": "Pavattaphalaṃ bhuñjitvā,",
  "tha-ap403:1.4": "vasati pabbatantare.",
  "tha-ap403:2.1": "Aggiṃ dāruṃ āharitvā,",
  "tha-ap403:2.2": "ujjālesiṃ ahaṃ tadā;",
  "tha-ap403:2.3": "Uttamatthaṃ gavesanto,",
  "tha-ap403:2.4": "brahmalokūpapattiyā.",
  "tha-ap403:3.1": "Padumuttaro lokavidū,",
  "tha-ap403:3.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap403:3.3": "Mamuddharitukāmo so,",
  "tha-ap403:3.4": "āgacchi mama santike.",
  "tha-ap403:4.1": "‘Kiṃ karosi mahāpuñña,",
  "tha-ap403:4.2": "dehi me aggidārukaṃ;",
  "tha-ap403:4.3": "Ahamaggiṃ paricare,",
  "tha-ap403:4.4": "tato me suddhi hohiti’.",
  "tha-ap403:5.1": "‘Subhaddako tvaṃ manuje,",
  "tha-ap403:5.2": "devate tvaṃ pajānasi;",
  "tha-ap403:5.3": "Tuvaṃ aggiṃ paricara,",
  "tha-ap403:5.4": "handa te aggidārukaṃ’.",
  "tha-ap403:6.1": "Tato kaṭṭhaṃ gahetvāna,",
  "tha-ap403:6.2": "aggiṃ ujjālayī jino;",
  "tha-ap403:6.3": "Na tattha kaṭṭhaṃ pajjhāyi,",
  "tha-ap403:6.4": "pāṭiheraṃ mahesino.",
  "tha-ap403:7.1": "‘Na te aggi pajjalati,",
  "tha-ap403:7.2": "āhutī te na vijjati;",
  "tha-ap403:7.3": "Niratthakaṃ vataṃ tuyhaṃ,",
  "tha-ap403:7.4": "aggiṃ paricarassu me’.",
  "tha-ap403:8.1": "‘Kīdiso so mahāvīra,",
  "tha-ap403:8.2": "aggi tava pavuccati;",
  "tha-ap403:8.3": "Mayhampi kathayassetaṃ,",
  "tha-ap403:8.4": "ubho paricarāmase’.",
  "tha-ap403:9.1": "‘Hetudhammanirodhāya,",
  "tha-ap403:9.2": "kilesasamaṇāya ca;",
  "tha-ap403:9.3": "Issāmacchariyaṃ hitvā,",
  "tha-ap403:9.4": "tayo ete mamāhutī’.",
  "tha-ap403:10.1": "‘Kīdiso tvaṃ mahāvīra,",
  "tha-ap403:10.2": "kathaṃ gottosi mārisa;",
  "tha-ap403:10.3": "Ācārapaṭipatti te,",
  "tha-ap403:10.4": "bāḷhaṃ kho mama ruccati’.",
  "tha-ap403:11.1": "‘Khattiyamhi kule jāto,",
  "tha-ap403:11.2": "abhiññāpāramiṃ gato;",
  "tha-ap403:11.3": "Sabbāsavaparikkhīṇo,",
  "tha-ap403:11.4": "natthi dāni punabbhavo’.",
  "tha-ap403:12.1": "‘Yadi buddhosi sabbaññū,",
  "tha-ap403:12.2": "pabhaṅkara tamonuda;",
  "tha-ap403:12.3": "Namassissāmi taṃ deva,",
  "tha-ap403:12.4": "dukkhassantakaro tuvaṃ’.",
  "tha-ap403:13.1": "Pattharitvājinacammaṃ,",
  "tha-ap403:13.2": "nisīdanamadāsahaṃ;",
  "tha-ap403:13.3": "Nisīda nātha sabbaññu,",
  "tha-ap403:13.4": "upaṭṭhissāmahaṃ tuvaṃ.",
  "tha-ap403:14.1": "Nisīdi bhagavā tattha,",
  "tha-ap403:14.2": "ajinamhi suvitthate;",
  "tha-ap403:14.3": "Nimantayitvā sambuddhaṃ,",
  "tha-ap403:14.4": "pabbataṃ agamāsahaṃ.",
  "tha-ap403:15.1": "Khāribhārañca pūretvā,",
  "tha-ap403:15.2": "tindukaphalamāhariṃ;",
  "tha-ap403:15.3": "Madhunā yojayitvāna,",
  "tha-ap403:15.4": "phalaṃ buddhassadāsahaṃ.",
  "tha-ap403:16.1": "Mama nijjhāyamānassa,",
  "tha-ap403:16.2": "paribhuñji tadā jino;",
  "tha-ap403:16.3": "Tattha cittaṃ pasādesiṃ,",
  "tha-ap403:16.4": "pekkhanto lokanāyakaṃ.",
  "tha-ap403:17.1": "Padumuttaro lokavidū,",
  "tha-ap403:17.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap403:17.3": "Mamassame nisīditvā,",
  "tha-ap403:17.4": "imā gāthā abhāsatha.",
  "tha-ap403:18.1": "‘Yo maṃ phalena tappesi,",
  "tha-ap403:18.2": "pasanno sehi pāṇibhi;",
  "tha-ap403:18.3": "Tamahaṃ kittayissāmi,",
  "tha-ap403:18.4": "suṇātha mama bhāsato.",
  "tha-ap403:19.1": "Pañcavīsatikkhattuṃ so,",
  "tha-ap403:19.2": "devarajjaṃ karissati;",
  "tha-ap403:19.3": "Sahassakkhattuṃ rājā ca,",
  "tha-ap403:19.4": "cakkavattī bhavissati.",
  "tha-ap403:20.1": "Tassa saṅkappamaññāya,",
  "tha-ap403:20.2": "pubbakammasamaṅgino;",
  "tha-ap403:20.3": "Annaṃ pānañca vatthañca,",
  "tha-ap403:20.4": "sayanañca mahārahaṃ.",
  "tha-ap403:21.1": "Puññakammena saṃyuttā,",
  "tha-ap403:21.2": "nibbattissanti tāvade;",
  "tha-ap403:21.3": "Sadā pamudito cāyaṃ,",
  "tha-ap403:21.4": "bhavissati anāmayo.",
  "tha-ap403:22.1": "Upapajjati yaṃ yoniṃ,",
  "tha-ap403:22.2": "devattaṃ atha mānusaṃ;",
  "tha-ap403:22.3": "Sabbattha sukhito hutvā,",
  "tha-ap403:22.4": "manussattaṃ gamissati.",
  "tha-ap403:23.1": "Ajjhāyako mantadharo,",
  "tha-ap403:23.2": "tiṇṇaṃ vedāna pāragū;",
  "tha-ap403:23.3": "Sambuddhaṃ upagantvāna,",
  "tha-ap403:23.4": "arahā so bhavissati’.",
  "tha-ap403:24.1": "Yato sarāmi attānaṃ,",
  "tha-ap403:24.2": "yato pattosmi viññutaṃ;",
  "tha-ap403:24.3": "Bhoge me ūnatā natthi,",
  "tha-ap403:24.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap403:25.1": "Varadhammamanuppatto,",
  "tha-ap403:25.2": "rāgadose samūhaniṃ;",
  "tha-ap403:25.3": "Sabbāsavaparikkhīṇo,",
  "tha-ap403:25.4": "natthi dāni punabbhavo.",
  "tha-ap403:26.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap403:26.2": "bhavā sabbe samūhatā;",
  "tha-ap403:26.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap403:26.4": "viharāmi anāsavo.",
  "tha-ap403:27.1": "Svāgataṃ vata me āsi,",
  "tha-ap403:27.2": "mama buddhassa santike;",
  "tha-ap403:27.3": "Tisso vijjā anuppattā,",
  "tha-ap403:27.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap403:28.1": "Paṭisambhidā catasso,",
  "tha-ap403:28.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap403:28.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap403:28.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap403:29.1": "Itthaṃ sudaṃ āyasmā tissametteyyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap403:30.1": "Tissametteyyattherassāpadānaṃ paṭhamaṃ."
}