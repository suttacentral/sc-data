{
  "tha-ap524:0.1": "Therāpadāna",
  "tha-ap524:0.2": "Tiṇadāyakavagga",
  "tha-ap524:0.3": "2 Mañcadāyakattheraapadāna",
  "tha-ap524:1.1": "“Vipassino bhagavato,",
  "tha-ap524:1.2": "lokajeṭṭhassa tādino;",
  "tha-ap524:1.3": "Ekamañcaṃ mayā dinnaṃ,",
  "tha-ap524:1.4": "pasannena sapāṇinā.",
  "tha-ap524:2.1": "Hatthiyānaṃ assayānaṃ,",
  "tha-ap524:2.2": "dibbayānaṃ samajjhagaṃ;",
  "tha-ap524:2.3": "Tena mañcakadānena,",
  "tha-ap524:2.4": "pattomhi āsavakkhayaṃ.",
  "tha-ap524:3.1": "Ekanavutito kappe,",
  "tha-ap524:3.2": "yaṃ mañcamadadiṃ tadā;",
  "tha-ap524:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap524:3.4": "mañcadānassidaṃ phalaṃ.",
  "tha-ap524:4.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap524:4.2": "…pe…",
  "tha-ap524:4.3": "viharāmi anāsavo.",
  "tha-ap524:5.1": "Svāgataṃ vata me āsi,",
  "tha-ap524:5.2": "…pe…",
  "tha-ap524:5.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap524:6.1": "Paṭisambhidā catasso,",
  "tha-ap524:6.2": "…pe…",
  "tha-ap524:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap524:7.1": "Itthaṃ sudaṃ āyasmā mañcadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap524:8.1": "Mañcadāyakattherassāpadānaṃ dutiyaṃ."
}