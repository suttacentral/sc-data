{
  "tha-ap340:0.1": "Therāpadāna",
  "tha-ap340:0.2": "Gandhodakavagga",
  "tha-ap340:0.3": "8. Uttareyyadāyakattheraapadāna",
  "tha-ap340:1.1": "“Nagare haṁsavatiyā,",
  "tha-ap340:1.2": "ahosiṁ brāhmaṇo tadā;",
  "tha-ap340:1.3": "Ajjhāyako mantadharo,",
  "tha-ap340:1.4": "tiṇṇaṁ vedāna pāragū.",
  "tha-ap340:2.1": "Purakkhato sasissehi,",
  "tha-ap340:2.2": "jātimā ca susikkhito;",
  "tha-ap340:2.3": "Toyābhisecanatthāya,",
  "tha-ap340:2.4": "nagarā nikkhamiṁ tadā.",
  "tha-ap340:3.1": "Padumuttaro nāma jino,",
  "tha-ap340:3.2": "sabbadhammāna pāragū;",
  "tha-ap340:3.3": "Khīṇāsavasahassehi,",
  "tha-ap340:3.4": "pāvisī nagaraṁ jino.",
  "tha-ap340:4.1": "Sucārurūpaṁ disvāna,",
  "tha-ap340:4.2": "āneñjakāritaṁ viya;",
  "tha-ap340:4.3": "Parivutaṁ arahantehi,",
  "tha-ap340:4.4": "disvā cittaṁ pasādayiṁ.",
  "tha-ap340:5.1": "Sirasmiṁ añjaliṁ katvā,",
  "tha-ap340:5.2": "namassitvāna subbataṁ;",
  "tha-ap340:5.3": "Pasannacitto sumano,",
  "tha-ap340:5.4": "uttarīyamadāsahaṁ.",
  "tha-ap340:6.1": "Ubho hatthehi paggayha,",
  "tha-ap340:6.2": "sāṭakaṁ ukkhipiṁ ahaṁ;",
  "tha-ap340:6.3": "Yāvatā buddhaparisā,",
  "tha-ap340:6.4": "tāva chādesi sāṭako.",
  "tha-ap340:7.1": "Piṇḍacāraṁ carantassa,",
  "tha-ap340:7.2": "mahābhikkhugaṇādino;",
  "tha-ap340:7.3": "Chadaṁ karonto aṭṭhāsi,",
  "tha-ap340:7.4": "hāsayanto mamaṁ tadā.",
  "tha-ap340:8.1": "Gharato nikkhamantassa,",
  "tha-ap340:8.2": "sayambhū aggapuggalo;",
  "tha-ap340:8.3": "Vīthiyaṁva ṭhito satthā,",
  "tha-ap340:8.4": "akā me anumodanaṁ.",
  "tha-ap340:9.1": "Pasannacitto sumano,",
  "tha-ap340:9.2": "yo me adāsi sāṭakaṁ;",
  "tha-ap340:9.3": "Tamahaṁ kittayissāmi,",
  "tha-ap340:9.4": "suṇotha mama bhāsato.",
  "tha-ap340:10.1": "‘Tiṁsakappasahassāni,",
  "tha-ap340:10.2": "devaloke ramissati;",
  "tha-ap340:10.3": "Paññāsakkhattuṁ devindo,",
  "tha-ap340:10.4": "devarajjaṁ karissati.",
  "tha-ap340:11.1": "Devaloke vasantassa,",
  "tha-ap340:11.2": "puññakammasamaṅgino;",
  "tha-ap340:11.3": "Samantā yojanasataṁ,",
  "tha-ap340:11.4": "dussacchannaṁ bhavissati.",
  "tha-ap340:12.1": "Chattiṁsakkhattuṁ rājā ca,",
  "tha-ap340:12.2": "cakkavattī bhavissati;",
  "tha-ap340:12.3": "Padesarajjaṁ vipulaṁ,",
  "tha-ap340:12.4": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap340:13.1": "Bhave saṁsaramānassa,",
  "tha-ap340:13.2": "puññakammasamaṅgino;",
  "tha-ap340:13.3": "Manasā patthitaṁ sabbaṁ,",
  "tha-ap340:13.4": "nibbattissati tāvade.",
  "tha-ap340:14.1": "Koseyyakambaliyāni,",
  "tha-ap340:14.2": "khomakappāsikāni ca;",
  "tha-ap340:14.3": "Mahagghāni ca dussāni,",
  "tha-ap340:14.4": "paṭilacchatiyaṁ naro.",
  "tha-ap340:15.1": "Manasā patthitaṁ sabbaṁ,",
  "tha-ap340:15.2": "paṭilacchatiyaṁ naro;",
  "tha-ap340:15.3": "Ekadussassa vipākaṁ,",
  "tha-ap340:15.4": "anubhossati sabbadā.",
  "tha-ap340:16.1": "So pacchā pabbajitvāna,",
  "tha-ap340:16.2": "sukkamūlena codito;",
  "tha-ap340:16.3": "Gotamassa bhagavato,",
  "tha-ap340:16.4": "dhammaṁ sacchikarissati’.",
  "tha-ap340:17.1": "Aho me sukataṁ kammaṁ,",
  "tha-ap340:17.2": "sabbaññussa mahesino;",
  "tha-ap340:17.3": "Ekāhaṁ sāṭakaṁ datvā,",
  "tha-ap340:17.4": "pattomhi amataṁ padaṁ.",
  "tha-ap340:18.1": "Maṇḍape rukkhamūle vā,",
  "tha-ap340:18.2": "vasato suññake ghare;",
  "tha-ap340:18.3": "Dhāreti dussachadanaṁ,",
  "tha-ap340:18.4": "samantā byāmato mama.",
  "tha-ap340:19.1": "Aviññattaṁ nivāsemi,",
  "tha-ap340:19.2": "cīvaraṁ paccayañcahaṁ;",
  "tha-ap340:19.3": "Lābhī annassa pānassa,",
  "tha-ap340:19.4": "uttareyyassidaṁ phalaṁ.",
  "tha-ap340:20.1": "Satasahassito kappe,",
  "tha-ap340:20.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap340:20.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap340:20.4": "vatthadānassidaṁ phalaṁ.",
  "tha-ap340:21.1": "Paṭisambhidā catasso,",
  "tha-ap340:21.2": "…pe…",
  "tha-ap340:21.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap340:22.1": "Itthaṁ sudaṁ āyasmā uttareyyadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap340:23.1": "Uttareyyadāyakattherassāpadānaṁ aṭṭhamaṁ."
}