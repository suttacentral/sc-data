{
  "tha-ap331:0.1": "Therāpadāna",
  "tha-ap331:0.2": "Umāpupphiyavagga",
  "tha-ap331:0.3": "9 Pupphacchattiyattheraapadāna",
  "tha-ap331:1.1": "“Siddhatthassa bhagavato,",
  "tha-ap331:1.2": "lokajeṭṭhassa tādino;",
  "tha-ap331:1.3": "Saccaṁ pakāsayantassa,",
  "tha-ap331:1.4": "nibbāpentassa pāṇino.",
  "tha-ap331:2.1": "Jalajaṁ āharitvāna,",
  "tha-ap331:2.2": "satapattaṁ manoramaṁ;",
  "tha-ap331:2.3": "Pupphassa chattaṁ katvāna,",
  "tha-ap331:2.4": "buddhassa abhiropayiṁ.",
  "tha-ap331:3.1": "Siddhattho ca lokavidū,",
  "tha-ap331:3.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap331:3.3": "Bhikkhusaṅghe ṭhito satthā,",
  "tha-ap331:3.4": "imaṁ gāthaṁ abhāsatha.",
  "tha-ap331:4.1": "‘Yo me cittaṁ pasādetvā,",
  "tha-ap331:4.2": "pupphacchattaṁ adhārayiṁ;",
  "tha-ap331:4.3": "Tena cittappasādena,",
  "tha-ap331:4.4": "duggatiṁ so na gacchati’.",
  "tha-ap331:5.1": "Idaṁ vatvāna sambuddho,",
  "tha-ap331:5.2": "siddhattho lokanāyako;",
  "tha-ap331:5.3": "Uyyojetvāna parisaṁ,",
  "tha-ap331:5.4": "vehāsaṁ nabhamuggami.",
  "tha-ap331:6.1": "Vuṭṭhite naradevamhi,",
  "tha-ap331:6.2": "setacchattampi vuṭṭhahi;",
  "tha-ap331:6.3": "Purato buddhaseṭṭhassa,",
  "tha-ap331:6.4": "gacchati chattamuttamaṁ.",
  "tha-ap331:7.1": "Catunnavutito kappe,",
  "tha-ap331:7.2": "yaṁ chattaṁ abhiropayiṁ;",
  "tha-ap331:7.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap331:7.4": "pupphacchattassidaṁ phalaṁ.",
  "tha-ap331:8.1": "Catusattatikappamhi,",
  "tha-ap331:8.2": "aṭṭha jalasikhā ahū;",
  "tha-ap331:8.3": "Sattaratanasampannā,",
  "tha-ap331:8.4": "cakkavattī mahabbalā.",
  "tha-ap331:9.1": "Paṭisambhidā catasso,",
  "tha-ap331:9.2": "…pe…",
  "tha-ap331:9.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap331:10.1": "Itthaṁ sudaṁ āyasmā pupphacchattiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap331:11.1": "Pupphacchattiyattherassāpadānaṁ navamaṁ."
}