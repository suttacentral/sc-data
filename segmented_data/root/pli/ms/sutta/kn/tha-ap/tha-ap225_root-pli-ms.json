{
  "tha-ap225:0.1": "Therāpadāna",
  "tha-ap225:0.2": "Ālambaṇadāyakavagga",
  "tha-ap225:0.3": "3 Dverataniyattheraapadāna",
  "tha-ap225:1.1": "“Migaluddo pure āsiṃ,",
  "tha-ap225:1.2": "araññe kānane ahaṃ;",
  "tha-ap225:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap225:1.4": "āhutīnaṃ paṭiggahaṃ.",
  "tha-ap225:2.1": "Maṃsapesi mayā dinnā,",
  "tha-ap225:2.2": "vipassissa mahesino;",
  "tha-ap225:2.3": "Sadevakasmiṃ lokasmiṃ,",
  "tha-ap225:2.4": "issaraṃ kārayāmahaṃ.",
  "tha-ap225:3.1": "Iminā maṃsadānena,",
  "tha-ap225:3.2": "ratanaṃ nibbattate mama;",
  "tha-ap225:3.3": "Duveme ratanā loke,",
  "tha-ap225:3.4": "diṭṭhadhammassa pattiyā.",
  "tha-ap225:4.1": "Tehaṃ sabbe anubhomi,",
  "tha-ap225:4.2": "maṃsadānassa sattiyā;",
  "tha-ap225:4.3": "Gattañca mudukaṃ mayhaṃ,",
  "tha-ap225:4.4": "paññā nipuṇavedanī.",
  "tha-ap225:5.1": "Ekanavutito kappe,",
  "tha-ap225:5.2": "yaṃ maṃsamadadiṃ tadā;",
  "tha-ap225:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap225:5.4": "maṃsadānassidaṃ phalaṃ.",
  "tha-ap225:6.1": "Ito catutthake kappe,",
  "tha-ap225:6.2": "eko āsiṃ janādhipo;",
  "tha-ap225:6.3": "Mahārohitanāmo so,",
  "tha-ap225:6.4": "cakkavattī mahabbalo.",
  "tha-ap225:7.1": "Paṭisambhidā catasso,",
  "tha-ap225:7.2": "…pe…",
  "tha-ap225:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap225:8.1": "Itthaṃ sudaṃ āyasmā dverataniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap225:9.1": "Dverataniyattherassāpadānaṃ tatiyaṃ.",
  "tha-ap225:9.2": "Dasamaṃ bhāṇavāraṃ."
}