{
  "tha-ap504:0.1": "Therāpadāna",
  "tha-ap504:0.2": "Kaṇikāravagga",
  "tha-ap504:0.3": "2. Ekapattadāyakattheraapadāna",
  "tha-ap504:1.1": "“Nagare haṁsavatiyā,",
  "tha-ap504:1.2": "kumbhakāro ahosahaṁ;",
  "tha-ap504:1.3": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap504:1.4": "oghatiṇṇamanāsavaṁ.",
  "tha-ap504:2.1": "Sukataṁ mattikāpattaṁ,",
  "tha-ap504:2.2": "buddhaseṭṭhassadāsahaṁ;",
  "tha-ap504:2.3": "Pattaṁ datvā bhagavato,",
  "tha-ap504:2.4": "ujubhūtassa tādino.",
  "tha-ap504:3.1": "Bhave nibbattamānohaṁ,",
  "tha-ap504:3.2": "soṇṇathāle labhāmahaṁ;",
  "tha-ap504:3.3": "Rūpimaye ca sovaṇṇe,",
  "tha-ap504:3.4": "taṭṭike ca maṇīmaye.",
  "tha-ap504:4.1": "Pātiyo paribhuñjāmi,",
  "tha-ap504:4.2": "puññakammassidaṁ phalaṁ;",
  "tha-ap504:4.3": "Yasānañca dhanānañca,",
  "tha-ap504:4.4": "aggabhūto ca homahaṁ.",
  "tha-ap504:5.1": "Yathāpi bhaddake khette,",
  "tha-ap504:5.2": "bījaṁ appampi ropitaṁ;",
  "tha-ap504:5.3": "Sammādhāraṁ pavecchante,",
  "tha-ap504:5.4": "phalaṁ toseti kassakaṁ.",
  "tha-ap504:6.1": "Tathevidaṁ pattadānaṁ,",
  "tha-ap504:6.2": "buddhakhettamhi ropitaṁ;",
  "tha-ap504:6.3": "Pītidhāre pavassante,",
  "tha-ap504:6.4": "phalaṁ maṁ tosayissati.",
  "tha-ap504:7.1": "Yāvatā khettā vijjanti,",
  "tha-ap504:7.2": "saṅghāpi ca gaṇāpi ca;",
  "tha-ap504:7.3": "Buddhakhettasamo natthi,",
  "tha-ap504:7.4": "sukhado sabbapāṇinaṁ.",
  "tha-ap504:8.1": "Namo te purisājañña,",
  "tha-ap504:8.2": "namo te purisuttama;",
  "tha-ap504:8.3": "Ekapattaṁ daditvāna,",
  "tha-ap504:8.4": "pattomhi acalaṁ padaṁ.",
  "tha-ap504:9.1": "Ekanavutito kappe,",
  "tha-ap504:9.2": "yaṁ pattamadadiṁ tadā;",
  "tha-ap504:9.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap504:9.4": "pattadānassidaṁ phalaṁ.",
  "tha-ap504:10.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap504:10.2": "…pe…",
  "tha-ap504:10.3": "viharāmi anāsavo.",
  "tha-ap504:11.1": "Svāgataṁ vata me āsi,",
  "tha-ap504:11.2": "…pe…",
  "tha-ap504:11.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap504:12.1": "Paṭisambhidā catasso,",
  "tha-ap504:12.2": "…pe…",
  "tha-ap504:12.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap504:13.1": "Itthaṁ sudaṁ āyasmā ekapattadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap504:14.1": "Ekapattadāyakattherassāpadānaṁ dutiyaṁ."
}