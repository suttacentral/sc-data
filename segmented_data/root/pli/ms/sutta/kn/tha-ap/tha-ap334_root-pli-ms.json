{
  "tha-ap334:0.1": "Therāpadāna",
  "tha-ap334:0.2": "Gandhodakavagga",
  "tha-ap334:0.3": "2. Udakapūjakattheraapadāna",
  "tha-ap334:1.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
  "tha-ap334:1.2": "Gacchantaṃ anilañjase;",
  "tha-ap334:1.3": "Ghatāsanaṃva jalitaṃ,",
  "tha-ap334:1.4": "Ādittaṃva hutāsanaṃ.",
  "tha-ap334:2.1": "Pāṇinā udakaṃ gayha,",
  "tha-ap334:2.2": "ākāse ukkhipiṃ ahaṃ;",
  "tha-ap334:2.3": "Sampaṭicchi mahāvīro,",
  "tha-ap334:2.4": "buddho kāruṇiko isi.",
  "tha-ap334:3.1": "Antalikkhe ṭhito satthā,",
  "tha-ap334:3.2": "padumuttaranāmako;",
  "tha-ap334:3.3": "Mama saṅkappamaññāya,",
  "tha-ap334:3.4": "imaṃ gāthamabhāsatha.",
  "tha-ap334:4.1": "‘Iminā dakadānena,",
  "tha-ap334:4.2": "pītiuppādanena ca;",
  "tha-ap334:4.3": "Kappasatasahassampi,",
  "tha-ap334:4.4": "duggatiṃ nupapajjati’.",
  "tha-ap334:5.1": "Tena kammena dvipadinda,",
  "tha-ap334:5.2": "lokajeṭṭha narāsabha;",
  "tha-ap334:5.3": "Pattomhi acalaṃ ṭhānaṃ,",
  "tha-ap334:5.4": "hitvā jayaparājayaṃ.",
  "tha-ap334:6.1": "Sahassarājanāmena,",
  "tha-ap334:6.2": "tayo ca cakkavattino;",
  "tha-ap334:6.3": "Pañcasaṭṭhikappasate,",
  "tha-ap334:6.4": "cāturantā janādhipā.",
  "tha-ap334:7.1": "Paṭisambhidā catasso,",
  "tha-ap334:7.2": "…pe…",
  "tha-ap334:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap334:8.1": "Itthaṃ sudaṃ āyasmā udakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap334:9.1": "Udakapūjakattherassāpadānaṃ dutiyaṃ."
}