{
  "tha-ap463:0.1": "Therāpadāna",
  "tha-ap463:0.2": "Sālakusumiyavagga",
  "tha-ap463:0.3": "1. Sālakusumiyattheraapadāna",
  "tha-ap463:1.1": "“Parinibbute bhagavati,",
  "tha-ap463:1.2": "jalajuttamanāmake;",
  "tha-ap463:1.3": "Āropitamhi citake,",
  "tha-ap463:1.4": "sālapupphamapūjayiṁ.",
  "tha-ap463:2.1": "Satasahassito kappe,",
  "tha-ap463:2.2": "Yaṁ pupphamabhiropayiṁ;",
  "tha-ap463:2.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap463:2.4": "Citapūjāyidaṁ phalaṁ.",
  "tha-ap463:3.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap463:3.2": "bhavā sabbe samūhatā;",
  "tha-ap463:3.3": "Nāgova bandhanaṁ chetvā,",
  "tha-ap463:3.4": "viharāmi anāsavo.",
  "tha-ap463:4.1": "Svāgataṁ vata me āsi,",
  "tha-ap463:4.2": "mama buddhassa santike;",
  "tha-ap463:4.3": "Tisso vijjā anuppattā,",
  "tha-ap463:4.4": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap463:5.1": "Paṭisambhidā catasso,",
  "tha-ap463:5.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap463:5.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap463:5.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap463:6.1": "Itthaṁ sudaṁ āyasmā sālakusumiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap463:7.1": "Sālakusumiyattherassāpadānaṁ paṭhamaṁ."
}