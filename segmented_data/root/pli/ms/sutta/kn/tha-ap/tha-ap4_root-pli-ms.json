{
  "tha-ap4:0.1": "Therāpadāna",
  "tha-ap4:0.2": "Buddhavagga",
  "tha-ap4:0.3": "4. Mahāmoggallānattheraapadāna",
  "tha-ap4:1.1": "“Anomadassī bhagavā,",
  "tha-ap4:1.2": "lokajeṭṭho narāsabho;",
  "tha-ap4:1.3": "Vihāsi himavantamhi,",
  "tha-ap4:1.4": "devasaṅghapurakkhato.",
  "tha-ap4:2.1": "Varuṇo nāma nāmena,",
  "tha-ap4:2.2": "nāgarājā ahaṁ tadā;",
  "tha-ap4:2.3": "Kāmarūpī vikubbāmi,",
  "tha-ap4:2.4": "mahodadhinivāsahaṁ.",
  "tha-ap4:3.1": "Saṅgaṇiyaṁ gaṇaṁ hitvā,",
  "tha-ap4:3.2": "tūriyaṁ paṭṭhapesahaṁ;",
  "tha-ap4:3.3": "Sambuddhaṁ parivāretvā,",
  "tha-ap4:3.4": "vādesuṁ accharā tadā.",
  "tha-ap4:4.1": "Vajjamānesu tūresu,",
  "tha-ap4:4.2": "devā tūrāni vajjayuṁ;",
  "tha-ap4:4.3": "Ubhinnaṁ saddaṁ sutvāna,",
  "tha-ap4:4.4": "buddhopi sampabujjhatha.",
  "tha-ap4:5.1": "Nimantetvāna sambuddhaṁ,",
  "tha-ap4:5.2": "sakaṁ bhavanupāgamiṁ;",
  "tha-ap4:5.3": "Āsanaṁ paññapetvāna,",
  "tha-ap4:5.4": "kālamārocayiṁ ahaṁ.",
  "tha-ap4:6.1": "Khīṇāsavasahassehi,",
  "tha-ap4:6.2": "parivuto lokanāyako;",
  "tha-ap4:6.3": "Obhāsento disā sabbā,",
  "tha-ap4:6.4": "bhavanaṁ me upāgami.",
  "tha-ap4:7.1": "Upaviṭṭhaṁ mahāvīraṁ,",
  "tha-ap4:7.2": "Devadevaṁ narāsabhaṁ;",
  "tha-ap4:7.3": "Sabhikkhusaṅghaṁ tappesiṁ,",
  "tha-ap4:7.4": "Annapānenahaṁ tadā.",
  "tha-ap4:8.1": "Anumodi mahāvīro,",
  "tha-ap4:8.2": "sayambhū aggapuggalo;",
  "tha-ap4:8.3": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap4:8.4": "imā gāthā abhāsatha.",
  "tha-ap4:9.1": "Yo so saṅghaṁ apūjesi,",
  "tha-ap4:9.2": "buddhañca lokanāyakaṁ;",
  "tha-ap4:9.3": "Tena cittappasādena,",
  "tha-ap4:9.4": "devalokaṁ gamissati.",
  "tha-ap4:10.1": "Sattasattatikkhattuñca,",
  "tha-ap4:10.2": "devarajjaṁ karissati;",
  "tha-ap4:10.3": "Pathabyā rajjaṁ aṭṭhasataṁ,",
  "tha-ap4:10.4": "vasudhaṁ āvasissati.",
  "tha-ap4:11.1": "Pañcapaññāsakkhattuñca,",
  "tha-ap4:11.2": "cakkavattī bhavissati;",
  "tha-ap4:11.3": "Bhogā asaṅkhiyā tassa,",
  "tha-ap4:11.4": "uppajjissanti tāvade.",
  "tha-ap4:12.1": "Aparimeyye ito kappe,",
  "tha-ap4:12.2": "okkākakulasambhavo;",
  "tha-ap4:12.3": "Gotamo nāma gottena,",
  "tha-ap4:12.4": "satthā loke bhavissati.",
  "tha-ap4:13.1": "Nirayā so cavitvāna,",
  "tha-ap4:13.2": "manussataṁ gamissati;",
  "tha-ap4:13.3": "Kolito nāma nāmena,",
  "tha-ap4:13.4": "brahmabandhu bhavissati.",
  "tha-ap4:14.1": "So pacchā pabbajitvāna,",
  "tha-ap4:14.2": "kusalamūlena codito;",
  "tha-ap4:14.3": "Gotamassa bhagavato,",
  "tha-ap4:14.4": "dutiyo hessati sāvako.",
  "tha-ap4:15.1": "Āraddhavīriyo pahitatto,",
  "tha-ap4:15.2": "Iddhiyā pāramiṁ gato;",
  "tha-ap4:15.3": "Sabbāsave pariññāya,",
  "tha-ap4:15.4": "Nibbāyissatināsavo.",
  "tha-ap4:16.1": "Pāpamittopanissāya,",
  "tha-ap4:16.2": "kāmarāgavasaṁ gato;",
  "tha-ap4:16.3": "Mātaraṁ pitarañcāpi,",
  "tha-ap4:16.4": "ghātayiṁ duṭṭhamānaso.",
  "tha-ap4:17.1": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap4:17.2": "nirayaṁ atha mānusaṁ;",
  "tha-ap4:17.3": "Pāpakammasamaṅgitā,",
  "tha-ap4:17.4": "bhinnasīso marāmahaṁ.",
  "tha-ap4:18.1": "Idaṁ pacchimakaṁ mayhaṁ,",
  "tha-ap4:18.2": "carimo vattate bhavo;",
  "tha-ap4:18.3": "Idhāpi ediso mayhaṁ,",
  "tha-ap4:18.4": "maraṇakāle bhavissati.",
  "tha-ap4:19.1": "Pavivekamanuyutto,",
  "tha-ap4:19.2": "samādhibhāvanārato;",
  "tha-ap4:19.3": "Sabbāsave pariññāya,",
  "tha-ap4:19.4": "viharāmi anāsavo.",
  "tha-ap4:20.1": "Dharaṇimpi sugambhīraṁ,",
  "tha-ap4:20.2": "bahalaṁ duppadhaṁsiyaṁ;",
  "tha-ap4:20.3": "Vāmaṅguṭṭhena khobheyyaṁ,",
  "tha-ap4:20.4": "iddhiyā pāramiṁ gato.",
  "tha-ap4:21.1": "Asmimānaṁ na passāmi,",
  "tha-ap4:21.2": "māno mayhaṁ na vijjati;",
  "tha-ap4:21.3": "Sāmaṇere upādāya,",
  "tha-ap4:21.4": "garucittaṁ karomahaṁ.",
  "tha-ap4:22.1": "Aparimeyye ito kappe,",
  "tha-ap4:22.2": "yaṁ kammamabhinīhariṁ;",
  "tha-ap4:22.3": "Tāhaṁ bhūmimanuppatto,",
  "tha-ap4:22.4": "pattomhi āsavakkhayaṁ.",
  "tha-ap4:23.1": "Paṭisambhidā catasso,",
  "tha-ap4:23.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap4:23.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap4:23.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap4:24.1": "Itthaṁ sudaṁ āyasmā mahāmoggallāno thero imā gāthāyo abhāsitthāti.",
  "tha-ap4:25.1": "Mahāmoggallānattherassāpadānaṁ dutiyaṁ."
}