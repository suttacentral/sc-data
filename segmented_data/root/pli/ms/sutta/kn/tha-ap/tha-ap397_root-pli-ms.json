{
  "tha-ap397:0.1": "Therāpadāna",
  "tha-ap397:0.2": "Pilindavacchavagga",
  "tha-ap397:0.3": "5 Padumakūṭāgāriyattheraapadāna",
  "tha-ap397:1.1": "“Piyadassī nāma bhagavā,",
  "tha-ap397:1.2": "sayambhū lokanāyako;",
  "tha-ap397:1.3": "Vivekakāmo sambuddho,",
  "tha-ap397:1.4": "samādhikusalo muni.",
  "tha-ap397:2.1": "Vanasaṇḍaṃ samogayha,",
  "tha-ap397:2.2": "piyadassī mahāmuni;",
  "tha-ap397:2.3": "Paṃsukūlaṃ pattharitvā,",
  "tha-ap397:2.4": "nisīdi purisuttamo.",
  "tha-ap397:3.1": "Migaluddo pure āsiṃ,",
  "tha-ap397:3.2": "araññe kānane ahaṃ;",
  "tha-ap397:3.3": "Pasadaṃ migamesanto,",
  "tha-ap397:3.4": "āhiṇḍāmi ahaṃ tadā.",
  "tha-ap397:4.1": "Tatthaddasāsiṃ sambuddhaṃ,",
  "tha-ap397:4.2": "oghatiṇṇamanāsavaṃ;",
  "tha-ap397:4.3": "Pupphitaṃ sālarājaṃva,",
  "tha-ap397:4.4": "sataraṃsiṃva uggataṃ.",
  "tha-ap397:5.1": "Disvānahaṃ devadevaṃ,",
  "tha-ap397:5.2": "piyadassiṃ mahāyasaṃ;",
  "tha-ap397:5.3": "Jātassaraṃ samogayha,",
  "tha-ap397:5.4": "padumaṃ āhariṃ tadā.",
  "tha-ap397:6.1": "Āharitvāna padumaṃ,",
  "tha-ap397:6.2": "satapattaṃ manoramaṃ;",
  "tha-ap397:6.3": "Kūṭāgāraṃ karitvāna,",
  "tha-ap397:6.4": "chādayiṃ padumenahaṃ.",
  "tha-ap397:7.1": "Anukampako kāruṇiko,",
  "tha-ap397:7.2": "piyadassī mahāmuni;",
  "tha-ap397:7.3": "Sattarattindivaṃ buddho,",
  "tha-ap397:7.4": "kūṭāgāre vasī jino.",
  "tha-ap397:8.1": "Purāṇaṃ chaḍḍayitvāna,",
  "tha-ap397:8.2": "navena chādayiṃ ahaṃ;",
  "tha-ap397:8.3": "Añjaliṃ paggahetvāna,",
  "tha-ap397:8.4": "aṭṭhāsiṃ tāvade ahaṃ.",
  "tha-ap397:9.1": "Vuṭṭhahitvā samādhimhā,",
  "tha-ap397:9.2": "piyadassī mahāmuni;",
  "tha-ap397:9.3": "Disaṃ anuvilokento,",
  "tha-ap397:9.4": "nisīdi lokanāyako.",
  "tha-ap397:10.1": "Tadā sudassano nāma,",
  "tha-ap397:10.2": "upaṭṭhāko mahiddhiko;",
  "tha-ap397:10.3": "Cittamaññāya buddhassa,",
  "tha-ap397:10.4": "piyadassissa satthuno.",
  "tha-ap397:11.1": "Asītiyā sahassehi,",
  "tha-ap397:11.2": "bhikkhūhi parivārito;",
  "tha-ap397:11.3": "Vanante sukhamāsīnaṃ,",
  "tha-ap397:11.4": "upesi lokanāyakaṃ.",
  "tha-ap397:12.1": "Yāvatā vanasaṇḍamhi,",
  "tha-ap397:12.2": "adhivatthā ca devatā;",
  "tha-ap397:12.3": "Buddhassa cittamaññāya,",
  "tha-ap397:12.4": "sabbe sannipatuṃ tadā.",
  "tha-ap397:13.1": "Samāgatesu yakkhesu,",
  "tha-ap397:13.2": "kumbhaṇḍe saharakkhase;",
  "tha-ap397:13.3": "Bhikkhusaṃghe ca sampatte,",
  "tha-ap397:13.4": "gāthā pabyāharī jino.",
  "tha-ap397:14.1": "‘Yo maṃ sattāhaṃ pūjesi,",
  "tha-ap397:14.2": "āvāsañca akāsi me;",
  "tha-ap397:14.3": "Tamahaṃ kittayissāmi,",
  "tha-ap397:14.4": "suṇātha mama bhāsato.",
  "tha-ap397:15.1": "Sududdasaṃ sunipuṇaṃ,",
  "tha-ap397:15.2": "gambhīraṃ suppakāsitaṃ;",
  "tha-ap397:15.3": "Ñāṇena kittayissāmi,",
  "tha-ap397:15.4": "suṇātha mama bhāsato.",
  "tha-ap397:16.1": "Catuddasāni kappāni,",
  "tha-ap397:16.2": "devarajjaṃ karissati;",
  "tha-ap397:16.3": "Kūṭāgāraṃ mahantassa,",
  "tha-ap397:16.4": "padmapupphehi chāditaṃ.",
  "tha-ap397:17.1": "Ākāse dhārayissati,",
  "tha-ap397:17.2": "Pupphakammassidaṃ phalaṃ;",
  "tha-ap397:17.3": "Catubbīse kappasate,",
  "tha-ap397:17.4": "Vokiṇṇaṃ saṃsarissati.",
  "tha-ap397:18.1": "Tattha pupphamayaṃ byamhaṃ,",
  "tha-ap397:18.2": "Ākāse dhārayissati;",
  "tha-ap397:18.3": "Yathā padumapattamhi,",
  "tha-ap397:18.4": "Toyaṃ na upalimpati.",
  "tha-ap397:19.1": "Tathevīmassa ñāṇamhi,",
  "tha-ap397:19.2": "kilesā nopalimpare;",
  "tha-ap397:19.3": "Manasā vinivaṭṭetvā,",
  "tha-ap397:19.4": "pañca nīvaraṇe ayaṃ.",
  "tha-ap397:20.1": "Cittaṃ janetvā nekkhamme,",
  "tha-ap397:20.2": "agārā pabbajissati;",
  "tha-ap397:20.3": "Tato pupphamaye byamhe,",
  "tha-ap397:20.4": "dhārente nikkhamissati.",
  "tha-ap397:21.1": "Rukkhamūle vasantassa,",
  "tha-ap397:21.2": "Nipakassa satīmato;",
  "tha-ap397:21.3": "Tattha pupphamayaṃ byamhaṃ,",
  "tha-ap397:21.4": "Matthake dhārayissati.",
  "tha-ap397:22.1": "Cīvaraṃ piṇḍapātañca,",
  "tha-ap397:22.2": "paccayaṃ sayanāsanaṃ;",
  "tha-ap397:22.3": "Datvāna bhikkhusaṃghassa,",
  "tha-ap397:22.4": "nibbāyissatināsavo’.",
  "tha-ap397:23.1": "Kūṭāgārena caratā,",
  "tha-ap397:23.2": "pabbajjaṃ abhinikkhamiṃ;",
  "tha-ap397:23.3": "Rukkhamūle vasantampi,",
  "tha-ap397:23.4": "kūṭāgāraṃ dharīyati.",
  "tha-ap397:24.1": "Cīvare piṇḍapāte ca,",
  "tha-ap397:24.2": "cetanā me na vijjati;",
  "tha-ap397:24.3": "Puññakammena saṃyutto,",
  "tha-ap397:24.4": "labhāmi pariniṭṭhitaṃ.",
  "tha-ap397:25.1": "Gaṇanāto asaṅkheyyā,",
  "tha-ap397:25.2": "kappakoṭī bahū mama;",
  "tha-ap397:25.3": "Rittakā te atikkantā,",
  "tha-ap397:25.4": "pamuttā lokanāyakā.",
  "tha-ap397:26.1": "Aṭṭhārase kappasate,",
  "tha-ap397:26.2": "piyadassī vināyako;",
  "tha-ap397:26.3": "Tamahaṃ payirupāsitvā,",
  "tha-ap397:26.4": "imaṃ yoniṃ upāgato.",
  "tha-ap397:27.1": "Idha passāmi sambuddhaṃ,",
  "tha-ap397:27.2": "anomaṃ nāma cakkhumaṃ;",
  "tha-ap397:27.3": "Tamahaṃ upagantvāna,",
  "tha-ap397:27.4": "pabbajiṃ anagāriyaṃ.",
  "tha-ap397:28.1": "Dukkhassantakaro buddho,",
  "tha-ap397:28.2": "maggaṃ me desayī jino;",
  "tha-ap397:28.3": "Tassa dhammaṃ suṇitvāna,",
  "tha-ap397:28.4": "pattomhi acalaṃ padaṃ.",
  "tha-ap397:29.1": "Tosayitvāna sambuddhaṃ,",
  "tha-ap397:29.2": "gotamaṃ sakyapuṅgavaṃ;",
  "tha-ap397:29.3": "Sabbāsave pariññāya,",
  "tha-ap397:29.4": "viharāmi anāsavo.",
  "tha-ap397:30.1": "Aṭṭhārase kappasate,",
  "tha-ap397:30.2": "yaṃ buddhamabhipūjayiṃ;",
  "tha-ap397:30.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap397:30.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap397:31.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap397:31.2": "bhavā sabbe samūhatā;",
  "tha-ap397:31.3": "Sabbāsavā parikkhīṇā,",
  "tha-ap397:31.4": "natthi dāni punabbhavo.",
  "tha-ap397:32.1": "Svāgataṃ vata me āsi,",
  "tha-ap397:32.2": "…pe…",
  "tha-ap397:32.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap397:33.1": "Paṭisambhidā catasso,",
  "tha-ap397:33.2": "…pe…",
  "tha-ap397:33.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap397:34.1": "Itthaṃ sudaṃ āyasmā padumakūṭāgāriyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap397:35.1": "Padumakūṭāgāriyattherassāpadānaṃ pañcamaṃ."
}