{
  "tha-ap310:0.1": "Therāpadāna",
  "tha-ap310:0.2": "Padumakesaravagga",
  "tha-ap310:0.3": "8. Anulepadāyakattheraapadāna",
  "tha-ap310:1.1": "“Atthadassissa munino,",
  "tha-ap310:1.2": "addasaṁ sāvakaṁ ahaṁ;",
  "tha-ap310:1.3": "Navakammaṁ karontassa,",
  "tha-ap310:1.4": "sīmāya upagacchahaṁ.",
  "tha-ap310:2.1": "Niṭṭhite navakamme ca,",
  "tha-ap310:2.2": "anulepamadāsahaṁ;",
  "tha-ap310:2.3": "Pasannacitto sumano,",
  "tha-ap310:2.4": "puññakkhette anuttare.",
  "tha-ap310:3.1": "Aṭṭhārase kappasate,",
  "tha-ap310:3.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap310:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap310:3.4": "anulepassidaṁ phalaṁ.",
  "tha-ap310:4.1": "Paṭisambhidā catasso,",
  "tha-ap310:4.2": "…pe…",
  "tha-ap310:4.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap310:5.1": "Itthaṁ sudaṁ āyasmā anulepadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap310:6.1": "Anulepadāyakattherassāpadānaṁ aṭṭhamaṁ."
}