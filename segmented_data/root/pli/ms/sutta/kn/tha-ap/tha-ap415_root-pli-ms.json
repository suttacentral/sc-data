{
  "tha-ap415:0.1": "Therāpadāna",
  "tha-ap415:0.2": "Bhaddālivagga",
  "tha-ap415:0.3": "3 Tiṇasūlakachādaniyattheraapadāna",
  "tha-ap415:1.1": "“Jātiṁ jarañca maraṇaṁ,",
  "tha-ap415:1.2": "paccavekkhiṁ ahaṁ tadā;",
  "tha-ap415:1.3": "Ekako abhinikkhamma,",
  "tha-ap415:1.4": "pabbajiṁ anagāriyaṁ.",
  "tha-ap415:2.1": "Caramānonupubbena,",
  "tha-ap415:2.2": "gaṅgātīraṁ upāgamiṁ;",
  "tha-ap415:2.3": "Tatthaddasāsiṁ pathaviṁ,",
  "tha-ap415:2.4": "gaṅgātīre samunnataṁ.",
  "tha-ap415:3.1": "Assamaṁ tattha māpetvā,",
  "tha-ap415:3.2": "vasāmi assame ahaṁ;",
  "tha-ap415:3.3": "Sukato caṅkamo mayhaṁ,",
  "tha-ap415:3.4": "nānādijagaṇāyuto.",
  "tha-ap415:4.1": "Mamupenti ca vissatthā,",
  "tha-ap415:4.2": "kūjanti ca manoharaṁ;",
  "tha-ap415:4.3": "Ramamāno saha tehi,",
  "tha-ap415:4.4": "vasāmi assame ahaṁ.",
  "tha-ap415:5.1": "Mama assamasāmantā,",
  "tha-ap415:5.2": "migarājā catukkamo;",
  "tha-ap415:5.3": "Āsayā abhinikkhamma,",
  "tha-ap415:5.4": "gajji so asanī viya.",
  "tha-ap415:6.1": "Nadite migarāje ca,",
  "tha-ap415:6.2": "hāso me udapajjatha;",
  "tha-ap415:6.3": "Migarājaṁ gavesanto,",
  "tha-ap415:6.4": "addasaṁ lokanāyakaṁ.",
  "tha-ap415:7.1": "Disvānāhaṁ devadevaṁ,",
  "tha-ap415:7.2": "tissaṁ lokagganāyakaṁ;",
  "tha-ap415:7.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap415:7.4": "pūjayiṁ nāgakesaraṁ.",
  "tha-ap415:8.1": "Uggacchantaṁva sūriyaṁ,",
  "tha-ap415:8.2": "sālarājaṁva pupphitaṁ;",
  "tha-ap415:8.3": "Osadhiṁva virocantaṁ,",
  "tha-ap415:8.4": "santhaviṁ lokanāyakaṁ.",
  "tha-ap415:9.1": "‘Tava ñāṇena sabbaññu,",
  "tha-ap415:9.2": "mocesimaṁ sadevakaṁ;",
  "tha-ap415:9.3": "Tavaṁ ārādhayitvāna,",
  "tha-ap415:9.4": "jātiyā parimuccare.",
  "tha-ap415:10.1": "Adassanena sabbaññu,",
  "tha-ap415:10.2": "buddhānaṁ sabbadassinaṁ;",
  "tha-ap415:10.3": "Patantivīcinirayaṁ,",
  "tha-ap415:10.4": "rāgadosehi ophuṭā.",
  "tha-ap415:11.1": "Tava dassanamāgamma,",
  "tha-ap415:11.2": "sabbaññu lokanāyaka;",
  "tha-ap415:11.3": "Pamuccanti bhavā sabbā,",
  "tha-ap415:11.4": "phusanti amataṁ padaṁ.",
  "tha-ap415:12.1": "Yadā buddhā cakkhumanto,",
  "tha-ap415:12.2": "uppajjanti pabhaṅkarā;",
  "tha-ap415:12.3": "Kilese jhāpayitvāna,",
  "tha-ap415:12.4": "ālokaṁ dassayanti te’.",
  "tha-ap415:13.1": "Kittayitvāna sambuddhaṁ,",
  "tha-ap415:13.2": "tissaṁ lokagganāyakaṁ;",
  "tha-ap415:13.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap415:13.4": "tiṇasūlaṁ apūjayiṁ.",
  "tha-ap415:14.1": "Mama saṅkappamaññāya,",
  "tha-ap415:14.2": "tisso lokagganāyako;",
  "tha-ap415:14.3": "Sakāsane nisīditvā,",
  "tha-ap415:14.4": "imā gāthā abhāsatha.",
  "tha-ap415:15.1": "‘Yo maṁ pupphehi chādesi,",
  "tha-ap415:15.2": "pasanno sehi pāṇibhi;",
  "tha-ap415:15.3": "Tamahaṁ kittayissāmi,",
  "tha-ap415:15.4": "suṇātha mama bhāsato.",
  "tha-ap415:16.1": "Pañcavīsatikkhattuṁ so,",
  "tha-ap415:16.2": "devarajjaṁ karissati;",
  "tha-ap415:16.3": "Pañcasattatikkhattuñca,",
  "tha-ap415:16.4": "cakkavattī bhavissati.",
  "tha-ap415:17.1": "Padesarajjaṁ vipulaṁ,",
  "tha-ap415:17.2": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap415:17.3": "Tassa kammanissandena,",
  "tha-ap415:17.4": "pupphānaṁ pūjanāya ca.",
  "tha-ap415:18.1": "Sīsaṁnhāto cayaṁ poso,",
  "tha-ap415:18.2": "pupphamākaṅkhate yadi;",
  "tha-ap415:18.3": "Puññakammena saṁyuttaṁ,",
  "tha-ap415:18.4": "purato pātubhavissati.",
  "tha-ap415:19.1": "Yaṁ yaṁ icchati kāmehi,",
  "tha-ap415:19.2": "taṁ taṁ pātubhavissati;",
  "tha-ap415:19.3": "Saṅkappaṁ paripūretvā,",
  "tha-ap415:19.4": "nibbāyissatināsavo’.",
  "tha-ap415:20.1": "Aṭṭhārasamaṁ bhāṇavāraṁ.",
  "tha-ap415:21.1": "Kilese jhāpayitvāna,",
  "tha-ap415:21.2": "sampajāno patissato;",
  "tha-ap415:21.3": "Ekāsane nisīditvā,",
  "tha-ap415:21.4": "arahattamapāpuṇiṁ.",
  "tha-ap415:22.1": "Caṅkamanto nipajjanto,",
  "tha-ap415:22.2": "nisinno uda vā ṭhito;",
  "tha-ap415:22.3": "Buddhaseṭṭhaṁ saritvāna,",
  "tha-ap415:22.4": "viharāmi ahaṁ sadā.",
  "tha-ap415:23.1": "Cīvare piṇḍapāte ca,",
  "tha-ap415:23.2": "paccaye sayanāsane;",
  "tha-ap415:23.3": "Tattha me ūnatā natthi,",
  "tha-ap415:23.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap415:24.1": "So dāni patto amataṁ,",
  "tha-ap415:24.2": "santaṁ padamanuttaraṁ;",
  "tha-ap415:24.3": "Sabbāsave pariññāya,",
  "tha-ap415:24.4": "viharāmi anāsavo.",
  "tha-ap415:25.1": "Dvenavute ito kappe,",
  "tha-ap415:25.2": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap415:25.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap415:25.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap415:26.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap415:26.2": "…pe…",
  "tha-ap415:26.3": "viharāmi anāsavo.",
  "tha-ap415:27.1": "Svāgataṁ vata me āsi,",
  "tha-ap415:27.2": "…pe…",
  "tha-ap415:27.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap415:28.1": "Paṭisambhidā catasso,",
  "tha-ap415:28.2": "…pe…",
  "tha-ap415:28.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap415:29.1": "Itthaṁ sudaṁ āyasmā tiṇasūlakachādaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap415:30.1": "Tiṇasūlakachādaniyattherassāpadānaṁ tatiyaṁ."
}