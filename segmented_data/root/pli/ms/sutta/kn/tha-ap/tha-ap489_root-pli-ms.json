{
  "tha-ap489:0.1": "Therāpadāna",
  "tha-ap489:0.2": "Paṃsukūlavagga",
  "tha-ap489:0.3": "7 Pulinuppādakattheraapadāna",
  "tha-ap489:1.1": "“Pabbate himavantamhi,",
  "tha-ap489:1.2": "devalo nāma tāpaso;",
  "tha-ap489:1.3": "Tattha me caṅkamo āsi,",
  "tha-ap489:1.4": "amanussehi māpito.",
  "tha-ap489:2.1": "Jaṭābhārena bharito,",
  "tha-ap489:2.2": "kamaṇḍaludharo sadā;",
  "tha-ap489:2.3": "Uttamatthaṃ gavesanto,",
  "tha-ap489:2.4": "vipinā nikkhamiṃ tadā.",
  "tha-ap489:3.1": "Cullāsītisahassāni,",
  "tha-ap489:3.2": "sissā mayhaṃ upaṭṭhahuṃ;",
  "tha-ap489:3.3": "Sakakammābhipasutā,",
  "tha-ap489:3.4": "vasanti vipine tadā.",
  "tha-ap489:4.1": "Assamā abhinikkhamma,",
  "tha-ap489:4.2": "akaṃ pulinacetiyaṃ;",
  "tha-ap489:4.3": "Nānāpupphaṃ samānetvā,",
  "tha-ap489:4.4": "taṃ cetiyamapūjayiṃ.",
  "tha-ap489:5.1": "Tattha cittaṃ pasādetvā,",
  "tha-ap489:5.2": "assamaṃ pavisāmahaṃ;",
  "tha-ap489:5.3": "Sabbe sissā samāgantvā,",
  "tha-ap489:5.4": "etamatthaṃ pucchiṃsu maṃ.",
  "tha-ap489:6.1": "‘Pulinena kato thūpo,",
  "tha-ap489:6.2": "yaṃ tvaṃ deva namassasi;",
  "tha-ap489:6.3": "Mayampi ñātumicchāma,",
  "tha-ap489:6.4": "puṭṭho ācikkha no tuvaṃ’.",
  "tha-ap489:7.1": "‘Niddiṭṭhā nu mantapade,",
  "tha-ap489:7.2": "cakkhumanto mahāyasā;",
  "tha-ap489:7.3": "Te kho ahaṃ namassāmi,",
  "tha-ap489:7.4": "buddhaseṭṭhe mahāyase.",
  "tha-ap489:8.1": "Kīdisā te mahāvīrā,",
  "tha-ap489:8.2": "sabbaññū lokanāyakā;",
  "tha-ap489:8.3": "Kathaṃvaṇṇā kathaṃsīlā,",
  "tha-ap489:8.4": "kīdisā te mahāyasā.",
  "tha-ap489:9.1": "Bāttiṃsalakkhaṇā buddhā,",
  "tha-ap489:9.2": "cattālīsadijāpi ca;",
  "tha-ap489:9.3": "Nettā gopakhumā tesaṃ,",
  "tha-ap489:9.4": "jiñjukā phalasannibhā.",
  "tha-ap489:10.1": "Gacchamānā ca te buddhā,",
  "tha-ap489:10.2": "yugamattañca pekkhare;",
  "tha-ap489:10.3": "Na tesaṃ jāṇu nadati,",
  "tha-ap489:10.4": "sandhisaddo na suyyati.",
  "tha-ap489:11.1": "Gacchamānā ca sugatā,",
  "tha-ap489:11.2": "uddharantāva gacchare;",
  "tha-ap489:11.3": "Paṭhamaṃ dakkhiṇaṃ pādaṃ,",
  "tha-ap489:11.4": "buddhānaṃ esa dhammatā.",
  "tha-ap489:12.1": "Asambhītā ca te buddhā,",
  "tha-ap489:12.2": "migarājāva kesarī;",
  "tha-ap489:12.3": "Nevukkaṃsenti attānaṃ,",
  "tha-ap489:12.4": "no ca vambhenti pāṇinaṃ.",
  "tha-ap489:13.1": "Mānāvamānato muttā,",
  "tha-ap489:13.2": "samā sabbesu pāṇisu;",
  "tha-ap489:13.3": "Anattukkaṃsakā buddhā,",
  "tha-ap489:13.4": "buddhānaṃ esa dhammatā.",
  "tha-ap489:14.1": "Uppajjantā ca sambuddhā,",
  "tha-ap489:14.2": "ālokaṃ dassayanti te;",
  "tha-ap489:14.3": "Chappakāraṃ pakampenti,",
  "tha-ap489:14.4": "kevalaṃ vasudhaṃ imaṃ.",
  "tha-ap489:15.1": "Passanti nirayañcete,",
  "tha-ap489:15.2": "nibbāti nirayo tadā;",
  "tha-ap489:15.3": "Pavassati mahāmegho,",
  "tha-ap489:15.4": "buddhānaṃ esa dhammatā.",
  "tha-ap489:16.1": "Īdisā te mahānāgā,",
  "tha-ap489:16.2": "atulā ca mahāyasā;",
  "tha-ap489:16.3": "Vaṇṇato anatikkantā,",
  "tha-ap489:16.4": "appameyyā tathāgatā’.",
  "tha-ap489:17.1": "Anumodiṃsu me vākyaṃ,",
  "tha-ap489:17.2": "sabbe sissā sagāravā;",
  "tha-ap489:17.3": "Tathā ca paṭipajjiṃsu,",
  "tha-ap489:17.4": "yathāsatti yathābalaṃ.",
  "tha-ap489:18.1": "Paṭipūjenti pulinaṃ,",
  "tha-ap489:18.2": "sakakammābhilāsino;",
  "tha-ap489:18.3": "Saddahantā mama vākyaṃ,",
  "tha-ap489:18.4": "buddhasakkatamānasā.",
  "tha-ap489:19.1": "Tadā cavitvā tusitā,",
  "tha-ap489:19.2": "devaputto mahāyaso;",
  "tha-ap489:19.3": "Uppajji mātukucchimhi,",
  "tha-ap489:19.4": "dasasahassi kampatha.",
  "tha-ap489:20.1": "Assamassāvidūramhi,",
  "tha-ap489:20.2": "caṅkamamhi ṭhito ahaṃ;",
  "tha-ap489:20.3": "Sabbe sissā samāgantvā,",
  "tha-ap489:20.4": "āgacchuṃ mama santike.",
  "tha-ap489:21.1": "‘Usabhova mahī nadati,",
  "tha-ap489:21.2": "migarājāva kūjati;",
  "tha-ap489:21.3": "Susumārova saḷati,",
  "tha-ap489:21.4": "kiṃ vipāko bhavissati’.",
  "tha-ap489:22.1": "‘Yaṃ pakittemi sambuddhaṃ,",
  "tha-ap489:22.2": "sikatāthūpasantike;",
  "tha-ap489:22.3": "So dāni bhagavā satthā,",
  "tha-ap489:22.4": "mātukucchimupāgami’.",
  "tha-ap489:23.1": "Tesaṃ dhammakathaṃ vatvā,",
  "tha-ap489:23.2": "kittayitvā mahāmuniṃ;",
  "tha-ap489:23.3": "Uyyojetvā sake sisse,",
  "tha-ap489:23.4": "pallaṅkamābhujiṃ ahaṃ.",
  "tha-ap489:24.1": "Balañca vata me khīṇaṃ,",
  "tha-ap489:24.2": "byādhinā paramena taṃ;",
  "tha-ap489:24.3": "Buddhaseṭṭhaṃ saritvāna,",
  "tha-ap489:24.4": "tattha kālaṅkato ahaṃ.",
  "tha-ap489:25.1": "Sabbe sissā samāgantvā,",
  "tha-ap489:25.2": "akaṃsu citakaṃ tadā;",
  "tha-ap489:25.3": "Kaḷevarañca me gayha,",
  "tha-ap489:25.4": "citakaṃ abhiropayuṃ.",
  "tha-ap489:26.1": "Citakaṃ parivāretvā,",
  "tha-ap489:26.2": "sīse katvāna añjaliṃ;",
  "tha-ap489:26.3": "Sokasallaparetā te,",
  "tha-ap489:26.4": "vikkandiṃsu samāgatā.",
  "tha-ap489:27.1": "Tesaṃ lālappamānānaṃ,",
  "tha-ap489:27.2": "agamaṃ citakaṃ tadā;",
  "tha-ap489:27.3": "‘Ahaṃ ācariyo tumhaṃ,",
  "tha-ap489:27.4": "mā socittha sumedhasā.",
  "tha-ap489:28.1": "Sadatthe vāyameyyātha,",
  "tha-ap489:28.2": "rattindivamatanditā;",
  "tha-ap489:28.3": "Mā vo pamattā ahuttha,",
  "tha-ap489:28.4": "khaṇo vo paṭipādito’.",
  "tha-ap489:29.1": "Sake sissenusāsitvā,",
  "tha-ap489:29.2": "devalokaṃ punāgamiṃ;",
  "tha-ap489:29.3": "Aṭṭhārasa ca kappāni,",
  "tha-ap489:29.4": "devaloke ramāmahaṃ.",
  "tha-ap489:30.1": "Satānaṃ pañcakkhattuñca,",
  "tha-ap489:30.2": "cakkavattī ahosahaṃ;",
  "tha-ap489:30.3": "Anekasatakkhattuñca,",
  "tha-ap489:30.4": "devarajjamakārayiṃ.",
  "tha-ap489:31.1": "Avasesesu kappesu,",
  "tha-ap489:31.2": "vokiṇṇo saṃsariṃ ahaṃ;",
  "tha-ap489:31.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap489:31.4": "uppādassa idaṃ phalaṃ.",
  "tha-ap489:32.1": "Yathā komudike māse,",
  "tha-ap489:32.2": "bahū pupphanti pādapā;",
  "tha-ap489:32.3": "Tathevāhampi samaye,",
  "tha-ap489:32.4": "pupphitomhi mahesinā.",
  "tha-ap489:33.1": "Vīriyaṃ me dhuradhorayhaṃ,",
  "tha-ap489:33.2": "yogakkhemādhivāhanaṃ;",
  "tha-ap489:33.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap489:33.4": "viharāmi anāsavo.",
  "tha-ap489:34.1": "Satasahassito kappe,",
  "tha-ap489:34.2": "yaṃ buddhamabhikittayiṃ;",
  "tha-ap489:34.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap489:34.4": "kittanāya idaṃ phalaṃ.",
  "tha-ap489:35.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap489:35.2": "…pe…",
  "tha-ap489:35.3": "viharāmi anāsavo.",
  "tha-ap489:36.1": "Svāgataṃ vata me āsi,",
  "tha-ap489:36.2": "…pe…",
  "tha-ap489:36.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap489:37.1": "Paṭisambhidā catasso,",
  "tha-ap489:37.2": "…pe…",
  "tha-ap489:37.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap489:38.1": "Itthaṃ sudaṃ āyasmā pulinuppādako thero imā gāthāyo abhāsitthāti.",
  "tha-ap489:39.1": "Pulinuppādakattherassāpadānaṃ sattamaṃ."
}