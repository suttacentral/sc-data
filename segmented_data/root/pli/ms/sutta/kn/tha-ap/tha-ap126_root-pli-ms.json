{
  "tha-ap126:0.1": "Therāpadāna",
  "tha-ap126:0.2": "Sereyyavagga",
  "tha-ap126:0.3": "4. Gandhodakiyattheraapadāna",
  "tha-ap126:1.1": "“Nisajja pāsādavare,",
  "tha-ap126:1.2": "vipassiṁ addasaṁ jinaṁ;",
  "tha-ap126:1.3": "Kakudhaṁ vilasantaṁva,",
  "tha-ap126:1.4": "sabbaññuṁ tamanāsakaṁ.",
  "tha-ap126:2.1": "Pāsādassāvidūre ca,",
  "tha-ap126:2.2": "gacchati lokanāyako;",
  "tha-ap126:2.3": "Pabhā niddhāvate tassa,",
  "tha-ap126:2.4": "yathā ca sataraṁsino.",
  "tha-ap126:3.1": "Gandhodakañca paggayha,",
  "tha-ap126:3.2": "buddhaseṭṭhaṁ samokiriṁ;",
  "tha-ap126:3.3": "Tena cittappasādena,",
  "tha-ap126:3.4": "tattha kālaṅkato ahaṁ.",
  "tha-ap126:4.1": "Ekanavutito kappe,",
  "tha-ap126:4.2": "yaṁ gandhodakamākiriṁ;",
  "tha-ap126:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap126:4.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap126:5.1": "Ekattiṁse ito kappe,",
  "tha-ap126:5.2": "sugandho nāma khattiyo;",
  "tha-ap126:5.3": "Sattaratanasampanno,",
  "tha-ap126:5.4": "cakkavattī mahabbalo.",
  "tha-ap126:6.1": "Paṭisambhidā catasso,",
  "tha-ap126:6.2": "…pe…",
  "tha-ap126:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap126:7.1": "Itthaṁ sudaṁ āyasmā gandhodakiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap126:8.1": "Gandhodakiyattherassāpadānaṁ catutthaṁ."
}