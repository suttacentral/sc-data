{
  "tha-ap543:0.1": "Therāpadāna",
  "tha-ap543:0.2": "Bhaddiyavagga",
  "tha-ap543:0.3": "1 Lakuṇḍabhaddiyattheraapadāna",
  "tha-ap543:1.1": "“Padumuttaro nāma jino,",
  "tha-ap543:1.2": "sabbadhammesu cakkhumā;",
  "tha-ap543:1.3": "Ito satasahassamhi,",
  "tha-ap543:1.4": "kappe uppajji nāyako.",
  "tha-ap543:2.1": "Tadāhaṃ haṃsavatiyaṃ,",
  "tha-ap543:2.2": "seṭṭhiputto mahaddhano;",
  "tha-ap543:2.3": "Jaṅghāvihāraṃ vicaraṃ,",
  "tha-ap543:2.4": "saṃghārāmaṃ agacchahaṃ.",
  "tha-ap543:3.1": "Tadā so lokapajjoto,",
  "tha-ap543:3.2": "dhammaṃ desesi nāyako;",
  "tha-ap543:3.3": "Mañjussarānaṃ pavaraṃ,",
  "tha-ap543:3.4": "sāvakaṃ abhikittayi.",
  "tha-ap543:4.1": "Taṃ sutvā mudito hutvā,",
  "tha-ap543:4.2": "kāraṃ katvā mahesino;",
  "tha-ap543:4.3": "Vanditvā satthuno pāde,",
  "tha-ap543:4.4": "taṃ ṭhānamabhipatthayiṃ.",
  "tha-ap543:5.1": "Tadā buddho viyākāsi,",
  "tha-ap543:5.2": "saṃghamajjhe vināyako;",
  "tha-ap543:5.3": "‘Anāgatamhi addhāne,",
  "tha-ap543:5.4": "lacchase taṃ manorathaṃ.",
  "tha-ap543:6.1": "Satasahassito kappe,",
  "tha-ap543:6.2": "okkākakulasambhavo;",
  "tha-ap543:6.3": "Gotamo nāma gottena,",
  "tha-ap543:6.4": "satthā loke bhavissati.",
  "tha-ap543:7.1": "Tassa dhammesu dāyādo,",
  "tha-ap543:7.2": "oraso dhammanimmito;",
  "tha-ap543:7.3": "Bhaddiyo nāma nāmena,",
  "tha-ap543:7.4": "hessati satthu sāvako’.",
  "tha-ap543:8.1": "Tena kammena sukatena,",
  "tha-ap543:8.2": "cetanāpaṇidhīhi ca;",
  "tha-ap543:8.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap543:8.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap543:9.1": "Dvenavute ito kappe,",
  "tha-ap543:9.2": "phusso uppajji nāyako;",
  "tha-ap543:9.3": "Durāsado duppasaho,",
  "tha-ap543:9.4": "sabbalokuttamo jino.",
  "tha-ap543:10.1": "Caraṇena ca sampanno,",
  "tha-ap543:10.2": "brahā uju patāpavā;",
  "tha-ap543:10.3": "Hitesī sabbasattānaṃ,",
  "tha-ap543:10.4": "bahuṃ mocesi bandhanā.",
  "tha-ap543:11.1": "Nandārāmavane tassa,",
  "tha-ap543:11.2": "ahosiṃ phussakokilo;",
  "tha-ap543:11.3": "Gandhakuṭisamāsanne,",
  "tha-ap543:11.4": "ambarukkhe vasāmahaṃ.",
  "tha-ap543:12.1": "Tadā piṇḍāya gacchantaṃ,",
  "tha-ap543:12.2": "dakkhiṇeyyaṃ jinuttamaṃ;",
  "tha-ap543:12.3": "Disvā cittaṃ pasādetvā,",
  "tha-ap543:12.4": "mañjunābhinikūjahaṃ.",
  "tha-ap543:13.1": "Rājuyyānaṃ tadā gantvā,",
  "tha-ap543:13.2": "supakkaṃ kanakattacaṃ;",
  "tha-ap543:13.3": "Ambapiṇḍaṃ gahetvāna,",
  "tha-ap543:13.4": "sambuddhassopanāmayiṃ.",
  "tha-ap543:14.1": "Tadā me cittamaññāya,",
  "tha-ap543:14.2": "mahākāruṇiko jino;",
  "tha-ap543:14.3": "Upaṭṭhākassa hatthato,",
  "tha-ap543:14.4": "pattaṃ paggaṇhi nāyako.",
  "tha-ap543:15.1": "Adāsiṃ haṭṭhacittohaṃ,",
  "tha-ap543:15.2": "ambapiṇḍaṃ mahāmune;",
  "tha-ap543:15.3": "Patte pakkhippa pakkhehi,",
  "tha-ap543:15.4": "pañjaliṃ katvāna mañjunā.",
  "tha-ap543:16.1": "Sarena rajanīyena,",
  "tha-ap543:16.2": "savanīyena vaggunā;",
  "tha-ap543:16.3": "Vassanto buddhapūjatthaṃ,",
  "tha-ap543:16.4": "nīḷaṃ gantvā nipajjahaṃ.",
  "tha-ap543:17.1": "Tadā muditacittaṃ maṃ,",
  "tha-ap543:17.2": "buddhapemagatāsayaṃ;",
  "tha-ap543:17.3": "Sakuṇagghi upāgantvā,",
  "tha-ap543:17.4": "ghātayī duṭṭhamānaso.",
  "tha-ap543:18.1": "Tato cutohaṃ tusite,",
  "tha-ap543:18.2": "anubhotvā mahāsukhaṃ;",
  "tha-ap543:18.3": "Manussayonimāgacchiṃ,",
  "tha-ap543:18.4": "tassa kammassa vāhasā.",
  "tha-ap543:19.1": "Imamhi bhaddake kappe,",
  "tha-ap543:19.2": "brahmabandhu mahāyaso;",
  "tha-ap543:19.3": "Kassapo nāma gottena,",
  "tha-ap543:19.4": "uppajji vadataṃ varo.",
  "tha-ap543:20.1": "Sāsanaṃ jotayitvā so,",
  "tha-ap543:20.2": "abhibhuyya kutitthiye;",
  "tha-ap543:20.3": "Vinayitvāna veneyye,",
  "tha-ap543:20.4": "nibbuto so sasāvako.",
  "tha-ap543:21.1": "Nibbute tamhi lokagge,",
  "tha-ap543:21.2": "pasannā janatā bahū;",
  "tha-ap543:21.3": "Pūjanatthāya buddhassa,",
  "tha-ap543:21.4": "thūpaṃ kubbanti satthuno.",
  "tha-ap543:22.1": "‘Sattayojanikaṃ thūpaṃ,",
  "tha-ap543:22.2": "sattaratanabhūsitaṃ;",
  "tha-ap543:22.3": "Karissāma mahesissa’,",
  "tha-ap543:22.4": "iccevaṃ mantayanti te.",
  "tha-ap543:23.1": "Kikino kāsirājassa,",
  "tha-ap543:23.2": "tadā senāya nāyako;",
  "tha-ap543:23.3": "Hutvāhaṃ appamāṇassa,",
  "tha-ap543:23.4": "pamāṇaṃ cetiye vadiṃ.",
  "tha-ap543:24.1": "Tadā te mama vākyena,",
  "tha-ap543:24.2": "cetiyaṃ yojanuggataṃ;",
  "tha-ap543:24.3": "Akaṃsu naravīrassa,",
  "tha-ap543:24.4": "nānāratanabhūsitaṃ.",
  "tha-ap543:25.1": "Tena kammena sukatena,",
  "tha-ap543:25.2": "cetanāpaṇidhīhi ca;",
  "tha-ap543:25.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap543:25.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap543:26.1": "Pacchime ca bhave dāni,",
  "tha-ap543:26.2": "jāto seṭṭhikule ahaṃ;",
  "tha-ap543:26.3": "Sāvatthiyaṃ puravare,",
  "tha-ap543:26.4": "iddhe phīte mahaddhane.",
  "tha-ap543:27.1": "Purappavese sugataṃ,",
  "tha-ap543:27.2": "disvā vimhitamānaso;",
  "tha-ap543:27.3": "Pabbajitvāna na ciraṃ,",
  "tha-ap543:27.4": "arahattamapāpuṇiṃ.",
  "tha-ap543:28.1": "Cetiyassa pamāṇaṃ yaṃ,",
  "tha-ap543:28.2": "akariṃ tena kammunā;",
  "tha-ap543:28.3": "Lakuṇḍakasarīrohaṃ,",
  "tha-ap543:28.4": "jāto paribhavāraho.",
  "tha-ap543:29.1": "Sarena madhurenāhaṃ,",
  "tha-ap543:29.2": "pūjitvā isisattamaṃ;",
  "tha-ap543:29.3": "Mañjussarānaṃ bhikkhūnaṃ,",
  "tha-ap543:29.4": "aggattamanupāpuṇiṃ.",
  "tha-ap543:30.1": "Phaladānena buddhassa,",
  "tha-ap543:30.2": "guṇānussaraṇena ca;",
  "tha-ap543:30.3": "Sāmaññaphalasampanno,",
  "tha-ap543:30.4": "viharāmi anāsavo.",
  "tha-ap543:31.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap543:31.2": "bhavā sabbe samūhatā;",
  "tha-ap543:31.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap543:31.4": "viharāmi anāsavo.",
  "tha-ap543:32.1": "Svāgataṃ vata me āsi,",
  "tha-ap543:32.2": "buddhaseṭṭhassa santike;",
  "tha-ap543:32.3": "Tisso vijjā anuppattā,",
  "tha-ap543:32.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap543:33.1": "Paṭisambhidā catasso,",
  "tha-ap543:33.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap543:33.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap543:33.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap543:34.1": "Itthaṃ sudaṃ āyasmā lakuṇḍabhaddiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap543:35.1": "Lakuṇḍabhaddiyattherassāpadānaṃ paṭhamaṃ."
}