{
  "tha-ap344:0.1": "Therāpadāna",
  "tha-ap344:0.2": "Ekapadumiyavagga",
  "tha-ap344:0.3": "2 Tīṇuppalamāliyattheraapadāna",
  "tha-ap344:1.1": "“Candabhāgānadītīre,",
  "tha-ap344:1.2": "ahosiṁ vānaro tadā;",
  "tha-ap344:1.3": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap344:1.4": "nisinnaṁ pabbatantare.",
  "tha-ap344:2.1": "Obhāsentaṁ disā sabbā,",
  "tha-ap344:2.2": "sālarājaṁva phullitaṁ;",
  "tha-ap344:2.3": "Lakkhaṇabyañjanūpetaṁ,",
  "tha-ap344:2.4": "disvā attamano ahuṁ.",
  "tha-ap344:3.1": "Udaggacitto sumano,",
  "tha-ap344:3.2": "pītiyā haṭṭhamānaso;",
  "tha-ap344:3.3": "Tīṇi uppalapupphāni,",
  "tha-ap344:3.4": "matthake abhiropayiṁ.",
  "tha-ap344:4.1": "Pupphāni abhiropetvā,",
  "tha-ap344:4.2": "vipassissa mahesino;",
  "tha-ap344:4.3": "Sagāravo bhavitvāna,",
  "tha-ap344:4.4": "pakkāmiṁ uttarāmukho.",
  "tha-ap344:5.1": "Gacchanto paṭikuṭiko,",
  "tha-ap344:5.2": "vippasannena cetasā;",
  "tha-ap344:5.3": "Selantare patitvāna,",
  "tha-ap344:5.4": "pāpuṇiṁ jīvitakkhayaṁ.",
  "tha-ap344:6.1": "Tena kammena sukatena,",
  "tha-ap344:6.2": "cetanāpaṇidhīhi ca;",
  "tha-ap344:6.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap344:6.4": "tāvatiṁsamagacchahaṁ.",
  "tha-ap344:7.1": "Satānaṁ tīṇikkhattuñca,",
  "tha-ap344:7.2": "devarajjaṁ akārayiṁ;",
  "tha-ap344:7.3": "Satānaṁ pañcakkhattuñca,",
  "tha-ap344:7.4": "cakkavattī ahosahaṁ.",
  "tha-ap344:8.1": "Ekanavutito kappe,",
  "tha-ap344:8.2": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap344:8.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap344:8.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap344:9.1": "Paṭisambhidā catasso,",
  "tha-ap344:9.2": "…pe…",
  "tha-ap344:9.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap344:10.1": "Itthaṁ sudaṁ āyasmā tīṇuppalamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap344:11.1": "Tīṇuppalamāliyattherassāpadānaṁ dutiyaṁ."
}