{
  "tha-ap140:0.1": "Therāpadāna",
  "tha-ap140:0.2": "Sobhitavagga",
  "tha-ap140:0.3": "8 Ekapasādaniyattheraapadāna",
  "tha-ap140:1.1": "“Nārado iti me nāmaṁ,",
  "tha-ap140:1.2": "kesavo iti maṁ vidū;",
  "tha-ap140:1.3": "Kusalākusalaṁ esaṁ,",
  "tha-ap140:1.4": "agamaṁ buddhasantikaṁ.",
  "tha-ap140:2.1": "Mettacitto kāruṇiko,",
  "tha-ap140:2.2": "atthadassī mahāmuni;",
  "tha-ap140:2.3": "Assāsayanto satte so,",
  "tha-ap140:2.4": "dhammaṁ deseti cakkhumā.",
  "tha-ap140:3.1": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap140:3.2": "sire katvāna añjaliṁ;",
  "tha-ap140:3.3": "Satthāraṁ abhivādetvā,",
  "tha-ap140:3.4": "pakkāmiṁ pācināmukho.",
  "tha-ap140:4.1": "Sattarase kappasate,",
  "tha-ap140:4.2": "rājā āsi mahīpati;",
  "tha-ap140:4.3": "Amittatāpano nāma,",
  "tha-ap140:4.4": "cakkavattī mahabbalo.",
  "tha-ap140:5.1": "Paṭisambhidā catasso,",
  "tha-ap140:5.2": "…pe…",
  "tha-ap140:5.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap140:6.1": "Itthaṁ sudaṁ āyasmā ekapasādaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap140:7.1": "Ekapasādaniyattherassāpadānaṁ aṭṭhamaṁ."
}