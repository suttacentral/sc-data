{
  "tha-ap464:0.1": "Therāpadāna",
  "tha-ap464:0.2": "Sālakusumiyavagga",
  "tha-ap464:0.3": "2. Citakapūjakattheraapadāna",
  "tha-ap464:1.1": "“Jhāyamānassa bhagavato,",
  "tha-ap464:1.2": "sikhino lokabandhuno;",
  "tha-ap464:1.3": "Aṭṭha campakapupphāni,",
  "tha-ap464:1.4": "citakaṁ abhiropayiṁ.",
  "tha-ap464:2.1": "Ekatiṁse ito kappe,",
  "tha-ap464:2.2": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap464:2.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap464:2.4": "citapūjāyidaṁ phalaṁ.",
  "tha-ap464:3.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap464:3.2": "…pe…",
  "tha-ap464:3.3": "viharāmi anāsavo.",
  "tha-ap464:4.1": "Svāgataṁ vata me āsi,",
  "tha-ap464:4.2": "…pe…",
  "tha-ap464:4.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap464:5.1": "Paṭisambhidā catasso,",
  "tha-ap464:5.2": "…pe…",
  "tha-ap464:5.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap464:6.1": "Itthaṁ sudaṁ āyasmā citakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap464:7.1": "Citakapūjakattherassāpadānaṁ dutiyaṁ."
}