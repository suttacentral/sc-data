{
  "tha-ap138:0.1": "Therāpadāna",
  "tha-ap138:0.2": "Sobhitavagga",
  "tha-ap138:0.3": "6. Campakapupphiyattheraapadāna",
  "tha-ap138:1.1": "“Kaṇikāraṃva jotantaṃ,",
  "tha-ap138:1.2": "nisinnaṃ pabbatantare;",
  "tha-ap138:1.3": "Obhāsentaṃ disā sabbā,",
  "tha-ap138:1.4": "osadhiṃ viya tārakaṃ.",
  "tha-ap138:2.1": "Tayo māṇavakā āsuṃ,",
  "tha-ap138:2.2": "sake sippe susikkhitā;",
  "tha-ap138:2.3": "Khāribhāraṃ gahetvāna,",
  "tha-ap138:2.4": "anventi mama pacchato.",
  "tha-ap138:3.1": "Puṭake satta pupphāni,",
  "tha-ap138:3.2": "nikkhittāni tapassinā;",
  "tha-ap138:3.3": "Gahetvā tāni ñāṇamhi,",
  "tha-ap138:3.4": "vessabhussābhiropayiṃ.",
  "tha-ap138:4.1": "Ekattiṃse ito kappe,",
  "tha-ap138:4.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap138:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap138:4.4": "ñāṇapūjāyidaṃ phalaṃ.",
  "tha-ap138:5.1": "Ekūnatiṃsakappamhi,",
  "tha-ap138:5.2": "vipulābhasanāmako;",
  "tha-ap138:5.3": "Sattaratanasampanno,",
  "tha-ap138:5.4": "cakkavattī mahabbalo.",
  "tha-ap138:6.1": "Paṭisambhidā catasso,",
  "tha-ap138:6.2": "…pe…",
  "tha-ap138:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap138:7.1": "Itthaṃ sudaṃ āyasmā campakapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap138:8.1": "Campakapupphiyattherassāpadānaṃ chaṭṭhaṃ."
}