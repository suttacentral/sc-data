{
  "tha-ap117:0.1": "Therāpadāna",
  "tha-ap117:0.2": "Mahāparivāravagga",
  "tha-ap117:0.3": "5. Suvaṇṇapupphiyattheraapadāna",
  "tha-ap117:1.1": "“Vipassī nāma bhagavā,",
  "tha-ap117:1.2": "lokajeṭṭho narāsabho;",
  "tha-ap117:1.3": "Nisinno janakāyassa,",
  "tha-ap117:1.4": "desesi amataṁ padaṁ.",
  "tha-ap117:2.1": "Tassāhaṁ dhammaṁ sutvāna,",
  "tha-ap117:2.2": "dvipadindassa tādino;",
  "tha-ap117:2.3": "Soṇṇapupphāni cattāri,",
  "tha-ap117:2.4": "buddhassa abhiropayiṁ.",
  "tha-ap117:3.1": "Suvaṇṇacchadanaṁ āsi,",
  "tha-ap117:3.2": "yāvatā parisā tadā;",
  "tha-ap117:3.3": "Buddhābhā ca suvaṇṇābhā,",
  "tha-ap117:3.4": "āloko vipulo ahu.",
  "tha-ap117:4.1": "Udaggacitto sumano,",
  "tha-ap117:4.2": "vedajāto katañjalī;",
  "tha-ap117:4.3": "Vittisañjanano tesaṁ,",
  "tha-ap117:4.4": "diṭṭhadhammasukhāvaho.",
  "tha-ap117:5.1": "Āyācitvāna sambuddhaṁ,",
  "tha-ap117:5.2": "vanditvāna ca subbataṁ;",
  "tha-ap117:5.3": "Pāmojjaṁ janayitvāna,",
  "tha-ap117:5.4": "sakaṁ bhavanupāgamiṁ.",
  "tha-ap117:6.1": "Bhavane upaviṭṭhohaṁ,",
  "tha-ap117:6.2": "buddhaseṭṭhaṁ anussariṁ;",
  "tha-ap117:6.3": "Tena cittappasādena,",
  "tha-ap117:6.4": "tusitaṁ upapajjahaṁ.",
  "tha-ap117:7.1": "Ekanavutito kappe,",
  "tha-ap117:7.2": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap117:7.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap117:7.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap117:8.1": "Soḷasāsiṁsu rājāno,",
  "tha-ap117:8.2": "nemisammatanāmakā;",
  "tha-ap117:8.3": "Tetālīse ito kappe,",
  "tha-ap117:8.4": "cakkavattī mahabbalā.",
  "tha-ap117:9.1": "Paṭisambhidā catasso,",
  "tha-ap117:9.2": "…pe…",
  "tha-ap117:9.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap117:10.1": "Itthaṁ sudaṁ āyasmā suvaṇṇapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap117:11.1": "Suvaṇṇapupphiyattherassāpadānaṁ pañcamaṁ."
}