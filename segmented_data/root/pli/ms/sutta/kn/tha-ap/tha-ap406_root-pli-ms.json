{
  "tha-ap406:0.1": "Therāpadāna",
  "tha-ap406:0.2": "Metteyyavagga",
  "tha-ap406:0.3": "4. Dhotakattheraapadāna",
  "tha-ap406:1.1": "“Gaṅgā bhāgīrathī nāma,",
  "tha-ap406:1.2": "himavantā pabhāvitā;",
  "tha-ap406:1.3": "Haṃsavatiyā dvārena,",
  "tha-ap406:1.4": "anusandati tāvade.",
  "tha-ap406:2.1": "Sobhito nāma ārāmo,",
  "tha-ap406:2.2": "gaṅgākūle sumāpito;",
  "tha-ap406:2.3": "Tattha padumuttaro buddho,",
  "tha-ap406:2.4": "vasate lokanāyako.",
  "tha-ap406:3.1": "Tidasehi yathā indo,",
  "tha-ap406:3.2": "manujehi purakkhato;",
  "tha-ap406:3.3": "Nisīdi tattha bhagavā,",
  "tha-ap406:3.4": "asambhītova kesarī.",
  "tha-ap406:4.1": "Nagare haṃsavatiyā,",
  "tha-ap406:4.2": "vasāmi brāhmaṇo ahaṃ;",
  "tha-ap406:4.3": "Chaḷaṅgo nāma nāmena,",
  "tha-ap406:4.4": "evaṃnāmo mahāmuni.",
  "tha-ap406:5.1": "Aṭṭhārasa sissasatā,",
  "tha-ap406:5.2": "parivārenti maṃ tadā;",
  "tha-ap406:5.3": "Tehi sissehi samito,",
  "tha-ap406:5.4": "gaṅgātīraṃ upāgamiṃ.",
  "tha-ap406:6.1": "Tatthaddasāsiṃ samaṇe,",
  "tha-ap406:6.2": "nikkuhe dhotapāpake;",
  "tha-ap406:6.3": "Bhāgīrathiṃ tarantehaṃ,",
  "tha-ap406:6.4": "evaṃ cintesi tāvade.",
  "tha-ap406:7.1": "‘Sāyaṃ pātaṃ tarantāme,",
  "tha-ap406:7.2": "buddhaputtā mahāyasā;",
  "tha-ap406:7.3": "Vihesayanti attānaṃ,",
  "tha-ap406:7.4": "tesaṃ attā vihaññati.",
  "tha-ap406:8.1": "Sadevakassa lokassa,",
  "tha-ap406:8.2": "buddho aggo pavuccati;",
  "tha-ap406:8.3": "Natthi me dakkhiṇe kāraṃ,",
  "tha-ap406:8.4": "gatimaggavisodhanaṃ.",
  "tha-ap406:9.1": "Yannūna buddhaseṭṭhassa,",
  "tha-ap406:9.2": "setuṃ gaṅgāya kāraye;",
  "tha-ap406:9.3": "Kārāpetvā imaṃ kammaṃ,",
  "tha-ap406:9.4": "santarāmi imaṃ bhavaṃ’.",
  "tha-ap406:10.1": "Satasahassaṃ datvāna,",
  "tha-ap406:10.2": "setuṃ kārāpayiṃ ahaṃ;",
  "tha-ap406:10.3": "Saddahanto kataṃ kāraṃ,",
  "tha-ap406:10.4": "vipulaṃ me bhavissati.",
  "tha-ap406:11.1": "Kārāpetvāna taṃ setuṃ,",
  "tha-ap406:11.2": "upesiṃ lokanāyakaṃ;",
  "tha-ap406:11.3": "Sirasi añjaliṃ katvā,",
  "tha-ap406:11.4": "imaṃ vacanamabraviṃ.",
  "tha-ap406:12.1": "‘Satasahassassa vayaṃ,",
  "tha-ap406:12.2": "datvā kārāpito mayā;",
  "tha-ap406:12.3": "Tavatthāya mahāsetu,",
  "tha-ap406:12.4": "paṭiggaṇha mahāmune’.",
  "tha-ap406:13.1": "Padumuttaro lokavidū,",
  "tha-ap406:13.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap406:13.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap406:13.4": "imā gāthā abhāsatha.",
  "tha-ap406:14.1": "‘Yo me setuṃ akāresi,",
  "tha-ap406:14.2": "pasanno sehi pāṇibhi;",
  "tha-ap406:14.3": "Tamahaṃ kittayissāmi,",
  "tha-ap406:14.4": "suṇātha mama bhāsato.",
  "tha-ap406:15.0": "4.1. Setudānaānisaṃsa",
  "tha-ap406:15.1": "Darito pabbatato vā,",
  "tha-ap406:15.2": "rukkhato patitopiyaṃ;",
  "tha-ap406:15.3": "Cutopi lacchatī ṭhānaṃ,",
  "tha-ap406:15.4": "setudānassidaṃ phalaṃ.",
  "tha-ap406:16.1": "Virūḷhamūlasantānaṃ,",
  "tha-ap406:16.2": "nigrodhamiva māluto;",
  "tha-ap406:16.3": "Amittā nappasahanti,",
  "tha-ap406:16.4": "setudānassidaṃ phalaṃ.",
  "tha-ap406:17.1": "Nāssa corā pasahanti,",
  "tha-ap406:17.2": "nātimaññanti khattiyā;",
  "tha-ap406:17.3": "Sabbe tarissatāmitte,",
  "tha-ap406:17.4": "setudānassidaṃ phalaṃ.",
  "tha-ap406:18.1": "Abbhokāsagataṃ santaṃ,",
  "tha-ap406:18.2": "kaṭhinātapatāpitaṃ;",
  "tha-ap406:18.3": "Puññakammena saṃyuttaṃ,",
  "tha-ap406:18.4": "na bhavissati vedanā.",
  "tha-ap406:19.1": "Devaloke manusse vā,",
  "tha-ap406:19.2": "hatthiyānaṃ sunimmitaṃ;",
  "tha-ap406:19.3": "Tassa saṅkappamaññāya,",
  "tha-ap406:19.4": "nibbattissati tāvade.",
  "tha-ap406:20.1": "Sahassassā vātajavā,",
  "tha-ap406:20.2": "sindhavā sīghavāhanā;",
  "tha-ap406:20.3": "Sāyaṃ pātaṃ upessanti,",
  "tha-ap406:20.4": "setudānassidaṃ phalaṃ.",
  "tha-ap406:21.1": "Āgantvāna manussattaṃ,",
  "tha-ap406:21.2": "sukhitoyaṃ bhavissati;",
  "tha-ap406:21.3": "Vehāsaṃ manujasseva,",
  "tha-ap406:21.4": "hatthiyānaṃ bhavissati.",
  "tha-ap406:22.1": "Kappasatasahassamhi,",
  "tha-ap406:22.2": "okkākakulasambhavo;",
  "tha-ap406:22.3": "Gotamo nāma gottena,",
  "tha-ap406:22.4": "satthā loke bhavissati.",
  "tha-ap406:23.1": "Tassa dhammesu dāyādo,",
  "tha-ap406:23.2": "oraso dhammanimmito;",
  "tha-ap406:23.3": "Sabbāsave pariññāya,",
  "tha-ap406:23.4": "nibbāyissatināsavo’.",
  "tha-ap406:24.1": "Aho me sukataṃ kammaṃ,",
  "tha-ap406:24.2": "jalajuttamanāmake;",
  "tha-ap406:24.3": "Tattha kāraṃ karitvāna,",
  "tha-ap406:24.4": "pattohaṃ āsavakkhayaṃ.",
  "tha-ap406:25.1": "Padhānaṃ pahitattomhi,",
  "tha-ap406:25.2": "upasanto nirūpadhi;",
  "tha-ap406:25.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap406:25.4": "viharāmi anāsavo.",
  "tha-ap406:26.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap406:26.2": "…pe…",
  "tha-ap406:26.3": "viharāmi anāsavo.",
  "tha-ap406:27.1": "Svāgataṃ vata me āsi,",
  "tha-ap406:27.2": "…pe…",
  "tha-ap406:27.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap406:28.1": "Paṭisambhidā catasso,",
  "tha-ap406:28.2": "…pe…",
  "tha-ap406:28.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap406:29.1": "Itthaṃ sudaṃ āyasmā dhotako thero imā gāthāyo abhāsitthāti.",
  "tha-ap406:30.1": "Dhotakattherassāpadānaṃ catutthaṃ."
}