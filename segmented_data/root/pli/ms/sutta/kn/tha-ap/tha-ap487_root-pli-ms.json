{
  "tha-ap487:0.1": "Therāpadāna",
  "tha-ap487:0.2": "Paṃsukūlavagga",
  "tha-ap487:0.3": "5. Candanamāliyattheraapadāna",
  "tha-ap487:1.1": "“Pañca kāmaguṇe hitvā,",
  "tha-ap487:1.2": "piyarūpe manorame;",
  "tha-ap487:1.3": "Asītikoṭiyo hitvā,",
  "tha-ap487:1.4": "pabbajiṃ anagāriyaṃ.",
  "tha-ap487:2.1": "Pabbajitvāna kāyena,",
  "tha-ap487:2.2": "pāpakammaṃ vivajjayiṃ;",
  "tha-ap487:2.3": "Vacīduccaritaṃ hitvā,",
  "tha-ap487:2.4": "nadīkūle vasāmahaṃ.",
  "tha-ap487:3.1": "Ekakaṃ maṃ viharantaṃ,",
  "tha-ap487:3.2": "buddhaseṭṭho upāgami;",
  "tha-ap487:3.3": "Nāhaṃ jānāmi buddhoti,",
  "tha-ap487:3.4": "akāsiṃ paṭisanthāraṃ.",
  "tha-ap487:4.1": "Karitvā paṭisanthāraṃ,",
  "tha-ap487:4.2": "nāmagottamapucchahaṃ;",
  "tha-ap487:4.3": "‘Devatānusi gandhabbo,",
  "tha-ap487:4.4": "adu sakko purindado.",
  "tha-ap487:5.1": "Ko vā tvaṃ kassa vā putto,",
  "tha-ap487:5.2": "mahābrahmā idhāgato;",
  "tha-ap487:5.3": "Virocesi disā sabbā,",
  "tha-ap487:5.4": "udayaṃ sūriyo yathā.",
  "tha-ap487:6.1": "Sahassārāni cakkāni,",
  "tha-ap487:6.2": "pāde dissanti mārisa;",
  "tha-ap487:6.3": "Ko vā tvaṃ kassa vā putto,",
  "tha-ap487:6.4": "kathaṃ jānemu taṃ mayaṃ;",
  "tha-ap487:6.5": "Nāmagottaṃ pavedehi,",
  "tha-ap487:6.6": "saṃsayaṃ apanehi me.",
  "tha-ap487:7.1": "Namhi devo na gandhabbo,",
  "tha-ap487:7.2": "namhi sakko purindado;",
  "tha-ap487:7.3": "Brahmabhāvo ca me natthi,",
  "tha-ap487:7.4": "etesaṃ uttamo ahaṃ.",
  "tha-ap487:8.1": "Atīto visayaṃ tesaṃ,",
  "tha-ap487:8.2": "dālayiṃ kāmabandhanaṃ;",
  "tha-ap487:8.3": "Sabbe kilese jhāpetvā,",
  "tha-ap487:8.4": "patto sambodhimuttamaṃ’.",
  "tha-ap487:9.1": "Tassa vācaṃ suṇitvāhaṃ,",
  "tha-ap487:9.2": "idaṃ vacanamabraviṃ;",
  "tha-ap487:9.3": "‘Yadi buddhoti sabbaññū,",
  "tha-ap487:9.4": "nisīda tvaṃ mahāmune.",
  "tha-ap487:10.1": "Tamahaṃ pūjayissāmi,",
  "tha-ap487:10.2": "dukkhassantakaro tuvaṃ’;",
  "tha-ap487:10.3": "Pattharitvā jinacammaṃ,",
  "tha-ap487:10.4": "adāsi satthuno ahaṃ.",
  "tha-ap487:11.1": "Nisīdi tattha bhagavā,",
  "tha-ap487:11.2": "sīhova girigabbhare;",
  "tha-ap487:11.3": "Khippaṃ pabbatamāruyha,",
  "tha-ap487:11.4": "ambassa phalamaggahiṃ.",
  "tha-ap487:12.1": "Sālakalyāṇikaṃ pupphaṃ,",
  "tha-ap487:12.2": "Candanañca mahārahaṃ;",
  "tha-ap487:12.3": "Khippaṃ paggayha taṃ sabbaṃ,",
  "tha-ap487:12.4": "Upetvā lokanāyakaṃ.",
  "tha-ap487:13.1": "Phalaṃ buddhassa datvāna,",
  "tha-ap487:13.2": "sālapupphamapūjayiṃ;",
  "tha-ap487:13.3": "Candanaṃ anulimpitvā,",
  "tha-ap487:13.4": "avandiṃ satthuno ahaṃ.",
  "tha-ap487:14.1": "Pasannacitto sumano,",
  "tha-ap487:14.2": "vipulāya ca pītiyā;",
  "tha-ap487:14.3": "Ajinamhi nisīditvā,",
  "tha-ap487:14.4": "sumedho lokanāyako.",
  "tha-ap487:15.1": "Mama kammaṃ pakittesi,",
  "tha-ap487:15.2": "hāsayanto mamaṃ tadā;",
  "tha-ap487:15.3": "‘Iminā phaladānena,",
  "tha-ap487:15.4": "gandhamālehi cūbhayaṃ.",
  "tha-ap487:16.1": "Pañcavīse kappasate,",
  "tha-ap487:16.2": "devaloke ramissati;",
  "tha-ap487:16.3": "Anūnamanasaṅkappo,",
  "tha-ap487:16.4": "vasavattī bhavissati.",
  "tha-ap487:17.1": "Chabbīsatikappasate,",
  "tha-ap487:17.2": "manussattaṃ gamissati;",
  "tha-ap487:17.3": "Bhavissati cakkavattī,",
  "tha-ap487:17.4": "cāturanto mahiddhiko.",
  "tha-ap487:18.1": "Vebhāraṃ nāma nagaraṃ,",
  "tha-ap487:18.2": "vissakammena māpitaṃ;",
  "tha-ap487:18.3": "Hessati sabbasovaṇṇaṃ,",
  "tha-ap487:18.4": "nānāratanabhūsitaṃ.",
  "tha-ap487:19.1": "Eteneva upāyena,",
  "tha-ap487:19.2": "saṃsarissati so bhave;",
  "tha-ap487:19.3": "Sabbattha pūjito hutvā,",
  "tha-ap487:19.4": "devatte atha mānuse.",
  "tha-ap487:20.1": "Pacchime bhave sampatte,",
  "tha-ap487:20.2": "brahmabandhu bhavissati;",
  "tha-ap487:20.3": "Agārā abhinikkhamma,",
  "tha-ap487:20.4": "anagārī bhavissati;",
  "tha-ap487:20.5": "Abhiññāpāragū hutvā,",
  "tha-ap487:20.6": "nibbāyissatināsavo’.",
  "tha-ap487:21.1": "Idaṃ vatvāna sambuddho,",
  "tha-ap487:21.2": "sumedho lokanāyako;",
  "tha-ap487:21.3": "Mama nijjhāyamānassa,",
  "tha-ap487:21.4": "pakkāmi anilañjase.",
  "tha-ap487:22.1": "Tena kammena sukatena,",
  "tha-ap487:22.2": "cetanāpaṇidhīhi ca;",
  "tha-ap487:22.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap487:22.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap487:23.1": "Tusitato cavitvāna,",
  "tha-ap487:23.2": "nibbattiṃ mātukucchiyaṃ;",
  "tha-ap487:23.3": "Bhoge me ūnatā natthi,",
  "tha-ap487:23.4": "yamhi gabbhe vasāmahaṃ.",
  "tha-ap487:24.1": "Mātukucchigate mayi,",
  "tha-ap487:24.2": "annapānañca bhojanaṃ;",
  "tha-ap487:24.3": "Mātuyā mama chandena,",
  "tha-ap487:24.4": "nibbattati yadicchakaṃ.",
  "tha-ap487:25.1": "Jātiyā pañcavassena,",
  "tha-ap487:25.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap487:25.3": "Oropitamhi kesamhi,",
  "tha-ap487:25.4": "arahattamapāpuṇiṃ.",
  "tha-ap487:26.1": "Pubbakammaṃ gavesanto,",
  "tha-ap487:26.2": "orena nāddasaṃ ahaṃ;",
  "tha-ap487:26.3": "Tiṃsakappasahassamhi,",
  "tha-ap487:26.4": "mama kammamanussariṃ.",
  "tha-ap487:27.1": "Namo te purisājañña,",
  "tha-ap487:27.2": "namo te purisuttama;",
  "tha-ap487:27.3": "Tava sāsanamāgamma,",
  "tha-ap487:27.4": "pattomhi acalaṃ padaṃ.",
  "tha-ap487:28.1": "Tiṃsakappasahassamhi,",
  "tha-ap487:28.2": "yaṃ buddhamabhipūjayiṃ;",
  "tha-ap487:28.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap487:28.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap487:29.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap487:29.2": "…pe…",
  "tha-ap487:29.3": "viharāmi anāsavo.",
  "tha-ap487:30.1": "Svāgataṃ vata me āsi,",
  "tha-ap487:30.2": "…pe…",
  "tha-ap487:30.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap487:31.1": "Paṭisambhidā catasso,",
  "tha-ap487:31.2": "…pe…",
  "tha-ap487:31.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap487:32.1": "Itthaṃ sudaṃ āyasmā candanamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap487:33.1": "Candanamāliyattherassāpadānaṃ pañcamaṃ."
}