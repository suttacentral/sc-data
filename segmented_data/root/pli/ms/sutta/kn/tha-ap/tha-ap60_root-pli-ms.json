{
  "tha-ap60:0.1": "Therāpadāna",
  "tha-ap60:0.2": "Bījanivagga",
  "tha-ap60:0.3": "8. Dhajadāyakattheraapadāna",
  "tha-ap60:1.1": "“Padumuttarabuddhassa,",
  "tha-ap60:1.2": "bodhiyā pādaputtame;",
  "tha-ap60:1.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap60:1.4": "dhajamāropayiṃ ahaṃ.",
  "tha-ap60:2.1": "Patitapattāni gaṇhitvā,",
  "tha-ap60:2.2": "bahiddhā chaḍḍayiṃ ahaṃ;",
  "tha-ap60:2.3": "Antosuddhaṃ bahisuddhaṃ,",
  "tha-ap60:2.4": "adhimuttamanāsavaṃ.",
  "tha-ap60:3.1": "Sammukhā viya sambuddhaṃ,",
  "tha-ap60:3.2": "avandiṃ bodhimuttamaṃ;",
  "tha-ap60:3.3": "Padumuttaro lokavidū,",
  "tha-ap60:3.4": "āhutīnaṃ paṭiggaho.",
  "tha-ap60:4.1": "Bhikkhusaṃghe ṭhito satthā,",
  "tha-ap60:4.2": "imā gāthā abhāsatha;",
  "tha-ap60:4.3": "‘Iminā dhajadānena,",
  "tha-ap60:4.4": "upaṭṭhānena cūbhayaṃ.",
  "tha-ap60:5.1": "Kappānaṃ satasahassaṃ,",
  "tha-ap60:5.2": "duggatiṃ so na gacchati;",
  "tha-ap60:5.3": "Devesu devasobhagyaṃ,",
  "tha-ap60:5.4": "anubhossatinappakaṃ.",
  "tha-ap60:6.1": "Anekasatakkhattuñca,",
  "tha-ap60:6.2": "rājā raṭṭhe bhavissati;",
  "tha-ap60:6.3": "Uggato nāma nāmena,",
  "tha-ap60:6.4": "cakkavattī bhavissati.",
  "tha-ap60:7.1": "Sampattiṃ anubhotvāna,",
  "tha-ap60:7.2": "sukkamūlena codito;",
  "tha-ap60:7.3": "Gotamassa bhagavato,",
  "tha-ap60:7.4": "sāsanebhiramissati’.",
  "tha-ap60:8.1": "Padhānapahitattomhi,",
  "tha-ap60:8.2": "upasanto nirūpadhi;",
  "tha-ap60:8.3": "Dhāremi antimaṃ dehaṃ,",
  "tha-ap60:8.4": "sammāsambuddhasāsane.",
  "tha-ap60:9.1": "Ekapaññāsasahasse,",
  "tha-ap60:9.2": "kappe uggatasavhayo;",
  "tha-ap60:9.3": "Paññāsasatasahasse,",
  "tha-ap60:9.4": "khattiyo meghasavhayo.",
  "tha-ap60:10.1": "Paṭisambhidā catasso,",
  "tha-ap60:10.2": "…pe…",
  "tha-ap60:10.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap60:11.1": "Itthaṃ sudaṃ āyasmā dhajadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap60:12.1": "Dhajadāyakattherassāpadānaṃ aṭṭhamaṃ."
}