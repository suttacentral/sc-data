{
  "tha-ap158:0.1": "Therāpadāna",
  "tha-ap158:0.2": "Bandhujīvakavagga",
  "tha-ap158:0.3": "6. Kadambapupphiyattheraapadāna",
  "tha-ap158:1.1": "“Himavantassāvidūre,",
  "tha-ap158:1.2": "kukkuṭo nāma pabbato;",
  "tha-ap158:1.3": "Tamhi pabbatapādamhi,",
  "tha-ap158:1.4": "satta buddhā vasanti te.",
  "tha-ap158:2.1": "Kadambaṁ pupphitaṁ disvā,",
  "tha-ap158:2.2": "dīparājaṁva uggataṁ;",
  "tha-ap158:2.3": "Ubho hatthehi paggayha,",
  "tha-ap158:2.4": "satta buddhe samokiriṁ.",
  "tha-ap158:3.1": "Catunnavutito kappe,",
  "tha-ap158:3.2": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap158:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap158:3.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap158:4.1": "Dvenavute ito kappe,",
  "tha-ap158:4.2": "sattāsuṁ pupphanāmakā;",
  "tha-ap158:4.3": "Sattaratanasampannā,",
  "tha-ap158:4.4": "cakkavattī mahabbalā.",
  "tha-ap158:5.1": "Paṭisambhidā catasso,",
  "tha-ap158:5.2": "…pe…",
  "tha-ap158:5.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap158:6.1": "Itthaṁ sudaṁ āyasmā kadambapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap158:7.1": "Kadambapupphiyattherassāpadānaṁ chaṭṭhaṁ."
}