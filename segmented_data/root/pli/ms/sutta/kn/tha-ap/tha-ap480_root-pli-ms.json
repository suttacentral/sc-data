{
  "tha-ap480:0.1": "Therāpadāna",
  "tha-ap480:0.2": "Naḷamālivagga",
  "tha-ap480:0.3": "8. Vallikāraphaladāyakattheraapadāna",
  "tha-ap480:1.1": "“Sumano nāma sambuddho,",
  "tha-ap480:1.2": "takkarāyaṁ vasī tadā;",
  "tha-ap480:1.3": "Vallikāraphalaṁ gayha,",
  "tha-ap480:1.4": "sayambhussa adāsahaṁ.",
  "tha-ap480:2.1": "Ekatiṁse ito kappe,",
  "tha-ap480:2.2": "yaṁ phalaṁ adadiṁ tadā;",
  "tha-ap480:2.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap480:2.4": "phaladānassidaṁ phalaṁ.",
  "tha-ap480:3.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap480:3.2": "…pe…",
  "tha-ap480:3.3": "viharāmi anāsavo.",
  "tha-ap480:4.1": "Svāgataṁ vata me āsi,",
  "tha-ap480:4.2": "…pe…",
  "tha-ap480:4.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap480:5.1": "Paṭisambhidā catasso,",
  "tha-ap480:5.2": "…pe…",
  "tha-ap480:5.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap480:6.1": "Itthaṁ sudaṁ āyasmā vallikāraphaladāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap480:7.1": "Vallikāraphaladāyakattherassāpadānaṁ aṭṭhamaṁ."
}