{
  "tha-ap490:0.1": "Therāpadāna",
  "tha-ap490:0.2": "Paṃsukūlavagga",
  "tha-ap490:0.3": "8. Taraṇiyattheraapadāna",
  "tha-ap490:1.1": "“Atthadassī tu bhagavā,",
  "tha-ap490:1.2": "sayambhū lokanāyako;",
  "tha-ap490:1.3": "Vinatā nadiyā tīraṃ,",
  "tha-ap490:1.4": "upāgacchi tathāgato.",
  "tha-ap490:2.1": "Udakā abhinikkhamma,",
  "tha-ap490:2.2": "kacchapo vārigocaro;",
  "tha-ap490:2.3": "Buddhaṃ tāretukāmohaṃ,",
  "tha-ap490:2.4": "upesiṃ lokanāyakaṃ.",
  "tha-ap490:3.1": "‘Abhirūhatu maṃ buddho,",
  "tha-ap490:3.2": "atthadassī mahāmuni;",
  "tha-ap490:3.3": "Ahaṃ taṃ tārayissāmi,",
  "tha-ap490:3.4": "dukkhassantakaro tuvaṃ’.",
  "tha-ap490:4.1": "Mama saṅkappamaññāya,",
  "tha-ap490:4.2": "atthadassī mahāyaso;",
  "tha-ap490:4.3": "Abhirūhitvā me piṭṭhiṃ,",
  "tha-ap490:4.4": "aṭṭhāsi lokanāyako.",
  "tha-ap490:5.1": "Yato sarāmi attānaṃ,",
  "tha-ap490:5.2": "yato pattosmi viññutaṃ;",
  "tha-ap490:5.3": "Sukhaṃ me tādisaṃ natthi,",
  "tha-ap490:5.4": "phuṭṭhe pādatale yathā.",
  "tha-ap490:6.1": "Uttaritvāna sambuddho,",
  "tha-ap490:6.2": "atthadassī mahāyaso;",
  "tha-ap490:6.3": "Naditīramhi ṭhatvāna,",
  "tha-ap490:6.4": "imā gāthā abhāsatha.",
  "tha-ap490:7.1": "‘Yāvatā vattate cittaṃ,",
  "tha-ap490:7.2": "gaṅgāsotaṃ tarāmahaṃ;",
  "tha-ap490:7.3": "Ayañca kacchapo rājā,",
  "tha-ap490:7.4": "tāresi mama paññavā.",
  "tha-ap490:8.1": "Iminā buddhataraṇena,",
  "tha-ap490:8.2": "mettacittavatāya ca;",
  "tha-ap490:8.3": "Aṭṭhārase kappasate,",
  "tha-ap490:8.4": "devaloke ramissati.",
  "tha-ap490:9.1": "Devalokā idhāgantvā,",
  "tha-ap490:9.2": "sukkamūlena codito;",
  "tha-ap490:9.3": "Ekāsane nisīditvā,",
  "tha-ap490:9.4": "kaṅkhāsotaṃ tarissati.",
  "tha-ap490:10.1": "Yathāpi bhaddake khette,",
  "tha-ap490:10.2": "bījaṃ appampi ropitaṃ;",
  "tha-ap490:10.3": "Sammādhāre pavecchante,",
  "tha-ap490:10.4": "phalaṃ toseti kassakaṃ’.",
  "tha-ap490:11.1": "Tathevidaṃ buddhakhettaṃ,",
  "tha-ap490:11.2": "sammāsambuddhadesitaṃ;",
  "tha-ap490:11.3": "Sammādhāre pavecchante,",
  "tha-ap490:11.4": "phalaṃ maṃ tosayissati.",
  "tha-ap490:12.1": "Padhānapahitattomhi,",
  "tha-ap490:12.2": "upasanto nirūpadhi;",
  "tha-ap490:12.3": "Sabbāsave pariññāya,",
  "tha-ap490:12.4": "viharāmi anāsavo.",
  "tha-ap490:13.1": "Aṭṭhārase kappasate,",
  "tha-ap490:13.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap490:13.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap490:13.4": "taraṇāya idaṃ phalaṃ.",
  "tha-ap490:14.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap490:14.2": "…pe…",
  "tha-ap490:14.3": "viharāmi anāsavo.",
  "tha-ap490:15.1": "Svāgataṃ vata me āsi,",
  "tha-ap490:15.2": "…pe…",
  "tha-ap490:15.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap490:16.1": "Paṭisambhidā catasso,",
  "tha-ap490:16.2": "…pe…",
  "tha-ap490:16.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap490:17.1": "Itthaṃ sudaṃ āyasmā taraṇiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap490:18.1": "Taraṇiyattherassāpadānaṃ aṭṭhamaṃ."
}