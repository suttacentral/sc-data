{
  "tha-ap350:0.1": "Therāpadāna",
  "tha-ap350:0.2": "Ekapadumiyavagga",
  "tha-ap350:0.3": "8. Tiṇamuṭṭhidāyakattheraapadāna",
  "tha-ap350:1.1": "“Himavantassāvidūre,",
  "tha-ap350:1.2": "lambako nāma pabbato;",
  "tha-ap350:1.3": "Upatisso nāma sambuddho,",
  "tha-ap350:1.4": "abbhokāsamhi caṅkami.",
  "tha-ap350:2.1": "Migaluddo tadā āsiṁ,",
  "tha-ap350:2.2": "araññe kānane ahaṁ;",
  "tha-ap350:2.3": "Disvāna taṁ devadevaṁ,",
  "tha-ap350:2.4": "sayambhuṁ aparājitaṁ.",
  "tha-ap350:3.1": "Vippasannena cittena,",
  "tha-ap350:3.2": "tadā tassa mahesino;",
  "tha-ap350:3.3": "Nisīdanatthaṁ buddhassa,",
  "tha-ap350:3.4": "tiṇamuṭṭhimadāsahaṁ.",
  "tha-ap350:4.1": "Datvāna devadevassa,",
  "tha-ap350:4.2": "bhiyyo cittaṁ pasādayiṁ;",
  "tha-ap350:4.3": "Sambuddhaṁ abhivādetvā,",
  "tha-ap350:4.4": "pakkāmiṁ uttarāmukho.",
  "tha-ap350:5.1": "Aciraṁ gatamattaṁ maṁ,",
  "tha-ap350:5.2": "migarājā apothayi;",
  "tha-ap350:5.3": "Sīhena pothito santo,",
  "tha-ap350:5.4": "tattha kālaṅkato ahaṁ.",
  "tha-ap350:6.1": "Āsanne me kataṁ kammaṁ,",
  "tha-ap350:6.2": "buddhaseṭṭhe anāsave;",
  "tha-ap350:6.3": "Sumutto saravegova,",
  "tha-ap350:6.4": "devalokaṁ agañchahaṁ.",
  "tha-ap350:7.1": "Yūpo tattha subho āsi,",
  "tha-ap350:7.2": "puññakammābhinimmito;",
  "tha-ap350:7.3": "Sahassakaṇḍo satabheṇḍu,",
  "tha-ap350:7.4": "dhajālu haritāmayo.",
  "tha-ap350:8.1": "Pabhā niddhāvate tassa,",
  "tha-ap350:8.2": "sataraṁsīva uggato;",
  "tha-ap350:8.3": "Ākiṇṇo devakaññāhi,",
  "tha-ap350:8.4": "āmodiṁ kāmakāmahaṁ.",
  "tha-ap350:9.1": "Devalokā cavitvāna,",
  "tha-ap350:9.2": "sukkamūlena codito;",
  "tha-ap350:9.3": "Āgantvāna manussattaṁ,",
  "tha-ap350:9.4": "pattomhi āsavakkhayaṁ.",
  "tha-ap350:10.1": "Catunnavutito kappe,",
  "tha-ap350:10.2": "nisīdanamadāsahaṁ;",
  "tha-ap350:10.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap350:10.4": "tiṇamuṭṭhiyidaṁ phalaṁ.",
  "tha-ap350:11.1": "Paṭisambhidā catasso,",
  "tha-ap350:11.2": "…pe…",
  "tha-ap350:11.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap350:12.1": "Itthaṁ sudaṁ āyasmā tiṇamuṭṭhidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap350:13.1": "Tiṇamuṭṭhidāyakattherassāpadānaṁ aṭṭhamaṁ."
}