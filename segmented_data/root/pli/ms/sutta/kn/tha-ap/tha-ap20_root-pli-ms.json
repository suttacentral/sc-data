{
  "tha-ap20:0.1": "Therāpadāna",
  "tha-ap20:0.2": "Sīhāsaniyavagga",
  "tha-ap20:0.3": "8. Raṭṭhapālattheraapadāna",
  "tha-ap20:1.1": "“Padumuttarassa bhagavato,",
  "tha-ap20:1.2": "Lokajeṭṭhassa tādino;",
  "tha-ap20:1.3": "Varanāgo mayā dinno,",
  "tha-ap20:1.4": "Īsādanto urūḷhavā.",
  "tha-ap20:2.1": "Setacchatto pasobhito,",
  "tha-ap20:2.2": "sakappano sahatthipo;",
  "tha-ap20:2.3": "Agghāpetvāna taṁ sabbaṁ,",
  "tha-ap20:2.4": "saṅghārāmaṁ akārayiṁ.",
  "tha-ap20:3.1": "Catupaññāsasahassāni,",
  "tha-ap20:3.2": "pāsāde kārayiṁ ahaṁ;",
  "tha-ap20:3.3": "Mahoghadānaṁ karitvāna,",
  "tha-ap20:3.4": "niyyādesiṁ mahesino.",
  "tha-ap20:4.1": "Anumodi mahāvīro,",
  "tha-ap20:4.2": "sayambhū aggapuggalo;",
  "tha-ap20:4.3": "Sabbe jane hāsayanto,",
  "tha-ap20:4.4": "desesi amataṁ padaṁ.",
  "tha-ap20:5.1": "Taṁ me buddho viyākāsi,",
  "tha-ap20:5.2": "jalajuttaranāmako;",
  "tha-ap20:5.3": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap20:5.4": "imā gāthā abhāsatha.",
  "tha-ap20:6.1": "‘Catupaññāsasahassāni,",
  "tha-ap20:6.2": "pāsāde kārayī ayaṁ;",
  "tha-ap20:6.3": "Kathayissāmi vipākaṁ,",
  "tha-ap20:6.4": "suṇotha mama bhāsato.",
  "tha-ap20:7.1": "Aṭṭhārasasahassāni,",
  "tha-ap20:7.2": "kūṭāgārā bhavissare;",
  "tha-ap20:7.3": "Byamhuttamamhi nibbattā,",
  "tha-ap20:7.4": "sabbasoṇṇamayā ca te.",
  "tha-ap20:8.1": "Paññāsakkhattuṁ devindo,",
  "tha-ap20:8.2": "devarajjaṁ karissati;",
  "tha-ap20:8.3": "Aṭṭhapaññāsakkhattuñca,",
  "tha-ap20:8.4": "cakkavattī bhavissati.",
  "tha-ap20:9.1": "Kappasatasahassamhi,",
  "tha-ap20:9.2": "okkākakulasambhavo;",
  "tha-ap20:9.3": "Gotamo nāma gottena,",
  "tha-ap20:9.4": "satthā loke bhavissati.",
  "tha-ap20:10.1": "Devalokā cavitvāna,",
  "tha-ap20:10.2": "sukkamūlena codito;",
  "tha-ap20:10.3": "Aḍḍhe kule mahābhoge,",
  "tha-ap20:10.4": "nibbattissati tāvade.",
  "tha-ap20:11.1": "So pacchā pabbajitvāna,",
  "tha-ap20:11.2": "sukkamūlena codito;",
  "tha-ap20:11.3": "Raṭṭhapāloti nāmena,",
  "tha-ap20:11.4": "hessati satthu sāvako.",
  "tha-ap20:12.1": "Padhānapahitatto so,",
  "tha-ap20:12.2": "upasanto nirūpadhi;",
  "tha-ap20:12.3": "Sabbāsave pariññāya,",
  "tha-ap20:12.4": "nibbāyissatināsavo’.",
  "tha-ap20:13.1": "Uṭṭhāya abhinikkhamma,",
  "tha-ap20:13.2": "jahitā bhogasampadā;",
  "tha-ap20:13.3": "Kheḷapiṇḍeva bhogamhi,",
  "tha-ap20:13.4": "pemaṁ mayhaṁ na vijjati.",
  "tha-ap20:14.1": "Vīriyaṁ me dhuradhorayhaṁ,",
  "tha-ap20:14.2": "yogakkhemādhivāhanaṁ;",
  "tha-ap20:14.3": "Dhāremi antimaṁ dehaṁ,",
  "tha-ap20:14.4": "sammāsambuddhasāsane.",
  "tha-ap20:15.1": "Paṭisambhidā catasso,",
  "tha-ap20:15.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap20:15.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap20:15.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap20:16.1": "Itthaṁ sudaṁ āyasmā raṭṭhapālo thero imā gāthāyo abhāsitthāti.",
  "tha-ap20:17.1": "Raṭṭhapālattherassāpadānaṁ aṭṭhamaṁ."
}