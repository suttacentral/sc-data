{
  "tha-ap309:0.1": "Therāpadāna",
  "tha-ap309:0.2": "Padumakesaravagga",
  "tha-ap309:0.3": "7. Ārāmadāyakattheraapadāna",
  "tha-ap309:1.1": "“Siddhatthassa bhagavato,",
  "tha-ap309:1.2": "ārāmo ropito mayā;",
  "tha-ap309:1.3": "Sandacchāyesu rukkhesu,",
  "tha-ap309:1.4": "upāsantesu pakkhisu.",
  "tha-ap309:2.1": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap309:2.2": "āhutīnaṁ paṭiggahaṁ;",
  "tha-ap309:2.3": "Ārāmaṁ abhināmesiṁ,",
  "tha-ap309:2.4": "lokajeṭṭhaṁ narāsabhaṁ.",
  "tha-ap309:3.1": "Haṭṭho haṭṭhena cittena,",
  "tha-ap309:3.2": "phalaṁ pupphamadāsahaṁ;",
  "tha-ap309:3.3": "Tato jātappasādova,",
  "tha-ap309:3.4": "taṁ vanaṁ pariṇāmayiṁ.",
  "tha-ap309:4.1": "Buddhassa yamidaṁ dāsiṁ,",
  "tha-ap309:4.2": "vippasannena cetasā;",
  "tha-ap309:4.3": "Bhave nibbattamānamhi,",
  "tha-ap309:4.4": "nibbattati phalaṁ mama.",
  "tha-ap309:5.1": "Catunnavutito kappe,",
  "tha-ap309:5.2": "yaṁ ārāmamadaṁ tadā;",
  "tha-ap309:5.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap309:5.4": "ārāmassa idaṁ phalaṁ.",
  "tha-ap309:6.1": "Sattatiṁse ito kappe,",
  "tha-ap309:6.2": "sattāsuṁ mudusītalā;",
  "tha-ap309:6.3": "Sattaratanasampannā,",
  "tha-ap309:6.4": "cakkavattī mahabbalā.",
  "tha-ap309:7.1": "Paṭisambhidā catasso,",
  "tha-ap309:7.2": "…pe…",
  "tha-ap309:7.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap309:8.1": "Itthaṁ sudaṁ āyasmā ārāmadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap309:9.1": "Ārāmadāyakattherassāpadānaṁ sattamaṁ."
}