{
  "tha-ap218:0.1": "Therāpadāna",
  "tha-ap218:0.2": "Hatthivagga",
  "tha-ap218:0.3": "6 Sandhitattheraapadāna",
  "tha-ap218:1.1": "“Assatthe haritobhāse,",
  "tha-ap218:1.2": "saṁvirūḷhamhi pādape;",
  "tha-ap218:1.3": "Ekaṁ buddhagataṁ saññaṁ,",
  "tha-ap218:1.4": "alabhiṁhaṁ patissato.",
  "tha-ap218:2.1": "Ekattiṁse ito kappe,",
  "tha-ap218:2.2": "yaṁ saññamalabhiṁ tadā;",
  "tha-ap218:2.3": "Tassā saññāya vāhasā,",
  "tha-ap218:2.4": "patto me āsavakkhayo.",
  "tha-ap218:3.1": "Ito terasakappamhi,",
  "tha-ap218:3.2": "dhaniṭṭho nāma khattiyo;",
  "tha-ap218:3.3": "Sattaratanasampanno,",
  "tha-ap218:3.4": "cakkavattī mahabbalo.",
  "tha-ap218:4.1": "Paṭisambhidā catasso,",
  "tha-ap218:4.2": "…pe…",
  "tha-ap218:4.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap218:5.1": "Itthaṁ sudaṁ āyasmā sandhito thero imā gāthāyo abhāsitthāti.",
  "tha-ap218:6.1": "Sandhitattherassāpadānaṁ chaṭṭhaṁ."
}