{
  "tha-ap329:0.1": "Therāpadāna",
  "tha-ap329:0.2": "Umāpupphiyavagga",
  "tha-ap329:0.3": "7. Nigguṇḍipupphiyattheraapadāna",
  "tha-ap329:1.1": "“Yadā devo devakāyā,",
  "tha-ap329:1.2": "cavate āyusaṅkhayā;",
  "tha-ap329:1.3": "Tayo saddā niccharanti,",
  "tha-ap329:1.4": "devānaṃ anumodataṃ.",
  "tha-ap329:2.1": "‘Ito bho sugatiṃ gaccha,",
  "tha-ap329:2.2": "manussānaṃ sahabyataṃ;",
  "tha-ap329:2.3": "Manussabhūto saddhamme,",
  "tha-ap329:2.4": "labha saddhaṃ anuttaraṃ.",
  "tha-ap329:3.1": "Sā te saddhā niviṭṭhāssa,",
  "tha-ap329:3.2": "mūlajātā patiṭṭhitā;",
  "tha-ap329:3.3": "Yāvajīvaṃ asaṃhīrā,",
  "tha-ap329:3.4": "saddhamme suppavedite.",
  "tha-ap329:4.1": "Kāyena kusalaṃ katvā,",
  "tha-ap329:4.2": "vācāya kusalaṃ bahuṃ;",
  "tha-ap329:4.3": "Manasā kusalaṃ katvā,",
  "tha-ap329:4.4": "abyāpajjaṃ nirūpadhiṃ.",
  "tha-ap329:5.1": "Tato opadhikaṃ puññaṃ,",
  "tha-ap329:5.2": "katvā dānena taṃ bahuṃ;",
  "tha-ap329:5.3": "Aññepi macce saddhamme,",
  "tha-ap329:5.4": "brahmacariye nivesaya’.",
  "tha-ap329:6.1": "Imāya anukampāya,",
  "tha-ap329:6.2": "devādevaṃ yadā vidū;",
  "tha-ap329:6.3": "Cavantaṃ anumodanti,",
  "tha-ap329:6.4": "ehi deva punappunaṃ.",
  "tha-ap329:7.1": "‘Saṃvego me tadā āsi,",
  "tha-ap329:7.2": "devasaṅghe samāgate;",
  "tha-ap329:7.3": "Kaṃsu nāma ahaṃ yoniṃ,",
  "tha-ap329:7.4": "gamissāmi ito cuto’.",
  "tha-ap329:8.1": "Mama saṃvegamaññāya,",
  "tha-ap329:8.2": "samaṇo bhāvitindriyo;",
  "tha-ap329:8.3": "Mamuddharitukāmo so,",
  "tha-ap329:8.4": "āgacchi mama santikaṃ.",
  "tha-ap329:9.1": "Sumano nāma nāmena,",
  "tha-ap329:9.2": "padumuttarasāvako;",
  "tha-ap329:9.3": "Atthadhammānusāsitvā,",
  "tha-ap329:9.4": "saṃvejesi mamaṃ tadā.",
  "tha-ap329:10.1": "Dvādasamaṃ bhāṇavāraṃ.",
  "tha-ap329:11.1": "Tassāhaṃ vacanaṃ sutvā,",
  "tha-ap329:11.2": "buddhe cittaṃ pasādayiṃ;",
  "tha-ap329:11.3": "Taṃ dhīraṃ abhivādetvā,",
  "tha-ap329:11.4": "tattha kālaṅkato ahaṃ.",
  "tha-ap329:12.1": "Upapajjiṃ sa tattheva,",
  "tha-ap329:12.2": "sukkamūlena codito;",
  "tha-ap329:12.3": "Vasanto mātukucchimhi,",
  "tha-ap329:12.4": "puna dhāreti mātuyā.",
  "tha-ap329:13.1": "Tamhā kāyā cavitvāna,",
  "tha-ap329:13.2": "tidase upapajjahaṃ;",
  "tha-ap329:13.3": "Etthantare na passāmi,",
  "tha-ap329:13.4": "domanassamahaṃ tadā.",
  "tha-ap329:14.1": "Tāvatiṃsā cavitvāna,",
  "tha-ap329:14.2": "mātukucchiṃ samokkamiṃ;",
  "tha-ap329:14.3": "Nikkhamitvāna kucchimhā,",
  "tha-ap329:14.4": "kaṇhasukkaṃ ajānahaṃ.",
  "tha-ap329:15.1": "Jātiyā sattavassova,",
  "tha-ap329:15.2": "ārāmaṃ pāvisiṃ ahaṃ;",
  "tha-ap329:15.3": "Gotamassa bhagavato,",
  "tha-ap329:15.4": "sakyaputtassa tādino.",
  "tha-ap329:16.1": "Vitthārike pāvacane,",
  "tha-ap329:16.2": "bāhujaññamhi sāsane;",
  "tha-ap329:16.3": "Addasaṃ sāsanakare,",
  "tha-ap329:16.4": "bhikkhavo tattha satthuno.",
  "tha-ap329:17.1": "Sāvatthi nāma nagaraṃ,",
  "tha-ap329:17.2": "rājā tatthāsi kosalo;",
  "tha-ap329:17.3": "Rathena nāgayuttena,",
  "tha-ap329:17.4": "upesi bodhimuttamaṃ.",
  "tha-ap329:18.1": "Tassāhaṃ nāgaṃ disvāna,",
  "tha-ap329:18.2": "pubbakammaṃ anussariṃ;",
  "tha-ap329:18.3": "Añjaliṃ paggahetvāna,",
  "tha-ap329:18.4": "samayaṃ agamāsahaṃ.",
  "tha-ap329:19.1": "Jātiyā sattavassova,",
  "tha-ap329:19.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap329:19.3": "Yo so buddhaṃ upaṭṭhāsi,",
  "tha-ap329:19.4": "ānando nāma sāvako.",
  "tha-ap329:20.1": "Gatimā dhitimā ceva,",
  "tha-ap329:20.2": "satimā ca bahussuto;",
  "tha-ap329:20.3": "Rañño cittaṃ pasādento,",
  "tha-ap329:20.4": "niyyādesi mahājuti.",
  "tha-ap329:21.1": "Tassāhaṃ dhammaṃ sutvāna,",
  "tha-ap329:21.2": "pubbakammaṃ anussariṃ;",
  "tha-ap329:21.3": "Tattheva ṭhitako santo,",
  "tha-ap329:21.4": "arahattamapāpuṇiṃ.",
  "tha-ap329:22.1": "Ekaṃsaṃ cīvaraṃ katvā,",
  "tha-ap329:22.2": "sire katvāna añjaliṃ;",
  "tha-ap329:22.3": "Sambuddhaṃ abhivādetvā,",
  "tha-ap329:22.4": "imaṃ vācaṃ udīrayiṃ.",
  "tha-ap329:23.1": "‘Padumuttarabuddhassa,",
  "tha-ap329:23.2": "dvipadindassa satthuno;",
  "tha-ap329:23.3": "Nigguṇḍipupphaṃ paggayha,",
  "tha-ap329:23.4": "sīhāsane ṭhapesahaṃ.",
  "tha-ap329:24.1": "Tena kammena dvipadinda,",
  "tha-ap329:24.2": "lokajeṭṭha narāsabha;",
  "tha-ap329:24.3": "Pattomhi acalaṃ ṭhānaṃ,",
  "tha-ap329:24.4": "hitvā jayaparājayaṃ’.",
  "tha-ap329:25.1": "Pañcavīsasahassamhi,",
  "tha-ap329:25.2": "kappānaṃ manujādhipā;",
  "tha-ap329:25.3": "Abbudanirabbudāni,",
  "tha-ap329:25.4": "aṭṭhaṭṭhāsiṃsu khattiyā.",
  "tha-ap329:26.1": "Paṭisambhidā catasso,",
  "tha-ap329:26.2": "…pe…",
  "tha-ap329:26.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap329:27.1": "Itthaṃ sudaṃ āyasmā nigguṇḍipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap329:28.1": "Nigguṇḍipupphiyattherassāpadānaṃ sattamaṃ."
}