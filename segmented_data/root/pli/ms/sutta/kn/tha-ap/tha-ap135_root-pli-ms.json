{
  "tha-ap135:0.1": "Therāpadāna",
  "tha-ap135:0.2": "Sobhitavagga",
  "tha-ap135:0.3": "3 Candanapūjanakattheraapadāna",
  "tha-ap135:1.1": "“Candabhāgānadītīre,",
  "tha-ap135:1.2": "ahosiṃ kinnaro tadā;",
  "tha-ap135:1.3": "Pupphabhakkho cahaṃ āsiṃ,",
  "tha-ap135:1.4": "pupphānivasano tathā.",
  "tha-ap135:2.1": "Atthadassī tu bhagavā,",
  "tha-ap135:2.2": "lokajeṭṭho narāsabho;",
  "tha-ap135:2.3": "Vipinaggena niyyāsi,",
  "tha-ap135:2.4": "haṃsarājāva ambare.",
  "tha-ap135:3.1": "Namo te purisājañña,",
  "tha-ap135:3.2": "cittaṃ te suvisodhitaṃ;",
  "tha-ap135:3.3": "Pasannamukhavaṇṇosi,",
  "tha-ap135:3.4": "vippasannamukhindriyo.",
  "tha-ap135:4.1": "Orohitvāna ākāsā,",
  "tha-ap135:4.2": "bhūripañño sumedhaso;",
  "tha-ap135:4.3": "Saṅghāṭiṃ pattharitvāna,",
  "tha-ap135:4.4": "pallaṅkena upāvisi.",
  "tha-ap135:5.1": "Vilīnaṃ candanādāya,",
  "tha-ap135:5.2": "agamāsiṃ jinantikaṃ;",
  "tha-ap135:5.3": "Pasannacitto sumano,",
  "tha-ap135:5.4": "buddhassa abhiropayiṃ.",
  "tha-ap135:6.1": "Abhivādetvāna sambuddhaṃ,",
  "tha-ap135:6.2": "lokajeṭṭhaṃ narāsabhaṃ;",
  "tha-ap135:6.3": "Pāmojjaṃ janayitvāna,",
  "tha-ap135:6.4": "pakkāmiṃ uttarāmukho.",
  "tha-ap135:7.1": "Aṭṭhārase kappasate,",
  "tha-ap135:7.2": "candanaṃ yaṃ apūjayiṃ;",
  "tha-ap135:7.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap135:7.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap135:8.1": "Catuddase kappasate,",
  "tha-ap135:8.2": "ito āsiṃsu te tayo;",
  "tha-ap135:8.3": "Rohaṇī nāma nāmena,",
  "tha-ap135:8.4": "cakkavattī mahabbalā.",
  "tha-ap135:9.1": "Paṭisambhidā catasso,",
  "tha-ap135:9.2": "…pe…",
  "tha-ap135:9.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap135:10.1": "Itthaṃ sudaṃ āyasmā candanapūjanako thero imā gāthāyo abhāsitthāti.",
  "tha-ap135:11.1": "Candanapūjanakattherassāpadānaṃ tatiyaṃ.",
  "tha-ap135:11.2": "Aṭṭhamabhāṇavāraṃ."
}