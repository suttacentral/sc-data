{
  "tha-ap50:0.1": "Therāpadāna",
  "tha-ap50:0.2": "Upālivagga",
  "tha-ap50:0.3": "8 Caṅkamanadāyakattheraapadāna",
  "tha-ap50:1.1": "“Atthadassissa munino,",
  "tha-ap50:1.2": "lokajeṭṭhassa tādino;",
  "tha-ap50:1.3": "Iṭṭhakāhi cinitvāna,",
  "tha-ap50:1.4": "caṅkamaṃ kārayiṃ ahaṃ.",
  "tha-ap50:2.1": "Uccato pañcaratanaṃ,",
  "tha-ap50:2.2": "caṅkamaṃ sādhumāpitaṃ;",
  "tha-ap50:2.3": "Āyāmato hatthasataṃ,",
  "tha-ap50:2.4": "bhāvanīyyaṃ manoramaṃ.",
  "tha-ap50:3.1": "Paṭiggahesi bhagavā,",
  "tha-ap50:3.2": "atthadassī naruttamo;",
  "tha-ap50:3.3": "Hatthena pulinaṃ gayha,",
  "tha-ap50:3.4": "imā gāthā abhāsatha.",
  "tha-ap50:4.1": "‘Iminā pulinadānena,",
  "tha-ap50:4.2": "caṅkamaṃ sukatena ca;",
  "tha-ap50:4.3": "Sattaratanasampannaṃ,",
  "tha-ap50:4.4": "pulinaṃ anubhossati.",
  "tha-ap50:5.1": "Tīṇi kappāni devesu,",
  "tha-ap50:5.2": "devarajjaṃ karissati;",
  "tha-ap50:5.3": "Anubhossati sampattiṃ,",
  "tha-ap50:5.4": "accharāhi purakkhato.",
  "tha-ap50:6.1": "Manussalokamāgantvā,",
  "tha-ap50:6.2": "rājā raṭṭhe bhavissati;",
  "tha-ap50:6.3": "Tikkhattuṃ cakkavattī ca,",
  "tha-ap50:6.4": "mahiyā so bhavissati’.",
  "tha-ap50:7.1": "Aṭṭhārase kappasate,",
  "tha-ap50:7.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap50:7.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap50:7.4": "caṅkamassa idaṃ phalaṃ.",
  "tha-ap50:8.1": "Paṭisambhidā catasso,",
  "tha-ap50:8.2": "…pe…",
  "tha-ap50:8.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap50:9.1": "Itthaṃ sudaṃ āyasmā caṅkamanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap50:10.1": "Caṅkamanadāyakattherassāpadānaṃ aṭṭhamaṃ."
}