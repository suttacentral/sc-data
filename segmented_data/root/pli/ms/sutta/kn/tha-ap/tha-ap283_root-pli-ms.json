{
  "tha-ap283:0.1": "Therāpadāna",
  "tha-ap283:0.2": "Paṇṇadāyakavagga",
  "tha-ap283:0.3": "1. Paṇṇadāyakattheraapadāna",
  "tha-ap283:1.1": "“Paṇṇasāle nisinnomhi,",
  "tha-ap283:1.2": "paṇṇabhojanabhojano;",
  "tha-ap283:1.3": "Upaviṭṭhañca maṁ santaṁ,",
  "tha-ap283:1.4": "upāgacchi mahāisi.",
  "tha-ap283:2.1": "Siddhattho lokapajjoto,",
  "tha-ap283:2.2": "sabbalokatikicchako;",
  "tha-ap283:2.3": "Tassa paṇṇaṁ mayā dinnaṁ,",
  "tha-ap283:2.4": "nisinnaṁ paṇṇasanthare.",
  "tha-ap283:3.1": "Catunnavutito kappe,",
  "tha-ap283:3.2": "yaṁ paṇṇamadadiṁ tadā;",
  "tha-ap283:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap283:3.4": "paṇṇadānassidaṁ phalaṁ.",
  "tha-ap283:4.1": "Paṭisambhidā catasso,",
  "tha-ap283:4.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap283:4.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap283:4.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap283:5.1": "Itthaṁ sudaṁ āyasmā paṇṇadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap283:6.1": "Paṇṇadāyakattherassāpadānaṁ paṭhamaṁ."
}