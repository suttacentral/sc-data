{
  "tha-ap560:0.1": "Therāpadāna",
  "tha-ap560:0.2": "Yasavagga",
  "tha-ap560:0.3": "8. Bhaddajittheraapadāna",
  "tha-ap560:1.1": "“Ogayha yaṃ pokkharaṇiṃ,",
  "tha-ap560:1.2": "nānākuñjarasevitaṃ;",
  "tha-ap560:1.3": "Uddharāmi bhisaṃ tattha,",
  "tha-ap560:1.4": "ghāsahetu ahaṃ tadā.",
  "tha-ap560:2.1": "Bhagavā tamhi samaye,",
  "tha-ap560:2.2": "padumuttarasavhayo;",
  "tha-ap560:2.3": "Rattambaradharo buddho,",
  "tha-ap560:2.4": "gacchate anilañjase.",
  "tha-ap560:3.1": "Dhunanto paṃsukūlāni,",
  "tha-ap560:3.2": "saddaṃ assosahaṃ tadā;",
  "tha-ap560:3.3": "Uddhaṃ nijjhāyamānohaṃ,",
  "tha-ap560:3.4": "addasaṃ lokanāyakaṃ.",
  "tha-ap560:4.1": "Tattheva ṭhitako santo,",
  "tha-ap560:4.2": "āyāciṃ lokanāyakaṃ;",
  "tha-ap560:4.3": "‘Madhuṃ bhisehi sahitaṃ,",
  "tha-ap560:4.4": "khīraṃ sappiṃ muḷālikaṃ.",
  "tha-ap560:5.1": "Paṭiggaṇhātu me buddho,",
  "tha-ap560:5.2": "anukampāya cakkhumā’;",
  "tha-ap560:5.3": "Tato kāruṇiko satthā,",
  "tha-ap560:5.4": "orohitvā mahāyaso.",
  "tha-ap560:6.1": "Paṭiggaṇhi mama bhikkhaṃ,",
  "tha-ap560:6.2": "anukampāya cakkhumā;",
  "tha-ap560:6.3": "Paṭiggahetvā sambuddho,",
  "tha-ap560:6.4": "akā me anumodanaṃ.",
  "tha-ap560:7.1": "‘Sukhī hotu mahāpuñña,",
  "tha-ap560:7.2": "gati tuyhaṃ samijjhatu;",
  "tha-ap560:7.3": "Iminā bhisadānena,",
  "tha-ap560:7.4": "labhassu vipulaṃ sukhaṃ’.",
  "tha-ap560:8.1": "Idaṃ vatvāna sambuddho,",
  "tha-ap560:8.2": "jalajuttamanāmako;",
  "tha-ap560:8.3": "Bhikkhamādāya sambuddho,",
  "tha-ap560:8.4": "ākāsenāgamā jino.",
  "tha-ap560:9.1": "Tato bhisaṃ gahetvāna,",
  "tha-ap560:9.2": "āgacchiṃ mama assamaṃ;",
  "tha-ap560:9.3": "Bhisaṃ rukkhe laggetvāna,",
  "tha-ap560:9.4": "mama dānaṃ anussariṃ.",
  "tha-ap560:10.1": "Mahāvāto uṭṭhahitvā,",
  "tha-ap560:10.2": "sañcālesi vanaṃ tadā;",
  "tha-ap560:10.3": "Ākāso abhinādittha,",
  "tha-ap560:10.4": "asanī ca phalī tadā.",
  "tha-ap560:11.1": "Tato me asanīpāto,",
  "tha-ap560:11.2": "matthake nipatī tadā;",
  "tha-ap560:11.3": "Sohaṃ nisinnako santo,",
  "tha-ap560:11.4": "tattha kālaṅkato ahaṃ.",
  "tha-ap560:12.1": "Puññakammena saññutto,",
  "tha-ap560:12.2": "tusitaṃ upapajjahaṃ;",
  "tha-ap560:12.3": "Kaḷevaraṃ me patitaṃ,",
  "tha-ap560:12.4": "devaloke ramāmahaṃ.",
  "tha-ap560:13.1": "Chaḷasītisahassāni,",
  "tha-ap560:13.2": "nāriyo samalaṅkatā;",
  "tha-ap560:13.3": "Sāyaṃ pātaṃ upaṭṭhanti,",
  "tha-ap560:13.4": "bhisadānassidaṃ phalaṃ.",
  "tha-ap560:14.1": "Manussayonimāgantvā,",
  "tha-ap560:14.2": "sukhito homahaṃ tadā;",
  "tha-ap560:14.3": "Bhogā me ūnatā natthi,",
  "tha-ap560:14.4": "bhisadānassidaṃ phalaṃ.",
  "tha-ap560:15.1": "Anukampitako tena,",
  "tha-ap560:15.2": "devadevena tādinā;",
  "tha-ap560:15.3": "Sabbāsavaparikkhīṇā,",
  "tha-ap560:15.4": "natthi dāni punabbhavo.",
  "tha-ap560:16.1": "Satasahassito kappe,",
  "tha-ap560:16.2": "yaṃ bhisaṃ adadiṃ tadā;",
  "tha-ap560:16.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap560:16.4": "bhisadānassidaṃ phalaṃ.",
  "tha-ap560:17.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap560:17.2": "…pe…",
  "tha-ap560:17.3": "viharāmi anāsavo.",
  "tha-ap560:18.1": "Svāgataṃ vata me āsi,",
  "tha-ap560:18.2": "…pe…",
  "tha-ap560:18.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap560:19.1": "Paṭisambhidā catasso,",
  "tha-ap560:19.2": "…pe…",
  "tha-ap560:19.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap560:20.1": "Itthaṃ sudaṃ āyasmā bhaddajitthero imā gāthāyo abhāsitthāti.",
  "tha-ap560:21.1": "Bhaddajittherassāpadānaṃ aṭṭhamaṃ."
}