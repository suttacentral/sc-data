{
  "tha-ap423:0.1": "Therāpadāna",
  "tha-ap423:0.2": "Sakiṁsammajjakavagga",
  "tha-ap423:0.3": "1. Sakiṁsammajjakattheraapadāna",
  "tha-ap423:1.1": "“Vipassino bhagavato,",
  "tha-ap423:1.2": "pāṭaliṁ bodhimuttamaṁ;",
  "tha-ap423:1.3": "Disvāva taṁ pādapaggaṁ,",
  "tha-ap423:1.4": "tattha cittaṁ pasādayiṁ.",
  "tha-ap423:2.1": "Sammajjaniṁ gahetvāna,",
  "tha-ap423:2.2": "bodhiṁ sammajji tāvade;",
  "tha-ap423:2.3": "Sammajjitvāna taṁ bodhiṁ,",
  "tha-ap423:2.4": "avandiṁ pāṭaliṁ ahaṁ.",
  "tha-ap423:3.1": "Tattha cittaṁ pasādetvā,",
  "tha-ap423:3.2": "sire katvāna añjaliṁ;",
  "tha-ap423:3.3": "Namassamāno taṁ bodhiṁ,",
  "tha-ap423:3.4": "gañchiṁ paṭikuṭiṁ ahaṁ.",
  "tha-ap423:4.1": "Tādimaggena gacchāmi,",
  "tha-ap423:4.2": "saranto bodhimuttamaṁ;",
  "tha-ap423:4.3": "Ajagaro maṁ pīḷesi,",
  "tha-ap423:4.4": "ghorarūpo mahabbalo.",
  "tha-ap423:5.1": "Āsanne me kataṁ kammaṁ,",
  "tha-ap423:5.2": "phalena tosayī mamaṁ;",
  "tha-ap423:5.3": "Kaḷevaraṁ me gilati,",
  "tha-ap423:5.4": "devaloke ramāmahaṁ.",
  "tha-ap423:6.1": "Anāvilaṁ mama cittaṁ,",
  "tha-ap423:6.2": "visuddhaṁ paṇḍaraṁ sadā;",
  "tha-ap423:6.3": "Sokasallaṁ na jānāmi,",
  "tha-ap423:6.4": "cittasantāpanaṁ mama.",
  "tha-ap423:7.1": "Kuṭṭhaṁ gaṇḍo kilāso ca,",
  "tha-ap423:7.2": "apamāro vitacchikā;",
  "tha-ap423:7.3": "Daddu kaṇḍu ca me natthi,",
  "tha-ap423:7.4": "phalaṁ sammajjanāyidaṁ.",
  "tha-ap423:8.1": "Soko ca paridevo ca,",
  "tha-ap423:8.2": "hadaye me na vijjati;",
  "tha-ap423:8.3": "Abhantaṁ ujukaṁ cittaṁ,",
  "tha-ap423:8.4": "phalaṁ sammajjanāyidaṁ.",
  "tha-ap423:9.1": "Samādhīsu na majjāmi,",
  "tha-ap423:9.2": "visadaṁ hoti mānasaṁ;",
  "tha-ap423:9.3": "Yaṁ yaṁ samādhimicchāmi,",
  "tha-ap423:9.4": "so so sampajjate mamaṁ.",
  "tha-ap423:10.1": "Rajanīye na rajjāmi,",
  "tha-ap423:10.2": "atho dussaniyesu ca;",
  "tha-ap423:10.3": "Mohanīye na muyhāmi,",
  "tha-ap423:10.4": "phalaṁ sammajjanāyidaṁ.",
  "tha-ap423:11.1": "Ekanavutito kappe,",
  "tha-ap423:11.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap423:11.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap423:11.4": "phalaṁ sammajjanāyidaṁ.",
  "tha-ap423:12.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap423:12.2": "bhavā sabbe samūhatā;",
  "tha-ap423:12.3": "Nāgova bandhanaṁ chetvā,",
  "tha-ap423:12.4": "viharāmi anāsavo.",
  "tha-ap423:13.1": "Svāgataṁ vata me āsi,",
  "tha-ap423:13.2": "mama buddhassa santike;",
  "tha-ap423:13.3": "Tisso vijjā anuppattā,",
  "tha-ap423:13.4": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap423:14.1": "Paṭisambhidā catasso,",
  "tha-ap423:14.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap423:14.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap423:14.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap423:15.1": "Itthaṁ sudaṁ āyasmā sakiṁsammajjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap423:16.1": "Sakiṁsammajjakattherassāpadānaṁ paṭhamaṁ."
}