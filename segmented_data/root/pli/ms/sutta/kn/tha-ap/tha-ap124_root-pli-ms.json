{
  "tha-ap124:0.1": "Therāpadāna",
  "tha-ap124:0.2": "Sereyyavagga",
  "tha-ap124:0.3": "2. Pupphathūpiyattheraapadāna",
  "tha-ap124:1.1": "“Himavantassāvidūre,",
  "tha-ap124:1.2": "kukkuro nāma pabbato;",
  "tha-ap124:1.3": "Vemajjhe tassa vasati,",
  "tha-ap124:1.4": "brāhmaṇo mantapāragū.",
  "tha-ap124:2.1": "Pañca sissasahassāni,",
  "tha-ap124:2.2": "parivārenti maṁ sadā;",
  "tha-ap124:2.3": "Pubbuṭṭhāyī ca te āsuṁ,",
  "tha-ap124:2.4": "mantesu ca visāradā.",
  "tha-ap124:3.1": "Buddho loke samuppanno,",
  "tha-ap124:3.2": "taṁ vijānātha no bhavaṁ;",
  "tha-ap124:3.3": "Asītibyañjanānassa,",
  "tha-ap124:3.4": "bāttiṁsavaralakkhaṇā.",
  "tha-ap124:4.1": "Byāmappabho jinavaro,",
  "tha-ap124:4.2": "ādiccova virocati;",
  "tha-ap124:4.3": "Sissānaṁ vacanaṁ sutvā,",
  "tha-ap124:4.4": "brāhmaṇo mantapāragū.",
  "tha-ap124:5.1": "Assamā abhinikkhamma,",
  "tha-ap124:5.2": "disaṁ pucchati sissake;",
  "tha-ap124:5.3": "Yamhi dese mahāvīro,",
  "tha-ap124:5.4": "vasati lokanāyako.",
  "tha-ap124:6.1": "Tāhaṁ disaṁ namassissaṁ,",
  "tha-ap124:6.2": "jinaṁ appaṭipuggalaṁ;",
  "tha-ap124:6.3": "Udaggacitto sumano,",
  "tha-ap124:6.4": "pūjesiṁ taṁ tathāgataṁ.",
  "tha-ap124:7.1": "Etha sissā gamissāma,",
  "tha-ap124:7.2": "dakkhissāma tathāgataṁ;",
  "tha-ap124:7.3": "Vanditvā satthuno pāde,",
  "tha-ap124:7.4": "sossāma jinasāsanaṁ.",
  "tha-ap124:8.1": "Ekāhaṁ abhinikkhamma,",
  "tha-ap124:8.2": "byādhiṁ paṭilabhiṁ ahaṁ;",
  "tha-ap124:8.3": "Byādhinā pīḷito santo,",
  "tha-ap124:8.4": "sālaṁ vāsayituṁ gamiṁ.",
  "tha-ap124:9.1": "Sabbe sisse samānetvā,",
  "tha-ap124:9.2": "apucchiṁ te tathāgataṁ;",
  "tha-ap124:9.3": "Kīdisaṁ lokanāthassa,",
  "tha-ap124:9.4": "guṇaṁ paramabuddhino.",
  "tha-ap124:10.1": "Te me puṭṭhā viyākaṁsu,",
  "tha-ap124:10.2": "Yathā dassāvino tathā;",
  "tha-ap124:10.3": "Sakkaccaṁ buddhaseṭṭhaṁ taṁ,",
  "tha-ap124:10.4": "Desesuṁ mama sammukhā.",
  "tha-ap124:11.1": "Tesāhaṁ vacanaṁ sutvā,",
  "tha-ap124:11.2": "sakaṁ cittaṁ pasādayiṁ;",
  "tha-ap124:11.3": "Pupphehi thūpaṁ katvāna,",
  "tha-ap124:11.4": "tattha kālaṅkato ahaṁ.",
  "tha-ap124:12.1": "Te me sarīraṁ jhāpetvā,",
  "tha-ap124:12.2": "agamuṁ buddhasantikaṁ;",
  "tha-ap124:12.3": "Añjaliṁ paggahetvāna,",
  "tha-ap124:12.4": "satthāramabhivādayuṁ.",
  "tha-ap124:13.1": "Pupphehi thūpaṁ katvāna,",
  "tha-ap124:13.2": "sugatassa mahesino;",
  "tha-ap124:13.3": "Kappānaṁ satasahassaṁ,",
  "tha-ap124:13.4": "duggatiṁ nupapajjahaṁ.",
  "tha-ap124:14.1": "Cattālīsasahassamhi,",
  "tha-ap124:14.2": "kappe soḷasa khattiyā;",
  "tha-ap124:14.3": "Nāmenaggisamā nāma,",
  "tha-ap124:14.4": "cakkavattī mahabbalā.",
  "tha-ap124:15.1": "Vīsakappasahassamhi,",
  "tha-ap124:15.2": "rājāno cakkavattino;",
  "tha-ap124:15.3": "Ghatāsanasanāmāva,",
  "tha-ap124:15.4": "aṭṭhattiṁsa mahīpatī.",
  "tha-ap124:16.1": "Paṭisambhidā catasso,",
  "tha-ap124:16.2": "…pe…",
  "tha-ap124:16.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap124:17.1": "Itthaṁ sudaṁ āyasmā pupphathūpiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap124:18.1": "Pupphathūpiyattherassāpadānaṁ dutiyaṁ."
}