{
  "tha-ap339:0.1": "Therāpadāna",
  "tha-ap339:0.2": "Gandhodakavagga",
  "tha-ap339:0.3": "7. Tiṇakuṭidāyakattheraapadāna",
  "tha-ap339:1.1": "“Nagare bandhumatiyā,",
  "tha-ap339:1.2": "ahosiṃ parakammiko;",
  "tha-ap339:1.3": "Parakammāyane yutto,",
  "tha-ap339:1.4": "parabhattaṃ apassito.",
  "tha-ap339:2.1": "Rahogato nisīditvā,",
  "tha-ap339:2.2": "evaṃ cintesahaṃ tadā;",
  "tha-ap339:2.3": "Buddho loke samuppanno,",
  "tha-ap339:2.4": "adhikāro ca natthi me.",
  "tha-ap339:3.1": "Kālo me gatiṃ sodhetuṃ,",
  "tha-ap339:3.2": "khaṇo me paṭipādito;",
  "tha-ap339:3.3": "Dukkho nirayasamphasso,",
  "tha-ap339:3.4": "apuññānañhi pāṇinaṃ.",
  "tha-ap339:4.1": "Evāhaṃ cintayitvāna,",
  "tha-ap339:4.2": "kammasāmiṃ upāgamiṃ;",
  "tha-ap339:4.3": "Ekāhaṃ kammaṃ yācitvā,",
  "tha-ap339:4.4": "vipinaṃ pāvisiṃ ahaṃ.",
  "tha-ap339:5.1": "Tiṇakaṭṭhañca valliñca,",
  "tha-ap339:5.2": "āharitvānahaṃ tadā;",
  "tha-ap339:5.3": "Tidaṇḍake ṭhapetvāna,",
  "tha-ap339:5.4": "akaṃ tiṇakuṭiṃ ahaṃ.",
  "tha-ap339:6.1": "Saṃghassatthāya kuṭikaṃ,",
  "tha-ap339:6.2": "niyyādetvāna taṃ ahaṃ;",
  "tha-ap339:6.3": "Tadaheyeva āgantvā,",
  "tha-ap339:6.4": "kammasāmiṃ upāgamiṃ.",
  "tha-ap339:7.1": "Tena kammena sukatena,",
  "tha-ap339:7.2": "tāvatiṃsamagacchahaṃ;",
  "tha-ap339:7.3": "Tattha me sukataṃ byamhaṃ,",
  "tha-ap339:7.4": "kuṭikāya sunimmitaṃ.",
  "tha-ap339:8.1": "Sahassakaṇḍaṃ satabheṇḍu,",
  "tha-ap339:8.2": "dhajālu haritāmayaṃ;",
  "tha-ap339:8.3": "Satasahassaniyyūhā,",
  "tha-ap339:8.4": "byamhe pātubhaviṃsu me.",
  "tha-ap339:9.1": "Yaṃ yaṃ yonupapajjāmi,",
  "tha-ap339:9.2": "devattaṃ atha mānusaṃ;",
  "tha-ap339:9.3": "Mama saṅkappamaññāya,",
  "tha-ap339:9.4": "pāsādo upatiṭṭhati.",
  "tha-ap339:10.1": "Bhayaṃ vā chambhitattaṃ vā,",
  "tha-ap339:10.2": "lomahaṃso na vijjati;",
  "tha-ap339:10.3": "Tāsaṃ mama na jānāmi,",
  "tha-ap339:10.4": "tiṇakuṭikāyidaṃ phalaṃ.",
  "tha-ap339:11.1": "Sīhabyagghā ca dīpī ca,",
  "tha-ap339:11.2": "acchakokataracchakā;",
  "tha-ap339:11.3": "Sabbe maṃ parivajjenti,",
  "tha-ap339:11.4": "tiṇakuṭikāyidaṃ phalaṃ.",
  "tha-ap339:12.1": "Sarīsapā ca bhūtā ca,",
  "tha-ap339:12.2": "ahī kumbhaṇḍarakkhasā;",
  "tha-ap339:12.3": "Tepi maṃ parivajjenti,",
  "tha-ap339:12.4": "tiṇakuṭikāyidaṃ phalaṃ.",
  "tha-ap339:13.1": "Na pāpasupinassāpi,",
  "tha-ap339:13.2": "sarāmi dassanaṃ mama;",
  "tha-ap339:13.3": "Upaṭṭhitā sati mayhaṃ,",
  "tha-ap339:13.4": "tiṇakuṭikāyidaṃ phalaṃ.",
  "tha-ap339:14.1": "Tāyeva tiṇakuṭikāya,",
  "tha-ap339:14.2": "anubhotvāna sampadā;",
  "tha-ap339:14.3": "Gotamassa bhagavato,",
  "tha-ap339:14.4": "dhammaṃ sacchikariṃ ahaṃ.",
  "tha-ap339:15.1": "Ekanavutito kappe,",
  "tha-ap339:15.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap339:15.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap339:15.4": "tiṇakuṭikāyidaṃ phalaṃ.",
  "tha-ap339:16.1": "Paṭisambhidā catasso,",
  "tha-ap339:16.2": "…pe…",
  "tha-ap339:16.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap339:17.1": "Itthaṃ sudaṃ āyasmā tiṇakuṭidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap339:18.1": "Tiṇakuṭidāyakattherassāpadānaṃ sattamaṃ."
}