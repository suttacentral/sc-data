{
  "tha-ap146:0.1": "Therāpadāna",
  "tha-ap146:0.2": "Chattavagga",
  "tha-ap146:0.3": "4. Saparivāriyattheraapadāna",
  "tha-ap146:1.1": "“Padumuttaro nāma jino,",
  "tha-ap146:1.2": "lokajeṭṭho narāsabho;",
  "tha-ap146:1.3": "Jalitvā aggikkhandhova,",
  "tha-ap146:1.4": "sambuddho parinibbuto.",
  "tha-ap146:2.1": "Nibbute ca mahāvīre,",
  "tha-ap146:2.2": "thūpo vitthāriko ahu;",
  "tha-ap146:2.3": "Dūratova upaṭṭhenti,",
  "tha-ap146:2.4": "dhātugehavaruttame.",
  "tha-ap146:3.1": "Pasannacitto sumano,",
  "tha-ap146:3.2": "akaṁ candanavedikaṁ;",
  "tha-ap146:3.3": "Dissati thūpakhandho ca,",
  "tha-ap146:3.4": "thūpānucchaviko tadā.",
  "tha-ap146:4.1": "Bhave nibbattamānamhi,",
  "tha-ap146:4.2": "devatte atha mānuse;",
  "tha-ap146:4.3": "Omattaṁ me na passāmi,",
  "tha-ap146:4.4": "pubbakammassidaṁ phalaṁ.",
  "tha-ap146:5.1": "Pañcadasakappasate,",
  "tha-ap146:5.2": "ito aṭṭha janā ahuṁ;",
  "tha-ap146:5.3": "Sabbe samattanāmā te,",
  "tha-ap146:5.4": "cakkavattī mahabbalā.",
  "tha-ap146:6.1": "Paṭisambhidā catasso,",
  "tha-ap146:6.2": "…pe…",
  "tha-ap146:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap146:7.1": "Itthaṁ sudaṁ āyasmā saparivāriyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap146:8.1": "Saparivāriyattherassāpadānaṁ catutthaṁ."
}