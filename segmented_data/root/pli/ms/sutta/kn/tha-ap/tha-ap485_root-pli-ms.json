{
  "tha-ap485:0.1": "Therāpadāna",
  "tha-ap485:0.2": "Paṁsukūlavagga",
  "tha-ap485:0.3": "3. Bhisadāyakattheraapadāna",
  "tha-ap485:1.1": "“Ogayha yaṁ pokkharaṇiṁ,",
  "tha-ap485:1.2": "nānākuñjarasevitaṁ;",
  "tha-ap485:1.3": "Uddharāmi bhisaṁ tattha,",
  "tha-ap485:1.4": "ghāsahetu ahaṁ tadā.",
  "tha-ap485:2.1": "Bhagavā tamhi samaye,",
  "tha-ap485:2.2": "padumuttarasavhayo;",
  "tha-ap485:2.3": "Rattambaradharo buddho,",
  "tha-ap485:2.4": "gacchati anilañjase.",
  "tha-ap485:3.1": "Dhunanto paṁsukūlāni,",
  "tha-ap485:3.2": "saddamassosahaṁ tadā;",
  "tha-ap485:3.3": "Uddhaṁ nijjhāyamānohaṁ,",
  "tha-ap485:3.4": "addasaṁ lokanāyakaṁ.",
  "tha-ap485:4.1": "Tattheva ṭhitako santo,",
  "tha-ap485:4.2": "āyāciṁ lokanāyakaṁ;",
  "tha-ap485:4.3": "‘Madhuṁ bhisehi savati,",
  "tha-ap485:4.4": "khīraṁ sappiṁ muḷālibhi.",
  "tha-ap485:5.1": "Paṭiggaṇhātu me buddho,",
  "tha-ap485:5.2": "anukampāya cakkhumā’;",
  "tha-ap485:5.3": "Tato kāruṇiko satthā,",
  "tha-ap485:5.4": "oruhitvā mahāyaso.",
  "tha-ap485:6.1": "Paṭiggaṇhi mamaṁ bhikkhaṁ,",
  "tha-ap485:6.2": "anukampāya cakkhumā;",
  "tha-ap485:6.3": "Paṭiggahetvā sambuddho,",
  "tha-ap485:6.4": "akā me anumodanaṁ.",
  "tha-ap485:7.1": "‘Sukhī hotu mahāpuñña,",
  "tha-ap485:7.2": "gati tuyhaṁ samijjhatu;",
  "tha-ap485:7.3": "Iminā bhisadānena,",
  "tha-ap485:7.4": "labhassu vipulaṁ sukhaṁ’.",
  "tha-ap485:8.1": "Idaṁ vatvāna sambuddho,",
  "tha-ap485:8.2": "jalajuttamanāmako;",
  "tha-ap485:8.3": "Bhikkhamādāya sambuddho,",
  "tha-ap485:8.4": "ambarenāgamā jino.",
  "tha-ap485:9.1": "Tato bhisaṁ gahetvāna,",
  "tha-ap485:9.2": "āgacchiṁ mama assamaṁ;",
  "tha-ap485:9.3": "Bhisaṁ rukkhe lagetvāna,",
  "tha-ap485:9.4": "mama dānamanussariṁ.",
  "tha-ap485:10.1": "Mahāvāto vuṭṭhahitvā,",
  "tha-ap485:10.2": "sañcālesi vanaṁ tadā;",
  "tha-ap485:10.3": "Ākāso abhinādittha,",
  "tha-ap485:10.4": "asaniyā phalantiyā.",
  "tha-ap485:11.1": "Tato me asanīpāto,",
  "tha-ap485:11.2": "matthake nipatī tadā;",
  "tha-ap485:11.3": "Sohaṁ nisinnako santo,",
  "tha-ap485:11.4": "tattha kālaṅkato ahuṁ.",
  "tha-ap485:12.1": "Puññakammena saṁyutto,",
  "tha-ap485:12.2": "tusitaṁ upapajjahaṁ;",
  "tha-ap485:12.3": "Kaḷevaraṁ me patitaṁ,",
  "tha-ap485:12.4": "devaloke ramiṁ ahaṁ.",
  "tha-ap485:13.1": "Chaḷasītisahassāni,",
  "tha-ap485:13.2": "nāriyo samalaṅkatā;",
  "tha-ap485:13.3": "Sāyaṁ pātaṁ upaṭṭhanti,",
  "tha-ap485:13.4": "bhisadānassidaṁ phalaṁ.",
  "tha-ap485:14.1": "Manussayonimāgantvā,",
  "tha-ap485:14.2": "sukhito homahaṁ sadā;",
  "tha-ap485:14.3": "Bhoge me ūnatā natthi,",
  "tha-ap485:14.4": "bhisadānassidaṁ phalaṁ.",
  "tha-ap485:15.1": "Anukampitako tena,",
  "tha-ap485:15.2": "devadevena tādinā;",
  "tha-ap485:15.3": "Sabbāsavā parikkhīṇā,",
  "tha-ap485:15.4": "natthi dāni punabbhavo.",
  "tha-ap485:16.1": "Satasahassito kappe,",
  "tha-ap485:16.2": "yaṁ bhisaṁ adadiṁ tadā;",
  "tha-ap485:16.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap485:16.4": "bhisadānassidaṁ phalaṁ.",
  "tha-ap485:17.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap485:17.2": "…pe…",
  "tha-ap485:17.3": "viharāmi anāsavo.",
  "tha-ap485:18.1": "Svāgataṁ vata me āsi,",
  "tha-ap485:18.2": "…pe…",
  "tha-ap485:18.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap485:19.1": "Paṭisambhidā catasso,",
  "tha-ap485:19.2": "…pe…",
  "tha-ap485:19.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap485:20.1": "Itthaṁ sudaṁ āyasmā bhisadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap485:21.1": "Bhisadāyakattherassāpadānaṁ tatiyaṁ."
}