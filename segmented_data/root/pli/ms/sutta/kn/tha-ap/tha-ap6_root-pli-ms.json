{
  "tha-ap6:0.1": "Therāpadāna",
  "tha-ap6:0.2": "Buddhavagga",
  "tha-ap6:0.3": "6. Anuruddhattheraapadāna",
  "tha-ap6:1.1": "“Sumedhaṃ bhagavantāhaṃ,",
  "tha-ap6:1.2": "lokajeṭṭhaṃ narāsabhaṃ;",
  "tha-ap6:1.3": "Vūpakaṭṭhaṃ viharantaṃ,",
  "tha-ap6:1.4": "addasaṃ lokanāyakaṃ.",
  "tha-ap6:2.1": "Upagantvāna sambuddhaṃ,",
  "tha-ap6:2.2": "sumedhaṃ lokanāyakaṃ;",
  "tha-ap6:2.3": "Añjaliṃ paggahetvāna,",
  "tha-ap6:2.4": "buddhaseṭṭhamayācahaṃ.",
  "tha-ap6:3.1": "Anukampa mahāvīra,",
  "tha-ap6:3.2": "lokajeṭṭha narāsabha;",
  "tha-ap6:3.3": "Padīpaṃ te padassāmi,",
  "tha-ap6:3.4": "rukkhamūlamhi jhāyato.",
  "tha-ap6:4.1": "Adhivāsesi so dhīro,",
  "tha-ap6:4.2": "sayambhū vadataṃ varo;",
  "tha-ap6:4.3": "Dumesu vinivijjhitvā,",
  "tha-ap6:4.4": "yantaṃ yojiyahaṃ tadā.",
  "tha-ap6:5.1": "Sahassavaṭṭiṃ pādāsiṃ,",
  "tha-ap6:5.2": "buddhassa lokabandhuno;",
  "tha-ap6:5.3": "Sattāhaṃ pajjalitvāna,",
  "tha-ap6:5.4": "dīpā vūpasamiṃsu me.",
  "tha-ap6:6.1": "Tena cittappasādena,",
  "tha-ap6:6.2": "cetanāpaṇidhīhi ca;",
  "tha-ap6:6.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap6:6.4": "vimānamupapajjahaṃ.",
  "tha-ap6:7.1": "Upapannassa devattaṃ,",
  "tha-ap6:7.2": "byamhaṃ āsi sunimmitaṃ;",
  "tha-ap6:7.3": "Samantato pajjalati,",
  "tha-ap6:7.4": "dīpadānassidaṃ phalaṃ.",
  "tha-ap6:8.1": "Samantā yojanasataṃ,",
  "tha-ap6:8.2": "virocesimahaṃ tadā;",
  "tha-ap6:8.3": "Sabbe deve abhibhomi,",
  "tha-ap6:8.4": "dīpadānassidaṃ phalaṃ.",
  "tha-ap6:9.1": "Tiṃsakappāni devindo,",
  "tha-ap6:9.2": "devarajjamakārayiṃ;",
  "tha-ap6:9.3": "Na maṃ kecītimaññanti,",
  "tha-ap6:9.4": "dīpadānassidaṃ phalaṃ.",
  "tha-ap6:10.1": "Aṭṭhavīsatikkhattuñca,",
  "tha-ap6:10.2": "cakkavattī ahosahaṃ;",
  "tha-ap6:10.3": "Divā rattiñca passāmi,",
  "tha-ap6:10.4": "samantā yojanaṃ tadā.",
  "tha-ap6:11.1": "Sahassalokaṃ ñāṇena,",
  "tha-ap6:11.2": "passāmi satthu sāsane;",
  "tha-ap6:11.3": "Dibbacakkhumanuppatto,",
  "tha-ap6:11.4": "dīpadānassidaṃ phalaṃ.",
  "tha-ap6:12.1": "Sumedho nāma sambuddho,",
  "tha-ap6:12.2": "tiṃsakappasahassito;",
  "tha-ap6:12.3": "Tassa dīpo mayā dinno,",
  "tha-ap6:12.4": "vippasannena cetasā.",
  "tha-ap6:13.1": "Paṭisambhidā catasso,",
  "tha-ap6:13.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap6:13.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap6:13.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap6:14.1": "Itthaṃ sudaṃ āyasmā anuruddho thero imā gāthāyo abhāsitthāti.",
  "tha-ap6:15.1": "Anuruddhattherassāpadānaṃ catutthaṃ."
}