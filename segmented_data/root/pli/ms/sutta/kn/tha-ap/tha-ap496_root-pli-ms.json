{
  "tha-ap496:0.1": "Therāpadāna",
  "tha-ap496:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap496:0.3": "4. Kiṃsukapupphiyattheraapadāna",
  "tha-ap496:1.1": "“Kiṃsukaṃ pupphitaṃ disvā,",
  "tha-ap496:1.2": "paggahetvāna añjaliṃ;",
  "tha-ap496:1.3": "Buddhaseṭṭhaṃ saritvāna,",
  "tha-ap496:1.4": "ākāse abhipūjayiṃ.",
  "tha-ap496:2.1": "Tena kammena sukatena,",
  "tha-ap496:2.2": "cetanāpaṇidhīhi ca;",
  "tha-ap496:2.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap496:2.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap496:3.1": "Ekatiṃse ito kappe,",
  "tha-ap496:3.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap496:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap496:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap496:4.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap496:4.2": "…pe…",
  "tha-ap496:4.3": "viharāmi anāsavo.",
  "tha-ap496:5.1": "Svāgataṃ vata me āsi,",
  "tha-ap496:5.2": "…pe…",
  "tha-ap496:5.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap496:6.1": "Paṭisambhidā catasso,",
  "tha-ap496:6.2": "…pe…",
  "tha-ap496:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap496:7.1": "Itthaṃ sudaṃ āyasmā kiṃsukapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap496:8.1": "Kiṃsukapupphiyattherassāpadānaṃ catutthaṃ."
}