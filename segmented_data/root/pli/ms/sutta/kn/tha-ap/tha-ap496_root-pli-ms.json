{
  "tha-ap496:0.1": "Therāpadāna",
  "tha-ap496:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap496:0.3": "4. Kiṁsukapupphiyattheraapadāna",
  "tha-ap496:1.1": "“Kiṁsukaṁ pupphitaṁ disvā,",
  "tha-ap496:1.2": "paggahetvāna añjaliṁ;",
  "tha-ap496:1.3": "Buddhaseṭṭhaṁ saritvāna,",
  "tha-ap496:1.4": "ākāse abhipūjayiṁ.",
  "tha-ap496:2.1": "Tena kammena sukatena,",
  "tha-ap496:2.2": "cetanāpaṇidhīhi ca;",
  "tha-ap496:2.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap496:2.4": "tāvatiṁsamagacchahaṁ.",
  "tha-ap496:3.1": "Ekatiṁse ito kappe,",
  "tha-ap496:3.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap496:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap496:3.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap496:4.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap496:4.2": "…pe…",
  "tha-ap496:4.3": "viharāmi anāsavo.",
  "tha-ap496:5.1": "Svāgataṁ vata me āsi,",
  "tha-ap496:5.2": "…pe…",
  "tha-ap496:5.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap496:6.1": "Paṭisambhidā catasso,",
  "tha-ap496:6.2": "…pe…",
  "tha-ap496:6.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap496:7.1": "Itthaṁ sudaṁ āyasmā kiṁsukapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap496:8.1": "Kiṁsukapupphiyattherassāpadānaṁ catutthaṁ."
}