{
  "tha-ap230:0.1": "Therāpadāna",
  "tha-ap230:0.2": "Ālambaṇadāyakavagga",
  "tha-ap230:0.3": "8. Miñjavaṭaṁsakiyattheraapadāna",
  "tha-ap230:1.1": "“Nibbute lokanāthamhi,",
  "tha-ap230:1.2": "sikhimhi vadataṁ vare;",
  "tha-ap230:1.3": "Vaṭaṁsakehi ākiṇṇaṁ,",
  "tha-ap230:1.4": "bodhipūjaṁ akāsahaṁ.",
  "tha-ap230:2.1": "Ekattiṁse ito kappe,",
  "tha-ap230:2.2": "yaṁ pūjamakariṁ tadā;",
  "tha-ap230:2.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap230:2.4": "bodhipūjāyidaṁ phalaṁ.",
  "tha-ap230:3.1": "Ito chabbīsatikappe,",
  "tha-ap230:3.2": "ahuṁ meghabbhanāmako;",
  "tha-ap230:3.3": "Sattaratanasampanno,",
  "tha-ap230:3.4": "cakkavattī mahabbalo.",
  "tha-ap230:4.1": "Paṭisambhidā catasso,",
  "tha-ap230:4.2": "…pe…",
  "tha-ap230:4.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap230:5.1": "Itthaṁ sudaṁ āyasmā miñjavaṭaṁsakiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap230:6.1": "Miñjavaṭaṁsakiyattherassāpadānaṁ aṭṭhamaṁ."
}