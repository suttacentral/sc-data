{
  "tha-ap54:0.1": "Therāpadāna",
  "tha-ap54:0.2": "Bījanivagga",
  "tha-ap54:0.3": "2 Sataraṃsittheraapadāna",
  "tha-ap54:1.1": "“Ubbiddhaṃ selamāruyha,",
  "tha-ap54:1.2": "nisīdi purisuttamo;",
  "tha-ap54:1.3": "Pabbatassāvidūramhi,",
  "tha-ap54:1.4": "brāhmaṇo mantapāragū.",
  "tha-ap54:2.1": "Upaviṭṭhaṃ mahāvīraṃ,",
  "tha-ap54:2.2": "devadevaṃ narāsabhaṃ;",
  "tha-ap54:2.3": "Añjaliṃ paggahetvāna,",
  "tha-ap54:2.4": "santhaviṃ lokanāyakaṃ.",
  "tha-ap54:3.1": "‘Esa buddho mahāvīro,",
  "tha-ap54:3.2": "varadhammappakāsako;",
  "tha-ap54:3.3": "Jalati aggikhandhova,",
  "tha-ap54:3.4": "bhikkhusaṃghapurakkhato.",
  "tha-ap54:4.1": "Mahāsamuddovakkhubbho,",
  "tha-ap54:4.2": "aṇṇavova duruttaro;",
  "tha-ap54:4.3": "Migarājāvasambhīto,",
  "tha-ap54:4.4": "dhammaṃ deseti cakkhumā’.",
  "tha-ap54:5.1": "Mama saṅkappamaññāya,",
  "tha-ap54:5.2": "padumuttaranāyako;",
  "tha-ap54:5.3": "Bhikkhusaṃghe ṭhito satthā,",
  "tha-ap54:5.4": "imā gāthā abhāsatha.",
  "tha-ap54:6.1": "‘Yenāyaṃ añjalī dinno,",
  "tha-ap54:6.2": "buddhaseṭṭho ca thomito;",
  "tha-ap54:6.3": "Tiṃsakappasahassāni,",
  "tha-ap54:6.4": "devarajjaṃ karissati.",
  "tha-ap54:7.1": "Kappasatasahassamhi,",
  "tha-ap54:7.2": "aṅgīrasasanāmako;",
  "tha-ap54:7.3": "Vivaṭṭacchado sambuddho,",
  "tha-ap54:7.4": "uppajjissati tāvade.",
  "tha-ap54:8.1": "Tassa dhammesu dāyādo,",
  "tha-ap54:8.2": "oraso dhammanimmito;",
  "tha-ap54:8.3": "Sataraṃsīti nāmena,",
  "tha-ap54:8.4": "arahā so bhavissati’.",
  "tha-ap54:9.1": "Jātiyā sattavassohaṃ,",
  "tha-ap54:9.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap54:9.3": "Sataraṃsimhi nāmena,",
  "tha-ap54:9.4": "pabhā niddhāvate mama.",
  "tha-ap54:10.1": "Maṇḍape rukkhamūle vā,",
  "tha-ap54:10.2": "jhāyī jhānarato ahaṃ;",
  "tha-ap54:10.3": "Dhāremi antimaṃ dehaṃ,",
  "tha-ap54:10.4": "sammāsambuddhasāsane.",
  "tha-ap54:11.1": "Saṭṭhikappasahassamhi,",
  "tha-ap54:11.2": "caturo rāmanāmakā;",
  "tha-ap54:11.3": "Sattaratanasampannā,",
  "tha-ap54:11.4": "cakkavattī mahabbalā.",
  "tha-ap54:12.1": "Paṭisambhidā catasso,",
  "tha-ap54:12.2": "…pe…",
  "tha-ap54:12.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap54:13.1": "Itthaṃ sudaṃ āyasmā sataraṃsi thero imā gāthāyo abhāsitthāti.",
  "tha-ap54:14.1": "Sataraṃsittherassāpadānaṃ dutiyaṃ."
}