{
  "tha-ap115:0.1": "Therāpadāna",
  "tha-ap115:0.2": "Mahāparivāravagga",
  "tha-ap115:0.3": "3 Saraṇagamaniyattheraapadāna",
  "tha-ap115:1.1": "“Ubhinnaṃ devarājūnaṃ,",
  "tha-ap115:1.2": "saṅgāmo samupaṭṭhito;",
  "tha-ap115:1.3": "Ahosi samupabyūḷho,",
  "tha-ap115:1.4": "mahāghoso avattatha.",
  "tha-ap115:2.1": "Padumuttaro lokavidū,",
  "tha-ap115:2.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap115:2.3": "Antalikkhe ṭhito satthā,",
  "tha-ap115:2.4": "saṃvejesi mahājanaṃ.",
  "tha-ap115:3.1": "Sabbe devā attamanā,",
  "tha-ap115:3.2": "nikkhittakavacāvudhā;",
  "tha-ap115:3.3": "Sambuddhaṃ abhivādetvā,",
  "tha-ap115:3.4": "ekaggāsiṃsu tāvade.",
  "tha-ap115:4.1": "Mayhaṃ saṅkappamaññāya,",
  "tha-ap115:4.2": "vācāsabhimudīrayi;",
  "tha-ap115:4.3": "Anukampako lokavidū,",
  "tha-ap115:4.4": "nibbāpesi mahājanaṃ.",
  "tha-ap115:5.1": "Paduṭṭhacitto manujo,",
  "tha-ap115:5.2": "ekapāṇaṃ viheṭhayaṃ;",
  "tha-ap115:5.3": "Tena cittappadosena,",
  "tha-ap115:5.4": "apāyaṃ upapajjati.",
  "tha-ap115:6.1": "Saṅgāmasīse nāgova,",
  "tha-ap115:6.2": "bahū pāṇe viheṭhayaṃ;",
  "tha-ap115:6.3": "Nibbāpetha sakaṃ cittaṃ,",
  "tha-ap115:6.4": "mā haññittho punappunaṃ.",
  "tha-ap115:7.1": "Dvinnampi yakkharājūnaṃ,",
  "tha-ap115:7.2": "senā sā vimhitā ahu;",
  "tha-ap115:7.3": "Saraṇañca upāgacchuṃ,",
  "tha-ap115:7.4": "lokajeṭṭhaṃ sutādinaṃ.",
  "tha-ap115:8.1": "Saññāpetvāna janataṃ,",
  "tha-ap115:8.2": "padamuddhari cakkhumā;",
  "tha-ap115:8.3": "Pekkhamānova devehi,",
  "tha-ap115:8.4": "pakkāmi uttarāmukho.",
  "tha-ap115:9.1": "Paṭhamaṃ saraṇaṃ gacchiṃ,",
  "tha-ap115:9.2": "dvipadindassa tādino;",
  "tha-ap115:9.3": "Kappānaṃ satasahassaṃ,",
  "tha-ap115:9.4": "duggatiṃ nupapajjahaṃ.",
  "tha-ap115:10.1": "Mahādundubhināmā ca,",
  "tha-ap115:10.2": "soḷasāsuṃ rathesabhā;",
  "tha-ap115:10.3": "Tiṃsakappasahassamhi,",
  "tha-ap115:10.4": "rājāno cakkavattino.",
  "tha-ap115:11.1": "Paṭisambhidā catasso,",
  "tha-ap115:11.2": "…pe…",
  "tha-ap115:11.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap115:12.1": "Itthaṃ sudaṃ āyasmā saraṇagamaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap115:13.1": "Saraṇagamaniyattherassāpadānaṃ tatiyaṃ."
}