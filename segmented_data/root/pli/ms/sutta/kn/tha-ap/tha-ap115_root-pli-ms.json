{
  "tha-ap115:0.1": "Therāpadāna",
  "tha-ap115:0.2": "Mahāparivāravagga",
  "tha-ap115:0.3": "3 Saraṇagamaniyattheraapadāna",
  "tha-ap115:1.1": "“Ubhinnaṁ devarājūnaṁ,",
  "tha-ap115:1.2": "saṅgāmo samupaṭṭhito;",
  "tha-ap115:1.3": "Ahosi samupabyūḷho,",
  "tha-ap115:1.4": "mahāghoso avattatha.",
  "tha-ap115:2.1": "Padumuttaro lokavidū,",
  "tha-ap115:2.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap115:2.3": "Antalikkhe ṭhito satthā,",
  "tha-ap115:2.4": "saṁvejesi mahājanaṁ.",
  "tha-ap115:3.1": "Sabbe devā attamanā,",
  "tha-ap115:3.2": "nikkhittakavacāvudhā;",
  "tha-ap115:3.3": "Sambuddhaṁ abhivādetvā,",
  "tha-ap115:3.4": "ekaggāsiṁsu tāvade.",
  "tha-ap115:4.1": "Mayhaṁ saṅkappamaññāya,",
  "tha-ap115:4.2": "vācāsabhimudīrayi;",
  "tha-ap115:4.3": "Anukampako lokavidū,",
  "tha-ap115:4.4": "nibbāpesi mahājanaṁ.",
  "tha-ap115:5.1": "Paduṭṭhacitto manujo,",
  "tha-ap115:5.2": "ekapāṇaṁ viheṭhayaṁ;",
  "tha-ap115:5.3": "Tena cittappadosena,",
  "tha-ap115:5.4": "apāyaṁ upapajjati.",
  "tha-ap115:6.1": "Saṅgāmasīse nāgova,",
  "tha-ap115:6.2": "bahū pāṇe viheṭhayaṁ;",
  "tha-ap115:6.3": "Nibbāpetha sakaṁ cittaṁ,",
  "tha-ap115:6.4": "mā haññittho punappunaṁ.",
  "tha-ap115:7.1": "Dvinnampi yakkharājūnaṁ,",
  "tha-ap115:7.2": "senā sā vimhitā ahu;",
  "tha-ap115:7.3": "Saraṇañca upāgacchuṁ,",
  "tha-ap115:7.4": "lokajeṭṭhaṁ sutādinaṁ.",
  "tha-ap115:8.1": "Saññāpetvāna janataṁ,",
  "tha-ap115:8.2": "padamuddhari cakkhumā;",
  "tha-ap115:8.3": "Pekkhamānova devehi,",
  "tha-ap115:8.4": "pakkāmi uttarāmukho.",
  "tha-ap115:9.1": "Paṭhamaṁ saraṇaṁ gacchiṁ,",
  "tha-ap115:9.2": "dvipadindassa tādino;",
  "tha-ap115:9.3": "Kappānaṁ satasahassaṁ,",
  "tha-ap115:9.4": "duggatiṁ nupapajjahaṁ.",
  "tha-ap115:10.1": "Mahādundubhināmā ca,",
  "tha-ap115:10.2": "soḷasāsuṁ rathesabhā;",
  "tha-ap115:10.3": "Tiṁsakappasahassamhi,",
  "tha-ap115:10.4": "rājāno cakkavattino.",
  "tha-ap115:11.1": "Paṭisambhidā catasso,",
  "tha-ap115:11.2": "…pe…",
  "tha-ap115:11.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap115:12.1": "Itthaṁ sudaṁ āyasmā saraṇagamaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap115:13.1": "Saraṇagamaniyattherassāpadānaṁ tatiyaṁ."
}