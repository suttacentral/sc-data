{
  "tha-ap69:0.1": "Therāpadāna",
  "tha-ap69:0.2": "Sakacintaniyavagga",
  "tha-ap69:0.3": "7. Vatthadāyakattheraapadāna",
  "tha-ap69:1.1": "“Pakkhijāto tadā āsiṁ,",
  "tha-ap69:1.2": "supaṇṇo garuḷādhipo;",
  "tha-ap69:1.3": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap69:1.4": "gacchantaṁ gandhamādanaṁ.",
  "tha-ap69:2.1": "Jahitvā garuḷavaṇṇaṁ,",
  "tha-ap69:2.2": "māṇavakaṁ adhārayiṁ;",
  "tha-ap69:2.3": "Ekaṁ vatthaṁ mayā dinnaṁ,",
  "tha-ap69:2.4": "dvipadindassa tādino.",
  "tha-ap69:3.1": "Tañca dussaṁ paṭiggayha,",
  "tha-ap69:3.2": "buddho lokagganāyako;",
  "tha-ap69:3.3": "Antalikkhe ṭhito satthā,",
  "tha-ap69:3.4": "imā gāthā abhāsatha.",
  "tha-ap69:4.1": "‘Iminā vatthadānena,",
  "tha-ap69:4.2": "cittassa paṇidhīhi ca;",
  "tha-ap69:4.3": "Pahāya garuḷaṁ yoniṁ,",
  "tha-ap69:4.4": "devaloke ramissati’.",
  "tha-ap69:5.1": "Atthadassī tu bhagavā,",
  "tha-ap69:5.2": "lokajeṭṭho narāsabho;",
  "tha-ap69:5.3": "Vatthadānaṁ pasaṁsitvā,",
  "tha-ap69:5.4": "pakkāmi uttarāmukho.",
  "tha-ap69:6.1": "Bhave nibbattamānamhi,",
  "tha-ap69:6.2": "honti me vatthasampadā;",
  "tha-ap69:6.3": "Ākāse chadanaṁ hoti,",
  "tha-ap69:6.4": "vatthadānassidaṁ phalaṁ.",
  "tha-ap69:7.1": "Aruṇavā satta janā,",
  "tha-ap69:7.2": "cakkavattī mahabbalā;",
  "tha-ap69:7.3": "Chattiṁsatimhi āsiṁsu,",
  "tha-ap69:7.4": "kappamhi manujādhipā.",
  "tha-ap69:8.1": "Paṭisambhidā catasso,",
  "tha-ap69:8.2": "…pe…",
  "tha-ap69:8.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap69:9.1": "Itthaṁ sudaṁ āyasmā vatthadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap69:10.1": "Vatthadāyakattherassāpadānaṁ sattamaṁ."
}