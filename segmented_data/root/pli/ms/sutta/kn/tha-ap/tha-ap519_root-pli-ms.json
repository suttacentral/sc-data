{
  "tha-ap519:0.1": "Therāpadāna",
  "tha-ap519:0.2": "Phaladāyakavagga",
  "tha-ap519:0.3": "7. Kuṭajapupphiyattheraapadāna",
  "tha-ap519:1.1": "“Himavantassāvidūre,",
  "tha-ap519:1.2": "vasalo nāma pabbato;",
  "tha-ap519:1.3": "Buddho sudassano nāma,",
  "tha-ap519:1.4": "vasate pabbatantare.",
  "tha-ap519:2.1": "Pupphaṁ hemavantaṁ gayha,",
  "tha-ap519:2.2": "vehāsaṁ agamāsahaṁ;",
  "tha-ap519:2.3": "Tatthaddasāsiṁ sambuddhaṁ,",
  "tha-ap519:2.4": "oghatiṇṇamanāsavaṁ.",
  "tha-ap519:3.1": "Pupphaṁ kuṭajamādāya,",
  "tha-ap519:3.2": "sire katvāna añjaliṁ;",
  "tha-ap519:3.3": "Buddhassa abhiropesiṁ,",
  "tha-ap519:3.4": "sayambhussa mahesino.",
  "tha-ap519:4.1": "Ekatiṁse ito kappe,",
  "tha-ap519:4.2": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap519:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap519:4.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap519:5.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap519:5.2": "…pe…",
  "tha-ap519:5.3": "viharāmi anāsavo.",
  "tha-ap519:6.1": "Svāgataṁ vata me āsi,",
  "tha-ap519:6.2": "…pe…",
  "tha-ap519:6.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap519:7.1": "Paṭisambhidā catasso,",
  "tha-ap519:7.2": "…pe…",
  "tha-ap519:7.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap519:8.1": "Itthaṁ sudaṁ āyasmā kuṭajapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap519:9.1": "Kuṭajapupphiyattherassāpadānaṁ sattamaṁ."
}