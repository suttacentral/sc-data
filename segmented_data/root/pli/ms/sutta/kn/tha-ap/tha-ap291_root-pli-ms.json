{
  "tha-ap291:0.1": "Therāpadāna",
  "tha-ap291:0.2": "Paṇṇadāyakavagga",
  "tha-ap291:0.3": "9 Buddhupaṭṭhāyikattheraapadāna",
  "tha-ap291:1.1": "“Veṭambhinīti me nāmaṃ,",
  "tha-ap291:1.2": "pitusantaṃ mamaṃ tadā;",
  "tha-ap291:1.3": "Mama hatthaṃ gahetvāna,",
  "tha-ap291:1.4": "upānayi mahāmuniṃ.",
  "tha-ap291:2.1": "Imemaṃ uddisissanti,",
  "tha-ap291:2.2": "buddhā lokagganāyakā;",
  "tha-ap291:2.3": "Tehaṃ upaṭṭhiṃ sakkaccaṃ,",
  "tha-ap291:2.4": "pasanno sehi pāṇibhi.",
  "tha-ap291:3.1": "Ekattiṃse ito kappe,",
  "tha-ap291:3.2": "buddhe upaṭṭhahiṃ tadā;",
  "tha-ap291:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap291:3.4": "upaṭṭhānassidaṃ phalaṃ.",
  "tha-ap291:4.1": "Tevīsamhi ito kappe,",
  "tha-ap291:4.2": "caturo āsu khattiyā;",
  "tha-ap291:4.3": "Samaṇupaṭṭhākā nāma,",
  "tha-ap291:4.4": "cakkavattī mahabbalā.",
  "tha-ap291:5.1": "Paṭisambhidā catasso,",
  "tha-ap291:5.2": "…pe…",
  "tha-ap291:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap291:6.1": "Itthaṃ sudaṃ āyasmā buddhupaṭṭhāyiko thero imā gāthāyo abhāsitthāti.",
  "tha-ap291:7.1": "Buddhupaṭṭhāyikattherassāpadānaṃ navamaṃ."
}