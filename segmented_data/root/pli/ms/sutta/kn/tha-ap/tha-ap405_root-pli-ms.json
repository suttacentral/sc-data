{
  "tha-ap405:0.1": "Therāpadāna",
  "tha-ap405:0.2": "Metteyyavagga",
  "tha-ap405:0.3": "3. Mettaguttheraapadāna",
  "tha-ap405:1.1": "“Himavantassāvidūre,",
  "tha-ap405:1.2": "asoko nāma pabbato;",
  "tha-ap405:1.3": "Tatthāsi assamo mayhaṃ,",
  "tha-ap405:1.4": "vissakammena māpito.",
  "tha-ap405:2.1": "Sumedho nāma sambuddho,",
  "tha-ap405:2.2": "aggo kāruṇiko muni;",
  "tha-ap405:2.3": "Nivāsayitvā pubbaṇhe,",
  "tha-ap405:2.4": "piṇḍāya me upāgami.",
  "tha-ap405:3.1": "Upāgataṃ mahāvīraṃ,",
  "tha-ap405:3.2": "sumedhaṃ lokanāyakaṃ;",
  "tha-ap405:3.3": "Paggayha sugatapattaṃ,",
  "tha-ap405:3.4": "sappitelaṃ apūrayiṃ.",
  "tha-ap405:4.1": "Datvānahaṃ buddhaseṭṭhe,",
  "tha-ap405:4.2": "sumedhe lokanāyake;",
  "tha-ap405:4.3": "Añjaliṃ paggahetvāna,",
  "tha-ap405:4.4": "bhiyyo hāsaṃ janesahaṃ.",
  "tha-ap405:5.1": "Iminā sappidānena,",
  "tha-ap405:5.2": "cetanāpaṇidhīhi ca;",
  "tha-ap405:5.3": "Devabhūto manusso vā,",
  "tha-ap405:5.4": "labhāmi vipulaṃ sukhaṃ.",
  "tha-ap405:6.1": "Vinipātaṃ vivajjetvā,",
  "tha-ap405:6.2": "saṃsarāmi bhavābhave;",
  "tha-ap405:6.3": "Tattha cittaṃ paṇidhitvā,",
  "tha-ap405:6.4": "labhāmi acalaṃ padaṃ.",
  "tha-ap405:7.1": "‘Lābhā tuyhaṃ suladdhaṃ te,",
  "tha-ap405:7.2": "yaṃ maṃ addakkhi brāhmaṇa;",
  "tha-ap405:7.3": "Mama dassanamāgamma,",
  "tha-ap405:7.4": "arahattaṃ bhavissati.",
  "tha-ap405:8.1": "Vissattho hohi mā bhāyi,",
  "tha-ap405:8.2": "adhigantvā mahāyasaṃ;",
  "tha-ap405:8.3": "Mamañhi sappiṃ datvāna,",
  "tha-ap405:8.4": "parimokkhasi jātiyā’.",
  "tha-ap405:9.1": "Iminā sappidānena,",
  "tha-ap405:9.2": "cetanāpaṇidhīhi ca;",
  "tha-ap405:9.3": "Devabhūto manusso vā,",
  "tha-ap405:9.4": "labhase vipulaṃ sukhaṃ.",
  "tha-ap405:10.1": "Iminā sappidānena,",
  "tha-ap405:10.2": "mettacittavatāya ca;",
  "tha-ap405:10.3": "Aṭṭhārase kappasate,",
  "tha-ap405:10.4": "devaloke ramissasi.",
  "tha-ap405:11.1": "Aṭṭhatiṃsatikkhattuñca,",
  "tha-ap405:11.2": "devarājā bhavissasi;",
  "tha-ap405:11.3": "Padesarajjaṃ vipulaṃ,",
  "tha-ap405:11.4": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap405:12.1": "Ekapaññāsakkhattuñca,",
  "tha-ap405:12.2": "cakkavattī bhavissasi;",
  "tha-ap405:12.3": "Cāturanto vijitāvī,",
  "tha-ap405:12.4": "jambumaṇḍassa issaro.",
  "tha-ap405:13.1": "Mahāsamuddovakkhobho,",
  "tha-ap405:13.2": "duddharo pathavī yathā;",
  "tha-ap405:13.3": "Evamevaṃ ca te bhogā,",
  "tha-ap405:13.4": "appameyyā bhavissare.",
  "tha-ap405:14.1": "Saṭṭhikoṭī hiraññassa,",
  "tha-ap405:14.2": "cajitvā pabbajiṃ ahaṃ;",
  "tha-ap405:14.3": "Kiṃ kusalaṃ gavesanto,",
  "tha-ap405:14.4": "bāvariṃ upasaṅkamiṃ.",
  "tha-ap405:15.1": "Tattha mante adhīyāmi,",
  "tha-ap405:15.2": "chaḷaṅgaṃ nāma lakkhaṇaṃ;",
  "tha-ap405:15.3": "Tamandhakāraṃ vidhamaṃ,",
  "tha-ap405:15.4": "uppajji tvaṃ mahāmuni.",
  "tha-ap405:16.1": "Tava dassanakāmohaṃ,",
  "tha-ap405:16.2": "āgatomhi mahāmuni;",
  "tha-ap405:16.3": "Tava dhammaṃ suṇitvāna,",
  "tha-ap405:16.4": "pattomhi acalaṃ padaṃ.",
  "tha-ap405:17.1": "Tiṃsakappasahassamhi,",
  "tha-ap405:17.2": "sappiṃ buddhassadāsahaṃ;",
  "tha-ap405:17.3": "Etthantare nābhijāne,",
  "tha-ap405:17.4": "sappiṃ viññāpitaṃ mayā.",
  "tha-ap405:18.1": "Mama saṅkappamaññāya,",
  "tha-ap405:18.2": "uppajjati yadicchakaṃ;",
  "tha-ap405:18.3": "Cittamaññāya nibbattaṃ,",
  "tha-ap405:18.4": "sabbe santappayāmahaṃ.",
  "tha-ap405:19.1": "Aho buddhā aho dhammā,",
  "tha-ap405:19.2": "aho no satthu sampadā;",
  "tha-ap405:19.3": "Thokañhi sappiṃ datvāna,",
  "tha-ap405:19.4": "appameyyaṃ labhāmahaṃ.",
  "tha-ap405:20.1": "Mahāsamudde udakaṃ,",
  "tha-ap405:20.2": "yāvatā nerupassato;",
  "tha-ap405:20.3": "Mama sappiṃ upādāya,",
  "tha-ap405:20.4": "kalabhāgaṃ na hessati.",
  "tha-ap405:21.1": "Yāvatā cakkavāḷassa,",
  "tha-ap405:21.2": "kariyantassa rāsito;",
  "tha-ap405:21.3": "Mama nibbattavatthānaṃ,",
  "tha-ap405:21.4": "okāso so na sammati.",
  "tha-ap405:22.1": "Pabbatarājā himavā,",
  "tha-ap405:22.2": "pavaropi siluccayo;",
  "tha-ap405:22.3": "Mamānulittagandhassa,",
  "tha-ap405:22.4": "upanidhiṃ na hessati.",
  "tha-ap405:23.1": "Vatthaṃ gandhañca sappiñca,",
  "tha-ap405:23.2": "aññañca diṭṭhadhammikaṃ;",
  "tha-ap405:23.3": "Asaṅkhatañca nibbānaṃ,",
  "tha-ap405:23.4": "sappidānassidaṃ phalaṃ.",
  "tha-ap405:24.1": "Satipaṭṭhānasayano,",
  "tha-ap405:24.2": "samādhijhānagocaro;",
  "tha-ap405:24.3": "Bojjhaṅgabhojano ajja,",
  "tha-ap405:24.4": "sappidānassidaṃ phalaṃ.",
  "tha-ap405:25.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap405:25.2": "…pe…",
  "tha-ap405:25.3": "viharāmi anāsavo.",
  "tha-ap405:26.1": "Svāgataṃ vata me āsi,",
  "tha-ap405:26.2": "…pe…",
  "tha-ap405:26.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap405:27.1": "Paṭisambhidā catasso,",
  "tha-ap405:27.2": "…pe…",
  "tha-ap405:27.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap405:28.1": "Itthaṃ sudaṃ āyasmā mettagū thero imā gāthāyo abhāsitthāti.",
  "tha-ap405:29.1": "Mettaguttherassāpadānaṃ tatiyaṃ."
}