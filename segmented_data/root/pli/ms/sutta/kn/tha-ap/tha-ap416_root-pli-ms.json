{
  "tha-ap416:0.1": "Therāpadāna",
  "tha-ap416:0.2": "Bhaddālivagga",
  "tha-ap416:0.3": "4. Madhumaṃsadāyakattheraapadāna",
  "tha-ap416:1.1": "“Nagare bandhumatiyā,",
  "tha-ap416:1.2": "sūkariko ahosahaṃ;",
  "tha-ap416:1.3": "Ukkoṭakaṃ randhayitvā,",
  "tha-ap416:1.4": "madhumaṃsamhi okiriṃ.",
  "tha-ap416:2.1": "Sannipātaṃ ahaṃ gantvā,",
  "tha-ap416:2.2": "ekaṃ pattaṃ gahesahaṃ;",
  "tha-ap416:2.3": "Pūrayitvāna taṃ pattaṃ,",
  "tha-ap416:2.4": "bhikkhusaṃghassadāsahaṃ.",
  "tha-ap416:3.1": "Yottha therataro bhikkhu,",
  "tha-ap416:3.2": "niyyādesi mamaṃ tadā;",
  "tha-ap416:3.3": "Iminā pattapūrena,",
  "tha-ap416:3.4": "labhassu vipulaṃ sukhaṃ.",
  "tha-ap416:4.1": "Duve sampattiyo bhutvā,",
  "tha-ap416:4.2": "sukkamūlena codito;",
  "tha-ap416:4.3": "Pacchime vattamānamhi,",
  "tha-ap416:4.4": "kilese jhāpayissati.",
  "tha-ap416:5.1": "Tattha cittaṃ pasādetvā,",
  "tha-ap416:5.2": "tāvatiṃsamagacchahaṃ;",
  "tha-ap416:5.3": "Tattha bhutvā pivitvā ca,",
  "tha-ap416:5.4": "labhāmi vipulaṃ sukhaṃ.",
  "tha-ap416:6.1": "Maṇḍape rukkhamūle vā,",
  "tha-ap416:6.2": "pubbakammaṃ anussariṃ;",
  "tha-ap416:6.3": "Annapānābhivasso me,",
  "tha-ap416:6.4": "abhivassati tāvade.",
  "tha-ap416:7.1": "Idaṃ pacchimakaṃ mayhaṃ,",
  "tha-ap416:7.2": "carimo vattate bhavo;",
  "tha-ap416:7.3": "Idhāpi annapānaṃ me,",
  "tha-ap416:7.4": "vassate sabbakālikaṃ.",
  "tha-ap416:8.1": "Teneva madhudānena,",
  "tha-ap416:8.2": "sandhāvitvā bhave ahaṃ;",
  "tha-ap416:8.3": "Sabbāsave pariññāya,",
  "tha-ap416:8.4": "viharāmi anāsavo.",
  "tha-ap416:9.1": "Ekanavutito kappe,",
  "tha-ap416:9.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap416:9.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap416:9.4": "madhudānassidaṃ phalaṃ.",
  "tha-ap416:10.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap416:10.2": "…pe…",
  "tha-ap416:10.3": "viharāmi anāsavo.",
  "tha-ap416:11.1": "Svāgataṃ vata me āsi,",
  "tha-ap416:11.2": "…pe…",
  "tha-ap416:11.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap416:12.1": "Paṭisambhidā catasso,",
  "tha-ap416:12.2": "…pe…",
  "tha-ap416:12.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap416:13.1": "Itthaṃ sudaṃ āyasmā madhumaṃsadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap416:14.1": "Madhumaṃsadāyakattherassāpadānaṃ catutthaṃ."
}