{
  "tha-ap16:0.1": "Therāpadāna",
  "tha-ap16:0.2": "Sīhāsaniyavagga",
  "tha-ap16:0.3": "4 Cūḷapanthakattheraapadāna",
  "tha-ap16:1.1": "“Padumuttaro nāma jino,",
  "tha-ap16:1.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap16:1.3": "Gaṇamhā vūpakaṭṭho so,",
  "tha-ap16:1.4": "himavante vasī tadā.",
  "tha-ap16:2.1": "Ahampi himavantamhi,",
  "tha-ap16:2.2": "vasāmi assame tadā;",
  "tha-ap16:2.3": "Acirāgataṁ mahāvīraṁ,",
  "tha-ap16:2.4": "upesiṁ lokanāyakaṁ.",
  "tha-ap16:3.1": "Pupphacchattaṁ gahetvāna,",
  "tha-ap16:3.2": "upagacchiṁ narāsabhaṁ;",
  "tha-ap16:3.3": "Samādhiṁ samāpajjantaṁ,",
  "tha-ap16:3.4": "antarāyamakāsahaṁ.",
  "tha-ap16:4.1": "Ubho hatthehi paggayha,",
  "tha-ap16:4.2": "pupphacchattaṁ adāsahaṁ;",
  "tha-ap16:4.3": "Paṭiggahesi bhagavā,",
  "tha-ap16:4.4": "padumuttaro mahāmuni.",
  "tha-ap16:5.1": "Sabbe devā attamanā,",
  "tha-ap16:5.2": "himavantaṁ upenti te;",
  "tha-ap16:5.3": "Sādhukāraṁ pavattesuṁ,",
  "tha-ap16:5.4": "anumodissati cakkhumā.",
  "tha-ap16:6.1": "Idaṁ vatvāna te devā,",
  "tha-ap16:6.2": "upagacchuṁ naruttamaṁ;",
  "tha-ap16:6.3": "Ākāse dhārayantassa,",
  "tha-ap16:6.4": "padumacchattamuttamaṁ.",
  "tha-ap16:7.1": "Satapattachattaṁ paggayha,",
  "tha-ap16:7.2": "adāsi tāpaso mama;",
  "tha-ap16:7.3": "‘Tamahaṁ kittayissāmi,",
  "tha-ap16:7.4": "suṇātha mama bhāsato.",
  "tha-ap16:8.1": "Pañcavīsatikappāni,",
  "tha-ap16:8.2": "devarajjaṁ karissati;",
  "tha-ap16:8.3": "Catuttiṁsatikkhattuñca,",
  "tha-ap16:8.4": "cakkavattī bhavissati.",
  "tha-ap16:9.1": "Yaṁ yaṁ yoniṁ saṁsarati,",
  "tha-ap16:9.2": "devattaṁ atha mānusaṁ;",
  "tha-ap16:9.3": "Abbhokāse patiṭṭhantaṁ,",
  "tha-ap16:9.4": "padumaṁ dhārayissati.",
  "tha-ap16:10.1": "Kappasatasahassamhi,",
  "tha-ap16:10.2": "okkākakulasambhavo;",
  "tha-ap16:10.3": "Gotamo nāma gottena,",
  "tha-ap16:10.4": "satthā loke bhavissati.",
  "tha-ap16:11.1": "Pakāsite pāvacane,",
  "tha-ap16:11.2": "manussattaṁ labhissati;",
  "tha-ap16:11.3": "Manomayamhi kāyamhi,",
  "tha-ap16:11.4": "uttamo so bhavissati.",
  "tha-ap16:12.1": "Dve bhātaro bhavissanti,",
  "tha-ap16:12.2": "ubhopi panthakavhayā;",
  "tha-ap16:12.3": "Anubhotvā uttamatthaṁ,",
  "tha-ap16:12.4": "jotayissanti sāsanaṁ’.",
  "tha-ap16:13.1": "Sohaṁ aṭṭhārasavasso,",
  "tha-ap16:13.2": "pabbajiṁ anagāriyaṁ;",
  "tha-ap16:13.3": "Visesāhaṁ na vindāmi,",
  "tha-ap16:13.4": "sakyaputtassa sāsane.",
  "tha-ap16:14.1": "Dandhā mayhaṁ gatī āsi,",
  "tha-ap16:14.2": "paribhūto pure ahuṁ;",
  "tha-ap16:14.3": "Bhātā ca maṁ paṇāmesi,",
  "tha-ap16:14.4": "gaccha dāni sakaṁ gharaṁ.",
  "tha-ap16:15.1": "Sohaṁ paṇāmito santo,",
  "tha-ap16:15.2": "saṅghārāmassa koṭṭhake;",
  "tha-ap16:15.3": "Dummano tattha aṭṭhāsiṁ,",
  "tha-ap16:15.4": "sāmaññasmiṁ apekkhavā.",
  "tha-ap16:16.1": "Bhagavā tattha āgacchi,",
  "tha-ap16:16.2": "sīsaṁ mayhaṁ parāmasi;",
  "tha-ap16:16.3": "Bāhāya maṁ gahetvāna,",
  "tha-ap16:16.4": "saṅghārāmaṁ pavesayi.",
  "tha-ap16:17.1": "Anukampāya me satthā,",
  "tha-ap16:17.2": "adāsi pādapuñchaniṁ;",
  "tha-ap16:17.3": "Evaṁ suddhaṁ adhiṭṭhehi,",
  "tha-ap16:17.4": "ekamantamadhiṭṭhahaṁ.",
  "tha-ap16:18.1": "Hatthehi tamahaṁ gayha,",
  "tha-ap16:18.2": "sariṁ kokanadaṁ ahaṁ;",
  "tha-ap16:18.3": "Tattha cittaṁ vimucci me,",
  "tha-ap16:18.4": "arahattaṁ apāpuṇiṁ.",
  "tha-ap16:19.1": "Manomayesu kāyesu,",
  "tha-ap16:19.2": "sabbattha pāramiṁ gato;",
  "tha-ap16:19.3": "Sabbāsave pariññāya,",
  "tha-ap16:19.4": "viharāmi anāsavo.",
  "tha-ap16:20.1": "Paṭisambhidā catasso,",
  "tha-ap16:20.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap16:20.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap16:20.4": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap16:21.1": "Itthaṁ sudaṁ āyasmā cūḷapanthako thero imā gāthāyo abhāsitthāti.",
  "tha-ap16:22.1": "Cūḷapanthakattherassāpadānaṁ catutthaṁ."
}