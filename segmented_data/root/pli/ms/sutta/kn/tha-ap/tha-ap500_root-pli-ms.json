{
  "tha-ap500:0.1": "Therāpadāna",
  "tha-ap500:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap500:0.3": "8 Pulinathūpiyattheraapadāna",
  "tha-ap500:1.1": "“Himavantassāvidūre,",
  "tha-ap500:1.2": "yamako nāma pabbato;",
  "tha-ap500:1.3": "Assamo sukato mayhaṁ,",
  "tha-ap500:1.4": "paṇṇasālā sumāpitā.",
  "tha-ap500:2.1": "Nārado nāma nāmena,",
  "tha-ap500:2.2": "jaṭilo uggatāpano;",
  "tha-ap500:2.3": "Catuddasasahassāni,",
  "tha-ap500:2.4": "sissā paricaranti maṁ.",
  "tha-ap500:3.1": "Paṭisallīnako santo,",
  "tha-ap500:3.2": "evaṁ cintesahaṁ tadā;",
  "tha-ap500:3.3": "‘Sabbo jano maṁ pūjeti,",
  "tha-ap500:3.4": "nāhaṁ pūjemi kiñcanaṁ.",
  "tha-ap500:4.1": "Na me ovādako atthi,",
  "tha-ap500:4.2": "vattā koci na vijjati;",
  "tha-ap500:4.3": "Anācariyupajjhāyo,",
  "tha-ap500:4.4": "vane vāsaṁ upemahaṁ.",
  "tha-ap500:5.1": "Upāsamāno yamahaṁ,",
  "tha-ap500:5.2": "garucittaṁ upaṭṭhahe;",
  "tha-ap500:5.3": "So me ācariyo natthi,",
  "tha-ap500:5.4": "vanavāso niratthako.",
  "tha-ap500:6.1": "Āyāgaṁ me gavesissaṁ,",
  "tha-ap500:6.2": "garuṁ bhāvaniyaṁ tathā;",
  "tha-ap500:6.3": "Sāvassayo vasissāmi,",
  "tha-ap500:6.4": "na koci garahissati’.",
  "tha-ap500:7.1": "Uttānakūlā nadikā,",
  "tha-ap500:7.2": "supatitthā manoramā;",
  "tha-ap500:7.3": "Saṁsuddhapulinākiṇṇā,",
  "tha-ap500:7.4": "avidūre mamassamaṁ.",
  "tha-ap500:8.1": "Nadiṁ amarikaṁ nāma,",
  "tha-ap500:8.2": "upagantvānahaṁ tadā;",
  "tha-ap500:8.3": "Saṁvaḍḍhayitvā pulinaṁ,",
  "tha-ap500:8.4": "akaṁ pulinacetiyaṁ.",
  "tha-ap500:9.1": "Ye te ahesuṁ sambuddhā,",
  "tha-ap500:9.2": "bhavantakaraṇā munī;",
  "tha-ap500:9.3": "Tesaṁ etādiso thūpo,",
  "tha-ap500:9.4": "taṁ nimittaṁ karomahaṁ.",
  "tha-ap500:10.1": "Karitvā pulinaṁ thūpaṁ,",
  "tha-ap500:10.2": "sovaṇṇaṁ māpayiṁ ahaṁ;",
  "tha-ap500:10.3": "Soṇṇakiṅkaṇipupphāni,",
  "tha-ap500:10.4": "sahasse tīṇi pūjayiṁ.",
  "tha-ap500:11.1": "Sāyaṁ pātaṁ namassāmi,",
  "tha-ap500:11.2": "vedajāto katañjalī;",
  "tha-ap500:11.3": "Sammukhā viya sambuddhaṁ,",
  "tha-ap500:11.4": "vandiṁ pulinacetiyaṁ.",
  "tha-ap500:12.1": "Yadā kilesā jāyanti,",
  "tha-ap500:12.2": "vitakkā gehanissitā;",
  "tha-ap500:12.3": "Sarāmi sukataṁ thūpaṁ,",
  "tha-ap500:12.4": "paccavekkhāmi tāvade.",
  "tha-ap500:13.1": "Upanissāya viharaṁ,",
  "tha-ap500:13.2": "satthavāhaṁ vināyakaṁ;",
  "tha-ap500:13.3": "Kilese saṁvaseyyāsi,",
  "tha-ap500:13.4": "na yuttaṁ tava mārisa.",
  "tha-ap500:14.1": "Saha āvajjite thūpe,",
  "tha-ap500:14.2": "gāravaṁ hoti me tadā;",
  "tha-ap500:14.3": "Kuvitakke vinodesiṁ,",
  "tha-ap500:14.4": "nāgo tuttaṭṭito yathā.",
  "tha-ap500:15.1": "Evaṁ viharamānaṁ maṁ,",
  "tha-ap500:15.2": "maccurājābhimaddatha;",
  "tha-ap500:15.3": "Tattha kālaṅkato santo,",
  "tha-ap500:15.4": "brahmalokamagacchahaṁ.",
  "tha-ap500:16.1": "Yāvatāyuṁ vasitvāna,",
  "tha-ap500:16.2": "tidive upapajjahaṁ;",
  "tha-ap500:16.3": "Asītikkhattuṁ devindo,",
  "tha-ap500:16.4": "devarajjamakārayiṁ.",
  "tha-ap500:17.1": "Satānaṁ tīṇikkhattuñca,",
  "tha-ap500:17.2": "cakkavattī ahosahaṁ;",
  "tha-ap500:17.3": "Padesarajjaṁ vipulaṁ,",
  "tha-ap500:17.4": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap500:18.1": "Soṇṇakiṅkaṇipupphānaṁ,",
  "tha-ap500:18.2": "vipākaṁ anubhomahaṁ;",
  "tha-ap500:18.3": "Dhātīsatasahassāni,",
  "tha-ap500:18.4": "parivārenti maṁ bhave.",
  "tha-ap500:19.1": "Thūpassa pariciṇṇattā,",
  "tha-ap500:19.2": "rajojallaṁ na limpati;",
  "tha-ap500:19.3": "Gatte sedā na muccanti,",
  "tha-ap500:19.4": "suppabhāso bhavāmahaṁ.",
  "tha-ap500:20.1": "Aho me sukato thūpo,",
  "tha-ap500:20.2": "sudiṭṭhā marikā nadī;",
  "tha-ap500:20.3": "Thūpaṁ katvāna pulinaṁ,",
  "tha-ap500:20.4": "pattomhi acalaṁ padaṁ.",
  "tha-ap500:21.1": "Kusalaṁ kattukāmena,",
  "tha-ap500:21.2": "jantunā sāragāhinā;",
  "tha-ap500:21.3": "Natthi khettaṁ akhettaṁ vā,",
  "tha-ap500:21.4": "paṭipattīva sādhakā.",
  "tha-ap500:22.1": "Yathāpi balavā poso,",
  "tha-ap500:22.2": "aṇṇavaṁ taritussahe;",
  "tha-ap500:22.3": "Parittaṁ kaṭṭhamādāya,",
  "tha-ap500:22.4": "pakkhandeyya mahāsaraṁ.",
  "tha-ap500:23.1": "Imāhaṁ kaṭṭhaṁ nissāya,",
  "tha-ap500:23.2": "tarissāmi mahodadhiṁ;",
  "tha-ap500:23.3": "Ussāhena vīriyena,",
  "tha-ap500:23.4": "tareyya udadhiṁ naro.",
  "tha-ap500:24.1": "Tatheva me kataṁ kammaṁ,",
  "tha-ap500:24.2": "parittaṁ thokakañca yaṁ;",
  "tha-ap500:24.3": "Taṁ kammaṁ upanissāya,",
  "tha-ap500:24.4": "saṁsāraṁ samatikkamiṁ.",
  "tha-ap500:25.1": "Pacchime bhave sampatte,",
  "tha-ap500:25.2": "sukkamūlena codito;",
  "tha-ap500:25.3": "Sāvatthiyaṁ pure jāto,",
  "tha-ap500:25.4": "mahāsāle suaḍḍhake.",
  "tha-ap500:26.1": "Saddhā mātā pitā mayhaṁ,",
  "tha-ap500:26.2": "buddhassa saraṇaṁ gatā;",
  "tha-ap500:26.3": "Ubho diṭṭhapadā ete,",
  "tha-ap500:26.4": "anuvattanti sāsanaṁ.",
  "tha-ap500:27.1": "Bodhipapaṭikaṁ gayha,",
  "tha-ap500:27.2": "soṇṇathūpamakārayuṁ;",
  "tha-ap500:27.3": "Sāyaṁ pātaṁ namassanti,",
  "tha-ap500:27.4": "sakyaputtassa sammukhā.",
  "tha-ap500:28.1": "Uposathamhi divase,",
  "tha-ap500:28.2": "soṇṇathūpaṁ vinīharuṁ;",
  "tha-ap500:28.3": "Buddhassa vaṇṇaṁ kittentā,",
  "tha-ap500:28.4": "tiyāmaṁ vītināmayuṁ.",
  "tha-ap500:29.1": "Saha disvānahaṁ thūpaṁ,",
  "tha-ap500:29.2": "sariṁ pulinacetiyaṁ;",
  "tha-ap500:29.3": "Ekāsane nisīditvā,",
  "tha-ap500:29.4": "arahattamapāpuṇiṁ.",
  "tha-ap500:30.1": "Dvāvīsatimaṁ bhāṇavāraṁ.",
  "tha-ap500:31.1": "Gavesamāno taṁ vīraṁ,",
  "tha-ap500:31.2": "dhammasenāpatiddasaṁ;",
  "tha-ap500:31.3": "Agārā nikkhamitvāna,",
  "tha-ap500:31.4": "pabbajiṁ tassa santike.",
  "tha-ap500:32.1": "Jātiyā sattavassena,",
  "tha-ap500:32.2": "arahattamapāpuṇiṁ;",
  "tha-ap500:32.3": "Upasampādayī buddho,",
  "tha-ap500:32.4": "guṇamaññāya cakkhumā.",
  "tha-ap500:33.1": "Dārakeneva santena,",
  "tha-ap500:33.2": "kiriyaṁ niṭṭhitaṁ mayā;",
  "tha-ap500:33.3": "Kataṁ me karaṇīyajja,",
  "tha-ap500:33.4": "sakyaputtassa sāsane.",
  "tha-ap500:34.1": "Sabbaverabhayātīto,",
  "tha-ap500:34.2": "sabbasaṅgātigo isi;",
  "tha-ap500:34.3": "Sāvako te mahāvīra,",
  "tha-ap500:34.4": "soṇṇathūpassidaṁ phalaṁ.",
  "tha-ap500:35.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap500:35.2": "…pe…",
  "tha-ap500:35.3": "viharāmi anāsavo.",
  "tha-ap500:36.1": "Svāgataṁ vata me āsi,",
  "tha-ap500:36.2": "…pe…",
  "tha-ap500:36.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap500:37.1": "Paṭisambhidā catasso,",
  "tha-ap500:37.2": "…pe…",
  "tha-ap500:37.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap500:38.1": "Itthaṁ sudaṁ āyasmā pulinathūpiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap500:39.1": "Pulinathūpiyattherassāpadānaṁ aṭṭhamaṁ."
}