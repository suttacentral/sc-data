{
  "tha-ap45:0.1": "Therāpadāna",
  "tha-ap45:0.2": "Upālivagga",
  "tha-ap45:0.3": "3 Kāḷigodhāputtabhaddiyattheraapadāna",
  "tha-ap45:1.1": "“Padumuttarasambuddhaṃ,",
  "tha-ap45:1.2": "mettacittaṃ mahāmuniṃ;",
  "tha-ap45:1.3": "Upeti janatā sabbā,",
  "tha-ap45:1.4": "sabbalokagganāyakaṃ.",
  "tha-ap45:2.1": "Sattukañca baddhakañca,",
  "tha-ap45:2.2": "āmisaṃ pānabhojanaṃ;",
  "tha-ap45:2.3": "Dadanti satthuno sabbe,",
  "tha-ap45:2.4": "puññakkhette anuttare.",
  "tha-ap45:3.1": "Ahampi dānaṃ dassāmi,",
  "tha-ap45:3.2": "devadevassa tādino;",
  "tha-ap45:3.3": "Buddhaseṭṭhaṃ nimantetvā,",
  "tha-ap45:3.4": "saṃghampi ca anuttaraṃ.",
  "tha-ap45:4.1": "Uyyojitā mayā cete,",
  "tha-ap45:4.2": "nimantesuṃ tathāgataṃ;",
  "tha-ap45:4.3": "Kevalaṃ bhikkhusaṃghañca,",
  "tha-ap45:4.4": "puññakkhettaṃ anuttaraṃ.",
  "tha-ap45:5.1": "Satasahassapallaṅkaṃ,",
  "tha-ap45:5.2": "sovaṇṇaṃ gonakatthataṃ;",
  "tha-ap45:5.3": "Tūlikāpaṭalikāya,",
  "tha-ap45:5.4": "khomakappāsikehi ca;",
  "tha-ap45:5.5": "Mahārahaṃ paññāpayiṃ,",
  "tha-ap45:5.6": "āsanaṃ buddhayuttakaṃ.",
  "tha-ap45:6.1": "Padumuttaro lokavidū,",
  "tha-ap45:6.2": "devadevo narāsabho;",
  "tha-ap45:6.3": "Bhikkhusaṃghaparibyūḷho,",
  "tha-ap45:6.4": "mama dvāramupāgami.",
  "tha-ap45:7.1": "Paccuggantvāna sambuddhaṃ,",
  "tha-ap45:7.2": "lokanāthaṃ yasassinaṃ;",
  "tha-ap45:7.3": "Pasannacitto sumano,",
  "tha-ap45:7.4": "abhināmayiṃ saṃgharaṃ.",
  "tha-ap45:8.1": "Bhikkhūnaṃ satasahassaṃ,",
  "tha-ap45:8.2": "buddhañca lokanāyakaṃ;",
  "tha-ap45:8.3": "Pasannacitto sumano,",
  "tha-ap45:8.4": "paramannena tappayiṃ.",
  "tha-ap45:9.1": "Padumuttaro lokavidū,",
  "tha-ap45:9.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap45:9.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap45:9.4": "imā gāthā abhāsatha.",
  "tha-ap45:10.1": "‘Yenidaṃ āsanaṃ dinnaṃ,",
  "tha-ap45:10.2": "sovaṇṇaṃ gonakatthataṃ;",
  "tha-ap45:10.3": "Tamahaṃ kittayissāmi,",
  "tha-ap45:10.4": "suṇātha mama bhāsato.",
  "tha-ap45:11.1": "Catusattatikkhattuṃ so,",
  "tha-ap45:11.2": "devarajjaṃ karissati;",
  "tha-ap45:11.3": "Anubhossati sampattiṃ,",
  "tha-ap45:11.4": "accharāhi purakkhato.",
  "tha-ap45:12.1": "Padesarajjaṃ sahassaṃ,",
  "tha-ap45:12.2": "vasudhaṃ āvasissati;",
  "tha-ap45:12.3": "Ekapaññāsakkhattuñca,",
  "tha-ap45:12.4": "cakkavattī bhavissati.",
  "tha-ap45:13.1": "Sabbāsu bhavayonīsu,",
  "tha-ap45:13.2": "uccākulī bhavissati;",
  "tha-ap45:13.3": "So ca pacchā pabbajitvā,",
  "tha-ap45:13.4": "sukkamūlena codito;",
  "tha-ap45:13.5": "Bhaddiyo nāma nāmena,",
  "tha-ap45:13.6": "hessati satthu sāvako’.",
  "tha-ap45:14.1": "Vivekamanuyuttomhi,",
  "tha-ap45:14.2": "pantasenanivāsahaṃ;",
  "tha-ap45:14.3": "Phalañcādhigataṃ sabbaṃ,",
  "tha-ap45:14.4": "cattaklesomhi ajjahaṃ.",
  "tha-ap45:15.1": "Mama sabbaṃ abhiññāya,",
  "tha-ap45:15.2": "sabbaññū lokanāyako;",
  "tha-ap45:15.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap45:15.4": "etadagge ṭhapesi maṃ.",
  "tha-ap45:16.1": "Paṭisambhidā catasso,",
  "tha-ap45:16.2": "…pe…",
  "tha-ap45:16.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap45:17.1": "Itthaṃ sudaṃ āyasmā bhaddiyo kāḷigodhāya putto thero imā gāthāyo abhāsitthāti.",
  "tha-ap45:18.1": "Bhaddiyassa kāḷigodhāya puttattherassāpadānaṃ tatiyaṃ."
}