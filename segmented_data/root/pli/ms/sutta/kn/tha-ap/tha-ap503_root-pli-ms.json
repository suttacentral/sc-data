{
  "tha-ap503:0.1": "Therāpadāna",
  "tha-ap503:0.2": "Kaṇikāravagga",
  "tha-ap503:0.3": "1 Tikaṇikārapupphiyattheraapadāna",
  "tha-ap503:1.1": "“Sumedho nāma sambuddho,",
  "tha-ap503:1.2": "bāttiṃsavaralakkhaṇo;",
  "tha-ap503:1.3": "Vivekakāmo sambuddho,",
  "tha-ap503:1.4": "himavantamupāgamiṃ.",
  "tha-ap503:2.1": "Ajjhogayha himavantaṃ,",
  "tha-ap503:2.2": "aggo kāruṇiko muni;",
  "tha-ap503:2.3": "Pallaṅkamābhujitvāna,",
  "tha-ap503:2.4": "nisīdi purisuttamo.",
  "tha-ap503:3.1": "Vijjādharo tadā āsiṃ,",
  "tha-ap503:3.2": "antalikkhacaro ahaṃ;",
  "tha-ap503:3.3": "Tisūlaṃ sukataṃ gayha,",
  "tha-ap503:3.4": "gacchāmi ambare tadā.",
  "tha-ap503:4.1": "Pabbatagge yathā aggi,",
  "tha-ap503:4.2": "puṇṇamāyeva candimā;",
  "tha-ap503:4.3": "Vane obhāsate buddho,",
  "tha-ap503:4.4": "sālarājāva phullito.",
  "tha-ap503:5.1": "Vanaggā nikkhamitvāna,",
  "tha-ap503:5.2": "buddharaṃsībhidhāvare;",
  "tha-ap503:5.3": "Naḷaggivaṇṇasaṅkāsā,",
  "tha-ap503:5.4": "disvā cittaṃ pasādayiṃ.",
  "tha-ap503:6.1": "Vicinaṃ addasaṃ pupphaṃ,",
  "tha-ap503:6.2": "kaṇikāraṃ devagandhikaṃ;",
  "tha-ap503:6.3": "Tīṇi pupphāni ādāya,",
  "tha-ap503:6.4": "buddhaseṭṭhamapūjayiṃ.",
  "tha-ap503:7.1": "Buddhassa ānubhāvena,",
  "tha-ap503:7.2": "tīṇi pupphāni me tadā;",
  "tha-ap503:7.3": "Uddhaṃvaṇṭā adhopattā,",
  "tha-ap503:7.4": "chāyaṃ kubbanti satthuno.",
  "tha-ap503:8.1": "Tena kammena sukatena,",
  "tha-ap503:8.2": "cetanāpaṇidhīhi ca;",
  "tha-ap503:8.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap503:8.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap503:9.1": "Tattha me sukataṃ byamhaṃ,",
  "tha-ap503:9.2": "kaṇikārīti ñāyati;",
  "tha-ap503:9.3": "Saṭṭhiyojanamubbedhaṃ,",
  "tha-ap503:9.4": "tiṃsayojanavitthataṃ.",
  "tha-ap503:10.1": "Sahassakaṇḍaṃ satabheṇḍu,",
  "tha-ap503:10.2": "dhajāluharitāmayaṃ;",
  "tha-ap503:10.3": "Satasahassaniyyūhā,",
  "tha-ap503:10.4": "byamhe pātubhaviṃsu me.",
  "tha-ap503:11.1": "Soṇṇamayā maṇimayā,",
  "tha-ap503:11.2": "lohitaṅgamayāpi ca;",
  "tha-ap503:11.3": "Phalikāpi ca pallaṅkā,",
  "tha-ap503:11.4": "yenicchakā yadicchakā.",
  "tha-ap503:12.1": "Mahārahañca sayanaṃ,",
  "tha-ap503:12.2": "tūlikāvikatīyutaṃ;",
  "tha-ap503:12.3": "Uddhalomikaekantaṃ,",
  "tha-ap503:12.4": "bibbohanasamāyutaṃ.",
  "tha-ap503:13.1": "Bhavanā nikkhamitvāna,",
  "tha-ap503:13.2": "caranto devacārikaṃ;",
  "tha-ap503:13.3": "Yadā icchāmi gamanaṃ,",
  "tha-ap503:13.4": "devasaṅghapurakkhato.",
  "tha-ap503:14.1": "Pupphassa heṭṭhā tiṭṭhāmi,",
  "tha-ap503:14.2": "uparicchadanaṃ mama;",
  "tha-ap503:14.3": "Samantā yojanasataṃ,",
  "tha-ap503:14.4": "kaṇikārehi chāditaṃ.",
  "tha-ap503:15.1": "Saṭṭhituriyasahassāni,",
  "tha-ap503:15.2": "sāyaṃ pātamupaṭṭhahuṃ;",
  "tha-ap503:15.3": "Parivārenti maṃ niccaṃ,",
  "tha-ap503:15.4": "rattindivamatanditā.",
  "tha-ap503:16.1": "Tattha naccehi gītehi,",
  "tha-ap503:16.2": "tāḷehi vāditehi ca;",
  "tha-ap503:16.3": "Ramāmi khiḍḍāratiyā,",
  "tha-ap503:16.4": "modāmi kāmakāmihaṃ.",
  "tha-ap503:17.1": "Tattha bhutvā pivitvā ca,",
  "tha-ap503:17.2": "modāmi tidase tadā;",
  "tha-ap503:17.3": "Nārīgaṇehi sahito,",
  "tha-ap503:17.4": "modāmi byamhamuttame.",
  "tha-ap503:18.1": "Satānaṃ pañcakkhattuñca,",
  "tha-ap503:18.2": "devarajjamakārayiṃ;",
  "tha-ap503:18.3": "Satānaṃ tīṇikkhattuñca,",
  "tha-ap503:18.4": "cakkavattī ahosahaṃ;",
  "tha-ap503:18.5": "Padesarajjaṃ vipulaṃ,",
  "tha-ap503:18.6": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap503:19.1": "Bhavābhave saṃsaranto,",
  "tha-ap503:19.2": "mahābhogaṃ labhāmahaṃ;",
  "tha-ap503:19.3": "Bhoge me ūnatā natthi,",
  "tha-ap503:19.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:20.1": "Duve bhave saṃsarāmi,",
  "tha-ap503:20.2": "devatte atha mānuse;",
  "tha-ap503:20.3": "Aññaṃ gatiṃ na jānāmi,",
  "tha-ap503:20.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:21.1": "Duve kule pajāyāmi,",
  "tha-ap503:21.2": "khattiye cāpi brāhmaṇe;",
  "tha-ap503:21.3": "Nīce kule na jāyāmi,",
  "tha-ap503:21.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:22.1": "Hatthiyānaṃ assayānaṃ,",
  "tha-ap503:22.2": "sivikaṃ sandamānikaṃ;",
  "tha-ap503:22.3": "Labhāmi sabbamevetaṃ,",
  "tha-ap503:22.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:23.1": "Dāsīgaṇaṃ dāsagaṇaṃ,",
  "tha-ap503:23.2": "nāriyo samalaṅkatā;",
  "tha-ap503:23.3": "Labhāmi sabbamevetaṃ,",
  "tha-ap503:23.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:24.1": "Koseyyakambaliyāni,",
  "tha-ap503:24.2": "khomakappāsikāni ca;",
  "tha-ap503:24.3": "Labhāmi sabbamevetaṃ,",
  "tha-ap503:24.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:25.1": "Navavatthaṃ navaphalaṃ,",
  "tha-ap503:25.2": "navaggarasabhojanaṃ;",
  "tha-ap503:25.3": "Labhāmi sabbamevetaṃ,",
  "tha-ap503:25.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:26.1": "Imaṃ khāda imaṃ bhuñja,",
  "tha-ap503:26.2": "imamhi sayane saya;",
  "tha-ap503:26.3": "Labhāmi sabbamevetaṃ,",
  "tha-ap503:26.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:27.1": "Sabbattha pūjito homi,",
  "tha-ap503:27.2": "yaso abbhuggato mama;",
  "tha-ap503:27.3": "Mahāpakkho sadā homi,",
  "tha-ap503:27.4": "abhejjapariso sadā;",
  "tha-ap503:27.5": "Ñātīnaṃ uttamo homi,",
  "tha-ap503:27.6": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:28.1": "Sītaṃ uṇhaṃ na jānāmi,",
  "tha-ap503:28.2": "pariḷāho na vijjati;",
  "tha-ap503:28.3": "Atho cetasikaṃ dukkhaṃ,",
  "tha-ap503:28.4": "hadaye me na vijjati.",
  "tha-ap503:29.1": "Suvaṇṇavaṇṇo hutvāna,",
  "tha-ap503:29.2": "saṃsarāmi bhavābhave;",
  "tha-ap503:29.3": "Vevaṇṇiyaṃ na jānāmi,",
  "tha-ap503:29.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:30.1": "Devalokā cavitvāna,",
  "tha-ap503:30.2": "sukkamūlena codito;",
  "tha-ap503:30.3": "Sāvatthiyaṃ pure jāto,",
  "tha-ap503:30.4": "mahāsāle suaḍḍhake.",
  "tha-ap503:31.1": "Pañca kāmaguṇe hitvā,",
  "tha-ap503:31.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap503:31.3": "Jātiyā sattavassohaṃ,",
  "tha-ap503:31.4": "arahattamapāpuṇiṃ.",
  "tha-ap503:32.1": "Upasampādayī buddho,",
  "tha-ap503:32.2": "guṇamaññāya cakkhumā;",
  "tha-ap503:32.3": "Taruṇo pūjanīyohaṃ,",
  "tha-ap503:32.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:33.1": "Dibbacakkhu visuddhaṃ me,",
  "tha-ap503:33.2": "samādhikusalo ahaṃ;",
  "tha-ap503:33.3": "Abhiññāpāramippatto,",
  "tha-ap503:33.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:34.1": "Paṭisambhidā anuppatto,",
  "tha-ap503:34.2": "iddhipādesu kovido;",
  "tha-ap503:34.3": "Dhammesu pāramippatto,",
  "tha-ap503:34.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:35.1": "Tiṃsakappasahassamhi,",
  "tha-ap503:35.2": "yaṃ buddhamabhipūjayiṃ;",
  "tha-ap503:35.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap503:35.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap503:36.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap503:36.2": "bhavā sabbe samūhatā;",
  "tha-ap503:36.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap503:36.4": "viharāmi anāsavo.",
  "tha-ap503:37.1": "Svāgataṃ vata me āsi,",
  "tha-ap503:37.2": "mama buddhassa santike;",
  "tha-ap503:37.3": "Tisso vijjā anuppattā,",
  "tha-ap503:37.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap503:38.1": "Paṭisambhidā catasso,",
  "tha-ap503:38.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap503:38.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap503:38.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap503:39.1": "Itthaṃ sudaṃ āyasmā tikaṇikārapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap503:40.1": "Tikaṇikārapupphiyattherassāpadānaṃ paṭhamaṃ."
}