{
  "tha-ap460:0.1": "Therāpadāna",
  "tha-ap460:0.2": "Jagatidāyakavagga",
  "tha-ap460:0.3": "8. Jātipupphiyattheraapadāna",
  "tha-ap460:1.1": "“Parinibbute bhagavati,",
  "tha-ap460:1.2": "padumuttare mahāyase;",
  "tha-ap460:1.3": "Pupphavaṭaṃsake katvā,",
  "tha-ap460:1.4": "sarīramabhiropayiṃ.",
  "tha-ap460:2.1": "Tattha cittaṃ pasādetvā,",
  "tha-ap460:2.2": "nimmānaṃ agamāsahaṃ;",
  "tha-ap460:2.3": "Devalokagato santo,",
  "tha-ap460:2.4": "puññakammaṃ sarāmahaṃ.",
  "tha-ap460:3.1": "Ambarā pupphavasso me,",
  "tha-ap460:3.2": "sabbakālaṃ pavassati;",
  "tha-ap460:3.3": "Saṃsarāmi manusse ce,",
  "tha-ap460:3.4": "rājā homi mahāyaso.",
  "tha-ap460:4.1": "Tahiṃ kusumavasso me,",
  "tha-ap460:4.2": "abhivassati sabbadā;",
  "tha-ap460:4.3": "Tasseva pupphapūjāya,",
  "tha-ap460:4.4": "vāhasā sabbadassino.",
  "tha-ap460:5.1": "Ayaṃ pacchimako mayhaṃ,",
  "tha-ap460:5.2": "carimo vattate bhavo;",
  "tha-ap460:5.3": "Ajjāpi pupphavasso me,",
  "tha-ap460:5.4": "abhivassati sabbadā.",
  "tha-ap460:6.1": "Satasahassito kappe,",
  "tha-ap460:6.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap460:6.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap460:6.4": "dehapūjāyidaṃ phalaṃ.",
  "tha-ap460:7.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap460:7.2": "…pe…",
  "tha-ap460:7.3": "viharāmi anāsavo.",
  "tha-ap460:8.1": "Svāgataṃ vata me āsi,",
  "tha-ap460:8.2": "…pe…",
  "tha-ap460:8.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap460:9.1": "Paṭisambhidā catasso,",
  "tha-ap460:9.2": "…pe…",
  "tha-ap460:9.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap460:10.1": "Itthaṃ sudaṃ āyasmā jātipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap460:11.1": "Jātipupphiyattherassāpadānaṃ aṭṭhamaṃ."
}