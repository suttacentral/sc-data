{
  "tha-ap360:0.1": "Therāpadāna",
  "tha-ap360:0.2": "Saddasaññakavagga",
  "tha-ap360:0.3": "8 Mañcadāyakattheraapadāna",
  "tha-ap360:1.1": "“Vipassino bhagavato,",
  "tha-ap360:1.2": "lokajeṭṭhassa tādino;",
  "tha-ap360:1.3": "Ekaṁ mañcaṁ mayā dinnaṁ,",
  "tha-ap360:1.4": "pasannena sapāṇinā.",
  "tha-ap360:2.1": "Hatthiyānaṁ assayānaṁ,",
  "tha-ap360:2.2": "dibbayānaṁ samajjhagaṁ;",
  "tha-ap360:2.3": "Tena mañcakadānena,",
  "tha-ap360:2.4": "pattomhi āsavakkhayaṁ.",
  "tha-ap360:3.1": "Ekanavutito kappe,",
  "tha-ap360:3.2": "yaṁ mañcamadadiṁ tadā;",
  "tha-ap360:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap360:3.4": "mañcadānassidaṁ phalaṁ.",
  "tha-ap360:4.1": "Paṭisambhidā catasso,",
  "tha-ap360:4.2": "…pe…",
  "tha-ap360:4.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap360:5.1": "Itthaṁ sudaṁ āyasmā mañcadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap360:6.1": "Mañcadāyakattherassāpadānaṁ aṭṭhamaṁ."
}