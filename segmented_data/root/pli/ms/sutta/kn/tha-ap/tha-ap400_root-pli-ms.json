{
  "tha-ap400:0.1": "Therāpadāna",
  "tha-ap400:0.2": "Pilindavacchavagga",
  "tha-ap400:0.3": "8 Saḷalamaṇḍapiyattheraapadāna",
  "tha-ap400:1.1": "“Nibbute kakusandhamhi,",
  "tha-ap400:1.2": "brāhmaṇamhi vusīmati;",
  "tha-ap400:1.3": "Gahetvā saḷalaṁ mālaṁ,",
  "tha-ap400:1.4": "maṇḍapaṁ kārayiṁ ahaṁ.",
  "tha-ap400:2.1": "Tāvatiṁsagato santo,",
  "tha-ap400:2.2": "labhāmi byamhamuttamaṁ;",
  "tha-ap400:2.3": "Aññe devetirocāmi,",
  "tha-ap400:2.4": "puññakammassidaṁ phalaṁ.",
  "tha-ap400:3.1": "Divā vā yadi vā rattiṁ,",
  "tha-ap400:3.2": "caṅkamanto ṭhito cahaṁ;",
  "tha-ap400:3.3": "Channo saḷalapupphehi,",
  "tha-ap400:3.4": "puññakammassidaṁ phalaṁ.",
  "tha-ap400:4.1": "Imasmiṁyeva kappamhi,",
  "tha-ap400:4.2": "yaṁ buddhamabhipūjayiṁ;",
  "tha-ap400:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap400:4.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap400:5.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap400:5.2": "…pe…",
  "tha-ap400:5.3": "viharāmi anāsavo.",
  "tha-ap400:6.1": "Svāgataṁ vata me āsi,",
  "tha-ap400:6.2": "…pe…",
  "tha-ap400:6.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap400:7.1": "Paṭisambhidā catasso,",
  "tha-ap400:7.2": "…pe…",
  "tha-ap400:7.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap400:8.1": "Itthaṁ sudaṁ āyasmā saḷalamaṇḍapiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap400:9.1": "Saḷalamaṇḍapiyattherassāpadānaṁ aṭṭhamaṁ."
}