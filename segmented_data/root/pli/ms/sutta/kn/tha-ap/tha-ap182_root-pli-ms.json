{
  "tha-ap182:0.1": "Therāpadāna",
  "tha-ap182:0.2": "Kumudavagga",
  "tha-ap182:0.3": "10. Saṃghupaṭṭhākattheraapadāna",
  "tha-ap182:1.1": "“Vessabhumhi bhagavati,",
  "tha-ap182:1.2": "ahosārāmiko ahaṃ;",
  "tha-ap182:1.3": "Pasannacitto sumano,",
  "tha-ap182:1.4": "upaṭṭhiṃ saṃghamuttamaṃ.",
  "tha-ap182:2.1": "Ekattiṃse ito kappe,",
  "tha-ap182:2.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap182:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap182:2.4": "upaṭṭhānassidaṃ phalaṃ.",
  "tha-ap182:3.1": "Ito te sattame kappe,",
  "tha-ap182:3.2": "sattevāsuṃ samodakā;",
  "tha-ap182:3.3": "Sattaratanasampannā,",
  "tha-ap182:3.4": "cakkavattī mahabbalā.",
  "tha-ap182:4.1": "Paṭisambhidā catasso,",
  "tha-ap182:4.2": "…pe…",
  "tha-ap182:4.3": "kataṃ buddhassa sāsanaṃ”. (2146)",
  "tha-ap182:5.1": "Itthaṃ sudaṃ āyasmā saṃghupaṭṭhāko thero imā gāthāyo abhāsitthāti.",
  "tha-ap182:6.1": "Saṃghupaṭṭhākattherassāpadānaṃ dasamaṃ.",
  "tha-ap182:7.1": "Kumudavaggo aṭṭhārasamo.",
  "tha-ap182:8.1": "Tassuddānaṃ",
  "tha-ap182:9.1": "Kumudo atha nisseṇī,",
  "tha-ap182:9.2": "rattiko udapānado;",
  "tha-ap182:9.3": "Sīhāsanī maggadado,",
  "tha-ap182:9.4": "ekadīpī maṇippado;",
  "tha-ap182:9.5": "Tikicchako upaṭṭhāko,",
  "tha-ap182:9.6": "ekapaññāsa gāthakāti."
}