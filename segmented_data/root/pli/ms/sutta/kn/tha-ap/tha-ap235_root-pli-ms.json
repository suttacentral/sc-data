{
  "tha-ap235:0.1": "Therāpadāna",
  "tha-ap235:0.2": "Udakāsanavagga",
  "tha-ap235:0.3": "3. Sālapupphiyattheraapadāna",
  "tha-ap235:1.1": "“Aruṇavatiyā nagare,",
  "tha-ap235:1.2": "ahosiṃ pūpiko tadā;",
  "tha-ap235:1.3": "Mama dvārena gacchantaṃ,",
  "tha-ap235:1.4": "sikhinaṃ addasaṃ jinaṃ.",
  "tha-ap235:2.1": "Buddhassa pattaṃ paggayha,",
  "tha-ap235:2.2": "sālapupphaṃ adāsahaṃ;",
  "tha-ap235:2.3": "Sammaggatassa buddhassa,",
  "tha-ap235:2.4": "vippasannena cetasā.",
  "tha-ap235:3.1": "Ekattiṃse ito kappe,",
  "tha-ap235:3.2": "Yaṃ pupphamabhidāsahaṃ;",
  "tha-ap235:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap235:3.4": "Sālapupphassidaṃ phalaṃ.",
  "tha-ap235:4.1": "Ito cuddasakappamhi,",
  "tha-ap235:4.2": "ahosiṃ amitañjalo;",
  "tha-ap235:4.3": "Sattaratanasampanno,",
  "tha-ap235:4.4": "cakkavattī mahabbalo.",
  "tha-ap235:5.1": "Paṭisambhidā catasso,",
  "tha-ap235:5.2": "…pe…",
  "tha-ap235:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap235:6.1": "Itthaṃ sudaṃ āyasmā sālapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap235:7.1": "Sālapupphiyattherassāpadānaṃ tatiyaṃ."
}