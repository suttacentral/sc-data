{
  "tha-ap354:0.1": "Therāpadāna",
  "tha-ap354:0.2": "Saddasaññakavagga",
  "tha-ap354:0.3": "2. Yavakalāpiyattheraapadāna",
  "tha-ap354:1.1": "“Nagare aruṇavatiyā,",
  "tha-ap354:1.2": "āsiṁ yavasiko tadā;",
  "tha-ap354:1.3": "Panthe disvāna sambuddhaṁ,",
  "tha-ap354:1.4": "yavakalāpaṁ santhariṁ.",
  "tha-ap354:2.1": "Anukampako kāruṇiko,",
  "tha-ap354:2.2": "sikhī lokagganāyako;",
  "tha-ap354:2.3": "Mama saṅkappamaññāya,",
  "tha-ap354:2.4": "nisīdi yavasanthare.",
  "tha-ap354:3.1": "Disvā nisinnaṁ vimalaṁ,",
  "tha-ap354:3.2": "mahājhāyiṁ vināyakaṁ;",
  "tha-ap354:3.3": "Pāmojjaṁ janayitvāna,",
  "tha-ap354:3.4": "tattha kālaṅkato ahaṁ.",
  "tha-ap354:4.1": "Ekattiṁse ito kappe,",
  "tha-ap354:4.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap354:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap354:4.4": "yavatthare idaṁ phalaṁ.",
  "tha-ap354:5.1": "Paṭisambhidā catasso,",
  "tha-ap354:5.2": "…pe…",
  "tha-ap354:5.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap354:6.1": "Itthaṁ sudaṁ āyasmā yavakalāpiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap354:7.1": "Yavakalāpiyattherassāpadānaṁ dutiyaṁ."
}