{
  "tha-ap491:0.1": "Therāpadāna",
  "tha-ap491:0.2": "Paṃsukūlavagga",
  "tha-ap491:0.3": "9 Dhammaruciyattheraapadāna",
  "tha-ap491:1.1": "“Yadā dīpaṅkaro buddho,",
  "tha-ap491:1.2": "sumedhaṃ byākarī jino;",
  "tha-ap491:1.3": "‘Aparimeyye ito kappe,",
  "tha-ap491:1.4": "ayaṃ buddho bhavissati.",
  "tha-ap491:2.1": "Imassa janikā mātā,",
  "tha-ap491:2.2": "māyā nāma bhavissati;",
  "tha-ap491:2.3": "Pitā suddhodano nāma,",
  "tha-ap491:2.4": "ayaṃ hessati gotamo.",
  "tha-ap491:3.1": "Padhānaṃ padahitvāna,",
  "tha-ap491:3.2": "katvā dukkarakārikaṃ;",
  "tha-ap491:3.3": "Assatthamūle sambuddho,",
  "tha-ap491:3.4": "bujjhissati mahāyaso.",
  "tha-ap491:4.1": "Upatisso kolito ca,",
  "tha-ap491:4.2": "aggā hessanti sāvakā;",
  "tha-ap491:4.3": "Ānando nāma nāmena,",
  "tha-ap491:4.4": "upaṭṭhissatimaṃ jinaṃ.",
  "tha-ap491:5.1": "Khemā uppalavaṇṇā ca,",
  "tha-ap491:5.2": "aggā hessanti sāvikā;",
  "tha-ap491:5.3": "Citto āḷavako ceva,",
  "tha-ap491:5.4": "aggā hessantupāsakā.",
  "tha-ap491:6.1": "Khujjuttarā nandamātā,",
  "tha-ap491:6.2": "aggā hessantupāsikā;",
  "tha-ap491:6.3": "Bodhi imassa vīrassa,",
  "tha-ap491:6.4": "assatthoti pavuccati’.",
  "tha-ap491:7.1": "Idaṃ sutvāna vacanaṃ,",
  "tha-ap491:7.2": "asamassa mahesino;",
  "tha-ap491:7.3": "Āmoditā naramarū,",
  "tha-ap491:7.4": "namassanti katañjalī.",
  "tha-ap491:8.1": "Tadāhaṃ māṇavo āsiṃ,",
  "tha-ap491:8.2": "megho nāma susikkhito;",
  "tha-ap491:8.3": "Sutvā byākaraṇaṃ seṭṭhaṃ,",
  "tha-ap491:8.4": "sumedhassa mahāmune.",
  "tha-ap491:9.1": "Saṃvisaṭṭho bhavitvāna,",
  "tha-ap491:9.2": "sumedhe karuṇāsaye;",
  "tha-ap491:9.3": "Pabbajantañca taṃ vīraṃ,",
  "tha-ap491:9.4": "sahāva anupabbajiṃ.",
  "tha-ap491:10.1": "Saṃvuto pātimokkhasmiṃ,",
  "tha-ap491:10.2": "indriyesu ca pañcasu;",
  "tha-ap491:10.3": "Suddhājīvo sato vīro,",
  "tha-ap491:10.4": "jinasāsanakārako.",
  "tha-ap491:11.1": "Evaṃ viharamānohaṃ,",
  "tha-ap491:11.2": "pāpamittena kenaci;",
  "tha-ap491:11.3": "Niyojito anācāre,",
  "tha-ap491:11.4": "sumaggā paridhaṃsito.",
  "tha-ap491:12.1": "Vitakkavasiko hutvā,",
  "tha-ap491:12.2": "sāsanato apakkamiṃ;",
  "tha-ap491:12.3": "Pacchā tena kumittena,",
  "tha-ap491:12.4": "payutto mātughātanaṃ.",
  "tha-ap491:13.1": "Akariṃ ānantariyaṃ,",
  "tha-ap491:13.2": "ghātayiṃ duṭṭhamānaso;",
  "tha-ap491:13.3": "Tato cuto mahāvīciṃ,",
  "tha-ap491:13.4": "upapanno sudāruṇaṃ.",
  "tha-ap491:14.1": "Vinipātagato santo,",
  "tha-ap491:14.2": "saṃsariṃ dukkhito ciraṃ;",
  "tha-ap491:14.3": "Na puno addasaṃ vīraṃ,",
  "tha-ap491:14.4": "sumedhaṃ narapuṅgavaṃ.",
  "tha-ap491:15.1": "Asmiṃ kappe samuddamhi,",
  "tha-ap491:15.2": "maccho āsiṃ timiṅgalo;",
  "tha-ap491:15.3": "Disvāhaṃ sāgare nāvaṃ,",
  "tha-ap491:15.4": "gocaratthamupāgamiṃ.",
  "tha-ap491:16.1": "Disvā maṃ vāṇijā bhītā,",
  "tha-ap491:16.2": "buddhaseṭṭhamanussaruṃ;",
  "tha-ap491:16.3": "Gotamoti mahāghosaṃ,",
  "tha-ap491:16.4": "sutvā tehi udīritaṃ.",
  "tha-ap491:17.1": "Pubbasaññaṃ saritvāna,",
  "tha-ap491:17.2": "tato kālaṅkato ahaṃ;",
  "tha-ap491:17.3": "Sāvatthiyaṃ kule iddhe,",
  "tha-ap491:17.4": "jāto brāhmaṇajātiyaṃ.",
  "tha-ap491:18.1": "Āsiṃ dhammaruci nāma,",
  "tha-ap491:18.2": "sabbapāpajigucchako;",
  "tha-ap491:18.3": "Disvāhaṃ lokapajjotaṃ,",
  "tha-ap491:18.4": "jātiyā sattavassiko.",
  "tha-ap491:19.1": "Mahājetavanaṃ gantvā,",
  "tha-ap491:19.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap491:19.3": "Upemi buddhaṃ tikkhattuṃ,",
  "tha-ap491:19.4": "rattiyā divasassa ca.",
  "tha-ap491:20.1": "Tadā disvā muni āha,",
  "tha-ap491:20.2": "ciraṃ dhammarucīti maṃ;",
  "tha-ap491:20.3": "Tatohaṃ avacaṃ buddhaṃ,",
  "tha-ap491:20.4": "pubbakammapabhāvitaṃ.",
  "tha-ap491:21.1": "Suciraṃ satapuññalakkhaṇaṃ,",
  "tha-ap491:21.2": "Patipubbena visuddhapaccayaṃ;",
  "tha-ap491:21.3": "Ahamajjasupekkhanaṃ vata,",
  "tha-ap491:21.4": "Tava passāmi nirupamaṃ viggahaṃ.",
  "tha-ap491:22.1": "Suciraṃ vihatattamo mayā,",
  "tha-ap491:22.2": "Sucirakkhena nadī visositā;",
  "tha-ap491:22.3": "Suciraṃ amalaṃ visodhitaṃ,",
  "tha-ap491:22.4": "Nayanaṃ ñāṇamayaṃ mahāmune.",
  "tha-ap491:23.1": "Cirakālasamaṅgito tayā,",
  "tha-ap491:23.2": "Avinaṭṭho punarantaraṃ ciraṃ;",
  "tha-ap491:23.3": "Punarajjasamāgato tayā,",
  "tha-ap491:23.4": "Na hi nassanti katāni gotama.",
  "tha-ap491:24.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap491:24.2": "…pe…",
  "tha-ap491:24.3": "viharāmi anāsavo.",
  "tha-ap491:25.1": "Svāgataṃ vata me āsi,",
  "tha-ap491:25.2": "…pe…",
  "tha-ap491:25.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap491:26.1": "Paṭisambhidā catasso,",
  "tha-ap491:26.2": "…pe…",
  "tha-ap491:26.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap491:27.1": "Itthaṃ sudaṃ āyasmā dhammaruciyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap491:28.1": "Dhammaruciyattherassāpadānaṃ navamaṃ."
}