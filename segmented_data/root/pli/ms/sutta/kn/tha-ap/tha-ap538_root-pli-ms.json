{
  "tha-ap538:0.1": "Therāpadāna",
  "tha-ap538:0.2": "Kaccāyanavagga",
  "tha-ap538:0.3": "6. Bāhiyattheraapadāna",
  "tha-ap538:1.1": "“Ito satasahassamhi,",
  "tha-ap538:1.2": "kappe uppajji nāyako;",
  "tha-ap538:1.3": "Mahappabho tilokaggo,",
  "tha-ap538:1.4": "nāmena padumuttaro.",
  "tha-ap538:2.1": "Khippābhiññassa bhikkhussa,",
  "tha-ap538:2.2": "guṇaṁ kittayato mune;",
  "tha-ap538:2.3": "Sutvā udaggacittohaṁ,",
  "tha-ap538:2.4": "kāraṁ katvā mahesino.",
  "tha-ap538:3.1": "Datvā sattāhikaṁ dānaṁ,",
  "tha-ap538:3.2": "sasissassa mune ahaṁ;",
  "tha-ap538:3.3": "Abhivādiya sambuddhaṁ,",
  "tha-ap538:3.4": "taṁ ṭhānaṁ patthayiṁ tadā.",
  "tha-ap538:4.1": "Tato maṁ byākari buddho,",
  "tha-ap538:4.2": "‘etaṁ passatha brāhmaṇaṁ;",
  "tha-ap538:4.3": "Patitaṁ pādamūle me,",
  "tha-ap538:4.4": "cariyaṁ paccavekkhaṇaṁ.",
  "tha-ap538:5.1": "Hemayaññopacitaṅgaṁ,",
  "tha-ap538:5.2": "avadātatanuttacaṁ;",
  "tha-ap538:5.3": "Palambabimbatamboṭṭhaṁ,",
  "tha-ap538:5.4": "setatiṇhasamaṁ dijaṁ.",
  "tha-ap538:6.1": "Guṇathāmabahutaraṁ,",
  "tha-ap538:6.2": "samuggatatanūruhaṁ;",
  "tha-ap538:6.3": "Guṇoghāyatanībhūtaṁ,",
  "tha-ap538:6.4": "pītisamphullitānanaṁ.",
  "tha-ap538:7.1": "Eso patthayate ṭhānaṁ,",
  "tha-ap538:7.2": "khippābhiññassa bhikkhuno;",
  "tha-ap538:7.3": "Anāgate mahāvīro,",
  "tha-ap538:7.4": "gotamo nāma hessati.",
  "tha-ap538:8.1": "Tassa dhammesu dāyādo,",
  "tha-ap538:8.2": "oraso dhammanimmito;",
  "tha-ap538:8.3": "Bāhiyo nāma nāmena,",
  "tha-ap538:8.4": "hessati satthu sāvako’.",
  "tha-ap538:9.1": "Tadā hi tuṭṭho vuṭṭhāya,",
  "tha-ap538:9.2": "yāvajīvaṁ mahāmune;",
  "tha-ap538:9.3": "Kāraṁ katvā cuto saggaṁ,",
  "tha-ap538:9.4": "agaṁ sabhavanaṁ yathā.",
  "tha-ap538:10.1": "Devabhūto manusso vā,",
  "tha-ap538:10.2": "sukhito tassa kammuno;",
  "tha-ap538:10.3": "Vāhasā saṁsaritvāna,",
  "tha-ap538:10.4": "sampattimanubhomahaṁ.",
  "tha-ap538:11.1": "Puna kassapavīrassa,",
  "tha-ap538:11.2": "atthamentamhi sāsane;",
  "tha-ap538:11.3": "Āruyha selasikharaṁ,",
  "tha-ap538:11.4": "yuñjitvā jinasāsanaṁ.",
  "tha-ap538:12.1": "Visuddhasīlo sappañño,",
  "tha-ap538:12.2": "jinasāsanakārako;",
  "tha-ap538:12.3": "Tato cutā pañca janā,",
  "tha-ap538:12.4": "devalokaṁ agamhase.",
  "tha-ap538:13.1": "Tatohaṁ bāhiyo jāto,",
  "tha-ap538:13.2": "bhārukacche puruttame;",
  "tha-ap538:13.3": "Tato nāvāya pakkhando,",
  "tha-ap538:13.4": "sāgaraṁ appasiddhiyaṁ.",
  "tha-ap538:14.1": "Tato nāvā abhijjittha,",
  "tha-ap538:14.2": "gantvāna katipāhakaṁ;",
  "tha-ap538:14.3": "Tadā bhīsanake ghore,",
  "tha-ap538:14.4": "patito makarākare.",
  "tha-ap538:15.1": "Tadāhaṁ vāyamitvāna,",
  "tha-ap538:15.2": "santaritvā mahodadhiṁ;",
  "tha-ap538:15.3": "Suppārapaṭṭanavaraṁ,",
  "tha-ap538:15.4": "sampatto mandavedhito.",
  "tha-ap538:16.1": "Dārucīraṁ nivāsetvā,",
  "tha-ap538:16.2": "gāmaṁ piṇḍāya pāvisiṁ;",
  "tha-ap538:16.3": "Tadāha so jano tuṭṭho,",
  "tha-ap538:16.4": "‘arahāyamidhāgato.",
  "tha-ap538:17.1": "Imaṁ annena pānena,",
  "tha-ap538:17.2": "vatthena sayanena ca;",
  "tha-ap538:17.3": "Bhesajjena ca sakkatvā,",
  "tha-ap538:17.4": "hessāma sukhitā mayaṁ’.",
  "tha-ap538:18.1": "Paccayānaṁ tadā lābhī,",
  "tha-ap538:18.2": "tehi sakkatapūjito;",
  "tha-ap538:18.3": "Arahāhanti saṅkappaṁ,",
  "tha-ap538:18.4": "uppādesiṁ ayoniso.",
  "tha-ap538:19.1": "Tato me cittamaññāya,",
  "tha-ap538:19.2": "codayī pubbadevatā;",
  "tha-ap538:19.3": "‘Na tvaṁ upāyamaggaññū,",
  "tha-ap538:19.4": "kuto tvaṁ arahā bhave’.",
  "tha-ap538:20.1": "Codito tāya saṁviggo,",
  "tha-ap538:20.2": "tadāhaṁ paripucchi taṁ;",
  "tha-ap538:20.3": "‘Ke vā ete kuhiṁ loke,",
  "tha-ap538:20.4": "arahanto naruttamā’.",
  "tha-ap538:21.1": "‘Sāvatthiyaṁ kosalamandire jino,",
  "tha-ap538:21.2": "Pahūtapañño varabhūrimedhaso;",
  "tha-ap538:21.3": "So sakyaputto arahā anāsavo,",
  "tha-ap538:21.4": "Deseti dhammaṁ arahattapattiyā’.",
  "tha-ap538:22.1": "Tadassa sutvā vacanaṁ supīṇito,",
  "tha-ap538:22.2": "Nidhiṁva laddhā kapaṇoti vimhito;",
  "tha-ap538:22.3": "Udaggacitto arahattamuttamaṁ,",
  "tha-ap538:22.4": "Sudassanaṁ daṭṭhumanantagocaraṁ.",
  "tha-ap538:23.1": "Tadā tato nikkhamitvāna ‘satthuno,",
  "tha-ap538:23.2": "Sadā jinaṁ passāmi vimalānanaṁ’;",
  "tha-ap538:23.3": "Upecca rammaṁ vijitavhayaṁ vanaṁ,",
  "tha-ap538:23.4": "Dije apucchiṁ ‘kuhiṁ lokanandano’.",
  "tha-ap538:24.1": "‘Tato avocuṁ naradevavandito,",
  "tha-ap538:24.2": "Puraṁ paviṭṭho asanesanāya so;",
  "tha-ap538:24.3": "Sasova khippaṁ munidassanussuko,",
  "tha-ap538:24.4": "Upecca vandāhi tamaggapuggalaṁ’.",
  "tha-ap538:25.1": "Tatohaṁ tuvaṭaṁ gantvā,",
  "tha-ap538:25.2": "sāvatthiṁ puramuttamaṁ;",
  "tha-ap538:25.3": "Vicarantaṁ tamaddakkhiṁ,",
  "tha-ap538:25.4": "piṇḍatthaṁ apihāgidhaṁ.",
  "tha-ap538:26.1": "Pattapāṇiṁ alolakkhaṁ,",
  "tha-ap538:26.2": "pācayantaṁ pītākaraṁ;",
  "tha-ap538:26.3": "Sirīnilayasaṅkāsaṁ,",
  "tha-ap538:26.4": "ravidittiharānanaṁ.",
  "tha-ap538:27.1": "Taṁ samecca nipaccāhaṁ,",
  "tha-ap538:27.2": "idaṁ vacanamabraviṁ;",
  "tha-ap538:27.3": "‘Kupathe vippanaṭṭhassa,",
  "tha-ap538:27.4": "saraṇaṁ hohi gotama’.",
  "tha-ap538:28.1": "‘Pāṇasantāraṇatthāya,",
  "tha-ap538:28.2": "piṇḍāya vicarāmahaṁ;",
  "tha-ap538:28.3": "Na te dhammakathākālo’,",
  "tha-ap538:28.4": "iccāha munisattamo.",
  "tha-ap538:29.1": "Tadā punappunaṁ buddhaṁ,",
  "tha-ap538:29.2": "āyāciṁ dhammalālaso;",
  "tha-ap538:29.3": "Yo me dhammamadesesi,",
  "tha-ap538:29.4": "gambhīraṁ suññataṁ padaṁ.",
  "tha-ap538:30.1": "Tassa dhammaṁ suṇitvāna,",
  "tha-ap538:30.2": "pāpuṇiṁ āsavakkhayaṁ;",
  "tha-ap538:30.3": "Parikkhīṇāyuko santo,",
  "tha-ap538:30.4": "aho satthānukampako.",
  "tha-ap538:31.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap538:31.2": "…pe…",
  "tha-ap538:31.3": "viharāmi anāsavo.",
  "tha-ap538:32.1": "Svāgataṁ vata me āsi,",
  "tha-ap538:32.2": "…pe…",
  "tha-ap538:32.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap538:33.1": "Paṭisambhidā catasso,",
  "tha-ap538:33.2": "…pe…",
  "tha-ap538:33.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap538:34.1": "Evaṁ thero viyākāsi,",
  "tha-ap538:34.2": "bāhiyo dārucīriyo;",
  "tha-ap538:34.3": "Saṅkārakūṭe patito,",
  "tha-ap538:34.4": "bhūtāviṭṭhāya gāviyā.",
  "tha-ap538:35.1": "Attano pubbacariyaṁ,",
  "tha-ap538:35.2": "kittayitvā mahāmati;",
  "tha-ap538:35.3": "Parinibbāyi so thero,",
  "tha-ap538:35.4": "sāvatthiyaṁ puruttame.",
  "tha-ap538:36.1": "Nagarā nikkhamanto taṁ,",
  "tha-ap538:36.2": "disvāna isisattamo;",
  "tha-ap538:36.3": "Dārucīradharaṁ dhīraṁ,",
  "tha-ap538:36.4": "bāhiyaṁ bāhitāgamaṁ.",
  "tha-ap538:37.1": "Bhūmiyaṁ patitaṁ dantaṁ,",
  "tha-ap538:37.2": "indaketūva pātitaṁ;",
  "tha-ap538:37.3": "Gatāyuṁ sukkhakilesaṁ,",
  "tha-ap538:37.4": "jinasāsanakārakaṁ.",
  "tha-ap538:38.1": "Tato āmantayī satthā,",
  "tha-ap538:38.2": "sāvake sāsane rate;",
  "tha-ap538:38.3": "‘Gaṇhatha netvā jhāpetha,",
  "tha-ap538:38.4": "tanuṁ sabrahmacārino.",
  "tha-ap538:39.1": "Thūpaṁ karotha pūjetha,",
  "tha-ap538:39.2": "nibbuto so mahāmati;",
  "tha-ap538:39.3": "Khippābhiññānamesaggo,",
  "tha-ap538:39.4": "sāvako me vacokaro.",
  "tha-ap538:40.1": "Sahassamapi ce gāthā,",
  "tha-ap538:40.2": "anatthapadasañhitā;",
  "tha-ap538:40.3": "Ekaṁ gāthāpadaṁ seyyo,",
  "tha-ap538:40.4": "yaṁ sutvā upasammati.",
  "tha-ap538:41.1": "Yattha āpo ca pathavī,",
  "tha-ap538:41.2": "tejo vāyo na gādhati;",
  "tha-ap538:41.3": "Na tattha sukkā jotanti,",
  "tha-ap538:41.4": "ādicco na pakāsati.",
  "tha-ap538:42.1": "Na tattha candimā bhāti,",
  "tha-ap538:42.2": "tamo tattha na vijjati;",
  "tha-ap538:42.3": "Yadā ca attanā vedi,",
  "tha-ap538:42.4": "munimonena brāhmaṇo.",
  "tha-ap538:43.1": "Atha rūpā arūpā ca,",
  "tha-ap538:43.2": "sukhadukkhā vimuccati’;",
  "tha-ap538:43.3": "Iccevaṁ abhaṇī nātho,",
  "tha-ap538:43.4": "tilokasaraṇo muni”.",
  "tha-ap538:44.1": "Itthaṁ sudaṁ āyasmā bāhiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap538:45.1": "Bāhiyattherassāpadānaṁ chaṭṭhaṁ."
}