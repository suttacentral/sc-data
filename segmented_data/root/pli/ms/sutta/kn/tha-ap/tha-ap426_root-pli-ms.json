{
  "tha-ap426:0.1": "Therāpadāna",
  "tha-ap426:0.2": "Sakiṁsammajjakavagga",
  "tha-ap426:0.3": "4. Sattakadambapupphiyattheraapadāna",
  "tha-ap426:1.1": "“Himavantassāvidūre,",
  "tha-ap426:1.2": "kukkuṭo nāma pabbato;",
  "tha-ap426:1.3": "Tamhi pabbatapādamhi,",
  "tha-ap426:1.4": "satta buddhā vasiṁsu te.",
  "tha-ap426:2.1": "Kadambaṁ pupphitaṁ disvā,",
  "tha-ap426:2.2": "paggahetvāna añjaliṁ;",
  "tha-ap426:2.3": "Satta mālā gahetvāna,",
  "tha-ap426:2.4": "puññacittena okiriṁ.",
  "tha-ap426:3.1": "Tena kammena sukatena,",
  "tha-ap426:3.2": "cetanāpaṇidhīhi ca;",
  "tha-ap426:3.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap426:3.4": "tāvatiṁsamagacchahaṁ.",
  "tha-ap426:4.1": "Catunnavutito kappe,",
  "tha-ap426:4.2": "yaṁ kammamakariṁ tadā;",
  "tha-ap426:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap426:4.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap426:5.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap426:5.2": "…pe…",
  "tha-ap426:5.3": "viharāmi anāsavo.",
  "tha-ap426:6.1": "Svāgataṁ vata me āsi,",
  "tha-ap426:6.2": "…pe…",
  "tha-ap426:6.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap426:7.1": "Paṭisambhidā catasso,",
  "tha-ap426:7.2": "…pe…",
  "tha-ap426:7.3": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap426:8.1": "Itthaṁ sudaṁ āyasmā sattakadambapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap426:9.1": "Sattakadambapupphiyattherassāpadānaṁ catutthaṁ."
}