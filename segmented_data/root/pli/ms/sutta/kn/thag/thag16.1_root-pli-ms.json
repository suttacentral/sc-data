{
  "thag16.1:0.1": "Theragāthā",
  "thag16.1:0.2": "Vīsatinipāta",
  "thag16.1:0.3": "Paṭhamavagga",
  "thag16.1:0.4": "16.1. Adhimuttattheragāthā",
  "thag16.1:1.1": "“Yaññatthaṁ vā dhanatthaṁ vā,",
  "thag16.1:1.2": "ye hanāma mayaṁ pure;",
  "thag16.1:1.3": "Avasesaṁ bhayaṁ hoti,",
  "thag16.1:1.4": "vedhanti vilapanti ca.",
  "thag16.1:2.1": "Tassa te natthi bhītattaṁ,",
  "thag16.1:2.2": "bhiyyo vaṇṇo pasīdati;",
  "thag16.1:2.3": "Kasmā na paridevesi,",
  "thag16.1:2.4": "evarūpe mahabbhaye”.",
  "thag16.1:3.1": "“Natthi cetasikaṁ dukkhaṁ,",
  "thag16.1:3.2": "anapekkhassa gāmaṇi;",
  "thag16.1:3.3": "Atikkantā bhayā sabbe,",
  "thag16.1:3.4": "khīṇasaṁyojanassa ve.",
  "thag16.1:4.1": "Khīṇāya bhavanettiyā,",
  "thag16.1:4.2": "diṭṭhe dhamme yathātathe;",
  "thag16.1:4.3": "Na bhayaṁ maraṇe hoti,",
  "thag16.1:4.4": "bhāranikkhepane yathā.",
  "thag16.1:5.1": "Suciṇṇaṁ brahmacariyaṁ me,",
  "thag16.1:5.2": "maggo cāpi subhāvito;",
  "thag16.1:5.3": "Maraṇe me bhayaṁ natthi,",
  "thag16.1:5.4": "rogānamiva saṅkhaye.",
  "thag16.1:6.1": "Suciṇṇaṁ brahmacariyaṁ me,",
  "thag16.1:6.2": "maggo cāpi subhāvito;",
  "thag16.1:6.3": "Nirassādā bhavā diṭṭhā,",
  "thag16.1:6.4": "visaṁ pitvāva chaḍḍitaṁ.",
  "thag16.1:7.1": "Pāragū anupādāno,",
  "thag16.1:7.2": "katakicco anāsavo;",
  "thag16.1:7.3": "Tuṭṭho āyukkhayā hoti,",
  "thag16.1:7.4": "mutto āghātanā yathā.",
  "thag16.1:8.1": "Uttamaṁ dhammataṁ patto,",
  "thag16.1:8.2": "sabbaloke anatthiko;",
  "thag16.1:8.3": "Ādittāva gharā mutto,",
  "thag16.1:8.4": "maraṇasmiṁ na socati.",
  "thag16.1:9.1": "Yadatthi saṅgataṁ kiñci,",
  "thag16.1:9.2": "bhavo vā yattha labbhati;",
  "thag16.1:9.3": "Sabbaṁ anissaraṁ etaṁ,",
  "thag16.1:9.4": "iti vuttaṁ mahesinā.",
  "thag16.1:10.1": "Yo taṁ tathā pajānāti,",
  "thag16.1:10.2": "yathā buddhena desitaṁ;",
  "thag16.1:10.3": "Na gaṇhāti bhavaṁ kiñci,",
  "thag16.1:10.4": "sutattaṁva ayoguḷaṁ.",
  "thag16.1:11.1": "Na me hoti ‘ahosin’ti,",
  "thag16.1:11.2": "‘bhavissan’ti na hoti me;",
  "thag16.1:11.3": "Saṅkhārā vigamissanti,",
  "thag16.1:11.4": "tattha kā paridevanā.",
  "thag16.1:12.1": "Suddhaṁ dhammasamuppādaṁ,",
  "thag16.1:12.2": "Suddhaṁ saṅkhārasantatiṁ;",
  "thag16.1:12.3": "Passantassa yathābhūtaṁ,",
  "thag16.1:12.4": "Na bhayaṁ hoti gāmaṇi.",
  "thag16.1:13.1": "Tiṇakaṭṭhasamaṁ lokaṁ,",
  "thag16.1:13.2": "yadā paññāya passati;",
  "thag16.1:13.3": "Mamattaṁ so asaṁvindaṁ,",
  "thag16.1:13.4": "‘natthi me’ti na socati.",
  "thag16.1:14.1": "Ukkaṇṭhāmi sarīrena,",
  "thag16.1:14.2": "bhavenamhi anatthiko;",
  "thag16.1:14.3": "Soyaṁ bhijjissati kāyo,",
  "thag16.1:14.4": "añño ca na bhavissati.",
  "thag16.1:15.1": "Yaṁ vo kiccaṁ sarīrena,",
  "thag16.1:15.2": "taṁ karotha yadicchatha;",
  "thag16.1:15.3": "Na me tappaccayā tattha,",
  "thag16.1:15.4": "doso pemañca hehiti”.",
  "thag16.1:16.1": "Tassa taṁ vacanaṁ sutvā,",
  "thag16.1:16.2": "abbhutaṁ lomahaṁsanaṁ;",
  "thag16.1:16.3": "Satthāni nikkhipitvāna,",
  "thag16.1:16.4": "māṇavā etadabravuṁ.",
  "thag16.1:17.1": "“Kiṁ bhadante karitvāna,",
  "thag16.1:17.2": "ko vā ācariyo tava;",
  "thag16.1:17.3": "Kassa sāsanamāgamma,",
  "thag16.1:17.4": "labbhate taṁ asokatā”.",
  "thag16.1:18.1": "“Sabbaññū sabbadassāvī,",
  "thag16.1:18.2": "jino ācariyo mama;",
  "thag16.1:18.3": "Mahākāruṇiko satthā,",
  "thag16.1:18.4": "sabbalokatikicchako.",
  "thag16.1:19.1": "Tenāyaṁ desito dhammo,",
  "thag16.1:19.2": "khayagāmī anuttaro;",
  "thag16.1:19.3": "Tassa sāsanamāgamma,",
  "thag16.1:19.4": "labbhate taṁ asokatā”.",
  "thag16.1:20.1": "Sutvāna corā isino subhāsitaṁ,",
  "thag16.1:20.2": "Nikkhippa satthāni ca āvudhāni ca;",
  "thag16.1:20.3": "Tamhā ca kammā viramiṁsu eke,",
  "thag16.1:20.4": "Eke ca pabbajjamarocayiṁsu.",
  "thag16.1:21.1": "Te pabbajitvā sugatassa sāsane,",
  "thag16.1:21.2": "Bhāvetva bojjhaṅgabalāni paṇḍitā;",
  "thag16.1:21.3": "Udaggacittā sumanā katindriyā,",
  "thag16.1:21.4": "Phusiṁsu nibbānapadaṁ asaṅkhatanti.",
  "thag16.1:21.5": "… Adhimutto thero …."
}