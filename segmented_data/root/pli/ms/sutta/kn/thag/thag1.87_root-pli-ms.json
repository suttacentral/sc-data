{
  "thag1.87:0.1": "Theragāthā",
  "thag1.87:0.2": "Ekakanipāta",
  "thag1.87:0.3": "Navamavagga",
  "thag1.87:0.4": "1.87. Paviṭṭhattheragāthā",
  "thag1.87:1.1": "“Khandhā diṭṭhā yathābhūtaṁ,",
  "thag1.87:1.2": "bhavā sabbe padālitā;",
  "thag1.87:1.3": "Vikkhīṇo jātisaṁsāro,",
  "thag1.87:1.4": "natthi dāni punabbhavo”ti.",
  "thag1.87:1.5": "… Paviṭṭho thero …."
}