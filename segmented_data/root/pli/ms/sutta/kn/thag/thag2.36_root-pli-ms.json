{
  "thag2.36:0.1": "Theragāthā",
  "thag2.36:0.2": "Dukanipāta",
  "thag2.36:0.3": "Catutthavagga",
  "thag2.36:0.4": "2.36 Nitakattheragāthā",
  "thag2.36:1.1": "“Kassa selūpamaṁ cittaṁ,",
  "thag2.36:1.2": "ṭhitaṁ nānupakampati;",
  "thag2.36:1.3": "Virattaṁ rajanīyesu,",
  "thag2.36:1.4": "kuppanīye na kuppati;",
  "thag2.36:1.5": "Yassevaṁ bhāvitaṁ cittaṁ,",
  "thag2.36:1.6": "kuto taṁ dukkhamessati.",
  "thag2.36:2.1": "Mama selūpamaṁ cittaṁ,",
  "thag2.36:2.2": "ṭhitaṁ nānupakampati;",
  "thag2.36:2.3": "Virattaṁ rajanīyesu,",
  "thag2.36:2.4": "kuppanīye na kuppati;",
  "thag2.36:2.5": "Mamevaṁ bhāvitaṁ cittaṁ,",
  "thag2.36:2.6": "kuto maṁ dukkhamessatī”ti.",
  "thag2.36:2.7": "… Nitako thero …."
}