{
  "thag10.4:0.1": "Theragāthā",
  "thag10.4:0.2": "Dasakanipāta",
  "thag10.4:0.3": "Paṭhamavagga",
  "thag10.4:0.4": "10.4. Cūḷapanthakattheragāthā",
  "thag10.4:1.1": "“Dandhā mayhaṁ gatī āsi,",
  "thag10.4:1.2": "paribhūto pure ahaṁ;",
  "thag10.4:1.3": "Bhātā ca maṁ paṇāmesi,",
  "thag10.4:1.4": "‘gaccha dāni tuvaṁ gharaṁ’.",
  "thag10.4:2.1": "Sohaṁ paṇāmito santo,",
  "thag10.4:2.2": "saṅghārāmassa koṭṭhake;",
  "thag10.4:2.3": "Dummano tattha aṭṭhāsiṁ,",
  "thag10.4:2.4": "sāsanasmiṁ apekkhavā.",
  "thag10.4:3.1": "Bhagavā tattha āgacchi,",
  "thag10.4:3.2": "sīsaṁ mayhaṁ parāmasi;",
  "thag10.4:3.3": "Bāhāya maṁ gahetvāna,",
  "thag10.4:3.4": "saṅghārāmaṁ pavesayi.",
  "thag10.4:4.1": "Anukampāya me satthā,",
  "thag10.4:4.2": "pādāsi pādapuñchaniṁ;",
  "thag10.4:4.3": "‘Etaṁ suddhaṁ adhiṭṭhehi,",
  "thag10.4:4.4": "ekamantaṁ svadhiṭṭhitaṁ’.",
  "thag10.4:5.1": "Tassāhaṁ vacanaṁ sutvā,",
  "thag10.4:5.2": "vihāsiṁ sāsane rato;",
  "thag10.4:5.3": "Samādhiṁ paṭipādesiṁ,",
  "thag10.4:5.4": "uttamatthassa pattiyā.",
  "thag10.4:6.1": "Pubbenivāsaṁ jānāmi,",
  "thag10.4:6.2": "dibbacakkhu visodhitaṁ;",
  "thag10.4:6.3": "Tisso vijjā anuppattā,",
  "thag10.4:6.4": "kataṁ buddhassa sāsanaṁ.",
  "thag10.4:7.1": "Sahassakkhattumattānaṁ,",
  "thag10.4:7.2": "nimminitvāna panthako;",
  "thag10.4:7.3": "Nisīdambavane ramme,",
  "thag10.4:7.4": "yāva kālappavedanā.",
  "thag10.4:8.1": "Tato me satthā pāhesi,",
  "thag10.4:8.2": "dūtaṁ kālappavedakaṁ;",
  "thag10.4:8.3": "Paveditamhi kālamhi,",
  "thag10.4:8.4": "vehāsādupasaṅkamiṁ.",
  "thag10.4:9.1": "Vanditvā satthuno pāde,",
  "thag10.4:9.2": "ekamantaṁ nisīdahaṁ;",
  "thag10.4:9.3": "Nisinnaṁ maṁ viditvāna,",
  "thag10.4:9.4": "atha satthā paṭiggahi.",
  "thag10.4:10.1": "Āyāgo sabbalokassa,",
  "thag10.4:10.2": "āhutīnaṁ paṭiggaho;",
  "thag10.4:10.3": "Puññakkhettaṁ manussānaṁ,",
  "thag10.4:10.4": "paṭiggaṇhittha dakkhiṇan”ti.",
  "thag10.4:10.5": "… Cūḷapanthako thero …."
}