{
  "thag3.14:0.1": "Theragāthā",
  "thag3.14:0.2": "Tikanipāta",
  "thag3.14:0.3": "Paṭhamavagga",
  "thag3.14:0.4": "3.14. Gotamattheragāthā",
  "thag3.14:1.1": "“Saṁsaraṁ hi nirayaṁ agacchissaṁ,",
  "thag3.14:1.2": "Petalokamagamaṁ punappunaṁ;",
  "thag3.14:1.3": "Dukkhamamhipi tiracchānayoniyaṁ,",
  "thag3.14:1.4": "Nekadhā hi vusitaṁ ciraṁ mayā.",
  "thag3.14:2.1": "Mānusopi ca bhavobhirādhito,",
  "thag3.14:2.2": "Saggakāyamagamaṁ sakiṁ sakiṁ;",
  "thag3.14:2.3": "Rūpadhātusu arūpadhātusu,",
  "thag3.14:2.4": "Nevasaññisu asaññisuṭṭhitaṁ.",
  "thag3.14:3.1": "Sambhavā suviditā asārakā,",
  "thag3.14:3.2": "Saṅkhatā pacalitā saderitā;",
  "thag3.14:3.3": "Taṁ viditvā mahamattasambhavaṁ,",
  "thag3.14:3.4": "Santimeva satimā samajjhagan”ti.",
  "thag3.14:3.5": "… Gotamo thero …."
}