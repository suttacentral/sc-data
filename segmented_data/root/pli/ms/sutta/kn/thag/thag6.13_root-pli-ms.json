{
  "thag6.13:0.1": "Theragāthā",
  "thag6.13:0.2": "Chakkanipāta",
  "thag6.13:0.3": "Paṭhamavagga",
  "thag6.13:0.4": "6.13 Sirimaṇḍattheragāthā",
  "thag6.13:1.1": "“Channamativassati,",
  "thag6.13:1.2": "vivaṭaṁ nātivassati;",
  "thag6.13:1.3": "Tasmā channaṁ vivaretha,",
  "thag6.13:1.4": "evaṁ taṁ nātivassati.",
  "thag6.13:2.1": "Maccunābbhahato loko,",
  "thag6.13:2.2": "jarāya parivārito;",
  "thag6.13:2.3": "Taṇhāsallena otiṇṇo,",
  "thag6.13:2.4": "icchādhūpāyito sadā.",
  "thag6.13:3.1": "Maccunābbhahato loko,",
  "thag6.13:3.2": "parikkhitto jarāya ca;",
  "thag6.13:3.3": "Haññati niccamattāṇo,",
  "thag6.13:3.4": "pattadaṇḍova takkaro.",
  "thag6.13:4.1": "Āgacchantaggikhandhāva,",
  "thag6.13:4.2": "maccu byādhi jarā tayo;",
  "thag6.13:4.3": "Paccuggantuṁ balaṁ natthi,",
  "thag6.13:4.4": "javo natthi palāyituṁ.",
  "thag6.13:5.1": "Amoghaṁ divasaṁ kayirā,",
  "thag6.13:5.2": "appena bahukena vā;",
  "thag6.13:5.3": "Yaṁ yaṁ vijahate rattiṁ,",
  "thag6.13:5.4": "tadūnaṁ tassa jīvitaṁ.",
  "thag6.13:6.1": "Carato tiṭṭhato vāpi,",
  "thag6.13:6.2": "āsīnasayanassa vā;",
  "thag6.13:6.3": "Upeti carimā ratti,",
  "thag6.13:6.4": "na te kālo pamajjitun”ti.",
  "thag6.13:6.5": "… Sirimaṇḍo thero …."
}