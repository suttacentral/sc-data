{
  "thag6.6:0.1": "Theragāthā",
  "thag6.6:0.2": "Chakkanipāta",
  "thag6.6:0.3": "Paṭhamavagga",
  "thag6.6:0.4": "6.6. Sappadāsattheragāthā",
  "thag6.6:1.1": "“Paṇṇavīsativassāni,",
  "thag6.6:1.2": "yato pabbajito ahaṁ;",
  "thag6.6:1.3": "Accharāsaṅghātamattampi,",
  "thag6.6:1.4": "cetosantimanajjhagaṁ.",
  "thag6.6:2.1": "Aladdhā cittassekaggaṁ,",
  "thag6.6:2.2": "kāmarāgena aṭṭito;",
  "thag6.6:2.3": "Bāhā paggayha kandanto,",
  "thag6.6:2.4": "vihārā upanikkhamiṁ.",
  "thag6.6:3.1": "Satthaṁ vā āharissāmi,",
  "thag6.6:3.2": "Ko attho jīvitena me;",
  "thag6.6:3.3": "Kathaṁ hi sikkhaṁ paccakkhaṁ,",
  "thag6.6:3.4": "Kālaṁ kubbetha mādiso.",
  "thag6.6:4.1": "Tadāhaṁ khuramādāya,",
  "thag6.6:4.2": "mañcakamhi upāvisiṁ;",
  "thag6.6:4.3": "Parinīto khuro āsi,",
  "thag6.6:4.4": "dhamaniṁ chettumattano.",
  "thag6.6:5.1": "Tato me manasīkāro,",
  "thag6.6:5.2": "yoniso udapajjatha;",
  "thag6.6:5.3": "Ādīnavo pāturahu,",
  "thag6.6:5.4": "nibbidā samatiṭṭhatha.",
  "thag6.6:6.1": "Tato cittaṁ vimucci me,",
  "thag6.6:6.2": "passa dhammasudhammataṁ;",
  "thag6.6:6.3": "Tisso vijjā anuppattā,",
  "thag6.6:6.4": "kataṁ buddhassa sāsanan”ti.",
  "thag6.6:6.5": "… Sappadāso thero …."
}