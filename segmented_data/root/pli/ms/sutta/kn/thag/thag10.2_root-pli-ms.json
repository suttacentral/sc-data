{
  "thag10.2:0.1": "Theragāthā",
  "thag10.2:0.2": "Dasakanipāta",
  "thag10.2:0.3": "Paṭhamavagga",
  "thag10.2:0.4": "10.2. Ekavihāriyattheragāthā",
  "thag10.2:1.1": "“Purato pacchato vāpi,",
  "thag10.2:1.2": "aparo ce na vijjati;",
  "thag10.2:1.3": "Atīva phāsu bhavati,",
  "thag10.2:1.4": "ekassa vasato vane.",
  "thag10.2:2.1": "Handa eko gamissāmi,",
  "thag10.2:2.2": "araññaṁ buddhavaṇṇitaṁ;",
  "thag10.2:2.3": "Phāsu ekavihārissa,",
  "thag10.2:2.4": "pahitattassa bhikkhuno.",
  "thag10.2:3.1": "Yogi-pītikaraṁ rammaṁ,",
  "thag10.2:3.2": "mattakuñjarasevitaṁ;",
  "thag10.2:3.3": "Eko attavasī khippaṁ,",
  "thag10.2:3.4": "pavisissāmi kānanaṁ.",
  "thag10.2:4.1": "Supupphite sītavane,",
  "thag10.2:4.2": "sītale girikandare;",
  "thag10.2:4.3": "Gattāni parisiñcitvā,",
  "thag10.2:4.4": "caṅkamissāmi ekako.",
  "thag10.2:5.1": "Ekākiyo adutiyo,",
  "thag10.2:5.2": "ramaṇīye mahāvane;",
  "thag10.2:5.3": "Kadāhaṁ viharissāmi,",
  "thag10.2:5.4": "katakicco anāsavo.",
  "thag10.2:6.1": "Evaṁ me kattukāmassa,",
  "thag10.2:6.2": "adhippāyo samijjhatu;",
  "thag10.2:6.3": "Sādhayissāmahaṁyeva,",
  "thag10.2:6.4": "nāñño aññassa kārako.",
  "thag10.2:7.1": "Esa bandhāmi sannāhaṁ,",
  "thag10.2:7.2": "pavisissāmi kānanaṁ;",
  "thag10.2:7.3": "Na tato nikkhamissāmi,",
  "thag10.2:7.4": "appatto āsavakkhayaṁ.",
  "thag10.2:8.1": "Mālute upavāyante,",
  "thag10.2:8.2": "sīte surabhigandhike;",
  "thag10.2:8.3": "Avijjaṁ dālayissāmi,",
  "thag10.2:8.4": "nisinno nagamuddhani.",
  "thag10.2:9.1": "Vane kusumasañchanne,",
  "thag10.2:9.2": "pabbhāre nūna sītale;",
  "thag10.2:9.3": "Vimuttisukhena sukhito,",
  "thag10.2:9.4": "ramissāmi giribbaje.",
  "thag10.2:10.1": "Sohaṁ paripuṇṇasaṅkappo,",
  "thag10.2:10.2": "cando pannaraso yathā;",
  "thag10.2:10.3": "Sabbāsavaparikkhīṇo,",
  "thag10.2:10.4": "natthi dāni punabbhavo”ti.",
  "thag10.2:10.5": "… Ekavihāriyo thero …."
}