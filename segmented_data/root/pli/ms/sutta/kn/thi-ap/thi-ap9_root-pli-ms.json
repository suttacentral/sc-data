{
  "thi-ap9:0.1": "Therīapadāna",
  "thi-ap9:0.2": "Sumedhāvagga",
  "thi-ap9:0.3": "9. Pañcadīpikātherīapadāna",
  "thi-ap9:1.1": "“Nagare haṁsavatiyā,",
  "thi-ap9:1.2": "cārikī āsahaṁ tadā;",
  "thi-ap9:1.3": "Ārāmena ca ārāmaṁ,",
  "thi-ap9:1.4": "carāmi kusalatthikā.",
  "thi-ap9:2.1": "Kāḷapakkhamhi divase,",
  "thi-ap9:2.2": "addasaṁ bodhimuttamaṁ;",
  "thi-ap9:2.3": "Tattha cittaṁ pasādetvā,",
  "thi-ap9:2.4": "bodhimūle nisīdahaṁ.",
  "thi-ap9:3.1": "Garucittaṁ upaṭṭhetvā,",
  "thi-ap9:3.2": "sire katvāna añjaliṁ;",
  "thi-ap9:3.3": "Somanassaṁ pavedetvā,",
  "thi-ap9:3.4": "evaṁ cintesi tāvade.",
  "thi-ap9:4.1": "‘Yadi buddho amitaguṇo,",
  "thi-ap9:4.2": "asamappaṭipuggalo;",
  "thi-ap9:4.3": "Dassetu pāṭihīraṁ me,",
  "thi-ap9:4.4": "bodhi obhāsatu ayaṁ’.",
  "thi-ap9:5.1": "Saha āvajjite mayhaṁ,",
  "thi-ap9:5.2": "bodhi pajjali tāvade;",
  "thi-ap9:5.3": "Sabbasoṇṇamayā āsi,",
  "thi-ap9:5.4": "disā sabbā virocati.",
  "thi-ap9:6.1": "Sattarattindivaṁ tattha,",
  "thi-ap9:6.2": "bodhimūle nisīdahaṁ;",
  "thi-ap9:6.3": "Sattame divase patte,",
  "thi-ap9:6.4": "dīpapūjaṁ akāsahaṁ.",
  "thi-ap9:7.1": "Āsanaṁ parivāretvā,",
  "thi-ap9:7.2": "pañca dīpāni pajjaluṁ;",
  "thi-ap9:7.3": "Yāva udeti sūriyo,",
  "thi-ap9:7.4": "dīpā me pajjaluṁ tadā.",
  "thi-ap9:8.1": "Tena kammena sukatena,",
  "thi-ap9:8.2": "cetanāpaṇidhīhi ca;",
  "thi-ap9:8.3": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap9:8.4": "tāvatiṁsamagacchahaṁ.",
  "thi-ap9:9.1": "Tattha me sukataṁ byamhaṁ,",
  "thi-ap9:9.2": "pañcadīpāti vuccati;",
  "thi-ap9:9.3": "Saṭṭhiyojanamubbedhaṁ,",
  "thi-ap9:9.4": "tiṁsayojanavitthataṁ.",
  "thi-ap9:10.1": "Asaṅkhiyāni dīpāni,",
  "thi-ap9:10.2": "parivāre jalanti me;",
  "thi-ap9:10.3": "Yāvatā devabhavanaṁ,",
  "thi-ap9:10.4": "dīpālokena jotati.",
  "thi-ap9:11.1": "Parammukhā nisīditvā,",
  "thi-ap9:11.2": "yadi icchāmi passituṁ;",
  "thi-ap9:11.3": "Uddhaṁ adho ca tiriyaṁ,",
  "thi-ap9:11.4": "sabbaṁ passāmi cakkhunā.",
  "thi-ap9:12.1": "Yāvatā abhikaṅkhāmi,",
  "thi-ap9:12.2": "daṭṭhuṁ sugataduggate;",
  "thi-ap9:12.3": "Tattha āvaraṇaṁ natthi,",
  "thi-ap9:12.4": "rukkhesu pabbatesu vā.",
  "thi-ap9:13.1": "Asīti devarājūnaṁ,",
  "thi-ap9:13.2": "mahesittamakārayiṁ;",
  "thi-ap9:13.3": "Satānaṁ cakkavattīnaṁ,",
  "thi-ap9:13.4": "mahesittamakārayiṁ.",
  "thi-ap9:14.1": "Yaṁ yaṁ yonupapajjāmi,",
  "thi-ap9:14.2": "devattaṁ atha mānusaṁ;",
  "thi-ap9:14.3": "Dīpasatasahassāni,",
  "thi-ap9:14.4": "parivāre jalanti me.",
  "thi-ap9:15.1": "Devalokā cavitvāna,",
  "thi-ap9:15.2": "uppajjiṁ mātukucchiyaṁ;",
  "thi-ap9:15.3": "Mātukucchigatā santī,",
  "thi-ap9:15.4": "akkhi me na nimīlati.",
  "thi-ap9:16.1": "Dīpasatasahassāni,",
  "thi-ap9:16.2": "puññakammasamaṅgitā;",
  "thi-ap9:16.3": "Jalanti sūtikāgehe,",
  "thi-ap9:16.4": "pañcadīpānidaṁ phalaṁ.",
  "thi-ap9:17.1": "Pacchime bhave sampatte,",
  "thi-ap9:17.2": "mānasaṁ vinivattayiṁ;",
  "thi-ap9:17.3": "Ajarāmataṁ sītibhāvaṁ,",
  "thi-ap9:17.4": "nibbānaṁ phassayiṁ ahaṁ.",
  "thi-ap9:18.1": "Jātiyā sattavassāhaṁ,",
  "thi-ap9:18.2": "arahattamapāpuṇiṁ;",
  "thi-ap9:18.3": "Upasampādayī buddho,",
  "thi-ap9:18.4": "guṇamaññāya gotamo.",
  "thi-ap9:19.1": "Maṇḍape rukkhamūle vā,",
  "thi-ap9:19.2": "pāsādesu guhāsu vā;",
  "thi-ap9:19.3": "Suññāgāre vasantiyā,",
  "thi-ap9:19.4": "pañcadīpā jalanti me.",
  "thi-ap9:20.1": "Dibbacakkhuvisuddhaṁ me,",
  "thi-ap9:20.2": "samādhikusalā ahaṁ;",
  "thi-ap9:20.3": "Abhiññāpāramippattā,",
  "thi-ap9:20.4": "pañcadīpānidaṁ phalaṁ.",
  "thi-ap9:21.1": "Sabbavositavosānā,",
  "thi-ap9:21.2": "katakiccā anāsavā;",
  "thi-ap9:21.3": "Pañcadīpā mahāvīra,",
  "thi-ap9:21.4": "pāde vandāmi cakkhuma.",
  "thi-ap9:22.1": "Satasahassito kappe,",
  "thi-ap9:22.2": "yaṁ dīpamadadiṁ tadā;",
  "thi-ap9:22.3": "Duggatiṁ nābhijānāmi,",
  "thi-ap9:22.4": "pañcadīpānidaṁ phalaṁ.",
  "thi-ap9:23.1": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap9:23.2": "…pe…",
  "thi-ap9:23.3": "viharāmi anāsavā.",
  "thi-ap9:24.1": "Svāgataṁ vata me āsi,",
  "thi-ap9:24.2": "…pe…",
  "thi-ap9:24.3": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap9:25.1": "Paṭisambhidā catasso,",
  "thi-ap9:25.2": "…pe…",
  "thi-ap9:25.3": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap9:26.1": "Itthaṁ sudaṁ pañcadīpikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap9:27.1": "Pañcadīpikātheriyāpadānaṁ navamaṁ."
}