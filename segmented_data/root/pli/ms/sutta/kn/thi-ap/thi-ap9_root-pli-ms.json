{
  "thi-ap9:0.1": "Therīapadāna",
  "thi-ap9:0.2": "Sumedhāvagga",
  "thi-ap9:0.3": "9. Pañcadīpikātherīapadāna",
  "thi-ap9:1.1": "“Nagare haṃsavatiyā,",
  "thi-ap9:1.2": "cārikī āsahaṃ tadā;",
  "thi-ap9:1.3": "Ārāmena ca ārāmaṃ,",
  "thi-ap9:1.4": "carāmi kusalatthikā.",
  "thi-ap9:2.1": "Kāḷapakkhamhi divase,",
  "thi-ap9:2.2": "addasaṃ bodhimuttamaṃ;",
  "thi-ap9:2.3": "Tattha cittaṃ pasādetvā,",
  "thi-ap9:2.4": "bodhimūle nisīdahaṃ.",
  "thi-ap9:3.1": "Garucittaṃ upaṭṭhetvā,",
  "thi-ap9:3.2": "sire katvāna añjaliṃ;",
  "thi-ap9:3.3": "Somanassaṃ pavedetvā,",
  "thi-ap9:3.4": "evaṃ cintesi tāvade.",
  "thi-ap9:4.1": "‘Yadi buddho amitaguṇo,",
  "thi-ap9:4.2": "asamappaṭipuggalo;",
  "thi-ap9:4.3": "Dassetu pāṭihīraṃ me,",
  "thi-ap9:4.4": "bodhi obhāsatu ayaṃ’.",
  "thi-ap9:5.1": "Saha āvajjite mayhaṃ,",
  "thi-ap9:5.2": "bodhi pajjali tāvade;",
  "thi-ap9:5.3": "Sabbasoṇṇamayā āsi,",
  "thi-ap9:5.4": "disā sabbā virocati.",
  "thi-ap9:6.1": "Sattarattindivaṃ tattha,",
  "thi-ap9:6.2": "bodhimūle nisīdahaṃ;",
  "thi-ap9:6.3": "Sattame divase patte,",
  "thi-ap9:6.4": "dīpapūjaṃ akāsahaṃ.",
  "thi-ap9:7.1": "Āsanaṃ parivāretvā,",
  "thi-ap9:7.2": "pañca dīpāni pajjaluṃ;",
  "thi-ap9:7.3": "Yāva udeti sūriyo,",
  "thi-ap9:7.4": "dīpā me pajjaluṃ tadā.",
  "thi-ap9:8.1": "Tena kammena sukatena,",
  "thi-ap9:8.2": "cetanāpaṇidhīhi ca;",
  "thi-ap9:8.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap9:8.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap9:9.1": "Tattha me sukataṃ byamhaṃ,",
  "thi-ap9:9.2": "pañcadīpāti vuccati;",
  "thi-ap9:9.3": "Saṭṭhiyojanamubbedhaṃ,",
  "thi-ap9:9.4": "tiṃsayojanavitthataṃ.",
  "thi-ap9:10.1": "Asaṅkhiyāni dīpāni,",
  "thi-ap9:10.2": "parivāre jalanti me;",
  "thi-ap9:10.3": "Yāvatā devabhavanaṃ,",
  "thi-ap9:10.4": "dīpālokena jotati.",
  "thi-ap9:11.1": "Parammukhā nisīditvā,",
  "thi-ap9:11.2": "yadi icchāmi passituṃ;",
  "thi-ap9:11.3": "Uddhaṃ adho ca tiriyaṃ,",
  "thi-ap9:11.4": "sabbaṃ passāmi cakkhunā.",
  "thi-ap9:12.1": "Yāvatā abhikaṅkhāmi,",
  "thi-ap9:12.2": "daṭṭhuṃ sugataduggate;",
  "thi-ap9:12.3": "Tattha āvaraṇaṃ natthi,",
  "thi-ap9:12.4": "rukkhesu pabbatesu vā.",
  "thi-ap9:13.1": "Asīti devarājūnaṃ,",
  "thi-ap9:13.2": "mahesittamakārayiṃ;",
  "thi-ap9:13.3": "Satānaṃ cakkavattīnaṃ,",
  "thi-ap9:13.4": "mahesittamakārayiṃ.",
  "thi-ap9:14.1": "Yaṃ yaṃ yonupapajjāmi,",
  "thi-ap9:14.2": "devattaṃ atha mānusaṃ;",
  "thi-ap9:14.3": "Dīpasatasahassāni,",
  "thi-ap9:14.4": "parivāre jalanti me.",
  "thi-ap9:15.1": "Devalokā cavitvāna,",
  "thi-ap9:15.2": "uppajjiṃ mātukucchiyaṃ;",
  "thi-ap9:15.3": "Mātukucchigatā santī,",
  "thi-ap9:15.4": "akkhi me na nimīlati.",
  "thi-ap9:16.1": "Dīpasatasahassāni,",
  "thi-ap9:16.2": "puññakammasamaṅgitā;",
  "thi-ap9:16.3": "Jalanti sūtikāgehe,",
  "thi-ap9:16.4": "pañcadīpānidaṃ phalaṃ.",
  "thi-ap9:17.1": "Pacchime bhave sampatte,",
  "thi-ap9:17.2": "mānasaṃ vinivattayiṃ;",
  "thi-ap9:17.3": "Ajarāmataṃ sītibhāvaṃ,",
  "thi-ap9:17.4": "nibbānaṃ phassayiṃ ahaṃ.",
  "thi-ap9:18.1": "Jātiyā sattavassāhaṃ,",
  "thi-ap9:18.2": "arahattamapāpuṇiṃ;",
  "thi-ap9:18.3": "Upasampādayī buddho,",
  "thi-ap9:18.4": "guṇamaññāya gotamo.",
  "thi-ap9:19.1": "Maṇḍape rukkhamūle vā,",
  "thi-ap9:19.2": "pāsādesu guhāsu vā;",
  "thi-ap9:19.3": "Suññāgāre vasantiyā,",
  "thi-ap9:19.4": "pañcadīpā jalanti me.",
  "thi-ap9:20.1": "Dibbacakkhuvisuddhaṃ me,",
  "thi-ap9:20.2": "samādhikusalā ahaṃ;",
  "thi-ap9:20.3": "Abhiññāpāramippattā,",
  "thi-ap9:20.4": "pañcadīpānidaṃ phalaṃ.",
  "thi-ap9:21.1": "Sabbavositavosānā,",
  "thi-ap9:21.2": "katakiccā anāsavā;",
  "thi-ap9:21.3": "Pañcadīpā mahāvīra,",
  "thi-ap9:21.4": "pāde vandāmi cakkhuma.",
  "thi-ap9:22.1": "Satasahassito kappe,",
  "thi-ap9:22.2": "yaṃ dīpamadadiṃ tadā;",
  "thi-ap9:22.3": "Duggatiṃ nābhijānāmi,",
  "thi-ap9:22.4": "pañcadīpānidaṃ phalaṃ.",
  "thi-ap9:23.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap9:23.2": "…pe…",
  "thi-ap9:23.3": "viharāmi anāsavā.",
  "thi-ap9:24.1": "Svāgataṃ vata me āsi,",
  "thi-ap9:24.2": "…pe…",
  "thi-ap9:24.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap9:25.1": "Paṭisambhidā catasso,",
  "thi-ap9:25.2": "…pe…",
  "thi-ap9:25.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap9:26.1": "Itthaṃ sudaṃ pañcadīpikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap9:27.1": "Pañcadīpikātheriyāpadānaṃ navamaṃ."
}