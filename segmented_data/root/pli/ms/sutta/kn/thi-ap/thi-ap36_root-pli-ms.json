{
  "thi-ap36:0.1": "Therīapadāna",
  "thi-ap36:0.2": "Khattiyāvagga",
  "thi-ap36:0.3": "6 Abhirūpanandātherīapadāna",
  "thi-ap36:1.1": "“Ekanavutito kappe,",
  "thi-ap36:1.2": "vipassī nāma nāyako;",
  "thi-ap36:1.3": "Uppajji cārudassano,",
  "thi-ap36:1.4": "sabbadhammesu cakkhumā.",
  "thi-ap36:2.1": "Tadāhaṃ bandhumatiyaṃ,",
  "thi-ap36:2.2": "iddhe phīte mahākule;",
  "thi-ap36:2.3": "Jātā surūpā dayitā,",
  "thi-ap36:2.4": "pūjanīyā janassa ca.",
  "thi-ap36:3.1": "Upagantvā mahāvīraṃ,",
  "thi-ap36:3.2": "vipassiṃ lokanāyakaṃ;",
  "thi-ap36:3.3": "Dhammaṃ suṇitvā saraṇaṃ,",
  "thi-ap36:3.4": "upesiṃ naranāyakaṃ.",
  "thi-ap36:4.1": "Sīlesu saṃvutā hutvā,",
  "thi-ap36:4.2": "nibbute ca naruttame;",
  "thi-ap36:4.3": "Dhātuthūpassa upari,",
  "thi-ap36:4.4": "soṇṇacchattamapūjayiṃ.",
  "thi-ap36:5.1": "Muttacāgā sīlavatī,",
  "thi-ap36:5.2": "yāvajīvaṃ tato cutā;",
  "thi-ap36:5.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap36:5.4": "tāvatiṃsūpagā ahaṃ.",
  "thi-ap36:6.1": "Tadā dasahi ṭhānehi,",
  "thi-ap36:6.2": "adhibhotvāna sesake;",
  "thi-ap36:6.3": "Rūpasaddehi gandhehi,",
  "thi-ap36:6.4": "rasehi phusanehi ca.",
  "thi-ap36:7.1": "Āyunāpi ca vaṇṇena,",
  "thi-ap36:7.2": "sukhena yasasāpi ca;",
  "thi-ap36:7.3": "Tathevādhipateyyena,",
  "thi-ap36:7.4": "adhigayha virocahaṃ.",
  "thi-ap36:8.1": "Pacchime ca bhave dāni,",
  "thi-ap36:8.2": "jātāhaṃ kapilavhaye;",
  "thi-ap36:8.3": "Dhītā khemakasakkassa,",
  "thi-ap36:8.4": "nandā nāmāti vissutā.",
  "thi-ap36:9.1": "Abhirūpasampadampi,",
  "thi-ap36:9.2": "ahu me kantisūcakaṃ;",
  "thi-ap36:9.3": "Yadāhaṃ yobbanappattā,",
  "thi-ap36:9.4": "rūpalāvaññabhūsitā.",
  "thi-ap36:10.1": "Tadā mamatthe sakyānaṃ,",
  "thi-ap36:10.2": "vivādo sumahā ahu;",
  "thi-ap36:10.3": "Pabbājesi tato tāto,",
  "thi-ap36:10.4": "‘mā sakyā vinassiṃsu’ti.",
  "thi-ap36:11.1": "Pabbajitvā tathāgataṃ,",
  "thi-ap36:11.2": "rūpadessiṃ naruttamaṃ;",
  "thi-ap36:11.3": "Sutvāna nopagacchāmi,",
  "thi-ap36:11.4": "mama rūpena gabbitā.",
  "thi-ap36:12.1": "Ovādampi na gacchāmi,",
  "thi-ap36:12.2": "buddhadassanabhīrutā;",
  "thi-ap36:12.3": "Tadā jino upāyena,",
  "thi-ap36:12.4": "upanetvā sasantikaṃ.",
  "thi-ap36:13.1": "Tissitthiyo nidassesi,",
  "thi-ap36:13.2": "iddhiyā maggakovido;",
  "thi-ap36:13.3": "Accharārūpasadisaṃ,",
  "thi-ap36:13.4": "taruṇiṃ jaritaṃ mataṃ.",
  "thi-ap36:14.1": "Tāyo disvā susaṃviggā,",
  "thi-ap36:14.2": "virattāse kaḷevare;",
  "thi-ap36:14.3": "Aṭṭhāsiṃ bhavanibbindā,",
  "thi-ap36:14.4": "tadā maṃ āha nāyako.",
  "thi-ap36:15.1": "‘Āturaṃ asuciṃ pūtiṃ,",
  "thi-ap36:15.2": "passa nande samussayaṃ;",
  "thi-ap36:15.3": "Uggharantaṃ paggharantaṃ,",
  "thi-ap36:15.4": "bālānaṃ abhinanditaṃ.",
  "thi-ap36:16.1": "Asubhāya cittaṃ bhāvehi,",
  "thi-ap36:16.2": "ekaggaṃ susamāhitaṃ;",
  "thi-ap36:16.3": "Yathā idaṃ tathā etaṃ,",
  "thi-ap36:16.4": "yathā etaṃ tathā idaṃ.",
  "thi-ap36:17.1": "Evametaṃ avekkhantī,",
  "thi-ap36:17.2": "rattindivamatanditā;",
  "thi-ap36:17.3": "Tato sakāya paññāya,",
  "thi-ap36:17.4": "abhinibbijjha vacchasi’.",
  "thi-ap36:18.1": "Tassā me appamattāya,",
  "thi-ap36:18.2": "vicarantiyā yoniso;",
  "thi-ap36:18.3": "Yathābhūtaṃ ayaṃ kāyo,",
  "thi-ap36:18.4": "diṭṭho santarabāhiro.",
  "thi-ap36:19.1": "Atha nibbindahaṃ kāye,",
  "thi-ap36:19.2": "ajjhattañca virajjahaṃ;",
  "thi-ap36:19.3": "Appamattā visaṃyuttā,",
  "thi-ap36:19.4": "upasantāmhi nibbutā.",
  "thi-ap36:20.1": "Iddhīsu ca vasī homi,",
  "thi-ap36:20.2": "dibbāya sotadhātuyā;",
  "thi-ap36:20.3": "Cetopariyañāṇassa,",
  "thi-ap36:20.4": "vasī homi mahāmune.",
  "thi-ap36:21.1": "Pubbenivāsaṃ jānāmi,",
  "thi-ap36:21.2": "dibbacakkhu visodhitaṃ;",
  "thi-ap36:21.3": "Sabbāsavā parikkhīṇā,",
  "thi-ap36:21.4": "natthi dāni punabbhavo.",
  "thi-ap36:22.1": "Atthadhammaniruttīsu,",
  "thi-ap36:22.2": "paṭibhāne tatheva ca;",
  "thi-ap36:22.3": "Ñāṇaṃ mama mahāvīra,",
  "thi-ap36:22.4": "uppannaṃ tava santike.",
  "thi-ap36:23.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap36:23.2": "…pe…",
  "thi-ap36:23.3": "viharāmi anāsavā.",
  "thi-ap36:24.1": "Svāgataṃ vata me āsi,",
  "thi-ap36:24.2": "…pe…",
  "thi-ap36:24.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap36:25.1": "Paṭisambhidā catasso,",
  "thi-ap36:25.2": "…pe…",
  "thi-ap36:25.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap36:26.1": "Itthaṃ sudaṃ abhirūpanandā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap36:27.1": "Abhirūpanandātheriyāpadānaṃ chaṭṭhaṃ."
}