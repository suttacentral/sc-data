{
  "thi-ap27:0.1": "Therīapadāna",
  "thi-ap27:0.2": "Kuṇḍalakesīvagga",
  "thi-ap27:0.3": "7. Bhaddākāpilānītherīapadāna",
  "thi-ap27:1.1": "“Padumuttaro nāma jino,",
  "thi-ap27:1.2": "sabbadhammāna pāragū;",
  "thi-ap27:1.3": "Ito satasahassamhi,",
  "thi-ap27:1.4": "kappe uppajji nāyako.",
  "thi-ap27:2.1": "Tadāhu haṃsavatiyaṃ,",
  "thi-ap27:2.2": "videho nāma nāmato;",
  "thi-ap27:2.3": "Seṭṭhī pahūtaratano,",
  "thi-ap27:2.4": "tassa jāyā ahosahaṃ.",
  "thi-ap27:3.1": "Kadāci so narādiccaṃ,",
  "thi-ap27:3.2": "Upecca saparijjano;",
  "thi-ap27:3.3": "Dhammamassosi buddhassa,",
  "thi-ap27:3.4": "Sabbadukkhabhayappahaṃ.",
  "thi-ap27:4.1": "Sāvakaṃ dhutavādānaṃ,",
  "thi-ap27:4.2": "aggaṃ kittesi nāyako;",
  "thi-ap27:4.3": "Sutvā sattāhikaṃ dānaṃ,",
  "thi-ap27:4.4": "datvā buddhassa tādino.",
  "thi-ap27:5.1": "Nipacca sirasā pāde,",
  "thi-ap27:5.2": "taṃ ṭhānamabhipatthayiṃ;",
  "thi-ap27:5.3": "Sa hāsayanto parisaṃ,",
  "thi-ap27:5.4": "tadā hi narapuṅgavo.",
  "thi-ap27:6.1": "Seṭṭhino anukampāya,",
  "thi-ap27:6.2": "imā gāthā abhāsatha;",
  "thi-ap27:6.3": "‘Lacchase patthitaṃ ṭhānaṃ,",
  "thi-ap27:6.4": "nibbuto hohi puttaka.",
  "thi-ap27:7.1": "Satasahassito kappe,",
  "thi-ap27:7.2": "okkākakulasambhavo;",
  "thi-ap27:7.3": "Gotamo nāma gottena,",
  "thi-ap27:7.4": "satthā loke bhavissati.",
  "thi-ap27:8.1": "Tassa dhammesu dāyādo,",
  "thi-ap27:8.2": "oraso dhammanimmito;",
  "thi-ap27:8.3": "Kassapo nāma gottena,",
  "thi-ap27:8.4": "hessati satthu sāvako’.",
  "thi-ap27:9.1": "Taṃ sutvā mudito hutvā,",
  "thi-ap27:9.2": "yāvajīvaṃ tadā jinaṃ;",
  "thi-ap27:9.3": "Mettacitto paricari,",
  "thi-ap27:9.4": "paccayehi vināyakaṃ.",
  "thi-ap27:10.1": "Sāsanaṃ jotayitvāna,",
  "thi-ap27:10.2": "so madditvā kutitthiye;",
  "thi-ap27:10.3": "Veneyyaṃ vinayitvā ca,",
  "thi-ap27:10.4": "nibbuto so sasāvako.",
  "thi-ap27:11.1": "Nibbute tamhi lokagge,",
  "thi-ap27:11.2": "pūjanatthāya satthuno;",
  "thi-ap27:11.3": "Ñātimitte samānetvā,",
  "thi-ap27:11.4": "saha tehi akārayi.",
  "thi-ap27:12.1": "Sattayojanikaṃ thūpaṃ,",
  "thi-ap27:12.2": "ubbiddhaṃ ratanāmayaṃ;",
  "thi-ap27:12.3": "Jalantaṃ sataraṃsiṃva,",
  "thi-ap27:12.4": "sālarājaṃva phullitaṃ.",
  "thi-ap27:13.1": "Sattasatasahassāni,",
  "thi-ap27:13.2": "pātiyo tattha kārayi;",
  "thi-ap27:13.3": "Naḷaggī viya jotantī,",
  "thi-ap27:13.4": "rataneheva sattahi.",
  "thi-ap27:14.1": "Gandhatelena pūretvā,",
  "thi-ap27:14.2": "dīpānujjalayī tahiṃ;",
  "thi-ap27:14.3": "Pūjanatthāya mahesissa,",
  "thi-ap27:14.4": "sabbabhūtānukampino.",
  "thi-ap27:15.1": "Sattasatasahassāni,",
  "thi-ap27:15.2": "puṇṇakumbhāni kārayi;",
  "thi-ap27:15.3": "Rataneheva puṇṇāni,",
  "thi-ap27:15.4": "pūjanatthāya mahesino.",
  "thi-ap27:16.1": "Majjhe aṭṭhaṭṭhakumbhīnaṃ,",
  "thi-ap27:16.2": "ussitā kañcanagghiyo;",
  "thi-ap27:16.3": "Atirocanti vaṇṇena,",
  "thi-ap27:16.4": "saradeva divākaro.",
  "thi-ap27:17.1": "Catudvāresu sobhanti,",
  "thi-ap27:17.2": "toraṇā ratanāmayā;",
  "thi-ap27:17.3": "Ussitā phalakā rammā,",
  "thi-ap27:17.4": "sobhanti ratanāmayā.",
  "thi-ap27:18.1": "Virocanti parikkhittā,",
  "thi-ap27:18.2": "avaṭaṃsā sunimmitā;",
  "thi-ap27:18.3": "Ussitāni paṭākāni,",
  "thi-ap27:18.4": "ratanāni virocare.",
  "thi-ap27:19.1": "Surattaṃ sukataṃ cittaṃ,",
  "thi-ap27:19.2": "cetiyaṃ ratanāmayaṃ;",
  "thi-ap27:19.3": "Atirocati vaṇṇena,",
  "thi-ap27:19.4": "sasañjhova divākaro.",
  "thi-ap27:20.1": "Thūpassa vediyo tisso,",
  "thi-ap27:20.2": "haritālena pūrayi;",
  "thi-ap27:20.3": "Ekaṃ manosilāyekaṃ,",
  "thi-ap27:20.4": "añjanena ca ekikaṃ.",
  "thi-ap27:21.1": "Pūjaṃ etādisaṃ rammaṃ,",
  "thi-ap27:21.2": "kāretvā varavādino;",
  "thi-ap27:21.3": "Adāsi dānaṃ saṃghassa,",
  "thi-ap27:21.4": "yāvajīvaṃ yathābalaṃ.",
  "thi-ap27:22.1": "Sahāva seṭṭhinā tena,",
  "thi-ap27:22.2": "tāni puññāni sabbaso;",
  "thi-ap27:22.3": "Yāvajīvaṃ karitvāna,",
  "thi-ap27:22.4": "sahāva sugatiṃ gatā.",
  "thi-ap27:23.1": "Sampattiyonubhotvāna,",
  "thi-ap27:23.2": "devatte atha mānuse;",
  "thi-ap27:23.3": "Chāyā viya sarīrena,",
  "thi-ap27:23.4": "saha teneva saṃsariṃ.",
  "thi-ap27:24.1": "Ekanavutito kappe,",
  "thi-ap27:24.2": "vipassī nāma nāyako;",
  "thi-ap27:24.3": "Uppajji cārudassano,",
  "thi-ap27:24.4": "sabbadhammavipassako.",
  "thi-ap27:25.1": "Tadāyaṃ bandhumatiyaṃ,",
  "thi-ap27:25.2": "brāhmaṇo sādhusammato;",
  "thi-ap27:25.3": "Aḍḍho santo guṇenāpi,",
  "thi-ap27:25.4": "dhanena ca suduggato.",
  "thi-ap27:26.1": "Tadāpi tassāhaṃ āsiṃ,",
  "thi-ap27:26.2": "brāhmaṇī samacetasā;",
  "thi-ap27:26.3": "Kadāci so dijavaro,",
  "thi-ap27:26.4": "saṅgamesi mahāmuniṃ.",
  "thi-ap27:27.1": "Nisinnaṃ janakāyamhi,",
  "thi-ap27:27.2": "desentaṃ amataṃ padaṃ;",
  "thi-ap27:27.3": "Sutvā dhammaṃ pamudito,",
  "thi-ap27:27.4": "adāsi ekasāṭakaṃ.",
  "thi-ap27:28.1": "Gharamekena vatthena,",
  "thi-ap27:28.2": "Gantvānetaṃ sa mabravi;",
  "thi-ap27:28.3": "‘Anumoda mahāpuññaṃ,",
  "thi-ap27:28.4": "Dinnaṃ buddhassa sāṭakaṃ’.",
  "thi-ap27:29.1": "Tadāhaṃ añjaliṃ katvā,",
  "thi-ap27:29.2": "anumodiṃ supīṇitā;",
  "thi-ap27:29.3": "‘Sudinno sāṭako sāmi,",
  "thi-ap27:29.4": "buddhaseṭṭhassa tādino’.",
  "thi-ap27:30.1": "Sukhito sajjito hutvā,",
  "thi-ap27:30.2": "saṃsaranto bhavābhave;",
  "thi-ap27:30.3": "Bārāṇasipure ramme,",
  "thi-ap27:30.4": "rājā āsi mahīpati.",
  "thi-ap27:31.1": "Tadā tassa mahesīhaṃ,",
  "thi-ap27:31.2": "itthigumbassa uttamā;",
  "thi-ap27:31.3": "Tassāti dayitā āsiṃ,",
  "thi-ap27:31.4": "pubbasnehena bhattuno.",
  "thi-ap27:32.1": "Piṇḍāya vicarante te,",
  "thi-ap27:32.2": "aṭṭha paccekanāyake;",
  "thi-ap27:32.3": "Disvā pamudito hutvā,",
  "thi-ap27:32.4": "datvā piṇḍaṃ mahārahaṃ.",
  "thi-ap27:33.1": "Puno nimantayitvāna,",
  "thi-ap27:33.2": "katvā ratanamaṇḍapaṃ;",
  "thi-ap27:33.3": "Kammārehi kataṃ pattaṃ,",
  "thi-ap27:33.4": "sovaṇṇaṃ vata tattakaṃ.",
  "thi-ap27:34.1": "Samānetvāna te sabbe,",
  "thi-ap27:34.2": "tesaṃ dānamadāsi so;",
  "thi-ap27:34.3": "Soṇṇāsane paviṭṭhānaṃ,",
  "thi-ap27:34.4": "pasanno sehi pāṇibhi.",
  "thi-ap27:35.1": "Tampi dānaṃ sahādāsiṃ,",
  "thi-ap27:35.2": "kāsirājenahaṃ tadā;",
  "thi-ap27:35.3": "Punāhaṃ bārāṇasiyaṃ,",
  "thi-ap27:35.4": "jātā kāsikagāmake.",
  "thi-ap27:36.1": "Kuṭumbikakule phīte,",
  "thi-ap27:36.2": "sukhito so sabhātuko;",
  "thi-ap27:36.3": "Jeṭṭhassa bhātuno jāyā,",
  "thi-ap27:36.4": "ahosiṃ supatibbatā.",
  "thi-ap27:37.1": "Paccekabuddhaṃ disvāna,",
  "thi-ap27:37.2": "kaniyassa mama bhattuno;",
  "thi-ap27:37.3": "Bhāgannaṃ tassa datvāna,",
  "thi-ap27:37.4": "āgate tamhi pāvadiṃ.",
  "thi-ap27:38.1": "Nābhinandittha so dānaṃ,",
  "thi-ap27:38.2": "tato tassa adāsahaṃ;",
  "thi-ap27:38.3": "Ukhā āniya taṃ annaṃ,",
  "thi-ap27:38.4": "puno tasseva so adā.",
  "thi-ap27:39.1": "Tadannaṃ chaḍḍayitvāna,",
  "thi-ap27:39.2": "duṭṭhā buddhassahaṃ tadā;",
  "thi-ap27:39.3": "Pattaṃ kalalapuṇṇaṃ taṃ,",
  "thi-ap27:39.4": "adāsiṃ tassa tādino.",
  "thi-ap27:40.1": "Dāne ca gahaṇe ceva,",
  "thi-ap27:40.2": "apace padusepi ca;",
  "thi-ap27:40.3": "Samacittamukhaṃ disvā,",
  "thi-ap27:40.4": "tadāhaṃ saṃvijiṃ bhusaṃ.",
  "thi-ap27:41.1": "Puno pattaṃ gahetvāna,",
  "thi-ap27:41.2": "sodhayitvā sugandhinā;",
  "thi-ap27:41.3": "Pasannacittā pūretvā,",
  "thi-ap27:41.4": "saghataṃ sakkaraṃ adaṃ.",
  "thi-ap27:42.1": "Yattha yatthūpapajjāmi,",
  "thi-ap27:42.2": "surūpā homi dānato;",
  "thi-ap27:42.3": "Buddhassa apakārena,",
  "thi-ap27:42.4": "duggandhā vadanena ca.",
  "thi-ap27:43.1": "Puna kassapavīrassa,",
  "thi-ap27:43.2": "nidhāyantamhi cetiye;",
  "thi-ap27:43.3": "Sovaṇṇaṃ iṭṭhakaṃ varaṃ,",
  "thi-ap27:43.4": "adāsiṃ muditā ahaṃ.",
  "thi-ap27:44.1": "Catujjātena gandhena,",
  "thi-ap27:44.2": "nicayitvā tamiṭṭhakaṃ;",
  "thi-ap27:44.3": "Muttā duggandhadosamhā,",
  "thi-ap27:44.4": "sabbaṅgasusamāgatā.",
  "thi-ap27:45.1": "Sattapātisahassāni,",
  "thi-ap27:45.2": "rataneheva sattahi;",
  "thi-ap27:45.3": "Kāretvā ghatapūrāni,",
  "thi-ap27:45.4": "vaṭṭīni ca sahassaso.",
  "thi-ap27:46.1": "Pakkhipitvā padīpetvā,",
  "thi-ap27:46.2": "ṭhapayiṃ sattapantiyo;",
  "thi-ap27:46.3": "Pūjanatthaṃ lokanāthassa,",
  "thi-ap27:46.4": "vippasannena cetasā.",
  "thi-ap27:47.1": "Tadāpi tamhi puññamhi,",
  "thi-ap27:47.2": "bhāginīhaṃ visesato;",
  "thi-ap27:47.3": "Puna kāsīsu sañjāto,",
  "thi-ap27:47.4": "sumitto iti vissuto.",
  "thi-ap27:48.1": "Tassāhaṃ bhariyā āsiṃ,",
  "thi-ap27:48.2": "sukhitā sajjitā piyā;",
  "thi-ap27:48.3": "Tadā paccekamunino,",
  "thi-ap27:48.4": "adāsiṃ ghanaveṭhanaṃ.",
  "thi-ap27:49.1": "Tassāpi bhāginī āsiṃ,",
  "thi-ap27:49.2": "moditvā dānamuttamaṃ;",
  "thi-ap27:49.3": "Punāpi kāsiraṭṭhamhi,",
  "thi-ap27:49.4": "jāto koliyajātiyā.",
  "thi-ap27:50.1": "Tadā koliyaputtānaṃ,",
  "thi-ap27:50.2": "satehi saha pañcahi;",
  "thi-ap27:50.3": "Pañcapaccekabuddhānaṃ,",
  "thi-ap27:50.4": "satāni samupaṭṭhahi.",
  "thi-ap27:51.1": "Temāsaṃ tappayitvāna,",
  "thi-ap27:51.2": "adāsi ca ticīvaraṃ;",
  "thi-ap27:51.3": "Jāyā tassa tadā āsiṃ,",
  "thi-ap27:51.4": "puññakammapathānugā.",
  "thi-ap27:52.1": "Tato cuto ahu rājā,",
  "thi-ap27:52.2": "nando nāma mahāyaso;",
  "thi-ap27:52.3": "Tassāpi mahesī āsiṃ,",
  "thi-ap27:52.4": "sabbakāmasamiddhinī.",
  "thi-ap27:53.1": "Tadā rājā bhavitvāna,",
  "thi-ap27:53.2": "brahmadatto mahīpati;",
  "thi-ap27:53.3": "Padumavatīputtānaṃ,",
  "thi-ap27:53.4": "paccekamuninaṃ tadā.",
  "thi-ap27:54.1": "Satāni pañcanūnāni,",
  "thi-ap27:54.2": "yāvajīvaṃ upaṭṭhahiṃ;",
  "thi-ap27:54.3": "Rājuyyāne nivāsetvā,",
  "thi-ap27:54.4": "nibbutāni ca pūjayiṃ.",
  "thi-ap27:55.1": "Cetiyāni ca kāretvā,",
  "thi-ap27:55.2": "pabbajitvā ubho mayaṃ;",
  "thi-ap27:55.3": "Bhāvetvā appamaññāyo,",
  "thi-ap27:55.4": "brahmalokaṃ agamhase.",
  "thi-ap27:56.1": "Tato cuto mahātitthe,",
  "thi-ap27:56.2": "sujāto pipphalāyano;",
  "thi-ap27:56.3": "Mātā sumanadevīti,",
  "thi-ap27:56.4": "kosigotto dijo pitā.",
  "thi-ap27:57.1": "Ahaṃ madde janapade,",
  "thi-ap27:57.2": "sākalāya puruttame;",
  "thi-ap27:57.3": "Kappilassa dijassāsiṃ,",
  "thi-ap27:57.4": "dhītā mātā sucīmati.",
  "thi-ap27:58.1": "Ghanakañcanabimbena,",
  "thi-ap27:58.2": "nimminitvāna maṃ pitā;",
  "thi-ap27:58.3": "Adā kassapadhīrassa,",
  "thi-ap27:58.4": "kāmehi vajjitassamaṃ.",
  "thi-ap27:59.1": "Kadāci so kāruṇiko,",
  "thi-ap27:59.2": "gantvā kammantapekkhako;",
  "thi-ap27:59.3": "Kākādikehi khajjante,",
  "thi-ap27:59.4": "pāṇe disvāna saṃviji.",
  "thi-ap27:60.1": "Gharevāhaṃ tile jāte,",
  "thi-ap27:60.2": "disvānātapatāpane;",
  "thi-ap27:60.3": "Kimī kākehi khajjante,",
  "thi-ap27:60.4": "saṃvegamalabhiṃ tadā.",
  "thi-ap27:61.1": "Tadā so pabbajī dhīro,",
  "thi-ap27:61.2": "ahaṃ tamanupabbajiṃ;",
  "thi-ap27:61.3": "Pañcavassāni nivasiṃ,",
  "thi-ap27:61.4": "paribbājavate ahaṃ.",
  "thi-ap27:62.1": "Yadā pabbajitā āsi,",
  "thi-ap27:62.2": "gotamī jinaposikā;",
  "thi-ap27:62.3": "Tadāhaṃ tamupagantvā,",
  "thi-ap27:62.4": "buddhena anusāsitā.",
  "thi-ap27:63.1": "Na cireneva kālena,",
  "thi-ap27:63.2": "arahattamapāpuṇiṃ;",
  "thi-ap27:63.3": "Aho kalyāṇamittattaṃ,",
  "thi-ap27:63.4": "kassapassa sirīmato.",
  "thi-ap27:64.1": "Suto buddhassa dāyādo,",
  "thi-ap27:64.2": "kassapo susamāhito;",
  "thi-ap27:64.3": "Pubbenivāsaṃ yo vedi,",
  "thi-ap27:64.4": "saggāpāyañca passati.",
  "thi-ap27:65.1": "Atho jātikkhayaṃ patto,",
  "thi-ap27:65.2": "abhiññāvosito muni;",
  "thi-ap27:65.3": "Etāhi tīhi vijjāhi,",
  "thi-ap27:65.4": "tevijjo hoti brāhmaṇo.",
  "thi-ap27:66.1": "Tatheva bhaddākāpilānī,",
  "thi-ap27:66.2": "tevijjā maccuhāyinī;",
  "thi-ap27:66.3": "Dhāreti antimaṃ dehaṃ,",
  "thi-ap27:66.4": "jitvā māraṃ savāhanaṃ.",
  "thi-ap27:67.1": "Disvā ādīnavaṃ loke,",
  "thi-ap27:67.2": "ubho pabbajitā mayaṃ;",
  "thi-ap27:67.3": "Tyamha khīṇāsavā dantā,",
  "thi-ap27:67.4": "sītibhūtāmha nibbutā.",
  "thi-ap27:68.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap27:68.2": "…pe…",
  "thi-ap27:68.3": "viharāmi anāsavā.",
  "thi-ap27:69.1": "Svāgataṃ vata me āsi,",
  "thi-ap27:69.2": "…pe…",
  "thi-ap27:69.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap27:70.1": "Paṭisambhidā catasso,",
  "thi-ap27:70.2": "…pe…",
  "thi-ap27:70.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap27:71.1": "Itthaṃ sudaṃ bhaddākāpilānī bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap27:72.1": "Bhaddākāpilānītheriyāpadānaṃ sattamaṃ."
}