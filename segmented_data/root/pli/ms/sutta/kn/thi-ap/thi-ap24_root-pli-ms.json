{
  "thi-ap24:0.1": "Therīapadāna",
  "thi-ap24:0.2": "Kuṇḍalakesīvagga",
  "thi-ap24:0.3": "4. Sakulātherīapadāna",
  "thi-ap24:1.1": "“Padumuttaro nāma jino,",
  "thi-ap24:1.2": "sabbadhammāna pāragū;",
  "thi-ap24:1.3": "Ito satasahassamhi,",
  "thi-ap24:1.4": "kappe uppajji nāyako.",
  "thi-ap24:2.1": "Hitāya sabbasattānaṃ,",
  "thi-ap24:2.2": "sukhāya vadataṃ varo;",
  "thi-ap24:2.3": "Atthāya purisājañño,",
  "thi-ap24:2.4": "paṭipanno sadevake.",
  "thi-ap24:3.1": "Yasaggapatto sirimā,",
  "thi-ap24:3.2": "kittivaṇṇagato jino;",
  "thi-ap24:3.3": "Pūjito sabbalokassa,",
  "thi-ap24:3.4": "disāsabbāsu vissuto.",
  "thi-ap24:4.1": "Uttiṇṇavicikiccho so,",
  "thi-ap24:4.2": "vītivattakathaṃkatho;",
  "thi-ap24:4.3": "Sampuṇṇamanasaṅkappo,",
  "thi-ap24:4.4": "patto sambodhimuttamaṃ.",
  "thi-ap24:5.1": "Anuppannassa maggassa,",
  "thi-ap24:5.2": "uppādetā naruttamo;",
  "thi-ap24:5.3": "Anakkhātañca akkhāsi,",
  "thi-ap24:5.4": "asañjātañca sañjanī.",
  "thi-ap24:6.1": "Maggaññū ca maggavidū,",
  "thi-ap24:6.2": "maggakkhāyī narāsabho;",
  "thi-ap24:6.3": "Maggassa kusalo satthā,",
  "thi-ap24:6.4": "sārathīnaṃ varuttamo.",
  "thi-ap24:7.1": "Mahākāruṇiko satthā,",
  "thi-ap24:7.2": "dhammaṃ desesi nāyako;",
  "thi-ap24:7.3": "Nimugge kāmapaṅkamhi,",
  "thi-ap24:7.4": "samuddharati pāṇine.",
  "thi-ap24:8.1": "Tadāhaṃ haṃsavatiyaṃ,",
  "thi-ap24:8.2": "jātā khattiyanandanā;",
  "thi-ap24:8.3": "Surūpā sadhanā cāpi,",
  "thi-ap24:8.4": "dayitā ca sirīmatī.",
  "thi-ap24:9.1": "Ānandassa mahārañño,",
  "thi-ap24:9.2": "dhītā paramasobhaṇā;",
  "thi-ap24:9.3": "Vemātā bhaginī cāpi,",
  "thi-ap24:9.4": "padumuttaranāmino.",
  "thi-ap24:10.1": "Rājakaññāhi sahitā,",
  "thi-ap24:10.2": "sabbābharaṇabhūsitā;",
  "thi-ap24:10.3": "Upāgamma mahāvīraṃ,",
  "thi-ap24:10.4": "assosiṃ dhammadesanaṃ.",
  "thi-ap24:11.1": "Tadā hi so lokagaru,",
  "thi-ap24:11.2": "bhikkhuniṃ dibbacakkhukaṃ;",
  "thi-ap24:11.3": "Kittayaṃ parisāmajjhe,",
  "thi-ap24:11.4": "aggaṭṭhāne ṭhapesi taṃ.",
  "thi-ap24:12.1": "Suṇitvā tamahaṃ haṭṭhā,",
  "thi-ap24:12.2": "dānaṃ datvāna satthuno;",
  "thi-ap24:12.3": "Pūjitvāna ca sambuddhaṃ,",
  "thi-ap24:12.4": "dibbacakkhuṃ apatthayiṃ.",
  "thi-ap24:13.1": "Tato avoca maṃ satthā,",
  "thi-ap24:13.2": "‘nande lacchasi patthitaṃ;",
  "thi-ap24:13.3": "Padīpadhammadānānaṃ,",
  "thi-ap24:13.4": "phalametaṃ sunicchitaṃ.",
  "thi-ap24:14.1": "Satasahassito kappe,",
  "thi-ap24:14.2": "okkākakulasambhavo;",
  "thi-ap24:14.3": "Gotamo nāma gottena,",
  "thi-ap24:14.4": "satthā loke bhavissati.",
  "thi-ap24:15.1": "Tassa dhammesu dāyādā,",
  "thi-ap24:15.2": "orasā dhammanimmitā;",
  "thi-ap24:15.3": "Sakulā nāma nāmena,",
  "thi-ap24:15.4": "hessati satthu sāvikā’.",
  "thi-ap24:16.1": "Tena kammena sukatena,",
  "thi-ap24:16.2": "cetanāpaṇidhīhi ca;",
  "thi-ap24:16.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap24:16.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap24:17.1": "Imamhi bhaddake kappe,",
  "thi-ap24:17.2": "brahmabandhu mahāyaso;",
  "thi-ap24:17.3": "Kassapo nāma gottena,",
  "thi-ap24:17.4": "uppajji vadataṃ varo.",
  "thi-ap24:18.1": "Paribbājakinī āsiṃ,",
  "thi-ap24:18.2": "tadāhaṃ ekacārinī;",
  "thi-ap24:18.3": "Bhikkhāya vicaritvāna,",
  "thi-ap24:18.4": "alabhiṃ telamattakaṃ.",
  "thi-ap24:19.1": "Tena dīpaṃ padīpetvā,",
  "thi-ap24:19.2": "upaṭṭhiṃ sabbasaṃvariṃ;",
  "thi-ap24:19.3": "Cetiyaṃ dvipadaggassa,",
  "thi-ap24:19.4": "vippasannena cetasā.",
  "thi-ap24:20.1": "Tena kammena sukatena,",
  "thi-ap24:20.2": "cetanāpaṇidhīhi ca;",
  "thi-ap24:20.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap24:20.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap24:21.1": "Yattha yatthūpapajjāmi,",
  "thi-ap24:21.2": "tassa kammassa vāhasā;",
  "thi-ap24:21.3": "Pajjalanti mahādīpā,",
  "thi-ap24:21.4": "tattha tattha gatāya me.",
  "thi-ap24:22.1": "Tirokuṭṭaṃ tiroselaṃ,",
  "thi-ap24:22.2": "samatiggayha pabbataṃ;",
  "thi-ap24:22.3": "Passāmahaṃ yadicchāmi,",
  "thi-ap24:22.4": "dīpadānassidaṃ phalaṃ.",
  "thi-ap24:23.1": "Visuddhanayanā homi,",
  "thi-ap24:23.2": "yasasā ca jalāmahaṃ;",
  "thi-ap24:23.3": "Saddhāpaññāvatī ceva,",
  "thi-ap24:23.4": "dīpadānassidaṃ phalaṃ.",
  "thi-ap24:24.1": "Pacchime ca bhave dāni,",
  "thi-ap24:24.2": "jātā vippakule ahaṃ;",
  "thi-ap24:24.3": "Pahūtadhanadhaññamhi,",
  "thi-ap24:24.4": "mudite rājapūjite.",
  "thi-ap24:25.1": "Ahaṃ sabbaṅgasampannā,",
  "thi-ap24:25.2": "sabbābharaṇabhūsitā;",
  "thi-ap24:25.3": "Purappavese sugataṃ,",
  "thi-ap24:25.4": "vātapāne ṭhitā ahaṃ.",
  "thi-ap24:26.1": "Disvā jalantaṃ yasasā,",
  "thi-ap24:26.2": "devamanussasakkataṃ;",
  "thi-ap24:26.3": "Anubyañjanasampannaṃ,",
  "thi-ap24:26.4": "lakkhaṇehi vibhūsitaṃ.",
  "thi-ap24:27.1": "Udaggacittā sumanā,",
  "thi-ap24:27.2": "pabbajjaṃ samarocayiṃ;",
  "thi-ap24:27.3": "Na cireneva kālena,",
  "thi-ap24:27.4": "arahattamapāpuṇiṃ.",
  "thi-ap24:28.1": "Iddhīsu ca vasī homi,",
  "thi-ap24:28.2": "dibbāya sotadhātuyā;",
  "thi-ap24:28.3": "Paracittāni jānāmi,",
  "thi-ap24:28.4": "satthusāsanakārikā.",
  "thi-ap24:29.1": "Pubbenivāsaṃ jānāmi,",
  "thi-ap24:29.2": "dibbacakkhu visodhitaṃ;",
  "thi-ap24:29.3": "Khepetvā āsave sabbe,",
  "thi-ap24:29.4": "visuddhāsiṃ sunimmalā.",
  "thi-ap24:30.1": "Pariciṇṇo mayā satthā,",
  "thi-ap24:30.2": "kataṃ buddhassa sāsanaṃ;",
  "thi-ap24:30.3": "Ohito garuko bhāro,",
  "thi-ap24:30.4": "bhavanetti samūhatā.",
  "thi-ap24:31.1": "Yassatthāya pabbajitā,",
  "thi-ap24:31.2": "agārasmānagāriyaṃ;",
  "thi-ap24:31.3": "So me attho anuppatto,",
  "thi-ap24:31.4": "sabbasaṃyojanakkhayo.",
  "thi-ap24:32.1": "Tato mahākāruṇiko,",
  "thi-ap24:32.2": "etadagge ṭhapesi maṃ;",
  "thi-ap24:32.3": "Dibbacakkhukānaṃ aggā,",
  "thi-ap24:32.4": "sakulāti naruttamo.",
  "thi-ap24:33.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap24:33.2": "…pe…",
  "thi-ap24:33.3": "viharāmi anāsavā.",
  "thi-ap24:34.1": "Svāgataṃ vata me āsi,",
  "thi-ap24:34.2": "…pe…",
  "thi-ap24:34.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap24:35.1": "Paṭisambhidā catasso,",
  "thi-ap24:35.2": "…pe…",
  "thi-ap24:35.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap24:36.1": "Itthaṃ sudaṃ sakulā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap24:37.1": "Sakulātheriyāpadānaṃ catutthaṃ."
}