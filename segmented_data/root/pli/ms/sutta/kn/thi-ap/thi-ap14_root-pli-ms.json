{
  "thi-ap14:0.1": "Therīapadāna",
  "thi-ap14:0.2": "Ekūposathikavagga",
  "thi-ap14:0.3": "4. Ekāsanadāyikātherīapadāna",
  "thi-ap14:1.1": "“Nagare haṃsavatiyā,",
  "thi-ap14:1.2": "ahosiṃ bālikā tadā;",
  "thi-ap14:1.3": "Mātā ca me pitā ceva,",
  "thi-ap14:1.4": "kammantaṃ agamaṃsu te.",
  "thi-ap14:2.1": "Majjhanhikamhi sūriye,",
  "thi-ap14:2.2": "addasaṃ samaṇaṃ ahaṃ;",
  "thi-ap14:2.3": "Vīthiyā anugacchantaṃ,",
  "thi-ap14:2.4": "āsanaṃ paññapesahaṃ.",
  "thi-ap14:3.1": "Gonakāvikatikāhi,",
  "thi-ap14:3.2": "paññapetvā mamāsanaṃ;",
  "thi-ap14:3.3": "Pasannacittā sumanā,",
  "thi-ap14:3.4": "idaṃ vacanamabraviṃ.",
  "thi-ap14:4.1": "‘Santattā kuthitā bhūmi,",
  "thi-ap14:4.2": "sūro majjhanhike ṭhito;",
  "thi-ap14:4.3": "Mālutā ca na vāyanti,",
  "thi-ap14:4.4": "kālo cevettha mehiti.",
  "thi-ap14:5.1": "Paññattamāsanamidaṃ,",
  "thi-ap14:5.2": "tavatthāya mahāmuni;",
  "thi-ap14:5.3": "Anukampaṃ upādāya,",
  "thi-ap14:5.4": "nisīda mama āsane’.",
  "thi-ap14:6.1": "Nisīdi tattha samaṇo,",
  "thi-ap14:6.2": "sudanto suddhamānaso;",
  "thi-ap14:6.3": "Tassa pattaṃ gahetvāna,",
  "thi-ap14:6.4": "yathārandhaṃ adāsahaṃ.",
  "thi-ap14:7.1": "Tena kammena sukatena,",
  "thi-ap14:7.2": "cetanāpaṇidhīhi ca;",
  "thi-ap14:7.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap14:7.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap14:8.1": "Tattha me sukataṃ byamhaṃ,",
  "thi-ap14:8.2": "āsanena sunimmitaṃ;",
  "thi-ap14:8.3": "Saṭṭhiyojanamubbedhaṃ,",
  "thi-ap14:8.4": "tiṃsayojanavitthataṃ.",
  "thi-ap14:9.1": "Soṇṇamayā maṇimayā,",
  "thi-ap14:9.2": "athopi phalikāmayā;",
  "thi-ap14:9.3": "Lohitaṅgamayā ceva,",
  "thi-ap14:9.4": "pallaṅkā vividhā mama.",
  "thi-ap14:10.1": "Tūlikāvikatikāhi,",
  "thi-ap14:10.2": "kaṭṭissacittakāhi ca;",
  "thi-ap14:10.3": "Uddaekantalomī ca,",
  "thi-ap14:10.4": "pallaṅkā me susaṇṭhitā.",
  "thi-ap14:11.1": "Yadā icchāmi gamanaṃ,",
  "thi-ap14:11.2": "hāsakhiḍḍasamappitā;",
  "thi-ap14:11.3": "Saha pallaṅkaseṭṭhena,",
  "thi-ap14:11.4": "gacchāmi mama patthitaṃ.",
  "thi-ap14:12.1": "Asīti devarājūnaṃ,",
  "thi-ap14:12.2": "mahesittamakārayiṃ;",
  "thi-ap14:12.3": "Sattati cakkavattīnaṃ,",
  "thi-ap14:12.4": "mahesittamakārayiṃ.",
  "thi-ap14:13.1": "Bhavābhave saṃsarantī,",
  "thi-ap14:13.2": "mahābhogaṃ labhāmahaṃ;",
  "thi-ap14:13.3": "Bhoge me ūnatā natthi,",
  "thi-ap14:13.4": "ekāsanassidaṃ phalaṃ.",
  "thi-ap14:14.1": "Duve bhave saṃsarāmi,",
  "thi-ap14:14.2": "devatte atha mānuse;",
  "thi-ap14:14.3": "Aññe bhave na jānāmi,",
  "thi-ap14:14.4": "ekāsanassidaṃ phalaṃ.",
  "thi-ap14:15.1": "Duve kule pajāyāmi,",
  "thi-ap14:15.2": "khattiye cāpi brāhmaṇe;",
  "thi-ap14:15.3": "Uccākulīnā sabbattha,",
  "thi-ap14:15.4": "ekāsanassidaṃ phalaṃ.",
  "thi-ap14:16.1": "Domanassaṃ na jānāmi,",
  "thi-ap14:16.2": "cittasantāpanaṃ mama;",
  "thi-ap14:16.3": "Vevaṇṇiyaṃ na jānāmi,",
  "thi-ap14:16.4": "ekāsanassidaṃ phalaṃ.",
  "thi-ap14:17.1": "Dhātiyo maṃ upaṭṭhanti,",
  "thi-ap14:17.2": "khujjā celāpikā bahū;",
  "thi-ap14:17.3": "Aṅkena aṅkaṃ gacchāmi,",
  "thi-ap14:17.4": "ekāsanassidaṃ phalaṃ.",
  "thi-ap14:18.1": "Aññā nhāpenti bhojenti,",
  "thi-ap14:18.2": "aññā ramenti maṃ sadā;",
  "thi-ap14:18.3": "Aññā gandhaṃ vilimpanti,",
  "thi-ap14:18.4": "ekāsanassidaṃ phalaṃ.",
  "thi-ap14:19.1": "Maṇḍape rukkhamūle vā,",
  "thi-ap14:19.2": "suññāgāre vasantiyā;",
  "thi-ap14:19.3": "Mama saṅkappamaññāya,",
  "thi-ap14:19.4": "pallaṅko upatiṭṭhati.",
  "thi-ap14:20.1": "Ayaṃ pacchimako mayhaṃ,",
  "thi-ap14:20.2": "carimo vattate bhavo;",
  "thi-ap14:20.3": "Ajjāpi rajjaṃ chaḍḍetvā,",
  "thi-ap14:20.4": "pabbajiṃ anagāriyaṃ.",
  "thi-ap14:21.1": "Satasahassito kappe,",
  "thi-ap14:21.2": "yaṃ dānamadadiṃ tadā;",
  "thi-ap14:21.3": "Duggatiṃ nābhijānāmi,",
  "thi-ap14:21.4": "ekāsanassidaṃ phalaṃ.",
  "thi-ap14:22.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap14:22.2": "…pe…",
  "thi-ap14:22.3": "viharāmi anāsavā.",
  "thi-ap14:23.1": "Svāgataṃ vata me āsi,",
  "thi-ap14:23.2": "…pe…",
  "thi-ap14:23.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap14:24.1": "Paṭisambhidā catasso,",
  "thi-ap14:24.2": "…pe…",
  "thi-ap14:24.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap14:25.1": "Itthaṃ sudaṃ ekāsanadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap14:26.1": "Ekāsanadāyikātheriyāpadānaṃ catutthaṃ."
}