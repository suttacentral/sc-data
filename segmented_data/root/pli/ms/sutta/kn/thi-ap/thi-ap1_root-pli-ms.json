{
  "thi-ap1:0.1": "Therīapadāna",
  "thi-ap1:0.2": "Sumedhāvagga",
  "thi-ap1:0.3": "1. Sumedhātherīapadāna",
  "thi-ap1:1.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
  "thi-ap1:2.1": "Atha therikāpadānāni suṇātha—",
  "thi-ap1:3.1": "“Bhagavati koṇāgamane,",
  "thi-ap1:3.2": "Saṅghārāmamhi navanivesanamhi;",
  "thi-ap1:3.3": "Sakhiyo tisso janiyo,",
  "thi-ap1:3.4": "Vihāradānaṁ adāsimha.",
  "thi-ap1:4.1": "Dasakkhattuṁ satakkhattuṁ,",
  "thi-ap1:4.2": "Dasasatakkhattuṁ satānañca satakkhattuṁ;",
  "thi-ap1:4.3": "Devesu upapajjimha,",
  "thi-ap1:4.4": "Ko vādo mānuse bhave.",
  "thi-ap1:5.1": "Deve mahiddhikā ahumha,",
  "thi-ap1:5.2": "mānusakamhi ko vādo;",
  "thi-ap1:5.3": "Sattaratanamahesī,",
  "thi-ap1:5.4": "itthiratanaṁ ahaṁ bhaviṁ.",
  "thi-ap1:6.1": "Idha sañcitakusalā,",
  "thi-ap1:6.2": "susamiddhakulappajā;",
  "thi-ap1:6.3": "Dhanañjānī ca khemā ca,",
  "thi-ap1:6.4": "ahampi ca tayo janā.",
  "thi-ap1:7.1": "Ārāmaṁ sukataṁ katvā,",
  "thi-ap1:7.2": "sabbāvayavamaṇḍitaṁ;",
  "thi-ap1:7.3": "Buddhappamukhasaṅghassa,",
  "thi-ap1:7.4": "niyyādetvā samoditā.",
  "thi-ap1:8.1": "Yattha yatthūpapajjāmi,",
  "thi-ap1:8.2": "tassa kammassa vāhasā;",
  "thi-ap1:8.3": "Devesu aggataṁ pattā,",
  "thi-ap1:8.4": "manussesu tatheva ca.",
  "thi-ap1:9.1": "Imasmiṁyeva kappamhi,",
  "thi-ap1:9.2": "brahmabandhu mahāyaso;",
  "thi-ap1:9.3": "Kassapo nāma gottena,",
  "thi-ap1:9.4": "uppajji vadataṁ varo.",
  "thi-ap1:10.1": "Upaṭṭhāko mahesissa,",
  "thi-ap1:10.2": "tadā āsi narissaro;",
  "thi-ap1:10.3": "Kāsirājā kikī nāma,",
  "thi-ap1:10.4": "bārāṇasipuruttame.",
  "thi-ap1:11.1": "Tassāsuṁ satta dhītaro,",
  "thi-ap1:11.2": "rājakaññā sukhedhitā;",
  "thi-ap1:11.3": "Buddhopaṭṭhānaniratā,",
  "thi-ap1:11.4": "brahmacariyaṁ cariṁsu tā.",
  "thi-ap1:12.1": "Tāsaṁ sahāyikā hutvā,",
  "thi-ap1:12.2": "sīlesu susamāhitā;",
  "thi-ap1:12.3": "Datvā dānāni sakkaccaṁ,",
  "thi-ap1:12.4": "agāreva vataṁ cariṁ.",
  "thi-ap1:13.1": "Tena kammena sukatena,",
  "thi-ap1:13.2": "cetanāpaṇidhīhi ca;",
  "thi-ap1:13.3": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap1:13.4": "tāvatiṁsūpagā ahaṁ.",
  "thi-ap1:14.1": "Tato cutā yāmamagaṁ,",
  "thi-ap1:14.2": "tatohaṁ tusitaṁ gatā;",
  "thi-ap1:14.3": "Tato ca nimmānaratiṁ,",
  "thi-ap1:14.4": "vasavattipuraṁ tato.",
  "thi-ap1:15.1": "Yattha yatthūpapajjāmi,",
  "thi-ap1:15.2": "puññakammasamohitā;",
  "thi-ap1:15.3": "Tattha tattheva rājūnaṁ,",
  "thi-ap1:15.4": "mahesittamakārayiṁ.",
  "thi-ap1:16.1": "Tato cutā manussatte,",
  "thi-ap1:16.2": "rājūnaṁ cakkavattinaṁ;",
  "thi-ap1:16.3": "Maṇḍalīnañca rājūnaṁ,",
  "thi-ap1:16.4": "mahesittamakārayiṁ.",
  "thi-ap1:17.1": "Sampattimanubhotvāna,",
  "thi-ap1:17.2": "devesu mānusesu ca;",
  "thi-ap1:17.3": "Sabbattha sukhitā hutvā,",
  "thi-ap1:17.4": "nekajātīsu saṁsariṁ.",
  "thi-ap1:18.1": "So hetu ca so pabhavo,",
  "thi-ap1:18.2": "Tammūlaṁ sāsane khamaṁ;",
  "thi-ap1:18.3": "Paṭhamaṁ taṁ samodhānaṁ,",
  "thi-ap1:18.4": "Taṁ dhammaratāya nibbānaṁ.",
  "thi-ap1:19.1": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap1:19.2": "bhavā sabbe samūhatā;",
  "thi-ap1:19.3": "Nāgīva bandhanaṁ chetvā,",
  "thi-ap1:19.4": "viharāmi anāsavā.",
  "thi-ap1:20.1": "Svāgataṁ vata me āsi,",
  "thi-ap1:20.2": "buddhaseṭṭhassa santike;",
  "thi-ap1:20.3": "Tisso vijjā anuppattā,",
  "thi-ap1:20.4": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap1:21.1": "Paṭisambhidā catasso,",
  "thi-ap1:21.2": "vimokkhāpi ca aṭṭhime;",
  "thi-ap1:21.3": "Chaḷabhiññā sacchikatā,",
  "thi-ap1:21.4": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap1:22.1": "Itthaṁ sudaṁ sumedhā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap1:23.1": "Sumedhātheriyāpadānaṁ paṭhamaṁ."
}