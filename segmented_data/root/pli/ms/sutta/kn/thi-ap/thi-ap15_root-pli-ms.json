{
  "thi-ap15:0.1": "Therīapadāna",
  "thi-ap15:0.2": "Ekūposathikavagga",
  "thi-ap15:0.3": "5. Pañcadīpadāyikātherīapadāna",
  "thi-ap15:1.1": "“Nagare haṃsavatiyā,",
  "thi-ap15:1.2": "cārikī āsahaṃ tadā;",
  "thi-ap15:1.3": "Ārāmena ca ārāmaṃ,",
  "thi-ap15:1.4": "carāmi kusalatthikā.",
  "thi-ap15:2.1": "Kāḷapakkhamhi divase,",
  "thi-ap15:2.2": "addasaṃ bodhimuttamaṃ;",
  "thi-ap15:2.3": "Tattha cittaṃ pasādetvā,",
  "thi-ap15:2.4": "bodhimūle nisīdahaṃ.",
  "thi-ap15:3.1": "Garucittaṃ upaṭṭhetvā,",
  "thi-ap15:3.2": "sire katvāna añjaliṃ;",
  "thi-ap15:3.3": "Somanassaṃ pavedetvā,",
  "thi-ap15:3.4": "evaṃ cintesi tāvade.",
  "thi-ap15:4.1": "‘Yadi buddho amitaguṇo,",
  "thi-ap15:4.2": "asamappaṭipuggalo;",
  "thi-ap15:4.3": "Dassetu pāṭihīraṃ me,",
  "thi-ap15:4.4": "bodhi obhāsatu ayaṃ’.",
  "thi-ap15:5.1": "Saha āvajjite mayhaṃ,",
  "thi-ap15:5.2": "bodhi pajjali tāvade;",
  "thi-ap15:5.3": "Sabbasoṇṇamayā āsi,",
  "thi-ap15:5.4": "disā sabbā virocati.",
  "thi-ap15:6.1": "Sattarattindivaṃ tattha,",
  "thi-ap15:6.2": "bodhimūle nisīdahaṃ;",
  "thi-ap15:6.3": "Sattame divase patte,",
  "thi-ap15:6.4": "dīpapūjaṃ akāsahaṃ.",
  "thi-ap15:7.1": "Āsanaṃ parivāretvā,",
  "thi-ap15:7.2": "pañca dīpāni pajjaluṃ;",
  "thi-ap15:7.3": "Yāva udeti sūriyo,",
  "thi-ap15:7.4": "dīpā me pajjaluṃ tadā.",
  "thi-ap15:8.1": "Tena kammena sukatena,",
  "thi-ap15:8.2": "cetanāpaṇidhīhi ca;",
  "thi-ap15:8.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap15:8.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap15:9.1": "Tattha me sukataṃ byamhaṃ,",
  "thi-ap15:9.2": "pañcadīpāti vuccati;",
  "thi-ap15:9.3": "Saṭṭhiyojanamubbedhaṃ,",
  "thi-ap15:9.4": "tiṃsayojanavitthataṃ.",
  "thi-ap15:10.1": "Asaṅkhiyāni dīpāni,",
  "thi-ap15:10.2": "parivāre jaliṃsu me;",
  "thi-ap15:10.3": "Yāvatā devabhavanaṃ,",
  "thi-ap15:10.4": "dīpālokena jotati.",
  "thi-ap15:11.1": "Parammukhā nisīditvā,",
  "thi-ap15:11.2": "yadi icchāmi passituṃ;",
  "thi-ap15:11.3": "Uddhaṃ adho ca tiriyaṃ,",
  "thi-ap15:11.4": "sabbaṃ passāmi cakkhunā.",
  "thi-ap15:12.1": "Yāvatā abhikaṅkhāmi,",
  "thi-ap15:12.2": "daṭṭhuṃ sugataduggate;",
  "thi-ap15:12.3": "Tattha āvaraṇaṃ natthi,",
  "thi-ap15:12.4": "rukkhesu pabbatesu vā.",
  "thi-ap15:13.1": "Asīti devarājūnaṃ,",
  "thi-ap15:13.2": "mahesittamakārayiṃ;",
  "thi-ap15:13.3": "Satānaṃ cakkavattīnaṃ,",
  "thi-ap15:13.4": "mahesittamakārayiṃ.",
  "thi-ap15:14.1": "Yaṃ yaṃ yonupapajjāmi,",
  "thi-ap15:14.2": "devattaṃ atha mānusaṃ;",
  "thi-ap15:14.3": "Dīpasatasahassāni,",
  "thi-ap15:14.4": "parivāre jalanti me.",
  "thi-ap15:15.1": "Devalokā cavitvāna,",
  "thi-ap15:15.2": "uppajjiṃ mātukucchiyaṃ;",
  "thi-ap15:15.3": "Mātukucchigatā santī,",
  "thi-ap15:15.4": "akkhi me na nimīlati.",
  "thi-ap15:16.1": "Dīpasatasahassāni,",
  "thi-ap15:16.2": "puññakammasamaṅgitā;",
  "thi-ap15:16.3": "Jalanti sūtikāgehe,",
  "thi-ap15:16.4": "pañcadīpānidaṃ phalaṃ.",
  "thi-ap15:17.1": "Pacchime bhave sampatte,",
  "thi-ap15:17.2": "mānasaṃ vinivattayiṃ;",
  "thi-ap15:17.3": "Ajarāmataṃ sītibhāvaṃ,",
  "thi-ap15:17.4": "nibbānaṃ phassayiṃ ahaṃ.",
  "thi-ap15:18.1": "Jātiyā sattavassāhaṃ,",
  "thi-ap15:18.2": "arahattamapāpuṇiṃ;",
  "thi-ap15:18.3": "Upasampādayī buddho,",
  "thi-ap15:18.4": "guṇamaññāya gotamo.",
  "thi-ap15:19.1": "Maṇḍape rukkhamūle vā,",
  "thi-ap15:19.2": "suññāgāre vasantiyā;",
  "thi-ap15:19.3": "Sadā pajjalate dīpaṃ,",
  "thi-ap15:19.4": "pañcadīpānidaṃ phalaṃ.",
  "thi-ap15:20.1": "Dibbacakkhuvisuddhaṃ me,",
  "thi-ap15:20.2": "samādhikusalā ahaṃ;",
  "thi-ap15:20.3": "Abhiññāpāramippattā,",
  "thi-ap15:20.4": "pañcadīpānidaṃ phalaṃ.",
  "thi-ap15:21.1": "Sabbavositavosānā,",
  "thi-ap15:21.2": "katakiccā anāsavā;",
  "thi-ap15:21.3": "Pañcadīpā mahāvīra,",
  "thi-ap15:21.4": "pāde vandāmi cakkhuma.",
  "thi-ap15:22.1": "Satasahassito kappe,",
  "thi-ap15:22.2": "yaṃ dīpamadadiṃ tadā;",
  "thi-ap15:22.3": "Duggatiṃ nābhijānāmi,",
  "thi-ap15:22.4": "pañcadīpānidaṃ phalaṃ.",
  "thi-ap15:23.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap15:23.2": "…pe…",
  "thi-ap15:23.3": "viharāmi anāsavā.",
  "thi-ap15:24.1": "Svāgataṃ vata me āsi,",
  "thi-ap15:24.2": "…pe…",
  "thi-ap15:24.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap15:25.1": "Paṭisambhidā catasso,",
  "thi-ap15:25.2": "…pe…",
  "thi-ap15:25.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap15:26.1": "Itthaṃ sudaṃ pañcadīpadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap15:27.1": "Pañcadīpadāyikātheriyāpadānaṃ pañcamaṃ."
}