{
  "thi-ap18:0.1": "Therīapadāna",
  "thi-ap18:0.2": "Ekūposathikavagga",
  "thi-ap18:0.3": "8. Khemātherīapadāna",
  "thi-ap18:1.1": "“Padumuttaro nāma jino,",
  "thi-ap18:1.2": "sabbadhammesu cakkhumā;",
  "thi-ap18:1.3": "Ito satasahassamhi,",
  "thi-ap18:1.4": "kappe uppajji nāyako.",
  "thi-ap18:2.1": "Tadāhaṃ haṃsavatiyaṃ,",
  "thi-ap18:2.2": "jātā seṭṭhikule ahuṃ;",
  "thi-ap18:2.3": "Nānāratanapajjote,",
  "thi-ap18:2.4": "mahāsukhasamappitā.",
  "thi-ap18:3.1": "Upetvā taṃ mahāvīraṃ,",
  "thi-ap18:3.2": "assosiṃ dhammadesanaṃ;",
  "thi-ap18:3.3": "Tato jātappasādāhaṃ,",
  "thi-ap18:3.4": "upemi saraṇaṃ jinaṃ.",
  "thi-ap18:4.1": "Mātaraṃ pitarañcāhaṃ,",
  "thi-ap18:4.2": "āyācitvā vināyakaṃ;",
  "thi-ap18:4.3": "Nimantayitvā sattāhaṃ,",
  "thi-ap18:4.4": "bhojayiṃ sahasāvakaṃ.",
  "thi-ap18:5.1": "Atikkante ca sattāhe,",
  "thi-ap18:5.2": "mahāpaññānamuttamaṃ;",
  "thi-ap18:5.3": "Bhikkhuniṃ etadaggamhi,",
  "thi-ap18:5.4": "ṭhapesi narasārathi.",
  "thi-ap18:6.1": "Taṃ sutvā muditā hutvā,",
  "thi-ap18:6.2": "puno tassa mahesino;",
  "thi-ap18:6.3": "Kāraṃ katvāna taṃ ṭhānaṃ,",
  "thi-ap18:6.4": "paṇipacca paṇīdahiṃ.",
  "thi-ap18:7.1": "Tato mama jino āha,",
  "thi-ap18:7.2": "‘sijjhataṃ paṇidhī tava;",
  "thi-ap18:7.3": "Sasaṃghe me kataṃ kāraṃ,",
  "thi-ap18:7.4": "appameyyaphalaṃ tayā.",
  "thi-ap18:8.1": "Satasahassito kappe,",
  "thi-ap18:8.2": "okkākakulasambhavo;",
  "thi-ap18:8.3": "Gotamo nāma gottena,",
  "thi-ap18:8.4": "satthā loke bhavissati.",
  "thi-ap18:9.1": "Tassa dhammesu dāyādā,",
  "thi-ap18:9.2": "orasā dhammanimmitā;",
  "thi-ap18:9.3": "Etadaggamanuppattā,",
  "thi-ap18:9.4": "khemā nāma bhavissati’.",
  "thi-ap18:10.1": "Tena kammena sukatena,",
  "thi-ap18:10.2": "cetanāpaṇidhīhi ca;",
  "thi-ap18:10.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap18:10.4": "tāvatiṃsūpagā ahaṃ.",
  "thi-ap18:11.1": "Tato cutā yāmamagaṃ,",
  "thi-ap18:11.2": "tatohaṃ tusitaṃ gatā;",
  "thi-ap18:11.3": "Tato ca nimmānaratiṃ,",
  "thi-ap18:11.4": "vasavattipuraṃ tato.",
  "thi-ap18:12.1": "Yattha yatthūpapajjāmi,",
  "thi-ap18:12.2": "tassa kammassa vāhasā;",
  "thi-ap18:12.3": "Tattha tattheva rājūnaṃ,",
  "thi-ap18:12.4": "mahesittamakārayiṃ.",
  "thi-ap18:13.1": "Tato cutā manussatte,",
  "thi-ap18:13.2": "rājūnaṃ cakkavattinaṃ;",
  "thi-ap18:13.3": "Maṇḍalīnañca rājūnaṃ,",
  "thi-ap18:13.4": "mahesittamakārayiṃ.",
  "thi-ap18:14.1": "Sampattiṃ anubhotvāna,",
  "thi-ap18:14.2": "devesu manujesu ca;",
  "thi-ap18:14.3": "Sabbattha sukhitā hutvā,",
  "thi-ap18:14.4": "nekakappesu saṃsariṃ.",
  "thi-ap18:15.1": "Ekanavutito kappe,",
  "thi-ap18:15.2": "vipassī lokanāyako;",
  "thi-ap18:15.3": "Uppajji cārudassano,",
  "thi-ap18:15.4": "sabbadhammavipassako.",
  "thi-ap18:16.1": "Tamahaṃ lokanāyakaṃ,",
  "thi-ap18:16.2": "upetvā narasārathiṃ;",
  "thi-ap18:16.3": "Dhammaṃ bhaṇitaṃ sutvāna,",
  "thi-ap18:16.4": "pabbajiṃ anagāriyaṃ.",
  "thi-ap18:17.1": "Dasavassasahassāni,",
  "thi-ap18:17.2": "tassa vīrassa sāsane;",
  "thi-ap18:17.3": "Brahmacariyaṃ caritvāna,",
  "thi-ap18:17.4": "yuttayogā bahussutā.",
  "thi-ap18:18.1": "Paccayākārakusalā,",
  "thi-ap18:18.2": "catusaccavisāradā;",
  "thi-ap18:18.3": "Nipuṇā cittakathikā,",
  "thi-ap18:18.4": "satthusāsanakārikā.",
  "thi-ap18:19.1": "Tato cutāhaṃ tusitaṃ,",
  "thi-ap18:19.2": "upapannā yasassinī;",
  "thi-ap18:19.3": "Abhibhomi tahiṃ aññe,",
  "thi-ap18:19.4": "brahmacārīphalenahaṃ.",
  "thi-ap18:20.1": "Yattha yatthūpapannāhaṃ,",
  "thi-ap18:20.2": "mahābhogā mahaddhanā;",
  "thi-ap18:20.3": "Medhāvinī rūpavatī,",
  "thi-ap18:20.4": "vinītaparisāpi ca.",
  "thi-ap18:21.1": "Bhavāmi tena kammena,",
  "thi-ap18:21.2": "yogena jinasāsane;",
  "thi-ap18:21.3": "Sabbā sampattiyo mayhaṃ,",
  "thi-ap18:21.4": "sulabhā manaso piyā.",
  "thi-ap18:22.1": "Yopi me bhavate bhattā,",
  "thi-ap18:22.2": "yattha yattha gatāyapi;",
  "thi-ap18:22.3": "Vimāneti na maṃ koci,",
  "thi-ap18:22.4": "paṭipattibalena me.",
  "thi-ap18:23.1": "Imamhi bhaddake kappe,",
  "thi-ap18:23.2": "brahmabandhu mahāyaso;",
  "thi-ap18:23.3": "Nāmena koṇāgamano,",
  "thi-ap18:23.4": "uppajji vadataṃ varo.",
  "thi-ap18:24.1": "Tadā hi bārāṇasiyaṃ,",
  "thi-ap18:24.2": "susamiddhakulappajā;",
  "thi-ap18:24.3": "Dhanañjānī sumedhā ca,",
  "thi-ap18:24.4": "ahampi ca tayo janā.",
  "thi-ap18:25.1": "Saṃghārāmamadāsimha,",
  "thi-ap18:25.2": "dānasahāyikā pure;",
  "thi-ap18:25.3": "Saṃghassa ca vihārampi,",
  "thi-ap18:25.4": "uddissa kārikā mayaṃ.",
  "thi-ap18:26.1": "Tato cutā mayaṃ sabbā,",
  "thi-ap18:26.2": "tāvatiṃsūpagā ahuṃ;",
  "thi-ap18:26.3": "Yasasā aggataṃ pattā,",
  "thi-ap18:26.4": "manussesu tatheva ca.",
  "thi-ap18:27.1": "Imasmiṃyeva kappamhi,",
  "thi-ap18:27.2": "brahmabandhu mahāyaso;",
  "thi-ap18:27.3": "Kassapo nāma gottena,",
  "thi-ap18:27.4": "uppajji vadataṃ varo.",
  "thi-ap18:28.1": "Upaṭṭhāko mahesissa,",
  "thi-ap18:28.2": "tadā āsi narissaro;",
  "thi-ap18:28.3": "Kāsirājā kikī nāma,",
  "thi-ap18:28.4": "bārāṇasipuruttame.",
  "thi-ap18:29.1": "Tassāsiṃ jeṭṭhikā dhītā,",
  "thi-ap18:29.2": "samaṇī iti vissutā;",
  "thi-ap18:29.3": "Dhammaṃ sutvā jinaggassa,",
  "thi-ap18:29.4": "pabbajjaṃ samarocayiṃ.",
  "thi-ap18:30.1": "Anujāni na no tāto,",
  "thi-ap18:30.2": "agāreva tadā mayaṃ;",
  "thi-ap18:30.3": "Vīsavassasahassāni,",
  "thi-ap18:30.4": "vicarimha atanditā.",
  "thi-ap18:31.1": "Komāribrahmacariyaṃ,",
  "thi-ap18:31.2": "rājakaññā sukhedhitā;",
  "thi-ap18:31.3": "Buddhopaṭṭhānaniratā,",
  "thi-ap18:31.4": "muditā satta dhītaro.",
  "thi-ap18:32.1": "Samaṇī samaṇaguttā ca,",
  "thi-ap18:32.2": "bhikkhunī bhikkhudāyikā;",
  "thi-ap18:32.3": "Dhammā ceva sudhammā ca,",
  "thi-ap18:32.4": "sattamī saṃghadāyikā.",
  "thi-ap18:33.1": "Ahaṃ uppalavaṇṇā ca,",
  "thi-ap18:33.2": "paṭācārā ca kuṇḍalā;",
  "thi-ap18:33.3": "Kisāgotamī dhammadinnā,",
  "thi-ap18:33.4": "visākhā hoti sattamī.",
  "thi-ap18:34.1": "Kadāci so narādicco,",
  "thi-ap18:34.2": "dhammaṃ desesi abbhutaṃ;",
  "thi-ap18:34.3": "Mahānidānasuttantaṃ,",
  "thi-ap18:34.4": "sutvā taṃ pariyāpuṇiṃ.",
  "thi-ap18:35.1": "Tehi kammehi sukatehi,",
  "thi-ap18:35.2": "cetanāpaṇidhīhi ca;",
  "thi-ap18:35.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap18:35.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap18:36.1": "Pacchime ca bhave dāni,",
  "thi-ap18:36.2": "sākalāya puruttame;",
  "thi-ap18:36.3": "Rañño maddassa dhītāmhi,",
  "thi-ap18:36.4": "manāpā dayitā piyā.",
  "thi-ap18:37.1": "Saha me jātamattamhi,",
  "thi-ap18:37.2": "khemaṃ tamhi pure ahu;",
  "thi-ap18:37.3": "Tato khemāti nāmaṃ me,",
  "thi-ap18:37.4": "guṇato upapajjatha.",
  "thi-ap18:38.1": "Yadāhaṃ yobbanaṃ pattā,",
  "thi-ap18:38.2": "rūpalāvaññabhūsitā;",
  "thi-ap18:38.3": "Tadā adāsi maṃ tāto,",
  "thi-ap18:38.4": "bimbisārassa rājino.",
  "thi-ap18:39.1": "Tassāhaṃ suppiyā āsiṃ,",
  "thi-ap18:39.2": "rūpake lāyane ratā;",
  "thi-ap18:39.3": "Rūpānaṃ dosavādīti,",
  "thi-ap18:39.4": "na upesiṃ mahādayaṃ.",
  "thi-ap18:40.1": "Bimbisāro tadā rājā,",
  "thi-ap18:40.2": "mamānuggahabuddhiyā;",
  "thi-ap18:40.3": "Vaṇṇayitvā veḷuvanaṃ,",
  "thi-ap18:40.4": "gāyake gāpayī mamaṃ.",
  "thi-ap18:41.1": "Rammaṃ veḷuvanaṃ yena,",
  "thi-ap18:41.2": "na diṭṭhaṃ sugatālayaṃ;",
  "thi-ap18:41.3": "Na tena nandanaṃ diṭṭhaṃ,",
  "thi-ap18:41.4": "iti maññāmase mayaṃ.",
  "thi-ap18:42.1": "Yena veḷuvanaṃ diṭṭhaṃ,",
  "thi-ap18:42.2": "naranandananandanaṃ;",
  "thi-ap18:42.3": "Sudiṭṭhaṃ nandanaṃ tena,",
  "thi-ap18:42.4": "amarindasunandanaṃ.",
  "thi-ap18:43.1": "Vihāya nandanaṃ devā,",
  "thi-ap18:43.2": "otaritvā mahītalaṃ;",
  "thi-ap18:43.3": "Rammaṃ veḷuvanaṃ disvā,",
  "thi-ap18:43.4": "na tappanti suvimhitā.",
  "thi-ap18:44.1": "Rājapuññena nibbattaṃ,",
  "thi-ap18:44.2": "buddhapuññena bhūsitaṃ;",
  "thi-ap18:44.3": "Ko vattā tassa nissesaṃ,",
  "thi-ap18:44.4": "vanassa guṇasañcayaṃ.",
  "thi-ap18:45.1": "Taṃ sutvā vanasamiddhaṃ,",
  "thi-ap18:45.2": "mama sotamanoharaṃ;",
  "thi-ap18:45.3": "Daṭṭhukāmā tamuyyānaṃ,",
  "thi-ap18:45.4": "rañño ārocayiṃ tadā.",
  "thi-ap18:46.1": "Mahatā parivārena,",
  "thi-ap18:46.2": "tadā ca so mahīpati;",
  "thi-ap18:46.3": "Maṃ pesesi tamuyyānaṃ,",
  "thi-ap18:46.4": "dassanāya samussukaṃ.",
  "thi-ap18:47.1": "‘Gaccha passa mahābhoge,",
  "thi-ap18:47.2": "vanaṃ nettarasāyanaṃ;",
  "thi-ap18:47.3": "Yaṃ sadā bhāti siriyā,",
  "thi-ap18:47.4": "sugatābhānurañjitaṃ’.",
  "thi-ap18:48.1": "‘Yadā ca piṇḍāya muni,",
  "thi-ap18:48.2": "giribbajapuruttamaṃ;",
  "thi-ap18:48.3": "Paviṭṭhohaṃ tadāyeva,",
  "thi-ap18:48.4": "vanaṃ daṭṭhumupāgamiṃ’.",
  "thi-ap18:49.1": "Tadā taṃ phullavipinaṃ,",
  "thi-ap18:49.2": "nānābhamarakūjitaṃ;",
  "thi-ap18:49.3": "Kokilāgītasahitaṃ,",
  "thi-ap18:49.4": "mayūragaṇanaccitaṃ.",
  "thi-ap18:50.1": "Appasaddamanākiṇṇaṃ,",
  "thi-ap18:50.2": "nānācaṅkamabhūsitaṃ;",
  "thi-ap18:50.3": "Kuṭimaṇḍapasaṃkiṇṇaṃ,",
  "thi-ap18:50.4": "yogīvaravirājitaṃ.",
  "thi-ap18:51.1": "Vicarantī amaññissaṃ,",
  "thi-ap18:51.2": "‘saphalaṃ nayanaṃ mama’;",
  "thi-ap18:51.3": "Tatthāpi taruṇaṃ bhikkhuṃ,",
  "thi-ap18:51.4": "yuttaṃ disvā vicintayiṃ.",
  "thi-ap18:52.1": "‘Īdise vipine ramme,",
  "thi-ap18:52.2": "ṭhitoyaṃ navayobbane;",
  "thi-ap18:52.3": "Vasantamiva kantena,",
  "thi-ap18:52.4": "rūpena ca samanvito.",
  "thi-ap18:53.1": "Nisinno rukkhamūlamhi,",
  "thi-ap18:53.2": "muṇḍo saṅghāṭipāruto;",
  "thi-ap18:53.3": "Jhāyate vatayaṃ bhikkhu,",
  "thi-ap18:53.4": "hitvā visayajaṃ ratiṃ.",
  "thi-ap18:54.1": "Nanu nāma gahaṭṭhena,",
  "thi-ap18:54.2": "kāmaṃ bhutvā yathāsukhaṃ;",
  "thi-ap18:54.3": "Pacchā jiṇṇena dhammoyaṃ,",
  "thi-ap18:54.4": "caritabbo subhaddako’.",
  "thi-ap18:55.1": "‘Suññakan’ti viditvāna,",
  "thi-ap18:55.2": "‘gandhagehaṃ jinālayaṃ’;",
  "thi-ap18:55.3": "Upetvā jinamaddakkhaṃ,",
  "thi-ap18:55.4": "udayantaṃva bhākaraṃ.",
  "thi-ap18:56.1": "Ekakaṃ sukhamāsīnaṃ,",
  "thi-ap18:56.2": "bījamānaṃ varitthiyā;",
  "thi-ap18:56.3": "Disvānevaṃ vicintesiṃ,",
  "thi-ap18:56.4": "‘nāyaṃ lūkho narāsabho.",
  "thi-ap18:57.1": "Sā kaññā kanakābhāsā,",
  "thi-ap18:57.2": "padumānanalocanā;",
  "thi-ap18:57.3": "Bimboṭṭhī kundadasanā,",
  "thi-ap18:57.4": "manonettarasāyanā.",
  "thi-ap18:58.1": "Hemadolābhasavanā,",
  "thi-ap18:58.2": "kalikākārasutthanī;",
  "thi-ap18:58.3": "Vedimajjhāva sussoṇī,",
  "thi-ap18:58.4": "rambhoru cārubhūsanā.",
  "thi-ap18:59.1": "Rattaṃsakupasambyānā,",
  "thi-ap18:59.2": "nīlamaṭṭhanivāsanā;",
  "thi-ap18:59.3": "Atappaneyyarūpena,",
  "thi-ap18:59.4": "hāsabhāvasamanvitā’.",
  "thi-ap18:60.1": "Disvā tamevaṃ cintesiṃ,",
  "thi-ap18:60.2": "‘ahoyamabhirūpinī;",
  "thi-ap18:60.3": "Na mayānena nettena,",
  "thi-ap18:60.4": "diṭṭhapubbā kudācanaṃ’.",
  "thi-ap18:61.1": "Tato jarābhibhūtā sā,",
  "thi-ap18:61.2": "vivaṇṇā vikatānanā;",
  "thi-ap18:61.3": "Bhinnadantā setasirā,",
  "thi-ap18:61.4": "salālā vadanāsuci.",
  "thi-ap18:62.1": "Saṃkhittakaṇṇā setakkhī,",
  "thi-ap18:62.2": "lambāsubhapayodharā;",
  "thi-ap18:62.3": "Valivitatasabbaṅgī,",
  "thi-ap18:62.4": "sirāvitatadehinī.",
  "thi-ap18:63.1": "Nataṅgā daṇḍadutiyā,",
  "thi-ap18:63.2": "upphāsulikatā kisā;",
  "thi-ap18:63.3": "Pavedhamānā patitā,",
  "thi-ap18:63.4": "nissasantī muhuṃ muhuṃ.",
  "thi-ap18:64.1": "Tato me āsi saṃvego,",
  "thi-ap18:64.2": "abbhuto lomahaṃsano;",
  "thi-ap18:64.3": "‘Dhiratthu rūpaṃ asuciṃ,",
  "thi-ap18:64.4": "ramante yattha bālisā’.",
  "thi-ap18:65.1": "Tadā mahākāruṇiko,",
  "thi-ap18:65.2": "disvā saṃviggamānasaṃ;",
  "thi-ap18:65.3": "Udaggacitto sugato,",
  "thi-ap18:65.4": "imā gāthā abhāsatha.",
  "thi-ap18:66.1": "‘Āturaṃ asuciṃ pūtiṃ,",
  "thi-ap18:66.2": "passa kheme samussayaṃ;",
  "thi-ap18:66.3": "Uggharantaṃ paggharantaṃ,",
  "thi-ap18:66.4": "bālānaṃ abhinanditaṃ.",
  "thi-ap18:67.1": "Asubhāya cittaṃ bhāvehi,",
  "thi-ap18:67.2": "ekaggaṃ susamāhitaṃ;",
  "thi-ap18:67.3": "Sati kāyagatā tyatthu,",
  "thi-ap18:67.4": "nibbidā bahulā bhava.",
  "thi-ap18:68.1": "Yathā idaṃ tathā etaṃ,",
  "thi-ap18:68.2": "yathā etaṃ tathā idaṃ;",
  "thi-ap18:68.3": "Ajjhattañca bahiddhā ca,",
  "thi-ap18:68.4": "kāye chandaṃ virājaya.",
  "thi-ap18:69.1": "Animittañca bhāvehi,",
  "thi-ap18:69.2": "mānānusayamujjaha;",
  "thi-ap18:69.3": "Tato mānābhisamayā,",
  "thi-ap18:69.4": "upasantā carissasi.",
  "thi-ap18:70.1": "Ye rāgarattānupatanti sotaṃ,",
  "thi-ap18:70.2": "Sayaṃ kataṃ makkaṭakova jālaṃ;",
  "thi-ap18:70.3": "Etampi chetvāna paribbajanti,",
  "thi-ap18:70.4": "Anapekkhino kāmasukhaṃ pahāya’.",
  "thi-ap18:71.1": "Tato kallitacittaṃ maṃ,",
  "thi-ap18:71.2": "ñatvāna narasārathi;",
  "thi-ap18:71.3": "Mahānidānaṃ desesi,",
  "thi-ap18:71.4": "suttantaṃ vinayāya me.",
  "thi-ap18:72.1": "Sutvā suttantaseṭṭhaṃ taṃ,",
  "thi-ap18:72.2": "pubbasaññamanussariṃ;",
  "thi-ap18:72.3": "Tattha ṭhitāvahaṃ santī,",
  "thi-ap18:72.4": "dhammacakkhuṃ visodhayiṃ.",
  "thi-ap18:73.1": "Nipatitvā mahesissa,",
  "thi-ap18:73.2": "pādamūlamhi tāvade;",
  "thi-ap18:73.3": "Accayaṃ desanatthāya,",
  "thi-ap18:73.4": "idaṃ vacanamabraviṃ.",
  "thi-ap18:74.1": "‘Namo te sabbadassāvī,",
  "thi-ap18:74.2": "namo te karuṇākara;",
  "thi-ap18:74.3": "Namo te tiṇṇasaṃsāra,",
  "thi-ap18:74.4": "namo te amataṃdada.",
  "thi-ap18:75.1": "Diṭṭhigahanapakkhandā,",
  "thi-ap18:75.2": "kāmarāgavimohitā;",
  "thi-ap18:75.3": "Tayā sammā upāyena,",
  "thi-ap18:75.4": "vinītā vinaye ratā.",
  "thi-ap18:76.1": "Adassanena vibhogā,",
  "thi-ap18:76.2": "tādisānaṃ mahesinaṃ;",
  "thi-ap18:76.3": "Anubhonti mahādukkhaṃ,",
  "thi-ap18:76.4": "sattā saṃsārasāgare.",
  "thi-ap18:77.1": "Yadāhaṃ lokasaraṇaṃ,",
  "thi-ap18:77.2": "araṇaṃ araṇantaguṃ;",
  "thi-ap18:77.3": "Nāddasāmi adūraṭṭhaṃ,",
  "thi-ap18:77.4": "desayāmi tamaccayaṃ.",
  "thi-ap18:78.1": "Mahāhitaṃ varadadaṃ,",
  "thi-ap18:78.2": "ahitoti visaṅkitā;",
  "thi-ap18:78.3": "Nopesiṃ rūpaniratā,",
  "thi-ap18:78.4": "desayāmi tamaccayaṃ’.",
  "thi-ap18:79.1": "Tadā madhuranigghoso,",
  "thi-ap18:79.2": "mahākāruṇiko jino;",
  "thi-ap18:79.3": "Avoca tiṭṭha khemeti,",
  "thi-ap18:79.4": "siñcanto amatena maṃ.",
  "thi-ap18:80.1": "Tadā paṇamya sirasā,",
  "thi-ap18:80.2": "katvā ca naṃ padakkhiṇaṃ;",
  "thi-ap18:80.3": "Gantvā disvā narapatiṃ,",
  "thi-ap18:80.4": "idaṃ vacanamabraviṃ.",
  "thi-ap18:81.1": "‘Aho sammā upāyo te,",
  "thi-ap18:81.2": "cintitoyamarindama;",
  "thi-ap18:81.3": "Vanadassanakāmāya,",
  "thi-ap18:81.4": "diṭṭho nibbānato muni.",
  "thi-ap18:82.1": "Yadi te ruccate rāja,",
  "thi-ap18:82.2": "sāsane tassa tādino;",
  "thi-ap18:82.3": "Pabbajissāmi rūpehaṃ,",
  "thi-ap18:82.4": "nibbinnā munivāṇinā’.",
  "thi-ap18:83.1": "Dutiyaṃ bhāṇavāraṃ.",
  "thi-ap18:84.1": "Añjaliṃ paggahetvāna,",
  "thi-ap18:84.2": "tadāha sa mahīpati;",
  "thi-ap18:84.3": "‘Anujānāmi te bhadde,",
  "thi-ap18:84.4": "pabbajjā tava sijjhatu’.",
  "thi-ap18:85.1": "Pabbajitvā tadā cāhaṃ,",
  "thi-ap18:85.2": "addhamāse upaṭṭhite;",
  "thi-ap18:85.3": "Dīpodayañca bhedañca,",
  "thi-ap18:85.4": "disvā saṃviggamānasā.",
  "thi-ap18:86.1": "Nibbinnā sabbasaṅkhāre,",
  "thi-ap18:86.2": "paccayākārakovidā;",
  "thi-ap18:86.3": "Caturoghe atikkamma,",
  "thi-ap18:86.4": "arahattamapāpuṇiṃ.",
  "thi-ap18:87.1": "Iddhīsu ca vasī āsiṃ,",
  "thi-ap18:87.2": "dibbāya sotadhātuyā;",
  "thi-ap18:87.3": "Cetopariyañāṇassa,",
  "thi-ap18:87.4": "vasī cāpi bhavāmahaṃ.",
  "thi-ap18:88.1": "Pubbenivāsaṃ jānāmi,",
  "thi-ap18:88.2": "dibbacakkhu visodhitaṃ;",
  "thi-ap18:88.3": "Sabbāsavā parikkhīṇā,",
  "thi-ap18:88.4": "natthi dāni punabbhavo.",
  "thi-ap18:89.1": "Atthadhammaniruttīsu,",
  "thi-ap18:89.2": "paṭibhāne tatheva ca;",
  "thi-ap18:89.3": "Parisuddhaṃ mama ñāṇaṃ,",
  "thi-ap18:89.4": "uppannaṃ buddhasāsane.",
  "thi-ap18:90.1": "Kusalāhaṃ visuddhīsu,",
  "thi-ap18:90.2": "kathāvatthuvisāradā;",
  "thi-ap18:90.3": "Abhidhammanayaññū ca,",
  "thi-ap18:90.4": "vasippattāmhi sāsane.",
  "thi-ap18:91.1": "Tato toraṇavatthusmiṃ,",
  "thi-ap18:91.2": "raññā kosalasāminā;",
  "thi-ap18:91.3": "Pucchitā nipuṇe pañhe,",
  "thi-ap18:91.4": "byākarontī yathātathaṃ.",
  "thi-ap18:92.1": "Tadā sa rājā sugataṃ,",
  "thi-ap18:92.2": "upasaṅkamma pucchatha;",
  "thi-ap18:92.3": "Tatheva buddho byākāsi,",
  "thi-ap18:92.4": "yathā te byākatā mayā.",
  "thi-ap18:93.1": "Jino tasmiṃ guṇe tuṭṭho,",
  "thi-ap18:93.2": "etadagge ṭhapesi maṃ;",
  "thi-ap18:93.3": "Mahāpaññānamaggāti,",
  "thi-ap18:93.4": "bhikkhunīnaṃ naruttamo.",
  "thi-ap18:94.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap18:94.2": "…pe…",
  "thi-ap18:94.3": "viharāmi anāsavā.",
  "thi-ap18:95.1": "Svāgataṃ vata me āsi,",
  "thi-ap18:95.2": "…pe…",
  "thi-ap18:95.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap18:96.1": "Paṭisambhidā catasso,",
  "thi-ap18:96.2": "…pe…",
  "thi-ap18:96.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap18:97.1": "Itthaṃ sudaṃ khemā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap18:98.1": "Khemātheriyāpadānaṃ aṭṭhamaṃ."
}