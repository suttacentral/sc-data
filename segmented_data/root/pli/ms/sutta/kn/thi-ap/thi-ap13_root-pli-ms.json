{
  "thi-ap13:0.1": "Therīapadāna",
  "thi-ap13:0.2": "Ekūposathikavagga",
  "thi-ap13:0.3": "3. Modakadāyikātherīapadāna",
  "thi-ap13:1.1": "“Nagare bandhumatiyā,",
  "thi-ap13:1.2": "kumbhadāsī ahosahaṁ;",
  "thi-ap13:1.3": "Mama bhāgaṁ gahetvāna,",
  "thi-ap13:1.4": "gacchaṁ udakahārikā.",
  "thi-ap13:2.1": "Panthamhi samaṇaṁ disvā,",
  "thi-ap13:2.2": "santacittaṁ samāhitaṁ;",
  "thi-ap13:2.3": "Pasannacittā sumanā,",
  "thi-ap13:2.4": "modake tīṇidāsahaṁ.",
  "thi-ap13:3.1": "Tena kammena sukatena,",
  "thi-ap13:3.2": "cetanāpaṇidhīhi ca;",
  "thi-ap13:3.3": "Ekanavutikappāni,",
  "thi-ap13:3.4": "vinipātaṁ nagacchahaṁ.",
  "thi-ap13:4.1": "Sampatti taṁ karitvāna,",
  "thi-ap13:4.2": "sabbaṁ anubhaviṁ ahaṁ;",
  "thi-ap13:4.3": "Modake tīṇi datvāna,",
  "thi-ap13:4.4": "pattāhaṁ acalaṁ padaṁ.",
  "thi-ap13:5.1": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap13:5.2": "…pe…",
  "thi-ap13:5.3": "viharāmi anāsavā.",
  "thi-ap13:6.1": "Svāgataṁ vata me āsi,",
  "thi-ap13:6.2": "…pe…",
  "thi-ap13:6.3": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap13:7.1": "Paṭisambhidā catasso,",
  "thi-ap13:7.2": "…pe…",
  "thi-ap13:7.3": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap13:8.1": "Itthaṁ sudaṁ modakadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap13:9.1": "Modakadāyikātheriyāpadānaṁ tatiyaṁ."
}