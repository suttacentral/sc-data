{
  "thi-ap25:0.1": "Therīapadāna",
  "thi-ap25:0.2": "Kuṇḍalakesīvagga",
  "thi-ap25:0.3": "5 Nandātherīapadāna",
  "thi-ap25:1.1": "“Padumuttaro nāma jino,",
  "thi-ap25:1.2": "sabbadhammāna pāragū;",
  "thi-ap25:1.3": "Ito satasahassamhi,",
  "thi-ap25:1.4": "kappe uppajji nāyako.",
  "thi-ap25:2.1": "Ovādako viññāpako,",
  "thi-ap25:2.2": "tārako sabbapāṇinaṃ;",
  "thi-ap25:2.3": "Desanākusalo buddho,",
  "thi-ap25:2.4": "tāresi janataṃ bahuṃ.",
  "thi-ap25:3.1": "Anukampako kāruṇiko,",
  "thi-ap25:3.2": "hitesī sabbapāṇinaṃ;",
  "thi-ap25:3.3": "Sampatte titthiye sabbe,",
  "thi-ap25:3.4": "pañcasīle patiṭṭhapi.",
  "thi-ap25:4.1": "Evaṃ nirākulaṃ āsi,",
  "thi-ap25:4.2": "suññataṃ titthiyehi ca;",
  "thi-ap25:4.3": "Vicittaṃ arahantehi,",
  "thi-ap25:4.4": "vasībhūtehi tādibhi.",
  "thi-ap25:5.1": "Ratanānaṭṭhapaññāsaṃ,",
  "thi-ap25:5.2": "uggatova mahāmuni;",
  "thi-ap25:5.3": "Kañcanagghiyasaṅkāso,",
  "thi-ap25:5.4": "bāttiṃsavaralakkhaṇo.",
  "thi-ap25:6.1": "Vassasatasahassāni,",
  "thi-ap25:6.2": "āyu vijjati tāvade;",
  "thi-ap25:6.3": "Tāvatā tiṭṭhamāno so,",
  "thi-ap25:6.4": "tāresi janataṃ bahuṃ.",
  "thi-ap25:7.1": "Tadāhaṃ haṃsavatiyaṃ,",
  "thi-ap25:7.2": "jātā seṭṭhikule ahuṃ;",
  "thi-ap25:7.3": "Nānāratanapajjote,",
  "thi-ap25:7.4": "mahāsukhasamappitā.",
  "thi-ap25:8.1": "Upetvā taṃ mahāvīraṃ,",
  "thi-ap25:8.2": "assosiṃ dhammadesanaṃ;",
  "thi-ap25:8.3": "Amataṃ paramassādaṃ,",
  "thi-ap25:8.4": "paramatthanivedakaṃ.",
  "thi-ap25:9.1": "Tadā nimantayitvāna,",
  "thi-ap25:9.2": "sasaṃghaṃ lokanāyakaṃ;",
  "thi-ap25:9.3": "Datvā tassa mahādānaṃ,",
  "thi-ap25:9.4": "pasannā sehi pāṇibhi.",
  "thi-ap25:10.1": "Jhāyinīnaṃ bhikkhunīnaṃ,",
  "thi-ap25:10.2": "aggaṭṭhānamapatthayiṃ;",
  "thi-ap25:10.3": "Nipacca sirasā dhīraṃ,",
  "thi-ap25:10.4": "sasaṃghaṃ lokanāyakaṃ.",
  "thi-ap25:11.1": "Tadā adantadamako,",
  "thi-ap25:11.2": "tilokasaraṇo pabhū;",
  "thi-ap25:11.3": "Byākāsi narasārathi,",
  "thi-ap25:11.4": "‘lacchase taṃ supatthitaṃ.",
  "thi-ap25:12.1": "Satasahassito kappe,",
  "thi-ap25:12.2": "okkākakulasambhavo;",
  "thi-ap25:12.3": "Gotamo nāma gottena,",
  "thi-ap25:12.4": "satthā loke bhavissati.",
  "thi-ap25:13.1": "Tassa dhammesu dāyādā,",
  "thi-ap25:13.2": "orasā dhammanimmitā;",
  "thi-ap25:13.3": "Nandāti nāma nāmena,",
  "thi-ap25:13.4": "hessati satthu sāvikā’.",
  "thi-ap25:14.1": "Taṃ sutvā muditā hutvā,",
  "thi-ap25:14.2": "yāvajīvaṃ tadā jinaṃ;",
  "thi-ap25:14.3": "Mettacittā paricariṃ,",
  "thi-ap25:14.4": "paccayehi vināyakaṃ.",
  "thi-ap25:15.1": "Tena kammena sukatena,",
  "thi-ap25:15.2": "cetanāpaṇidhīhi ca;",
  "thi-ap25:15.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap25:15.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap25:16.1": "Tato cutā yāmamagaṃ,",
  "thi-ap25:16.2": "tatohaṃ tusitaṃ gatā;",
  "thi-ap25:16.3": "Tato ca nimmānaratiṃ,",
  "thi-ap25:16.4": "vasavattipuraṃ tato.",
  "thi-ap25:17.1": "Yattha yatthūpapajjāmi,",
  "thi-ap25:17.2": "tassa kammassa vāhasā;",
  "thi-ap25:17.3": "Tattha tattheva rājūnaṃ,",
  "thi-ap25:17.4": "mahesittamakārayiṃ.",
  "thi-ap25:18.1": "Tato cutā manussatte,",
  "thi-ap25:18.2": "rājānaṃ cakkavattinaṃ;",
  "thi-ap25:18.3": "Maṇḍalīnañca rājūnaṃ,",
  "thi-ap25:18.4": "mahesittamakārayiṃ.",
  "thi-ap25:19.1": "Sampattiṃ anubhotvāna,",
  "thi-ap25:19.2": "devesu manujesu ca;",
  "thi-ap25:19.3": "Sabbattha sukhitā hutvā,",
  "thi-ap25:19.4": "nekakappesu saṃsariṃ.",
  "thi-ap25:20.1": "Pacchime bhave sampatte,",
  "thi-ap25:20.2": "suramme kapilavhaye;",
  "thi-ap25:20.3": "Rañño suddhodanassāhaṃ,",
  "thi-ap25:20.4": "dhītā āsiṃ aninditā.",
  "thi-ap25:21.1": "Siriyā rūpiniṃ disvā,",
  "thi-ap25:21.2": "nanditaṃ āsi taṃ kulaṃ;",
  "thi-ap25:21.3": "Tena nandāti me nāmaṃ,",
  "thi-ap25:21.4": "sundaraṃ pavaraṃ ahu.",
  "thi-ap25:22.1": "Yuvatīnañca sabbāsaṃ,",
  "thi-ap25:22.2": "kalyāṇīti ca vissutā;",
  "thi-ap25:22.3": "Tasmimpi nagare ramme,",
  "thi-ap25:22.4": "ṭhapetvā taṃ yasodharaṃ.",
  "thi-ap25:23.1": "Jeṭṭho bhātā tilokaggo,",
  "thi-ap25:23.2": "pacchimo arahā tathā;",
  "thi-ap25:23.3": "Ekākinī gahaṭṭhāhaṃ,",
  "thi-ap25:23.4": "mātarā paricoditā.",
  "thi-ap25:24.1": "‘Sākiyamhi kule jātā,",
  "thi-ap25:24.2": "putte buddhānujā tuvaṃ;",
  "thi-ap25:24.3": "Nandenapi vinā bhūtā,",
  "thi-ap25:24.4": "agāre kiṃ nu acchasi.",
  "thi-ap25:25.1": "Jarāvasānaṃ yobbaññaṃ,",
  "thi-ap25:25.2": "rūpaṃ asucisammataṃ;",
  "thi-ap25:25.3": "Rogantamapicārogyaṃ,",
  "thi-ap25:25.4": "jīvitaṃ maraṇantikaṃ.",
  "thi-ap25:26.1": "Idampi te subhaṃ rūpaṃ,",
  "thi-ap25:26.2": "sasīkantaṃ manoharaṃ;",
  "thi-ap25:26.3": "Bhūsanānaṃ alaṅkāraṃ,",
  "thi-ap25:26.4": "sirisaṅghāṭasannibhaṃ.",
  "thi-ap25:27.1": "Puñjitaṃ lokasāraṃva,",
  "thi-ap25:27.2": "nayanānaṃ rasāyanaṃ;",
  "thi-ap25:27.3": "Puññānaṃ kittijananaṃ,",
  "thi-ap25:27.4": "ukkākakulanandanaṃ.",
  "thi-ap25:28.1": "Na cireneva kālena,",
  "thi-ap25:28.2": "jarā samadhisessati;",
  "thi-ap25:28.3": "Vihāya gehaṃ kāruññe,",
  "thi-ap25:28.4": "cara dhammamanindite’.",
  "thi-ap25:29.1": "Sutvāhaṃ mātu vacanaṃ,",
  "thi-ap25:29.2": "pabbajiṃ anagāriyaṃ;",
  "thi-ap25:29.3": "Dehena na tu cittena,",
  "thi-ap25:29.4": "rūpayobbanalāḷitā.",
  "thi-ap25:30.1": "Mahatā ca payattena,",
  "thi-ap25:30.2": "jhānajjhena paraṃ mama;",
  "thi-ap25:30.3": "Kātuñca vadate mātā,",
  "thi-ap25:30.4": "na cāhaṃ tattha ussukā.",
  "thi-ap25:31.1": "Tato mahākāruṇiko,",
  "thi-ap25:31.2": "disvā maṃ kāmalālasaṃ;",
  "thi-ap25:31.3": "Nibbindanatthaṃ rūpasmiṃ,",
  "thi-ap25:31.4": "mama cakkhupathe jino.",
  "thi-ap25:32.1": "Sakena ānubhāvena,",
  "thi-ap25:32.2": "itthiṃ māpesi sobhiniṃ;",
  "thi-ap25:32.3": "Dassanīyaṃ suruciraṃ,",
  "thi-ap25:32.4": "mamatopi surūpiniṃ.",
  "thi-ap25:33.1": "Tamahaṃ vimhitā disvā,",
  "thi-ap25:33.2": "ativimhitadehiniṃ;",
  "thi-ap25:33.3": "Cintayiṃ ‘saphalaṃ meti,",
  "thi-ap25:33.4": "nettalābhañca mānusaṃ.",
  "thi-ap25:34.1": "Tamahaṃ ehi subhage,",
  "thi-ap25:34.2": "yenattho taṃ vadehi me;",
  "thi-ap25:34.3": "Kulaṃ te nāmagottañca,",
  "thi-ap25:34.4": "vada me yadi te piyaṃ.",
  "thi-ap25:35.1": "Na vañcakālo subhage,",
  "thi-ap25:35.2": "ucchaṅge maṃ nivāsaya;",
  "thi-ap25:35.3": "Sīdantīva mamaṅgāni,",
  "thi-ap25:35.4": "pasuppaya muhuttakaṃ’.",
  "thi-ap25:36.1": "Tato sīsaṃ mamaṅge sā,",
  "thi-ap25:36.2": "katvā sayi sulocanā;",
  "thi-ap25:36.3": "Tassā nalāṭe patitā,",
  "thi-ap25:36.4": "luddhā paramadāruṇā.",
  "thi-ap25:37.1": "Saha tassā nipātena,",
  "thi-ap25:37.2": "piḷakā upapajjatha;",
  "thi-ap25:37.3": "Pagghariṃsu pabhinnā ca,",
  "thi-ap25:37.4": "kuṇapā pubbalohitā.",
  "thi-ap25:38.1": "Pabhinnaṃ vadanañcāpi,",
  "thi-ap25:38.2": "kuṇapaṃ pūtigandhanaṃ;",
  "thi-ap25:38.3": "Uddhumātaṃ vinilañca,",
  "thi-ap25:38.4": "pubbañcāpi sarīrakaṃ.",
  "thi-ap25:39.1": "Sā paveditasabbaṅgī,",
  "thi-ap25:39.2": "nissasantī muhuṃ muhuṃ;",
  "thi-ap25:39.3": "Vedayantī sakaṃ dukkhaṃ,",
  "thi-ap25:39.4": "karuṇaṃ paridevayi.",
  "thi-ap25:40.1": "‘Dukkhena dukkhitā homi,",
  "thi-ap25:40.2": "phusayanti ca vedanā;",
  "thi-ap25:40.3": "Mahādukkhe nimuggamhi,",
  "thi-ap25:40.4": "saraṇaṃ hohi me sakhī.",
  "thi-ap25:41.1": "Kuhiṃ vadanasobhaṃ te,",
  "thi-ap25:41.2": "kuhiṃ te tuṅganāsikā;",
  "thi-ap25:41.3": "Tambabimbavaroṭṭhaṃ te,",
  "thi-ap25:41.4": "vadanaṃ te kuhiṃ gataṃ.",
  "thi-ap25:42.1": "Kuhiṃ sasīnibhaṃ vaṇṇaṃ,",
  "thi-ap25:42.2": "kambugīvā kuhiṃ gatā;",
  "thi-ap25:42.3": "Doḷālolāva te kaṇṇā,",
  "thi-ap25:42.4": "vevaṇṇaṃ samupāgatā.",
  "thi-ap25:43.1": "Makuḷakhārakākārā,",
  "thi-ap25:43.2": "kalikāva payodharā;",
  "thi-ap25:43.3": "Pabhinnā pūtikuṇapā,",
  "thi-ap25:43.4": "duṭṭhagandhittamāgatā.",
  "thi-ap25:44.1": "Vedimajjhāva sussoṇī,",
  "thi-ap25:44.2": "sūnāva nītakibbisā;",
  "thi-ap25:44.3": "Jātā amejjhabharitā,",
  "thi-ap25:44.4": "aho rūpamasassataṃ.",
  "thi-ap25:45.1": "Sabbaṃ sarīrasañjātaṃ,",
  "thi-ap25:45.2": "pūtigandhaṃ bhayānakaṃ;",
  "thi-ap25:45.3": "Susānamiva bībhacchaṃ,",
  "thi-ap25:45.4": "ramante yattha bālisā’.",
  "thi-ap25:46.1": "Tadā mahākāruṇiko,",
  "thi-ap25:46.2": "bhātā me lokanāyako;",
  "thi-ap25:46.3": "Disvā saṃviggacittaṃ maṃ,",
  "thi-ap25:46.4": "imā gāthā abhāsatha.",
  "thi-ap25:47.1": "‘Āturaṃ kuṇapaṃ pūtiṃ,",
  "thi-ap25:47.2": "passa nande samussayaṃ;",
  "thi-ap25:47.3": "Asubhāya cittaṃ bhāvehi,",
  "thi-ap25:47.4": "ekaggaṃ susamāhitaṃ.",
  "thi-ap25:48.1": "Yathā idaṃ tathā etaṃ,",
  "thi-ap25:48.2": "yathā etaṃ tathā idaṃ;",
  "thi-ap25:48.3": "Duggandhaṃ pūtikaṃ vāti,",
  "thi-ap25:48.4": "bālānaṃ abhinanditaṃ.",
  "thi-ap25:49.1": "Evametaṃ avekkhantī,",
  "thi-ap25:49.2": "rattindivamatanditā;",
  "thi-ap25:49.3": "Tato sakāya paññāya,",
  "thi-ap25:49.4": "abhinibbijjha dakkhasi’.",
  "thi-ap25:50.1": "Tatohaṃ atisaṃviggā,",
  "thi-ap25:50.2": "sutvā gāthā subhāsitā;",
  "thi-ap25:50.3": "Tatraṭṭhitāvahaṃ santī,",
  "thi-ap25:50.4": "arahattamapāpuṇiṃ.",
  "thi-ap25:51.1": "Yattha yattha nisinnāhaṃ,",
  "thi-ap25:51.2": "sadā jhānaparāyaṇā;",
  "thi-ap25:51.3": "Jino tasmiṃ guṇe tuṭṭho,",
  "thi-ap25:51.4": "etadagge ṭhapesi maṃ.",
  "thi-ap25:52.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap25:52.2": "…pe…",
  "thi-ap25:52.3": "viharāmi anāsavā.",
  "thi-ap25:53.1": "Svāgataṃ vata me āsi,",
  "thi-ap25:53.2": "…pe…",
  "thi-ap25:53.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap25:54.1": "Paṭisambhidā catasso,",
  "thi-ap25:54.2": "…pe…",
  "thi-ap25:54.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap25:55.1": "Itthaṃ sudaṃ nandā bhikkhunī janapadakalyāṇī imā gāthāyo abhāsitthāti.",
  "thi-ap25:56.1": "Nandātheriyāpadānaṃ pañcamaṃ."
}