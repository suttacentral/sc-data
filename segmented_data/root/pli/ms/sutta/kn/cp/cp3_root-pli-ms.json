{
  "cp3:0.1": "Cariyāpiṭaka",
  "cp3:0.2": "Akittivagga",
  "cp3:0.3": "Dānapāramī 3",
  "cp3:0.4": "Kururājacariya",
  "cp3:1.1": "“Punāparaṁ yadā homi,",
  "cp3:1.2": "indapatthe puruttame;",
  "cp3:1.3": "Rājā dhanañcayo nāma,",
  "cp3:1.4": "kusale dasahupāgato.",
  "cp3:2.1": "Kaliṅgaraṭṭhavisayā,",
  "cp3:2.2": "brāhmaṇā upagañchu maṁ;",
  "cp3:2.3": "Āyācuṁ maṁ hatthināgaṁ,",
  "cp3:2.4": "dhaññaṁ maṅgalasammataṁ.",
  "cp3:3.1": "‘Avuṭṭhiko janapado,",
  "cp3:3.2": "dubbhikkho chātako mahā;",
  "cp3:3.3": "Dadāhi pavaraṁ nāgaṁ,",
  "cp3:3.4": "nīlaṁ añjanasavhayaṁ’.",
  "cp3:4.1": "‘Na me yācakamanuppatte,",
  "cp3:4.2": "paṭikkhepo anucchavo;",
  "cp3:4.3": "Mā me bhijji samādānaṁ,",
  "cp3:4.4": "dassāmi vipulaṁ gajaṁ’.",
  "cp3:5.1": "Nāgaṁ gahetvā soṇḍāya,",
  "cp3:5.2": "bhiṅgāre ratanāmaye;",
  "cp3:5.3": "Jalaṁ hatthe ākiritvā,",
  "cp3:5.4": "brāhmaṇānaṁ adaṁ gajaṁ.",
  "cp3:6.1": "Tassa nāge padinnamhi,",
  "cp3:6.2": "amaccā etadabravuṁ;",
  "cp3:6.3": "‘Kiṁ nu tuyhaṁ varaṁ nāgaṁ,",
  "cp3:6.4": "yācakānaṁ padassasi.",
  "cp3:7.1": "Dhaññaṁ maṅgalasampannaṁ,",
  "cp3:7.2": "saṅgāmavijayuttamaṁ;",
  "cp3:7.3": "Tasmiṁ nāge padinnamhi,",
  "cp3:7.4": "kiṁ te rajjaṁ karissati’.",
  "cp3:8.1": "‘Rajjampi me dade sabbaṁ,",
  "cp3:8.2": "sarīraṁ dajjamattano;",
  "cp3:8.3": "Sabbaññutaṁ piyaṁ mayhaṁ,",
  "cp3:8.4": "tasmā nāgaṁ adāsahan’”ti.",
  "cp3:9.1": "Kururājacariyaṁ tatiyaṁ."
}