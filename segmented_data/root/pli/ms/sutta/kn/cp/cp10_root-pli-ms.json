{
  "cp10:0.1": "Cariyāpiṭaka",
  "cp10:0.2": "Akittivagga",
  "cp10:0.3": "Dānapāramī 10",
  "cp10:0.4": "Sasapaṇḍitacariya",
  "cp10:1.1": "“Punāparaṃ yadā homi,",
  "cp10:1.2": "Sasako pavanacārako;",
  "cp10:1.3": "Tiṇapaṇṇasākaphalabhakkho,",
  "cp10:1.4": "Paraheṭhanavivajjito.",
  "cp10:2.1": "Makkaṭo ca siṅgālo ca,",
  "cp10:2.2": "suttapoto cahaṃ tadā;",
  "cp10:2.3": "Vasāma ekasāmantā,",
  "cp10:2.4": "sāyaṃ pāto ca dissare.",
  "cp10:3.1": "Ahaṃ te anusāsāmi,",
  "cp10:3.2": "kiriye kalyāṇapāpake;",
  "cp10:3.3": "‘Pāpāni parivajjetha,",
  "cp10:3.4": "kalyāṇe abhinivissatha’.",
  "cp10:4.1": "Uposathamhi divase,",
  "cp10:4.2": "candaṃ disvāna pūritaṃ;",
  "cp10:4.3": "Etesaṃ tattha ācikkhiṃ,",
  "cp10:4.4": "‘divaso ajjuposatho.",
  "cp10:5.1": "Dānāni paṭiyādetha,",
  "cp10:5.2": "dakkhiṇeyyassa dātave;",
  "cp10:5.3": "Datvā dānaṃ dakkhiṇeyye,",
  "cp10:5.4": "upavassathuposathaṃ’.",
  "cp10:6.1": "Te me sādhūti vatvāna,",
  "cp10:6.2": "yathāsatti yathābalaṃ;",
  "cp10:6.3": "Dānāni paṭiyādetvā,",
  "cp10:6.4": "dakkhiṇeyyaṃ gavesisuṃ.",
  "cp10:7.1": "Ahaṃ nisajja cintesiṃ,",
  "cp10:7.2": "dānaṃ dakkhiṇanucchavaṃ;",
  "cp10:7.3": "‘Yadihaṃ labhe dakkhiṇeyyaṃ,",
  "cp10:7.4": "kiṃ me dānaṃ bhavissati.",
  "cp10:8.1": "Na me atthi tilā muggā,",
  "cp10:8.2": "māsā vā taṇḍulā ghataṃ;",
  "cp10:8.3": "Ahaṃ tiṇena yāpemi,",
  "cp10:8.4": "na sakkā tiṇa dātave.",
  "cp10:9.1": "Yadi koci eti dakkhiṇeyyo,",
  "cp10:9.2": "Bhikkhāya mama santike;",
  "cp10:9.3": "Dajjāhaṃ sakamattānaṃ,",
  "cp10:9.4": "Na so tuccho gamissati’.",
  "cp10:10.1": "Mama saṅkappamaññāya,",
  "cp10:10.2": "sakko brāhmaṇavaṇṇinā;",
  "cp10:10.3": "Āsayaṃ me upāgacchi,",
  "cp10:10.4": "dānavīmaṃsanāya me.",
  "cp10:11.1": "Tamahaṃ disvāna santuṭṭho,",
  "cp10:11.2": "idaṃ vacanamabraviṃ;",
  "cp10:11.3": "‘Sādhu khosi anuppatto,",
  "cp10:11.4": "ghāsahetu mamantike.",
  "cp10:12.1": "Adinnapubbaṃ dānavaraṃ,",
  "cp10:12.2": "ajja dassāmi te ahaṃ;",
  "cp10:12.3": "Tuvaṃ sīlaguṇūpeto,",
  "cp10:12.4": "ayuttaṃ te paraheṭhanaṃ.",
  "cp10:13.1": "Ehi aggiṃ padīpehi,",
  "cp10:13.2": "nānākaṭṭhe samānaya;",
  "cp10:13.3": "Ahaṃ pacissamattānaṃ,",
  "cp10:13.4": "pakkaṃ tvaṃ bhakkhayissasi’.",
  "cp10:14.1": "‘Sādhū’ti so haṭṭhamano,",
  "cp10:14.2": "nānākaṭṭhe samānayi;",
  "cp10:14.3": "Mahantaṃ akāsi citakaṃ,",
  "cp10:14.4": "katvā aṅgāragabbhakaṃ.",
  "cp10:15.1": "Aggiṃ tattha padīpesi,",
  "cp10:15.2": "yathā so khippaṃ mahā bhave;",
  "cp10:15.3": "Phoṭetvā rajagate gatte,",
  "cp10:15.4": "ekamantaṃ upāvisiṃ.",
  "cp10:16.1": "Yadā mahākaṭṭhapuñjo,",
  "cp10:16.2": "āditto dhamadhamāyati;",
  "cp10:16.3": "Taduppatitvā papatiṃ,",
  "cp10:16.4": "majjhe jālasikhantare.",
  "cp10:17.1": "Yathā sītodakaṃ nāma,",
  "cp10:17.2": "Paviṭṭhaṃ yassa kassaci;",
  "cp10:17.3": "Sameti darathapariḷāhaṃ,",
  "cp10:17.4": "Assādaṃ deti pīti ca.",
  "cp10:18.1": "Tatheva jalitaṃ aggiṃ,",
  "cp10:18.2": "paviṭṭhassa mamaṃ tadā;",
  "cp10:18.3": "Sabbaṃ sameti darathaṃ,",
  "cp10:18.4": "yathā sītodakaṃ viya.",
  "cp10:19.1": "Chaviṃ cammaṃ maṃsaṃ nhāruṃ,",
  "cp10:19.2": "Aṭṭhiṃ hadayabandhanaṃ;",
  "cp10:19.3": "Kevalaṃ sakalaṃ kāyaṃ,",
  "cp10:19.4": "Brāhmaṇassa adāsahan”ti. (143)",
  "cp10:20.1": "Sasapaṇḍitacariyaṃ dasamaṃ.",
  "cp10:21.1": "Akittivaggo paṭhamo.",
  "cp10:22.1": "Tassuddānaṃ",
  "cp10:23.1": "Akittibrāhmaṇo saṅkho,",
  "cp10:23.2": "kururājā dhanañcayo;",
  "cp10:23.3": "Mahāsudassano rājā,",
  "cp10:23.4": "mahāgovindabrāhmaṇo.",
  "cp10:24.1": "Nimi candakumāro ca,",
  "cp10:24.2": "sivi vessantaro saso;",
  "cp10:24.3": "Ahameva tadā āsiṃ,",
  "cp10:24.4": "yo te dānavare adā.",
  "cp10:25.1": "Ete dānaparikkhārā,",
  "cp10:25.2": "ete dānassa pāramī;",
  "cp10:25.3": "Jīvitaṃ yācake datvā,",
  "cp10:25.4": "imaṃ pārami pūrayiṃ.",
  "cp10:26.1": "Bhikkhāya upagataṃ disvā,",
  "cp10:26.2": "sakattānaṃ pariccajiṃ;",
  "cp10:26.3": "Dānena me samo natthi,",
  "cp10:26.4": "esā me dānapāramīti.",
  "cp10:27.1": "Dānapāraminiddeso niṭṭhito."
}