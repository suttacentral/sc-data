{
  "cp12:0.1": "Cariyāpiṭaka",
  "cp12:0.2": "Hatthināgavagga",
  "cp12:0.3": "Sīlapāramī 2",
  "cp12:0.4": "Bhūridattacariya",
  "cp12:1.1": "“Punāparaṁ yadā homi,",
  "cp12:1.2": "bhūridatto mahiddhiko;",
  "cp12:1.3": "Virūpakkhena mahāraññā,",
  "cp12:1.4": "devalokamagañchahaṁ.",
  "cp12:2.1": "Tattha passitvāhaṁ deve,",
  "cp12:2.2": "ekantaṁ sukhasamappite;",
  "cp12:2.3": "Taṁ saggagamanatthāya,",
  "cp12:2.4": "sīlabbataṁ samādiyiṁ.",
  "cp12:3.1": "Sarīrakiccaṁ katvāna,",
  "cp12:3.2": "bhutvā yāpanamattakaṁ;",
  "cp12:3.3": "Caturo aṅge adhiṭṭhāya,",
  "cp12:3.4": "semi vammikamuddhani.",
  "cp12:4.1": "‘Chaviyā cammena maṁsena,",
  "cp12:4.2": "Nahāruaṭṭhikehi vā;",
  "cp12:4.3": "Yassa etena karaṇīyaṁ,",
  "cp12:4.4": "Dinnaṁyeva harātu so’.",
  "cp12:5.1": "Saṁsito akataññunā,",
  "cp12:5.2": "ālampāyano mamaggahi;",
  "cp12:5.3": "Peḷāya pakkhipitvāna,",
  "cp12:5.4": "kīḷeti maṁ tahiṁ tahiṁ.",
  "cp12:6.1": "Peḷāya pakkhipantepi,",
  "cp12:6.2": "sammaddantepi pāṇinā;",
  "cp12:6.3": "Ālampāyane na kuppāmi,",
  "cp12:6.4": "sīlakhaṇḍabhayā mama.",
  "cp12:7.1": "Sakajīvitapariccāgo,",
  "cp12:7.2": "tiṇato lahuko mama;",
  "cp12:7.3": "Sīlavītikkamo mayhaṁ,",
  "cp12:7.4": "pathavīuppatanaṁ viya.",
  "cp12:8.1": "Nirantaraṁ jātisataṁ,",
  "cp12:8.2": "cajeyyaṁ mama jīvitaṁ;",
  "cp12:8.3": "Neva sīlaṁ pabhindeyyaṁ,",
  "cp12:8.4": "catuddīpāna hetupi.",
  "cp12:9.1": "Api cāhaṁ sīlarakkhāya,",
  "cp12:9.2": "Sīlapāramipūriyā;",
  "cp12:9.3": "Na karomi citte aññathattaṁ,",
  "cp12:9.4": "Pakkhipantampi peḷake”ti.",
  "cp12:10.1": "Bhūridattacariyaṁ dutiyaṁ."
}