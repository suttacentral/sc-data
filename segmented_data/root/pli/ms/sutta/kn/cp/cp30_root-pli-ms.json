{
  "cp30:0.1": "Cariyāpiṭaka",
  "cp30:0.2": "Yudhañjayavagga",
  "cp30:0.3": "Saccapāramī 4",
  "cp30:0.4": "Maccharājacariya",
  "cp30:1.1": "“Punāparaṁ yadā homi,",
  "cp30:1.2": "maccharājā mahāsare;",
  "cp30:1.3": "Uṇhe sūriyasantāpe,",
  "cp30:1.4": "sare udaka khīyatha.",
  "cp30:2.1": "Tato kākā ca gijjhā ca,",
  "cp30:2.2": "kaṅkā kulalasenakā;",
  "cp30:2.3": "Bhakkhayanti divārattiṁ,",
  "cp30:2.4": "macche upanisīdiya.",
  "cp30:3.1": "Evaṁ cintesahaṁ tattha,",
  "cp30:3.2": "saha ñātīhi pīḷito;",
  "cp30:3.3": "‘Kena nu kho upāyena,",
  "cp30:3.4": "ñātī dukkhā pamocaye’.",
  "cp30:4.1": "Vicintayitvā dhammatthaṁ,",
  "cp30:4.2": "saccaṁ addasa passayaṁ;",
  "cp30:4.3": "Sacce ṭhatvā pamocesiṁ,",
  "cp30:4.4": "ñātīnaṁ taṁ atikkhayaṁ.",
  "cp30:5.1": "Anussaritvā sataṁ dhammaṁ,",
  "cp30:5.2": "paramatthaṁ vicintayaṁ;",
  "cp30:5.3": "Akāsiṁ saccakiriyaṁ,",
  "cp30:5.4": "yaṁ loke dhuvasassataṁ.",
  "cp30:6.1": "‘Yato sarāmi attānaṁ,",
  "cp30:6.2": "yato pattosmi viññutaṁ;",
  "cp30:6.3": "Nābhijānāmi sañcicca,",
  "cp30:6.4": "ekapāṇampi hiṁsitaṁ.",
  "cp30:7.1": "Etena saccavajjena,",
  "cp30:7.2": "pajjunno abhivassatu;",
  "cp30:7.3": "Abhitthanaya pajjunna,",
  "cp30:7.4": "nidhiṁ kākassa nāsaya;",
  "cp30:7.5": "Kākaṁ sokāya randhehi,",
  "cp30:7.6": "macche sokā pamocaya’.",
  "cp30:8.1": "Saha kate saccavare,",
  "cp30:8.2": "pajjunno abhigajjiya;",
  "cp30:8.3": "Thalaṁ ninnañca pūrento,",
  "cp30:8.4": "khaṇena abhivassatha.",
  "cp30:9.1": "Evarūpaṁ saccavaraṁ,",
  "cp30:9.2": "katvā vīriyamuttamaṁ;",
  "cp30:9.3": "Vassāpesiṁ mahāmeghaṁ,",
  "cp30:9.4": "saccatejabalassito;",
  "cp30:9.5": "Saccena me samo natthi,",
  "cp30:9.6": "esā me saccapāramī”ti.",
  "cp30:10.1": "Maccharājacariyaṁ dasamaṁ."
}