{
  "cp11:0.1": "Cariyāpiṭaka",
  "cp11:0.2": "Hatthināgavagga",
  "cp11:0.3": "Sīlapāramī 1",
  "cp11:0.4": "Mātuposakacariya",
  "cp11:1.1": "“Yadā ahosiṁ pavane,",
  "cp11:1.2": "kuñjaro mātuposako;",
  "cp11:1.3": "Na tadā atthi mahiyā,",
  "cp11:1.4": "guṇena mama sādiso.",
  "cp11:2.1": "Pavane disvā vanacaro,",
  "cp11:2.2": "rañño maṁ paṭivedayi;",
  "cp11:2.3": "‘Tavānucchavo mahārāja,",
  "cp11:2.4": "gajo vasati kānane.",
  "cp11:3.1": "Na tassa parikkhāyattho,",
  "cp11:3.2": "napi āḷakakāsuyā;",
  "cp11:3.3": "Saha gahite soṇḍāya,",
  "cp11:3.4": "sayameva idhehi’ti.",
  "cp11:4.1": "Tassa taṁ vacanaṁ sutvā,",
  "cp11:4.2": "rājāpi tuṭṭhamānaso;",
  "cp11:4.3": "Pesesi hatthidamakaṁ,",
  "cp11:4.4": "chekācariyaṁ susikkhitaṁ.",
  "cp11:5.1": "Gantvā so hatthidamako,",
  "cp11:5.2": "addasa padumassare;",
  "cp11:5.3": "Bhisamuḷālaṁ uddharantaṁ,",
  "cp11:5.4": "yāpanatthāya mātuyā.",
  "cp11:6.1": "Viññāya me sīlaguṇaṁ,",
  "cp11:6.2": "lakkhaṇaṁ upadhārayi;",
  "cp11:6.3": "‘Ehi puttā’ti vatvāna,",
  "cp11:6.4": "mama soṇḍāya aggahi.",
  "cp11:7.1": "Yaṁ me tadā pākatikaṁ,",
  "cp11:7.2": "sarīrānugataṁ balaṁ;",
  "cp11:7.3": "Ajja nāgasahassānaṁ,",
  "cp11:7.4": "balena samasādisaṁ.",
  "cp11:8.1": "Yadihaṁ tesaṁ pakuppeyyaṁ,",
  "cp11:8.2": "upetānaṁ gahaṇāya maṁ;",
  "cp11:8.3": "Paṭibalo bhave tesaṁ,",
  "cp11:8.4": "yāva rajjampi mānusaṁ.",
  "cp11:9.1": "Api cāhaṁ sīlarakkhāya,",
  "cp11:9.2": "Sīlapāramipūriyā;",
  "cp11:9.3": "Na karomi citte aññathattaṁ,",
  "cp11:9.4": "Pakkhipantaṁ mamāḷake.",
  "cp11:10.1": "Yadi te maṁ tattha koṭṭeyyuṁ,",
  "cp11:10.2": "pharasūhi tomarehi ca;",
  "cp11:10.3": "Neva tesaṁ pakuppeyyaṁ,",
  "cp11:10.4": "sīlakhaṇḍabhayā mamā”ti.",
  "cp11:11.1": "Mātuposakacariyaṁ paṭhamaṁ."
}