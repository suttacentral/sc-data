{
  "iti20:0.1": "Itivuttaka 20",
  "iti20:0.2": "Ekakanipāta",
  "iti20:0.3": "Dutiyavagga",
  "iti20:0.4": "Paduṭṭhacittasutta",
  "iti20:1.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
  "iti20:2.1": "“Idhāhaṃ, bhikkhave, ekaccaṃ puggalaṃ paduṭṭhacittaṃ evaṃ cetasā ceto paricca pajānāmi:",
  "iti20:2.2": "‘imamhi cāyaṃ samaye puggalo kālaṃ kareyya yathābhataṃ nikkhitto evaṃ niraye’.",
  "iti20:2.3": "Taṃ kissa hetu?",
  "iti20:2.4": "Cittaṃ hissa, bhikkhave, paduṭṭhaṃ.",
  "iti20:2.5": "Cetopadosahetu kho pana, bhikkhave, evamidhekacce sattā kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapajjantī”ti.",
  "iti20:2.6": "Etamatthaṃ bhagavā avoca.",
  "iti20:2.7": "Tatthetaṃ iti vuccati:",
  "iti20:3.1": "“Paduṭṭhacittaṃ ñatvāna,",
  "iti20:3.2": "ekaccaṃ idha puggalaṃ;",
  "iti20:3.3": "Etamatthañca byākāsi,",
  "iti20:3.4": "buddho bhikkhūna santike.",
  "iti20:4.1": "Imamhi cāyaṃ samaye,",
  "iti20:4.2": "kālaṃ kayirātha puggalo;",
  "iti20:4.3": "Nirayaṃ upapajjeyya,",
  "iti20:4.4": "cittaṃ hissa padūsitaṃ.",
  "iti20:5.1": "Yathā haritvā nikkhipeyya,",
  "iti20:5.2": "evamevaṃ tathāvidho;",
  "iti20:5.3": "Cetopadosahetu hi,",
  "iti20:5.4": "sattā gacchanti duggatin”ti.",
  "iti20:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti20:6.2": "Dasamaṃ.",
  "iti20:6.3": "Dutiyo vaggo.",
  "iti20:7.1": "Moho kodho atha makkho,",
  "iti20:7.2": "Vijjā taṇhā sekhaduve ca;",
  "iti20:7.3": "Bhedo sāmaggipuggalo,",
  "iti20:7.4": "Vaggamāhu dutiyanti vuccatīti."
}