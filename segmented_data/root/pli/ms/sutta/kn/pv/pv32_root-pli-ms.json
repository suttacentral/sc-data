{
  "pv32:0.1": "Petavatthu",
  "pv32:0.2": "Cūḷavagga",
  "pv32:0.3": "7. Migaluddakapetavatthu",
  "pv32:1.1": "“Naranāripurakkhato yuvā,",
  "pv32:1.2": "Rajanīyehi kāmaguṇehi sobhasi;",
  "pv32:1.3": "Divasaṁ anubhosi kāraṇaṁ,",
  "pv32:1.4": "Kimakāsi purimāya jātiyā”ti.",
  "pv32:2.1": "“Ahaṁ rājagahe ramme,",
  "pv32:2.2": "ramaṇīye giribbaje;",
  "pv32:2.3": "Migaluddo pure āsiṁ,",
  "pv32:2.4": "lohitapāṇi dāruṇo.",
  "pv32:3.1": "Avirodhakaresu pāṇisu,",
  "pv32:3.2": "Puthusattesu paduṭṭhamānaso;",
  "pv32:3.3": "Vicariṁ atidāruṇo sadā,",
  "pv32:3.4": "Parahiṁsāya rato asaññato.",
  "pv32:4.1": "Tassa me sahāyo suhadayo,",
  "pv32:4.2": "Saddho āsi upāsako;",
  "pv32:4.3": "Sopi maṁ anukampanto,",
  "pv32:4.4": "Nivāresi punappunaṁ.",
  "pv32:5.1": "‘Mākāsi pāpakaṁ kammaṁ,",
  "pv32:5.2": "Mā tāta duggatiṁ agā;",
  "pv32:5.3": "Sace icchasi pecca sukhaṁ,",
  "pv32:5.4": "Virama pāṇavadhā asaṁyamā’.",
  "pv32:6.1": "Tassāhaṁ vacanaṁ sutvā,",
  "pv32:6.2": "Sukhakāmassa hitānukampino;",
  "pv32:6.3": "Nākāsiṁ sakalānusāsaniṁ,",
  "pv32:6.4": "Cirapāpābhirato abuddhimā.",
  "pv32:7.1": "So maṁ puna bhūrisumedhaso,",
  "pv32:7.2": "Anukampāya saṁyame nivesayi;",
  "pv32:7.3": "‘Sace divā hanasi pāṇino,",
  "pv32:7.4": "Atha te rattiṁ bhavatu saṁyamo’.",
  "pv32:8.1": "Svāhaṁ divā hanitvā pāṇino,",
  "pv32:8.2": "Virato rattimahosi saññato;",
  "pv32:8.3": "Rattāhaṁ paricāremi,",
  "pv32:8.4": "Divā khajjāmi duggato.",
  "pv32:9.1": "Tassa kammassa kusalassa,",
  "pv32:9.2": "Anubhomi rattiṁ amānusiṁ;",
  "pv32:9.3": "Divā paṭihatāva kukkurā,",
  "pv32:9.4": "Upadhāvanti samantā khādituṁ.",
  "pv32:10.1": "Ye ca te satatānuyogino,",
  "pv32:10.2": "Dhuvaṁ payuttā sugatassa sāsane;",
  "pv32:10.3": "Maññāmi te amatameva kevalaṁ,",
  "pv32:10.4": "Adhigacchanti padaṁ asaṅkhatan”ti.",
  "pv32:11.1": "Migaluddakapetavatthu sattamaṁ."
}