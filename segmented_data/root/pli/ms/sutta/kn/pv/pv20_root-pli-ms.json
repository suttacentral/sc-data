{
  "pv20:0.1": "Petavatthu",
  "pv20:0.2": "Ubbarivagga",
  "pv20:0.3": "8. Cūḷaseṭṭhipetavatthu",
  "pv20:1.1": "“Naggo kiso pabbajitosi bhante,",
  "pv20:1.2": "Rattiṃ kuhiṃ gacchasi kissa hetu;",
  "pv20:1.3": "Ācikkha me taṃ api sakkuṇemu,",
  "pv20:1.4": "Sabbena vittaṃ paṭipādaye tuvan”ti.",
  "pv20:2.1": "“Bārāṇasī nagaraṃ dūraghuṭṭhaṃ,",
  "pv20:2.2": "Tatthāhaṃ gahapati aḍḍhako ahu dīno;",
  "pv20:2.3": "Adātā gedhitamano āmisasmiṃ,",
  "pv20:2.4": "Dussīlyena yamavisayamhi patto.",
  "pv20:3.1": "So sūcikāya kilamito tehi,",
  "pv20:3.2": "Teneva ñātīsu yāmi āmisakiñcikkhahetu;",
  "pv20:3.3": "Adānasīlā na ca saddahanti,",
  "pv20:3.4": "Dānaphalaṃ hoti paramhi loke.",
  "pv20:4.1": "Dhītā ca mayhaṃ lapate abhikkhaṇaṃ,",
  "pv20:4.2": "‘Dassāmi dānaṃ pitūnaṃ pitāmahānaṃ’;",
  "pv20:4.3": "Tamupakkhaṭaṃ parivisayanti brāhmaṇā,",
  "pv20:4.4": "‘Yāmi ahaṃ andhakavindaṃ bhottun’”ti.",
  "pv20:5.1": "Tamavoca rājā “anubhaviyāna tampi,",
  "pv20:5.2": "Eyyāsi khippaṃ ahamapi kassaṃ pūjaṃ;",
  "pv20:5.3": "Ācikkha me taṃ yadi atthi hetu,",
  "pv20:5.4": "Saddhāyitaṃ hetuvaco suṇomā”ti.",
  "pv20:6.1": "“Tathā”ti vatvā agamāsi tattha,",
  "pv20:6.2": "Bhuñjiṃsu bhattaṃ na ca dakkhiṇārahā;",
  "pv20:6.3": "Paccāgami rājagahaṃ punāparaṃ,",
  "pv20:6.4": "Pāturahosi purato janādhipassa.",
  "pv20:7.1": "Disvāna petaṃ punadeva āgataṃ,",
  "pv20:7.2": "Rājā avoca “ahamapi kiṃ dadāmi;",
  "pv20:7.3": "Ācikkha me taṃ yadi atthi hetu,",
  "pv20:7.4": "Yena tuvaṃ cirataraṃ pīṇito siyā”ti.",
  "pv20:8.1": "“Buddhañca saṃghaṃ parivisiyāna rāja,",
  "pv20:8.2": "Annena pānena ca cīvarena;",
  "pv20:8.3": "Taṃ dakkhiṇaṃ ādisa me hitāya,",
  "pv20:8.4": "Evaṃ ahaṃ cirataraṃ pīṇito siyā”ti.",
  "pv20:9.1": "Tato ca rājā nipatitvā tāvade,",
  "pv20:9.2": "Dānaṃ sahatthā atulaṃ daditvā saṃghe;",
  "pv20:9.3": "Ārocesi pakataṃ tathāgatassa,",
  "pv20:9.4": "Tassa ca petassa dakkhiṇaṃ ādisittha.",
  "pv20:10.1": "So pūjito ativiya sobhamāno,",
  "pv20:10.2": "Pāturahosi purato janādhipassa;",
  "pv20:10.3": "“Yakkhohamasmi paramiddhipatto,",
  "pv20:10.4": "Na mayhamatthi samā sadisā mānusā.",
  "pv20:11.1": "Passānubhāvaṃ aparimitaṃ mamayidaṃ,",
  "pv20:11.2": "Tayānudiṭṭhaṃ atulaṃ datvā saṃghe;",
  "pv20:11.3": "Santappito satataṃ sadā bahūhi,",
  "pv20:11.4": "Yāmi ahaṃ sukhito manussadevā”ti.",
  "pv20:12.1": "Cūḷaseṭṭhipetavatthu aṭṭhamaṃ.",
  "pv20:12.2": "Bhāṇavāraṃ paṭhamaṃ."
}