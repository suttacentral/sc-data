{
  "pv15:0.1": "Petavatthu",
  "pv15:0.2": "Ubbarivagga",
  "pv15:0.3": "3. Mattāpetivatthu",
  "pv15:1.1": "“Naggā dubbaṇṇarūpāsi,",
  "pv15:1.2": "kisā dhamanisanthatā;",
  "pv15:1.3": "Upphāsulike kisike,",
  "pv15:1.4": "kā nu tvaṃ idha tiṭṭhasī”ti.",
  "pv15:2.1": "“Ahaṃ mattā tuvaṃ tissā,",
  "pv15:2.2": "sapattī te pure ahuṃ;",
  "pv15:2.3": "Pāpakammaṃ karitvāna,",
  "pv15:2.4": "petalokaṃ ito gatā”ti.",
  "pv15:3.1": "“Kiṃ nu kāyena vācāya,",
  "pv15:3.2": "manasā dukkaṭaṃ kataṃ;",
  "pv15:3.3": "Kissa kammavipākena,",
  "pv15:3.4": "petalokaṃ ito gatā”ti.",
  "pv15:4.1": "“Caṇḍī ca pharusā cāsiṃ,",
  "pv15:4.2": "issukī maccharī saṭhā;",
  "pv15:4.3": "Tāhaṃ duruttaṃ vatvāna,",
  "pv15:4.4": "petalokaṃ ito gatā”ti.",
  "pv15:5.1": "“Sabbaṃ ahampi jānāmi,",
  "pv15:5.2": "yathā tvaṃ caṇḍikā ahu;",
  "pv15:5.3": "Aññañca kho taṃ pucchāmi,",
  "pv15:5.4": "kenāsi paṃsukunthitā”ti.",
  "pv15:6.1": "“Sīsaṃnhātā tuvaṃ āsi,",
  "pv15:6.2": "sucivatthā alaṅkatā;",
  "pv15:6.3": "Ahañca kho adhimattaṃ,",
  "pv15:6.4": "samalaṅkatatarā tayā.",
  "pv15:7.1": "Tassā me pekkhamānāya,",
  "pv15:7.2": "sāmikena samantayi;",
  "pv15:7.3": "Tato me issā vipulā,",
  "pv15:7.4": "kodho me samajāyatha.",
  "pv15:8.1": "Tato paṃsuṃ gahetvāna,",
  "pv15:8.2": "paṃsunā taṃ hi okiriṃ;",
  "pv15:8.3": "Tassa kammavipākena,",
  "pv15:8.4": "tenamhi paṃsukunthitā”ti.",
  "pv15:9.1": "“Sabbaṃ ahampi jānāmi,",
  "pv15:9.2": "paṃsunā maṃ tvamokiri;",
  "pv15:9.3": "Aññañca kho taṃ pucchāmi,",
  "pv15:9.4": "kena khajjasi kacchuyā”ti.",
  "pv15:10.1": "“Bhesajjahārī ubhayo,",
  "pv15:10.2": "vanantaṃ agamimhase;",
  "pv15:10.3": "Tvañca bhesajjamāhari,",
  "pv15:10.4": "ahañca kapikacchuno.",
  "pv15:11.1": "Tassā tyājānamānāya,",
  "pv15:11.2": "seyyaṃ tyāhaṃ samokiriṃ;",
  "pv15:11.3": "Tassa kammavipākena,",
  "pv15:11.4": "tena khajjāmi kacchuyā”ti.",
  "pv15:12.1": "“Sabbaṃ ahampi jānāmi,",
  "pv15:12.2": "seyyaṃ me tvaṃ samokiri;",
  "pv15:12.3": "Aññañca kho taṃ pucchāmi,",
  "pv15:12.4": "kenāsi naggiyā tuvan”ti.",
  "pv15:13.1": "“Sahāyānaṃ samayo āsi,",
  "pv15:13.2": "ñātīnaṃ samitī ahu;",
  "pv15:13.3": "Tvañca āmantitā āsi,",
  "pv15:13.4": "sasāminī no ca kho ahaṃ.",
  "pv15:14.1": "Tassā tyājānamānāya,",
  "pv15:14.2": "dussaṃ tyāhaṃ apānudiṃ;",
  "pv15:14.3": "Tassa kammavipākena,",
  "pv15:14.4": "tenamhi naggiyā ahan”ti.",
  "pv15:15.1": "“Sabbaṃ ahampi jānāmi,",
  "pv15:15.2": "dussaṃ me tvaṃ apānudi;",
  "pv15:15.3": "Aññañca kho taṃ pucchāmi,",
  "pv15:15.4": "kenāsi gūthagandhinī”ti.",
  "pv15:16.1": "“Tava gandhañca mālañca,",
  "pv15:16.2": "paccagghañca vilepanaṃ;",
  "pv15:16.3": "Gūthakūpe atāresiṃ,",
  "pv15:16.4": "taṃ pāpaṃ pakataṃ mayā;",
  "pv15:16.5": "Tassa kammavipākena,",
  "pv15:16.6": "tenamhi gūthagandhinī”ti.",
  "pv15:17.1": "“Sabbaṃ ahampi jānāmi,",
  "pv15:17.2": "taṃ pāpaṃ pakataṃ tayā;",
  "pv15:17.3": "Aññañca kho taṃ pucchāmi,",
  "pv15:17.4": "kenāsi duggatā tuvan”ti.",
  "pv15:18.1": "“Ubhinnaṃ samakaṃ āsi,",
  "pv15:18.2": "yaṃ gehe vijjate dhanaṃ;",
  "pv15:18.3": "Santesu deyyadhammesu,",
  "pv15:18.4": "dīpaṃ nākāsimattano;",
  "pv15:18.5": "Tassa kammavipākena,",
  "pv15:18.6": "tenamhi duggatā ahaṃ.",
  "pv15:19.1": "Tadeva maṃ tvaṃ avaca,",
  "pv15:19.2": "‘pāpakammaṃ nisevasi;",
  "pv15:19.3": "Na hi pāpehi kammehi,",
  "pv15:19.4": "sulabhā hoti suggatī’”ti.",
  "pv15:20.1": "“Vāmato maṃ tvaṃ paccesi,",
  "pv15:20.2": "athopi maṃ usūyasi;",
  "pv15:20.3": "Passa pāpānaṃ kammānaṃ,",
  "pv15:20.4": "vipāko hoti yādiso.",
  "pv15:21.1": "Te gharā tā ca dāsiyo,",
  "pv15:21.2": "tānevābharaṇānime;",
  "pv15:21.3": "Te aññe paricārenti,",
  "pv15:21.4": "na bhogā honti sassatā.",
  "pv15:22.1": "Idāni bhūtassa pitā,",
  "pv15:22.2": "āpaṇā gehamehiti;",
  "pv15:22.3": "Appeva te dade kiñci,",
  "pv15:22.4": "mā su tāva ito agā”ti.",
  "pv15:23.1": "“Naggā dubbaṇṇarūpāmhi,",
  "pv15:23.2": "kisā dhamanisanthatā;",
  "pv15:23.3": "Kopīnametaṃ itthīnaṃ,",
  "pv15:23.4": "mā maṃ bhūtapitāddasā”ti.",
  "pv15:24.1": "“Handa kiṃ vā tyāhaṃ dammi,",
  "pv15:24.2": "Kiṃ vā tedha karomahaṃ;",
  "pv15:24.3": "Yena tvaṃ sukhitā assa,",
  "pv15:24.4": "Sabbakāmasamiddhinī”ti.",
  "pv15:25.1": "“Cattāro bhikkhū saṃghato,",
  "pv15:25.2": "cattāro pana puggale;",
  "pv15:25.3": "Aṭṭha bhikkhū bhojayitvā,",
  "pv15:25.4": "mama dakkhiṇamādisa;",
  "pv15:25.5": "Tadāhaṃ sukhitā hessaṃ,",
  "pv15:25.6": "sabbakāmasamiddhinī”ti.",
  "pv15:26.1": "Sādhūti sā paṭissutvā,",
  "pv15:26.2": "bhojayitvāṭṭha bhikkhavo;",
  "pv15:26.3": "Vatthehacchādayitvāna,",
  "pv15:26.4": "tassā dakkhiṇamādisī.",
  "pv15:27.1": "Samanantarānuddiṭṭhe,",
  "pv15:27.2": "vipāko udapajjatha;",
  "pv15:27.3": "Bhojanacchādanapānīyaṃ,",
  "pv15:27.4": "dakkhiṇāya idaṃ phalaṃ.",
  "pv15:28.1": "Tato suddhā sucivasanā,",
  "pv15:28.2": "kāsikuttamadhārinī;",
  "pv15:28.3": "Vicittavatthābharaṇā,",
  "pv15:28.4": "sapattiṃ upasaṅkami.",
  "pv15:29.1": "“Abhikkantena vaṇṇena,",
  "pv15:29.2": "yā tvaṃ tiṭṭhasi devate;",
  "pv15:29.3": "Obhāsentī disā sabbā,",
  "pv15:29.4": "osadhī viya tārakā.",
  "pv15:30.1": "Kena tetādiso vaṇṇo,",
  "pv15:30.2": "kena te idha mijjhati;",
  "pv15:30.3": "Uppajjanti ca te bhogā,",
  "pv15:30.4": "ye keci manaso piyā.",
  "pv15:31.1": "Pucchāmi taṃ devi mahānubhāve,",
  "pv15:31.2": "Manussabhūtā kimakāsi puññaṃ;",
  "pv15:31.3": "Kenāsi evaṃ jalitānubhāvā,",
  "pv15:31.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "pv15:32.1": "“Ahaṃ mattā tuvaṃ tissā,",
  "pv15:32.2": "sapattī te pure ahuṃ;",
  "pv15:32.3": "Pāpakammaṃ karitvāna,",
  "pv15:32.4": "petalokaṃ ito gatā.",
  "pv15:33.1": "Tava dinnena dānena,",
  "pv15:33.2": "modāmi akutobhayā;",
  "pv15:33.3": "Ciraṃ jīvāhi bhagini,",
  "pv15:33.4": "saha sabbehi ñātibhi;",
  "pv15:33.5": "Asokaṃ virajaṃ ṭhānaṃ,",
  "pv15:33.6": "āvāsaṃ vasavattinaṃ.",
  "pv15:34.1": "Idha dhammaṃ caritvāna,",
  "pv15:34.2": "Dānaṃ datvāna sobhane;",
  "pv15:34.3": "Vineyya maccheramalaṃ samūlaṃ,",
  "pv15:34.4": "Aninditā saggamupehi ṭhānan”ti.",
  "pv15:35.1": "Mattāpetivatthu tatiyaṃ."
}