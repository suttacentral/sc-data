{
  "pv8:0.1": "Petavatthu",
  "pv8:0.2": "Uragavagga",
  "pv8:0.3": "8. Goṇapetavatthu",
  "pv8:1.1": "“Kiṁ nu ummattarūpova,",
  "pv8:1.2": "lāyitvā haritaṁ tiṇaṁ;",
  "pv8:1.3": "Khāda khādāti lapasi,",
  "pv8:1.4": "gatasattaṁ jaraggavaṁ.",
  "pv8:2.1": "Na hi annena pānena,",
  "pv8:2.2": "mato goṇo samuṭṭhahe;",
  "pv8:2.3": "Tvaṁsi bālo ca dummedho,",
  "pv8:2.4": "yathā taññova dummatī”ti.",
  "pv8:3.1": "“Ime pādā idaṁ sīsaṁ,",
  "pv8:3.2": "ayaṁ kāyo savāladhi;",
  "pv8:3.3": "Nettā tatheva tiṭṭhanti,",
  "pv8:3.4": "ayaṁ goṇo samuṭṭhahe.",
  "pv8:4.1": "Nāyyakassa hatthapādā,",
  "pv8:4.2": "kāyo sīsañca dissati;",
  "pv8:4.3": "Rudaṁ mattikathūpasmiṁ,",
  "pv8:4.4": "nanu tvaññeva dummatī”ti.",
  "pv8:5.1": "“Ādittaṁ vata maṁ santaṁ,",
  "pv8:5.2": "ghatasittaṁva pāvakaṁ;",
  "pv8:5.3": "Vārinā viya osiñcaṁ,",
  "pv8:5.4": "sabbaṁ nibbāpaye daraṁ.",
  "pv8:6.1": "Abbahī vata me sallaṁ,",
  "pv8:6.2": "sokaṁ hadayanissitaṁ;",
  "pv8:6.3": "Yo me sokaparetassa,",
  "pv8:6.4": "pitusokaṁ apānudi.",
  "pv8:7.1": "Svāhaṁ abbūḷhasallosmi,",
  "pv8:7.2": "sītibhūtosmi nibbuto;",
  "pv8:7.3": "Na socāmi na rodāmi,",
  "pv8:7.4": "tava sutvāna māṇava”.",
  "pv8:8.1": "Evaṁ karonti sappaññā,",
  "pv8:8.2": "ye honti anukampakā;",
  "pv8:8.3": "Vinivattayanti sokamhā,",
  "pv8:8.4": "sujāto pitaraṁ yathāti.",
  "pv8:9.1": "Goṇapetavatthu aṭṭhamaṁ."
}