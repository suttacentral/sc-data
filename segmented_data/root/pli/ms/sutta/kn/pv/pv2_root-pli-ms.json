{
  "pv2:0.1": "Petavatthu",
  "pv2:0.2": "Uragavagga",
  "pv2:0.3": "2. Sūkaramukhapetavatthu",
  "pv2:1.1": "“Kāyo te sabbasovaṇṇo,",
  "pv2:1.2": "sabbā obhāsate disā;",
  "pv2:1.3": "Mukhaṁ te sūkarasseva,",
  "pv2:1.4": "kiṁ kammamakarī pure”.",
  "pv2:2.1": "“Kāyena saññato āsiṁ,",
  "pv2:2.2": "vācāyāsimasaññato;",
  "pv2:2.3": "Tena metādiso vaṇṇo,",
  "pv2:2.4": "yathā passasi nārada.",
  "pv2:3.1": "Taṁ tyāhaṁ nārada brūmi,",
  "pv2:3.2": "Sāmaṁ diṭṭhamidaṁ tayā;",
  "pv2:3.3": "Mākāsi mukhasā pāpaṁ,",
  "pv2:3.4": "Mā kho sūkaramukho ahū”ti.",
  "pv2:4.1": "Sūkaramukhapetavatthu dutiyaṁ."
}