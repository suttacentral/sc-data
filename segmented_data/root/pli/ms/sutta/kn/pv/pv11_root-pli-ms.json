{
  "pv11:0.1": "Petavatthu",
  "pv11:0.2": "Uragavagga",
  "pv11:0.3": "11. Nāgapetavatthu",
  "pv11:1.1": "“Puratova setena paleti hatthinā,",
  "pv11:1.2": "Majjhe pana assatarīrathena;",
  "pv11:1.3": "Pacchā ca kaññā sivikāya nīyati,",
  "pv11:1.4": "Obhāsayantī dasa sabbaso disā.",
  "pv11:2.1": "Tumhe pana muggarahatthapāṇino,",
  "pv11:2.2": "Rudammukhā chinnapabhinnagattā;",
  "pv11:2.3": "Manussabhūtā kimakattha pāpaṁ,",
  "pv11:2.4": "Yenaññamaññassa pivātha lohitan”ti.",
  "pv11:3.1": "“Puratova yo gacchati kuñjarena,",
  "pv11:3.2": "Setena nāgena catukkamena;",
  "pv11:3.3": "Amhāka putto ahu jeṭṭhako so,",
  "pv11:3.4": "Dānāni datvāna sukhī pamodati.",
  "pv11:4.1": "Yo so majjhe assatarīrathena,",
  "pv11:4.2": "Catubbhi yuttena suvaggitena;",
  "pv11:4.3": "Amhāka putto ahu majjhimo so,",
  "pv11:4.4": "Amaccharī dānavatī virocati.",
  "pv11:5.1": "Yā sā ca pacchā sivikāya nīyati,",
  "pv11:5.2": "Nārī sapaññā migamandalocanā;",
  "pv11:5.3": "Amhāka dhītā ahu sā kaniṭṭhikā,",
  "pv11:5.4": "Bhāgaḍḍhabhāgena sukhī pamodati.",
  "pv11:6.1": "Ete ca dānāni adaṁsu pubbe,",
  "pv11:6.2": "Pasannacittā samaṇabrāhmaṇānaṁ;",
  "pv11:6.3": "Mayaṁ pana maccharino ahumha,",
  "pv11:6.4": "Paribhāsakā samaṇabrāhmaṇānaṁ;",
  "pv11:6.5": "Ete ca datvā paricārayanti,",
  "pv11:6.6": "Mayañca sussāma naḷova chinno”ti.",
  "pv11:7.1": "“Kiṁ tumhākaṁ bhojanaṁ kiṁ sayānaṁ,",
  "pv11:7.2": "Kathañca yāpetha supāpadhammino;",
  "pv11:7.3": "Pahūtabhogesu anappakesu,",
  "pv11:7.4": "Sukhaṁ virādhāya dukkhajja pattā”ti.",
  "pv11:8.1": "“Aññamaññaṁ vadhitvāna,",
  "pv11:8.2": "pivāma pubbalohitaṁ;",
  "pv11:8.3": "Bahuṁ pitvā na dhātā homa,",
  "pv11:8.4": "nacchādimhase mayaṁ.",
  "pv11:9.1": "Icceva maccā paridevayanti,",
  "pv11:9.2": "Adāyakā pecca yamassa ṭhāyino;",
  "pv11:9.3": "Ye te vidicca adhigamma bhoge,",
  "pv11:9.4": "Na bhuñjare nāpi karonti puññaṁ.",
  "pv11:10.1": "Te khuppipāsūpagatā parattha,",
  "pv11:10.2": "Pacchā ciraṁ jhāyare ḍayhamānā;",
  "pv11:10.3": "Kammāni katvāna dukhudrāni,",
  "pv11:10.4": "Anubhonti dukkhaṁ kaṭukapphalāni.",
  "pv11:11.1": "Ittaraṁ hi dhanaṁ dhaññaṁ,",
  "pv11:11.2": "ittaraṁ idha jīvitaṁ;",
  "pv11:11.3": "Ittaraṁ ittarato ñatvā,",
  "pv11:11.4": "dīpaṁ kayirātha paṇḍito.",
  "pv11:12.1": "Ye te evaṁ pajānanti,",
  "pv11:12.2": "narā dhammassa kovidā;",
  "pv11:12.3": "Te dāne nappamajjanti,",
  "pv11:12.4": "sutvā arahataṁ vaco”ti.",
  "pv11:13.1": "Nāgapetavatthu ekādasamaṁ."
}