{
  "pv18:0.1": "Petavatthu",
  "pv18:0.2": "Ubbarivagga",
  "pv18:0.3": "6. Kaṇhapetavatthu",
  "pv18:1.1": "“Uṭṭhehi kaṇha kiṁ sesi,",
  "pv18:1.2": "Ko attho supanena te;",
  "pv18:1.3": "Yo ca tuyhaṁ sako bhātā,",
  "pv18:1.4": "Hadayaṁ cakkhu ca dakkhiṇaṁ;",
  "pv18:1.5": "Tassa vātā balīyanti,",
  "pv18:1.6": "Sasaṁ jappati kesavā”ti.",
  "pv18:2.1": "“Tassa taṁ vacanaṁ sutvā,",
  "pv18:2.2": "rohiṇeyyassa kesavo;",
  "pv18:2.3": "Taramānarūpo vuṭṭhāsi,",
  "pv18:2.4": "bhātusokena aṭṭito.",
  "pv18:3.1": "Kiṁ nu ummattarūpova,",
  "pv18:3.2": "kevalaṁ dvārakaṁ imaṁ;",
  "pv18:3.3": "Saso sasoti lapasi,",
  "pv18:3.4": "kīdisaṁ sasamicchasi.",
  "pv18:4.1": "Sovaṇṇamayaṁ maṇimayaṁ,",
  "pv18:4.2": "Lohamayaṁ atha rūpiyamayaṁ;",
  "pv18:4.3": "Saṅkhasilāpavāḷamayaṁ,",
  "pv18:4.4": "Kārayissāmi te sasaṁ.",
  "pv18:5.1": "Santi aññepi sasakā,",
  "pv18:5.2": "araññavanagocarā;",
  "pv18:5.3": "Tepi te ānayissāmi,",
  "pv18:5.4": "kīdisaṁ sasamicchasī”ti.",
  "pv18:6.1": "“Nāhamete sase icche,",
  "pv18:6.2": "ye sasā pathavissitā;",
  "pv18:6.3": "Candato sasamicchāmi,",
  "pv18:6.4": "taṁ me ohara kesavā”ti.",
  "pv18:7.1": "“So nūna madhuraṁ ñāti,",
  "pv18:7.2": "jīvitaṁ vijahissasi;",
  "pv18:7.3": "Apatthiyaṁ patthayasi,",
  "pv18:7.4": "candato sasamicchasī”ti.",
  "pv18:8.1": "“Evañce kaṇha jānāsi,",
  "pv18:8.2": "yathaññamanusāsasi;",
  "pv18:8.3": "Kasmā pure mataṁ puttaṁ,",
  "pv18:8.4": "ajjāpi manusocasi.",
  "pv18:9.1": "Na yaṁ labbhā manussena,",
  "pv18:9.2": "amanussena vā pana;",
  "pv18:9.3": "Jāto me mā mari putto,",
  "pv18:9.4": "kuto labbhā alabbhiyaṁ.",
  "pv18:10.1": "Na mantā mūlabhesajjā,",
  "pv18:10.2": "osadhehi dhanena vā;",
  "pv18:10.3": "Sakkā ānayituṁ kaṇha,",
  "pv18:10.4": "yaṁ petamanusocasi.",
  "pv18:11.1": "Mahaddhanā mahābhogā,",
  "pv18:11.2": "raṭṭhavantopi khattiyā;",
  "pv18:11.3": "Pahūtadhanadhaññāse,",
  "pv18:11.4": "tepi no ajarāmarā.",
  "pv18:12.1": "Khattiyā brāhmaṇā vessā,",
  "pv18:12.2": "suddā caṇḍālapukkusā;",
  "pv18:12.3": "Ete caññe ca jātiyā,",
  "pv18:12.4": "tepi no ajarāmarā.",
  "pv18:13.1": "Ye mantaṁ parivattenti,",
  "pv18:13.2": "chaḷaṅgaṁ brahmacintitaṁ;",
  "pv18:13.3": "Ete caññe ca vijjāya,",
  "pv18:13.4": "tepi no ajarāmarā.",
  "pv18:14.1": "Isayo vāpi ye santā,",
  "pv18:14.2": "saññatattā tapassino;",
  "pv18:14.3": "Sarīraṁ tepi kālena,",
  "pv18:14.4": "vijahanti tapassino.",
  "pv18:15.1": "Bhāvitattā arahanto,",
  "pv18:15.2": "katakiccā anāsavā;",
  "pv18:15.3": "Nikkhipanti imaṁ dehaṁ,",
  "pv18:15.4": "puññapāpaparikkhayā”ti.",
  "pv18:16.1": "“Ādittaṁ vata maṁ santaṁ,",
  "pv18:16.2": "ghatasittaṁva pāvakaṁ;",
  "pv18:16.3": "Vārinā viya osiñcaṁ,",
  "pv18:16.4": "sabbaṁ nibbāpaye daraṁ.",
  "pv18:17.1": "Abbahī vata me sallaṁ,",
  "pv18:17.2": "sokaṁ hadayanissitaṁ;",
  "pv18:17.3": "Yo me sokaparetassa,",
  "pv18:17.4": "puttasokaṁ apānudi.",
  "pv18:18.1": "Svāhaṁ abbūḷhasallosmi,",
  "pv18:18.2": "sītibhūtosmi nibbuto;",
  "pv18:18.3": "Na socāmi na rodāmi,",
  "pv18:18.4": "tava sutvāna bhātika”.",
  "pv18:19.1": "Evaṁ karonti sappaññā,",
  "pv18:19.2": "ye honti anukampakā;",
  "pv18:19.3": "Nivattayanti sokamhā,",
  "pv18:19.4": "ghaṭo jeṭṭhaṁva bhātaraṁ.",
  "pv18:20.1": "Yassa etādisā honti,",
  "pv18:20.2": "amaccā paricārakā;",
  "pv18:20.3": "Subhāsitena anventi,",
  "pv18:20.4": "ghaṭo jeṭṭhaṁva bhātaranti.",
  "pv18:21.1": "Kaṇhapetavatthu chaṭṭhaṁ."
}