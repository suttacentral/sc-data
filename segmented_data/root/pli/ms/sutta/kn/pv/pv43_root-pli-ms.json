{
  "pv43:0.1": "Petavatthu",
  "pv43:0.2": "Mahāvagga",
  "pv43:0.3": "8. Gūthakhādakapetavatthu",
  "pv43:1.1": "“Gūthakūpato uggantvā,",
  "pv43:1.2": "ko nu dīno patiṭṭhasi;",
  "pv43:1.3": "Nissaṁsayaṁ pāpakammanto,",
  "pv43:1.4": "kiṁ nu saddahase tuvan”ti.",
  "pv43:2.1": "“Ahaṁ bhadante petomhi,",
  "pv43:2.2": "duggato yamalokiko;",
  "pv43:2.3": "Pāpakammaṁ karitvāna,",
  "pv43:2.4": "petalokaṁ ito gato”.",
  "pv43:3.1": "“Kiṁ nu kāyena vācāya,",
  "pv43:3.2": "manasā dukkaṭaṁ kataṁ;",
  "pv43:3.3": "Kissa kammavipākena,",
  "pv43:3.4": "idaṁ dukkhaṁ nigacchasī”ti.",
  "pv43:4.1": "“Ahu āvāsiko mayhaṁ,",
  "pv43:4.2": "issukī kulamaccharī;",
  "pv43:4.3": "Ajjhāsito mayhaṁ ghare,",
  "pv43:4.4": "kadariyo paribhāsako.",
  "pv43:5.1": "Tassāhaṁ vacanaṁ sutvā,",
  "pv43:5.2": "bhikkhavo paribhāsisaṁ;",
  "pv43:5.3": "Tassa kammavipākena,",
  "pv43:5.4": "petalokaṁ ito gato”ti.",
  "pv43:6.1": "“Amitto mittavaṇṇena,",
  "pv43:6.2": "yo te āsi kulūpako;",
  "pv43:6.3": "Kāyassa bhedā duppañño,",
  "pv43:6.4": "kiṁ nu pecca gatiṁ gato”ti.",
  "pv43:7.1": "“Tassevāhaṁ pāpakammassa,",
  "pv43:7.2": "sīse tiṭṭhāmi matthake;",
  "pv43:7.3": "So ca paravisayaṁ patto,",
  "pv43:7.4": "mameva paricārako.",
  "pv43:8.1": "Yaṁ bhadante hadantaññe,",
  "pv43:8.2": "etaṁ me hoti bhojanaṁ;",
  "pv43:8.3": "Ahañca kho yaṁ hadāmi,",
  "pv43:8.4": "etaṁ so upajīvatī”ti.",
  "pv43:9.1": "Gūthakhādakapetavatthu aṭṭhamaṁ."
}