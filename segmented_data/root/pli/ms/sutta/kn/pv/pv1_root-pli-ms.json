{
  "pv1:0.1": "Petavatthu",
  "pv1:0.2": "Uragavagga",
  "pv1:0.3": "1. Khettūpamapetavatthu",
  "pv1:1.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
  "pv1:2.1": "“Khettūpamā arahanto,",
  "pv1:2.2": "dāyakā kassakūpamā;",
  "pv1:2.3": "Bījūpamaṁ deyyadhammaṁ,",
  "pv1:2.4": "etto nibbattate phalaṁ.",
  "pv1:3.1": "Etaṁ bījaṁ kasi khettaṁ,",
  "pv1:3.2": "petānaṁ dāyakassa ca;",
  "pv1:3.3": "Taṁ petā paribhuñjanti,",
  "pv1:3.4": "dātā puññena vaḍḍhati.",
  "pv1:4.1": "Idheva kusalaṁ katvā,",
  "pv1:4.2": "Pete ca paṭipūjiya;",
  "pv1:4.3": "Saggañca kamatiṭṭhānaṁ,",
  "pv1:4.4": "Kammaṁ katvāna bhaddakan”ti.",
  "pv1:5.1": "Khettūpamapetavatthu paṭhamaṁ."
}