{
  "dhp60:0.1": "Khuddakanikāya",
  "dhp60:0.2": "Dhammapada",
  "dhp60:0.3": "Bālavagga",
  "dhp60:0.4": "Aññatarapurisavatthu",
  "dhp60:1": "Dīghā jāgarato ratti,",
  "dhp60:2": "dīghaṃ santassa yojanaṃ;",
  "dhp60:3": "Dīgho bālāna saṃsāro,",
  "dhp60:4": "saddhammaṃ avijānataṃ.",
  "dhp61:0": "Mahākassapasaddhivihārikavatthu",
  "dhp61:1": "Carañce nādhigaccheyya,",
  "dhp61:2": "Seyyaṃ sadisamattano;",
  "dhp61:3": "Ekacariyaṃ daḷhaṃ kayirā,",
  "dhp61:4": "Natthi bāle sahāyatā.",
  "dhp62:0": "Ānandaseṭṭhivatthu",
  "dhp62:1": "Puttā matthi dhanaṃ matthi,",
  "dhp62:2": "iti bālo vihaññati;",
  "dhp62:3": "Attā hi attano natthi,",
  "dhp62:4": "kuto puttā kuto dhanaṃ.",
  "dhp63:0": "Gaṇṭhibhedakacoravatthu",
  "dhp63:1": "Yo bālo maññati bālyaṃ,",
  "dhp63:2": "paṇḍito vāpi tena so;",
  "dhp63:3": "Bālo ca paṇḍitamānī,",
  "dhp63:4": "sa ve “bālo”ti vuccati.",
  "dhp64:0": "Udāyittheravatthu",
  "dhp64:1": "Yāvajīvampi ce bālo,",
  "dhp64:2": "paṇḍitaṃ payirupāsati;",
  "dhp64:3": "Na so dhammaṃ vijānāti,",
  "dhp64:4": "dabbī sūparasaṃ yathā.",
  "dhp65:0": "Tiṃsapāveyyakabhikkhuvatthu",
  "dhp65:1": "Muhuttamapi ce viññū,",
  "dhp65:2": "paṇḍitaṃ payirupāsati;",
  "dhp65:3": "Khippaṃ dhammaṃ vijānāti,",
  "dhp65:4": "jivhā sūparasaṃ yathā.",
  "dhp66:0": "Suppabuddhakuṭṭhivatthu",
  "dhp66:1": "Caranti bālā dummedhā,",
  "dhp66:2": "amitteneva attanā;",
  "dhp66:3": "Karontā pāpakaṃ kammaṃ,",
  "dhp66:4": "yaṃ hoti kaṭukapphalaṃ.",
  "dhp67:0": "Kassakavatthu",
  "dhp67:1": "Na taṃ kammaṃ kataṃ sādhu,",
  "dhp67:2": "yaṃ katvā anutappati;",
  "dhp67:3": "Yassa assumukho rodaṃ,",
  "dhp67:4": "vipākaṃ paṭisevati.",
  "dhp68:0": "Sumanamālākāravatthu",
  "dhp68:1": "Tañca kammaṃ kataṃ sādhu,",
  "dhp68:2": "yaṃ katvā nānutappati;",
  "dhp68:3": "Yassa patīto sumano,",
  "dhp68:4": "vipākaṃ paṭisevati.",
  "dhp69:0": "Uppalavaṇṇattherīvatthu",
  "dhp69:1": "Madhuṃvā maññati bālo,",
  "dhp69:2": "yāva pāpaṃ na paccati;",
  "dhp69:3": "Yadā ca paccati pāpaṃ,",
  "dhp69:4": "atha dukkhaṃ nigacchati.",
  "dhp70:0": "Jambukattheravatthu",
  "dhp70:1": "Māse māse kusaggena,",
  "dhp70:2": "bālo bhuñjeyya bhojanaṃ;",
  "dhp70:3": "Na so saṅkhātadhammānaṃ,",
  "dhp70:4": "kalaṃ agghati soḷasiṃ.",
  "dhp71:0": "Ahipetavatthu",
  "dhp71:1": "Na hi pāpaṃ kataṃ kammaṃ,",
  "dhp71:2": "Sajjukhīraṃva muccati;",
  "dhp71:3": "Ḍahantaṃ bālamanveti,",
  "dhp71:4": "Bhasmacchannova pāvako.",
  "dhp72:0": "Saṭṭhikūṭapetavatthu",
  "dhp72:1": "Yāvadeva anatthāya,",
  "dhp72:2": "ñattaṃ bālassa jāyati;",
  "dhp72:3": "Hanti bālassa sukkaṃsaṃ,",
  "dhp72:4": "muddhamassa vipātayaṃ.",
  "dhp73:0": "Cittagahapativatthu",
  "dhp73:1": "Asantaṃ bhāvanamiccheyya,",
  "dhp73:2": "Purekkhārañca bhikkhusu;",
  "dhp73:3": "Āvāsesu ca issariyaṃ,",
  "dhp73:4": "Pūjaṃ parakulesu ca.",
  "dhp74:1": "Mameva kata maññantu,",
  "dhp74:2": "gihī pabbajitā ubho;",
  "dhp74:3": "Mamevātivasā assu,",
  "dhp74:4": "kiccākiccesu kismici;",
  "dhp74:5": "Iti bālassa saṅkappo,",
  "dhp74:6": "icchā māno ca vaḍḍhati.",
  "dhp75:0": "Vanavāsitissasāmaṇeravatthu",
  "dhp75:1": "Aññā hi lābhūpanisā,",
  "dhp75:2": "aññā nibbānagāminī;",
  "dhp75:3": "Evametaṃ abhiññāya,",
  "dhp75:4": "bhikkhu buddhassa sāvako;",
  "dhp75:5": "Sakkāraṃ nābhinandeyya,",
  "dhp75:6": "vivekamanubrūhaye.",
  "dhp75:7": "Bālavaggo pañcamo."
}