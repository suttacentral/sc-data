{
  "dhp209:0.1": "Khuddakanikāya",
  "dhp209:0.2": "Dhammapada",
  "dhp209:0.3": "Piyavagga",
  "dhp209:0.4": "Tayojanapabbajitavatthu",
  "dhp209:1": "Ayoge yuñjamattānaṃ,",
  "dhp209:2": "yogasmiñca ayojayaṃ;",
  "dhp209:3": "Atthaṃ hitvā piyaggāhī,",
  "dhp209:4": "pihetattānuyoginaṃ.",
  "dhp210:1": "Mā piyehi samāgañchi,",
  "dhp210:2": "appiyehi kudācanaṃ;",
  "dhp210:3": "Piyānaṃ adassanaṃ dukkhaṃ,",
  "dhp210:4": "appiyānañca dassanaṃ.",
  "dhp211:1": "Tasmā piyaṃ na kayirātha,",
  "dhp211:2": "piyāpāyo hi pāpako;",
  "dhp211:3": "Ganthā tesaṃ na vijjanti,",
  "dhp211:4": "yesaṃ natthi piyāppiyaṃ.",
  "dhp212:0": "Aññatarakuṭumbikavatthu",
  "dhp212:1": "Piyato jāyatī soko,",
  "dhp212:2": "piyato jāyatī bhayaṃ;",
  "dhp212:3": "Piyato vippamuttassa,",
  "dhp212:4": "natthi soko kuto bhayaṃ.",
  "dhp213:0": "Visākhāvatthu",
  "dhp213:1": "Pemato jāyatī soko,",
  "dhp213:2": "pemato jāyatī bhayaṃ;",
  "dhp213:3": "Pemato vippamuttassa,",
  "dhp213:4": "natthi soko kuto bhayaṃ.",
  "dhp214:0": "Licchavīvatthu",
  "dhp214:1": "Ratiyā jāyatī soko,",
  "dhp214:2": "ratiyā jāyatī bhayaṃ;",
  "dhp214:3": "Ratiyā vippamuttassa,",
  "dhp214:4": "natthi soko kuto bhayaṃ.",
  "dhp215:0": "Anitthigandhakumāravatthu",
  "dhp215:1": "Kāmato jāyatī soko,",
  "dhp215:2": "kāmato jāyatī bhayaṃ;",
  "dhp215:3": "Kāmato vippamuttassa,",
  "dhp215:4": "natthi soko kuto bhayaṃ.",
  "dhp216:0": "Aññatarabrāhmaṇavatthu",
  "dhp216:1": "Taṇhāya jāyatī soko,",
  "dhp216:2": "taṇhāya jāyatī bhayaṃ;",
  "dhp216:3": "Taṇhāya vippamuttassa,",
  "dhp216:4": "natthi soko kuto bhayaṃ.",
  "dhp217:0": "Pañcasatadārakavatthu",
  "dhp217:1": "Sīladassanasampannaṃ,",
  "dhp217:2": "dhammaṭṭhaṃ saccavedinaṃ;",
  "dhp217:3": "Attano kamma kubbānaṃ,",
  "dhp217:4": "taṃ jano kurute piyaṃ.",
  "dhp218:0": "Ekaanāgāmittheravatthu",
  "dhp218:1": "Chandajāto anakkhāte,",
  "dhp218:2": "Manasā ca phuṭo siyā;",
  "dhp218:3": "Kāmesu ca appaṭibaddhacitto,",
  "dhp218:4": "Uddhaṃsototi vuccati.",
  "dhp219:0": "Nandiyavatthu",
  "dhp219:1": "Cirappavāsiṃ purisaṃ,",
  "dhp219:2": "dūrato sotthimāgataṃ;",
  "dhp219:3": "Ñātimittā suhajjā ca,",
  "dhp219:4": "abhinandanti āgataṃ.",
  "dhp220:1": "Tatheva katapuññampi,",
  "dhp220:2": "asmā lokā paraṃ gataṃ;",
  "dhp220:3": "Puññāni paṭigaṇhanti,",
  "dhp220:4": "piyaṃ ñātīva āgataṃ.",
  "dhp220:5": "Piyavaggo soḷasamo."
}