{
  "vv51:0.1": "Vimānavatthu",
  "vv51:0.2": "Purisavimāna",
  "vv51:0.3": "Mahārathavagga",
  "vv51:0.4": "1. Maṇḍūkadevaputtavimānavatthu",
  "vv51:1.1": "“Ko me vandati pādāni,",
  "vv51:1.2": "iddhiyā yasasā jalaṁ;",
  "vv51:1.3": "Abhikkantena vaṇṇena,",
  "vv51:1.4": "sabbā obhāsayaṁ disā”ti.",
  "vv51:2.1": "“Maṇḍūkohaṁ pure āsiṁ,",
  "vv51:2.2": "udake vārigocaro;",
  "vv51:2.3": "Tava dhammaṁ suṇantassa,",
  "vv51:2.4": "avadhī vacchapālako.",
  "vv51:3.1": "Muhuttaṁ cittapasādassa,",
  "vv51:3.2": "iddhiṁ passa yasañca me;",
  "vv51:3.3": "Ānubhāvañca me passa,",
  "vv51:3.4": "vaṇṇaṁ passa jutiñca me.",
  "vv51:4.1": "Ye ca te dīghamaddhānaṁ,",
  "vv51:4.2": "dhammaṁ assosuṁ gotama;",
  "vv51:4.3": "Pattā te acalaṭṭhānaṁ,",
  "vv51:4.4": "yattha gantvā na socare”ti.",
  "vv51:5.1": "Maṇḍūkadevaputtavimānaṁ paṭhamaṁ."
}