{
  "vv54:0.1": "Vimānavatthu",
  "vv54:0.2": "Purisavimāna",
  "vv54:0.3": "Mahārathavagga",
  "vv54:0.4": "4. Kakkaṭakarasadāyakavimānavatthu",
  "vv54:1.1": "“Uccamidaṁ maṇithūṇaṁ vimānaṁ,",
  "vv54:1.2": "Samantato dvādasa yojanāni;",
  "vv54:1.3": "Kūṭāgārā sattasatā uḷārā,",
  "vv54:1.4": "Veḷuriyathambhā rucakatthatā subhā.",
  "vv54:2.1": "Tatthacchasi pivasi khādasi ca,",
  "vv54:2.2": "Dibbā ca vīṇā pavadanti vagguṁ;",
  "vv54:2.3": "Dibbā rasā kāmaguṇettha pañca,",
  "vv54:2.4": "Nāriyo ca naccanti suvaṇṇachannā.",
  "vv54:3.1": "Kena tetādiso vaṇṇo,",
  "vv54:3.2": "kena te idha mijjhati;",
  "vv54:3.3": "Uppajjanti ca te bhogā,",
  "vv54:3.4": "ye keci manaso piyā.",
  "vv54:4.1": "Pucchāmi taṁ deva mahānubhāva,",
  "vv54:4.2": "Manussabhūto kimakāsi puññaṁ;",
  "vv54:4.3": "Kenāsi evaṁ jalitānubhāvo,",
  "vv54:4.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv54:5.1": "So devaputto attamano,",
  "vv54:5.2": "moggallānena pucchito;",
  "vv54:5.3": "Pañhaṁ puṭṭho viyākāsi,",
  "vv54:5.4": "yassa kammassidaṁ phalaṁ.",
  "vv54:6.1": "“Satisamuppādakaro,",
  "vv54:6.2": "dvāre kakkaṭako ṭhito;",
  "vv54:6.3": "Niṭṭhito jātarūpassa,",
  "vv54:6.4": "sobhati dasapādako.",
  "vv54:7.1": "Tena metādiso vaṇṇo,",
  "vv54:7.2": "tena me idha mijjhati;",
  "vv54:7.3": "Uppajjanti ca me bhogā,",
  "vv54:7.4": "ye keci manaso piyā.",
  "vv54:8.1": "Akkhāmi te bhikkhu mahānubhāva,",
  "vv54:8.2": "Manussabhūto yamakāsi puññaṁ;",
  "vv54:8.3": "Tenamhi evaṁ jalitānubhāvo,",
  "vv54:8.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
  "vv54:9.1": "Kakkaṭakarasadāyakavimānaṁ catutthaṁ.",
  "vv54:10.1": "(Anantaraṁ pañcavimānaṁ yathā kakkaṭakarasadāyakavimānaṁ tathā vitthāretabbaṁ.)"
}