{
  "vv79:0.1": "Vimānavatthu",
  "vv79:0.2": "Purisavimāna",
  "vv79:0.3": "Sunikkhittavagga",
  "vv79:0.4": "5. Ambavimānavatthu",
  "vv79:1.1": "“Uccamidaṁ maṇithūṇaṁ vimānaṁ,",
  "vv79:1.2": "Samantato dvādasa yojanāni;",
  "vv79:1.3": "Kūṭāgārā sattasatā uḷārā,",
  "vv79:1.4": "Veḷuriyathambhā rucakatthatā subhā.",
  "vv79:2.1": "Tatthacchasi pivasi khādasi ca,",
  "vv79:2.2": "Dibbā ca vīṇā pavadanti vagguṁ;",
  "vv79:2.3": "Dibbā rasā kāmaguṇettha pañca,",
  "vv79:2.4": "Nāriyo ca naccanti suvaṇṇachannā.",
  "vv79:3.1": "Kena tetādiso vaṇṇo,",
  "vv79:3.2": "…pe…",
  "vv79:3.3": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv79:4.1": "So devaputto attamano,",
  "vv79:4.2": "…pe…",
  "vv79:4.3": "yassa kammassidaṁ phalaṁ.",
  "vv79:5.1": "“Gimhānaṁ pacchime māse,",
  "vv79:5.2": "patapante divaṅkare;",
  "vv79:5.3": "Paresaṁ bhatako poso,",
  "vv79:5.4": "ambārāmamasiñcati.",
  "vv79:6.1": "Atha tenāgamā bhikkhu,",
  "vv79:6.2": "sāriputtoti vissuto;",
  "vv79:6.3": "Kilantarūpo kāyena,",
  "vv79:6.4": "akilantova cetasā.",
  "vv79:7.1": "Tañca disvāna āyantaṁ,",
  "vv79:7.2": "Avocaṁ ambasiñcako;",
  "vv79:7.3": "Sādhu taṁ bhante nhāpeyyaṁ,",
  "vv79:7.4": "Yaṁ mamassa sukhāvahaṁ.",
  "vv79:8.1": "Tassa me anukampāya,",
  "vv79:8.2": "nikkhipi pattacīvaraṁ;",
  "vv79:8.3": "Nisīdi rukkhamūlasmiṁ,",
  "vv79:8.4": "chāyāya ekacīvaro.",
  "vv79:9.1": "Tañca acchena vārinā,",
  "vv79:9.2": "pasannamānaso naro;",
  "vv79:9.3": "Nhāpayī rukkhamūlasmiṁ,",
  "vv79:9.4": "chāyāya ekacīvaraṁ.",
  "vv79:10.1": "Ambo ca sitto samaṇo ca nhāpito,",
  "vv79:10.2": "Mayā ca puññaṁ pasutaṁ anappakaṁ;",
  "vv79:10.3": "Iti so pītiyā kāyaṁ,",
  "vv79:10.4": "Sabbaṁ pharati attano.",
  "vv79:11.1": "Tadeva ettakaṁ kammaṁ,",
  "vv79:11.2": "akāsiṁ tāya jātiyā;",
  "vv79:11.3": "Pahāya mānusaṁ dehaṁ,",
  "vv79:11.4": "upapannomhi nandanaṁ.",
  "vv79:12.1": "Nandane ca vane ramme,",
  "vv79:12.2": "nānādijagaṇāyute;",
  "vv79:12.3": "Ramāmi naccagītehi,",
  "vv79:12.4": "accharāhi purakkhato”ti.",
  "vv79:13.1": "Ambavimānaṁ pañcamaṁ."
}