{
  "vv52:0.1": "Vimānavatthu",
  "vv52:0.2": "Purisavimāna",
  "vv52:0.3": "Mahārathavagga",
  "vv52:0.4": "2. Revatīvimānavatthu",
  "vv52:1.1": "“Cirappavāsiṁ purisaṁ,",
  "vv52:1.2": "dūrato sotthimāgataṁ;",
  "vv52:1.3": "Ñātimittā suhajjā ca,",
  "vv52:1.4": "abhinandanti āgataṁ.",
  "vv52:2.1": "Tatheva katapuññampi,",
  "vv52:2.2": "asmā lokā paraṁ gataṁ;",
  "vv52:2.3": "Puññāni paṭigaṇhanti,",
  "vv52:2.4": "piyaṁ ñātīva āgataṁ”.",
  "vv52:3.1": "“Uṭṭhehi revate supāpadhamme,",
  "vv52:3.2": "Apārutadvāre adānasīle;",
  "vv52:3.3": "Nessāma taṁ yattha thunanti duggatā,",
  "vv52:3.4": "Samappitā nerayikā dukkhenā”ti.",
  "vv52:4.1": "Icceva vatvāna yamassa dūtā,",
  "vv52:4.2": "Te dve yakkhā lohitakkhā brahantā;",
  "vv52:4.3": "Paccekabāhāsu gahetvā revataṁ,",
  "vv52:4.4": "Pakkāmayuṁ devagaṇassa santike.",
  "vv52:5.1": "“Ādiccavaṇṇaṁ ruciraṁ pabhassaraṁ,",
  "vv52:5.2": "Byamhaṁ subhaṁ kañcanajālachannaṁ;",
  "vv52:5.3": "Kassetamākiṇṇajanaṁ vimānaṁ,",
  "vv52:5.4": "Suriyassa raṁsīriva jotamānaṁ.",
  "vv52:6.1": "Nārīgaṇā candanasāralittā,",
  "vv52:6.2": "Ubhato vimānaṁ upasobhayanti;",
  "vv52:6.3": "Taṁ dissati suriyasamānavaṇṇaṁ,",
  "vv52:6.4": "Ko modati saggapatto vimāne”ti.",
  "vv52:7.1": "“Bārāṇasiyaṁ nandiyo nāmāsi,",
  "vv52:7.2": "Upāsako amaccharī dānapati vadaññū;",
  "vv52:7.3": "Tassetamākiṇṇajanaṁ vimānaṁ,",
  "vv52:7.4": "Suriyassa raṁsīriva jotamānaṁ.",
  "vv52:8.1": "Nārīgaṇā candanasāralittā,",
  "vv52:8.2": "Ubhato vimānaṁ upasobhayanti;",
  "vv52:8.3": "Taṁ dissati suriyasamānavaṇṇaṁ,",
  "vv52:8.4": "So modati saggapatto vimāne”ti.",
  "vv52:9.1": "“Nandiyassāhaṁ bhariyā,",
  "vv52:9.2": "Agārinī sabbakulassa issarā;",
  "vv52:9.3": "Bhattu vimāne ramissāmi dānahaṁ,",
  "vv52:9.4": "Na patthaye nirayaṁ dassanāyā”ti.",
  "vv52:10.1": "“Eso te nirayo supāpadhamme,",
  "vv52:10.2": "Puññaṁ tayā akataṁ jīvaloke;",
  "vv52:10.3": "Na hi maccharī rosako pāpadhammo,",
  "vv52:10.4": "Saggūpagānaṁ labhati sahabyatan”ti.",
  "vv52:11.1": "“Kiṁ nu gūthañca muttañca,",
  "vv52:11.2": "asucī paṭidissati;",
  "vv52:11.3": "Duggandhaṁ kimidaṁ mīḷhaṁ,",
  "vv52:11.4": "kimetaṁ upavāyatī”ti.",
  "vv52:12.1": "“Esa saṁsavako nāma,",
  "vv52:12.2": "gambhīro sataporiso;",
  "vv52:12.3": "Yattha vassasahassāni,",
  "vv52:12.4": "tuvaṁ paccasi revate”ti.",
  "vv52:13.1": "“Kiṁ nu kāyena vācāya,",
  "vv52:13.2": "manasā dukkaṭaṁ kataṁ;",
  "vv52:13.3": "Kena saṁsavako laddho,",
  "vv52:13.4": "gambhīro sataporiso”ti.",
  "vv52:14.1": "“Samaṇe brāhmaṇe cāpi,",
  "vv52:14.2": "aññe vāpi vanibbake;",
  "vv52:14.3": "Musāvādena vañcesi,",
  "vv52:14.4": "taṁ pāpaṁ pakataṁ tayā.",
  "vv52:15.1": "Tena saṁsavako laddho,",
  "vv52:15.2": "gambhīro sataporiso;",
  "vv52:15.3": "Tattha vassasahassāni,",
  "vv52:15.4": "tuvaṁ paccasi revate.",
  "vv52:16.1": "Hatthepi chindanti athopi pāde,",
  "vv52:16.2": "Kaṇṇepi chindanti athopi nāsaṁ;",
  "vv52:16.3": "Athopi kākoḷagaṇā samecca,",
  "vv52:16.4": "Saṅgamma khādanti viphandamānan”ti.",
  "vv52:17.1": "“Sādhu kho maṁ paṭinetha,",
  "vv52:17.2": "kāhāmi kusalaṁ bahuṁ;",
  "vv52:17.3": "Dānena samacariyāya,",
  "vv52:17.4": "saṁyamena damena ca;",
  "vv52:17.5": "Yaṁ katvā sukhitā honti,",
  "vv52:17.6": "na ca pacchānutappare”ti.",
  "vv52:18.1": "“Pure tuvaṁ pamajjitvā,",
  "vv52:18.2": "idāni paridevasi;",
  "vv52:18.3": "Sayaṁ katānaṁ kammānaṁ,",
  "vv52:18.4": "vipākaṁ anubhossasī”ti.",
  "vv52:19.1": "“Ko devalokato manussalokaṁ,",
  "vv52:19.2": "Gantvāna puṭṭho me evaṁ vadeyya;",
  "vv52:19.3": "‘Nikkhittadaṇḍesu dadātha dānaṁ,",
  "vv52:19.4": "Acchādanaṁ seyyamathannapānaṁ;",
  "vv52:19.5": "Na hi maccharī rosako pāpadhammo,",
  "vv52:19.6": "Saggūpagānaṁ labhati sahabyataṁ’.",
  "vv52:20.1": "Sāhaṁ nūna ito gantvā,",
  "vv52:20.2": "yoniṁ laddhāna mānusiṁ;",
  "vv52:20.3": "Vadaññū sīlasampannā,",
  "vv52:20.4": "kāhāmi kusalaṁ bahuṁ;",
  "vv52:20.5": "Dānena samacariyāya,",
  "vv52:20.6": "saṁyamena damena ca.",
  "vv52:21.1": "Ārāmāni ca ropissaṁ,",
  "vv52:21.2": "dugge saṅkamanāni ca;",
  "vv52:21.3": "Papañca udapānañca,",
  "vv52:21.4": "vippasannena cetasā.",
  "vv52:22.1": "Cātuddasiṁ pañcadasiṁ,",
  "vv52:22.2": "yā ca pakkhassa aṭṭhamī;",
  "vv52:22.3": "Pāṭihāriyapakkhañca,",
  "vv52:22.4": "aṭṭhaṅgasusamāgataṁ.",
  "vv52:23.1": "Uposathaṁ upavasissaṁ,",
  "vv52:23.2": "sadā sīlesu saṁvutā;",
  "vv52:23.3": "Na ca dāne pamajjissaṁ,",
  "vv52:23.4": "sāmaṁ diṭṭhamidaṁ mayā”ti.",
  "vv52:24.1": "Iccevaṁ vippalapantiṁ,",
  "vv52:24.2": "phandamānaṁ tato tato;",
  "vv52:24.3": "Khipiṁsu niraye ghore,",
  "vv52:24.4": "uddhampādaṁ avaṁsiraṁ.",
  "vv52:25.1": "“Ahaṁ pure maccharinī ahosiṁ,",
  "vv52:25.2": "Paribhāsikā samaṇabrāhmaṇānaṁ;",
  "vv52:25.3": "Vitathena ca sāmikaṁ vañcayitvā,",
  "vv52:25.4": "Paccāmahaṁ niraye ghorarūpe”ti.",
  "vv52:26.1": "Revatīvimānaṁ dutiyaṁ."
}