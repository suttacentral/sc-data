{
  "vv44:0.1": "Vimānavatthu",
  "vv44:0.2": "Itthivimāna",
  "vv44:0.3": "Mañjiṭṭhakavagga",
  "vv44:0.4": "6. Vihāravimānavatthu",
  "vv44:1.1": "“Abhikkantena vaṇṇena,",
  "vv44:1.2": "…pe…",
  "vv44:1.3": "osadhī viya tārakā.",
  "vv44:2.1": "Tassā te naccamānāya,",
  "vv44:2.2": "aṅgamaṅgehi sabbaso;",
  "vv44:2.3": "Dibbā saddā niccharanti,",
  "vv44:2.4": "savanīyā manoramā.",
  "vv44:3.1": "Tassā te naccamānāya,",
  "vv44:3.2": "aṅgamaṅgehi sabbaso;",
  "vv44:3.3": "Dibbā gandhā pavāyanti,",
  "vv44:3.4": "sucigandhā manoramā.",
  "vv44:4.1": "Vivattamānā kāyena,",
  "vv44:4.2": "yā veṇīsu piḷandhanā;",
  "vv44:4.3": "Tesaṁ suyyati nigghoso,",
  "vv44:4.4": "tūriye pañcaṅgike yathā.",
  "vv44:5.1": "Vaṭaṁsakā vātadhutā,",
  "vv44:5.2": "vātena sampakampitā;",
  "vv44:5.3": "Tesaṁ suyyati nigghoso,",
  "vv44:5.4": "tūriye pañcaṅgike yathā.",
  "vv44:6.1": "Yāpi te sirasmiṁ mālā,",
  "vv44:6.2": "sucigandhā manoramā;",
  "vv44:6.3": "Vāti gandho disā sabbā,",
  "vv44:6.4": "rukkho mañjūsako yathā.",
  "vv44:7.1": "Ghāyase taṁ sucigandhaṁ,",
  "vv44:7.2": "rūpaṁ passasi amānusaṁ;",
  "vv44:7.3": "Devate pucchitācikkha,",
  "vv44:7.4": "kissa kammassidaṁ phalan”ti.",
  "vv44:8.1": "“Sāvatthiyaṁ mayhaṁ sakhī bhadante,",
  "vv44:8.2": "Saṅghassa kāresi mahāvihāraṁ;",
  "vv44:8.3": "Tatthappasannā ahamānumodiṁ,",
  "vv44:8.4": "Disvā agārañca piyañca metaṁ.",
  "vv44:9.1": "Tāyeva me suddhanumodanāya,",
  "vv44:9.2": "Laddhaṁ vimānabbhutadassaneyyaṁ;",
  "vv44:9.3": "Samantato soḷasayojanāni,",
  "vv44:9.4": "Vehāyasaṁ gacchati iddhiyā mama.",
  "vv44:10.1": "Kūṭāgārā nivesā me,",
  "vv44:10.2": "vibhattā bhāgaso mitā;",
  "vv44:10.3": "Daddallamānā ābhanti,",
  "vv44:10.4": "samantā satayojanaṁ.",
  "vv44:11.1": "Pokkharañño ca me ettha,",
  "vv44:11.2": "puthulomanisevitā;",
  "vv44:11.3": "Acchodakā vippasannā,",
  "vv44:11.4": "soṇṇavālukasanthatā.",
  "vv44:12.1": "Nānāpadumasañchannā,",
  "vv44:12.2": "puṇḍarīkasamotatā;",
  "vv44:12.3": "Surabhī sampavāyanti,",
  "vv44:12.4": "manuññā māluteritā.",
  "vv44:13.1": "Jambuyo panasā tālā,",
  "vv44:13.2": "nāḷikeravanāni ca;",
  "vv44:13.3": "Antonivesane jātā,",
  "vv44:13.4": "nānārukkhā aropimā.",
  "vv44:14.1": "Nānātūriyasaṅghuṭṭhaṁ,",
  "vv44:14.2": "accharāgaṇaghositaṁ;",
  "vv44:14.3": "Yopi maṁ supine passe,",
  "vv44:14.4": "sopi vitto siyā naro.",
  "vv44:15.1": "Etādisaṁ abbhutadassaneyyaṁ,",
  "vv44:15.2": "Vimānaṁ sabbasopabhaṁ;",
  "vv44:15.3": "Mama kammehi nibbattaṁ,",
  "vv44:15.4": "Alaṁ puññāni kātave”ti.",
  "vv44:16.1": "“Tāyeva te suddhanumodanāya,",
  "vv44:16.2": "Laddhaṁ vimānabbhutadassaneyyaṁ;",
  "vv44:16.3": "Yā ceva sā dānamadāsi nārī,",
  "vv44:16.4": "Tassā gatiṁ brūhi kuhiṁ uppannā sā”ti.",
  "vv44:17.1": "“Yā sā ahu mayhaṁ sakhī bhadante,",
  "vv44:17.2": "Saṅghassa kāresi mahāvihāraṁ;",
  "vv44:17.3": "Viññātadhammā sā adāsi dānaṁ,",
  "vv44:17.4": "Uppannā nimmānaratīsu devesu.",
  "vv44:18.1": "Pajāpatī tassa sunimmitassa,",
  "vv44:18.2": "Acintiyā kammavipākā tassā;",
  "vv44:18.3": "Yametaṁ pucchasi kuhiṁ uppannā sāti,",
  "vv44:18.4": "Taṁ te viyākāsiṁ anaññathā ahaṁ.",
  "vv44:19.1": "Tenahaññepi samādapetha,",
  "vv44:19.2": "Saṅghassa dānāni dadātha vittā;",
  "vv44:19.3": "Dhammañca suṇātha pasannamānasā,",
  "vv44:19.4": "Sudullabho laddho manussalābho.",
  "vv44:20.1": "Yaṁ maggaṁ maggādhipatī adesayi,",
  "vv44:20.2": "Brahmassaro kañcanasannibhattaco;",
  "vv44:20.3": "Saṅghassa dānāni dadātha vittā,",
  "vv44:20.4": "Mahapphalā yattha bhavanti dakkhiṇā.",
  "vv44:21.1": "Ye puggalā aṭṭha sataṁ pasatthā,",
  "vv44:21.2": "Cattāri etāni yugāni honti;",
  "vv44:21.3": "Te dakkhiṇeyyā sugatassa sāvakā,",
  "vv44:21.4": "Etesu dinnāni mahapphalāni.",
  "vv44:22.1": "Cattāro ca paṭipannā,",
  "vv44:22.2": "cattāro ca phale ṭhitā;",
  "vv44:22.3": "Esa saṅgho ujubhūto,",
  "vv44:22.4": "paññāsīlasamāhito.",
  "vv44:23.1": "Yajamānānaṁ manussānaṁ,",
  "vv44:23.2": "puññapekkhāna pāṇinaṁ;",
  "vv44:23.3": "Karotaṁ opadhikaṁ puññaṁ,",
  "vv44:23.4": "saṅghe dinnaṁ mahapphalaṁ.",
  "vv44:24.1": "Eso hi saṅgho vipulo mahaggato,",
  "vv44:24.2": "Esappameyyo udadhīva sāgaro;",
  "vv44:24.3": "Etehi seṭṭhā naravīrasāvakā,",
  "vv44:24.4": "Pabhaṅkarā dhammamudīrayanti.",
  "vv44:25.1": "Tesaṁ sudinnaṁ suhutaṁ suyiṭṭhaṁ,",
  "vv44:25.2": "Ye saṅghamuddissa dadanti dānaṁ;",
  "vv44:25.3": "Sā dakkhiṇā saṅghagatā patiṭṭhitā,",
  "vv44:25.4": "Mahapphalā lokavidūna vaṇṇitā.",
  "vv44:26.1": "Etādisaṁ yaññamanussarantā,",
  "vv44:26.2": "Ye vedajātā vicaranti loke;",
  "vv44:26.3": "Vineyya maccheramalaṁ samūlaṁ,",
  "vv44:26.4": "Aninditā saggamupenti ṭhānan”ti.",
  "vv44:27.1": "Vihāravimānaṁ chaṭṭhaṁ.",
  "vv44:27.2": "Bhāṇavāraṁ dutiyaṁ."
}