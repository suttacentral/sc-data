{
  "vv70:0.1": "Vimānavatthu",
  "vv70:0.2": "Purisavimāna",
  "vv70:0.3": "Pāyāsivagga",
  "vv70:0.4": "6. Bhikkhādāyakavimānavatthu",
  "vv70:1.1": "“Uccamidaṁ maṇithūṇaṁ vimānaṁ,",
  "vv70:1.2": "Samantato dvādasa yojanāni;",
  "vv70:1.3": "Kūṭāgārā sattasatā uḷārā,",
  "vv70:1.4": "Veḷuriyathambhā rucakatthatā subhā.",
  "vv70:2.1": "Deviddhipattosi mahānubhāvo,",
  "vv70:2.2": "Manussabhūto kimakāsi puññaṁ;",
  "vv70:2.3": "Kenāsi evaṁ jalitānubhāvo,",
  "vv70:2.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv70:3.1": "So devaputto attamano,",
  "vv70:3.2": "…pe…",
  "vv70:3.3": "yassa kammassidaṁ phalaṁ.",
  "vv70:4.1": "“Ahaṁ manussesu manussabhūto,",
  "vv70:4.2": "Disvāna bhikkhuṁ tasitaṁ kilantaṁ;",
  "vv70:4.3": "Ekāhaṁ bhikkhaṁ paṭipādayissaṁ,",
  "vv70:4.4": "Samaṅgi bhattena tadā akāsiṁ.",
  "vv70:5.1": "Tena metādiso vaṇṇo,",
  "vv70:5.2": "…pe…",
  "vv70:5.3": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
  "vv70:6.1": "Bhikkhādāyakavimānaṁ chaṭṭhaṁ."
}