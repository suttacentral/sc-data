{
  "vv85:0.1": "Vimānavatthu",
  "vv85:0.2": "Purisavimāna",
  "vv85:0.3": "Sunikkhittavagga",
  "vv85:0.4": "11. Sunikkhittavimānavatthu",
  "vv85:1.1": "“Uccamidaṁ maṇithūṇaṁ vimānaṁ,",
  "vv85:1.2": "Samantato dvādasa yojanāni;",
  "vv85:1.3": "Kūṭāgārā sattasatā uḷārā,",
  "vv85:1.4": "Veḷuriyathambhā rucakatthatā subhā.",
  "vv85:2.1": "Tatthacchasi pivasi khādasi ca,",
  "vv85:2.2": "Dibbā ca vīṇā pavadanti vagguṁ;",
  "vv85:2.3": "Dibbā rasā kāmaguṇettha pañca,",
  "vv85:2.4": "Nāriyo ca naccanti suvaṇṇachannā.",
  "vv85:3.1": "Kena tetādiso vaṇṇo,",
  "vv85:3.2": "kena te idha mijjhati;",
  "vv85:3.3": "Uppajjanti ca te bhogā,",
  "vv85:3.4": "ye keci manaso piyā.",
  "vv85:4.1": "Pucchāmi taṁ deva mahānubhāva,",
  "vv85:4.2": "Manussabhūto kimakāsi puññaṁ;",
  "vv85:4.3": "Kenāsi evaṁ jalitānubhāvo,",
  "vv85:4.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv85:5.1": "So devaputto attamano,",
  "vv85:5.2": "moggallānena pucchito;",
  "vv85:5.3": "Pañhaṁ puṭṭho viyākāsi,",
  "vv85:5.4": "yassa kammassidaṁ phalaṁ.",
  "vv85:6.1": "“Dunnikkhittaṁ mālaṁ sunikkhipitvā,",
  "vv85:6.2": "Patiṭṭhapetvā sugatassa thūpe;",
  "vv85:6.3": "Mahiddhiko camhi mahānubhāvo,",
  "vv85:6.4": "Dibbehi kāmehi samaṅgibhūto.",
  "vv85:7.1": "Tena metādiso vaṇṇo,",
  "vv85:7.2": "tena me idha mijjhati;",
  "vv85:7.3": "Uppajjanti ca me bhogā,",
  "vv85:7.4": "ye keci manaso piyā.",
  "vv85:8.1": "Akkhāmi te bhikkhu mahānubhāva,",
  "vv85:8.2": "Manussabhūto yamahaṁ akāsiṁ;",
  "vv85:8.3": "Tenamhi evaṁ jalitānubhāvo,",
  "vv85:8.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
  "vv85:9.1": "Sunikkhittavimānaṁ ekādasamaṁ.",
  "vv85:9.2": "Sunikkhittavaggo sattamo.",
  "vv85:10.1": "Tassuddānaṁ",
  "vv85:11.1": "Dve daliddā vanavihārā,",
  "vv85:11.2": "Bhatako gopālakaṇḍako;",
  "vv85:11.3": "Anekavaṇṇamaṭṭhakuṇḍalī,",
  "vv85:11.4": "Serīsako sunikkhittaṁ;",
  "vv85:11.5": "Purisānaṁ tatiyo vaggo pavuccatīti.",
  "vv85:12.1": "Bhāṇavāraṁ catutthaṁ.",
  "vv85:13.1": "Vimānavatthupāḷi niṭṭhitā."
}