{
  "vv8:0.1": "Vimānavatthu",
  "vv8:0.2": "Itthivimāna",
  "vv8:0.3": "Pīṭhavagga",
  "vv8:0.4": "8. Tatiyanāvāvimānavatthu",
  "vv8:1.1": "“Suvaṇṇacchadanaṁ nāvaṁ,",
  "vv8:1.2": "Nāri āruyha tiṭṭhasi;",
  "vv8:1.3": "Ogāhasi pokkharaṇiṁ,",
  "vv8:1.4": "Padmaṁ chindasi pāṇinā.",
  "vv8:2.1": "Kūṭāgārā nivesā te,",
  "vv8:2.2": "vibhattā bhāgaso mitā;",
  "vv8:2.3": "Daddallamānā ābhanti,",
  "vv8:2.4": "samantā caturo disā.",
  "vv8:3.1": "Kena tetādiso vaṇṇo,",
  "vv8:3.2": "kena te idha mijjhati;",
  "vv8:3.3": "Uppajjanti ca te bhogā,",
  "vv8:3.4": "ye keci manaso piyā.",
  "vv8:4.1": "Pucchāmi taṁ devi mahānubhāve,",
  "vv8:4.2": "Manussabhūtā kimakāsi puññaṁ;",
  "vv8:4.3": "Kenāsi evaṁ jalitānubhāvā,",
  "vv8:4.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv8:5.1": "Sā devatā attamanā,",
  "vv8:5.2": "sambuddheneva pucchitā;",
  "vv8:5.3": "Pañhaṁ puṭṭhā viyākāsi,",
  "vv8:5.4": "yassa kammassidaṁ phalaṁ.",
  "vv8:6.1": "“Ahaṁ manussesu manussabhūtā,",
  "vv8:6.2": "Purimāya jātiyā manussaloke;",
  "vv8:6.3": "Disvāna bhikkhū tasite kilante,",
  "vv8:6.4": "Uṭṭhāya pātuṁ udakaṁ adāsiṁ.",
  "vv8:7.1": "Yo ve kilantāna pipāsitānaṁ,",
  "vv8:7.2": "Uṭṭhāya pātuṁ udakaṁ dadāti;",
  "vv8:7.3": "Sītodakā tassa bhavanti najjo,",
  "vv8:7.4": "Pahūtamalyā bahupuṇḍarīkā.",
  "vv8:8.1": "Taṁ āpagā anupariyanti sabbadā,",
  "vv8:8.2": "Sītodakā vālukasanthatā nadī;",
  "vv8:8.3": "Ambā ca sālā tilakā ca jambuyo,",
  "vv8:8.4": "Uddālakā pāṭaliyo ca phullā.",
  "vv8:9.1": "Taṁ bhūmibhāgehi upetarūpaṁ,",
  "vv8:9.2": "Vimānaseṭṭhaṁ bhusa sobhamānaṁ;",
  "vv8:9.3": "Tassīdha kammassa ayaṁ vipāko,",
  "vv8:9.4": "Etādisaṁ puññakatā labhanti.",
  "vv8:10.1": "Kūṭāgārā nivesā me,",
  "vv8:10.2": "vibhattā bhāgaso mitā;",
  "vv8:10.3": "Daddallamānā ābhanti,",
  "vv8:10.4": "samantā caturo disā.",
  "vv8:11.1": "Tena metādiso vaṇṇo,",
  "vv8:11.2": "tena me idha mijjhati;",
  "vv8:11.3": "Uppajjanti ca me bhogā,",
  "vv8:11.4": "ye keci manaso piyā.",
  "vv8:12.1": "Akkhāmi te buddha mahānubhāva,",
  "vv8:12.2": "Manussabhūtā yamakāsi puññaṁ;",
  "vv8:12.3": "Tenamhi evaṁ jalitānubhāvā,",
  "vv8:12.4": "Vaṇṇo ca me sabbadisā pabhāsati;",
  "vv8:12.5": "Etassa kammassa phalaṁ mamedaṁ,",
  "vv8:12.6": "Atthāya buddho udakaṁ apāyī”ti.",
  "vv8:13.1": "Tatiyanāvāvimānaṁ aṭṭhamaṁ."
}